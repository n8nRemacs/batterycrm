      "position": [
        224,
        0
      ],
      "credentials": {
        "httpBasicAuth": {
          "id": "MEWcju2TVKNQ3u4p",
          "name": "Avito API"
        }
      }
    },
    {
      "parameters": {
        "jsCode": "const response = $input.first().json;\n\nif (!response.access_token) {\n  throw new Error('No access token in response');\n}\n\nreturn {\n  access_token: response.access_token,\n  expires_in: response.expires_in || 86400,\n  token_type: response.token_type || 'Bearer',\n  refreshed_at: new Date().toISOString()\n};"
      },
      "id": "d6ad906e-7c77-4d44-b22b-bf1272f727df",
      "name": "Parse Token Response",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [
        448,
        0
      ]
    },
    {
      "parameters": {
        "operation": "set",
        "key": "avito_access_token",
        "value": "={{ $json.access_token }}",
        "expire": true,
        "ttl": "={{ $json.expires_in }}"
      },
      "id": "253258ca-73f8-4166-974e-fb552cc661e1",
      "name": "Save Token to Redis",
      "type": "n8n-nodes-base.redis",
