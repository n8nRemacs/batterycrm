        672,
        0
      ],
      "credentials": {
        "redis": {
          "id": "7FQcEivUY94atW24",
          "name": "Redis account"
        }
      }
    },
    {
      "parameters": {
        "operation": "executeQuery",
        "query": "INSERT INTO operator_actions (\n  operator_telegram_id,\n  action_type,\n  details\n)\nVALUES (\n  NULL,\n  'system',\n  jsonb_build_object(\n    'action', 'avito_token_refreshed',\n    'expires_in', {{ $json.expires_in }},\n    'refreshed_at', '{{ $json.refreshed_at }}',\n    'success', true\n  )\n)\nRETURNING *;",
        "options": {}
      },
