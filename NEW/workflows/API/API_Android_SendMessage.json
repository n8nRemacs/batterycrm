        "operation": "executeQuery",
        "query": "UPDATE elo_t_dialogs SET \n  last_message_at = NOW(),\n  last_operator_message_at = NOW(),\n  updated_at = NOW()\nWHERE id = '{{ $('Webhook - Send Message').item.json.params.dialog_id }}'::uuid;",
        "options": {}
      },
      "id": "update-dialog",
