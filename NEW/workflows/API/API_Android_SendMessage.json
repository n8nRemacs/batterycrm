        "postgres": {
          "id": "n2SyhP9QhMnp1ryk",
          "name": "Postgres account"
        }
      }
    },
    {
      "parameters": {
        "jsCode": "const dialogInfo = $('Postgres - Get Dialog Info').first().json;\nconst insertResult = $('Postgres - Insert Message').first().json;\nconst session = $('Postgres - Validate Session').first().json;\nconst webhook = $('Webhook - Send Message').first().json;\n\nreturn {\n  message: {\n    id: insertResult.id,\n    text: webhook.body.text,\n    direction: 'out',\n    sender_type: 'operator',\n    sender_name: session.operator_name,\n    timestamp: insertResult.timestamp\n  },\n  to_send: {\n    channel: dialogInfo.channel,\n    chat_id: dialogInfo.chat_id,\n    text: webhook.body.text\n  }\n};"
      },
