<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <ConstraintSet android:id="@+id/expanded">
        <Constraint
            android:id="@+id/sheet_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sheet_expanded_border"/>
    </ConstraintSet>
    <ConstraintSet android:id="@+id/collapsed">
        <Constraint
            android:id="@+id/sheet_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@+id/sheet_collapsed_border"/>
    </ConstraintSet>
    <Transition
        app:constraintSetEnd="@+id/expanded"
        app:constraintSetStart="@+id/collapsed">
        <OnSwipe
            app:dragDirection="dragUp"
            app:touchAnchorId="@+id/sheet_container"
            app:touchAnchorSide="top"/>
    </Transition>
    <Transition
        app:constraintSetEnd="@+id/collapsed"
        app:constraintSetStart="@+id/expanded">
        <OnSwipe
            app:dragDirection="dragDown"
            app:dragScale="0.01"
            app:dragThreshold="50"
            app:maxVelocity="1"
            app:touchAnchorId="@+id/sheet_container"
            app:touchAnchorSide="top"/>
    </Transition>
</MotionScene>
