<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <ConstraintSet android:id="@+id/expanded">
        <Constraint
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/guideline"/>
        <Constraint
            android:id="@+id/tabs_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:alpha="1"
            app:layout_constraintTop_toBottomOf="@+id/header_thumb">
            <CustomAttribute
                app:attributeName="TitleTextColor"
                app:customColorValue="?attr/black"/>
        </Constraint>
        <Constraint android:id="@+id/toolbar">
            <PropertySet android:alpha="0"/>
        </Constraint>
        <Constraint
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:alpha="0"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintTop_toBottomOf="@+id/header_thumb"/>
        <Constraint
            android:id="@+id/rating_preview_recycler_view"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0"
            app:layout_constraintBottom_toTopOf="@+id/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tabs_toolbar"/>
        <Constraint
            android:id="@+id/gallery"
            android:layout_width="match_parent"
            android:layout_height="@dimen/gallery_height"
            app:layout_constraintTop_toTopOf="parent"/>
        <Constraint
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tabs_toolbar"/>
        <Constraint
            android:id="@+id/tab_indicator_underline_fake"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/tab_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    </ConstraintSet>
    <ConstraintSet android:id="@+id/collapsed">
        <Constraint
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guidelineBottom"/>
        <Constraint
            android:id="@+id/tabs_toolbar"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0"
            app:layout_constraintTop_toBottomOf="@+id/header_thumb"/>
        <Constraint android:id="@+id/toolbar">
            <PropertySet android:alpha="1"/>
        </Constraint>
        <Constraint
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="1"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintTop_toBottomOf="@+id/rating_preview_recycler_view"
            app:layout_goneMarginTop="10dp"/>
        <Constraint
            android:id="@+id/rating_preview_recycler_view"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="1"
            app:layout_constraintBottom_toTopOf="@+id/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tabs_toolbar"/>
        <Constraint
            android:id="@+id/gallery"
            android:layout_width="match_parent"
            android:layout_height="@dimen/gallery_height"
            app:layout_constraintTop_toTopOf="parent"/>
        <Constraint
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tab_barrier"/>
        <Constraint
            android:id="@+id/tab_indicator_underline_fake"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/tab_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    </ConstraintSet>
    <ConstraintSet android:id="@+id/expanded_with_title">
        <Constraint
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/guideline"/>
        <Constraint
            android:id="@+id/tabs_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:alpha="1"
            app:layout_constraintTop_toBottomOf="@+id/header_thumb">
            <CustomAttribute
                app:attributeName="TitleTextColor"
                app:customColorValue="?attr/transparentBlack"/>
        </Constraint>
        <Constraint android:id="@+id/toolbar">
            <PropertySet android:alpha="0"/>
        </Constraint>
        <Constraint
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="1"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintTop_toBottomOf="@+id/rating_preview_recycler_view"
            app:layout_goneMarginTop="6dp"/>
        <Constraint
            android:id="@+id/gallery"
            android:layout_width="match_parent"
            android:layout_height="@dimen/gallery_height"
            app:layout_constraintTop_toTopOf="parent"/>
        <Constraint
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tab_barrier"/>
        <Constraint
            android:id="@+id/tab_indicator_underline_fake"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/tab_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    </ConstraintSet>
    <Transition
        android:id="@+id/collapse_transition"
        app:constraintSetEnd="@+id/collapsed"
        app:constraintSetStart="@+id/expanded">
        <OnSwipe
            app:dragDirection="dragUp"
            app:touchAnchorId="@+id/top_bar"
            app:touchAnchorSide="top"/>
        <KeyFrameSet>
            <KeyAttribute
                android:alpha="0"
                app:framePosition="20"
                app:motionTarget="@+id/tabs_toolbar"/>
            <KeyAttribute
                android:alpha="1"
                app:framePosition="20"
                app:motionTarget="@+id/toolbar"/>
            <KeyAttribute
                android:alpha="0"
                app:framePosition="20"
                app:motionTarget="@+id/rating_preview_recycler_view"/>
        </KeyFrameSet>
    </Transition>
    <Transition
        android:id="@+id/expanded_title_transition"
        app:constraintSetEnd="@+id/expanded"
        app:constraintSetStart="@+id/expanded_with_title">
        <OnSwipe
            app:dragDirection="dragDown"
            app:dragScale="0.01"
            app:dragThreshold="50"
            app:maxVelocity="1"
            app:touchAnchorId="@+id/top_bar"
            app:touchAnchorSide="top"/>
    </Transition>
</MotionScene>
