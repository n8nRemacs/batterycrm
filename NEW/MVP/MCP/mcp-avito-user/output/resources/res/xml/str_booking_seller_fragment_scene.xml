<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <Transition
        android:id="@+id/scroll_transition"
        app:constraintSetEnd="@+id/end"
        app:constraintSetStart="@+id/start">
        <OnSwipe
            app:dragDirection="dragUp"
            app:maxAcceleration="50"
            app:touchAnchorId="@+id/str_booking_sections_recycler"
            app:touchAnchorSide="top"/>
        <KeyFrameSet>
            <KeyAttribute
                android:alpha="0"
                app:framePosition="79"
                app:motionTarget="@+id/view_background"/>
            <KeyAttribute
                app:framePosition="79"
                app:motionTarget="@+id/str_toolbar">
                <CustomAttribute
                    app:attributeName="background"
                    app:customColorDrawableValue="?attr/transparentWhite"/>
            </KeyAttribute>
            <KeyAttribute
                app:framePosition="80"
                app:motionProgress="1"
                app:motionTarget="@+id/str_toolbar">
                <CustomAttribute
                    app:attributeName="background"
                    app:customColorDrawableValue="?attr/white"/>
            </KeyAttribute>
        </KeyFrameSet>
    </Transition>
    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/str_booking_sections_recycler"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_header">
            <PropertySet app:visibilityMode="ignore"/>
        </Constraint>
        <Constraint
            android:id="@+id/rv_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/str_toolbar">
            <PropertySet app:visibilityMode="ignore"/>
        </Constraint>
        <Constraint
            android:id="@+id/str_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <Constraint
            android:id="@+id/view_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <PropertySet app:visibilityMode="ignore"/>
        </Constraint>
        <Constraint
            android:id="@+id/str_booking_footer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent">
            <PropertySet app:visibilityMode="ignore"/>
        </Constraint>
        <Constraint
            android:id="@+id/str_booking_loading_block"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/str_toolbar">
            <PropertySet app:visibilityMode="ignore"/>
        </Constraint>
        <Constraint
            android:id="@+id/str_booking_error_block"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/str_toolbar">
            <PropertySet app:visibilityMode="ignore"/>
        </Constraint>
    </ConstraintSet>
    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/str_booking_sections_recycler"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="-28dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/str_toolbar">
            <PropertySet app:visibilityMode="ignore"/>
        </Constraint>
        <Constraint
            android:id="@+id/rv_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_header">
            <PropertySet app:visibilityMode="ignore"/>
        </Constraint>
        <Constraint
            android:id="@+id/str_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <Constraint
            android:id="@+id/view_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:visibilityMode="ignore">
            <PropertySet app:visibilityMode="ignore"/>
        </Constraint>
        <Constraint
            android:id="@+id/str_booking_footer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <PropertySet app:visibilityMode="ignore"/>
        </Constraint>
        <Constraint
            android:id="@+id/str_booking_loading_block"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/str_toolbar">
            <PropertySet app:visibilityMode="ignore"/>
        </Constraint>
        <Constraint
            android:id="@+id/str_booking_error_block"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/str_toolbar">
            <PropertySet app:visibilityMode="ignore"/>
        </Constraint>
    </ConstraintSet>
</MotionScene>
