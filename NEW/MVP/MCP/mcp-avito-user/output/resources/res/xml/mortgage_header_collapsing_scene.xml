<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <Transition
        app:constraintSetEnd="@+id/collapsed"
        app:constraintSetStart="@+id/expanded"/>
    <ConstraintSet android:id="@+id/expanded">
        <Constraint
            android:id="@+id/screen_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <Layout android:layout_marginTop="14dp"/>
        </Constraint>
        <Constraint android:id="@+id/title_banks">
            <PropertySet android:alpha="0"/>
        </Constraint>
        <Constraint
            android:id="@+id/conditions_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/steps"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <Layout
                android:layout_marginBottom="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>
            <Transform
                android:scaleX="1"
                android:scaleY="1"/>
            <PropertySet android:alpha="1"/>
        </Constraint>
        <Constraint
            android:id="@+id/steps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <Layout
                android:layout_marginBottom="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>
        </Constraint>
    </ConstraintSet>
    <ConstraintSet android:id="@+id/collapsed">
        <Constraint
            android:id="@+id/screen_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/steps"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <Layout android:layout_marginBottom="16dp"/>
        </Constraint>
        <Constraint android:id="@+id/title_banks">
            <PropertySet android:alpha="1"/>
        </Constraint>
        <Constraint
            android:id="@+id/conditions_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/steps"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <Layout
                android:layout_marginBottom="0dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>
            <Transform
                android:scaleX="0"
                android:scaleY="0"/>
            <PropertySet android:alpha="0"/>
        </Constraint>
        <Constraint
            android:id="@+id/steps"
            android:layout_width="match_parent"
            android:layout_height="@dimen/root_steps_bar_progress_height"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <Layout
                android:layout_marginBottom="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>
        </Constraint>
    </ConstraintSet>
</MotionScene>
