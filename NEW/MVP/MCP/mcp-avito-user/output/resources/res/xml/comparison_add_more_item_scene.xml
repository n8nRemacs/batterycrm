<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/root_add_item"
            android:layout_width="@dimen/comparison_column_width"
            android:layout_height="@dimen/comparison_expanded_header_item_height"
            android:layout_marginEnd="16dp"/>
        <Constraint
            android:id="@+id/comparison_add_background"
            android:layout_width="@dimen/comparison_content_width"
            android:layout_height="114dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <Constraint
            android:id="@+id/plus_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            app:layout_constraintEnd_toEndOf="@+id/comparison_add_background"
            app:layout_constraintStart_toStartOf="@+id/comparison_add_background"
            app:layout_constraintTop_toTopOf="@+id/comparison_add_background"/>
        <Constraint
            android:id="@+id/add_more_expanded_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="38dp"
            android:alpha="1"
            app:layout_constraintBottom_toBottomOf="@+id/comparison_add_background"
            app:layout_constraintEnd_toEndOf="@+id/comparison_add_background"
            app:layout_constraintStart_toStartOf="@+id/comparison_add_background"/>
        <Constraint
            android:id="@+id/add_more_text_collapsed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/comparison_add_background"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/comparison_add_background"/>
    </ConstraintSet>
    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/root_add_item"
            android:layout_width="@dimen/comparison_column_width"
            android:layout_height="@dimen/comparison_collapsed_header_item_height"
            android:layout_marginEnd="16dp"/>
        <Constraint
            android:id="@+id/comparison_add_background"
            android:layout_width="44dp"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <Constraint
            android:id="@+id/plus_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/comparison_add_background"
            app:layout_constraintEnd_toEndOf="@+id/comparison_add_background"
            app:layout_constraintStart_toStartOf="@+id/comparison_add_background"
            app:layout_constraintTop_toTopOf="@+id/comparison_add_background"/>
        <Constraint
            android:id="@+id/add_more_expanded_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="38dp"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="@+id/comparison_add_background"
            app:layout_constraintEnd_toEndOf="@+id/comparison_add_background"
            app:layout_constraintStart_toStartOf="@+id/comparison_add_background"/>
        <Constraint
            android:id="@+id/add_more_text_collapsed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/comparison_add_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/comparison_add_background"
            app:layout_constraintTop_toTopOf="@+id/comparison_add_background"/>
    </ConstraintSet>
    <Transition
        app:constraintSetEnd="@+id/end"
        app:constraintSetStart="@+id/start"/>
</MotionScene>
