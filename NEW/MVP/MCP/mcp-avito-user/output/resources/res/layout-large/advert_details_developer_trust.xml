<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/content_horizontal_padding">
        <TextView
            android:textAppearance="?attr/textH25"
            android:id="@+id/developer_trust_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textAppearance="?attr/textM10"
            android:id="@+id/developer_trust_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/developer_trust_title"/>
        <ImageView
            android:id="@+id/developer_trust_title_logo"
            android:visibility="gone"
            android:layout_width="48dp"
            android:layout_height="32dp"
            android:scaleType="fitCenter"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/development_trust_cards_container"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/developer_trust_cards_margin_horizontal">
        <com.avito.android.lib.design.banner.Banner
            android:id="@+id/developer_trust_trust_banner"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="59dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="18dp"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="3dp"
            app:banner_bottomShadow="@style/DeveloperTrustCardBottomShadow"
            app:banner_cornerRadius="16dp"
            app:banner_shadow="@style/DeveloperTrustCardShadow"
            style="?attr/bannerWhite"/>
        <com.avito.android.lib.design.banner.Banner
            android:id="@+id/developer_trust_foundation_banner"
            android:layout_width="wrap_content"
            android:layout_height="59dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="18dp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="13dp"
            app:banner_bottomShadow="@style/DeveloperTrustCardBottomShadow"
            app:banner_cornerRadius="16dp"
            app:banner_shadow="@style/DeveloperTrustCardShadow"
            style="?attr/bannerWhite"/>
    </LinearLayout>
</LinearLayout>
