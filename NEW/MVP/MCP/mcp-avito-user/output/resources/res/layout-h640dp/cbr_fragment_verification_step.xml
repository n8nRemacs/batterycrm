<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/cbr_guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_begin="@dimen/cbr_margin_medium"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/cbr_guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_end="@dimen/cbr_margin_medium"/>
    <ru.cyberity.cbr.core.widget.CBRH1TextView
        android:gravity="center"
        android:id="@+id/cbr_title"
        android:visibility="invisible"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/cbr_margin_medium"
        app:layout_constraintEnd_toEndOf="@+id/cbr_guideline_end"
        app:layout_constraintStart_toStartOf="@+id/cbr_guideline_start"
        app:layout_constraintTop_toBottomOf="@+id/cbr_toolbar"/>
    <ru.cyberity.cbr.core.widget.CBRSubtitle2TextView
        android:gravity="center"
        android:id="@+id/cbr_subtitle"
        android:padding="@dimen/cbr_margin_medium"
        android:visibility="invisible"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/cbr_guideline_end"
        app:layout_constraintStart_toStartOf="@+id/cbr_guideline_start"
        app:layout_constraintTop_toBottomOf="@+id/cbr_title"/>
    <ScrollView
        android:id="@+id/cbr_flInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/cbr_guideline_end"
        app:layout_constraintStart_toStartOf="@+id/cbr_guideline_start"
        app:layout_constraintTop_toBottomOf="@+id/cbr_subtitle">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ru.cyberity.cbr.core.widget.CBRTextInputLayout
                android:id="@+id/cbr_email"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:endIconMode="clear_text"
                style="@style/Widget.CBRTextInputLayout">
                <ru.cyberity.cbr.core.widget.CBRTextInputEditText
                    android:id="@+id/cbr_email_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:imeOptions="actionDone"
                    style="@style/Widget.CBRTextEdit"/>
            </ru.cyberity.cbr.core.widget.CBRTextInputLayout>
            <ru.cyberity.cbr.core.widget.CBRFlaggedInputLayout
                android:id="@+id/cbr_phone"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:endIconMode="clear_text"
                style="@style/Widget.CBRTextInputLayout">
                <ru.cyberity.cbr.core.widget.CBRTextInputEditText
                    android:id="@+id/cbr_phone_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:imeOptions="actionDone"
                    android:paddingStart="@dimen/cbr_icon_size_normal"
                    android:paddingEnd="@dimen/cbr_margin_medium"
                    style="@style/Widget.CBRTextEdit"/>
            </ru.cyberity.cbr.core.widget.CBRFlaggedInputLayout>
        </FrameLayout>
    </ScrollView>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="horizontal"
        android:id="@+id/cbr_guideline_center"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintGuide_percent="0.5"/>
    <ru.cyberity.cbr.core.widget.CBRImageView
        android:id="@+id/cbr_status_icon"
        android:background="@drawable/cbr_bg_circle"
        android:visibility="invisible"
        android:layout_width="@dimen/cbr_icon_size_large"
        android:layout_height="@dimen/cbr_icon_size_large"
        android:layout_marginBottom="@dimen/cbr_margin_medium"
        android:scaleType="center"
        app:layout_constraintBottom_toTopOf="@+id/cbr_guideline_center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <ScrollView
        android:id="@+id/cbr_scroller"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/cbr_primary_button"
        app:layout_constraintTop_toBottomOf="@+id/cbr_guideline_center">
        <ru.cyberity.cbr.core.widget.CBRSubtitle2TextView
            android:gravity="center"
            android:id="@+id/cbr_status_comment"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </ScrollView>
    <ru.cyberity.cbr.core.widget.CBRPrimaryButton
        android:id="@+id/cbr_primary_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/cbr_margin_medium"
        android:layout_marginStart="@dimen/cbr_margin_medium_small"
        android:layout_marginEnd="@dimen/cbr_margin_medium_small"
        android:layout_marginVertical="@dimen/cbr_margin_medium"
        app:layout_constraintBottom_toTopOf="@+id/cbr_powered"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <ru.cyberity.cbr.core.widget.pincode.CBRPinView
        android:id="@+id/cbr_pin_code"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/cbr_guideline_end"
        app:layout_constraintStart_toStartOf="@+id/cbr_guideline_start"
        app:layout_constraintTop_toBottomOf="@+id/cbr_subtitle"/>
    <ru.cyberity.cbr.core.widget.CBRSubtitle2TextView
        android:id="@+id/cbr_otp_error"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/cbr_margin_medium"
        app:cbr_textColor="?attr/colorError"
        app:layout_constraintEnd_toEndOf="@+id/cbr_pin_code"
        app:layout_constraintStart_toStartOf="@+id/cbr_pin_code"
        app:layout_constraintTop_toBottomOf="@+id/cbr_pin_code"/>
    <ru.cyberity.cbr.core.widget.CBRTextButton
        android:id="@+id/cbr_resend_verification_code"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/cbr_min_button_size"
        app:layout_constraintBottom_toTopOf="@+id/cbr_powered"
        app:layout_constraintEnd_toEndOf="@+id/cbr_guideline_end"
        app:layout_constraintStart_toStartOf="@+id/cbr_guideline_start"
        app:layout_constraintTop_toBottomOf="@+id/cbr_otp_error"/>
    <ru.cyberity.cbr.core.widget.CBRToolbarView
        android:id="@+id/cbr_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"/>
    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/cbr_margin_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/cbr_guideline_end"
        app:layout_constraintStart_toStartOf="@+id/cbr_guideline_start"
        layout="@layout/cbr_layout_powered"/>
</androidx.constraintlayout.widget.ConstraintLayout>
