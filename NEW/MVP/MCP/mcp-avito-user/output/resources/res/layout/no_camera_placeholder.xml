<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/no_cameras_available_placeholder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true">
    <ImageView
        android:id="@+id/no_camera_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="?attr/img_noCamera"/>
    <TextView
        android:id="@+id/camera_not_found"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:maxWidth="@dimen/photo_picker_placeholder_text_max_width"
        android:text="@string/camera_is_not_found"
        style="@style/Widget.Avito.Textview.Title.Camera"/>
    <TextView
        android:gravity="center"
        android:id="@+id/couldnt_find_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:maxWidth="@dimen/photo_picker_placeholder_text_max_width"
        android:text="@string/could_not_find_camera"
        style="@style/Widget.Avito.Textview.Text.Camera"/>
    <Button
        android:textSize="12sp"
        android:textColor="?attr/blue"
        android:id="@+id/go_to_gallery_button"
        android:background="@drawable/btn_transparent_blue_rounded_states"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginTop="4dp"
        android:text="@string/go_to_gallery"
        android:textAllCaps="true"
        app:fontFamily="?attr/fontHeavy"/>
</LinearLayout>
