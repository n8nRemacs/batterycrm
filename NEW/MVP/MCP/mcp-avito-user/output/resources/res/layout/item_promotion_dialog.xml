<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:paddingBottom="32dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="24dp">
        <TextView
            android:textAppearance="?attr/textH3"
            android:id="@+id/vas_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"/>
        <TextView
            android:textAppearance="?attr/textM1"
            android:id="@+id/vas_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>
        <com.avito.android.lib.design.button.Button
            android:id="@+id/vas_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            style="?attr/buttonDefaultLarge"/>
        <TextView
            android:textAppearance="?attr/textH3"
            android:id="@+id/promo_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:text="@string/item_promotion_dialog_title"/>
        <TextView
            android:textAppearance="?attr/textM1"
            android:id="@+id/promo_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/item_promotion_dialog_description"/>
        <com.avito.android.lib.design.button.Button
            android:id="@+id/promo_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/item_promotion_dialog_button_title"
            style="?attr/buttonDefaultLarge"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
