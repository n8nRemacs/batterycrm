<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="vertical"
    android:id="@+id/auto_model_widget_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/auto_model_snippet_padding"
    android:layout_marginVertical="@dimen/auto_model_snippet_padding">
    <com.avito.android.fresco.SimpleDraweeView
        android:id="@+id/auto_model_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:actualImageScaleType="centerCrop"
        app:backgroundImage="?attr/gray4"
        app:failureImage="@drawable/ic_stub_grey_28"
        app:placeholderImage="@drawable/ic_stub_grey_28"
        app:roundedCornerRadius="16dp"
        app:viewAspectRatio="1.63"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/auto_model_score_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginHorizontal="6dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/auto_model_score"
            android:layout_width="35dp"
            android:layout_height="22dp"
            app:cardCornerRadius="3dp"
            app:cardElevation="0dp">
            <TextView
                android:textAppearance="?attr/textM20"
                android:textColor="?attr/constantWhite"
                android:layout_gravity="center"
                android:id="@+id/text_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:textAppearance="?attr/textM20"
            android:layout_gravity="center"
            android:id="@+id/review_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"/>
    </LinearLayout>
    <TextView
        android:textAppearance="?attr/textH25"
        android:id="@+id/text_model_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="6dp"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/text_model_price_range"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="6dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/auto_model_details_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginHorizontal="6dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/auto_model_buttons_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="6dp"
        android:layout_marginHorizontal="4dp">
        <com.avito.android.lib.design.button.Button
            android:id="@+id/button_about_model"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            style="?attr/buttonSecondaryMedium"/>
        <com.avito.android.lib.design.button.Button
            android:id="@+id/button_search_model"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            style="?attr/buttonSecondaryMedium"/>
    </LinearLayout>
</LinearLayout>
