<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/simple_bottom_sheet_content"
        android:paddingBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:background="?attr/warmGray2"
            android:layout_width="match_parent"
            android:layout_height="260dp">
            <ImageView
                android:layout_gravity="bottom|center_horizontal"
                android:layout_width="292dp"
                android:layout_height="292dp"
                android:layout_marginBottom="-42dp"
                app:srcCompat="@drawable/img_house_reviews_onboarding"/>
        </FrameLayout>
        <TextView
            android:textAppearance="?attr/textH3"
            android:textColor="@color/design_text_color_black_selector"
            android:gravity="center"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Об этом доме есть отзывы"
            android:paddingStart="@dimen/design_bottom_sheet_header_start_margin"
            android:paddingEnd="@dimen/design_bottom_sheet_header_start_margin"/>
        <TextView
            android:textAppearance="?attr/textBody"
            android:textColor="@color/design_text_color_black_selector"
            android:gravity="center"
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Почитайте, что пишут местные жители.\10Они помогут разобраться во всех плюсах\10и минусах."
            android:paddingStart="@dimen/design_bottom_sheet_header_start_margin"
            android:paddingEnd="@dimen/design_bottom_sheet_header_start_margin"/>
        <com.avito.android.lib.design.button.Button
            android:id="@+id/button_show_reviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Посмотреть отзывы"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            style="?attr/buttonPrimaryLarge"/>
        <com.avito.android.lib.design.button.Button
            android:id="@+id/button_close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Не интересно"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            style="?attr/buttonSecondaryLarge"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
