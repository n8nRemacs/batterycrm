<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/avatar_alert"
        android:background="?attr/red50"
        android:paddingLeft="@dimen/standard_padding"
        android:paddingRight="@dimen/standard_padding"
        android:paddingBottom="@dimen/content_top_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="18sp"
            android:textColor="?attr/black"
            android:id="@+id/avatar_title"
            android:paddingTop="@dimen/standard_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="6sp"/>
        <TextView
            android:textSize="@dimen/big_text_size"
            android:textColor="?attr/black"
            android:id="@+id/avatar_description"
            android:paddingTop="@dimen/standard_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="1sp"/>
    </LinearLayout>
    <TextView
        android:textSize="@dimen/big_text_size"
        android:textColor="?attr/black"
        android:id="@+id/avatar_info"
        android:background="?attr/orange50"
        android:paddingLeft="@dimen/standard_padding"
        android:paddingTop="@dimen/content_top_padding"
        android:paddingRight="@dimen/standard_padding"
        android:paddingBottom="@dimen/content_top_padding"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="1sp"/>
</merge>
