<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/calendar_day_cell"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/flexible_calendar_day_text_background"
        android:layout_width="@dimen/flexible_calendar_week_day_item_size"
        android:layout_height="@dimen/flexible_calendar_week_day_item_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/flexible_calendar_day_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.375"/>
    <View
        android:id="@+id/flexible_calendar_day_dot"
        android:background="@drawable/day_cell_dot"
        android:layout_width="@dimen/day_dot_size"
        android:layout_height="@dimen/day_dot_size"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toEndOf="@+id/flexible_calendar_day_text"
        app:layout_constraintStart_toStartOf="@+id/flexible_calendar_day_text"
        app:layout_constraintTop_toBottomOf="@+id/flexible_calendar_day_text"/>
</androidx.constraintlayout.widget.ConstraintLayout>
