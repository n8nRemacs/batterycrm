<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:id="@+id/iac_enable_block_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="?attr/textH30"
        android:id="@+id/iac_enable_block_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/iac_enable_block_title"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:id="@+id/iac_enable_block_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:text="@string/iac_enable_block_desc"
        app:layout_constraintTop_toBottomOf="@+id/iac_enable_block_title"/>
    <com.avito.android.lib.design.list_item.ListItemSwitcher
        android:enabled="true"
        android:id="@+id/iac_enable_block_switcher"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/iac_enable_block_text"
        app:listItem_switcherStyle="?attr/switcherDefaultLarge"
        app:listItem_title="@string/iac_enable_block_calls"
        app:listItem_titleAppearance="?attr/textM20"/>
</androidx.constraintlayout.widget.ConstraintLayout>
