<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:res="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/bbip_private_custom_budgets_container"
    android:paddingTop="12dp"
    android:paddingBottom="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp">
    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/bbip_private_custom_budgets_compose_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/bg_bbip_private_custom_budgets_forecast"
        android:paddingTop="20dp"
        android:paddingBottom="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:paddingHorizontal="24dp">
        <TextView
            android:textAppearance="?attr/textS10"
            android:id="@+id/bbip_private_custom_budgets_forecast_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textAppearance="?attr/textH30"
            android:id="@+id/bbip_private_custom_budgets_forecast"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"/>
        <com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout
            android:id="@+id/bbip_private_custom_budgets_forecast_shimmer"
            android:visibility="gone"
            android:layout_width="124dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            style="?attr/shimmerDefault">
            <com.avito.android.lib.design.skeleton.Skeleton
                android:id="@+id/bbip_private_custom_budgets_forecast_skeleton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                res:skeleton_radius="6dp"/>
        </com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout>
    </LinearLayout>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/bbip_private_custom_budgets_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        style="?attr/buttonPrimaryLarge"/>
</LinearLayout>
