<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/order_status_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="32dp"
    android:layout_marginBottom="4dp"
    android:layout_marginHorizontal="16dp">
    <com.avito.android.lib.design.button.Button
        android:textColor="?attr/black"
        android:id="@+id/order_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?attr/buttonPrimaryLarge"/>
    <com.avito.android.lib.design.button.Button
        android:textAppearance="@style/Legacy.Button.PrimarySmall.TitleStyle"
        android:id="@+id/order_status_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        style="?attr/buttonLinkIncreasedLarge"/>
</LinearLayout>
