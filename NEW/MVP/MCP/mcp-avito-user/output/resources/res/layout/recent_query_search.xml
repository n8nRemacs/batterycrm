<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/recent_query_search_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/serp_recent_query_search_horizontal_margin">
    <TextView
        android:id="@+id/widget_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/serp_recent_query_search_title_bottom_offset"
        style="?attr/textH3"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/search_root"
        android:background="@drawable/recent_query_search_bg"
        android:paddingTop="@dimen/serp_recent_query_search_root_top_padding"
        android:paddingBottom="@dimen/serp_recent_query_search_root_bottom_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/serp_recent_query_search_root_start_padding"
        android:paddingEnd="@dimen/serp_recent_query_search_root_end_padding">
        <FrameLayout
            android:id="@+id/close_container"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="@dimen/serp_recent_query_search_close_container_size"
            android:layout_height="@dimen/serp_recent_query_search_close_container_size"
            android:layout_marginTop="@dimen/serp_recent_query_search_close_container_top_margin"
            android:layout_marginEnd="@dimen/serp_recent_query_search_close_container_end_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/close_icon"
                android:background="@drawable/ripple_warmgray_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="?attr/ic_close16"
                app:tint="?attr/black"/>
        </FrameLayout>
        <TextView
            android:ellipsize="end"
            android:id="@+id/query"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginEnd="@dimen/serp_recent_query_search_query_end_margin"
            app:layout_constraintEnd_toStartOf="@+id/close_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="?attr/textH5"/>
        <TextView
            android:textColor="?attr/gray54"
            android:ellipsize="end"
            android:id="@+id/search_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/serp_recent_query_search_desc_top_margin"
            android:maxLines="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/query"
            style="?attr/textS1"/>
        <TextView
            android:textColor="?attr/blue600"
            android:id="@+id/search_action"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/serp_recent_query_search_action_top_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/search_description"
            style="?attr/textS1"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
