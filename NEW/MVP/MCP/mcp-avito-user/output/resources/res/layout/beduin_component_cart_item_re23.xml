<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/beduin_cart_item_checkbox_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <com.avito.android.lib.design.toggle.Checkbox
            android:id="@+id/beduin_cart_item_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/beduin_cart_item_content_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <com.avito.android.fresco.SimpleDraweeView
            android:id="@+id/beduin_cart_item_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginStart="12dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/beduin_cart_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/beduin_cart_right_icons_container"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>
    <FrameLayout
        android:layout_gravity="end|top"
        android:id="@+id/beduin_cart_item_more_container"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/beduin_cart_item_more"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_more_horizontal_24"
            app:tint="?attr/black"/>
    </FrameLayout>
</android.widget.LinearLayout>
