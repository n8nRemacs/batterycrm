<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/content_container"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp">
    <com.avito.android.lib.design.component_container.ComponentContainer
        android:orientation="vertical"
        android:id="@+id/date_time_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:componentContainer_contentSpacing="8dp"
        app:componentContainer_subtitle="@string/interview_invitation_date_time_message"
        app:componentContainer_subtitleAppearance="?attr/textM20"
        app:componentContainer_title="@string/interview_invitation_date_time"/>
    <com.avito.android.lib.design.component_container.ComponentContainer
        android:orientation="vertical"
        android:id="@+id/location_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:componentContainer_resetCondition="atLeastOne"
        app:componentContainer_title="@string/interview_invitation_location">
        <com.avito.android.lib.design.input.Input
            android:id="@+id/location_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/interview_invitation_location_hint"
            android:singleLine="true"
            app:input_formatterType="simple"
            style="?attr/baseSelect"/>
    </com.avito.android.lib.design.component_container.ComponentContainer>
    <com.avito.android.lib.design.component_container.ComponentContainer
        android:orientation="vertical"
        android:id="@+id/phone_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:componentContainer_title="@string/interview_invitation_phone">
        <com.avito.android.lib.design.input.Input
            android:id="@+id/phone_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/interview_invitation_phone_hint"
            android:singleLine="true"
            app:input_formatterType="mobile_phone"/>
    </com.avito.android.lib.design.component_container.ComponentContainer>
</LinearLayout>
