<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ru.cyberity.cbr.core.widget.CBRToolbarView
        android:id="@+id/cbr_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cbr_fragment_content"
        android:paddingLeft="@dimen/cbr_margin_medium"
        android:paddingRight="@dimen/cbr_margin_medium"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize">
        <ru.cyberity.cbr.core.widget.CBRH1TextView
            android:gravity="center"
            android:id="@+id/cbr_title"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cbr_toolbar"/>
        <ru.cyberity.cbr.core.widget.CBRSubtitle2TextView
            android:gravity="center"
            android:id="@+id/cbr_subtitle"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/cbr_margin_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cbr_title"/>
        <ScrollView
            android:id="@+id/cbr_form_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/cbr_primary_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cbr_subtitle"/>
        <ru.cyberity.cbr.core.widget.pincode.CBRPinView
            android:id="@+id/cbr_pin_code"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/cbr_margin_large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cbr_subtitle"/>
        <ru.cyberity.cbr.core.widget.CBRSubtitle2TextView
            android:id="@+id/cbr_pin_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/cbr_margin_medium"
            android:inputType="number"
            app:cbr_textColor="?attr/colorError"
            app:layout_constraintEnd_toEndOf="@+id/cbr_pin_code"
            app:layout_constraintStart_toStartOf="@+id/cbr_pin_code"
            app:layout_constraintTop_toBottomOf="@+id/cbr_pin_code"/>
        <ru.cyberity.cbr.core.widget.CBRTextButton
            android:id="@+id/cbr_resend_verification_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/cbr_margin_large"
            android:minHeight="@dimen/cbr_min_button_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cbr_pin_error"/>
        <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:id="@+id/cbr_guideline_center"
            android:layout_width="1dp"
            android:layout_height="1dp"
            app:layout_constraintGuide_percent="0.5"/>
        <ru.cyberity.cbr.core.widget.CBRImageView
            android:id="@+id/cbr_status_icon"
            android:background="@drawable/cbr_bg_circle"
            android:visibility="gone"
            android:layout_width="@dimen/cbr_icon_size_large"
            android:layout_height="@dimen/cbr_icon_size_large"
            android:layout_marginBottom="@dimen/cbr_margin_medium"
            android:scaleType="center"
            app:layout_constraintBottom_toTopOf="@+id/cbr_guideline_center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <ru.cyberity.cbr.core.widget.CBRH2TextView
            android:gravity="center"
            android:id="@+id/cbr_status_title"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/cbr_margin_medium"
            app:layout_constraintBottom_toTopOf="@+id/cbr_status_comment"
            app:layout_constraintTop_toBottomOf="@+id/cbr_status_icon"
            app:layout_constraintVertical_chainStyle="packed"/>
        <ru.cyberity.cbr.core.widget.CBRSubtitle2TextView
            android:gravity="center"
            android:id="@+id/cbr_status_comment"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/cbr_primary_button"
            app:layout_constraintTop_toBottomOf="@+id/cbr_status_title"
            app:layout_constraintVertical_chainStyle="packed"/>
        <ru.cyberity.cbr.core.widget.CBRPrimaryButton
            android:id="@+id/cbr_primary_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/cbr_secondary_button"
            app:layout_goneMarginBottom="@dimen/cbr_margin_medium"/>
        <ru.cyberity.cbr.core.widget.CBRSecondaryButton
            android:id="@+id/cbr_secondary_button"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/cbr_margin_medium"
            app:layout_constraintBottom_toTopOf="@+id/cbr_powered"/>
        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/cbr_margin_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            layout="@layout/cbr_layout_powered"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ru.cyberity.cbr.core.widget.CBRErrorBottomSheetView
        android:id="@+id/cbr_error_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_gravity="bottom"
        android:id="@+id/cbr_web_view_bottom_sheet_container"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ru.cyberity.cbr.core.widget.CBRBottomSheetView
            android:id="@+id/cbr_web_view_bottom_sheet"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/bottom_sheet_behavior">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ru.cyberity.cbr.core.widget.CBRToolbarView
                    android:id="@+id/cbr_bottomsheet_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <WebView
                    android:id="@+id/cbr_webview"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cbr_subtitle"/>
            </LinearLayout>
        </ru.cyberity.cbr.core.widget.CBRBottomSheetView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</FrameLayout>
