<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:id="@+id/advert_grid_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.avito.android.lib.util.layout.ForegroundRelativeLayout
        android:id="@+id/advert_content"
        android:clipChildren="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="@drawable/serp_advert_redesign_foreground">
        <com.avito.android.design.widget.ClickableGalleryPager
            android:id="@+id/image_pager"
            android:layout_width="match_parent"
            android:layout_height="@dimen/serp_card_image_height"
            style="@style/Widget.Avito.SimpleDraweeView.Serp.Item.Image"/>
        <TextView
            android:textSize="@dimen/small_text_size"
            android:textColor="?attr/constantWhite"
            android:gravity="center_vertical"
            android:id="@+id/page_indicator"
            android:background="@drawable/advert_xl_page_indicator_bg"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginBottom="10dp"
            app:fontFamily="?attr/fontHeavy"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/text_content"
            android:paddingTop="10dp"
            android:paddingBottom="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="44dp"
            android:layout_below="@+id/image_pager"
            android:paddingHorizontal="@dimen/serp_card_redesign_horizontal_padding">
            <androidx.appcompat.widget.AppCompatTextView
                android:textAppearance="?attr/textM20"
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:layout_marginEnd="32dp"/>
            <com.avito.android.lib.util.layout.InverseLinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="32dp">
                <androidx.appcompat.widget.AppCompatTextView
                    android:textAppearance="?attr/textH60"
                    android:gravity="center_vertical"
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/delivery_icon_advert_item_padding"/>
                <ImageView
                    android:theme="@style/Theme.DesignSystem.Re23"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/discount_icon"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/discount_icon_large_padding"
                    app:srcCompat="?attr/ic_discount16"
                    app:tint="?attr/blue500"/>
            </com.avito.android.lib.util.layout.InverseLinearLayout>
            <TextView
                android:ellipsize="end"
                android:id="@+id/quorum_filter_info"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                style="@style/Widget.Avito.TextView.Serp.Item.Caption.Secondary"/>
            <TextView
                android:textAppearance="?attr/textS10"
                android:id="@+id/price_without_discount"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="32dp"/>
            <com.avito.android.lib.util.layout.InverseLinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.avito.android.lib.design.strikethrough.StrikethroughTextView
                    android:textAppearance="?attr/textS10"
                    android:gravity="center_vertical"
                    android:id="@+id/discount"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:drawablePadding="4dp"
                    app:strikethrough_show="true"
                    app:strikethrough_tint="?attr/red600"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:textColor="?attr/red700"
                    android:id="@+id/discount_percentage"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_marginStart="4dp"
                    style="@style/Widget.Avito.TextView.Serp.Item.Caption.Discount"/>
            </com.avito.android.lib.util.layout.InverseLinearLayout>
            <androidx.appcompat.widget.AppCompatTextView
                android:textAppearance="?attr/textS10"
                android:id="@+id/additional_name"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/price_list_count_hint"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                style="@style/Widget.Avito.TextView.Serp.Item.Caption.Tags"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:textAppearance="?attr/textS10"
                android:ellipsize="end"
                android:id="@+id/shop_name"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:lines="1"/>
            <include
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                layout="@layout/advert_item_rating"/>
            <TextView
                android:textAppearance="?attr/textS10"
                android:id="@+id/verification"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/delivery_terms_container"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp">
                <ImageView
                    android:id="@+id/delivery_terms_icon"
                    android:visibility="gone"
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="4dp"
                    app:srcCompat="?attr/ic_deliveryOutline16"
                    app:tint="?attr/black"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:textAppearance="?attr/textS10"
                    android:id="@+id/delivery_terms"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                layout="@layout/advert_item_geo_reference_layout_redesign"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:textAppearance="?attr/textS10"
                android:id="@+id/address"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:maxLines="2"/>
            <TextView
                android:textAppearance="?attr/textS10"
                android:id="@+id/address_additional_info"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:textAppearance="?attr/textS10"
                android:id="@+id/marketplace_instock"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:textAppearance="?attr/textS10"
                android:id="@+id/marketplace_trust_factor"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:textAppearance="?attr/textS10"
                android:id="@+id/date"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/additional_action"
                android:background="@drawable/bg_btn_flat_rounded"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:focusable="true"
                android:visibility="gone"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                style="@style/Widget.Avito.TextView.Serp.Item.Caption.Secondary.Blue"/>
            <TextView
                android:textColor="?attr/violet600"
                android:id="@+id/buy_with_delivery_link"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
        <com.avito.android.lib.deprecated_design.CheckableImageView
            android:id="@+id/btn_favorite_redesign"
            android:background="@drawable/bg_btn_circle_warmgray"
            android:visibility="gone"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="2dp"
            android:src="@drawable/advert_item_list_favorite_red"
            android:layout_below="@+id/image_pager"
            android:layout_alignParentRight="true"/>
        <ImageButton
            android:id="@+id/similar_button"
            android:background="@drawable/bg_btn_circle"
            android:visibility="gone"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginRight="2dp"
            android:scaleType="center"
            android:layout_below="@+id/btn_favorite_redesign"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/ic_similar"/>
        <ImageButton
            android:id="@+id/more_actions_button"
            android:background="@drawable/bg_btn_circle_gray_rich"
            android:visibility="gone"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="2dp"
            android:scaleType="center"
            android:layout_below="@+id/similar_button"
            android:layout_alignParentRight="true"
            app:srcCompat="?attr/ic_more16"
            app:tint="?attr/text_primary"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/card_badge_margin_left"
            android:layout_marginTop="@dimen/card_badge_margin_top">
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/delivery"
                android:background="@drawable/design_background_badge_viewed_redesign"
                android:padding="4dp"
                android:visibility="gone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="4dp"
                app:srcCompat="?attr/ic_deliveryOutline16"
                app:tint="?attr/constantWhite"
                style="@style/AvitoButton"/>
            <ImageView
                android:id="@+id/has_video"
                android:background="@drawable/design_background_badge_viewed_redesign"
                android:padding="4dp"
                android:visibility="gone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@null"
                android:layout_marginEnd="4dp"
                app:srcCompat="?attr/ic_playOutline16"
                app:tint="?attr/constantWhite"/>
            <ImageView
                android:id="@+id/has_realty_layout"
                android:background="@drawable/design_background_badge_viewed_redesign"
                android:padding="4dp"
                android:visibility="gone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@null"
                android:layout_marginEnd="4dp"
                app:srcCompat="?attr/ic_apartment16"
                app:tint="?attr/constantWhite"/>
            <TextView
                android:id="@+id/card_info_badge"
                android:visibility="gone"
                style="@style/Design.Widget.SnippetBadge.Viewed.Redesign"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:paddingTop="@dimen/card_badge_margin_top"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-7dp"
            android:layout_alignBottom="@+id/image_pager"
            android:paddingHorizontal="@dimen/serp_card_redesign_horizontal_padding">
            <TextView
                android:theme="@style/Theme.DesignSystem.Re23"
                android:textAppearance="?attr/textXs10"
                android:textColor="?attr/constantWhite"
                android:gravity="center"
                android:id="@+id/badge_sticker"
                android:background="@drawable/bg_advert_item_sale_candy"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="@dimen/card_badge_sticker_min_width"
                android:contentDescription="@null"
                android:rotation="-10"
                android:elevation="2dp"
                android:paddingHorizontal="@dimen/card_badge_sticker_text_padding_horizontal"
                android:paddingVertical="@dimen/card_badge_sticker_text_padding_vertical"/>
            <TextView
                android:textColor="?attr/constantBlack"
                android:id="@+id/badge"
                android:visibility="gone"
                style="@style/Design.Widget.SnippetBadge.Common"/>
            <com.avito.android.lib.design.docking_badge.DockingBadgeContainer
                android:id="@+id/badge_bar_redesign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:snippetBadgeBar_maxBadges="1"/>
        </LinearLayout>
    </com.avito.android.lib.util.layout.ForegroundRelativeLayout>
    <TextView
        android:textColor="?attr/gray48"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/hidden_stub"
        android:background="@drawable/bg_advert_hidden_redesign"
        android:focusable="true"
        android:visibility="gone"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/recommended_advert_hidden"
        style="?attr/textBodyDense"/>
</FrameLayout>
