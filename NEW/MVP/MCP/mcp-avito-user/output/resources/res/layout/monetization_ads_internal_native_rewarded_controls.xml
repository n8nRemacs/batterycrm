<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="60dp">
    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/feedback"
        android:visibility="gone"
        android:layout_width="@dimen/monetization_ads_internal_rewarded_control_icon_size"
        android:layout_height="@dimen/monetization_ads_internal_rewarded_control_icon_size"
        android:layout_marginLeft="@dimen/monetization_ads_internal_reward_header_control_margin"
        android:src="@drawable/monetization_ads_internal_rewarded_feedback_with_padding"/>
    <LinearLayout
        android:layout_gravity="end"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginRight="8dp">
        <FrameLayout
            android:layout_gravity="center_vertical"
            android:id="@+id/timer_container"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="12dp"
                android:textColor="@color/monetization_ads_internal_text_color_white"
                android:ellipsize="none"
                android:gravity="center"
                android:id="@+id/timer_value"
                android:background="@drawable/monetization_ads_internal_rewarded_timer_background"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/monetization_ads_internal_rewarded_control_timer_height"
                android:singleLine="true"/>
        </FrameLayout>
        <TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/close"
            android:background="@drawable/monetization_ads_internal_rewarded_close_with_padding"
            android:visibility="gone"
            android:layout_width="@dimen/monetization_ads_internal_rewarded_control_icon_size"
            android:layout_height="@dimen/monetization_ads_internal_rewarded_control_icon_size"/>
    </LinearLayout>
</FrameLayout>
