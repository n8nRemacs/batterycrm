<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:id="@+id/collapsingToolbar"
        android:visibility="gone"
        android:fitsSystemWindows="true"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:collapsedTitleGravity="center_horizontal"
        app:collapsedTitleTextAppearance="?attr/textH5"
        app:contentScrim="@drawable/vertical_filter_toolbar_collapsed_view_background"
        app:expandedTitleGravity="top|left"
        app:expandedTitleMarginStart="24dp"
        app:expandedTitleMarginTop="58dp"
        app:expandedTitleTextAppearance="?attr/textH2"
        app:layout_scrollFlags="snap|exitUntilCollapsed|scroll"
        app:scrimAnimationDuration="100"
        app:scrimVisibleHeightTrigger="100dp"
        app:titleCollapseMode="fade"
        app:titleEnabled="true">
        <com.avito.android.lib.design.banner.Banner
            android:id="@+id/vertical_filter_toolbar_content"
            android:paddingTop="74dp"
            android:fitsSystemWindows="true"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:banner_bottomEdgeRounded="false"
            app:banner_content="@layout/vertical_filter_toolbar_promo_block_content"
            app:banner_contentPaddingBottom="16dp"
            app:banner_topEdgeRounded="false"
            app:layout_collapseMode="parallax"
            app:layout_collapseParallaxMultiplier="0"
            style="?attr/bannerBlue"/>
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:background="@color/common_transparent_black"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:contentInsetStart="24dp"
            app:contentInsetStartWithNavigation="24dp"
            app:layout_collapseMode="pin"
            app:navigationIcon="@null">
            <ImageView
                android:layout_gravity="start"
                android:id="@+id/navigation_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="24dp"
                android:src="?attr/ic_arrowBack24"/>
            <ImageView
                android:layout_gravity="end"
                android:id="@+id/search_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="24dp"
                android:src="?attr/ic_search24"/>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.CollapsingToolbarLayout>
    <FrameLayout
        android:id="@+id/thumb_layout"
        android:background="@drawable/vertical_filter_toolbar_view_thumb_background"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="20dp">
        <View
            android:layout_gravity="bottom|center_horizontal"
            android:id="@+id/header_thumb"
            android:background="@drawable/vertical_filter_toolbar_view_thumb"
            android:layout_width="32dp"
            android:layout_height="4dp"
            android:layout_marginBottom="10dp"
            android:alpha="0"/>
    </FrameLayout>
</merge>
