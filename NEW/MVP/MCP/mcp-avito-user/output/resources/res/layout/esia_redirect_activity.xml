<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/esia_redirect_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.avito.android.lib.design.nav_bar.NavBar
        android:id="@+id/esia_redirect_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/esia_redirect_nav_bar_padding_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navBar_backButtonMarginStart="@dimen/esia_redirect_nav_bar_back_margin_start"/>
    <com.avito.android.lib.design.spinner.Spinner
        android:id="@+id/esia_redirect_loading"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="?attr/spinnerDarkLarge"/>
    <com.avito.android.lib.design.content_placeholder.ContentPlaceholder
        android:id="@+id/esia_redirect_error"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:contentPlaceholder_buttonStyle="?attr/buttonPrimaryMedium"
        app:contentPlaceholder_imageContainerSize="@dimen/esia_redirect_error_image_size"
        app:contentPlaceholder_textToButtonSpacing="@dimen/esia_redirect_error_text_to_button_space"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.avito.android.lib.design.content_placeholder.ContentPlaceholder
        android:id="@+id/esia_redirect_unauthorized"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:contentPlaceholder_buttonStyle="?attr/buttonPrimaryMedium"
        app:contentPlaceholder_imageContainerSize="@dimen/esia_redirect_error_image_size"
        app:contentPlaceholder_textToButtonSpacing="@dimen/esia_redirect_error_text_to_button_space"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/esia_redirect_content_rv"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/esia_redirect_content_margin_top"
        android:layout_marginHorizontal="@dimen/esia_redirect_content_margin_horizontal"
        app:layout_constraintBottom_toTopOf="@+id/esia_redirect_buttons_rv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/esia_redirect_nav_bar"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/esia_redirect_buttons_rv"
        android:paddingTop="@dimen/esia_redirect_buttons_padding_top"
        android:paddingBottom="@dimen/esia_redirect_buttons_padding_bottom"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/esia_redirect_buttons_margin_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
