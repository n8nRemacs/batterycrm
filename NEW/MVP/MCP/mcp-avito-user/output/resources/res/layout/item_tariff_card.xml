<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_tariff_card_root"
    android:paddingBottom="@dimen/tariff_card_bottom_padding"
    android:layout_width="@dimen/tariff_card_width"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/tariff_card_margin_top">
    <TextView
        android:textAppearance="?attr/textH50"
        android:ellipsize="end"
        android:id="@+id/item_tariff_card_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:lines="1"
        android:layout_marginHorizontal="@dimen/default_horizontal_padding"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:id="@+id/item_tariff_card_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginHorizontal="@dimen/default_horizontal_padding"
        app:layout_constraintTop_toBottomOf="@+id/item_tariff_card_name"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/item_tariff_card_buttons_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="@dimen/default_horizontal_padding"
        app:layout_constraintTop_toBottomOf="@+id/item_tariff_card_description">
        <com.avito.android.lib.design.button.Button
            android:id="@+id/item_tariff_card_edit_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/custom_tariffs_edit_btn"
            android:layout_weight="1"
            android:layout_marginEnd="6dp"
            style="?attr/buttonOverlaySecondarySmall"/>
        <com.avito.android.lib.design.button.Button
            android:id="@+id/item_tariff_card_delete_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/custom_tariffs_delete_btn"
            android:layout_weight="1"
            style="?attr/buttonOverlaySecondarySmall"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
