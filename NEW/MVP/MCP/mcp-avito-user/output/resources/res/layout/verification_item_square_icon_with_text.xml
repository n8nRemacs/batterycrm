<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/square_icon_with_text_item_icon"
        android:background="@drawable/vrf_bg_rounded_12"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="?attr/ic_crown16"
        android:scaleType="center"
        android:backgroundTint="?attr/gray8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?attr/black"/>
    <TextView
        android:textAppearance="?attr/textH50"
        android:id="@+id/square_icon_with_text_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/square_icon_with_text_item_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginStart="0dp"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/square_icon_with_text_item_body"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginStart="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/square_icon_with_text_item_icon"
        app:layout_constraintTop_toBottomOf="@+id/square_icon_with_text_item_title"
        app:layout_goneMarginStart="0dp"
        app:layout_goneMarginTop="0dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
