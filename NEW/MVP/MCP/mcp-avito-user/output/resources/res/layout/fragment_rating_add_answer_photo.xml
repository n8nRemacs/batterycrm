<?xml version="1.0" encoding="utf-8"?>
<com.avito.android.lib.util.layout.ForegroundConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rating_add_answer_photo"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/rating_add_answer_photo_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">
        <com.avito.android.lib.design.progress_bar.ProgressBar
            android:layout_gravity="center"
            android:id="@+id/toolbar_progress_bar"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            app:progressBar_barHeight="6dp"
            app:progressBar_emptyColor="?attr/warmGray16"
            app:progressBar_fillColor="?attr/black"
            app:progressBar_isFairProgress="true"
            app:progressBar_progress="0.99"
            app:progressBar_separatorWidth="0dp"/>
    </androidx.appcompat.widget.Toolbar>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingHorizontal="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rating_add_answer_photo_toolbar">
        <LinearLayout
            android:orientation="vertical"
            android:paddingBottom="98dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="?attr/textH20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/review_add_answer_photo_title"/>
            <com.avito.android.lib.design.component_container.ComponentContainer
                android:id="@+id/rating_add_answer_photo_picker_container"
                android:paddingTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:componentContainer_contentPaddingTop="24dp"
                app:componentContainer_subtitle="@string/review_add_answer_photo_subtitle"
                app:componentContainer_subtitleAppearance="?attr/textM10">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rating_add_answer_photo_list_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="?attr/photoUploaderList"/>
            </com.avito.android.lib.design.component_container.ComponentContainer>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/rating_add_answer_photo_send_container"
        android:paddingBottom="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/FlexibleButtonsContainer">
        <com.avito.android.lib.design.button.Button
            android:id="@+id/rating_add_answer_photo_send_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?attr/buttonPrimaryLarge"/>
    </LinearLayout>
</com.avito.android.lib.util.layout.ForegroundConstraintLayout>
