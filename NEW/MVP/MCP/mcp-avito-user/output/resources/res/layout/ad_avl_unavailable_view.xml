<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/ad_avl_screen_margin"
    android:layout_marginBottom="@dimen/ad_avl_screen_margin">
    <com.avito.android.advertising.ui.adstub.CommercialUnavailableView
        android:id="@+id/unavailable_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ImageView
        android:id="@+id/close_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="@dimen/ad_avl_inset"
        android:src="?attr/ic_close24"
        android:scaleType="center"
        app:tint="?attr/constantWhite"/>
</FrameLayout>
