<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/cpx_configure_landing_accordions_card_container"
    android:background="@drawable/cpx_card_bg"
    android:paddingTop="20dp"
    android:paddingBottom="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="24dp">
    <TextView
        android:id="@+id/cpx_configure_landing_accordions_card_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/cpx_configure_landing_accordions_card_accordions_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
