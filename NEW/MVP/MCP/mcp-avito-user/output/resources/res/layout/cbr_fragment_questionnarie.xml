<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/cbr_guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_begin="@dimen/cbr_margin_medium"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/cbr_guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_end="@dimen/cbr_margin_medium"/>
    <FrameLayout
        android:orientation="vertical"
        android:id="@+id/cbr_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/cbr_margin_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/cbr_continue"
        app:layout_constraintEnd_toEndOf="@+id/cbr_guideline_end"
        app:layout_constraintStart_toStartOf="@+id/cbr_guideline_start"
        app:layout_constraintTop_toBottomOf="@+id/cbr_toolbar"/>
    <ru.cyberity.cbr.core.widget.CBRToolbarView
        android:id="@+id/cbr_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"/>
    <ru.cyberity.cbr.core.widget.CBRPrimaryButton
        android:id="@+id/cbr_continue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/cbr_margin_medium"
        android:layout_marginVertical="@dimen/cbr_margin_medium"
        app:layout_constraintBottom_toTopOf="@+id/cbr_powered"
        app:layout_constraintEnd_toEndOf="@+id/cbr_guideline_end"
        app:layout_constraintStart_toStartOf="@+id/cbr_guideline_start"/>
    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/cbr_margin_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/cbr_guideline_end"
        app:layout_constraintStart_toStartOf="@+id/cbr_guideline_start"
        layout="@layout/cbr_layout_powered"/>
</androidx.constraintlayout.widget.ConstraintLayout>
