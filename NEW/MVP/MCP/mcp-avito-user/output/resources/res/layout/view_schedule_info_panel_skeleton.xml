<?xml version="1.0" encoding="utf-8"?>
<com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/schedule_info_panel_skeleton_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:shimmer_animationDuration="3000"
    app:shimmer_autostart="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/schedule_panel_title_shimmer"
            android:background="@drawable/text_stub"
            android:layout_width="82dp"
            android:layout_height="7dp"
            android:layout_marginVertical="3dp"
            app:layout_constraintBottom_toTopOf="@+id/schedule_panel_subtitle_shimmer"
            app:layout_constraintStart_toStartOf="@+id/schedule_panel_subtitle_shimmer"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"/>
        <View
            android:id="@+id/schedule_panel_subtitle_shimmer"
            android:background="@drawable/text_stub"
            android:layout_width="100dp"
            android:layout_height="10dp"
            android:layout_marginVertical="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/schedule_panel_barrier_shimmer"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/schedule_panel_title_shimmer"/>
        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/schedule_panel_barrier_shimmer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="left"
            app:constraint_referenced_ids="schedule_panel_action_shimmer"/>
        <View
            android:id="@+id/schedule_panel_action_shimmer"
            android:background="@drawable/button_stub"
            android:layout_width="91dp"
            android:layout_height="36dp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/schedule_panel_barrier_shimmer"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout>
