<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/extended_profile_hat_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/avatar_boarder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="@+id/avatar"
        app:layout_constraintEnd_toEndOf="@+id/avatar"
        app:layout_constraintStart_toStartOf="@+id/avatar"
        app:layout_constraintTop_toTopOf="@+id/avatar"
        app:srcCompat="@drawable/ic_ml_avatar_boarder"/>
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/avatar"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginStart="12dp"
        app:backgroundImage="?attr/gray8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:overlayImage="@color/expected_black_alpha_4"
        app:placeholderImage="?attr/gray8"
        app:roundAsCircle="true"/>
    <TextView
        android:textAppearance="?attr/textH20"
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="@dimen/extended_profile_widget_horizontal_margin"
        app:layout_constraintTop_toBottomOf="@+id/avatar"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:textColor="?attr/gray54"
        android:id="@+id/subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="@dimen/extended_profile_widget_horizontal_margin"
        app:layout_constraintTop_toBottomOf="@+id/name"/>
    <TextView
        android:textAppearance="?attr/textH50"
        android:id="@+id/rating_number"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginStart="@dimen/extended_profile_widget_horizontal_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subtitle"
        app:layout_goneMarginTop="8dp"/>
    <com.avito.android.lib.design.rating.RatingBar
        android:id="@+id/rating_score"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/rating_number"
        app:layout_constraintStart_toEndOf="@+id/rating_number"
        app:layout_constraintTop_toTopOf="@+id/rating_number"
        style="@style/Design.Widget.Avito.Rating.Normal"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:textColor="?attr/blue600"
        android:ellipsize="end"
        android:id="@+id/rating_text"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:maxLines="1"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rating_score"
        app:layout_constraintTop_toBottomOf="@+id/subtitle"
        app:layout_goneMarginStart="@dimen/extended_profile_widget_horizontal_margin"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="rating_number, rating_text"/>
    <LinearLayout
        android:gravity="start"
        android:orientation="horizontal"
        android:id="@+id/extended_profile_base_info_ml_actions_item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:paddingHorizontal="@dimen/extended_profile_widget_horizontal_margin"
        app:layout_constraintTop_toBottomOf="@+id/barrier"/>
</androidx.constraintlayout.widget.ConstraintLayout>
