<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/ticket_icon_container"
    android:background="?attr/white"
    android:clipChildren="false"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingEnd="6dp"
    android:layout_marginHorizontal="6dp">
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_gravity="center"
        android:id="@+id/ticket_button"
        android:background="@drawable/bg_btn_flat_toolbar_action"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="6dp"
        android:layout_marginVertical="6dp"
        app:srcCompat="?attr/ic_ticketBx24"
        app:tint="?attr/violet500"/>
    <TextView
        android:textColor="?attr/black"
        android:layout_gravity="center"
        android:id="@+id/ticket_quantity_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:layout_marginStart="4dp"
        style="@style/Re23.Text.M20"/>
</LinearLayout>
