<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/user_adverts_action_item_container"
    android:paddingTop="11dp"
    android:paddingBottom="13dp"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.avito.android.lib.design.spinner.Spinner
        android:layout_gravity="center_vertical"
        android:id="@+id/user_adverts_action_item_loading"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="16dp"
        android:maxHeight="16dp"
        android:minWidth="16dp"
        android:minHeight="16dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="12dp"
        style="?attr/spinnerDarkSmall"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:layout_gravity="center_vertical"
        android:id="@+id/user_adverts_actions_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="10dp"/>
    <com.avito.android.lib.design.badge.Badge
        android:id="@+id/user_adverts_action_item_badge"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?attr/badgeTextRedM"/>
</LinearLayout>
