<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="vertical"
    android:id="@+id/equipments_tile_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="?attr/textH25"
        android:id="@+id/equipment_tile_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/advert_details_equipment_tile_horizontal_padding"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:textColor="?attr/gray54"
        android:id="@+id/equipment_tile_sub_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="@dimen/advert_details_equipment_tile_horizontal_padding"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/equipment_tile_options_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="@dimen/advert_details_equipment_tile_horizontal_padding"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:textColor="?attr/blue600"
        android:id="@+id/equipment_tile_show_bottom_sheet_text"
        android:background="@drawable/bg_rds_gray_button"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/rds_content_horizontal_padding_left"
        android:layout_marginEnd="@dimen/advert_details_equipment_tile_horizontal_padding"
        android:paddingHorizontal="4dp"/>
</LinearLayout>
