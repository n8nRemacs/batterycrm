<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_vertical"
    android:id="@+id/cart_icon_container"
    android:background="?attr/white"
    android:clipChildren="false"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/cart_button"
        android:background="@drawable/bg_btn_flat_toolbar_action"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="8dp"
        android:layout_marginVertical="6dp"
        app:srcCompat="?attr/ic_cartOutline24"
        app:tint="?attr/blue"/>
    <com.avito.android.lib.design.badge.Badge
        android:theme="@style/Theme.DesignSystem.Re23"
        android:id="@+id/cart_counter"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationX="17dp"
        android:translationY="2dp"
        style="?attr/badgeTextRedXS"/>
    <com.avito.android.lib.design.point.Point
        android:id="@+id/cart_point"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationX="18dp"
        android:translationY="5dp"
        app:point_withStroke="true"
        style="?attr/pointNewMedium"/>
</FrameLayout>
