<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/sdkBioBackgroundPrimaryColor"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ru.mts.biometry.sdk.view.SdkBioToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:sdkBioToolbarBackIcon="@drawable/sdk_bio_ic_back"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textAppearance="?attr/sdkBioTextAppearanceHeader"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/header_choose_document"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sdk_bio_choose_document_header"
                android:layout_marginHorizontal="20dp"/>
            <TextView
                android:textAppearance="?attr/sdkBioTextAppearanceRegularText"
                android:id="@+id/title_choose_document"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sdk_bio_choose_document_title"
                android:textAlignment="center"/>
            <TextView
                android:textAppearance="?attr/sdkBioTextAppearanceCaptionText"
                android:textColor="?attr/sdkBioTextSecondaryColor"
                android:id="@+id/tv_choose_document_type"
                android:paddingBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/sdk_bio_document_type_label"
                android:layout_marginStart="20dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_document_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginHorizontal="20dp"/>
            <ru.mts.biometry.sdk.view.SdkBioEditText
                android:id="@+id/et_choose_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:drawableEnd="@drawable/sdk_bio_ic_dropdown_arrow"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="24dp"
                android:importantForAutofill="no"
                app:bottomLabel=""
                app:topLabel="@string/sdk_bio_country_of_issue_label"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/btn_layout"
        android:background="@drawable/sdk_bio_rounded_dialog"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/sdk_bio_modal_card_elevation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ru.mts.biometry.sdk.view.SdkBioButton
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:sdkBioButtonTitle="@string/sdk_bio_onboarding_button_continue"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
