<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:id="@+id/root"
    android:background="?attr/bg_inverse_constant_page"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.avito.android.photo_picker.camera_mvi.ui.CameraView
        android:id="@+id/camera"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <include
        android:id="@+id/no_permission"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        layout="@layout/no_camera_permission_placeholder_inverse_re23"/>
    <FrameLayout
        android:id="@+id/camera_loader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <View
            android:id="@+id/camera_loader_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
    <ImageView
        android:id="@+id/close"
        android:padding="12dp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="?attr/ic_close24"
        android:layout_marginStart="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?attr/components_control_text_inverse_constant_primary"/>
    <ImageView
        android:id="@+id/ratio"
        android:padding="12dp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintEnd_toStartOf="@+id/flash"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?attr/components_control_text_inverse_constant_primary"/>
    <ImageView
        android:id="@+id/flash"
        android:padding="12dp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintEnd_toStartOf="@+id/camera_type"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?attr/components_control_text_inverse_constant_primary"/>
    <ImageView
        android:id="@+id/camera_type"
        android:padding="12dp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="?attr/ic_rotateCamera24"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?attr/components_control_text_inverse_constant_primary"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:textColor="?attr/text_inverse_constant_primary"
        android:gravity="center"
        android:id="@+id/hint"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="8dp"
        android:text="@string/camera_hint_default"
        android:alpha="0"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:textColor="?attr/text_inverse_constant_primary"
        android:gravity="center"
        android:id="@+id/landscape_hint"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/camera_hint_default"
        android:alpha="0"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/take_photo"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/ic_take_photo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/photo_panel_ready_button"
        app:layout_constraintBottom_toBottomOf="@+id/take_photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/take_photo"
        app:layout_constraintTop_toTopOf="@+id/take_photo"
        style="@style/CameraInverseDoneButton"/>
    <com.avito.android.photo_picker.camera_mvi.ui.SelectedPhotosView
        android:orientation="horizontal"
        android:id="@+id/selected_photos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/take_photo"
        app:layout_constraintEnd_toStartOf="@+id/take_photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/take_photo"/>
</androidx.constraintlayout.widget.ConstraintLayout>
