<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="vertical"
    android:id="@+id/advert_details_contact_bar_purple_root"
    android:background="@drawable/bg_btn_flat_rds_purple"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="52dp">
    <TextView
        android:textColor="@color/txt_raised_button"
        android:ellipsize="end"
        android:layout_gravity="center"
        android:id="@+id/button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:maxLines="1"
        style="?attr/textM20"/>
    <com.avito.android.gig_timer_widget.GigApplyButtonTimerView
        android:layout_gravity="center"
        android:id="@+id/button_timer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"/>
</LinearLayout>
