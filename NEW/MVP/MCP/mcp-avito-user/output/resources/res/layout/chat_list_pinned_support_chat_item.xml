<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:id="@+id/messenger_support_chat_item_root"
    android:background="@drawable/bg_messenger_pinned_chat"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="12dp"
    android:layout_marginStart="@dimen/messenger_channels_list_item_start_indent"
    android:layout_marginEnd="16dp">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/messenger_support_chat_icon"
        android:layout_width="@dimen/messenger_channels_support_icon_size"
        android:layout_height="@dimen/messenger_channels_support_icon_size"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="horizontal"
        android:id="@+id/messenger_support_chat_item_center_guide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.5"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:textColor="?attr/black"
        android:id="@+id/messenger_support_chat_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:singleLine="true"
        android:layout_marginStart="16dp"
        app:fontFamily="?attr/fontHeavy"
        app:layout_constraintBottom_toTopOf="@+id/messenger_support_chat_item_center_guide"
        app:layout_constraintStart_toEndOf="@+id/messenger_support_chat_icon"
        style="?attr/textH60"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:textColor="?attr/black"
        android:id="@+id/messenger_support_chat_item_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:singleLine="true"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/messenger_support_chat_icon"
        app:layout_constraintTop_toBottomOf="@+id/messenger_support_chat_item_center_guide"
        style="?attr/textS10"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/messenger_support_chat_new_message_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/circle_red"
        android:baselineAlignBottom="true"
        android:layout_marginStart="4dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/messenger_support_chat_item_message"
        app:layout_constraintStart_toEndOf="@+id/messenger_support_chat_item_message"/>
</androidx.constraintlayout.widget.ConstraintLayout>
