<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="?attr/textH3"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/content_horizontal_padding"/>
    <TextView
        android:textAppearance="?attr/textM1"
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="@dimen/content_horizontal_padding"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/tabs_container"
        android:background="@drawable/cost_tabs_view_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="@dimen/content_horizontal_padding"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/rows_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="@dimen/content_horizontal_padding"/>
    <LinearLayout
        android:id="@+id/links_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="@dimen/rds_content_horizontal_padding_left">
        <TextView
            android:textAppearance="?attr/textM2"
            android:textColor="?attr/blue600"
            android:ellipsize="end"
            android:id="@+id/first_link"
            android:background="@drawable/bg_rds_gray_button"
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:textAppearance="?attr/textM2"
            android:textColor="?attr/blue600"
            android:ellipsize="end"
            android:id="@+id/second_link"
            android:background="@drawable/bg_rds_gray_button"
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</merge>
