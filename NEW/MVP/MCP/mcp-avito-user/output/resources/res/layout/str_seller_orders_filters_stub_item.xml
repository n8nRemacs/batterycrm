<?xml version="1.0" encoding="utf-8"?>
<com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:shimmer="http://schemas.android.com/apk/res-auto"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="14dp"
    shimmer:shimmer_animationDuration="2500"
    shimmer:shimmer_autostart="true">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <View
            android:background="@drawable/str_orders_stub_12dp_bg"
            android:layout_width="120dp"
            android:layout_height="36dp"
            android:layout_marginEnd="3dp"/>
        <View
            android:background="@drawable/str_orders_stub_12dp_bg"
            android:layout_width="80dp"
            android:layout_height="36dp"
            android:layout_marginHorizontal="3dp"/>
        <View
            android:background="@drawable/str_orders_stub_12dp_bg"
            android:layout_width="110dp"
            android:layout_height="36dp"
            android:layout_marginHorizontal="3dp"/>
        <View
            android:background="@drawable/str_orders_stub_12dp_bg"
            android:layout_width="64dp"
            android:layout_height="36dp"
            android:layout_marginStart="3dp"/>
    </LinearLayout>
</com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout>
