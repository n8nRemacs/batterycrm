<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/extended_profile_description"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="?attr/textH30"
        android:id="@+id/extended_text_title"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/extended_profile_widget_horizontal_margin"
        android:layout_marginEnd="@dimen/extended_profile_widget_horizontal_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:ellipsize="end"
        android:id="@+id/extended_text_body"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="@dimen/extended_profile_widget_horizontal_margin"
        android:layout_marginEnd="@dimen/extended_profile_widget_horizontal_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/extended_text_title"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:textColor="?attr/blue"
        android:id="@+id/expand_label"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/extended_profile_expand_info_label"
        app:layout_constraintStart_toStartOf="@+id/extended_text_body"
        app:layout_constraintTop_toBottomOf="@+id/extended_text_body"/>
</androidx.constraintlayout.widget.ConstraintLayout>
