<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp">
        <TextView
            android:id="@+id/re_agent_profile_create_landing_flows_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="?attr/textH10"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/re_agent_profile_create_landing_flows_upgrade_card"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_marginTop="28dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="3dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toStartOf="@+id/re_agent_profile_create_landing_flows_create_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/re_agent_profile_create_landing_flows_title">
            <FrameLayout
                android:id="@+id/re_agent_profile_create_landing_flows_upgrade_card_content"
                android:background="@drawable/bg_image_profile_create_flow"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foreground="@drawable/fg_image_profile_create_flow">
                <ImageView
                    android:layout_gravity="end|bottom"
                    android:id="@+id/re_agent_profile_create_landing_flows_upgrade_image"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:scaleType="fitEnd"
                    android:contentDescription="@null"/>
                <TextView
                    android:layout_gravity="start|top"
                    android:id="@+id/re_agent_profile_create_landing_flows_upgrade_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    style="?attr/textH50"/>
            </FrameLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/re_agent_profile_create_landing_flows_create_card"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_marginTop="28dp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/re_agent_profile_create_landing_flows_upgrade_card"
            app:layout_constraintTop_toBottomOf="@+id/re_agent_profile_create_landing_flows_title">
            <FrameLayout
                android:id="@+id/re_agent_profile_create_landing_flows_create_card_content"
                android:background="@drawable/bg_image_profile_create_flow"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foreground="@drawable/fg_image_profile_create_flow">
                <ImageView
                    android:layout_gravity="end|bottom"
                    android:id="@+id/re_agent_profile_create_landing_flows_create_image"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:scaleType="fitEnd"
                    android:contentDescription="@null"/>
                <TextView
                    android:layout_gravity="start|top"
                    android:id="@+id/re_agent_profile_create_landing_flows_create_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    style="?attr/textH50"/>
            </FrameLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/re_agent_profile_create_landing_flows_info_block"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/re_agent_profile_create_landing_flows_upgrade_card"/>
        <TextView
            android:textColor="?attr/gray54"
            android:id="@+id/re_agent_profile_create_landing_flows_disclaimer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/re_agent_profile_create_landing_flows_info_block"
            style="?attr/textM10"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
