<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/calltracking_sheet_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            style="?attr/textH3"/>
        <TextView
            android:id="@+id/subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            style="?attr/textM1"/>
        <include
            android:id="@+id/calltracking_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            layout="@layout/calltracking_item_view"/>
        <com.avito.android.lib.design.button.Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="32dp"
            android:minHeight="44dp"
            android:text="@string/action_call"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            style="?attr/buttonDefaultMedium"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
