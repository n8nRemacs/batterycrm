<?xml version="1.0" encoding="utf-8"?>
<ru.cyberity.cbr.core.widget.CBRBackgroundConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/cbr_guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_begin="@dimen/cbr_margin_medium"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/cbr_guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_end="@dimen/cbr_margin_medium"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="horizontal"
        android:id="@+id/cbr_guideline_center"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintGuide_percent="0.5"/>
    <ru.cyberity.cbr.core.widget.CBRImageView
        android:id="@+id/cbr_error_icon"
        android:background="@drawable/cbr_bg_circle"
        android:layout_width="@dimen/cbr_icon_size_large"
        android:layout_height="@dimen/cbr_icon_size_large"
        android:layout_marginBottom="@dimen/cbr_margin_medium"
        android:scaleType="center"
        app:layout_constraintBottom_toTopOf="@+id/cbr_error_title"
        app:layout_constraintEnd_toEndOf="@+id/cbr_guideline_end"
        app:layout_constraintStart_toStartOf="@+id/cbr_guideline_start"/>
    <ru.cyberity.cbr.core.widget.CBRH2TextView
        android:gravity="center"
        android:id="@+id/cbr_error_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/cbr_margin_medium"
        android:layout_marginStart="@dimen/cbr_margin_small"
        android:layout_marginEnd="@dimen/cbr_margin_small"
        app:layout_constraintBottom_toTopOf="@+id/cbr_error_subtitle"
        app:layout_constraintEnd_toEndOf="@+id/cbr_guideline_end"
        app:layout_constraintStart_toStartOf="@+id/cbr_guideline_start"/>
    <ru.cyberity.cbr.core.widget.CBRSubtitle2TextView
        android:gravity="center"
        android:id="@+id/cbr_error_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/cbr_margin_small"
        android:layout_marginEnd="@dimen/cbr_margin_small"
        app:layout_constraintEnd_toEndOf="@+id/cbr_guideline_end"
        app:layout_constraintStart_toStartOf="@+id/cbr_guideline_start"
        app:layout_constraintTop_toBottomOf="@+id/cbr_guideline_center"/>
    <ru.cyberity.cbr.core.widget.CBRPrimaryButton
        android:id="@+id/cbr_primary_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/cbr_margin_medium"
        app:layout_constraintBottom_toTopOf="@+id/cbr_powered"
        app:layout_constraintEnd_toEndOf="@+id/cbr_guideline_end"
        app:layout_constraintStart_toStartOf="@+id/cbr_guideline_start"/>
    <ru.cyberity.cbr.core.widget.CBRToolbarView
        android:id="@+id/cbr_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"/>
    <include
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/cbr_margin_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/cbr_guideline_end"
        app:layout_constraintStart_toStartOf="@+id/cbr_guideline_start"
        layout="@layout/cbr_layout_powered"/>
</ru.cyberity.cbr.core.widget.CBRBackgroundConstraintLayout>
