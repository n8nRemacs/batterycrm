<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/location_suggests_item"
    android:background="@drawable/bg_btn_flat"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp">
    <ImageView
        android:id="@+id/image_historical"
        android:visibility="gone"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="12dp"
        android:layout_marginVertical="11dp"
        app:srcCompat="@drawable/ic_time_20"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/item_text_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingVertical="11dp">
        <TextView
            android:textAppearance="?attr/textBody"
            android:textColor="@color/design_text_color_black_selector"
            android:id="@+id/text_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textAppearance="?attr/textBodySmall"
            android:textColor="?attr/gray54"
            android:id="@+id/text_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"/>
    </LinearLayout>
    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/image_check"
        android:visibility="invisible"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="12dp"
        app:srcCompat="?attr/ic_checkRound24"
        app:tint="?attr/black"/>
</LinearLayout>
