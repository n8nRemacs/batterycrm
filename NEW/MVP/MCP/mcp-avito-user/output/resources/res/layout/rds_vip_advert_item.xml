<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.avito.android.serp.AdvertItemLayout
        android:id="@+id/item_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="@drawable/fg_rds_card"
        app:image_height_ratio="2"
        app:image_width_ratio="3"
        app:text_start_offset="@dimen/advert_top_image_start_text_offset">
        <com.avito.android.fresco.SimpleDraweeView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/Widget.Avito.Rds.SimpleDraweeView"/>
        <include layout="@layout/rds_base_advert_item"/>
    </com.avito.android.serp.AdvertItemLayout>
    <TextView
        android:layout_gravity="top|left"
        android:id="@+id/card_info_badge"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/card_badge_margin_left"
        android:layout_marginTop="@dimen/card_badge_margin_top"
        style="@style/Design.Widget.SnippetBadge.Viewed"/>
</FrameLayout>
