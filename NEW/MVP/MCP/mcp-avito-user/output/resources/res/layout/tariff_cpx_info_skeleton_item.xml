<?xml version="1.0" encoding="utf-8"?>
<com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tariff_cpx_info_shimmer_layout"
    android:padding="10dp"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:shimmer_animationDuration="3000"
    app:shimmer_autostart="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/tariff_cpx_info_title_stub"
            android:background="@drawable/shimmer_cpx_stub_text"
            android:layout_width="238dp"
            android:layout_height="21dp"
            android:layout_marginTop="21dp"
            android:layout_marginHorizontal="6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <View
            android:id="@+id/tariff_cpx_info_description_stub"
            android:background="@drawable/shimmer_cpx_stub_description"
            android:layout_width="233dp"
            android:layout_height="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tariff_cpx_info_title_stub"/>
        <View
            android:id="@+id/tariff_cpx_info_block_stub1"
            android:background="@drawable/shimmer_cpx_stub_block"
            android:layout_width="match_parent"
            android:layout_height="206dp"
            android:layout_marginTop="28dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tariff_cpx_info_description_stub"/>
        <View
            android:id="@+id/tariff_cpx_info_block_stub2"
            android:background="@drawable/shimmer_cpx_stub_block"
            android:layout_width="match_parent"
            android:layout_height="206dp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tariff_cpx_info_block_stub1"/>
        <View
            android:id="@+id/tariff_cpx_info_block_stub3"
            android:background="@drawable/shimmer_cpx_stub_block"
            android:layout_width="match_parent"
            android:layout_height="206dp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tariff_cpx_info_block_stub2"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout>
