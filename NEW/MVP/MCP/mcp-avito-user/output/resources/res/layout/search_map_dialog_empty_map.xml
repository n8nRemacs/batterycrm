<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:clipChildren="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textColor="@color/design_text_color_black_selector"
        android:id="@+id/dialog_empty_map_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        style="?attr/textBody"/>
    <com.avito.android.lib.design.button.Button
        android:layout_gravity="bottom|center_horizontal"
        android:id="@+id/dialog_empty_map_action_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        style="?attr/buttonSecondaryMedium"/>
</LinearLayout>
