<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/passport_add_profile_set_profile_name_root"
    android:background="?attr/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/set_profile_name_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/set_profile_name_create_profile"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include
                android:id="@+id/toolbar_container"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                layout="@layout/appbar_look_and_feel"/>
            <TextView
                android:textAppearance="?attr/textH20"
                android:id="@+id/set_profile_name_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="@dimen/extended_profile_creation_horizontal_margin"/>
            <TextView
                android:textAppearance="?attr/textH30"
                android:id="@+id/set_profile_name_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="@dimen/extended_profile_creation_horizontal_margin"/>
            <TextView
                android:textAppearance="?attr/textM10"
                android:id="@+id/set_profile_name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="@dimen/extended_profile_creation_horizontal_margin"/>
            <com.avito.android.lib.design.input.Input
                android:id="@+id/set_profile_name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="@dimen/extended_profile_creation_horizontal_margin"/>
            <TextView
                android:textAppearance="?attr/textS10"
                android:textColor="?attr/red"
                android:id="@+id/set_profile_name_empty_error"
                android:paddingBottom="8dp"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginHorizontal="@dimen/extended_profile_creation_horizontal_margin"/>
        </LinearLayout>
    </ScrollView>
    <com.avito.android.lib.design.button.Button
        android:theme="@style/Theme.DesignSystem.Re23"
        android:id="@+id/set_profile_name_create_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="@dimen/extended_profile_creation_horizontal_margin"
        app:layout_constraintBottom_toTopOf="@+id/set_profile_name_footer"
        style="?attr/buttonPrimaryLarge"/>
    <TextView
        android:textAppearance="?attr/textS20"
        android:textColor="?attr/gray54"
        android:textColorLink="?attr/gray54"
        android:id="@+id/set_profile_name_footer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginHorizontal="@dimen/extended_profile_creation_horizontal_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
