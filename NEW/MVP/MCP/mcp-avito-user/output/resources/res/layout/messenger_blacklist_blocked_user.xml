<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/list_card_horizontal_padding"
    android:paddingRight="@dimen/list_card_horizontal_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:clickable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/AvitoCardView">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/blocked_user_container"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textSize="12sp"
                android:textColor="?attr/gray48"
                android:ellipsize="end"
                android:id="@+id/blocked_user_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:singleLine="true"/>
            <TextView
                android:textSize="16sp"
                android:textColor="?attr/black"
                android:ellipsize="end"
                android:id="@+id/blocked_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:singleLine="true"/>
            <TextView
                android:textSize="14sp"
                android:textColor="?attr/black"
                android:ellipsize="end"
                android:id="@+id/blocked_user_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="16dp"
                android:maxLines="2"
                android:lineSpacingExtra="3sp"/>
            <TextView
                android:textSize="14sp"
                android:textColor="?attr/gray48"
                android:ellipsize="end"
                android:id="@+id/blocked_user_item_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="16dp"
                android:singleLine="true"/>
            <TextView
                android:textSize="14sp"
                android:textColor="?attr/gray48"
                android:ellipsize="end"
                android:id="@+id/blocked_user_item_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="16dp"
                android:singleLine="true"/>
            <View
                android:background="?attr/gray8"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:textSize="14sp"
                android:textColor="?attr/blue"
                android:gravity="start|center_vertical"
                android:id="@+id/blocked_user_unblock_button"
                android:background="@drawable/btn_transparent_states"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@string/unblock"
                android:drawablePadding="24dp"
                app:drawableStartCompat="@drawable/ic_good_24_blue"
                style="@style/AvitoButton"/>
            <ProgressBar
                android:id="@+id/blocked_user_unblocking_progress"
                android:padding="12dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:indeterminate="true"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>
