<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/system_dialer_fake_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Этот экран в тесте заменяет открытие системного приложения для звонков. Ниже указан action и tel с которым он был открыт."/>
    <TextView
        android:gravity="center"
        android:id="@+id/fake_dialer_activity_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"/>
    <TextView
        android:gravity="center"
        android:id="@+id/fake_dialer_activity_tel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"/>
    <Button
        android:id="@+id/fake_dialer_close_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Закрыть"/>
</LinearLayout>
