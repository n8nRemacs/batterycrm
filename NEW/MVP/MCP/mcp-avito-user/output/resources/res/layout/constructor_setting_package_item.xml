<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constructor_setting_package_item"
    android:background="@drawable/bg_package_angle_round"
    android:paddingTop="20dp"
    android:paddingBottom="36dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="24dp"
    android:paddingEnd="24dp">
    <TextView
        android:textAppearance="?attr/textH4"
        android:id="@+id/tv_category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/fl_remove_icon_container"
        app:layout_constraintEnd_toStartOf="@+id/fl_remove_icon_container"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fl_remove_icon_container"/>
    <FrameLayout
        android:id="@+id/fl_remove_icon_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/iv_remove_package"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="?attr/ic_close20"
            app:tint="?attr/black"/>
        <com.avito.android.lib.design.spinner.Spinner
            android:id="@+id/progress_bar"
            android:visibility="gone"
            android:layout_width="20dp"
            android:layout_height="20dp"
            style="?attr/spinnerDarkLarge"/>
    </FrameLayout>
    <TextView
        android:textAppearance="?attr/textM1"
        android:ellipsize="end"
        android:id="@+id/tv_subcategories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:maxLines="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fl_remove_icon_container"/>
    <TextView
        android:textAppearance="?attr/textM1"
        android:textColor="?attr/gray54"
        android:ellipsize="end"
        android:id="@+id/tv_locations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:maxLines="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_subcategories"/>
    <TextView
        android:textAppearance="?attr/textH4"
        android:id="@+id/tv_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_locations"/>
    <com.avito.android.tariff_lf_constructor.configure.common.ui.PriceDotsView
        android:id="@+id/discount_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_size"
        app:titleAppearance="?attr/textM1"
        app:valueAppearance="?attr/textM1"/>
    <com.avito.android.tariff_lf_constructor.configure.common.ui.PriceDotsView
        android:id="@+id/price_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/discount_view"
        app:titleAppearance="?attr/textH5"
        app:valueAppearance="?attr/textH5"/>
    <View
        android:id="@+id/progress_shadow_view"
        android:background="@color/common_warm_gray_2"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
