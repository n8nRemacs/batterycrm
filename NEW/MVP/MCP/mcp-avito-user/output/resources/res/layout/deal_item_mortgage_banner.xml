<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mortgage_banner_item"
    android:background="@drawable/bg_mortgage_banner"
    android:paddingBottom="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="32dp"
    android:layout_marginHorizontal="10dp"
    android:paddingHorizontal="16dp">
    <ImageView
        android:id="@+id/close"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:src="?attr/ic_close20"
        android:contentDescription="@string/close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?attr/gray54"/>
    <ImageView
        android:id="@+id/mortgage_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:src="@drawable/product_specific_expected_mortgage_percent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textH25"
        android:gravity="center"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-20dp"
        android:text="@string/mortgage_banner_title"
        app:layout_constraintTop_toBottomOf="@+id/mortgage_image"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:gravity="center"
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/mortgage_banner_description"
        app:layout_constraintTop_toBottomOf="@+id/title"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/mortgage_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/mortgage_banner_mortgage_button"
        app:layout_constraintTop_toBottomOf="@+id/description"
        style="?attr/buttonPrimaryLarge"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/consultation_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="@string/mortgage_banner_consultation_button"
        app:button_shadowEnabled="false"
        app:layout_constraintTop_toBottomOf="@+id/mortgage_button"
        style="?attr/buttonOverlayPrimaryLarge"/>
</androidx.constraintlayout.widget.ConstraintLayout>
