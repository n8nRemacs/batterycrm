<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/order_layout"
    android:background="@drawable/bg_warm_gray_rounded_corners_12dp"
    android:layout_width="wrap_content"
    android:layout_height="81dp">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/order_image_container"
        android:layout_width="76dp"
        android:layout_height="57dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.avito.android.fresco.SimpleDraweeView
            android:id="@+id/order_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:roundedCornerRadius="6dp"
            app:viewAspectRatio="1.33"/>
        <View
            android:id="@+id/order_image_shadow"
            android:background="@drawable/order_shadow"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="2dp"
            android:layout_marginHorizontal="3dp"/>
    </LinearLayout>
    <TextView
        android:ellipsize="end"
        android:id="@+id/order_title"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:maxLines="1"
        android:layout_marginStart="12dp"
        app:layout_constraintEnd_toStartOf="@+id/order_barrier"
        app:layout_constraintStart_toEndOf="@+id/order_image_container"
        app:layout_constraintTop_toTopOf="parent"
        style="?attr/textH6"/>
    <TextView
        android:ellipsize="end"
        android:id="@+id/order_description"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:maxLines="2"
        android:layout_marginStart="12dp"
        app:layout_constraintEnd_toStartOf="@+id/order_barrier"
        app:layout_constraintStart_toEndOf="@+id/order_image_container"
        app:layout_constraintTop_toBottomOf="@+id/order_title"
        style="?attr/textS2"/>
    <androidx.constraintlayout.widget.Barrier
        android:orientation="vertical"
        android:id="@+id/order_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="end"
        app:constraint_referenced_ids="order_title, order_description"/>
    <com.avito.android.lib.design.badge.Badge
        android:theme="@style/Theme.DesignSystem.Re23"
        android:id="@+id/order_attention_badge"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/order_barrier"
        app:layout_constraintTop_toTopOf="@+id/order_title"
        app:layout_goneMarginEnd="12dp"
        style="?attr/badgeTextRedS"/>
</androidx.constraintlayout.widget.ConstraintLayout>
