<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:windowBackground="?attr/transparentBlack"
    android:orientation="vertical"
    android:id="@+id/inline_filters_range_dialog_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:paddingStart="@dimen/inline_filter_dialog_horizontal_padding"
    android:paddingEnd="@dimen/inline_filter_dialog_horizontal_padding">
    <include layout="@layout/inline_filter_dialog_header"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/inline_filter_dialog_horizontal_padding"
        android:layout_marginEnd="@dimen/inline_filter_dialog_horizontal_padding">
        <com.avito.android.lib.design.input.Input
            android:id="@+id/inline_filter_from_input"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="@string/from_input_hint"
            android:layout_weight="1"
            android:inputType="number"
            android:imeOptions="flagNoExtractUi|actionNext"
            android:layout_marginStart="@dimen/inline_filter_price_input_outer_margin"
            android:layout_marginEnd="@dimen/inline_filter_price_input_inner_margin"
            android:focusedByDefault="true"
            app:input_clearButtonUnfocused="true"
            style="?attr/input"/>
        <com.avito.android.lib.design.input.Input
            android:id="@+id/inline_filter_to_input"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="@string/to_input_hint"
            android:layout_weight="1"
            android:inputType="number"
            android:imeOptions="flagNoExtractUi|actionDone"
            android:layout_marginStart="@dimen/inline_filter_price_input_inner_margin"
            android:layout_marginEnd="@dimen/inline_filter_price_input_outer_margin"
            app:input_clearButtonUnfocused="true"
            style="?attr/input"/>
    </LinearLayout>
    <com.avito.android.lib.design.button.Button
        android:layout_gravity="top|center_horizontal"
        android:id="@+id/apply_btn"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/inline_filter_range_apply_btn_margin_top"
        android:layout_marginBottom="@dimen/inline_filter_range_apply_btn_margin_bottom"
        android:maxHeight="@dimen/inline_filter_range_apply_btn_height"
        android:minHeight="@dimen/inline_filter_range_apply_btn_height"
        android:text="@string/apply_button_text"
        android:layout_marginStart="@dimen/inline_filter_dialog_horizontal_padding"
        android:layout_marginEnd="@dimen/inline_filter_dialog_horizontal_padding"
        style="?attr/buttonPrimaryLarge"/>
</LinearLayout>
