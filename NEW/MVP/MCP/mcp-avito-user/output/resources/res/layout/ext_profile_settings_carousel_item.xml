<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/extended_settings_carousel_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_begin="@dimen/extended_profile_settings_horizontal_margin"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_end="@dimen/extended_profile_settings_horizontal_margin"/>
    <TextView
        android:textAppearance="?attr/textH30"
        android:id="@+id/extended_settings_carousel_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toStartOf="@+id/extended_settings_carousel_item_more_button"
        app:layout_constraintStart_toStartOf="@+id/guideline_start"
        app:layout_constraintTop_toTopOf="@+id/extended_settings_carousel_item_more_button"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/extended_settings_carousel_item_more_button"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:src="?attr/ic_more24"
        app:button_backgroundColor="?attr/white"
        app:button_iconColor="?attr/black"
        app:layout_constraintEnd_toEndOf="@+id/guideline_end"
        app:layout_constraintTop_toTopOf="parent"
        style="?attr/buttonBrandWhiteMedium"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:id="@+id/extended_settings_carousel_item_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toStartOf="@+id/extended_settings_carousel_item_more_button"
        app:layout_constraintStart_toStartOf="@+id/extended_settings_carousel_item_title"
        app:layout_constraintTop_toBottomOf="@+id/extended_settings_carousel_item_title"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/extended_settings_carousel_item_create_carousel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/guideline_start"
        app:layout_constraintTop_toBottomOf="@+id/extended_settings_carousel_item_subtitle"
        style="?attr/buttonDefaultSmall"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/extended_settings_carousel_item_rv_barrier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:barrierMargin="16dp"
        app:constraint_referenced_ids="extended_settings_carousel_item_title, extended_settings_carousel_item_subtitle"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/extended_settings_carousel_item_recycler_view"
        android:visibility="gone"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/extended_profile_settings_horizontal_margin"
        android:paddingEnd="@dimen/extended_profile_settings_horizontal_margin"
        app:layout_constraintTop_toBottomOf="@+id/extended_settings_carousel_item_rv_barrier"/>
    <com.avito.android.lib.design.list_item.ListItemSwitcher
        android:id="@+id/extended_settings_carousel_item_enable_switcher"
        android:clickable="true"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline_end"
        app:layout_constraintStart_toStartOf="@+id/guideline_start"
        app:layout_constraintTop_toBottomOf="@+id/extended_settings_carousel_item_recycler_view"
        app:listItem_checked="false"
        app:listItem_contentMinHeight="20dp"
        app:listItem_subtitleColor="?attr/gray48"
        app:listItem_switcherMarginTop="0dp"
        app:listItem_textMarginBottom="0dp"
        app:listItem_textMarginTop="0dp"
        app:listItem_title="@string/extended_profile_settings_carousel_enable_switcher"
        style="?attr/listItemSwitcher"/>
    <include
        android:id="@+id/include"
        layout="@layout/inactive_fill_constraint"/>
</androidx.constraintlayout.widget.ConstraintLayout>
