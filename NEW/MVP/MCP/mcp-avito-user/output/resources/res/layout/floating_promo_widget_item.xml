<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:id="@+id/floating_promo_widget"
    android:layout_width="match_parent"
    android:layout_height="@dimen/serp_floating_widget_height">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/floating_promo_background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:actualImageScaleType="fitXY"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/serp_floating_widget_height">
        <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:id="@+id/horizontal_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_begin="@dimen/serp_floating_widget_padding"/>
        <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:id="@+id/vertical_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_begin="@dimen/serp_floating_widget_padding"/>
        <TextView
            android:id="@+id/floating_promo_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/floating_promo_subtitle"
            app:layout_constraintStart_toEndOf="@+id/vertical_guideline"
            app:layout_constraintTop_toBottomOf="@+id/horizontal_guideline"
            style="?attr/textH40"/>
        <com.avito.android.lib.design.header_button.HeaderButton
            android:id="@+id/floating_promo_header_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="6dp"
            app:headerButton_textIconStyleAttr="?attr/textIconHeaderbuttonArrow"
            app:layout_constraintBottom_toBottomOf="@+id/floating_promo_title"
            app:layout_constraintStart_toEndOf="@+id/floating_promo_title"
            app:layout_constraintTop_toTopOf="@+id/floating_promo_title"
            style="?attr/headerButtonH40"/>
        <TextView
            android:id="@+id/floating_promo_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/floating_promo_title"
            app:layout_constraintTop_toBottomOf="@+id/floating_promo_title"
            style="?attr/textM20"/>
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/floating_promo_image"
            android:layout_width="@dimen/serp_floating_widget_icon_width"
            android:layout_height="@dimen/serp_floating_widget_height"
            app:actualImageScaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
