<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/difference_imv_avg_price_block_margin_top"
    android:layout_marginBottom="@dimen/difference_imv_avg_price_block_margin_bottom"
    android:paddingHorizontal="@dimen/imv_cars_horizontal_padding">
    <TextView
        android:textAppearance="?attr/textH3"
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/imv_params_card_header_margin_bottom"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/imv_params_card"
        android:background="@drawable/bg_imv_params_card"
        android:paddingBottom="@dimen/imv_params_card_padding_bottom"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:paddingHorizontal="@dimen/imv_params_card_horizontal_padding">
        <TextView
            android:textAppearance="?attr/textH4"
            android:id="@+id/imv_params_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/imv_params_card_content_header_margin_top"
            android:layout_marginBottom="@dimen/imv_params_card_content_header_margin_bottom"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/avg_price_params_card"
        android:background="@drawable/bg_avg_price_params_card"
        android:paddingBottom="@dimen/imv_params_card_padding_bottom"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/imv_params_card_horizontal_padding">
        <TextView
            android:textAppearance="?attr/textH4"
            android:id="@+id/avg_price_params_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/imv_params_card_content_header_margin_top"
            android:layout_marginBottom="@dimen/imv_params_card_content_header_margin_bottom"/>
    </LinearLayout>
</LinearLayout>
