<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="vertical"
    android:id="@+id/cpx_promo_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.avito.android.lib.design.nav_bar.NavBar
        android:id="@+id/cpx_promo_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <include
            android:id="@+id/cpx_promo_loading_container"
            layout="@layout/cpx_promo_v2_fragment_loading"/>
        <include
            android:id="@+id/cpx_promo_content_container"
            android:visibility="gone"
            layout="@layout/cpx_promo_v2_fragment_content"/>
    </FrameLayout>
</LinearLayout>
