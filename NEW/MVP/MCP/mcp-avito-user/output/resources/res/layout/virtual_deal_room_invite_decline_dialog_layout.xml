<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title_decline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="?attr/textH20"/>
        <ImageView
            android:id="@+id/close_icon"
            android:background="?attr/selectableItemBackground"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="8dp"
            android:src="?attr/ic_close16"
            android:scaleType="centerInside"
            android:contentDescription="@null"/>
    </LinearLayout>
    <TextView
        android:id="@+id/description_decline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="6dp"
        style="?attr/textM20"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/accept_button_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?attr/buttonPrimaryLarge"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/decline_button_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        style="?attr/buttonSecondaryLarge"/>
</LinearLayout>
