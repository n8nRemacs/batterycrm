<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tariff_cpt_configure_levels_card_container"
    android:background="@drawable/tariff_cpt_configure_levels_card_bg"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="298dp"
    android:layout_height="match_parent"
    android:layout_marginTop="14dp"
    android:paddingHorizontal="24dp">
    <com.avito.android.lib.design.docking_badge.DockingBadgeContainer
        android:id="@+id/tariff_cpt_configure_levels_card_badge_bar"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-14dp"
        android:layout_marginHorizontal="-12dp"
        app:dockingBadgeContainer_badgeSize="medium"
        app:dockingBadgeContainer_numberOfLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="?attr/dockingBadgeContainerMedium"/>
    <FrameLayout
        android:id="@+id/tariff_cpt_configure_levels_card_badge_frame"
        android:background="@drawable/tariff_cpt_configure_levels_badge_bg"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-16dp"
        android:layout_marginHorizontal="-16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.avito.android.lib.design.badge.Badge
            android:id="@+id/tariff_cpt_configure_levels_card_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            style="?attr/badgeTextLarge"/>
    </FrameLayout>
    <TextView
        android:id="@+id/tariff_cpt_configure_levels_card_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/tariff_cpt_configure_levels_card_action_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tariff_cpt_configure_levels_card_title"
        style="?attr/buttonPrimaryLarge"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/tariff_cpt_configure_levels_card_advantages_list_container"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tariff_cpt_configure_levels_card_action_button"/>
    <com.avito.android.fresco.SimpleDraweeView
        android:id="@+id/tariff_cpt_configure_levels_card_other_advantage_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        app:actualImageScaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tariff_cpt_configure_levels_card_advantages_list_container"
        app:layout_constraintVertical_bias="1"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:id="@+id/tariff_cpt_configure_levels_card_other_advantage_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:drawablePadding="2dp"
        android:layout_marginStart="12dp"
        app:drawableEndCompat="?attr/ic_arrowRight16"
        app:drawableTint="?attr/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tariff_cpt_configure_levels_card_other_advantage_icon"
        app:layout_constraintTop_toTopOf="@+id/tariff_cpt_configure_levels_card_other_advantage_icon"
        app:layout_constraintVertical_bias="0.5"/>
</androidx.constraintlayout.widget.ConstraintLayout>
