<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="vertical"
    android:id="@+id/sbc_auto_dispatches_root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/sbc_auto_dispatches_toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_back_24"
        app:title="Рассылки"
        app:titleCentered="true"
        app:titleTextAppearance="?attr/textH5"/>
    <FrameLayout
        android:id="@+id/sbc_auto_dispatches_content_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sbc_auto_dispatches_toolbar">
        <FrameLayout
            android:id="@+id/sbc_auto_dispatches_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/sbc_auto_dispatches_content_loaded"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.avito.android.lib.design.tab_group.TabGroup
                    android:theme="@style/Theme.DesignSystem.Re23"
                    android:id="@+id/sbc_auto_dispatches_tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="?attr/tabGroupXl"/>
                <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                    android:orientation="vertical"
                    android:id="@+id/sbc_auto_dispatches_swipe_refresh_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/sbc_auto_dispatches_view_pager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
            </LinearLayout>
            <ScrollView
                android:id="@+id/sbc_auto_dispatches_content_empty"
                android:paddingBottom="85dp"
                android:clipToPadding="false"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <include layout="@layout/sbc_auto_dispatch_empty_content"/>
            </ScrollView>
        </FrameLayout>
    </FrameLayout>
    <com.avito.android.lib.design.floating_container.FloatingContainer
        android:id="@+id/sbc_auto_dispatch_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Выбрать объявление"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="?attr/floatingContainerOneButtonPrimary"/>
</androidx.constraintlayout.widget.ConstraintLayout>
