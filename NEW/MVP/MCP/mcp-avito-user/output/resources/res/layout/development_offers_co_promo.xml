<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/development_offers_co_promo_carousel_item_width"
    android:layout_height="@dimen/development_offers_carousel_item_height"
    android:clipToOutline="true">
    <ImageView
        android:id="@+id/development_offers_gradient"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:id="@+id/development_offers_carousel_offer"
        android:background="@drawable/development_offer_background_rounded"
        android:layout_width="@dimen/development_offers_co_promo_carousel_item_width"
        android:layout_height="@dimen/development_offers_carousel_item_height"
        android:clipToOutline="true">
        <FrameLayout
            android:padding="@dimen/development_offers_carousel_item_content_padding"
            android:layout_width="@dimen/development_offers_carousel_item_width"
            android:layout_height="@dimen/development_offers_carousel_item_height">
            <TextView
                android:textAppearance="?attr/textH4"
                android:textColor="@color/development_offers_carousel_offer_title"
                android:ellipsize="end"
                android:layout_gravity="start|top"
                android:id="@+id/development_offers_carousel_offer_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"/>
            <LinearLayout
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textAppearance="?attr/textM1"
                    android:textColor="@color/development_offers_carousel_offer_date"
                    android:ellipsize="end"
                    android:layout_gravity="start|center_vertical"
                    android:id="@+id/development_offers_carousel_offer_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_weight="1"
                    android:textAlignment="textStart"/>
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/development_offers_additional_info"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    app:srcCompat="@drawable/ic_development_sales_offer_info"/>
            </LinearLayout>
        </FrameLayout>
        <com.avito.android.fresco.SimpleDraweeView
            android:id="@+id/development_offers_icon"
            android:layout_width="120dp"
            android:layout_height="116dp"
            android:adjustViewBounds="true"
            android:layout_marginStart="8dp"/>
    </LinearLayout>
</FrameLayout>
