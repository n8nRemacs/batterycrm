<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:id="@+id/autoteka_report_generation_response_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="24dp">
    <include layout="@layout/autoteka_car_animate_view"/>
    <TextView
        android:textAppearance="?attr/textH20"
        android:gravity="center_horizontal"
        android:id="@+id/autoteka_report_generation_response_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:gravity="center_horizontal"
        android:id="@+id/autoteka_report_generation_response_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>
    <com.avito.android.lib.design.button.Button
        android:layout_gravity="center_horizontal"
        android:id="@+id/autoteka_report_generation_response_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/autoteka_ok_button"
        android:layout_marginVertical="16dp"
        style="?attr/buttonPrimaryLarge"/>
</LinearLayout>
