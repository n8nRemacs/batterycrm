<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:id="@+id/advert_details_comfortable_deal_promo_block_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    app:cardCornerRadius="28dp"
    app:cardElevation="0dp">
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_gravity="end|bottom"
        android:id="@+id/image"
        android:layout_width="165dp"
        android:layout_height="134dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/advert_details_comfortable_deal_promo_block_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAppearance="?attr/textH20"
            android:id="@+id/title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="24dp"/>
        <TextView
            android:textAppearance="?attr/textM10"
            android:id="@+id/subtitle_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginHorizontal="24dp"/>
        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="40dp"
            android:layout_marginEnd="64dp"
            android:layout_marginHorizontal="24dp"
            app:alignContent="flex_start"
            app:alignItems="flex_start"
            app:flexDirection="row"
            app:flexWrap="wrap"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
