<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/user_contact_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/user_contact_item_image"
        android:layout_width="80dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:roundedCornerRadius="8dp"
        style="@style/Widget.Avito.SimpleDraweeView.UserContactAvatar"/>
    <TextView
        android:textAppearance="?attr/textH50"
        android:ellipsize="end"
        android:id="@+id/user_contact_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toStartOf="@+id/user_contact_item_remove"
        app:layout_constraintStart_toEndOf="@+id/user_contact_item_image"
        app:layout_constraintTop_toTopOf="@+id/user_contact_item_image"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:ellipsize="end"
        android:id="@+id/user_contact_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="@+id/user_contact_item_name"
        app:layout_constraintStart_toStartOf="@+id/user_contact_item_name"
        app:layout_constraintTop_toBottomOf="@+id/user_contact_item_name"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:ellipsize="end"
        android:id="@+id/user_contact_item_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="@+id/user_contact_item_title"
        app:layout_constraintStart_toStartOf="@+id/user_contact_item_title"
        app:layout_constraintTop_toBottomOf="@+id/user_contact_item_title"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/user_contact_item_remove"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="?attr/ic_close20"
        app:button_iconColor="?attr/gray54"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.avito.android.rating.user_contacts.UserContactRatingSelectView
        android:id="@+id/user_contact_item_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/user_contact_item_image"/>
</androidx.constraintlayout.widget.ConstraintLayout>
