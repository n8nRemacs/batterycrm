<?xml version="1.0" encoding="utf-8"?>
<ru.cyberity.cbr.core.widget.CBRBackgroundConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cbr_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/cbr_guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_begin="@dimen/cbr_margin_medium"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/cbr_guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_end="@dimen/cbr_margin_medium"/>
    <ru.cyberity.cbr.core.widget.CBRH1TextView
        android:gravity="center"
        android:id="@+id/cbr_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/cbr_margin_medium_small"
        app:layout_constraintEnd_toEndOf="@+id/cbr_guideline_end"
        app:layout_constraintStart_toStartOf="@+id/cbr_guideline_start"
        app:layout_constraintTop_toBottomOf="@+id/cbr_toolbar"/>
    <ru.cyberity.cbr.core.widget.CBRSubtitle2TextView
        android:gravity="center"
        android:id="@+id/cbr_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/cbr_margin_small"
        app:layout_constraintEnd_toEndOf="@+id/cbr_guideline_end"
        app:layout_constraintStart_toStartOf="@+id/cbr_guideline_start"
        app:layout_constraintTop_toBottomOf="@+id/cbr_title"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cbr_list"
        android:paddingTop="@dimen/cbr_margin_medium"
        android:paddingBottom="@dimen/cbr_margin_medium"
        android:scrollbars="none"
        android:clipToPadding="false"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/cbr_margin_small"
        android:layout_marginBottom="@dimen/cbr_margin_small"
        android:overScrollMode="never"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toTopOf="@+id/cbr_footer"
        app:layout_constraintEnd_toEndOf="@+id/cbr_guideline_end"
        app:layout_constraintStart_toStartOf="@+id/cbr_guideline_start"
        app:layout_constraintTop_toBottomOf="@+id/cbr_subtitle"
        app:layout_constraintVertical_bias="0.25"/>
    <ru.cyberity.cbr.core.widget.CBRCaptionTextView
        android:gravity="center"
        android:id="@+id/cbr_footer"
        android:scrollbars="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/cbr_margin_medium"
        android:maxLines="@integer/cbr_footer_max_lines"
        android:layout_marginStart="@dimen/cbr_margin_small"
        android:layout_marginEnd="@dimen/cbr_margin_small"
        app:layout_constraintBottom_toTopOf="@+id/cbr_primary_button"
        app:layout_constraintEnd_toEndOf="@+id/cbr_guideline_end"
        app:layout_constraintStart_toStartOf="@+id/cbr_guideline_start"/>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/cbr_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/cbr_footer"
        app:layout_constraintTop_toBottomOf="@+id/cbr_toolbar"/>
    <ru.cyberity.cbr.core.widget.CBRPrimaryButton
        android:id="@+id/cbr_primary_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/cbr_margin_medium"
        app:layout_constraintBottom_toTopOf="@+id/cbr_powered"
        app:layout_constraintEnd_toEndOf="@+id/cbr_guideline_end"
        app:layout_constraintStart_toStartOf="@+id/cbr_guideline_start"/>
    <ru.cyberity.cbr.core.widget.CBRToolbarView
        android:id="@+id/cbr_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <include
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/cbr_margin_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/cbr_guideline_end"
        app:layout_constraintStart_toStartOf="@+id/cbr_guideline_start"
        layout="@layout/cbr_layout_powered"/>
</ru.cyberity.cbr.core.widget.CBRBackgroundConstraintLayout>
