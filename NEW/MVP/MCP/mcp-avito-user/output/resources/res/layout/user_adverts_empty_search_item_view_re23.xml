<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="vertical"
    android:id="@+id/user_adverts_list_search_empty_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="24dp"
    android:paddingVertical="34dp">
    <TextView
        android:textAppearance="?attr/textH20"
        android:gravity="center"
        android:id="@+id/user_adverts_list_search_empty_container_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/user_adverts_search_empty_title"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:gravity="center"
        android:id="@+id/user_adverts_list_search_empty_container_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/user_adverts_search_empty_description"/>
</LinearLayout>
