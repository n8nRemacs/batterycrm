<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="horizontal"
    android:paddingTop="9dp"
    android:paddingBottom="9dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sbc_auto_dispatches_item_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:backgroundImage="?attr/gray8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:placeholderImage="@drawable/ic_stub_white_18"
        app:roundedCornerRadius="12dp"/>
    <TextView
        android:textAppearance="?attr/textS20"
        android:textColor="?attr/black"
        android:ellipsize="end"
        android:id="@+id/sbc_auto_dispatches_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_marginStart="13dp"
        android:layout_toEndOf="@+id/sbc_auto_dispatches_item_image"
        app:layout_constraintEnd_toStartOf="@+id/sbc_auto_dispatches_item_status_result"
        app:layout_constraintStart_toEndOf="@+id/sbc_auto_dispatches_item_image"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textXs10"
        android:textColor="?attr/warmGray54"
        android:ellipsize="end"
        android:id="@+id/sbc_auto_dispatches_item_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_below="@+id/sbc_auto_dispatches_item_title"
        android:layout_marginStart="13dp"
        android:layout_toEndOf="@+id/sbc_auto_dispatches_item_image"
        app:layout_constraintEnd_toStartOf="@+id/sbc_auto_dispatches_item_status_result"
        app:layout_constraintStart_toEndOf="@+id/sbc_auto_dispatches_item_image"
        app:layout_constraintTop_toBottomOf="@+id/sbc_auto_dispatches_item_title"/>
    <TextView
        android:textAppearance="?attr/textS20"
        android:textColor="?attr/black"
        android:id="@+id/sbc_auto_dispatches_item_status_result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="6dp"
        android:layout_marginStart="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="wrap"
        app:layout_constraintWidth_percent="0.5"/>
</androidx.constraintlayout.widget.ConstraintLayout>
