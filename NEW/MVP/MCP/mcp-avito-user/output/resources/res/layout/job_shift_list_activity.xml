<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/shift_list_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.avito.android.lib.design.nav_bar.NavBar
            android:id="@+id/navbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/content_list"
            android:paddingTop="20dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/navbar"/>
        <com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout
            android:id="@+id/loading"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/navbar"
            app:shimmer_animationDuration="3000"
            style="?attr/shimmerDefault">
            <com.avito.android.lib.design.skeleton.Skeleton
                android:id="@+id/skeleton"
                android:layout_width="164dp"
                android:layout_height="12dp"
                android:layout_marginTop="26dp"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:skeleton_radius="16dp"/>
            <com.avito.android.lib.design.skeleton.Skeleton
                android:id="@+id/skeleton2"
                android:layout_width="138dp"
                android:layout_height="21dp"
                android:layout_marginTop="65dp"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/skeleton"
                app:skeleton_radius="16dp"/>
            <com.avito.android.lib.design.skeleton.Skeleton
                android:layout_width="240dp"
                android:layout_height="12dp"
                android:layout_marginTop="98dp"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/skeleton2"
                app:skeleton_radius="16dp"/>
            <com.avito.android.lib.design.skeleton.Skeleton
                android:layout_width="164dp"
                android:layout_height="12dp"
                android:layout_marginTop="120dp"
                android:layout_marginStart="16dp"
                app:skeleton_radius="16dp"/>
            <com.avito.android.lib.design.skeleton.Skeleton
                android:layout_width="111dp"
                android:layout_height="12dp"
                android:layout_marginTop="142dp"
                android:layout_marginStart="16dp"
                app:skeleton_radius="16dp"/>
            <com.avito.android.lib.design.skeleton.Skeleton
                android:layout_width="207dp"
                android:layout_height="12dp"
                android:layout_marginTop="164dp"
                android:layout_marginStart="16dp"
                app:skeleton_radius="16dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="198dp"
                android:layout_marginHorizontal="16dp">
                <com.avito.android.lib.design.skeleton.Skeleton
                    android:id="@+id/first"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="54.67"
                    app:skeleton_radius="12dp"/>
                <com.avito.android.lib.design.skeleton.Skeleton
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="34.67"
                    android:layout_marginStart="8dp"
                    app:skeleton_radius="12dp"/>
            </LinearLayout>
        </com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout>
        <View
            android:id="@+id/error_divider"
            android:background="?attr/gray8"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/navbar"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/error_root"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/error_logo"
                android:visibility="gone"
                android:layout_width="210.6dp"
                android:layout_height="139.37dp"
                android:importantForAccessibility="no"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:textAppearance="?attr/textH20"
                android:id="@+id/error_title"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView"/>
            <TextView
                android:textAppearance="?attr/textM20"
                android:gravity="center"
                android:id="@+id/error_subtitle"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/error_title"/>
        </LinearLayout>
        <com.avito.android.lib.design.button.Button
            android:id="@+id/refresh_button"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            style="?attr/buttonPrimaryLarge"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
