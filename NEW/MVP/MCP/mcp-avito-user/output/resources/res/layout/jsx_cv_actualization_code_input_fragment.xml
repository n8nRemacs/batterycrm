<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/code_input_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/code_input_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="?attr/ic_arrowBack24"/>
    <TextView
        android:textAppearance="?attr/textH2"
        android:id="@+id/code_input_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/jsx_cv_actualization_code_title"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/code_input_toolbar"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:id="@+id/code_input_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/code_input_title"/>
    <com.avito.android.lib.design.component_container.ComponentContainer
        android:id="@+id/code_input_field_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/code_input_subtitle">
        <com.avito.android.lib.design.input.Input
            android:id="@+id/code_input_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/jsx_cv_actualization_confirm_code_hint"
            android:maxLength="5"
            android:inputType="number"
            android:imeOptions="flagNoExtractUi|actionDone"
            app:input_formatterType="numeric"
            style="?attr/inputDefaultL"/>
    </com.avito.android.lib.design.component_container.ComponentContainer>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/code_input_retry_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/code_input_confirm_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="?attr/buttonDefaultLarge"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/code_input_confirm_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/jsx_cv_actualization_continue"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="?attr/buttonPrimaryLarge"/>
    <include
        android:id="@+id/code_input_progress"
        android:paddingTop="?attr/actionBarSize"
        layout="@layout/semitransparent_progress"/>
</androidx.constraintlayout.widget.ConstraintLayout>
