<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:shimmer="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/publish_container_horizontal_padding"
    android:paddingRight="@dimen/publish_container_horizontal_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout
        android:layout_gravity="center"
        android:id="@+id/instant_market_value_skeleton"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        shimmer:shimmer_animationDuration="3000"
        shimmer:shimmer_autostart="true"
        shimmer:shimmer_color="@color/legacy_gray_shimmer"
        shimmer:shimmer_gradientCenterColorWidth="0.1"
        shimmer:shimmer_maskWidth="1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:background="@drawable/design_shimmer_textview_bg"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:layout_marginRight="14dp"/>
            <View
                android:background="@drawable/design_shimmer_textview_bg"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="198dp"/>
            <View
                android:background="@drawable/design_shimmer_textview_bg"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="120dp"/>
            <View
                android:background="@drawable/design_shimmer_textview_bg"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="120dp"/>
            <View
                android:background="@drawable/design_shimmer_textview_bg"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="76dp"/>
        </LinearLayout>
    </com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/instant_market_value_container"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</FrameLayout>
