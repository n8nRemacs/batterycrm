<?xml version="1.0" encoding="utf-8"?>
<com.avito.android.lib.design.bottom_sheet.BoundedFrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:id="@+id/bottom_entry_point"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:maxWidth="180dp">
    <com.avito.android.lib.design.button.Button
        android:layout_gravity="center"
        android:id="@+id/bottom_entry_point_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:button_compoundDrawablePadding="4dp"
        app:button_iconPaddingLeft="14dp"
        app:button_iconPaddingRight="13dp"
        app:button_textPaddingRight="16dp"
        style="?attr/buttonOverlayPrimarySmall"/>
    <View
        android:layout_gravity="center"
        android:id="@+id/bottom_entry_point_cancel_area"
        android:layout_width="46dp"
        android:layout_height="44dp"
        android:layout_marginEnd="-5dp"/>
</com.avito.android.lib.design.bottom_sheet.BoundedFrameLayout>
