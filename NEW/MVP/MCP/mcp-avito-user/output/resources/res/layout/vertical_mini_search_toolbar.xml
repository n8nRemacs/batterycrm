<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:theme="@style/Theme.DesignSystem.Re23"
        android:id="@+id/mini_search_collapsing_toolbar"
        android:visibility="gone"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentScrim="?attr/white"
        app:layout_scrollFlags="snap|exitUntilCollapsed|scroll"
        app:scrimAnimationDuration="100"
        app:scrimVisibleHeightTrigger="96dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="?attr/textH10"
                android:id="@+id/mini_search_collapsing_title"
                android:fitsSystemWindows="true"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="86dp"
                android:layout_marginBottom="16dp"
                android:layout_marginHorizontal="@dimen/content_horizontal_padding"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/mini_search_collapsing_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/mini_search_collapsing_image"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="104dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="16:9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/mini_search_collapsing_title"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/mini_search_toolbar"
            android:background="@color/common_transparent_black"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:contentInsetStart="16dp"
            app:contentInsetStartWithNavigation="16dp"
            app:layout_collapseMode="pin"
            app:navigationIcon="@null">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp">
                <ImageView
                    android:layout_gravity="start"
                    android:id="@+id/mini_search_navigation_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="@null"
                    app:srcCompat="?attr/ic_arrowBack24"
                    app:tint="?attr/black"/>
                <TextView
                    android:textAppearance="?attr/textH40"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/mini_search_toolbar_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="16dp"/>
                <ImageView
                    android:layout_gravity="end"
                    android:id="@+id/mini_search_search_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="@null"
                    app:srcCompat="?attr/ic_search24"
                    app:tint="?attr/black"/>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.CollapsingToolbarLayout>
    <include
        android:id="@+id/mini_search_action_view"
        android:visibility="gone"
        layout="@layout/mini_search_widget_action_layout"/>
</merge>
