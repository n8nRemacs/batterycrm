<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_location_picker_search_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true">
    <HorizontalScrollView
        android:id="@+id/edit_scroll"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:paddingStart="10dp"
        android:layout_toStartOf="@+id/clear_button">
        <com.avito.android.ui.view.BackPressedNotifyingEditText
            android:textAppearance="?attr/textM20"
            android:textColorHint="?attr/gray28"
            android:id="@+id/edit_query"
            android:background="?attr/transparentBlack"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:hint="@string/lp_enter_address"
            android:maxLines="1"
            android:drawablePadding="6dp"
            android:inputType="textNoSuggestions"
            android:imeOptions="flagNoExtractUi|actionSearch"
            android:drawableStart="?attr/ic_search16"
            android:drawableTint="?attr/gray44"/>
    </HorizontalScrollView>
    <ImageView
        android:id="@+id/clear_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="?attr/ic_close20"
        android:layout_alignTop="@+id/edit_scroll"
        android:layout_alignBottom="@+id/edit_scroll"
        android:layout_marginEnd="12dp"
        android:layout_alignParentEnd="true"
        app:tint="?attr/black"/>
</RelativeLayout>
