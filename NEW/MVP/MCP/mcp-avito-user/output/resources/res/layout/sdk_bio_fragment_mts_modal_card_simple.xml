<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="60dp"
    style="@style/MTS.ModalCard.Container.Transparent">
    <LinearLayout
        android:id="@+id/mtsRootLayout"
        style="@style/MTS.ModalCard.Container.Root">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp">
            <ImageView
                android:id="@+id/mtsModalCardDrawable"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:layout_marginHorizontal="12dp"/>
            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/mtsModalCardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?attr/sdkBioTextAppearanceHeader"/>
            <TextView
                android:id="@+id/mtsModalCardText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                style="@style/MTS.ModalCard.Text"/>
        </LinearLayout>
        <ru.mts.biometry.sdk.view.SdkBioButton
            android:id="@+id/mtsModalCardSecondaryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:sdkBioButtonType="secondary"/>
        <ru.mts.biometry.sdk.view.SdkBioButton
            android:id="@+id/mtsModalCardCancelButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:sdkBioButtonType="secondary"/>
        <ru.mts.biometry.sdk.view.SdkBioButton
            android:id="@+id/mtsModalCardPrimaryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:sdkBioButtonType="primary"/>
    </LinearLayout>
</FrameLayout>
