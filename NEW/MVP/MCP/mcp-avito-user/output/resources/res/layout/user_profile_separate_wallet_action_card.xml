<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/user_profile_wallet_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/UserProfileCardContainer">
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/big_text_size"
            android:textColor="?attr/black"
            android:id="@+id/block_title"
            android:paddingLeft="@dimen/profile_inside_horizontal_padding"
            android:paddingTop="@dimen/standard_padding"
            android:paddingRight="@dimen/profile_inside_horizontal_padding"
            android:paddingBottom="@dimen/standard_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/payment_wallet"
            app:fontFamily="?attr/fontHeavy"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/profile_inside_horizontal_padding"
            android:paddingRight="@dimen/profile_inside_horizontal_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/icon"
                android:paddingRight="32dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_wallet_24"
                app:tint="?attr/gray28"/>
            <LinearLayout
                android:orientation="vertical"
                android:paddingTop="@dimen/standard_padding"
                android:paddingBottom="@dimen/standard_padding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/big_text_size"
                    android:textColor="?attr/black"
                    android:id="@+id/balance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="@dimen/regular_text_size"
                    android:textColor="?attr/gray48"
                    android:id="@+id/bonus"
                    android:paddingTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/action_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">
            <View
                android:background="?attr/gray8"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <include
                android:id="@+id/wallet_top_up_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                layout="@layout/button_flat_card"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
