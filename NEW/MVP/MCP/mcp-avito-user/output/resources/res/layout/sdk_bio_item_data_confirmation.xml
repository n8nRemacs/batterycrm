<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/sdkBioBackgroundPrimaryColor"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ru.mts.biometry.sdk.view.SdkBioButton
        android:enabled="true"
        android:id="@+id/btnRetry"
        android:focusable="true"
        android:visibility="gone"
        android:clickable="true"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnAccept"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:sdkBioButtonTitle="@string/sdk_bio_title_passport_retry"
        app:sdkBioButtonType="secondary"/>
    <ru.mts.biometry.sdk.view.SdkBioButton
        android:enabled="true"
        android:id="@+id/btnAccept"
        android:focusable="true"
        android:visibility="gone"
        android:clickable="true"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnRetry"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnRetry"
        app:layout_constraintTop_toTopOf="parent"
        app:sdkBioButtonTitle="@string/sdk_bio_title_passport_accept"
        app:sdkBioButtonType="primary"/>
    <ru.mts.biometry.sdk.view.SdkBioButton
        android:enabled="true"
        android:id="@+id/btnRetryBig"
        android:focusable="true"
        android:visibility="gone"
        android:clickable="true"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:sdkBioButtonTitle="@string/sdk_bio_title_retry_scan_full"
        app:sdkBioButtonType="primary"/>
</androidx.constraintlayout.widget.ConstraintLayout>
