<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="?attr/textH5"
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/tooltip_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:layout_marginStart="4dp"
        app:srcCompat="?attr/ic_help20"
        app:tint="?attr/gray20"/>
    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <com.avito.android.lib.design.badge.Badge
        android:textAppearance="?attr/textS20"
        android:id="@+id/is_new_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/seller_calendar_params_is_new"
        style="?attr/badgeTextRedM"/>
</LinearLayout>
