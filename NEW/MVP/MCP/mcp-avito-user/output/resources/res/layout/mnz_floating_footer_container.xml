<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="vertical"
    android:id="@+id/mnz_floating_footer_container"
    android:clipChildren="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:layout_height="24dp"/>
    <com.avito.android.lib.design.banner.Banner
        android:id="@+id/mnz_floating_footer_container_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:banner_bottomEdgeRounded="false"
        app:banner_content="@layout/mnz_floating_footer_content"
        app:banner_contentPaddingBottom="16dp"
        app:banner_contentPaddingLeft="16dp"
        app:banner_contentPaddingRight="16dp"
        app:banner_contentPaddingTop="16dp"
        style="?attr/bannerWhite"/>
</LinearLayout>
