<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:id="@+id/development_grid_root"
    android:background="?attr/selectableItemBackground"
    android:layout_width="176dp"
    android:layout_height="wrap_content">
    <com.avito.android.lib.util.layout.ForegroundRelativeLayout
        android:id="@+id/advert_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/image"
            android:layout_width="176dp"
            android:layout_height="176dp"
            app:roundedCornerRadius="16dp"
            style="@style/Widget.Avito.SimpleDraweeView.Serp.Item.Image"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/text_content"
            android:layout_width="match_parent"
            android:layout_height="123dp"
            android:layout_below="@+id/image">
            <TextView
                android:textAppearance="?attr/textH50"
                android:ellipsize="end"
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:maxLines="1"/>
            <com.avito.android.lib.design.strikethrough.StrikethroughTextView
                android:textAppearance="?attr/textS20"
                android:ellipsize="end"
                android:id="@+id/promoPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                app:strikethrough_tint="?attr/red600"/>
            <TextView
                android:textAppearance="?attr/textM20"
                android:ellipsize="end"
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"/>
            <TextView
                android:textAppearance="?attr/textS20"
                android:textColor="?attr/gray54"
                android:ellipsize="end"
                android:id="@+id/period"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"/>
            <TextView
                android:textAppearance="?attr/textS20"
                android:textColor="?attr/gray54"
                android:ellipsize="end"
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"/>
        </LinearLayout>
    </com.avito.android.lib.util.layout.ForegroundRelativeLayout>
</FrameLayout>
