<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    android:id="@+id/advert_grid_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/advert_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.Avito.Serp.Item.Card">
        <View
            android:id="@+id/image"
            android:background="@drawable/serp_bg_text_stub"
            android:layout_width="match_parent"
            android:layout_height="@dimen/serp_card_image_height"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/text_content"
            android:paddingLeft="@dimen/serp_card_horizontal_padding"
            android:paddingTop="2dp"
            android:paddingRight="@dimen/serp_card_horizontal_padding"
            android:paddingBottom="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="44dp"
            android:layout_below="@+id/image">
            <TextView
                android:id="@+id/title"
                android:background="@drawable/serp_bg_text_stub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"/>
            <TextView
                android:id="@+id/price_without_discount"
                android:background="@drawable/serp_bg_text_stub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginRight="104dp"/>
            <TextView
                android:gravity="center_vertical"
                android:id="@+id/discount"
                android:background="@drawable/serp_bg_text_stub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginRight="104dp"
                android:drawablePadding="4dp"/>
            <androidx.legacy.widget.Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
