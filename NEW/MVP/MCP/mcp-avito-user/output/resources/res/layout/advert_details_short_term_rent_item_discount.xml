<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="vertical"
    android:id="@+id/str_discount_item"
    android:paddingTop="28dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/content_horizontal_padding">
    <TextView
        android:textAppearance="?attr/textH50"
        android:id="@+id/str_discount_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/bg_warm_gray_rounded_corners_16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">
        <TextView
            android:textAppearance="?attr/textM20"
            android:id="@+id/str_discount_item_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@+id/str_discount_item_switcher"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"/>
        <com.avito.android.lib.design.strikethrough.StrikethroughTextView
            android:textAppearance="?attr/textM20"
            android:id="@+id/str_discount_item_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            app:layout_constraintStart_toStartOf="@+id/str_discount_item_description"
            app:layout_constraintTop_toBottomOf="@+id/str_discount_item_description"
            app:strikethrough_show="true"
            app:strikethrough_textStyle="?attr/textM20"
            app:strikethrough_tint="?attr/red600"/>
        <TextView
            android:textAppearance="?attr/textM20"
            android:textColor="?attr/red600"
            android:id="@+id/str_discount_item_discount_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            app:layout_constraintBottom_toBottomOf="@+id/str_discount_item_total_price"
            app:layout_constraintStart_toEndOf="@+id/str_discount_item_total_price"
            app:layout_constraintTop_toTopOf="@+id/str_discount_item_total_price"/>
        <TextView
            android:textAppearance="?attr/textM20"
            android:id="@+id/str_discount_item_price_with_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/str_discount_item_description"
            app:layout_constraintTop_toBottomOf="@+id/str_discount_item_total_price"/>
        <com.avito.android.lib.design.switcher.Switcher
            android:enabled="true"
            android:id="@+id/str_discount_item_switcher"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="16dp"
            android:elevation="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="?attr/switcherWhiteMedium"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
