<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/filters_screen_root"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:splitMotionEvents="false">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:paddingTop="?attr/actionBarSize"
        android:paddingBottom="@dimen/filters_show_button_bottom_space"
        android:scrollbars="vertical"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <FrameLayout
        android:id="@+id/progress"
        android:background="?attr/whiteAlpha88"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:visibility="visible"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.avito.android.lib.deprecated_design.ColoredProgressBar
            android:layout_gravity="center"
            android:id="@+id/progress_view"
            android:layout_width="28dp"
            android:layout_height="28dp"/>
    </FrameLayout>
    <LinearLayout
        android:layout_gravity="bottom|center_horizontal"
        android:orientation="horizontal"
        android:id="@+id/bottom_container"
        android:background="@drawable/bg_transparent_white_gradient"
        android:padding="16dp"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.avito.android.lib.design.button.Button
            android:id="@+id/counter_button"
            android:visibility="visible"
            android:layout_width="0dp"
            android:text="@string/search_filter_counter_button_default_text"
            android:layout_weight="1"
            style="?attr/buttonPrimaryLarge"/>
        <com.avito.android.lib.design.button.Button
            android:id="@+id/map_button"
            android:visibility="gone"
            android:src="@drawable/ic_rds_location_icon"
            android:maxWidth="52dp"
            android:minWidth="52dp"
            android:layout_marginStart="10dp"
            style="?attr/buttonSecondaryLarge"/>
    </LinearLayout>
    <include layout="@layout/design_error_layout"/>
    <com.avito.android.lib.design.nav_bar.NavBar
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</FrameLayout>
