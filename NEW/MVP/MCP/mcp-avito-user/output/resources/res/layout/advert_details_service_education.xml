<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:id="@+id/service_education_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/content_horizontal_padding">
    <TextView
        android:textAppearance="?attr/textH25"
        android:id="@+id/advert_service_education_title"
        android:paddingBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/advert_service_education_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="?attr/ic_arrowExpandMore24"
        app:layout_constraintBottom_toBottomOf="@+id/advert_service_education_title"
        app:layout_constraintStart_toEndOf="@+id/advert_service_education_title"
        app:layout_constraintTop_toTopOf="@+id/advert_service_education_title"
        app:layout_constraintVertical_bias="0.3"
        app:tint="?attr/black"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/advert_service_education_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hardwareAccelerated="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/advert_service_education_title"/>
</androidx.constraintlayout.widget.ConstraintLayout>
