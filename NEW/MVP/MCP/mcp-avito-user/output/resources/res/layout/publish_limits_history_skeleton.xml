            android:background="@drawable/design_shimmer_tab_bg"
            android:layout_width="120dp"
            android:layout_height="34dp"
            android:layout_marginTop="40dp"/>
        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
