<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="horizontal"
    android:id="@+id/break_inputs_container"
    android:paddingBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.avito.android.lib.design.select.BaseSelect
        android:id="@+id/break_input_start"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/time_picker_start_hint"
        app:componentContainer_messageColor="@color/selector_component_state"
        app:input_cornerRadius="@dimen/input_radius"
        app:layout_constraintEnd_toStartOf="@+id/inputs_spacer"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="?attr/baseSelectDefaultM"/>
    <Space
        android:id="@+id/inputs_spacer"
        android:layout_width="@dimen/margin_space_between"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.avito.android.lib.design.select.BaseSelect
        android:id="@+id/break_input_end"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/time_picker_end_hint"
        app:componentContainer_messageColor="@color/selector_component_state"
        app:input_cornerRadius="@dimen/input_radius"
        app:layout_constraintEnd_toStartOf="@+id/break_delete"
        app:layout_constraintStart_toEndOf="@+id/inputs_spacer"
        app:layout_constraintTop_toTopOf="parent"
        style="?attr/baseSelectDefaultM"/>
    <ImageView
        android:id="@+id/break_delete"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="?attr/ic_delete20"
        android:paddingStart="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/break_input_end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/break_input_end"
        app:tint="@color/selector_text_state"/>
    <TextView
        android:textAppearance="?attr/textS10"
        android:id="@+id/breaks_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/break_input_start"/>
</androidx.constraintlayout.widget.ConstraintLayout>
