<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="@dimen/content_horizontal_padding"
    android:paddingTop="@dimen/card_padding"
    android:paddingRight="@dimen/content_horizontal_padding"
    android:paddingBottom="@dimen/card_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="96dp">
    <TextView
        android:textSize="16sp"
        android:textColor="?attr/black"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="1sp"/>
    <TextView
        android:textSize="16sp"
        android:textColor="?attr/gray48"
        android:id="@+id/first_line_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:lineSpacingExtra="1sp"/>
    <TextView
        android:textSize="16sp"
        android:textColor="?attr/gray48"
        android:id="@+id/second_line_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:lineSpacingExtra="1sp"/>
</LinearLayout>
