<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="232dp"
    android:layout_height="370dp"
    android:layout_marginHorizontal="@dimen/advert_details_hotel_offer_item_horizontal_margin"
    android:paddingVertical="6dp">
    <ImageView
        android:id="@+id/image"
        android:background="@drawable/rounded_background_r16"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"/>
    <TextView
        android:ellipsize="end"
        android:id="@+id/price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:maxLines="1"/>
    <LinearLayout
        android:id="@+id/installments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="4dp">
        <TextView
            android:gravity="center"
            android:id="@+id/installments_left_part"
            android:background="@drawable/bg_offer_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="?attr/black"
            android:paddingHorizontal="4dp"/>
        <TextView
            android:id="@+id/installments_right_part"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <com.avito.android.advert.item.hotel.hotel_offer.view.EllipsizedAmenityTextView
        android:id="@+id/amenities"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        style="?attr/buttonPayMedium"/>
</LinearLayout>
