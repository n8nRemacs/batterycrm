<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/ad_avl_screen_margin"
    android:layout_marginBottom="@dimen/ad_avl_screen_margin">
    <com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout
        android:background="?attr/constantBlack"
        android:addStatesFromChildren="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:shimmer_animationDuration="3200"
        app:shimmer_autostart="true"
        app:shimmer_color="?attr/constantBlack"
        style="?attr/shimmerDefault">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:id="@+id/media_view_container"
                android:background="@color/ad_avl_placeholder"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"/>
            <FrameLayout
                android:id="@+id/line1_placeholder"
                android:background="@color/ad_avl_placeholder"
                android:layout_width="156dp"
                android:layout_height="12dp"
                android:layout_marginBottom="14dp"
                android:layout_marginHorizontal="@dimen/ad_avl_inset"/>
            <FrameLayout
                android:id="@+id/line2_placeholder"
                android:background="@color/ad_avl_placeholder"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="@dimen/ad_avl_inset"/>
            <FrameLayout
                android:id="@+id/line3_placeholder"
                android:background="@color/ad_avl_placeholder"
                android:layout_width="252dp"
                android:layout_height="8dp"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="@dimen/ad_avl_inset"/>
            <FrameLayout
                android:id="@+id/call_to_action_placeholder"
                android:background="@color/ad_avl_placeholder"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginBottom="@dimen/ad_avl_inset"
                android:layout_marginHorizontal="@dimen/ad_avl_inset"/>
        </LinearLayout>
    </com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout>
    <ImageView
        android:id="@+id/close_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="@dimen/ad_avl_inset"
        android:src="?attr/ic_close24"
        android:scaleType="center"
        app:tint="?attr/constantWhite"/>
</FrameLayout>
