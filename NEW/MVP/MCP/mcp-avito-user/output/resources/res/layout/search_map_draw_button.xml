<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true">
    <FrameLayout
        android:id="@+id/search_map_draw_button_frame"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/search_map_controls_size"
        android:animateLayoutChanges="true">
        <TextView
            android:textAppearance="?attr/textM2"
            android:layout_gravity="center"
            android:id="@+id/search_map_draw_button_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="0dp"
            android:animateLayoutChanges="true"
            android:paddingHorizontal="12dp"
            app:drawableStartCompat="@drawable/ic_drawing_touch"/>
    </FrameLayout>
</merge>
