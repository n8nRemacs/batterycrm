<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/week_days_container"
    android:paddingLeft="@dimen/week_days_container_horizontal_padding"
    android:paddingTop="@dimen/week_days_container_vertical_padding"
    android:paddingRight="@dimen/week_days_container_horizontal_padding"
    android:paddingBottom="@dimen/week_days_container_vertical_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="?attr/textM10"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/calendar_monday"
        android:layout_weight="1"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/calendar_thursday"
        android:layout_weight="1"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/calendar_wednesday"
        android:layout_weight="1"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/calendar_tuesday"
        android:layout_weight="1"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/calendar_friday"
        android:layout_weight="1"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/calendar_saturday"
        android:layout_weight="1"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/calendar_sunday"
        android:layout_weight="1"/>
</LinearLayout>
