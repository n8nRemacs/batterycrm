<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textAppearance="?attr/textH50"
        android:id="@+id/header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sx_new_address_address"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/sx_new_address_address_subtitle"/>
    <com.avito.android.lib.design.input.Input
        android:id="@+id/address_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="@string/sx_new_address_address_hint"
        app:input_clearButton="true"
        app:input_componentType="select"
        app:input_formatterType="not_editable"
        style="?attr/inputDefaultM"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/hide_address_toggle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingVertical="12dp">
        <com.avito.android.lib.design.switcher.Switcher
            android:id="@+id/hide_switcher"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?attr/switcherDefaultMedium"/>
        <TextView
            android:textAppearance="?attr/textM20"
            android:id="@+id/hide_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"/>
    </LinearLayout>
</LinearLayout>
