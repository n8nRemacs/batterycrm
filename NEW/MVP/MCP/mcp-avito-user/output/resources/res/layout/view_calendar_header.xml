<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/week_days_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="2dp"
    android:paddingVertical="15dp">
    <TextView
        android:textAppearance="?attr/textXs"
        android:textColor="?attr/black"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/service_booking_calendar_monday"
        android:layout_weight="1"/>
    <TextView
        android:textAppearance="?attr/textXs"
        android:textColor="?attr/black"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/service_booking_calendar_thursday"
        android:layout_weight="1"/>
    <TextView
        android:textAppearance="?attr/textXs"
        android:textColor="?attr/black"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/service_booking_calendar_wednesday"
        android:layout_weight="1"/>
    <TextView
        android:textAppearance="?attr/textXs"
        android:textColor="?attr/black"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/service_booking_calendar_tuesday"
        android:layout_weight="1"/>
    <TextView
        android:textAppearance="?attr/textXs"
        android:textColor="?attr/black"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/service_booking_calendar_friday"
        android:layout_weight="1"/>
    <TextView
        android:textAppearance="?attr/textXs"
        android:textColor="?attr/red"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/service_booking_calendar_saturday"
        android:layout_weight="1"/>
    <TextView
        android:textAppearance="?attr/textXs"
        android:textColor="?attr/red"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/service_booking_calendar_sunday"
        android:layout_weight="1"/>
</LinearLayout>
