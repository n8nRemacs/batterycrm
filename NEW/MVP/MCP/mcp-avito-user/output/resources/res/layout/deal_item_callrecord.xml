<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp">
    <com.avito.android.lib.design.button.Button
        android:id="@+id/play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:src="?attr/ic_pause24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="?attr/buttonSecondaryLargeRound"/>
    <SeekBar
        android:id="@+id/call_duration_bar"
        android:background="@null"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxHeight="8dp"
        android:max="10000"
        android:progressDrawable="@drawable/call_seekbar_progress"
        android:splitTrack="false"
        android:thumbTint="?attr/gray88"
        app:layout_constraintBottom_toBottomOf="@+id/play_button"
        app:layout_constraintEnd_toStartOf="@+id/time_text"
        app:layout_constraintStart_toEndOf="@+id/play_button"
        app:layout_constraintTop_toTopOf="@+id/play_button"/>
    <ImageView
        android:id="@+id/ic_expand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="?attr/ic_arrowDown16"
        app:layout_constraintBottom_toBottomOf="@+id/play_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/play_button"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:gravity="end"
        android:id="@+id/speed_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="43dp"
        android:paddingStart="6dp"
        android:paddingEnd="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/play_button"
        app:layout_constraintEnd_toStartOf="@+id/ic_expand"
        app:layout_constraintTop_toTopOf="@+id/play_button"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:gravity="center_horizontal"
        android:id="@+id/time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/play_button"
        app:layout_constraintEnd_toStartOf="@+id/speed_text"
        app:layout_constraintTop_toTopOf="@+id/play_button"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/author_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/play_button"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/play_button"/>
</androidx.constraintlayout.widget.ConstraintLayout>
