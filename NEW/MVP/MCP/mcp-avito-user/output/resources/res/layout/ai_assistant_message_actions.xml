<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/reactions_root"
    android:paddingTop="6dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="6dp"
    app:dividerDrawable="@drawable/ai_assistant_suggestion_divider"
    app:flexDirection="row"
    app:flexWrap="wrap"
    app:showDivider="middle">
    <FrameLayout
        android:id="@+id/motivation_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_alignSelf="center">
        <TextView
            android:textAppearance="?attr/textM20"
            android:id="@+id/motivation_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/reactions_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/like_container"
            android:layout_width="44dp"
            android:layout_height="44dp">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/like"
                android:layout_width="14dp"
                android:layout_height="20dp"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/dislike_container"
            android:layout_width="44dp"
            android:layout_height="44dp">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/dislike"
                android:layout_width="14dp"
                android:layout_height="20dp"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/feedback_container"
            android:layout_width="44dp"
            android:layout_height="44dp">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/feedback"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="1dp"
                app:srcCompat="?attr/ic_exclamationMarkOutline20"
                app:tint="?attr/black"/>
        </FrameLayout>
    </LinearLayout>
</com.google.android.flexbox.FlexboxLayout>
