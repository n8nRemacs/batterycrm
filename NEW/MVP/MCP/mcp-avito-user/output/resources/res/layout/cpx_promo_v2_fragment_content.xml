<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/cpx_promo_content_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:paddingBottom="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp">
            <TextView
                android:id="@+id/cpx_promo_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"/>
            <TextView
                android:id="@+id/cpx_promo_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="24dp"/>
            <TextView
                android:id="@+id/cpx_promo_segmented_control_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.avito.android.lib.design.segmented_control.SegmentedControl
                android:id="@+id/cpx_promo_segmented_control_mode"
                android:paddingLeft="2dp"
                android:paddingTop="4dp"
                android:paddingRight="4dp"
                android:paddingBottom="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"
                android:minHeight="52dp"
                app:segmentedControl_backgroundColor="?attr/warmGray75"
                app:segmentedControl_cornerRadius="16dp"
                app:segmentedControl_selectionBackgroundColor="?attr/white"
                app:segmentedControl_selectionCornerRadius="12dp"
                app:segmentedControl_textColor="@color/cpx_promo_segmented_control_text_color"
                app:segmentedControl_verticalTextOffset="0dp"/>
            <androidx.compose.ui.platform.ComposeView
                android:id="@+id/cpx_promo_cashback_banner_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"/>
            <TextView
                android:id="@+id/cpx_promo_budget_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"/>
            <com.avito.android.lib.design.chips.Chips
                android:id="@+id/cpx_promo_budget_chips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="6dp"
                app:chips_displayType="singleLineScrollable"
                app:chips_keepLastSelected="true"
                app:chips_selectStrategy="single"
                style="?attr/chipsSmall"/>
            <TextView
                android:id="@+id/cpx_promo_slider_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.avito.android.lib.design.input.Input
                    android:id="@+id/cpx_promo_slider_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="?attr/inputDefaultL"/>
                <TextView
                    android:textAppearance="?attr/textM2"
                    android:textColor="?attr/gray54"
                    android:gravity="center_vertical"
                    android:layout_gravity="end|center_vertical"
                    android:id="@+id/cpx_promo_cashback_bonuses"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="2dp"
                    android:layout_marginEnd="16dp"
                    app:drawableEndCompat="@drawable/common_ic_buyer_bonuses_20"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-8dp">
                <View
                    android:layout_gravity="center_vertical"
                    android:background="?attr/warmGray16"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginHorizontal="18dp"/>
                <com.google.android.material.slider.Slider
                    android:id="@+id/cpx_promo_slider_cashback"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/CpxPromo.Slider.Cashback"/>
                <com.google.android.material.slider.Slider
                    android:id="@+id/cpx_promo_slider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/CpxPromo.Slider.Main"/>
            </FrameLayout>
            <TextView
                android:textAppearance="?attr/textM10"
                android:id="@+id/cpx_promo_slider_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/cpx_promo_trigger_info_container"
                android:background="@drawable/bg_cpx_promo_slider_trigger_corners"
                android:paddingTop="16dp"
                android:paddingBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:paddingHorizontal="20dp">
                <TextView
                    android:textAppearance="?attr/textM20"
                    android:id="@+id/cpx_promo_trigger_info_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textAppearance="?attr/textS20"
                    android:textColor="?attr/gray54"
                    android:id="@+id/cpx_promo_trigger_info_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/cpx_promo_slider_info_container"
                android:background="@drawable/bg_cpx_promo_slider_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingStart="8dp"
                android:paddingEnd="20dp"
                android:paddingVertical="16dp">
                <TextView
                    android:textAppearance="?attr/textS10"
                    android:id="@+id/cpx_promo_slider_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="16dp"/>
                <ImageView
                    android:id="@+id/cpx_promo_slider_info_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="?attr/ic_close16"
                    android:contentDescription="@null"
                    app:tint="?attr/black"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/cpx_promo_limit_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">
                <TextView
                    android:id="@+id/cpx_promo_limit_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <com.avito.android.lib.design.input.Input
                    android:id="@+id/cpx_promo_limit_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:input_clearButton="true"
                    app:input_formatterType="roubles"
                    style="?attr/inputDefaultL"/>
                <TextView
                    android:textAppearance="?attr/textM10"
                    android:textColor="?attr/red600"
                    android:id="@+id/cpx_promo_limit_hint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <androidx.compose.ui.platform.ComposeView
        android:layout_gravity="bottom"
        android:id="@+id/cpx_promo_compose_view_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</FrameLayout>
