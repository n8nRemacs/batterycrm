<?xml version="1.0" encoding="utf-8"?>
<com.yandex.mobile.ads.video.playback.view.VideoAdControlsContainer xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_gravity="end|top"
        android:id="@+id/feedback"
        android:layout_width="@dimen/monetization_instream_internal_adtune_size"
        android:layout_height="@dimen/monetization_instream_internal_adtune_size"
        android:layout_marginTop="@dimen/monetization_instream_internal_adtune_corner_margin"
        android:layout_marginRight="@dimen/monetization_instream_internal_adtune_corner_margin"/>
    <com.yandex.mobile.ads.fullscreen.template.view.ExtendedTextView
        android:textSize="@dimen/monetization_instream_internal_warning_text_size"
        android:textColor="@color/monetization_ads_internal_text_color_white"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:id="@+id/warning"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.4"
        android:textAllCaps="true"/>
    <com.yandex.mobile.ads.instream.view.InstreamMuteView
        android:layout_gravity="start"
        android:id="@+id/instream_mute"
        android:layout_width="@dimen/monetization_instream_internal_mute_width"
        android:layout_height="@dimen/monetization_instream_internal_mute_height"
        android:layout_marginLeft="@dimen/monetization_instream_internal_corner_margin"
        android:layout_marginTop="@dimen/monetization_instream_internal_corner_margin"
        app:monetization_internal_sound_off="@drawable/monetization_ads_internal_instream_ic_sound_off_v2"
        app:monetization_internal_sound_on="@drawable/monetization_ads_internal_instream_ic_sound_on_v2"
        style="?android:attr/borderlessButtonStyle"/>
    <LinearLayout
        android:layout_gravity="start|bottom"
        android:id="@+id/instream_cta_container"
        android:background="@drawable/monetization_ads_internal_instream_advertiser_block_background"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/monetization_instream_internal_advertiser_block_height"
        android:layout_marginLeft="@dimen/monetization_instream_internal_controls_margin_horizontal"
        android:layout_marginBottom="@dimen/monetization_instream_internal_controls_margin_vertical">
        <ImageView
            android:id="@+id/favicon"
            android:layout_width="@dimen/monetization_instream_internal_advertiser_icon_size"
            android:layout_height="@dimen/monetization_instream_internal_advertiser_icon_size"
            android:layout_marginLeft="@dimen/monetization_instream_internal_advertiser_icon_margin_horizontal"
            android:layout_marginTop="@dimen/monetization_instream_internal_advertiser_icon_margin_vertical"
            android:layout_marginBottom="@dimen/monetization_instream_internal_advertiser_icon_margin_vertical"/>
        <TextView
            android:textSize="@dimen/monetization_instream_internal_domain_text_size"
            android:textColor="@color/monetization_ads_internal_text_color_white"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/domain"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/monetization_instream_internal_domain_view_height"
            android:layout_marginLeft="@dimen/monetization_instream_internal_domain_margin_horizontal"
            android:layout_marginTop="@dimen/monetization_instream_internal_domain_margin_vertical"
            android:layout_marginRight="@dimen/monetization_instream_internal_domain_margin_horizontal"
            android:layout_marginBottom="@dimen/monetization_instream_internal_domain_margin_vertical"
            android:maxLines="1"
            android:maxLength="@integer/monetization_instream_internal_domain_max_length"/>
        <TextView
            android:textSize="@dimen/monetization_instream_internal_call_to_action_text_size"
            android:textStyle="bold"
            android:textColor="@color/monetization_ads_internal_call_to_action_text_color"
            android:gravity="center"
            android:id="@+id/call_to_action"
            android:background="@drawable/monetization_ads_internal_instream_call_to_action_background"
            android:layout_width="@dimen/monetization_instream_internal_call_to_action_width"
            android:layout_height="@dimen/monetization_instream_internal_call_to_action_height"
            android:layout_marginLeft="@dimen/monetization_instream_internal_call_to_action_margin_horizontal"
            android:layout_marginTop="@dimen/monetization_instream_internal_call_to_action_margin_vertical"
            android:layout_marginRight="@dimen/monetization_instream_internal_call_to_action_margin_horizontal"
            android:layout_marginBottom="@dimen/monetization_instream_internal_call_to_action_margin_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="start|bottom"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/monetization_instream_internal_sponsored_block_height"
        android:layout_marginLeft="@dimen/monetization_instream_internal_sponsored_margin_horizontal"
        android:layout_marginBottom="@dimen/monetization_instream_internal_sponsored_margin_vertical"
        android:alpha="0.4">
        <TextView
            android:textSize="@dimen/monetization_instream_internal_sponsored_block_text_size"
            android:textColor="@color/monetization_ads_internal_text_color_white"
            android:id="@+id/sponsored"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"/>
        <TextView
            android:textSize="@dimen/monetization_instream_internal_sponsored_block_text_size"
            android:textColor="@color/monetization_ads_internal_text_color_white"
            android:id="@+id/sponsored_delimiter"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/monetization_ads_internal_text_divider_with_space"/>
        <TextView
            android:textSize="@dimen/monetization_instream_internal_sponsored_block_text_size"
            android:textColor="@color/monetization_ads_internal_text_color_white"
            android:id="@+id/ad_position"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/monetization_ads_internal_instream_ad_position"/>
        <TextView
            android:textSize="@dimen/monetization_instream_internal_sponsored_block_text_size"
            android:textColor="@color/monetization_ads_internal_text_color_white"
            android:id="@+id/trademark_delimiter"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/monetization_ads_internal_text_divider_with_space"/>
        <ImageView
            android:layout_gravity="bottom"
            android:id="@+id/trademark_icon"
            android:visibility="gone"
            android:layout_width="@dimen/monetization_instream_internal_trademark_icon_size"
            android:layout_height="@dimen/monetization_instream_internal_trademark_icon_size"/>
    </LinearLayout>
    <ProgressBar
        android:layout_gravity="bottom"
        android:id="@+id/instream_progress_display_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/monetization_instream_internal_progress_bar_height_v2"
        android:max="@integer/monetization_instream_internal_progress_bar_max"
        android:progressDrawable="@drawable/monetization_instream_internal_progress_display_v2"
        style="?android:attr/progressBarStyleHorizontal"/>
    <FrameLayout
        android:layout_gravity="end|bottom"
        android:background="@drawable/monetization_ads_internal_instream_advertiser_block_background"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/monetization_instream_internal_button_size"
        android:layout_marginRight="@dimen/monetization_instream_internal_button_margin_end"
        android:layout_marginBottom="@dimen/monetization_instream_internal_controls_margin_vertical">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/instream_skip"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/monetization_instream_internal_button_size">
            <TextView
                android:textSize="@dimen/monetization_instream_internal_skip_text_size"
                android:textColor="@color/monetization_ads_internal_text_color_white"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/monetization_instream_internal_skip_block_margin_horizontal"
                android:layout_marginRight="@dimen/monetization_instream_internal_skip_block_margin_horizontal"
                android:text="@string/monetization_ads_internal_instream_skip"/>
            <ImageView
                android:layout_gravity="center"
                android:background="@drawable/monetization_ads_internal_instream_skip_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/monetization_instream_internal_skip_block_margin_horizontal"/>
        </LinearLayout>
        <TextView
            android:textSize="@dimen/monetization_instream_internal_timer_view_text_size"
            android:textColor="@color/monetization_ads_internal_text_color_white"
            android:gravity="center"
            android:id="@+id/timer_value"
            android:visibility="gone"
            android:layout_width="@dimen/monetization_instream_internal_timer_view_width"
            android:layout_height="@dimen/monetization_instream_internal_timer_view_height"/>
    </FrameLayout>
</com.yandex.mobile.ads.video.playback.view.VideoAdControlsContainer>
