<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/background_view"
        android:layout_width="0dp"
        android:layout_height="@dimen/calendar_recycler_view_day_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/text_view_container"
        app:layout_constraintRight_toRightOf="@+id/text_view_container"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/secondary_background_view"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="0dp"
        android:layout_height="@dimen/calendar_recycler_view_day_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/text_view_container"
        app:layout_constraintRight_toRightOf="@+id/text_view_container"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.avito.android.str_calendar.common.view.SquareLinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/text_view_container"
        android:layout_width="@dimen/calendar_recycler_view_day_size"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:textAppearance="?attr/textM20"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"/>
        <TextView
            android:textAppearance="?attr/textXs10"
            android:gravity="center"
            android:id="@+id/price"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"/>
    </com.avito.android.str_calendar.common.view.SquareLinearLayout>
    <View
        android:id="@+id/dot"
        android:layout_width="@dimen/day_item_dot_width"
        android:layout_height="@dimen/day_item_dot_height"
        android:layout_marginTop="@dimen/day_item_dot_margin"
        android:layout_marginEnd="@dimen/day_item_dot_margin"
        app:layout_constraintRight_toRightOf="@+id/text_view_container"
        app:layout_constraintTop_toTopOf="@+id/text_view_container"/>
    <View
        android:id="@+id/fire"
        android:layout_width="@dimen/day_item_fire_width"
        android:layout_height="@dimen/day_item_fire_height"
        android:layout_marginTop="@dimen/day_item_fire_margin_top"
        android:layout_marginStart="@dimen/day_item_fire_margin_start"
        app:layout_constraintStart_toStartOf="@+id/text_view_container"
        app:layout_constraintTop_toTopOf="@+id/text_view_container"/>
</androidx.constraintlayout.widget.ConstraintLayout>
