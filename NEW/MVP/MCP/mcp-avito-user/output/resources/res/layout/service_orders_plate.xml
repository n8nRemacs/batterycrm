<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="0dp"
    app:cardBackgroundColor="?attr/warmGray4"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp">
    <LinearLayout
        android:orientation="vertical"
        android:paddingTop="12dp"
        android:paddingBottom="14dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp">
        <LinearLayout
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="?attr/textS20"
                android:ellipsize="end"
                android:id="@+id/plate_first_line"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_weight="1"/>
            <TextView
                android:textAppearance="?attr/textS20"
                android:id="@+id/plate_icon_line"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:textAppearance="?attr/textS20"
            android:ellipsize="end"
            android:id="@+id/plate_second_line"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"/>
        <TextView
            android:textAppearance="?attr/textH50"
            android:ellipsize="end"
            android:id="@+id/plate_bold_line"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:maxLines="1"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
