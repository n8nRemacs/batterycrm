<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.avito.android.photo_gallery.PhotoGallerySwipeCloseView
        android:id="@+id/swipe_close_view"
        android:background="@color/expected_gallery_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.avito.android.ui.SafeViewPager
            android:id="@+id/view_pager"
            android:background="@color/expected_gallery_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.avito.android.photo_gallery.PhotoGallerySwipeCloseView>
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="?attr/blackAlpha40"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:elevation="0dp"
        app:titleTextColor="?attr/white"/>
</FrameLayout>
