<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tarifikator_main_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.avito.android.lib.design.nav_bar.NavBar
        android:id="@+id/tarifikator_main_navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.akita.view.component.pull_to_refresh.PullToRefresh
        android:id="@+id/tarifikator_main_swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tarifikator_main_navbar"
        style="?attr/pullToRefreshMedium">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tarifikator_main_recycler"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:scrollbars="none"
            android:clipToPadding="false"
            android:descendantFocusability="beforeDescendants"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
    </com.akita.view.component.pull_to_refresh.PullToRefresh>
    <include
        android:id="@+id/tarifikator_main_skeleton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tarifikator_main_navbar"
        layout="@layout/tarifikator_main_skeleton_layout"/>
    <FrameLayout
        android:id="@+id/tarifikator_main_progress_overlay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingHorizontal="@dimen/default_horizontal_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tarifikator_main_navbar"/>
</androidx.constraintlayout.widget.ConstraintLayout>
