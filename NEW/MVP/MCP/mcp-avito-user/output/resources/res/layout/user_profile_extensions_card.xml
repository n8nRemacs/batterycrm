<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:id="@+id/user_extension_card_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/UserProfileCardContainer">
    <TextView
        android:textSize="@dimen/big_text_size"
        android:textColor="?attr/black"
        android:id="@+id/title"
        android:paddingLeft="@dimen/profile_inside_horizontal_padding"
        android:paddingTop="@dimen/standard_padding"
        android:paddingRight="@dimen/profile_inside_horizontal_padding"
        android:paddingBottom="@dimen/standard_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:fontFamily="?attr/fontHeavy"/>
    <TextView
        android:textSize="@dimen/big_text_size"
        android:textColor="?attr/black"
        android:id="@+id/description"
        android:paddingLeft="@dimen/profile_inside_horizontal_padding"
        android:paddingTop="@dimen/standard_padding"
        android:paddingRight="@dimen/profile_inside_horizontal_padding"
        android:paddingBottom="@dimen/standard_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/extensions_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/actions_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
