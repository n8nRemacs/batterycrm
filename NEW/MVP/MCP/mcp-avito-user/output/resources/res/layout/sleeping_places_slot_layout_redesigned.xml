<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="vertical"
    android:id="@+id/sleeping_places_content_redesigned"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/publish_container_horizontal_padding"
    android:paddingVertical="@dimen/publish_container_vertical_padding">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textAppearance="?attr/textH50"
            android:id="@+id/title_redesigned"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/sleeping_places_title"
            android:layout_weight="1"/>
        <com.avito.android.lib.design.badge.Badge
            android:id="@+id/badge_redesigned"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sleeping_places_is_new_badge"
            android:layout_marginStart="6dp"
            style="?attr/badgeNumberMedium"/>
    </LinearLayout>
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/subtitle_redesigned"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/sleeping_places_subtitle"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/bed_types_redesigned"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:divider="@drawable/divider_12_0"
        android:showDividers="middle"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/add_bed_type_redesigned"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:src="?attr/ic_plus16"
        android:text="@string/sleeping_add_bed_type_text_redesigned"
        style="?attr/buttonSecondaryLarge"/>
</LinearLayout>
