<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/development_grid_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.avito.android.lib.util.layout.ForegroundRelativeLayout
        android:id="@+id/advert_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.Avito.Serp.Item.Card">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/serp_card_image_height"
            style="@style/Widget.Avito.SimpleDraweeView.Serp.Item.Image"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/text_content"
            android:paddingLeft="@dimen/serp_card_horizontal_padding"
            android:paddingTop="2dp"
            android:paddingRight="@dimen/serp_card_horizontal_padding"
            android:paddingBottom="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="44dp"
            android:layout_below="@+id/image">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="28dp"
                style="@style/Widget.Avito.TextView.Serp.Item.Caption.Title"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:gravity="center_vertical"
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:drawablePadding="@dimen/delivery_icon_advert_item_padding"
                style="@style/Widget.Avito.TextView.Serp.Item.Caption.Price"/>
            <TextView
                android:id="@+id/period"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:maxLines="1"
                style="@style/Widget.Avito.TextView.Serp.Item.Caption.Secondary"/>
            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:maxLines="1"
                style="@style/Widget.Avito.TextView.Serp.Item.Caption.Secondary"/>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/metro"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"/>
        </LinearLayout>
    </com.avito.android.lib.util.layout.ForegroundRelativeLayout>
</FrameLayout>
