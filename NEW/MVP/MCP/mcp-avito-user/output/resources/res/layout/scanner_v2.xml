<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/redesigned_scanner"
    android:background="?attr/constantBlack"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextureView
        android:id="@+id/preview_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/preview_image"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:placeholderImageScaleType="centerCrop"/>
    <com.avito.android.publish.scanner_v2.ScannerOverlay
        android:id="@+id/scanner_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/ScannerOverlayDefault"/>
    <TextView
        android:textAppearance="?attr/textH5"
        android:textColor="?attr/constantWhite"
        android:gravity="center"
        android:id="@+id/scanner_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back_button"/>
    <ImageView
        android:id="@+id/help_button"
        android:padding="14dp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="?attr/ic_help24"
        android:layout_marginEnd="34dp"
        app:layout_constraintBottom_toBottomOf="@+id/camera_shot_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/camera_shot_button"
        app:tint="?attr/gray48"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/camera_shot_button"
        android:clickable="false"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginBottom="18dp"
        android:src="@drawable/scanner_button_background"
        app:layout_constraintBottom_toTopOf="@+id/scanner_help_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_gravity="center"
        android:id="@+id/gallery_button"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:foreground="@drawable/bg_selectable_gray_oval"
        android:layout_marginStart="36dp"
        app:layout_constraintBottom_toBottomOf="@+id/camera_shot_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/camera_shot_button"
        app:placeholderImageScaleType="centerCrop"
        app:roundAsCircle="true"/>
    <ImageView
        android:id="@+id/minified_gallery_button"
        android:padding="13dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        app:layout_constraintBottom_toBottomOf="@+id/camera_shot_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/camera_shot_button"
        app:srcCompat="@drawable/ic_scanner_gallery_20"/>
    <TextView
        android:textAppearance="?attr/textS2"
        android:textColor="@color/expected_constant_legacy_look_and_feel_gray_36"
        android:gravity="center"
        android:id="@+id/scanner_help_text"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintBottom_toTopOf="@+id/self_input_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <include
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        layout="@layout/scanner_v2_error_overlay"/>
    <include
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        layout="@layout/scanner_v2_permission_placeholder"/>
    <ImageView
        android:id="@+id/back_button"
        android:padding="12dp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back_24"
        app:tint="?attr/constantWhite"/>
    <TextView
        android:textAppearance="?attr/textM1"
        android:textColor="?attr/constantWhite"
        android:id="@+id/close_and_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save_and_exit"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/back_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/back_button"/>
    <com.avito.android.lib.design.button.Button
        android:layout_gravity="bottom"
        android:id="@+id/self_input_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/ScannerConstantInverseLargeButton"/>
</androidx.constraintlayout.widget.ConstraintLayout>
