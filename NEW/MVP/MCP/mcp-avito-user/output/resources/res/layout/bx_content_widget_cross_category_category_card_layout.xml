<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cross_item_card_root"
    android:background="@drawable/cross_item_card_with_photo_bg"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minHeight="80dp">
    <TextView
        android:textAppearance="?attr/textS2"
        android:ellipsize="end"
        android:id="@+id/cross_item_card_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:maxLines="2"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="4dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toStartOf="@+id/cross_item_card_image"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/cross_item_card_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:importantForAccessibility="no"
        android:layout_marginStart="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cross_item_card_name"
        app:layout_constraintVertical_bias="1"
        app:srcCompat="@drawable/arrow_round_button_with_stroke"/>
    <com.avito.android.fresco.SimpleDraweeView
        android:id="@+id/cross_item_card_image"
        android:layout_width="@dimen/cross_item_photo_width"
        android:layout_height="0dp"
        android:layout_marginEnd="-4dp"
        app:actualImageScaleType="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cross_item_card_name"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
