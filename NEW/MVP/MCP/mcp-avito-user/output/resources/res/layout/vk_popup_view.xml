<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/vk_popup_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintVertical_chainStyle="spread_inside">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/vk_toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/vk_popup_scrollable_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_back_24_black"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/vk_toolbar_more_button"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="?attr/ic_more24"
        android:layout_marginEnd="16dp"
        app:button_backgroundColor="?attr/white"
        app:button_iconColor="?attr/black"
        app:layout_constraintBottom_toBottomOf="@+id/vk_toolbar"
        app:layout_constraintEnd_toEndOf="@+id/vk_toolbar"
        app:layout_constraintTop_toTopOf="@+id/vk_toolbar"
        style="?attr/buttonBrandWhiteMedium"/>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/vk_popup_scrollable_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/vk_popup_recycler_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vk_toolbar"
        app:layout_constraintVertical_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_gravity="center_horizontal"
                android:id="@+id/vk_logo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="31dp"
                android:layout_marginBottom="23dp"
                app:backgroundImage="?attr/gray4"
                app:roundedCornerRadius="20dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/vk_group_container"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/vk_group_image"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="31dp"
                    android:layout_marginBottom="15dp"
                    app:backgroundImage="?attr/gray4"
                    app:overlayImage="@color/expected_black_alpha_4"
                    app:roundedCornerRadius="20dp"/>
                <TextView
                    android:textAppearance="?attr/textH3"
                    android:gravity="center_horizontal"
                    android:id="@+id/vk_group_name"
                    android:paddingTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"/>
                <TextView
                    android:textAppearance="?attr/textM20"
                    android:textColor="?attr/gray54"
                    android:gravity="center_horizontal"
                    android:id="@+id/vk_group_members"
                    android:paddingTop="4dp"
                    android:paddingBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"/>
            </LinearLayout>
            <TextView
                android:textAppearance="?attr/textH2"
                android:id="@+id/vk_popup_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="24dp"/>
            <TextView
                android:textAppearance="?attr/textM10"
                android:id="@+id/vk_popup_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="24dp"/>
            <com.avito.android.lib.design.banner.Banner
                android:id="@+id/vk_popup_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="12dp"/>
            <TextView
                android:textAppearance="?attr/textS10"
                android:textColor="?attr/gray54"
                android:id="@+id/vk_popup_disclaimer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="24dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/vk_popup_buttons_container_scrolling"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:layout_marginHorizontal="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <FrameLayout
        android:id="@+id/vk_popup_recycler_container"
        android:paddingTop="12dp"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintBottom_toTopOf="@+id/vk_popup_buttons_container_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vk_popup_scrollable_container"
        app:layout_constraintVertical_weight="1"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/vk_popup_buttons_container_bottom"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
