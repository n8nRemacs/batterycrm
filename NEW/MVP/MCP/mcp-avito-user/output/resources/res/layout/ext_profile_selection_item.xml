<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/extended_profile_selection_item_container"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="164dp"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/extended_profile_selection_image_3_container"
        android:background="?attr/white"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="74dp"
        app:layout_constraintBottom_toBottomOf="@+id/extended_profile_selection_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/extended_profile_selection_image">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/extended_profile_selection_image_3"
            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.4"
            app:overlayImage="@color/expected_black_alpha_4"
            app:placeholderImage="?attr/warmGray28"
            app:roundedCornerRadius="10dp"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/extended_profile_selection_image_2_container"
        android:background="?attr/white"
        android:layout_width="104dp"
        android:layout_height="104dp"
        android:layout_marginStart="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/extended_profile_selection_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/extended_profile_selection_image">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/extended_profile_selection_image_2"
            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.65"
            app:overlayImage="@color/expected_black_alpha_4"
            app:placeholderImage="?attr/warmGray16"
            app:roundedCornerRadius="10dp"/>
    </FrameLayout>
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/extended_profile_selection_image"
        android:background="?attr/white"
        android:padding="2dp"
        android:layout_width="132dp"
        android:layout_height="132dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:overlayImage="@color/expected_black_alpha_4"
        app:placeholderImage="@drawable/ic_sx_selection_placeholder"
        app:roundedCornerRadius="20dp"/>
    <View
        android:id="@+id/extended_profile_selection_moderation_overlay"
        android:background="?attr/whiteAlpha64"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/extended_profile_selection_image"
        app:layout_constraintEnd_toEndOf="@+id/extended_profile_selection_image_3_container"
        app:layout_constraintStart_toStartOf="@+id/extended_profile_selection_image"
        app:layout_constraintTop_toTopOf="@+id/extended_profile_selection_image"/>
    <View
        android:id="@+id/extended_profile_selection_clickable_overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/extended_profile_selection_image"
        app:layout_constraintEnd_toEndOf="@+id/extended_profile_selection_image_3_container"
        app:layout_constraintStart_toStartOf="@+id/extended_profile_selection_image"
        app:layout_constraintTop_toTopOf="@+id/extended_profile_selection_image"/>
    <ImageView
        android:id="@+id/extended_profile_selection_moderation_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/extended_profile_selection_image"
        app:layout_constraintEnd_toEndOf="@+id/extended_profile_selection_image"
        app:layout_constraintStart_toStartOf="@+id/extended_profile_selection_image"
        app:layout_constraintTop_toTopOf="@+id/extended_profile_selection_image"
        app:srcCompat="@drawable/ic_selection_moderation_fail"/>
    <TextView
        android:textAppearance="?attr/textH40"
        android:ellipsize="end"
        android:id="@+id/extended_profile_selection_item_title"
        android:paddingTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:paddingStart="6dp"
        android:paddingEnd="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/extended_profile_selection_image"/>
    <TextView
        android:textAppearance="?attr/textS20"
        android:id="@+id/extended_profile_selection_item_description"
        android:paddingTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="6dp"
        android:paddingEnd="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/extended_profile_selection_item_title"/>
</androidx.constraintlayout.widget.ConstraintLayout>
