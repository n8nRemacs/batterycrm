<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="32dp">
    <TextView
        android:textAppearance="?attr/textH30"
        android:ellipsize="end"
        android:gravity="start"
        android:id="@+id/recommendations_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toStartOf="@+id/recommendations_header_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.avito.android.lib.design.header_button.HeaderButton
        android:id="@+id/recommendations_header_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:headerButton_textIconStyleAttr="?attr/textIconHeaderbuttonArrow"
        app:layout_constraintBottom_toBottomOf="@+id/recommendations_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/recommendations_title"
        style="?attr/headerButtonH30"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/recommendations_items"
        android:background="@drawable/bg_profile_pro_recommendations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recommendations_title"/>
</androidx.constraintlayout.widget.ConstraintLayout>
