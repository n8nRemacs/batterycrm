<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bbip_private_budget_content_container"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.avito.android.lib.design.docking_badge.DockingBadge
        android:id="@+id/bbip_private_budget_content_discount_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-13dp"
        android:layout_marginStart="12dp"
        android:elevation="1dp"
        app:dockingBadge_end="?attr/dockingBadgeEdgePipkaMedium"
        app:dockingBadge_start="?attr/dockingBadgeEdgeFlagMedium"
        style="?attr/dockingBadgeRedMedium"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/bg_bbip_private_budget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="@drawable/fg_bbip_private_budget">
        <TextView
            android:textAppearance="?attr/textH10"
            android:id="@+id/bbip_private_budget_content_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/bbip_private_budget_custom_icon_view"
            android:background="@drawable/circle_white"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/bbip_private_budget_content_price"
            app:layout_constraintStart_toEndOf="@+id/bbip_private_budget_content_price"
            app:layout_constraintTop_toTopOf="@+id/bbip_private_budget_content_price"/>
        <com.avito.android.lib.design.strikethrough.StrikethroughTextView
            android:textAppearance="?attr/textM10"
            android:textColor="?attr/gray54"
            android:id="@+id/bbip_private_budget_content_budget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bbip_private_budget_content_price"
            app:strikethrough_show="true"
            app:strikethrough_tint="?attr/red600"/>
        <com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout
            android:id="@+id/bbip_private_budget_content_price_shimmer"
            android:layout_width="108dp"
            android:layout_height="20dp"
            android:layout_marginTop="33dp"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="?attr/shimmerDefault">
            <com.avito.android.lib.design.skeleton.Skeleton
                android:id="@+id/bbip_private_budget_content_price_skeleton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:skeleton_radius="6dp"/>
        </com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout>
        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/bbip_private_budget_content_price_barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="bbip_private_budget_content_price, bbip_private_budget_content_budget, bbip_private_budget_content_price_shimmer"/>
        <TextView
            android:id="@+id/bbip_private_budget_content_forecast_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bbip_private_budget_content_price_barrier"/>
        <TextView
            android:textAppearance="?attr/textL10"
            android:id="@+id/bbip_private_budget_content_forecast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="32dp"
            android:layout_marginStart="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bbip_private_budget_content_forecast_title"/>
        <com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout
            android:id="@+id/bbip_private_budget_content_forecast_shimmer"
            android:layout_width="80dp"
            android:layout_height="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="36dp"
            android:layout_marginStart="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bbip_private_budget_content_forecast_title"
            style="?attr/shimmerDefault">
            <com.avito.android.lib.design.skeleton.Skeleton
                android:id="@+id/bbip_private_budget_content_forecast_skeleton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:skeleton_radius="4dp"/>
        </com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout>
        <com.avito.android.fresco.SimpleDraweeView
            android:id="@+id/bbip_private_budget_content_image"
            android:layout_width="108dp"
            android:layout_height="144dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:roundBottomLeft="false"
            app:roundBottomRight="true"
            app:roundTopLeft="false"
            app:roundTopRight="true"
            app:roundedCornerRadius="24dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
