<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/landline_phone_verification_screen_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ru.avito.component.toolbar.CollapsingTitleAppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stateListAnimator="@drawable/appbar_allways_unelevated"
        app:titleSidePadding="@dimen/standard_padding"
        app:titlesBottomPadding="10dp"/>
    <androidx.core.widget.NestedScrollView
        android:orientation="vertical"
        android:id="@+id/scrollableContainer"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp">
            <TextView
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                style="?attr/textBody"/>
            <TextView
                android:textColor="?attr/red"
                android:id="@+id/bot_error"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="@string/landline_phone_bot_error"
                style="?attr/textBody"/>
            <ViewAnimator
                android:id="@+id/action_and_state_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:measureAllChildren="false">
                <com.avito.android.lib.design.button.Button
                    android:id="@+id/state_call_order"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/landline_phone_state_call_order"
                    android:layout_marginVertical="8dp"
                    style="?attr/buttonPrimaryLarge"/>
                <TextView
                    android:textColor="?attr/blue400"
                    android:id="@+id/state_call_ordered"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/landline_phone_state_call_ordered"
                    android:drawablePadding="8dp"
                    app:drawableStartCompat="@drawable/ic_phone_calling_24"
                    style="?attr/textHeadingSmall"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/state_manual"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp">
                    <com.avito.android.lib.design.button.Button
                        android:id="@+id/cancel_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/landline_phone_cancel_button"
                        android:layout_weight="1"
                        android:layout_marginEnd="10dp"
                        style="?attr/buttonSecondaryLarge"/>
                    <com.avito.android.lib.design.button.Button
                        android:id="@+id/accept_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/landline_phone_accept_button"
                        android:layout_weight="1"
                        style="?attr/buttonPrimaryLarge"/>
                </LinearLayout>
                <com.avito.android.lib.design.button.Button
                    android:id="@+id/ok_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/landline_phone_accept_button"
                    style="?attr/buttonPrimaryLarge"/>
            </ViewAnimator>
            <View
                android:id="@+id/divider"
                android:background="?attr/gray8"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="24dp"/>
            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                style="?attr/textBody"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
