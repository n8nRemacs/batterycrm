<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/banner_auto_replies_icon"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginBottom="4dp"
        android:adjustViewBounds="true"
        android:contentDescription="@null"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/banner_auto_replies_close"
        app:layout_constraintTop_toBottomOf="@+id/banner_auto_replies_close"
        app:srcCompat="?attr/img_bannerAutoReplies"/>
    <ImageView
        android:id="@+id/banner_auto_replies_close"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="2dp"
        android:contentDescription="@null"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/ic_close24"
        app:tint="?attr/black"/>
    <TextView
        android:textAppearance="?attr/textH3"
        android:textColor="?attr/black"
        android:id="@+id/banner_auto_replies_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toStartOf="@+id/banner_auto_replies_close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textM1"
        android:textColor="?attr/black"
        android:id="@+id/banner_auto_replies_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toStartOf="@+id/banner_auto_replies_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/banner_auto_replies_title"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/banner_auto_replies_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/banner_auto_replies_message"
        app:layout_constraintTop_toBottomOf="@+id/banner_auto_replies_message"
        style="?attr/buttonPrimaryMedium"/>
</androidx.constraintlayout.widget.ConstraintLayout>
