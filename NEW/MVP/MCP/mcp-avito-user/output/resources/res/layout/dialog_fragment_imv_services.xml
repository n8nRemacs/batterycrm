<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="?attr/textH20"
        android:id="@+id/imv_services_dialog_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textH40"
        android:id="@+id/imv_services_dialog_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imv_services_dialog_header"/>
    <FrameLayout
        android:id="@+id/imv_services_dialog_chart_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imv_services_dialog_title"/>
    <TextView
        android:textAppearance="?attr/textH40"
        android:id="@+id/imv_services_dialog_hint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imv_services_dialog_chart_container"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/imv_services_dialog_options_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintBottom_toTopOf="@+id/imv_services_dialog_poll_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imv_services_dialog_hint"
        app:layout_goneMarginBottom="12dp"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:id="@+id/imv_services_dialog_poll_title"
        android:visibility="visible"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="34dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imv_services_dialog_options_container"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:textColor="?attr/blue600"
        android:id="@+id/imv_services_dialog_poll_positive"
        android:padding="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/imv_services_dialog_poll_title"
        app:layout_constraintStart_toEndOf="@+id/imv_services_dialog_poll_title"
        app:layout_constraintTop_toTopOf="@+id/imv_services_dialog_poll_title"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:textColor="?attr/blue600"
        android:id="@+id/imv_services_dialog_poll_negative"
        android:padding="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/imv_services_dialog_poll_title"
        app:layout_constraintStart_toEndOf="@+id/imv_services_dialog_poll_positive"
        app:layout_constraintTop_toTopOf="@+id/imv_services_dialog_poll_title"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/imv_services_dialog_poll_buttons_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="imv_services_dialog_poll_positive, imv_services_dialog_poll_negative"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:textColor="?attr/gray44"
        android:id="@+id/imv_services_dialog_poll_answered"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@+id/imv_services_dialog_poll_title"
        app:layout_constraintTop_toTopOf="@+id/imv_services_dialog_poll_title"/>
</androidx.constraintlayout.widget.ConstraintLayout>
