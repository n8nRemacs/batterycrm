<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.avito.android.lib.design.list_item.ListItemRadio
        android:id="@+id/spouse_applicant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        app:listItem_checked="true"
        app:listItem_radioStyle="?attr/radioButton"
        app:listItem_subtitle=""
        app:listItem_title="@string/applicant_type_spouse"
        style="?attr/listItemRadio"/>
    <com.avito.android.lib.design.list_item.ListItemRadio
        android:id="@+id/general_applicant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:layout_marginHorizontal="16dp"
        app:listItem_radioStyle="?attr/radioButton"
        app:listItem_subtitle=""
        app:listItem_title="@string/applicant_type_general"
        style="?attr/listItemRadio"/>
</LinearLayout>
