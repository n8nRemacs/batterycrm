<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/my_advert_action_with_badge_item_container"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <include layout="@layout/my_advert_action_button"/>
    <com.avito.android.lib.design.badge.Badge
        android:theme="@style/Theme.DesignSystem.Re23"
        android:layout_gravity="end|top"
        android:id="@+id/my_advert_action_with_badge_item_badge"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-8dp"
        android:layout_marginEnd="16dp"
        app:badge_strokeColor="?attr/white"
        app:badge_strokeWidth="2dp"
        style="?attr/badgeTextRedS"/>
</FrameLayout>
