<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/bottom_sheet_menu_item"
    android:background="?attr/selectableItemBackground"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="52dp">
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_gravity="start|center_vertical"
        android:id="@+id/menu_item_thumbnail"
        android:visibility="gone"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="16dp"
        app:actualImageScaleType="centerCrop"
        app:failureImage="?attr/gray8"
        app:placeholderImage="?attr/gray8"
        app:progressBarImage="?attr/gray8"
        app:roundAsCircle="true"/>
    <ImageView
        android:layout_gravity="start|center_vertical"
        android:id="@+id/menu_item_icon"
        android:visibility="gone"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:scaleType="centerInside"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginVertical="16dp"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:textColor="?attr/black"
        android:ellipsize="end"
        android:layout_gravity="center_vertical"
        android:id="@+id/menu_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:singleLine="true"
        android:drawablePadding="8dp"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="16dp"/>
</FrameLayout>
