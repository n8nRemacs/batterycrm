<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/sbc_auto_dispatch_empty_extra_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="top"
        android:orientation="horizontal"
        android:id="@+id/sbc_auto_dispatch_empty_row_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">
        <com.avito.android.lib.design.badge.Badge
            android:textColor="?attr/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="1"
            app:badge_backgroundColor="?attr/black"
            style="?attr/badgeTextBlackS"/>
        <TextView
            android:textAppearance="?attr/textM10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sbc_auto_dispatch_empty_content_extra_body_row_1"
            android:layout_marginStart="8dp"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="top"
        android:orientation="horizontal"
        android:id="@+id/sbc_auto_dispatch_empty_row_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">
        <com.avito.android.lib.design.badge.Badge
            android:textColor="?attr/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="2"
            app:badge_backgroundColor="?attr/black"
            style="?attr/badgeTextBlackS"/>
        <TextView
            android:textAppearance="?attr/textM10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sbc_auto_dispatch_empty_content_extra_body_row_2"
            android:layout_marginStart="8dp"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="top"
        android:orientation="horizontal"
        android:id="@+id/sbc_auto_dispatch_empty_row_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">
        <com.avito.android.lib.design.badge.Badge
            android:textColor="?attr/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="3"
            app:badge_backgroundColor="?attr/black"
            style="?attr/badgeTextBlackS"/>
        <TextView
            android:textAppearance="?attr/textM10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sbc_auto_dispatch_empty_content_extra_body_row_3"
            android:layout_marginStart="8dp"/>
    </LinearLayout>
</LinearLayout>
