<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/messenger_blacklist_reasons_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_gravity="top"
            android:id="@+id/blacklist_reasons_list"
            android:paddingBottom="64dp"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/actionBarSize"
            android:paddingHorizontal="@dimen/content_horizontal_padding"/>
        <FrameLayout
            android:layout_gravity="bottom"
            android:id="@+id/blacklist_reasons_block_button_container"
            android:background="?attr/white"
            android:paddingTop="10dp"
            android:paddingBottom="16dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp">
            <com.avito.android.lib.design.button.Button
                android:layout_gravity="center"
                android:id="@+id/blacklist_reasons_block_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/messenger_blacklist_reasons_block_button"
                style="?attr/buttonPrimaryLarge"/>
        </FrameLayout>
        <com.avito.android.lib.design.spinner.Spinner
            android:layout_gravity="center"
            android:id="@+id/blacklist_reasons_progress"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            style="?attr/spinnerDarkLarge"/>
    </FrameLayout>
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
