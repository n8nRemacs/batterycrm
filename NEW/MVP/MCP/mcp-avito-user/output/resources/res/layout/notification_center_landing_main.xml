<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/notification_center_landing_main_screen_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/content_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_gravity="center_vertical"
            android:id="@+id/content"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.avito.android.lib.design.bottom_sheet.BoundedLinearLayout
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingTop="?attr/actionBarSize"
                android:paddingRight="12dp"
                android:paddingBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxWidth="480dp">
                <com.avito.android.lib.design.bottom_sheet.BoundedFrameLayout
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/image_holder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="16dp"
                    android:maxWidth="240dp"
                    android:maxHeight="240dp">
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:placeholderImage="@drawable/ic_landing_placeholder"
                        app:viewAspectRatio="1"/>
                </com.avito.android.lib.design.bottom_sheet.BoundedFrameLayout>
                <include
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="16dp"
                    layout="@layout/text_display"/>
                <TextView
                    android:textAppearance="?attr/textBody"
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="28dp"
                    android:textIsSelectable="true"/>
                <include
                    android:id="@+id/action"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/button_primary"/>
            </com.avito.android.lib.design.bottom_sheet.BoundedLinearLayout>
        </ScrollView>
    </FrameLayout>
    <include layout="@layout/appbar"/>
</FrameLayout>
