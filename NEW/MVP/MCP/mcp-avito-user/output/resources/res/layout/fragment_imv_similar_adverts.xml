<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/toolbar"/>
    <FrameLayout
        android:id="@+id/imv_similar_adverts_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.avito.android.ui.widget.ScrollDirectionAwareRecyclerView
            android:id="@+id/imv_similar_adverts_recycler_view"
            android:paddingLeft="@dimen/serp_horizontal_padding"
            android:paddingRight="@dimen/serp_horizontal_padding"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
</LinearLayout>
