<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="vertical"
    android:id="@+id/recall_me_block"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/content_horizontal_padding">
    <TextView
        android:textAppearance="?attr/textH3"
        android:id="@+id/recall_me_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/recall_me_block_vertical_half_standard_padding"/>
    <TextView
        android:textAppearance="?attr/textBody"
        android:id="@+id/recall_me_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/recall_me_block_vertical_standard_padding"/>
    <com.avito.android.lib.design.component_container.ComponentContainer
        android:orientation="horizontal"
        android:id="@+id/recall_me_phone_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/recall_me_block_vertical_standard_padding"
        app:componentContainer_resetCondition="atLeastOne">
        <com.avito.android.lib.design.input.Input
            android:id="@+id/recall_me_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/advert_details_recall_me_block_phone_hint"
            android:singleLine="true"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:autofillHints="phone"
            app:input_clearButton="true"
            app:input_formatterType="mobile_phone"
            app:layout_autoReset="notNormalOnly"
            style="?attr/input"/>
    </com.avito.android.lib.design.component_container.ComponentContainer>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/recall_me_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/recall_me_block_vertical_custom_padding"
        style="?attr/buttonPrimaryLarge"/>
    <TextView
        android:textAppearance="?attr/textBodySmall"
        android:textColor="?attr/gray48"
        android:id="@+id/recall_me_disclaimer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
