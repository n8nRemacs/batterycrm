<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/orders_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="32dp">
    <TextView
        android:textAppearance="?attr/textH30"
        android:id="@+id/orders_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/orders_badge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textH70"
        android:textColor="?attr/white"
        android:gravity="center_vertical"
        android:id="@+id/orders_badge"
        android:background="@drawable/bg_profile_pro_orders_badge"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:minWidth="42dp"
        android:drawablePadding="6dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_marginEnd="16dp"
        app:drawableRightCompat="?attr/ic_arrowForward16"
        app:drawableTint="?attr/white"
        app:layout_constraintBottom_toBottomOf="@+id/orders_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/orders_title"/>
    <com.avito.android.profile.horizontal_scroll_widget.HorizontalScrollView
        android:id="@+id/orders"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:horizontalScrollView_itemsListTopMargin="12dp"
        app:horizontalScrollView_startItemPadding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orders_title"/>
</androidx.constraintlayout.widget.ConstraintLayout>
