<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/fees_methods_v2_limits_info_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="?attr/textH10"
        android:id="@+id/fees_methods_v2_limits_info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:id="@+id/fees_methods_v2_limits_info_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"/>
    <com.avito.android.lib.design.progress_bar_re23.ProgressBarRe23
        android:id="@+id/fees_methods_v2_limits_info_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        style="?attr/progressBarDisabledSmall"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:id="@+id/fees_methods_v2_limits_info_progress_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:id="@+id/fees_methods_v2_limits_info_extra_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"/>
</LinearLayout>
