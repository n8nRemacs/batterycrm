<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/UserProfileCardContainer">
    <com.avito.android.lib.design.banner.Banner
        android:theme="@style/Theme.DesignSystem.Re23"
        android:id="@+id/profile_banner_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:stateListAnimator="@xml/banner_pressed_scale"
        app:banner_content="@layout/profile_promo_banner_item_content"
        app:banner_contentPaddingBottom="0dp"
        app:banner_contentPaddingLeft="0dp"
        app:banner_contentPaddingRight="0dp"
        app:banner_contentPaddingTop="0dp"
        app:banner_cornerRadius="16dp"/>
</FrameLayout>
