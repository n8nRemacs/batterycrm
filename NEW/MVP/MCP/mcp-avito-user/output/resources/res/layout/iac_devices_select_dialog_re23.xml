<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="vertical"
    android:id="@+id/devices_select_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/devices_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/devices_linear"
            android:paddingTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.core.widget.NestedScrollView>
    <FrameLayout
        android:id="@+id/devices_error_container"
        android:paddingTop="6dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="?attr/publish_horizontalPadding">
        <TextView
            android:textColor="?attr/red600"
            android:id="@+id/devices_error_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/iac_devices_dialog_error"
            style="?attr/textS10"/>
    </FrameLayout>
    <com.avito.android.lib.design.floating_container.FloatingContainer xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:id="@+id/devices_bottom_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:floatingContainer_horizontalPadding="@dimen/publish_continue_button_side_margin"
        style="?attr/floatingContainerIncomplete">
        <com.avito.android.lib.design.button.Button
            android:id="@+id/devices_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?attr/buttonPrimaryLarge"/>
    </com.avito.android.lib.design.floating_container.FloatingContainer>
</LinearLayout>
