<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/photo_gallery_root"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.avito.android.photo_gallery.PhotoGallerySwipeCloseView
        android:id="@+id/swipe_close_view"
        android:background="@color/expected_gallery_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.avito.android.ui.SafeViewPager
            android:id="@+id/view_pager"
            android:background="@color/expected_gallery_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.avito.android.photo_gallery.PhotoGallerySwipeCloseView>
    <com.avito.android.lib.design.button.Button
        android:theme="@style/Theme.DesignSystem.Re23"
        android:layout_gravity="bottom|center_horizontal"
        android:id="@+id/gallery_buy_button"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="31dp"
        style="?attr/buttonPayLarge"/>
    <LinearLayout
        android:layout_gravity="bottom|center_horizontal"
        android:orientation="vertical"
        android:id="@+id/contact_bar_container"
        android:background="?attr/transparentBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/contact_bar_buttons_container"
            android:background="?attr/transparentBlack"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingBottom="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/contact_bar_buttons_container2"
            android:background="?attr/transparentBlack"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingBottom="6dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <include layout="@layout/photo_gallery_legacy_navbar"/>
    <com.avito.android.lib.design.nav_bar.NavBar
        android:theme="@style/Theme.DesignSystem.Re23"
        android:id="@+id/navbar"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navBar_paddingHorizontal="6dp"/>
    <LinearLayout
        android:theme="@style/Theme.DesignSystem.Re23"
        android:layout_gravity="bottom|left"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="68dp"
        android:layout_marginHorizontal="8dp">
        <com.avito.android.lib.design.button.Button
            android:id="@+id/has_realty_layout"
            android:visibility="gone"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginRight="8dp"
            android:contentDescription="@null"
            app:srcCompat="@drawable/ic_realty_layout_44"
            style="?attr/buttonPrimaryMedium"/>
        <com.avito.android.lib.design.button.Button
            android:id="@+id/close_realty_layout"
            android:visibility="gone"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginRight="8dp"
            android:contentDescription="@null"
            app:srcCompat="@drawable/ic_cross_44"
            style="?attr/buttonPrimaryMedium"/>
        <com.avito.android.lib.design.button.Button
            android:id="@+id/has_ai_image"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginRight="8dp"
            android:contentDescription="@null"
            style="?attr/buttonPrimaryMedium"/>
    </LinearLayout>
</FrameLayout>
