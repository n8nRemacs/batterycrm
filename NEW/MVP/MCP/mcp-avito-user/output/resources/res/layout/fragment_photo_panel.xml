<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@drawable/bg_photo_panel"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="16sp"
        android:textColor="?attr/gray48"
        android:layout_gravity="center_vertical"
        android:id="@+id/no_photo_selected"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/no_photo_selected"
        android:layout_weight="1"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>
    <FrameLayout
        android:layout_gravity="center_vertical"
        android:id="@+id/photo_count_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <FrameLayout
            android:layout_gravity="center_vertical"
            android:id="@+id/photos_container"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp">
            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_gravity="bottom|center_horizontal"
                android:id="@+id/bottom_photo"
                android:layout_width="44dp"
                android:layout_height="33dp"
                android:alpha="0.26"
                app:roundedCornerRadius="5dp"
                style="@style/Widget.Avito.SimpleDraweeView.Serp.Item.Image.List"/>
            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_gravity="center"
                android:id="@+id/top_photo"
                android:layout_width="48dp"
                android:layout_height="36dp"
                app:roundedCornerRadius="5dp"
                style="@style/Widget.Avito.SimpleDraweeView.Serp.Item.Image.List"/>
        </FrameLayout>
        <TextView
            android:textSize="16sp"
            android:textColor="?attr/black"
            android:layout_gravity="start|center_vertical"
            android:id="@+id/photo_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="74dp"/>
    </FrameLayout>
    <com.avito.android.lib.design.button.Button
        android:layout_gravity="end|center_vertical"
        android:id="@+id/main_button"
        android:layout_width="97dp"
        android:layout_height="42dp"
        android:text="@string/photo_panel_ready_button"
        android:layout_marginEnd="16dp"
        style="?attr/buttonPrimaryMedium"/>
</LinearLayout>
