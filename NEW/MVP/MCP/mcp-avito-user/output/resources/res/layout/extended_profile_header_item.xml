<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/extended_profile_hat_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/avatar"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_marginEnd="@dimen/extended_profile_widget_horizontal_margin"
        app:backgroundImage="?attr/gray8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:overlayImage="@color/expected_black_alpha_4"
        app:placeholderImage="?attr/gray8"/>
    <TextView
        android:textAppearance="?attr/textH30"
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/extended_profile_widget_horizontal_margin"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:id="@+id/company_name"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/extended_profile_widget_horizontal_margin"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name"/>
    <TextView
        android:textAppearance="?attr/textH50"
        android:id="@+id/rating_number"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginStart="@dimen/extended_profile_widget_horizontal_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/company_name"
        app:layout_goneMarginTop="8dp"/>
    <com.avito.android.lib.design.rating.RatingBar
        android:id="@+id/rating_score"
        android:visibility="gone"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/rating_number"
        app:layout_constraintStart_toEndOf="@+id/rating_number"
        app:layout_constraintTop_toTopOf="@+id/rating_number"
        style="@style/Design.Widget.Avito.Rating.Normal"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:textColor="?attr/blue600"
        android:ellipsize="end"
        android:id="@+id/rating_text"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:maxLines="1"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/avatar"
        app:layout_constraintStart_toEndOf="@+id/rating_score"
        app:layout_constraintTop_toBottomOf="@+id/company_name"
        app:layout_goneMarginStart="@dimen/extended_profile_widget_horizontal_margin"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="rating_number, rating_text"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/subscribers_and_subscriptions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="@dimen/extended_profile_widget_horizontal_margin"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barrier"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/subtitle"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="@dimen/extended_profile_widget_horizontal_margin"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subscribers_and_subscriptions"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:textColor="?attr/blue600"
        android:ellipsize="end"
        android:id="@+id/subscribe_text"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:maxLines="1"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subtitle"/>
    <com.avito.android.lib.design.spinner.Spinner
        android:id="@+id/subscribe_spinner"
        android:visibility="gone"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginTop="10dp"
        android:maxWidth="14dp"
        android:maxHeight="14dp"
        android:minWidth="14dp"
        android:minHeight="14dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subtitle"
        style="?attr/spinnerDarkSmall"/>
</androidx.constraintlayout.widget.ConstraintLayout>
