<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:id="@+id/review_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/review_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:actualImageScaleType="centerCrop"
        app:backgroundImage="?attr/gray8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:placeholderImage="?attr/gray8"
        app:placeholderImageScaleType="center"
        app:roundAsCircle="true"/>
    <TextView
        android:textAppearance="?attr/textH50"
        android:ellipsize="end"
        android:id="@+id/review_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:singleLine="true"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintEnd_toStartOf="@+id/review_actions"
        app:layout_constraintStart_toEndOf="@+id/review_avatar"
        app:layout_constraintTop_toTopOf="@+id/review_avatar"/>
    <TextView
        android:textAppearance="?attr/textS10"
        android:textColor="?attr/gray54"
        android:ellipsize="end"
        android:id="@+id/review_rated"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintEnd_toStartOf="@+id/review_actions"
        app:layout_constraintStart_toEndOf="@+id/review_avatar"
        app:layout_constraintTop_toBottomOf="@+id/review_name"/>
    <ImageView
        android:id="@+id/review_actions"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="@+id/review_avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/review_avatar"
        app:srcCompat="@drawable/ic_review_actions_redesign"/>
    <FrameLayout
        android:id="@+id/review_status_container"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="@+id/review_actions"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/review_avatar"
        app:layout_constraintTop_toBottomOf="@+id/review_rated">
        <TextView
            android:textAppearance="?attr/textM10"
            android:ellipsize="end"
            android:id="@+id/review_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/review_score_stage_title_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/review_actions"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/review_avatar"
        app:layout_constraintTop_toBottomOf="@+id/review_status_container">
        <com.avito.android.lib.design.rating.RatingBar
            android:layout_gravity="center_vertical"
            android:id="@+id/review_score"
            android:paddingTop="1dp"
            android:layout_marginEnd="6dp"
            app:ratingBar_dividerWidth="1dp"
            style="@style/Design.Widget.Avito.Rating.Normal"/>
        <TextView
            android:textAppearance="?attr/textM20"
            android:textColor="?attr/gray54"
            android:ellipsize="end"
            android:layout_gravity="center_vertical"
            android:id="@+id/review_stage_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"/>
    </LinearLayout>
    <TextView
        android:textAppearance="?attr/textM20"
        android:textColor="?attr/gray54"
        android:ellipsize="end"
        android:id="@+id/review_item_title"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="@+id/review_actions"
        app:layout_constraintStart_toStartOf="@+id/review_avatar"
        app:layout_constraintTop_toBottomOf="@+id/review_score_stage_title_container"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:textColor="?attr/gray54"
        android:ellipsize="end"
        android:id="@+id/review_delivery_title"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toEndOf="@+id/review_actions"
        app:layout_constraintStart_toStartOf="@+id/review_avatar"
        app:layout_constraintTop_toBottomOf="@+id/review_item_title"/>
    <androidx.recyclerview.widget.RecyclerView
        android:orientation="horizontal"
        android:id="@+id/review_images"
        android:paddingBottom="8dp"
        android:visibility="gone"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/review_delivery_title"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/review_text_sections"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/review_images"/>
    <FrameLayout
        android:id="@+id/answer_avatar_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="@+id/review_avatar"
        app:layout_constraintTop_toBottomOf="@+id/review_text_sections">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/answer_user_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:actualImageScaleType="centerCrop"
            app:backgroundImage="?attr/gray8"
            app:placeholderImage="?attr/gray8"
            app:placeholderImageScaleType="center"
            app:roundAsCircle="true"/>
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/answer_shop_avatar"
            android:layout_width="60dp"
            android:layout_height="40dp"
            app:actualImageScaleType="centerCrop"
            app:backgroundImage="?attr/gray8"
            app:placeholderImage="?attr/gray8"
            app:placeholderImageScaleType="center"
            app:roundedCornerRadius="6dp"/>
    </FrameLayout>
    <TextView
        android:textAppearance="?attr/textH50"
        android:ellipsize="end"
        android:id="@+id/answer_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:singleLine="true"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintEnd_toStartOf="@+id/answer_actions"
        app:layout_constraintStart_toEndOf="@+id/answer_avatar_container"
        app:layout_constraintTop_toTopOf="@+id/answer_avatar_container"/>
    <TextView
        android:textAppearance="?attr/textS10"
        android:textColor="?attr/gray54"
        android:ellipsize="end"
        android:id="@+id/answer_rated"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintEnd_toStartOf="@+id/answer_actions"
        app:layout_constraintStart_toEndOf="@+id/answer_avatar_container"
        app:layout_constraintTop_toBottomOf="@+id/answer_name"/>
    <ImageView
        android:id="@+id/answer_actions"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="@+id/answer_avatar_container"
        app:layout_constraintEnd_toEndOf="@+id/review_actions"
        app:layout_constraintTop_toTopOf="@+id/answer_avatar_container"
        app:srcCompat="@drawable/ic_review_actions_redesign"/>
    <FrameLayout
        android:id="@+id/answer_status_container"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="@+id/review_actions"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/answer_avatar_container"
        app:layout_constraintTop_toBottomOf="@+id/answer_rated">
        <TextView
            android:textAppearance="?attr/textM10"
            android:ellipsize="end"
            android:id="@+id/answer_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:orientation="horizontal"
        android:id="@+id/answer_images"
        android:visibility="gone"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answer_status_container"/>
    <com.avito.android.rating_ui.review_text_section.RatingReviewTextSectionView
        android:id="@+id/answer_text_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/answer_images"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/answer_content"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="answer_avatar_container,answer_name,answer_rated,answer_text_section"/>
</androidx.constraintlayout.widget.ConstraintLayout>
