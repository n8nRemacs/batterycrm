<?xml version="1.0" encoding="utf-8"?>
<com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/payment_block_content_container_skeleton"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="28dp"
    android:layout_marginBottom="2dp"
    android:paddingHorizontal="@dimen/content_horizontal_padding"
    app:shimmer_animationDuration="3000"
    app:shimmer_autostart="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/payment_block_content_skeleton_title_part_1"
            android:background="@drawable/rounded_background_r16"
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:backgroundTint="?attr/warmGray4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <View
            android:id="@+id/payment_block_content_skeleton_title_part_2"
            android:background="@drawable/rounded_background_r16"
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:layout_marginTop="6dp"
            android:backgroundTint="?attr/warmGray4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/payment_block_content_skeleton_title_part_1"/>
        <View
            android:id="@+id/payment_block_content_skeleton_delivery_address"
            android:background="@drawable/rounded_background_r16"
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_marginTop="19dp"
            android:backgroundTint="?attr/warmGray4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/payment_block_content_skeleton_title_part_2"/>
        <View
            android:id="@+id/payment_block_content_skeleton_type_button"
            android:background="@drawable/rounded_background_r16"
            android:layout_width="112dp"
            android:layout_height="52dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="?attr/warmGray4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/payment_block_content_skeleton_delivery_address"/>
        <View
            android:id="@+id/payment_block_content_skeleton_slider"
            android:background="@drawable/rounded_background_r16"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginTop="12dp"
            android:minWidth="225dp"
            android:layout_marginStart="6dp"
            android:backgroundTint="?attr/warmGray4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/payment_block_content_skeleton_type_button"
            app:layout_constraintTop_toBottomOf="@+id/payment_block_content_skeleton_delivery_address"/>
        <TextView
            android:id="@+id/payment_block_content_skeleton_bottom_text_part1"
            android:background="@drawable/rounded_background_r16"
            android:layout_width="0dp"
            android:layout_height="14dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="52dp"
            android:backgroundTint="?attr/warmGray4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/payment_block_content_skeleton_type_button"/>
        <TextView
            android:id="@+id/payment_block_content_skeleton_bottom_text_part2"
            android:background="@drawable/rounded_background_r16"
            android:layout_width="0dp"
            android:layout_height="14dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="80dp"
            android:backgroundTint="?attr/warmGray4"
            app:layout_constraintEnd_toEndOf="@+id/payment_block_content_skeleton_bottom_text_part1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/payment_block_content_skeleton_bottom_text_part1"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout>
