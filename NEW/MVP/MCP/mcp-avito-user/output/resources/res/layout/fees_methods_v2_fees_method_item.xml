<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fees_methods_v2_fees_method_container"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/fees_methods_v2_fees_method_card_content"
        android:background="@drawable/bg_rounded_warmgray4_r24"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="24dp"
        android:paddingEnd="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:textAppearance="?attr/textH40"
            android:id="@+id/fees_methods_v2_fees_method_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textAppearance="?attr/textH25"
            android:id="@+id/fees_methods_v2_fees_method_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fees_methods_v2_fees_method_title"/>
        <TextView
            android:textAppearance="?attr/textM10"
            android:id="@+id/fees_methods_v2_fees_method_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fees_methods_v2_fees_method_price"/>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardBackgroundColor="?attr/transparentWhite"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/fees_methods_v2_fees_method_card_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fees_methods_v2_fees_method_card_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_gravity="end|center_vertical"
            android:id="@+id/fees_methods_v2_fees_method_icon"
            android:layout_width="88dp"
            android:layout_height="186dp"
            android:layout_marginBottom="6dp"/>
    </androidx.cardview.widget.CardView>
    <com.avito.android.lib.design.docking_badge.DockingBadgeContainer
        android:id="@+id/fees_methods_v2_fees_method_badge_bar"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-14dp"
        android:layout_marginHorizontal="12dp"
        app:dockingBadgeContainer_badgeSize="medium"
        app:dockingBadgeContainer_numberOfLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="?attr/dockingBadgeContainerMedium"/>
</androidx.constraintlayout.widget.ConstraintLayout>
