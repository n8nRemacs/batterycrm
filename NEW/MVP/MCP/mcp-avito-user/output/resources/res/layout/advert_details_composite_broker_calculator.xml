<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="vertical"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:paddingHorizontal="16dp"
    android:paddingVertical="48dp">
    <TextView
        android:textAppearance="?attr/textH30"
        android:id="@+id/calculator_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"/>
    <com.avito.android.lib.design.docking_badge.DockingBadgeContainer
        android:id="@+id/calculator_badges"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:dockingBadgeContainer_spacing="@dimen/advert_details_docking_badge_bar_vertical_spacing"
        style="?attr/dockingBadgeContainerMedium"/>
    <TextView
        android:textAppearance="?attr/textH5"
        android:id="@+id/calculator_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"/>
    <com.avito.android.lib.design.input.Input
        android:id="@+id/calculator_loan_input"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:inputType="number"
        android:imeOptions="flagNoExtractUi|actionDone"
        app:input_clearButton="false"
        app:input_formatterType="decimal"
        app:input_postfix="â‚½"
        app:input_postfixColor="?attr/gray36"
        style="?attr/input"/>
    <com.google.android.material.slider.Slider
        android:id="@+id/calculator_slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:translationY="-9dp"
        style="@style/CompositeBroker.Slider"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp">
        <TextView
            android:textAppearance="?attr/textS20"
            android:textColor="?attr/gray36"
            android:id="@+id/calculator_min_loan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:textAppearance="?attr/textS20"
            android:textColor="?attr/gray36"
            android:gravity="end"
            android:id="@+id/calculator_max_loan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    <com.avito.android.lib.design.chips.Chips
        android:id="@+id/term_chips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:chips_childHorizontalSpacing="4dp"
        app:chips_displayType="singleLineStretched"
        app:chips_keepLastSelected="true"
        app:chips_selectStrategy="single"
        style="?attr/chipsSmallRound"/>
    <View
        android:background="?attr/gray4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/calculator_icon_container"
            android:layout_width="0dp"
            android:layout_height="34dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/calculator_text_barrier"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/calculator_text_barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="end"
            app:constraint_referenced_ids="calculator_monthly_payment_title, calculator_monthly_payment_value"/>
        <TextView
            android:textAppearance="?attr/textM20"
            android:id="@+id/calculator_monthly_payment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="8dp"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toStartOf="@+id/calculator_text_guideline"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textAppearance="?attr/textH20"
            android:id="@+id/calculator_monthly_payment_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="8dp"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toStartOf="@+id/calculator_text_guideline"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/calculator_monthly_payment_title"/>
        <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:id="@+id/calculator_text_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_end="68dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/calculator_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        style="?attr/buttonPrimaryLarge"/>
    <TextView
        android:textAppearance="?attr/textS10"
        android:textColor="?attr/gray54"
        android:id="@+id/calculator_privacy_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:textColor="?attr/blue600"
        android:id="@+id/how_get_loan_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"/>
</LinearLayout>
