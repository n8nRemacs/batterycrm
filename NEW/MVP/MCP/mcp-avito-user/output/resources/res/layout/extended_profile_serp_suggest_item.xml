<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/extended_profile_suggest_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="14dp">
    <ImageView
        android:id="@+id/extended_profile_suggest_left_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/ic_search20"
        app:tint="?attr/black"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/extended_profile_suggest_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/extended_profile_suggest_right_icon"
        app:layout_constraintStart_toEndOf="@+id/extended_profile_suggest_left_icon"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/extended_profile_suggest_right_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/ic_arrowRight16"
        app:tint="?attr/black"/>
</androidx.constraintlayout.widget.ConstraintLayout>
