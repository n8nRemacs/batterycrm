<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textAppearance="?attr/textH25"
        android:textColor="?attr/black"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/developments_agency_search_deal_room_loading_error_text"
        android:textAlignment="center"
        android:layout_marginHorizontal="24dp"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:textColor="?attr/black"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/developments_agency_search_deal_room_loading_error_description"
        android:textAlignment="center"
        android:layout_marginHorizontal="24dp"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/reload_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="@string/developments_agency_search_deal_room_loading_error_reload_button"
        android:layout_marginHorizontal="24dp"
        style="?attr/buttonPrimaryMedium"/>
</LinearLayout>
