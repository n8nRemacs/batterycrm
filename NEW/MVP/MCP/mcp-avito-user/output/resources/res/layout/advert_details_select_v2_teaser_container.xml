<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/select_v2_autoteka_container"
    android:padding="20dp"
    android:paddingBottom="24dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp">
    <TextView
        android:textAppearance="?attr/textH30"
        android:textColor="?attr/black"
        android:id="@+id/title_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:textColor="?attr/black"
        android:id="@+id/description_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">
        <TextView
            android:textAppearance="?attr/textM20"
            android:textColor="?attr/black"
            android:id="@+id/price_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.avito.android.lib.design.docking_badge.DockingBadge
            android:id="@+id/price_badge_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            app:dockingBadge_end="@style/Re23.DockingBadgeEdge.FlagMedium"
            app:dockingBadge_start="@style/Re23.DockingBadgeEdge.PipkaMedium"
            style="?attr/dockingBadgeGreenMedium"/>
    </LinearLayout>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/button_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        style="?attr/buttonPrimaryMedium"/>
</LinearLayout>
