<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="vertical"
    android:id="@+id/delivery_subsidy_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="18dp"
    android:layout_marginHorizontal="@dimen/publish_container_horizontal_padding">
    <TextView
        android:textAppearance="?attr/textH3"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textAppearance="?attr/textM1"
        android:id="@+id/subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/subsidies_card_select_container"
        android:paddingTop="3dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/delivery_legal_text"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-4dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/user_advert_list_item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="1dp"
            app:backgroundImage="?attr/gray8"
            app:failureImageScaleType="fitCenter"
            app:layout_constraintDimensionRatio="H,4:3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.27"
            app:roundedCornerRadius="6dp"
            style="@style/Widget.Avito.SimpleDraweeView.Advert.Item.Image.List"/>
        <View
            android:id="@+id/icon_delivery"
            android:background="@drawable/product_specific_ic_rds_delivery"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="6dp"
            app:layout_constraintBottom_toBottomOf="@+id/image"
            app:layout_constraintRight_toRightOf="@+id/image"/>
        <TextView
            android:textAppearance="?attr/textBody"
            android:id="@+id/advert_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginStart="0dp"/>
        <TextView
            android:textAppearance="?attr/textHeadingSmall"
            android:id="@+id/advert_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginStart="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image"
            app:layout_constraintTop_toBottomOf="@+id/advert_name"/>
        <com.avito.android.lib.design.docking_badge.DockingBadge
            android:id="@+id/advert_subsidy_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            app:layout_constraintStart_toStartOf="@+id/advert_price"
            app:layout_constraintTop_toBottomOf="@+id/advert_price"
            style="?attr/dockingBadgeGreenSmall"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/legal_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"/>
</LinearLayout>
