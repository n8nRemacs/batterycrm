<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/control_view"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageButton
        android:id="@+id/exo_play_pause"
        android:importantForAccessibility="no"
        android:layout_marginStart="27dp"
        app:layout_constraintBottom_toBottomOf="@+id/exo_duration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/exo_duration"
        style="@style/VideoPlayerButton.PlayPause"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="end"
        app:constraint_referenced_ids="exo_play_pause"/>
    <TextView
        android:textSize="13sp"
        android:textColor="?attr/constantWhite"
        android:id="@+id/exo_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:layout_marginStart="7dp"
        app:layout_constraintBottom_toBottomOf="@+id/exo_duration"
        app:layout_constraintStart_toEndOf="@+id/barrier"
        app:layout_constraintTop_toTopOf="@+id/exo_duration"/>
    <com.avito.android.player_timebar.VideoPlayerTimeBar
        android:id="@+id/exo_progress"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_width="0dp"
        android:layout_height="26dp"
        app:layout_constraintBottom_toBottomOf="@+id/exo_duration"
        app:layout_constraintEnd_toStartOf="@+id/exo_duration"
        app:layout_constraintStart_toEndOf="@+id/exo_position"
        app:layout_constraintTop_toTopOf="@+id/exo_duration"
        style="@style/VideoPlayerTimeBar"/>
    <TextView
        android:textSize="13sp"
        android:textColor="?attr/constantWhite"
        android:id="@+id/exo_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp"
        android:includeFontPadding="false"
        android:layout_marginEnd="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/exo_mute"/>
    <ImageButton
        android:id="@+id/exo_mute"
        android:src="?attr/ic_mute20"
        android:importantForAccessibility="no"
        android:layout_marginEnd="27dp"
        app:layout_constraintBottom_toBottomOf="@+id/exo_duration"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/exo_duration"
        app:tint="?attr/constantWhite"
        style="@style/VideoPlayerButton"/>
</androidx.constraintlayout.widget.ConstraintLayout>
