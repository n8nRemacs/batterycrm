<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:id="@+id/cpt_mass_activation_dialog_fragment_new"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cpt_mass_activation_recycler_view_new"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
    <include layout="@layout/cpt_mass_activation_skeleton_item_new"/>
    <include
        android:visibility="gone"
        layout="@layout/cpt_mass_activation_network_problem_view_new"/>
    <ImageView
        android:layout_gravity="end"
        android:id="@+id/cpt_mass_activation_fragment_close_button_new"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="6dp"
        android:scaleType="centerInside"
        app:srcCompat="?attr/ic_close24"
        app:tint="?attr/black"/>
    <com.avito.android.lib.design.floating_container.FloatingContainer
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:id="@+id/cpt_mass_activation_footer_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:floatingContainer_horizontal="false"
        app:floatingContainer_horizontalPadding="10dp"
        style="?attr/floatingContainerIncomplete">
        <com.avito.android.lib.design.button.Button
            android:id="@+id/cpt_mass_activation_button_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?attr/buttonPrimarySmallTwoRows"/>
        <TextView
            android:textAppearance="?attr/textS20"
            android:textColorHighlight="?attr/transparentWhite"
            android:gravity="center_horizontal"
            android:id="@+id/cpt_mass_activation_text_agreement_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"/>
    </com.avito.android.lib.design.floating_container.FloatingContainer>
</FrameLayout>
