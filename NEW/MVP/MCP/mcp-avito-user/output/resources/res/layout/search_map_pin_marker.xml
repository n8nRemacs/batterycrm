<?xml version="1.0" encoding="utf-8"?>
<com.avito.android.map_core.view.marker.MarkerPinView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:id="@+id/marker_pin_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="14sp"
            android:contentDescription="@null"/>
        <TextView
            android:textSize="14sp"
            android:textColor="?attr/constantWhite"
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fontFamily="?attr/fontHeavy"/>
    </LinearLayout>
</com.avito.android.map_core.view.marker.MarkerPinView>
