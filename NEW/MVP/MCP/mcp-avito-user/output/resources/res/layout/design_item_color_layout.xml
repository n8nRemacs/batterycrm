<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipChildren="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="?attr/item_color_titleTextAppearance"
        android:id="@+id/title"
        android:visibility="gone"
        android:duplicateParentState="true"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/title_tip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/item_color_subtitleTextAppearance"
        android:id="@+id/subtitle"
        android:visibility="gone"
        android:duplicateParentState="true"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/item_color_titleSmallMargin"
        app:layout_constraintEnd_toStartOf="@+id/title_tip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"/>
    <TextView
        android:textAppearance="?attr/item_color_errorTextAppearance"
        android:id="@+id/error_top"
        android:visibility="gone"
        android:duplicateParentState="true"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/item_color_titleSmallMargin"
        app:layout_constraintEnd_toStartOf="@+id/title_tip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subtitle"/>
    <ImageView
        android:id="@+id/title_tip"
        android:paddingBottom="6dp"
        android:focusable="true"
        android:visibility="gone"
        android:clickable="true"
        android:duplicateParentState="true"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="?attr/ic_help24"
        android:scaleType="center"
        android:paddingStart="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?attr/gray28"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/item_color_recycler_view"
        android:paddingBottom="2dp"
        android:duplicateParentState="true"
        android:clipToPadding="false"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/item_color_contentTopMargin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/error_top"/>
    <TextView
        android:textAppearance="?attr/item_color_hintTextAppearance"
        android:id="@+id/hint"
        android:visibility="gone"
        android:duplicateParentState="true"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/item_color_hintTopMargin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_color_recycler_view"/>
</merge>
