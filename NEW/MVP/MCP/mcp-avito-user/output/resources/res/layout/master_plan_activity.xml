<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/motion_layout"
    android:fitsSystemWindows="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/master_plan_activity_scene">
    <com.avito.android.lib.design.master_plan_view.MasterPlanView
        android:id="@+id/master_plan"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/master_plan_screen_plan_height"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="?attr/buttonOverlayPrimaryMedium"/>
    <Space
        android:id="@+id/sheet_expanded_border"
        android:layout_width="wrap_content"
        android:layout_height="112dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <Space
        android:id="@+id/sheet_collapsed_border"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/master_plan"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <FrameLayout
        android:id="@+id/sheet_container"
        android:background="@drawable/bg_master_plan_sheet_top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sheet_collapsed_border">
        <View
            android:layout_gravity="center_horizontal"
            android:id="@+id/header_thumb"
            android:background="@drawable/design_bottom_sheet_thumb"
            android:layout_width="?attr/bottomSheet_thumbWidth"
            android:layout_height="?attr/bottomSheet_thumbHeight"
            android:layout_marginTop="10dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:paddingTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout
            android:id="@+id/loading_skeleton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="16dp"
            style="?attr/shimmerDefault">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.avito.android.lib.design.skeleton.TextSkeleton
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    style="?attr/textH10"/>
                <com.avito.android.lib.design.skeleton.TextSkeleton
                    android:layout_width="155dp"
                    android:layout_height="wrap_content"
                    style="?attr/textH50"/>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">
                    <com.avito.android.lib.design.skeleton.TextSkeleton
                        android:layout_width="155dp"
                        android:layout_height="wrap_content"
                        style="?attr/textH50"/>
                </FrameLayout>
                <com.avito.android.lib.design.skeleton.TextSkeleton
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    style="?attr/textH50"/>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">
                    <com.avito.android.lib.design.skeleton.TextSkeleton
                        android:layout_width="155dp"
                        android:layout_height="wrap_content"
                        style="?attr/textH50"/>
                </FrameLayout>
                <com.avito.android.lib.design.skeleton.TextSkeleton
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    style="?attr/textH50"/>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">
                    <com.avito.android.lib.design.skeleton.TextSkeleton
                        android:layout_width="155dp"
                        android:layout_height="wrap_content"
                        style="?attr/textH50"/>
                </FrameLayout>
                <com.avito.android.lib.design.skeleton.TextSkeleton
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    style="?attr/textH50"/>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">
                    <com.avito.android.lib.design.skeleton.TextSkeleton
                        android:layout_width="155dp"
                        android:layout_height="wrap_content"
                        style="?attr/textH50"/>
                </FrameLayout>
                <com.avito.android.lib.design.skeleton.TextSkeleton
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    style="?attr/textH50"/>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">
                    <com.avito.android.lib.design.skeleton.TextSkeleton
                        android:layout_width="155dp"
                        android:layout_height="wrap_content"
                        style="?attr/textH50"/>
                </FrameLayout>
                <com.avito.android.lib.design.skeleton.TextSkeleton
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    style="?attr/textH50"/>
            </LinearLayout>
        </com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout>
    </FrameLayout>
</androidx.constraintlayout.motion.widget.MotionLayout>
