<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/items_amount_exceeded_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.avito.android.fresco.SimpleDraweeView
        android:id="@+id/image"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:contentDescription="@null"/>
    <TextView
        android:gravity="center"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="16dp"
        style="?attr/textH25"/>
    <TextView
        android:gravity="center"
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="16dp"
        style="?attr/textM10"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="@string/campaigns_sale_back"
        style="?attr/buttonSecondaryMedium"/>
</LinearLayout>
