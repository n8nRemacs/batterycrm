<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/passport_business_vrf_duplication_root"
    android:background="?attr/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.avito.android.lib.design.nav_bar.NavBar
        android:id="@+id/passport_business_vrf_duplication_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textH25"
        android:id="@+id/passport_business_vrf_duplication_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@+id/passport_business_vrf_duplication_nav_bar"/>
    <include
        android:id="@+id/passport_business_vrf_duplication_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/passport_business_vrf_duplication_title"
        layout="@layout/passport_profiles_list_item"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/passport_business_vrf_duplication_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@+id/passport_business_vrf_duplication_profile"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/passport_business_vrf_duplication_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@+id/passport_business_vrf_duplication_description"/>
</androidx.constraintlayout.widget.ConstraintLayout>
