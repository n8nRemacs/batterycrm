<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tariff_cpt_levels_business_tool_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.avito.android.fresco.SimpleDraweeView
        android:id="@+id/tariff_cpt_levels_business_tool_item_image"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <FrameLayout
        android:id="@+id/tariff_cpt_levels_business_tool_item_lock_icon"
        android:background="@drawable/circle_white"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="22dp"
        android:layout_marginStart="22dp"
        app:layout_constraintStart_toStartOf="@+id/tariff_cpt_levels_business_tool_item_image"
        app:layout_constraintTop_toTopOf="@+id/tariff_cpt_levels_business_tool_item_image">
        <TextView
            android:textAppearance="?attr/textM20"
            android:layout_gravity="center_horizontal"
            android:id="@+id/tariff_cpt_levels_business_tool_item_lock_icon_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/tariff_cpt_levels_business_tool_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toTopOf="@+id/tariff_cpt_levels_business_tool_item_description"
        app:layout_constraintEnd_toStartOf="@+id/tariff_cpt_levels_business_tool_item_navigation_icon"
        app:layout_constraintStart_toEndOf="@+id/tariff_cpt_levels_business_tool_item_image"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textS10"
        android:id="@+id/tariff_cpt_levels_business_tool_item_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/tariff_cpt_levels_business_tool_item_image"
        app:layout_constraintEnd_toEndOf="@+id/tariff_cpt_levels_business_tool_item_title"
        app:layout_constraintStart_toEndOf="@+id/tariff_cpt_levels_business_tool_item_image"
        app:layout_constraintTop_toBottomOf="@+id/tariff_cpt_levels_business_tool_item_title"/>
    <ImageView
        android:id="@+id/tariff_cpt_levels_business_tool_item_navigation_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="@+id/tariff_cpt_levels_business_tool_item_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tariff_cpt_levels_business_tool_item_title"
        app:srcCompat="?attr/ic_arrowRight20"
        app:tint="?attr/gray36"/>
</androidx.constraintlayout.widget.ConstraintLayout>
