<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/visual_vas_item_container"
    android:background="@drawable/bg_rounded_warmgray4_r24"
    android:paddingTop="20dp"
    android:paddingBottom="32dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="24dp">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/visual_vas_item_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:actualImageScaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textS10"
        android:id="@+id/visual_vas_item_price_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/visual_vas_item_price_title"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/visual_vas_item_icon"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textH40"
        android:id="@+id/visual_vas_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="@+id/visual_vas_item_price_title"
        app:layout_constraintTop_toBottomOf="@+id/visual_vas_item_price_title"/>
    <TextView
        android:textAppearance="?attr/textH5"
        android:id="@+id/visual_vas_item_price_old"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/visual_vas_item_price"
        app:layout_constraintStart_toEndOf="@+id/visual_vas_item_price"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/visual_vas_item_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="end"
        app:constraint_referenced_ids="visual_vas_item_price, visual_vas_item_price_old"/>
    <TextView
        android:textAppearance="?attr/textS10"
        android:id="@+id/visual_vas_item_duration_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/visual_vas_item_price_term_title"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/visual_vas_item_barrier"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textH40"
        android:id="@+id/visual_vas_item_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="@+id/visual_vas_item_duration_title"
        app:layout_constraintTop_toBottomOf="@+id/visual_vas_item_duration_title"/>
    <com.avito.android.lib.design.switcher.Switcher
        android:id="@+id/visual_vas_item_switcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="?attr/switcherDefaultLarge"/>
    <TextView
        android:textAppearance="?attr/textH30"
        android:id="@+id/visual_vas_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/visual_vas_item_icon"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:id="@+id/visual_vas_item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/visual_vas_item_title"/>
    <View
        android:id="@+id/visual_vas_item_divider"
        android:background="?attr/warmGray12"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/visual_vas_item_description"/>
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/visual_vas_item_extra_option_icon"
        android:layout_width="56dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/visual_vas_item_divider"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:id="@+id/visual_vas_item_extra_option_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/visual_vas_item_extra_option_icon"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/visual_vas_item_extra_option_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="visual_vas_item_divider, visual_vas_item_extra_option_icon, visual_vas_item_extra_option_description"/>
</androidx.constraintlayout.widget.ConstraintLayout>
