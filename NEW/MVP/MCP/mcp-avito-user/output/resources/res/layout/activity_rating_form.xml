<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="?attr/textH5"
                android:id="@+id/toolbar_title"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.avito.android.lib.design.progress_bar.ProgressBar
                android:id="@+id/toolbar_progress_bar"
                android:visibility="gone"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                app:progressBar_barHeight="6dp"
                app:progressBar_emptyColor="?attr/warmGray16"
                app:progressBar_fillColor="?attr/black"
                app:progressBar_isFairProgress="true"
                app:progressBar_separatorWidth="0dp"/>
        </FrameLayout>
    </androidx.appcompat.widget.Toolbar>
    <FrameLayout
        android:id="@+id/rating_form_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
