<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/order_layout"
    android:background="@drawable/bg_booking_item_card"
    android:layout_width="274dp"
    android:layout_height="81dp">
    <com.avito.android.fresco.SimpleDraweeView
        android:id="@+id/sb_order_image"
        android:layout_width="76dp"
        android:layout_height="57dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:roundedCornerRadius="6dp"
        app:viewAspectRatio="1.33"/>
    <TextView
        android:ellipsize="end"
        android:id="@+id/sb_order_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:maxLines="1"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sb_order_image"
        app:layout_constraintTop_toTopOf="parent"
        style="?attr/textH6"/>
    <TextView
        android:ellipsize="end"
        android:id="@+id/sb_order_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:maxLines="2"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sb_order_image"
        app:layout_constraintTop_toBottomOf="@+id/sb_order_title"
        style="?attr/textS2"/>
    <TextView
        android:ellipsize="end"
        android:id="@+id/sb_order_additional_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:maxLines="2"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sb_order_image"
        app:layout_constraintTop_toBottomOf="@+id/sb_order_subtitle"
        style="?attr/textS2"/>
</androidx.constraintlayout.widget.ConstraintLayout>
