<?xml version="1.0" encoding="utf-8"?>
<com.avito.android.lib.design.shadow_layout.ShadowLinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/MapPinShadowLayout">
    <FrameLayout
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="12dp"
        android:paddingVertical="6dp"
        app:layout_shadowEnabled="true">
        <TextView
            android:textAppearance="?attr/textH70"
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            app:layout_constraintBottom_toTopOf="@+id/middle_guideline"
            app:layout_constraintStart_toEndOf="@+id/image"/>
    </FrameLayout>
    <View
        android:layout_gravity="center"
        android:background="@drawable/circle_point_pin"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginTop="2dp"/>
</com.avito.android.lib.design.shadow_layout.ShadowLinearLayout>
