<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/kebab_horizontal_padding">
    <TextView
        android:textAppearance="?attr/textM1"
        android:textColor="?attr/gray54"
        android:id="@+id/juristic_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="16dp"/>
    <TextView
        android:textAppearance="?attr/textM1"
        android:textColor="?attr/gray54"
        android:id="@+id/legal_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"/>
    <TextView
        android:textAppearance="?attr/textH5"
        android:id="@+id/actions_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="8dp"
        android:text="@string/buzzoola_profile_promo_hide_ad"/>
</LinearLayout>
