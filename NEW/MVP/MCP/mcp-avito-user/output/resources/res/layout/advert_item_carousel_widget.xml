<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:id="@+id/carousel_external_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/serp_vertical_margin_for_widget_with_image_background">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/carousel_background_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/serp_carousel_background_image_height"
        app:actualImageScaleType="fitXY"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/carousel_inner_root"
        android:paddingTop="@dimen/serp_carousel_inner_root_vertical_padding"
        android:paddingBottom="@dimen/serp_carousel_inner_root_bottom_padding"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/serp_horizontal_padding"
        android:paddingEnd="@dimen/serp_horizontal_padding">
        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/flexbox_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:flexDirection="row"
            app:flexWrap="wrap"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <com.avito.android.lib.design.header_button.HeaderButton
                android:id="@+id/carousel_header_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                app:headerButton_textIconStyleAttr="?attr/textIconHeaderbuttonArrow"
                app:layout_alignSelf="center"
                style="?attr/headerButtonH20"/>
        </com.google.android.flexbox.FlexboxLayout>
        <TextView
            android:textAppearance="?attr/textM2"
            android:id="@+id/carousel_subtitle"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/flexbox_container"/>
        <com.avito.android.serp_core.timer.CountDownTimerWidget
            android:id="@+id/carousel_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/carousel_subtitle"
            style="@style/ItemsCarouselCountDownTimer"/>
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/icon_image"
            android:visibility="visible"
            android:layout_width="110dp"
            android:layout_height="72dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/carousel_recycler"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingHorizontal="6dp"
            app:layout_constraintTop_toBottomOf="@+id/carousel_timer"/>
        <com.avito.android.lib.design.button.Button
            android:id="@+id/carousel_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="6dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/carousel_recycler"
            style="?attr/buttonPrimaryMedium"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
