<?xml version="1.0" encoding="utf-8"?>
<com.avito.android.lib.design.photo_uploader_image.PhotoUploaderLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_photo_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.avito.android.lib.design.photo_uploader_image.PhotoUploaderImage
        android:id="@+id/loading_photo_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:actualImageScaleType="fitCenter"
        app:photoUploaderImage_auxiliaryIcon="@drawable/ic_clock_hands_40"/>
    <include layout="@layout/inactive_fill"/>
    <View
        android:id="@+id/placeholder_mode_fill"
        android:background="?attr/white"
        android:visibility="gone"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.3"/>
</com.avito.android.lib.design.photo_uploader_image.PhotoUploaderLayout>
