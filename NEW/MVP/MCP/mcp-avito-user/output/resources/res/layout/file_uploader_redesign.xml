<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="?attr/textM10"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:id="@+id/uploaded"
        android:background="@drawable/bg_uploaded_file_ddu"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?attr/black"/>
    <com.avito.android.lib.design.spinner.Spinner
        android:id="@+id/loading_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/uploaded"
        app:layout_constraintEnd_toEndOf="@+id/uploaded"
        app:layout_constraintStart_toStartOf="@+id/uploaded"
        app:layout_constraintTop_toTopOf="@+id/uploaded"
        style="?attr/spinnerDarkSmall"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:ellipsize="middle"
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:maxLines="1"
        android:layout_weight="1"
        android:layout_marginStart="12dp"
        app:layout_constraintEnd_toStartOf="@+id/delete"
        app:layout_constraintStart_toEndOf="@+id/uploaded"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textS20"
        android:textColor="?attr/gray54"
        android:id="@+id/size"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/title"
        app:layout_constraintStart_toStartOf="@+id/title"
        app:layout_constraintTop_toBottomOf="@+id/title"/>
    <ImageView
        android:id="@+id/delete"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="?attr/ic_deleteOutline20"
        android:layout_marginStart="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/uploaded"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/uploaded"
        app:tint="?attr/black"/>
    <TextView
        android:textColor="?attr/red600"
        android:id="@+id/error_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uploaded"
        style="?attr/textS2"/>
</androidx.constraintlayout.widget.ConstraintLayout>
