<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/UserProfileCardContainer">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/bg_btn_flat"
        android:paddingLeft="@dimen/component_horizontal_padding"
        android:paddingTop="@dimen/standard_padding"
        android:paddingRight="@dimen/component_horizontal_padding"
        android:paddingBottom="@dimen/standard_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="56dp"
        android:layout_marginVertical="4dp">
        <TextView
            android:textColor="@color/text_primary_disabled"
            android:id="@+id/title"
            android:duplicateParentState="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?attr/textM2"/>
        <TextView
            android:textColor="@color/text_secondary_disableable"
            android:id="@+id/subtitle"
            android:duplicateParentState="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            style="?attr/textS1"/>
    </LinearLayout>
</FrameLayout>
