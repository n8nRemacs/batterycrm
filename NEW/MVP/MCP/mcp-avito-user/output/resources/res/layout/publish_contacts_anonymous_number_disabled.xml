<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/publish_container_horizontal_padding"
    android:paddingTop="10dp"
    android:paddingRight="@dimen/publish_container_horizontal_padding"
    android:paddingBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="36dp">
    <View
        android:background="?attr/orange"
        android:layout_width="2dp"
        android:layout_height="match_parent"/>
    <TextView
        android:textAppearance="?attr/textBodySmall"
        android:textColor="?attr/gray48"
        android:id="@+id/text_view"
        android:paddingLeft="8dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
