<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gig_promo_snippet_public_white_bg"
    android:padding="16dp"
    android:layout_width="108dp"
    android:layout_height="114dp">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/job_promo_snippet_public_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:textAppearance="?attr/textM20"
            android:id="@+id/promo_snippet_next_button_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"/>
        <ImageView
            android:id="@+id/promo_snippet_next_button_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:src="?attr/ic_arrowForward16"
            android:importantForAccessibility="no"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
