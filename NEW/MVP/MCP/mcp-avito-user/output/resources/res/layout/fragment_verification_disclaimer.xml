<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/verification_disclaimer_root"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.avito.android.lib.design.nav_bar.NavBar
        android:id="@+id/verification_disclaimer_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navBar_contentColor="?attr/black"/>
    <FrameLayout
        android:id="@+id/verification_disclaimer_progress_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/verification_disclaimer_content_container"
            android:visibility="gone"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.avito.android.fresco.SimpleDraweeView
                android:id="@+id/verification_disclaimer_image"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                app:actualImageScaleType="fitCenter"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/verification_disclaimer_list"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginHorizontal="16dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toTopOf="@+id/verification_disclaimer_floating_container"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/verification_disclaimer_image"/>
            <com.avito.android.lib.design.floating_container.FloatingContainer
                android:orientation="vertical"
                android:id="@+id/verification_disclaimer_floating_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:floatingContainer_horizontalPadding="16dp"
                app:floatingContainer_radius="22dp"
                app:floatingContainer_topPadding="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                style="?attr/floatingContainerIncomplete">
                <com.avito.android.lib.design.button.Button
                    android:id="@+id/verification_disclaimer_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/verification_disclaimer_footer"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_goneMarginBottom="28dp"
                    style="?attr/buttonPrimaryLarge"/>
                <TextView
                    android:textAppearance="?attr/textS20"
                    android:textColor="?attr/gray54"
                    android:id="@+id/verification_disclaimer_footer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
            </com.avito.android.lib.design.floating_container.FloatingContainer>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</LinearLayout>
