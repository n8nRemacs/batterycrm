<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="22dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stateListAnimator="@animator/str_orders_buyer_item_touch_animator">
    <com.avito.android.lib.util.layout.RatioForegroundFrameLayout
        android:id="@+id/image_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        app:corner_radius="16dp"
        app:height_ratio="6"
        app:width_ratio="9">
        <com.avito.android.lib.design.skeleton.shimmer.ShimmerFrameLayout
            android:id="@+id/stub_image"
            android:background="?attr/warmGray8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:shimmer_animationDuration="2500"
            app:shimmer_autostart="true"/>
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
    </com.avito.android.lib.util.layout.RatioForegroundFrameLayout>
    <TextView
        android:textAppearance="?attr/textH40"
        android:id="@+id/order_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="16dp"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/status_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="5dp"
        android:layout_marginHorizontal="16dp"
        app:drawableEndCompat="@drawable/str_orders_attention_circle"/>
</LinearLayout>
