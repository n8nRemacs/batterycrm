<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="start|center_vertical"
    android:orientation="horizontal"
    android:id="@+id/search_view_item"
    android:paddingTop="11dp"
    android:paddingBottom="14dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="12dp"
    android:paddingEnd="16dp">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/icon_container"
        android:layout_width="40dp"
        android:layout_height="20dp">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/imvIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:actualImageScaleType="fitXY"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="18dp">
        <TextView
            android:textSize="16sp"
            android:textColor="?attr/black"
            android:ellipsize="end"
            android:id="@+id/suggest_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:lineSpacingExtra="0sp"
            style="?attr/textM20"/>
        <TextView
            android:textSize="13sp"
            android:textColor="?attr/gray48"
            android:id="@+id/suggest_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:lineSpacingExtra="-2sp"
            style="?attr/textS20"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/right_arrow_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:srcCompat="@drawable/text_right_arrow"/>
</LinearLayout>
