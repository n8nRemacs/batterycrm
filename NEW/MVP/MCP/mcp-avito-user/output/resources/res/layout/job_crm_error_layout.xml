<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="horizontal"
    android:id="@+id/load_snippet_root"
    android:paddingLeft="@dimen/screen_component_horizontal_padding"
    android:paddingRight="@dimen/screen_component_horizontal_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="64dp"
    android:layout_marginHorizontal="16dp">
    <TextView
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/crm_error"
        android:maxLines="2"
        android:layout_marginEnd="16dp"
        style="?attr/textM10"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?attr/buttonPrimarySmall"/>
</LinearLayout>
