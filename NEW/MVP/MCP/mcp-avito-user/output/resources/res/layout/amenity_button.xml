<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:background="@drawable/item_map_white_button_rounded"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/amenity_button_height"
    android:layout_marginTop="@dimen/amenity_button_margin_top"
    android:layout_marginEnd="10dp">
    <View
        android:id="@+id/image_bg"
        android:background="@drawable/white_radius"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="6dp"
        android:layout_alignParentStart="true"/>
    <ImageView
        android:id="@+id/image"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        android:layout_marginStart="11dp"/>
    <com.avito.android.lib.deprecated_design.circular_progress.CircularProgressBar
        android:id="@+id/progress"
        android:visibility="gone"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="11dp"
        style="@style/Widget.Avito.CircularProgressBar.Dark"/>
    <TextView
        android:textAppearance="?attr/textBody"
        android:textColor="?attr/black"
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@+id/image_bg"/>
</RelativeLayout>
