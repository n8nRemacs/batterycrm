<?xml version="1.0" encoding="utf-8"?>
<com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:shimmer="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@drawable/bg_avito_bottom_sheet"
    android:paddingLeft="16dp"
    android:paddingTop="24dp"
    android:paddingRight="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    shimmer:shimmer_animationDuration="3000"
    shimmer:shimmer_autostart="true"
    shimmer:shimmer_color="@color/legacy_gray_shimmer"
    shimmer:shimmer_gradientCenterColorWidth="0.1"
    shimmer:shimmer_maskWidth="1">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/serp_vertical_padding"
            android:weightSum="1">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/serp_horizontal_padding"
                android:layout_weight="0.5">
                <View
                    android:background="@drawable/serp_bg_pic_stub"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/serp_card_image_height"/>
                <View
                    android:background="@drawable/serp_bg_text_stub"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:layout_marginTop="13dp"/>
                <View
                    android:background="@drawable/serp_bg_text_stub"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:layout_marginTop="10dp"/>
                <View
                    android:background="@drawable/serp_bg_text_stub"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="58dp"/>
                <androidx.legacy.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/serp_horizontal_padding"
                android:layout_weight="0.5">
                <View
                    android:background="@drawable/serp_bg_pic_stub"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/serp_card_image_height"/>
                <View
                    android:background="@drawable/serp_bg_text_stub"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:layout_marginTop="13dp"/>
                <View
                    android:background="@drawable/serp_bg_text_stub"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:layout_marginTop="10dp"/>
                <View
                    android:background="@drawable/serp_bg_text_stub"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="58dp"/>
                <androidx.legacy.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/serp_horizontal_padding"
                android:layout_weight="0.5">
                <View
                    android:background="@drawable/serp_bg_pic_stub"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/serp_card_image_height"/>
                <View
                    android:background="@drawable/serp_bg_text_stub"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:layout_marginTop="13dp"/>
                <View
                    android:background="@drawable/serp_bg_text_stub"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:layout_marginTop="10dp"/>
                <View
                    android:background="@drawable/serp_bg_text_stub"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="58dp"/>
                <androidx.legacy.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/serp_horizontal_padding"
                android:layout_weight="0.5">
                <View
                    android:background="@drawable/serp_bg_pic_stub"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/serp_card_image_height"/>
                <View
                    android:background="@drawable/serp_bg_text_stub"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:layout_marginTop="13dp"/>
                <View
                    android:background="@drawable/serp_bg_text_stub"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:layout_marginTop="10dp"/>
                <View
                    android:background="@drawable/serp_bg_text_stub"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="58dp"/>
                <androidx.legacy.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout>
