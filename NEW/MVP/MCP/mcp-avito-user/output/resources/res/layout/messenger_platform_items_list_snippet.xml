<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:id="@+id/message"
    android:background="?attr/selectableItemBackground"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:baselineAligned="false">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/platform_items_list_snippet_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:actualImageScaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        app:placeholderImageScaleType="centerInside"
        app:roundedCornerRadius="@dimen/messenger_platform_items_list_snippet_redesign_image_corner_radius"/>
    <TextView
        android:textColor="?attr/black"
        android:ellipsize="end"
        android:id="@+id/platform_items_list_snippet_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_marginStart="12dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/platform_items_list_snippet_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside"
        style="?attr/textH40"/>
    <TextView
        android:textColor="?attr/black"
        android:ellipsize="end"
        android:id="@+id/platform_items_list_snippet_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:maxLines="2"
        android:layout_marginStart="12dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/platform_items_list_snippet_image"
        app:layout_constraintTop_toBottomOf="@+id/platform_items_list_snippet_price"
        style="?attr/textM20"/>
    <com.avito.android.lib.design.docking_badge.DockingBadgeContainer
        android:theme="@style/Theme.DesignSystem.Re23"
        android:id="@+id/platform_items_list_snippet_badge_container"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="12dp"
        app:dockingBadgeContainer_badgeSize="small"
        app:layout_constraintStart_toEndOf="@+id/platform_items_list_snippet_image"
        app:layout_constraintTop_toBottomOf="@+id/platform_items_list_snippet_title"/>
    <TextView
        android:textColor="?attr/gray48"
        android:ellipsize="end"
        android:id="@+id/platform_items_list_snippet_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_marginStart="12dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/platform_items_list_snippet_image"
        app:layout_constraintTop_toBottomOf="@+id/platform_items_list_snippet_badge_container"
        style="?attr/textS20"/>
</androidx.constraintlayout.widget.ConstraintLayout>
