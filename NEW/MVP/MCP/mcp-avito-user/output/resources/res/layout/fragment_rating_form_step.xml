<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rating_form_step_content_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:transitionName="@string/rating_form_bottom_sheet_transition_name"
    android:paddingHorizontal="24dp">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rating_form_step_recycler"
        android:paddingBottom="98dp"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/rating_form_step_button_container"
        android:paddingTop="12dp"
        android:paddingBottom="24dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/FlexibleButtonsContainer">
        <TextView
            android:textAppearance="?attr/textXs"
            android:textColor="?attr/gray54"
            android:id="@+id/rating_form_step_disclaimer"
            android:paddingBottom="16dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.avito.android.lib.design.button.Button
            android:id="@+id/rating_form_step_finish_button"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?attr/buttonPrimaryLarge"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/rating_form_step_button_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textAppearance="?attr/textXs10"
            android:textColor="?attr/gray54"
            android:id="@+id/rating_form_step_disclaimer_redesign"
            android:paddingBottom="6dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
