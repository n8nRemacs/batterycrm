<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="12sp"
        android:textColor="@color/text_hint_states"
        android:id="@+id/floating_label"
        android:visibility="invisible"
        android:saveEnabled="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:freezesText="true"
        android:layout_toLeftOf="@+id/info_button"
        android:lineSpacingExtra="1sp"
        android:labelFor="@+id/input"/>
    <EditText
        android:textSize="16sp"
        android:textColor="@color/input_text_states"
        android:textColorHint="?attr/gray28"
        android:id="@+id/input"
        android:background="@null"
        android:saveEnabled="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/info_button"
        android:layout_below="@+id/floating_label"
        android:lineSpacingExtra="1sp"
        app:fontFamily="?attr/fontRegular"/>
    <TextView
        android:textSize="12sp"
        android:textColor="?attr/red"
        android:id="@+id/error_label"
        android:visibility="gone"
        android:saveEnabled="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:freezesText="true"
        android:layout_toLeftOf="@+id/info_button"
        android:layout_below="@+id/input"
        android:lineSpacingExtra="1sp"/>
    <TextView
        android:textSize="12sp"
        android:textColor="?attr/gray48"
        android:id="@+id/info_label"
        android:visibility="gone"
        android:saveEnabled="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:freezesText="true"
        android:layout_toLeftOf="@+id/info_button"
        android:layout_below="@+id/error_label"
        android:lineSpacingExtra="1sp"/>
    <ImageButton
        android:id="@+id/info_button"
        android:background="?attr/transparentBlack"
        android:paddingLeft="7dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:src="@drawable/btn_info_states"
        android:layout_below="@+id/floating_label"
        android:layout_alignParentRight="true"/>
</merge>
