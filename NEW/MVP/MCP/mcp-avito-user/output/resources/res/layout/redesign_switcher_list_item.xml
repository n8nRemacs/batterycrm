<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.avito.android.lib.design.list_item.layout.AlignmentFrameLayout
        android:layout_gravity="top"
        android:id="@+id/design_left_container"
        android:duplicateParentState="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/design_item_icon"
            android:duplicateParentState="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </com.avito.android.lib.design.list_item.layout.AlignmentFrameLayout>
    <com.avito.android.lib.design.list_item.layout.PaddingLinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/design_item_text_container"
        android:duplicateParentState="true"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:showDividers="middle">
        <TextView
            android:id="@+id/design_item_title"
            android:visibility="gone"
            android:duplicateParentState="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/design_item_subtitle"
            android:visibility="gone"
            android:duplicateParentState="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/design_item_message"
            android:visibility="gone"
            android:duplicateParentState="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/design_item_link"
            android:visibility="gone"
            android:duplicateParentState="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </com.avito.android.lib.design.list_item.layout.PaddingLinearLayout>
    <com.avito.android.lib.design.list_item.layout.AlignmentFrameLayout
        android:layout_gravity="top"
        android:id="@+id/design_right_container"
        android:duplicateParentState="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.avito.android.lib.design.switcher.Switcher
            android:id="@+id/design_item_switcher"
            android:saveEnabled="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?attr/switcherDefaultMedium"/>
        <com.avito.android.lib.design.spinner.Spinner
            android:layout_gravity="right"
            android:id="@+id/design_item_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"/>
    </com.avito.android.lib.design.list_item.layout.AlignmentFrameLayout>
</merge>
