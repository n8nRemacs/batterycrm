<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/cv_creator_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="?attr/textH3"
        android:ellipsize="end"
        android:id="@+id/cv_creator_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"/>
    <TextView
        android:textAppearance="?attr/textM1"
        android:ellipsize="end"
        android:id="@+id/cv_creator_subtitle"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:maxLines="2"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/cv_creator_button"
        android:paddingTop="6dp"
        android:paddingBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="4dp"
        android:paddingStart="14.5dp"
        android:paddingEnd="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        style="?attr/buttonPrimaryLarge"/>
</LinearLayout>
