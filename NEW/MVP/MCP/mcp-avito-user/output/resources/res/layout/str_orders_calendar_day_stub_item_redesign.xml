<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/calendar_day_item_background"
    android:paddingBottom="8dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="@dimen/str_calendar_cell_size_redesign"
    android:layout_height="@dimen/str_calendar_cell_size_redesign">
    <View
        android:layout_gravity="end|bottom"
        android:id="@+id/stub_tag_start"
        android:background="@drawable/calendar_tag_start_redesign"
        android:layout_width="@dimen/str_calendar_tag_start_width_redesign"
        android:layout_height="@dimen/str_calendar_tag_height_redesign"
        android:backgroundTint="?attr/warmGray8"/>
    <View
        android:layout_gravity="bottom"
        android:id="@+id/stub_tag_middle"
        android:background="@drawable/calendar_tag_middle"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/str_calendar_tag_height_redesign"
        android:backgroundTint="?attr/warmGray8"/>
    <View
        android:layout_gravity="start|bottom"
        android:id="@+id/stub_tag_end"
        android:background="@drawable/calendar_tag_end_redesign"
        android:layout_width="@dimen/str_calendar_tag_end_width_redesign"
        android:layout_height="@dimen/str_calendar_tag_height_redesign"
        android:backgroundTint="?attr/warmGray8"/>
</FrameLayout>
