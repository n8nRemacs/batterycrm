<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.avito.android.lib.design.spinner.Spinner
        android:layout_gravity="center"
        android:id="@+id/video_loader"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?attr/spinnerDarkMedium"/>
    <TextView
        android:textColor="@color/common_red_600"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/video_error"
        android:paddingLeft="75dp"
        android:paddingTop="14dp"
        android:paddingRight="75dp"
        android:paddingBottom="14dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/video_content"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/video_preview_image_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/video_preview_image"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:textColor="@color/design_text_color_black_selector"
            android:ellipsize="end"
            android:id="@+id/video_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="4"
            android:lineSpacingExtra="0sp"
            android:paddingStart="8dp"
            android:paddingEnd="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/video_preview_image_container"
            app:layout_constraintTop_toTopOf="parent"
            style="?attr/textBody"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</merge>
