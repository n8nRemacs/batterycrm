<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/phone_protection_banner_icon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="?attr/ic_verify24"
        android:layout_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?attr/green"/>
    <TextView
        android:id="@+id/phone_protection_banner_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/phone_protection_banner_icon"
        app:layout_constraintTop_toTopOf="parent"
        style="?attr/textHeadingSmall"/>
    <TextView
        android:id="@+id/phone_protection_banner_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/phone_protection_banner_icon"
        app:layout_constraintTop_toBottomOf="@+id/phone_protection_banner_title"
        style="?attr/textBody"/>
    <TextView
        android:textColor="?attr/green800"
        android:id="@+id/phone_protection_banner_link"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/phone_protection_banner_icon"
        app:layout_constraintTop_toBottomOf="@+id/phone_protection_banner_text"
        style="?attr/textBody"/>
</androidx.constraintlayout.widget.ConstraintLayout>
