<?xml version="1.0" encoding="utf-8"?>
<com.avito.android.home.appending_item.FillParentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/panel_error"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="22sp"
            android:textColor="?attr/gray28"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/serp_main_items_load_error"
            style="?attr/textHeadingSmall"/>
        <TextView
            android:textColor="@color/txt_flat_button_primary"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/panel_error_retry"
            android:background="@drawable/bg_flat_button_primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/try_again"
            style="@style/Deprecated.Theme.Internal.Button.Flat.Primary"/>
    </LinearLayout>
</com.avito.android.home.appending_item.FillParentFrameLayout>
