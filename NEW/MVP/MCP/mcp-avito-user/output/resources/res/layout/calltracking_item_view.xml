<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/calltracking_item_root"
    android:background="@drawable/bg_btn_flat_gray"
    android:paddingTop="14dp"
    android:paddingBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="24dp">
    <View
        android:id="@+id/dot"
        android:background="@drawable/bg_dot"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/call_time"
        app:layout_constraintEnd_toStartOf="@+id/call_time"
        app:layout_constraintTop_toTopOf="@+id/call_time"/>
    <TextView
        android:id="@+id/call_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="?attr/textS1"/>
    <TextView
        android:id="@+id/phones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="@+id/call_time"
        app:layout_constraintTop_toBottomOf="@+id/call_time"
        style="?attr/textH5"/>
    <TextView
        android:gravity="start"
        android:id="@+id/description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toStartOf="@+id/image"
        app:layout_constraintStart_toStartOf="@+id/call_time"
        app:layout_constraintTop_toBottomOf="@+id/phones"
        style="?attr/textM2"/>
    <TextView
        android:gravity="start"
        android:id="@+id/price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:maxLines="1"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toStartOf="@+id/image"
        app:layout_constraintStart_toStartOf="@+id/call_time"
        app:layout_constraintTop_toBottomOf="@+id/description"
        style="?attr/textM2"/>
    <com.avito.android.fresco.SimpleDraweeView
        android:id="@+id/image"
        android:layout_width="48dp"
        android:layout_height="36dp"
        android:layout_marginBottom="4dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:roundedCornerRadius="4dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
