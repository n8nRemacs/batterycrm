<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cpa_tariff_root"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ru.avito.component.toolbar.AppBarLayoutWithTextAction
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stateListAnimator="@drawable/appbar_allways_unelevated"
        app:layout="@layout/collapsing_title_appbar_layout"
        app:subtitleTopPadding="@dimen/publish_toolbar_subtitle_top_padding"
        app:titleSidePadding="@dimen/publish_container_horizontal_padding"
        app:titlesBottomPadding="@dimen/publish_toolbar_bottom_padding"
        app:titlesTopPadding="@dimen/publish_toolbar_title_top_padding"/>
    <androidx.core.widget.NestedScrollView
        android:paddingTop="@dimen/publish_container_vertical_padding"
        android:paddingBottom="@dimen/publish_container_vertical_padding"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:splitMotionEvents="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <FrameLayout
            android:id="@+id/content_holder"
            android:background="?attr/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:id="@+id/progress_view_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/content_horizontal_padding"
                    android:layout_marginEnd="@dimen/content_horizontal_padding">
                    <TextView
                        android:textAppearance="?attr/textBody"
                        android:textColor="@color/text_button_default"
                        android:id="@+id/subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <com.avito.android.lib.design.component_container.ComponentContainer
                        android:id="@+id/container_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        app:componentContainer_title="@string/cpa_tariff_name_title">
                        <com.avito.android.lib.design.input.Input
                            android:id="@+id/input_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/cpa_tariff_name_hint"
                            android:inputType="textNoSuggestions"
                            app:layout_autoReset="notNormalOnly"
                            style="?attr/input"/>
                    </com.avito.android.lib.design.component_container.ComponentContainer>
                    <com.avito.android.lib.design.component_container.ComponentContainer
                        android:id="@+id/container_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        app:componentContainer_title="@string/cpa_tariff_phone_title">
                        <com.avito.android.lib.design.input.Input
                            android:id="@+id/input_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/cpa_tariff_phone_hint"
                            android:inputType="phone"
                            app:input_formatterType="mobile_phone"
                            app:input_prefix="+7 "
                            app:layout_autoReset="notNormalOnly"
                            style="?attr/input"/>
                    </com.avito.android.lib.design.component_container.ComponentContainer>
                    <com.avito.android.lib.design.button.Button
                        android:id="@+id/cpa_tariff_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="@string/cpa_tariff_button_text"
                        style="?attr/buttonPrimaryLarge"/>
                    <TextView
                        android:textAppearance="?attr/textBodySmallDense"
                        android:textColor="?attr/gray48"
                        android:id="@+id/cpa_tariff_disclaimer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="24dp"/>
                </LinearLayout>
            </FrameLayout>
        </FrameLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
