<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/add_agent_container"
    android:background="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginHorizontal="16dp">
    <com.avito.android.lib.design.button.Button
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="?attr/ic_plus24"
        android:layout_marginVertical="2dp"
        style="?attr/buttonSecondaryLargeRound"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_agent"
        android:layout_marginStart="16dp"/>
</LinearLayout>
