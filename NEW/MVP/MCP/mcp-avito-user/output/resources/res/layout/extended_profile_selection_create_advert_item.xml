<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/selection_advert_root"
    android:paddingTop="12dp"
    android:paddingBottom="13dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.avito.android.fresco.SimpleDraweeView
        android:id="@+id/selection_advert_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:overlayImage="@color/expected_black_alpha_4"
        app:placeholderImage="?attr/gray8"
        app:roundedCornerRadius="16dp"
        app:viewAspectRatio="1"
        style="@style/Widget.Avito.SimpleDraweeView.Serp.Item.Image"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/selection_advert_checkbox"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="18dp"
        app:layout_constraintEnd_toEndOf="@+id/selection_advert_image"
        app:layout_constraintTop_toTopOf="@+id/selection_advert_image"
        app:srcCompat="@drawable/ic_checkmark"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/selection_advert_selected_line"
        android:padding="8dp"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/selection_advert_image"
        app:layout_constraintEnd_toEndOf="@+id/selection_advert_image"
        app:layout_constraintStart_toStartOf="@+id/selection_advert_image"
        app:layout_constraintTop_toTopOf="@+id/selection_advert_image"
        app:srcCompat="@drawable/ic_selection_advert_selected_line"/>
    <TextView
        android:textAppearance="?attr/textH40"
        android:id="@+id/selection_advert_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="6dp"
        app:layout_constraintTop_toBottomOf="@+id/selection_advert_image"/>
    <TextView
        android:textAppearance="?attr/textS20"
        android:id="@+id/selection_advert_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginStart="6dp"
        app:layout_constraintTop_toBottomOf="@+id/selection_advert_price"/>
    <TextView
        android:textAppearance="?attr/textS20"
        android:textColor="?attr/gray54"
        android:id="@+id/selection_advert_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        app:layout_constraintTop_toBottomOf="@+id/selection_advert_title"/>
</androidx.constraintlayout.widget.ConstraintLayout>
