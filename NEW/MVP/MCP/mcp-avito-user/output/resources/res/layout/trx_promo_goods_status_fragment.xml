<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:id="@+id/trx_promo_goods_status_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        layout="@layout/mnz_functional_toolbar_view"/>
    <FrameLayout
        android:id="@+id/trx_promo_goods_status_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mnz_toolbar">
        <include layout="@layout/trx_promo_goods_status_skeleton_item"/>
        <ScrollView
            android:id="@+id/trx_promo_goods_status_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/trx_promo_goods_status_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.avito.android.fresco.SimpleDraweeView
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/trx_promo_goods_status_image"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="16dp"/>
                <TextView
                    android:textAppearance="?attr/textH10"
                    android:gravity="center_horizontal"
                    android:id="@+id/trx_promo_goods_status_text_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_marginHorizontal="16dp"/>
                <TextView
                    android:textAppearance="?attr/textM10"
                    android:gravity="center_horizontal"
                    android:id="@+id/trx_promo_goods_status_text_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginHorizontal="16dp"/>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/trx_promo_goods_status_bottom_block"
        android:background="@drawable/trx_promo_goods_bg_white_gradient"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <com.avito.android.lib.design.button.Button
            android:id="@+id/trx_promo_goods_status_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?attr/buttonPrimaryLarge"/>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
