<?xml version="1.0" encoding="utf-8"?>
<com.avito.android.lib.design.component_container.ComponentContainer xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:paddingLeft="?attr/publish_horizontalPadding"
    android:paddingTop="@dimen/publish_container_vertical_padding"
    android:paddingRight="?attr/publish_horizontalPadding"
    android:paddingBottom="8dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:componentContainer_contentPaddingBottom="@dimen/publish_container_content_bottom_padding"
    app:componentContainer_contentPaddingTop="?attr/publish_componentContainer_contentPaddingTop"
    app:componentContainer_titleAppearance="?attr/textH50">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/vehicle_reg_number"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/number_container"
            android:background="@drawable/background_vehicle_reg_number_redesign"
            android:paddingTop="8dp"
            android:paddingBottom="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <com.avito.android.ui.view.RestrictedSelectionEditText
                android:textAppearance="?attr/textXl10"
                android:textColor="@color/vehicle_reg_number_text_color_redesign"
                android:textColorHint="@color/vehicle_reg_number_hint_color_redesign"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/number"
                android:background="@null"
                android:nextFocusRight="@+id/region"
                android:nextFocusDown="@+id/region"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/vehicle_reg_number_number_hint"
                android:lines="1"
                android:inputType="textVisiblePassword"
                app:input_backgroundColor="@null"/>
        </FrameLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@+id/region_container"
            android:background="@drawable/background_region_redesign"
            android:paddingTop="4dp"
            android:layout_width="84dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/divider"
            app:layout_constraintTop_toTopOf="parent">
            <androidx.appcompat.widget.AppCompatEditText
                android:textAppearance="?attr/textM20"
                android:textColor="@color/vehicle_reg_number_text_color_redesign"
                android:textColorHint="@color/vehicle_reg_number_hint_color_redesign"
                android:id="@+id/region"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/vehicle_reg_number_region_hint"
                android:lines="1"
                android:maxLength="3"
                android:digits="0123456789"
                android:inputType="number"
                android:imeOptions="actionDone"
                app:input_backgroundColor="@null"/>
            <TextView
                android:textAppearance="?attr/textXs10"
                android:textColor="@color/vehicle_reg_number_text_color_redesign"
                android:id="@+id/country_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vehicle_reg_number_country_code"
                android:drawablePadding="5dp"
                app:drawableRightCompat="@drawable/flag_rus_redesign"/>
        </LinearLayout>
        <View
            android:id="@+id/divider"
            android:background="?attr/transparentWhite"
            android:layout_width="1dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/region_container"
            app:layout_constraintHorizontal_bias="0.75"
            app:layout_constraintStart_toEndOf="@+id/number_container"
            app:layout_constraintTop_toTopOf="parent"/>
        <View
            android:id="@+id/border"
            android:background="@drawable/border_vehicle_reg_number_redesign"
            android:visibility="invisible"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.avito.android.lib.design.component_container.ComponentContainer>
