<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/selector_card_group_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/selector_card_group_option_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="12dp"
            android:src="?attr/ic_checkRound24"
            android:tint="?attr/black"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="12dp"
            android:layout_alignParentEnd="true"/>
        <com.avito.android.serp.NoTouchEventRecyclerView
            android:id="@+id/selector_card_group_option_components_container"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:nestedScrollingEnabled="false"/>
    </RelativeLayout>
</FrameLayout>
