<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/vas_union_v2_bundle_content_container"
    android:background="@drawable/bg_vas_union_v2"
    android:paddingTop="20dp"
    android:paddingBottom="28dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="24dp">
    <TextView
        android:textAppearance="?attr/textM10"
        android:textColor="?attr/gray54"
        android:id="@+id/vas_union_v2_bundle_content_price_hint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/vas_union_v2_bundle_content_barrier"
        app:layout_constraintEnd_toStartOf="@+id/vas_union_v2_bundle_content_discount_badge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.avito.android.lib.design.docking_badge.DockingBadge
        android:id="@+id/vas_union_v2_bundle_content_discount_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:dockingBadge_end="?attr/dockingBadgeEdgePipkaMedium"
        app:dockingBadge_start="?attr/dockingBadgeEdgeFlagMedium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="?attr/dockingBadgeRedMedium"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/vas_union_v2_bundle_content_barrier"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="vas_union_v2_bundle_content_price_hint, vas_union_v2_bundle_content_discount_badge"/>
    <com.avito.android.fresco.SimpleDraweeView
        android:id="@+id/vas_union_v2_bundle_content_image"
        android:layout_width="307dp"
        android:layout_height="103dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vas_union_v2_bundle_content_barrier"/>
    <TextView
        android:textAppearance="?attr/textH20"
        android:id="@+id/vas_union_v2_bundle_content_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vas_union_v2_bundle_content_image"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/vas_union_v2_bundle_content_benefits"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vas_union_v2_bundle_content_title"/>
    <TextView
        android:textAppearance="?attr/textH25"
        android:id="@+id/vas_union_v2_bundle_content_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vas_union_v2_bundle_content_benefits"/>
    <com.avito.android.lib.design.strikethrough.StrikethroughTextView
        android:textAppearance="?attr/textM10"
        android:id="@+id/vas_union_v2_bundle_content_budget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/vas_union_v2_bundle_content_price"
        app:layout_constraintStart_toEndOf="@+id/vas_union_v2_bundle_content_price"
        app:strikethrough_show="true"
        app:strikethrough_tint="?attr/red600"/>
</androidx.constraintlayout.widget.ConstraintLayout>
