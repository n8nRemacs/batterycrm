<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/icon"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/list_item_drawable_padding"
        android:layout_centerVertical="true"/>
    <TextView
        android:textSize="12sp"
        android:textColor="?attr/gray48"
        android:id="@+id/floating_label"
        android:visibility="invisible"
        android:saveEnabled="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:freezesText="true"
        android:layout_toRightOf="@+id/icon"
        android:labelFor="@+id/input"/>
    <EditText
        android:textSize="16sp"
        android:textColor="@color/input_text_states"
        android:id="@+id/input"
        android:background="@null"
        android:saveEnabled="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/icon"
        android:layout_below="@+id/floating_label"
        android:inputType="text"
        app:fontFamily="?attr/fontRegular"/>
    <TextView
        android:textSize="12sp"
        android:textColor="?attr/red"
        android:id="@+id/error_label"
        android:visibility="gone"
        android:saveEnabled="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:freezesText="true"
        android:layout_toRightOf="@+id/icon"
        android:layout_below="@+id/input"/>
</merge>
