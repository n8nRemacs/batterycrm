<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:minHeight="20dp">
    <com.avito.android.lib.design.rating.RatingBar
        android:id="@+id/rating_row_stars"
        android:layout_width="84dp"
        android:layout_marginRight="12dp"
        style="@style/Design.Widget.Avito.Rating.Normal.Redesign"/>
    <com.avito.android.lib.design.progress_bar.ProgressBar
        android:id="@+id/rating_row_bar"
        android:layout_width="match_parent"
        android:layout_marginRight="6dp"
        app:progressBar_emptyColor="?attr/warmGray16"
        app:progressBar_fillColor="?attr/warmGray54"/>
    <TextView
        android:textAppearance="?attr/textS20"
        android:gravity="right"
        android:id="@+id/rating_row_count"/>
</TableRow>
