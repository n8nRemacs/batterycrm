<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="vertical"
    android:id="@+id/hotel_booking_content"
    android:background="?attr/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="?attr/ic_arrowBack24"
        app:navigationIconTint="?attr/black"
        app:title="@string/hotel_booking_screen_title"
        app:titleCentered="true"
        app:titleTextAppearance="?attr/textH50"/>
    <include
        android:id="@+id/shimmer"
        android:visibility="gone"
        layout="@layout/hotel_booking_shimmer"/>
    <include
        android:id="@+id/error"
        android:visibility="gone"
        layout="@layout/hotel_booking_error"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/form"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"/>
        <include
            android:layout_gravity="bottom"
            android:id="@+id/floating_block"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/hotel_booking_floating_block"/>
        <com.avito.android.lib.design.spinner.overlay.SpinnerOverlay
            android:id="@+id/loading_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="20dp"/>
    </FrameLayout>
</LinearLayout>
