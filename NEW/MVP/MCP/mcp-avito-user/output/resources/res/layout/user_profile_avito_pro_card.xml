<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/user_profile_avito_pro_card_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/UserProfileCardContainer">
    <TextView
        android:theme="@style/Theme.DesignSystem.Re23"
        android:textAppearance="?attr/textH30"
        android:textColor="?attr/gray28"
        android:layout_gravity="center"
        android:id="@+id/text_icon"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="4dp"/>
    <include
        android:id="@+id/user_profile_common_card_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        layout="@layout/clickable_element"/>
</LinearLayout>
