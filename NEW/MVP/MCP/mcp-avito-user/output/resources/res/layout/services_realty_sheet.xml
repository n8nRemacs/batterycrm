<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="vertical"
    android:background="?attr/white"
    android:paddingTop="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="?attr/textM10"
        android:id="@+id/priceDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/services_realty_sheet_description"
        android:paddingHorizontal="16dp"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:id="@+id/priceMoreDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:paddingHorizontal="16dp"/>
    <TextView
        android:textAppearance="?attr/textL10"
        android:id="@+id/priceWithMaterialsCalculation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/services_realty_sheet_price_with_materials_result"
        android:paddingHorizontal="16dp"/>
    <TextView
        android:textAppearance="?attr/textH40"
        android:id="@+id/recommendationTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/services_realty_sheet_recommendation_title"
        android:paddingHorizontal="16dp"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:id="@+id/recommendationDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:text="@string/services_realty_sheet_recommendation_description"
        android:paddingHorizontal="16dp"/>
    <FrameLayout
        android:background="@drawable/button_container_frame"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="12dp">
        <com.avito.android.lib.design.button.Button
            android:id="@+id/primaryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/services_realty_sheet_show_services_recommendations"
            style="?attr/buttonPrimaryLarge"/>
    </FrameLayout>
</LinearLayout>
