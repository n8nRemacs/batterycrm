<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/advert_number_and_stats"
    android:paddingLeft="@dimen/content_horizontal_padding"
    android:paddingTop="@dimen/rds_advert_details_big_offset"
    android:paddingRight="@dimen/content_horizontal_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/advert_number"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textIsSelectable="true"
        style="@style/TextAppearance.Avito.AdvertDetails.Body.Small.Gray600"/>
    <TextView
        android:id="@+id/advert_stats"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.Avito.AdvertDetails.Body.Small.Gray600"/>
</LinearLayout>
