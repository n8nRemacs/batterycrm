<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sb_specialist_root"
    android:background="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp"
    android:paddingVertical="12dp">
    <com.avito.android.fresco.SimpleDraweeView
        android:id="@+id/specialist_avatar"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:actualImageScaleType="centerCrop"
        app:backgroundImage="@drawable/sb_specialist_placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:placeholderImage="@drawable/sb_specialist_placeholder"
        app:roundedCornerRadius="32dp"/>
    <TextView
        android:textAppearance="?attr/textH40"
        android:id="@+id/specialist_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toTopOf="@+id/specialist_speciality"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/specialist_avatar"
        app:layout_constraintTop_toTopOf="@+id/specialist_avatar"
        app:layout_constraintVertical_chainStyle="packed"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/specialist_speciality"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toTopOf="@+id/specialist_rating_and_reviews"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/specialist_avatar"
        app:layout_constraintTop_toBottomOf="@+id/specialist_name"/>
    <ImageView
        android:id="@+id/specialist_rating"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginRight="8dp"
        android:src="?attr/ic_rating16"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/specialist_rating_and_reviews"
        app:layout_constraintStart_toEndOf="@+id/specialist_avatar"
        app:layout_constraintTop_toTopOf="@+id/specialist_rating_and_reviews"
        app:tint="?attr/orange600"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/specialist_rating_and_reviews"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/specialist_rating"
        app:layout_constraintTop_toBottomOf="@+id/specialist_speciality"/>
</androidx.constraintlayout.widget.ConstraintLayout>
