<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/payment_block_type_container"
    android:layout_width="@dimen/advert_details_payment_block_type_button_standard_width"
    android:layout_height="@dimen/advert_details_payment_block_type_button_height"
    android:paddingHorizontal="@dimen/advert_details_payment_block_type_button_standard_horinztal_padding"
    android:paddingVertical="10dp">
    <ImageView
        android:id="@+id/payment_block_type_button_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="?attr/ic_sbp32"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/payment_block_type_button_card_number"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:theme="@style/Theme.DesignSystem.Re23"
        android:textAppearance="?attr/textM20"
        android:id="@+id/payment_block_type_button_card_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/payment_block_type_button_icon"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
