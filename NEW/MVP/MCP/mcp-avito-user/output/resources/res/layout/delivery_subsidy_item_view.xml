<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/delivery_subsidy_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="18dp"
    android:layout_marginHorizontal="@dimen/publish_container_horizontal_padding">
    <TextView
        android:textAppearance="?attr/textHeadingLarge"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textAppearance="?attr/textBody"
        android:id="@+id/subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"/>
    <com.avito.android.lib.design.segmented_control.SegmentedControl
        android:id="@+id/subsidy_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        style="?attr/segmentedControl"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/user_advert_list_item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="1dp"
            app:backgroundImage="?attr/gray8"
            app:failureImageScaleType="fitCenter"
            app:layout_constraintDimensionRatio="H,4:3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.27"
            app:roundedCornerRadius="6dp"
            style="@style/Widget.Avito.SimpleDraweeView.Advert.Item.Image.List"/>
        <View
            android:id="@+id/icon_delivery"
            android:background="@drawable/product_specific_ic_rds_delivery"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="6dp"
            app:layout_constraintBottom_toBottomOf="@+id/image"
            app:layout_constraintRight_toRightOf="@+id/image"/>
        <TextView
            android:textAppearance="?attr/textBody"
            android:id="@+id/advert_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginStart="0dp"/>
        <TextView
            android:textAppearance="?attr/textHeadingSmall"
            android:id="@+id/advert_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginStart="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image"
            app:layout_constraintTop_toBottomOf="@+id/advert_name"/>
        <com.avito.android.lib.deprecated_design.badge_bar.BadgeView
            android:id="@+id/advert_subsidy_badge"
            android:background="?attr/violet200"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            app:badgeView_radius="2dp"
            app:layout_constraintStart_toStartOf="@+id/advert_price"
            app:layout_constraintTop_toBottomOf="@+id/advert_price"
            style="?attr/badgeStyle"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
