<?xml version="1.0" encoding="utf-8"?>
<com.yandex.mobile.ads.nativeads.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:id="@+id/ad_view"
    android:background="?attr/constantBlack"
    android:addStatesFromChildren="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/ad_avl_screen_margin"
    android:layout_marginBottom="@dimen/ad_avl_screen_margin">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/media_view_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout
                android:id="@+id/media_view_placeholder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:shimmer_autostart="true"
                app:shimmer_color="?attr/constantBlack"
                style="?attr/shimmerDefault">
                <View
                    android:background="@color/ad_avl_placeholder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout>
            <com.yandex.mobile.ads.nativeads.MediaView
                android:id="@+id/media_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <FrameLayout
                android:id="@+id/media_view_overlay"
                android:background="@drawable/ad_avl_media_gradient"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/close_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="@dimen/ad_avl_inset"
                android:layout_marginTop="@dimen/ad_avl_inset"
                android:src="?attr/ic_close24"
                android:scaleType="center"
                app:tint="?attr/constantWhite"/>
            <LinearLayout
                android:layout_gravity="right"
                android:orientation="horizontal"
                android:id="@+id/badges_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ad_avl_badge_top_margin"
                android:layout_marginRight="41dp">
                <TextView
                    android:id="@+id/age_badge"
                    android:layout_marginRight="@dimen/ad_age_left_margin"
                    style="@style/Widget.Avito.TextView.Ad.Badge"/>
                <TextView
                    android:id="@+id/advertising_badge"
                    style="@style/Widget.Avito.TextView.Ad.Badge"/>
            </LinearLayout>
            <ImageView
                android:layout_gravity="right"
                android:id="@+id/feedback"
                android:layout_width="@dimen/ad_badges_height"
                android:layout_height="@dimen/ad_badges_height"
                android:layout_marginTop="@dimen/ad_avl_badge_top_margin"
                android:layout_marginRight="@dimen/ad_avl_inset"/>
            <TextView
                android:layout_gravity="right"
                android:id="@+id/customBadgeFeedback"
                android:visibility="gone"
                android:layout_width="@dimen/ad_badges_height"
                android:layout_height="@dimen/ad_badges_height"
                android:layout_marginTop="@dimen/ad_avl_badge_top_margin"
                android:layout_marginRight="@dimen/ad_avl_inset"
                style="@style/Widget.Avito.TextView.Ad.Badge"/>
            <FrameLayout
                android:layout_gravity="bottom"
                android:id="@+id/disclaimer_container"
                android:paddingTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/disclaimer"
                    android:layout_marginLeft="@dimen/ad_avl_inset"
                    android:layout_marginRight="@dimen/ad_avl_inset"
                    android:layout_marginBottom="38dp"
                    style="@style/Widget.Avito.TextView.Ad.Avl.Disclaimer"/>
                <TextView
                    android:layout_gravity="bottom"
                    android:id="@+id/domain_badge"
                    android:layout_marginLeft="@dimen/ad_avl_inset"
                    android:layout_marginBottom="@dimen/ad_avl_small_inset"
                    style="@style/Widget.Avito.TextView.Ad.Badge"/>
            </FrameLayout>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ad_avl_small_inset"
            android:layout_marginBottom="@dimen/ad_avl_small_inset"
            android:layout_marginHorizontal="@dimen/ad_avl_inset">
            <ImageView
                android:id="@+id/icon"
                android:layout_width="@dimen/ad_avl_icon_size"
                android:layout_height="@dimen/ad_avl_icon_size"/>
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:id="@+id/text_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.Avito.TextView.Ad.Avl.Title"/>
                <com.avito.android.advertising.ui.MinLengthMaxLinesTextView
                    android:id="@+id/description"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    style="@style/Widget.Avito.TextView.Ad.Avl.Description"/>
            </LinearLayout>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/call_to_action_container"
            android:background="@drawable/ad_avl_call_to_action_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ad_avl_inset"
            android:layout_marginHorizontal="@dimen/ad_avl_inset">
            <TextView
                android:layout_gravity="center"
                android:id="@+id/call_to_action"
                style="@style/Widget.Avito.TextView.Ad.Avl.CallToAction"/>
        </FrameLayout>
    </LinearLayout>
    <com.avito.android.advertising.ui.adstub.CommercialUnavailableView
        android:id="@+id/ad_placeholder"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</com.yandex.mobile.ads.nativeads.NativeAdView>
