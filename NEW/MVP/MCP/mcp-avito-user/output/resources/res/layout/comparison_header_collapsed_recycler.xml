<?xml version="1.0" encoding="utf-8"?>
<com.avito.android.comparison.CollapsingHeader xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/collapsing_header"
    android:fitsSystemWindows="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="120dp"
    app:layoutDescription="@xml/comparison_header_recycler_view_scene"
    app:layout_scrollFlags="snap|exitUntilCollapsed|scroll">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:navigationIcon="@drawable/ic_back_24_black">
        <TextView
            android:textAppearance="?attr/textH5"
            android:layout_gravity="center"
            android:id="@+id/toolbar_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/comparison_toolbar_default_title"/>
    </androidx.appcompat.widget.Toolbar>
    <com.avito.android.comparison.HeaderRecyclerView
        android:id="@+id/header_recycler"
        android:fitsSystemWindows="false"
        android:clipToPadding="false"
        android:layout_width="0dp"
        android:layout_height="@dimen/comparison_expanded_header_item_height"
        android:paddingStart="16dp"
        android:paddingEnd="28dp"/>
    <FrameLayout
        android:id="@+id/overlay_header_recycler"
        android:layout_width="0dp"
        android:layout_height="@dimen/comparison_expanded_header_item_height"/>
</com.avito.android.comparison.CollapsingHeader>
