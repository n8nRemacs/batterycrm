<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:id="@+id/panel_card_item_loading_root"
    android:layout_width="160dp"
    android:layout_height="80dp"
    app:cardBackgroundColor="?attr/warmGray4"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp">
    <com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="?attr/shimmerDefault">
        <LinearLayout
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="14dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="14dp"
            android:paddingEnd="32dp">
            <com.avito.android.lib.design.skeleton.Skeleton
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="6dp"
                app:skeleton_radius="6dp"/>
            <com.avito.android.lib.design.skeleton.Skeleton
                android:layout_width="match_parent"
                android:layout_height="9dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="16dp"
                app:skeleton_radius="6dp"/>
            <com.avito.android.lib.design.skeleton.Skeleton
                android:layout_width="match_parent"
                android:layout_height="9dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="32dp"
                app:skeleton_radius="6dp"/>
        </LinearLayout>
    </com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout>
</androidx.cardview.widget.CardView>
