<?xml version="1.0" encoding="utf-8"?>
<com.avito.android.lib.design.skeleton.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:id="@+id/usp_tabs_shimmer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:shimmer_auto_start="false"
    app:shimmer_base_alpha="0"
    app:shimmer_clip_to_children="true"
    app:shimmer_colored="true"
    app:shimmer_colored_tint_mode="overlay"
    app:shimmer_duration="2000"
    app:shimmer_highlight_alpha="0.7"
    app:shimmer_highlight_color="@color/usp_chips_shimmer_highlight_color"
    app:shimmer_repeat_count="5"
    app:shimmer_repeat_delay="300"
    app:shimmer_tilt="-30">
    <com.avito.android.lib.design.chips.Chips
        android:id="@+id/usp_tabs_chips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/content_horizontal_padding"
        app:chips_displayType="multipleLines"
        app:chips_keepLastSelected="true"
        app:chips_selectStrategy="single"
        style="?attr/chipsSmall"/>
</com.avito.android.lib.design.skeleton.shimmer.ShimmerFrameLayout>
