<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/extended_profile_selection_item_container"
    android:paddingBottom="5dp"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="164dp"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/extended_profile_selection_image_3_container"
        android:background="?attr/white"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="74dp"
        app:layout_constraintBottom_toBottomOf="@+id/extended_profile_selection_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/extended_profile_selection_image">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/extended_profile_selection_image_3"
            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:placeholderImage="?attr/warmGray28"
            app:roundedCornerRadius="10dp"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/extended_profile_selection_image_2_container"
        android:background="?attr/white"
        android:layout_width="104dp"
        android:layout_height="104dp"
        android:layout_marginStart="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/extended_profile_selection_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/extended_profile_selection_image">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/extended_profile_selection_image_2"
            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:placeholderImage="?attr/warmGray16"
            app:roundedCornerRadius="10dp"/>
    </FrameLayout>
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/extended_profile_selection_image"
        android:background="?attr/white"
        android:padding="2dp"
        android:layout_width="132dp"
        android:layout_height="132dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:placeholderImage="@drawable/ic_sx_selection_placeholder"
        app:roundedCornerRadius="20dp"/>
    <View
        android:id="@+id/extended_profile_selection_item_title"
        android:background="@drawable/bg_selection_placeholder_title"
        android:layout_width="158dp"
        android:layout_height="12dp"
        android:layout_marginTop="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/extended_profile_selection_image"/>
    <View
        android:id="@+id/extended_profile_selection_item_description"
        android:background="@drawable/bg_selection_placeholder_subtitle"
        android:layout_width="96dp"
        android:layout_height="9dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/extended_profile_selection_item_title"/>
</androidx.constraintlayout.widget.ConstraintLayout>
