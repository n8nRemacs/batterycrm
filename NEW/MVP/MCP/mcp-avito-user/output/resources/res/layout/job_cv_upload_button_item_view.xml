<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:id="@+id/container"
    android:background="@drawable/bg_round_corners_16_gray_2"
    android:padding="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:layout_marginHorizontal="16dp">
    <ImageView
        android:id="@+id/upload_image"
        android:background="@drawable/background_white"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="?attr/ic_upload20"
        android:scaleType="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/upload_button_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        app:layout_constraintBottom_toBottomOf="@+id/upload_image"
        app:layout_constraintStart_toEndOf="@+id/upload_image"
        app:layout_constraintTop_toTopOf="@+id/upload_image"/>
    <ImageView
        android:layout_gravity="end"
        android:id="@+id/right_arrow_icon"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:src="?attr/ic_arrowRight16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?attr/black"/>
</androidx.constraintlayout.widget.ConstraintLayout>
