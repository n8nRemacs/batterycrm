<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:id="@+id/tab_bg"
        android:background="@drawable/tab_bubble_selector"
        android:paddingLeft="12dp"
        android:paddingRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="6dp">
        <TextView
            android:textSize="16sp"
            android:typeface="normal"
            android:textColor="@color/tab_bubble_text_selector"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/tab_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="1dp"
            android:lines="1"
            android:singleLine="true"
            android:layout_weight="1"/>
        <TextView
            android:textSize="13sp"
            android:textColor="?attr/constantWhite"
            android:ellipsize="none"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/tab_counter"
            android:background="@drawable/tab_label"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-2dp"
            android:minWidth="20dp"
            android:minHeight="20dp"
            android:singleLine="true"/>
    </LinearLayout>
</FrameLayout>
