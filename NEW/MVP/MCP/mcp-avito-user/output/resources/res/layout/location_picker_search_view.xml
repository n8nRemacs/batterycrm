<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/design_system_bg_search_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true">
    <View
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <HorizontalScrollView
        android:id="@+id/edit_scroll"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:scrollbars="none"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="-8dp"
        android:fillViewport="true"
        android:layout_toLeftOf="@+id/clear_button">
        <com.avito.android.ui.view.BackPressedNotifyingEditText
            android:textSize="16sp"
            android:textColor="?attr/black"
            android:textColorHint="?attr/gray28"
            android:layout_gravity="start|center_vertical"
            android:id="@+id/edit_query"
            android:background="?attr/transparentBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:hint="@string/lp_enter_address"
            android:maxLines="1"
            android:inputType="textNoSuggestions"
            android:imeOptions="flagNoExtractUi|actionSearch"/>
    </HorizontalScrollView>
    <ImageView
        android:id="@+id/clear_button"
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:src="@drawable/ic_clear_states"
        android:layout_alignTop="@+id/edit_scroll"
        android:layout_alignBottom="@+id/edit_scroll"
        android:layout_alignParentRight="true"/>
    <FrameLayout
        android:id="@+id/drop_down_suggestions_container"
        android:focusableInTouchMode="true"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_scroll">
        <View
            android:background="?attr/gray8"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </FrameLayout>
    <View
        android:background="@color/expected_material_card_background"
        android:layout_width="3dp"
        android:layout_height="48dp"/>
    <View
        android:background="@drawable/search_padding_decorator"
        android:layout_width="13dp"
        android:layout_height="48dp"
        android:layout_marginStart="3dp"/>
</RelativeLayout>
