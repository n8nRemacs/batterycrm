<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp">
    <com.avito.android.lib.design.button.Button
        android:layout_gravity="center_horizontal"
        android:id="@+id/all_filters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="center"
        style="?attr/buttonSecondaryLarge"/>
    <com.avito.android.lib.design.badge.Badge
        android:layout_gravity="end"
        android:id="@+id/notification_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-6dp"
        android:layout_marginEnd="-6dp"
        app:badge_backgroundColor="?attr/red600"
        app:badge_strokeColor="?attr/blue100"
        app:badge_strokeWidth="2dp"
        style="?attr/badgeNumberSmall"/>
</FrameLayout>
