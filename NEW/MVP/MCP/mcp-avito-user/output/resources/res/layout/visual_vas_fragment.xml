<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="vertical"
    android:id="@+id/visual_vas_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/visual_vas_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_back_24">
        <com.avito.android.lib.design.button.Button
            android:layout_gravity="end|center_vertical"
            android:id="@+id/visual_vas_help_button"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            style="?attr/buttonSecondarySmall"/>
    </androidx.appcompat.widget.Toolbar>
    <FrameLayout
        android:id="@+id/visual_vas_placeholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/visual_vas_recycler_view"
            android:clipChildren="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
        <FrameLayout
            android:layout_gravity="bottom"
            android:id="@+id/visual_vas_button_container"
            android:background="@drawable/bg_transparent_white_gradient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.avito.android.lib.design.button.Button
                android:id="@+id/visual_vas_skip_button"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="16dp"
                style="?attr/buttonSecondaryLarge"/>
        </FrameLayout>
        <com.avito.android.mnz_common.ui.MnzFloatingFooter
            android:layout_gravity="bottom"
            android:id="@+id/visual_vas_floating_footer"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
</LinearLayout>
