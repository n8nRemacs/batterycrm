<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="20dp">
    <TextView
        android:textAppearance="?attr/textH2"
        android:id="@+id/no_applies_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/empty_applies_title"/>
    <TextView
        android:textAppearance="?attr/textM1"
        android:gravity="center_horizontal"
        android:id="@+id/no_applies_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/empty_applies_subbtitle"/>
</LinearLayout>
