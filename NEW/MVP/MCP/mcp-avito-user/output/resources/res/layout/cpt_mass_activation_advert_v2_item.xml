<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:id="@+id/cpt_mass_activation_advert_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.avito.android.fresco.SimpleDraweeView
        android:id="@+id/cpt_mass_activation_advert_image_v2"
        android:layout_width="100dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:roundedCornerRadius="6dp"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/cpt_mass_activation_advert_text_title_v2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cpt_mass_activation_advert_image_v2"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textH50"
        android:id="@+id/cpt_mass_activation_advert_text_description_v2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginStart="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cpt_mass_activation_advert_image_v2"
        app:layout_constraintTop_toBottomOf="@+id/cpt_mass_activation_advert_text_title_v2"/>
    <TextView
        android:textAppearance="?attr/textS20"
        android:id="@+id/cpt_mass_activation_advert_text_fee_v2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="12dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toStartOf="@+id/cpt_mass_activation_advert_fee_info_icon_v2"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/cpt_mass_activation_advert_image_v2"
        app:layout_constraintTop_toBottomOf="@+id/cpt_mass_activation_advert_text_description_v2"/>
    <ImageView
        android:id="@+id/cpt_mass_activation_advert_fee_info_icon_v2"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="?attr/ic_help20"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cpt_mass_activation_advert_text_description_v2"
        app:tint="?attr/gray20"/>
    <TextView
        android:textAppearance="?attr/textS20"
        android:id="@+id/cpt_mass_activation_advert_text_fbs_fee_v2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="12dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/cpt_mass_activation_advert_image_v2"
        app:layout_constraintTop_toBottomOf="@+id/cpt_mass_activation_advert_text_fee_v2"/>
</androidx.constraintlayout.widget.ConstraintLayout>
