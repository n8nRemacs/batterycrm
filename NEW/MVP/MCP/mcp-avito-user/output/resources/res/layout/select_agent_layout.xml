<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="16dp"
    android:paddingBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp">
    <TextView
        android:textAppearance="?attr/textH25"
        android:id="@+id/select_agent_title"
        android:paddingBottom="8dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/client_room_how_to_select_agent_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/select_agent_description"
        android:paddingBottom="16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/client_room_how_to_select_agent_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_agent_title"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/center_guideline"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintGuide_percent="0.5"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/select_agent_reason1_container"
        android:background="@drawable/select_agent_shape"
        android:paddingTop="16dp"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:layout_marginEnd="4dp"
        android:paddingHorizontal="16dp"
        app:layout_constraintEnd_toStartOf="@+id/center_guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_agent_description">
        <FrameLayout
            android:background="@drawable/white_circle_bg"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginBottom="12dp">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="?attr/ic_jobs16"
                app:tint="?attr/black"/>
        </FrameLayout>
        <TextView
            android:textAppearance="?attr/textM20"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/client_room_how_to_select_agent_reason1"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/select_agent_shape"
        android:paddingTop="16dp"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:layout_marginStart="4dp"
        android:paddingHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/center_guideline"
        app:layout_constraintTop_toBottomOf="@+id/select_agent_description">
        <FrameLayout
            android:background="@drawable/white_circle_bg"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginBottom="12dp">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="?attr/ic_support16"
                app:tint="?attr/black"/>
        </FrameLayout>
        <TextView
            android:textAppearance="?attr/textM20"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/client_room_how_to_select_agent_reason2"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/select_agent_reason3_container"
        android:background="@drawable/select_agent_shape"
        android:paddingTop="16dp"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:paddingHorizontal="16dp"
        app:layout_constraintEnd_toStartOf="@+id/center_guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_agent_reason1_container">
        <FrameLayout
            android:background="@drawable/white_circle_bg"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginBottom="12dp">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="?attr/ic_file16"
                app:tint="?attr/black"/>
        </FrameLayout>
        <TextView
            android:textAppearance="?attr/textM20"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/client_room_how_to_select_agent_reason3"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/select_agent_shape"
        android:paddingTop="16dp"
        android:paddingBottom="20dp"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="4dp"
        android:paddingHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/center_guideline"
        app:layout_constraintTop_toBottomOf="@+id/select_agent_reason1_container">
        <FrameLayout
            android:background="@drawable/white_circle_bg"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginBottom="12dp">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="?attr/ic_realty16"
                app:tint="?attr/black"/>
        </FrameLayout>
        <TextView
            android:textAppearance="?attr/textM20"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/client_room_how_to_select_agent_reason4"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/select_agent_reason5_container"
        android:background="@drawable/select_agent_shape"
        android:padding="16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_agent_reason3_container">
        <FrameLayout
            android:background="@drawable/white_circle_bg"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="12dp">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="?attr/ic_graph16"
                app:tint="?attr/black"/>
        </FrameLayout>
        <TextView
            android:textAppearance="?attr/textM20"
            android:ellipsize="end"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/client_room_how_to_select_agent_reason5"/>
    </LinearLayout>
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/select_agent_rules"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/client_room_how_to_select_agent_conditions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_agent_reason5_container"/>
</androidx.constraintlayout.widget.ConstraintLayout>
