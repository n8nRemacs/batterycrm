<?xml version="1.0" encoding="utf-8"?>
<com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shimmer_layout"
    android:padding="16dp"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:shimmer_animationDuration="3000"
    app:shimmer_autostart="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/title_stub1"
            android:background="@drawable/shimmer_cpx_stub_text"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <View
            android:id="@+id/title_stub2"
            android:background="@drawable/shimmer_cpx_stub_text"
            android:layout_width="160dp"
            android:layout_height="20dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_stub1"/>
        <View
            android:id="@+id/title_stub3"
            android:background="@drawable/shimmer_cpx_stub_text"
            android:layout_width="174dp"
            android:layout_height="20dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_stub2"/>
        <View
            android:id="@+id/description_stub1"
            android:background="@drawable/shimmer_cpx_stub_description"
            android:layout_width="215dp"
            android:layout_height="10dp"
            android:layout_marginTop="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_stub3"/>
        <View
            android:id="@+id/description_stub2"
            android:background="@drawable/shimmer_cpx_stub_description"
            android:layout_width="238dp"
            android:layout_height="10dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/description_stub1"/>
        <View
            android:id="@+id/description_stub3"
            android:background="@drawable/shimmer_cpx_stub_description"
            android:layout_width="232dp"
            android:layout_height="10dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/description_stub2"/>
        <View
            android:id="@+id/block_stub1"
            android:background="@drawable/shimmer_cpx_stub_block"
            android:layout_width="0dp"
            android:layout_height="82dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/description_stub3"/>
        <View
            android:id="@+id/block_stub2"
            android:background="@drawable/shimmer_cpx_stub_block"
            android:layout_width="0dp"
            android:layout_height="276dp"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/block_stub1"/>
        <View
            android:id="@+id/block_stub3"
            android:background="@drawable/shimmer_cpx_stub_block"
            android:layout_width="0dp"
            android:layout_height="276dp"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/block_stub2"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout>
