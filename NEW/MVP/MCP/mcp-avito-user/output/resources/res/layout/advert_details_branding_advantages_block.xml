<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="vertical"
    android:id="@+id/advert_details_branding_advantages_blocks"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp">
    <TextView
        android:textAppearance="?attr/textH25"
        android:id="@+id/advert_details_branding_advantages_block_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.avito.android.util.ExpandablePanelLayout
        android:orientation="vertical"
        android:id="@+id/advert_details_branding_advantages_block_description_root"
        android:paddingTop="12dp"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentId="@+id/advert_details_branding_advantages_block_description"
        app:handleId="@+id/advert_details_branding_advantages_block_description_button">
        <com.avito.android.advert_core.advert.NoScrollingTextView
            android:textAppearance="?attr/textM10"
            android:ellipsize="end"
            android:id="@+id/advert_details_branding_advantages_block_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="center"
            android:id="@+id/advert_details_branding_advantages_block_description_button"
            android:background="@drawable/bg_rds_gray_button"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:text="@string/advert_details_branding_advantages_description_button_show_more"
            style="@style/TextAppearance.Avito.AdvertDetails.Body.Blue"/>
    </com.avito.android.util.ExpandablePanelLayout>
    <com.avito.android.serp.NoTouchEventRecyclerView
        android:id="@+id/advert_details_branding_advantages_block_elements"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"/>
</LinearLayout>
