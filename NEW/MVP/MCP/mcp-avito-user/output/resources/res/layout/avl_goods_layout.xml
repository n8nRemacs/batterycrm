<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/goods_click_view"
        android:background="@drawable/avl_good_view_bg"
        android:layout_width="0dp"
        android:layout_height="78dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/goods_image_view"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/goods_click_view"
        app:layout_constraintStart_toStartOf="@+id/goods_click_view"
        app:layout_constraintTop_toTopOf="@+id/goods_click_view"
        app:roundedCornerRadius="10dp"/>
    <TextView
        android:ellipsize="end"
        android:id="@+id/goods_price_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:maxLines="1"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="@+id/goods_click_view"
        app:layout_constraintStart_toEndOf="@+id/goods_image_view"
        app:layout_constraintTop_toTopOf="@+id/goods_click_view"
        style="?attr/textH5"/>
    <TextView
        android:ellipsize="end"
        android:id="@+id/goods_title_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="@+id/goods_price_view"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/goods_price_view"
        app:layout_constraintTop_toBottomOf="@+id/goods_price_view"
        style="?attr/textS1"/>
    <TextView
        android:ellipsize="end"
        android:id="@+id/seller_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_marginEnd="3dp"
        app:layout_constraintEnd_toStartOf="@+id/seller_rating"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@+id/goods_price_view"
        app:layout_constraintTop_toBottomOf="@+id/goods_title_view"
        app:layout_constraintWidth_default="wrap"
        style="?attr/textS1"/>
    <ImageView
        android:id="@+id/seller_rating"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:src="@drawable/product_specific_ic_rating_star_20_orange"
        android:contentDescription="@null"
        android:layout_marginEnd="3dp"
        app:layout_constraintBottom_toBottomOf="@+id/seller_name"
        app:layout_constraintEnd_toStartOf="@+id/seller_rating_value"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/seller_name"
        app:layout_constraintTop_toTopOf="@+id/seller_name"/>
    <TextView
        android:id="@+id/seller_rating_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/seller_name"
        app:layout_constraintEnd_toStartOf="@+id/seller_rating_comment"
        app:layout_constraintStart_toEndOf="@+id/seller_rating"
        app:layout_constraintTop_toTopOf="@+id/seller_name"
        style="?attr/textS1"/>
    <TextView
        android:textColor="?attr/gray48"
        android:id="@+id/seller_rating_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="@+id/goods_click_view"
        app:layout_constraintStart_toEndOf="@+id/seller_rating_value"
        app:layout_constraintTop_toBottomOf="@+id/goods_title_view"
        style="?attr/textS1"/>
</androidx.constraintlayout.widget.ConstraintLayout>
