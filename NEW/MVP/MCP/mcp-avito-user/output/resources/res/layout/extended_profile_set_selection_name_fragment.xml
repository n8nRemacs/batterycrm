<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/extended_profile_set_selection_name_root"
    android:background="?attr/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.avito.android.lib.design.nav_bar.NavBar
        android:id="@+id/extended_profile_set_selection_name_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textH20"
        android:id="@+id/extended_profile_set_selection_name_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/extended_profile_set_selection_name_title"
        android:layout_marginHorizontal="@dimen/extended_profile_set_selection_name_horizontal_margin"
        app:layout_constraintTop_toBottomOf="@+id/extended_profile_set_selection_name_nav_bar"/>
    <com.avito.android.lib.design.input.Input
        android:id="@+id/extended_profile_set_selection_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="@dimen/extended_profile_set_selection_name_horizontal_margin"
        app:layout_constraintTop_toBottomOf="@+id/extended_profile_set_selection_name_title"/>
    <TextView
        android:textAppearance="?attr/textS10"
        android:textColor="?attr/gray54"
        android:id="@+id/extended_profile_set_selection_name_input_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginHorizontal="@dimen/extended_profile_set_selection_name_horizontal_margin"
        app:layout_constraintTop_toBottomOf="@+id/extended_profile_set_selection_name_input"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/extended_profile_set_selection_name_is_hidden_checkbox_container"
        android:paddingTop="19dp"
        android:paddingBottom="9dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/extended_profile_set_selection_name_horizontal_margin"
        app:layout_constraintTop_toBottomOf="@+id/extended_profile_set_selection_name_input_hint">
        <com.avito.android.lib.design.toggle.Checkbox
            android:id="@+id/extended_profile_set_selection_name_is_hidden_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:checked="true"
            android:layout_marginEnd="9dp"
            style="?attr/toggleCheckboxDefaultSmall"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/extended_profile_set_selection_name_is_public_checkbox"
            style="?attr/textS20"/>
    </LinearLayout>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/extended_profile_set_selection_name_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/extended_profile_set_selection_name_continue_button"
        android:layout_marginHorizontal="@dimen/extended_profile_set_selection_name_horizontal_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        style="?attr/buttonPrimaryLarge"/>
</androidx.constraintlayout.widget.ConstraintLayout>
