<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:id="@+id/reviews_score_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/rating_badge_score_container"
        android:layout_width="35dp"
        android:layout_height="24dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:textAppearance="?attr/textM20"
            android:textColor="?attr/constantWhite"
            android:layout_gravity="center"
            android:id="@+id/rating_badge_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:textAppearance="?attr/textM20"
        android:textColor="?attr/black"
        android:id="@+id/rating_badge_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_marginStart="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/rating_badge_score_container"
        app:layout_constraintStart_toEndOf="@+id/rating_badge_score_container"
        app:layout_constraintTop_toTopOf="@+id/rating_badge_score_container"/>
</androidx.constraintlayout.widget.ConstraintLayout>
