<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/passport_request_ownership_screen_root"
    android:background="?attr/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.avito.android.lib.design.nav_bar.NavBar
        android:id="@+id/passport_confirm_ownership_request_code_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ScrollView
        android:id="@+id/passport_confirm_ownership_request_code_content"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        android:fillViewport="true"
        android:layout_marginHorizontal="16dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="?attr/textH25"
                android:id="@+id/passport_confirm_ownership_request_code_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/passport_accounts_merge_check_ownership_code_request_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/passport_confirm_ownership_request_code_legal"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/passport_confirm_ownership_request_code_title"/>
            <com.avito.android.lib.design.component_container.ComponentContainer
                android:id="@+id/passport_confirm_ownership_request_code_input_cc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/passport_confirm_ownership_request_code_legal">
                <com.avito.android.lib.design.input.Input
                    android:textAppearance="?attr/textM20"
                    android:id="@+id/passport_confirm_ownership_request_code_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/passport_accounts_merge_check_ownership_code_request_input_hint"
                    android:imeOptions="flagNoExtractUi|actionDone"
                    android:autofillHints="phone"
                    app:input_clearButton="true"
                    app:input_formatterType="mobile_phone"
                    app:input_prefix="+7 "
                    style="?attr/inputDefaultM"/>
            </com.avito.android.lib.design.component_container.ComponentContainer>
            <com.avito.android.lib.design.button.Button
                android:id="@+id/passport_confirm_ownership_request_code_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:text="@string/passport_accounts_merge_check_ownership_code_request_continue"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                style="?attr/buttonPrimaryMedium"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <FrameLayout
        android:layout_gravity="center"
        android:id="@+id/passport_confirm_ownership_request_code_progress_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>
