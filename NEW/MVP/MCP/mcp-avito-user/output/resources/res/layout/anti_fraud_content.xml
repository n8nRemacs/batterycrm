<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="@dimen/anti_fraud_bottom_sheet_horizontal_offset"
            android:layout_marginEnd="@dimen/anti_fraud_bottom_sheet_horizontal_offset">
            <ImageView
                android:layout_gravity="top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:contentDescription="@null"
                android:layout_marginStart="-3dp"
                app:srcCompat="@drawable/ic_marketplace_check"
                app:tint="?attr/green800"/>
            <TextView
                android:textAppearance="?attr/textBody"
                android:textColor="@color/text_button_default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/advert_core_anti_fraud_dialog_rule_1"
                android:layout_marginStart="28dp"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="@dimen/anti_fraud_bottom_sheet_horizontal_offset"
            android:layout_marginEnd="@dimen/anti_fraud_bottom_sheet_horizontal_offset">
            <ImageView
                android:layout_gravity="top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:contentDescription="@null"
                android:layout_marginStart="-3dp"
                app:srcCompat="@drawable/ic_marketplace_check"
                app:tint="?attr/green800"/>
            <TextView
                android:textAppearance="?attr/textBody"
                android:textColor="@color/text_button_default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/advert_core_anti_fraud_dialog_rule_2"
                android:layout_marginStart="28dp"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="@dimen/anti_fraud_bottom_sheet_horizontal_offset"
            android:layout_marginEnd="@dimen/anti_fraud_bottom_sheet_horizontal_offset">
            <ImageView
                android:layout_gravity="top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:contentDescription="@null"
                android:layout_marginStart="-3dp"
                app:srcCompat="@drawable/ic_marketplace_check"
                app:tint="?attr/green800"/>
            <TextView
                android:textAppearance="?attr/textBody"
                android:textColor="@color/text_button_default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/advert_core_anti_fraud_dialog_rule_3"
                android:layout_marginStart="28dp"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:layout_marginStart="@dimen/anti_fraud_bottom_sheet_horizontal_offset"
            android:layout_marginEnd="@dimen/anti_fraud_bottom_sheet_horizontal_offset">
            <ImageView
                android:layout_gravity="top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:contentDescription="@null"
                android:layout_marginStart="-3dp"
                app:srcCompat="@drawable/ic_marketplace_check"
                app:tint="?attr/green800"/>
            <TextView
                android:textAppearance="?attr/textBody"
                android:textColor="@color/text_button_default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/advert_core_anti_fraud_dialog_rule_4"
                android:layout_marginStart="28dp"/>
        </FrameLayout>
        <com.avito.android.lib.design.button.Button
            android:layout_gravity="bottom|center_horizontal"
            android:id="@+id/ok_button"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:text="@string/advert_core_anti_fraud_dialog_ok_button"
            android:layout_marginStart="@dimen/anti_fraud_bottom_sheet_horizontal_offset"
            android:layout_marginEnd="@dimen/anti_fraud_bottom_sheet_horizontal_offset"
            style="?attr/buttonPrimaryLarge"/>
        <com.avito.android.lib.design.button.Button
            android:layout_gravity="bottom|center_horizontal"
            android:id="@+id/more_button"
            android:layout_width="match_parent"
            android:layout_marginBottom="16dp"
            android:text="@string/advert_core_anti_fraud_dialog_more_button"
            android:layout_marginStart="@dimen/anti_fraud_bottom_sheet_horizontal_offset"
            android:layout_marginEnd="@dimen/anti_fraud_bottom_sheet_horizontal_offset"
            style="?attr/buttonSecondaryLarge"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
