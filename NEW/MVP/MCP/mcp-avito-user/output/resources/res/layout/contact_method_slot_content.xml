<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="vertical"
    android:id="@+id/contact_method_slot"
    android:paddingBottom="28dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="?attr/publish_horizontalPadding">
    <TextView
        android:textAppearance="?attr/textH25"
        android:id="@+id/contact_method_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"/>
    <com.avito.android.lib.design.list_item.ListItemSwitcher
        android:enabled="true"
        android:id="@+id/contact_method_phone"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:listItem_switcherStyle="?attr/switcherDefaultMedium"/>
    <com.avito.android.lib.design.list_item.ListItemSwitcher
        android:enabled="true"
        android:id="@+id/contact_method_messenger"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:listItem_switcherStyle="?attr/switcherDefaultMedium"/>
    <TextView
        android:textAppearance="?attr/textS20"
        android:textColor="?attr/red600"
        android:id="@+id/contact_method_error"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/contact_method_error"/>
</LinearLayout>
