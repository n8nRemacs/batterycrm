<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/early_booking_discount_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp">
    <com.avito.android.lib.design.list_item.ListItemSwitcher
        android:id="@+id/early_booking_enabled_switcher"
        android:focusable="true"
        android:clickable="true"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:listItem_switcherStyle="?attr/switcherDefaultMedium"
        app:listItem_title="За раннее бронирование"
        app:listItem_titleAppearance="?attr/textH50"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/inputs_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.avito.android.lib.design.component_container.ComponentContainer
            android:id="@+id/days_input_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <com.avito.android.lib.design.input.Input
                android:id="@+id/days_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?attr/inputDefaultM"/>
        </com.avito.android.lib.design.component_container.ComponentContainer>
        <com.avito.android.lib.design.component_container.ComponentContainer
            android:id="@+id/percent_input_container"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp">
            <com.avito.android.lib.design.input.Input
                android:id="@+id/percent_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?attr/inputDefaultM"/>
        </com.avito.android.lib.design.component_container.ComponentContainer>
    </LinearLayout>
</LinearLayout>
