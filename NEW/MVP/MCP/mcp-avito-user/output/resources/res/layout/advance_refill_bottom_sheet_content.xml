<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/bottom_sheet_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp">
        <TextView
            android:textAppearance="?attr/textH3"
            android:id="@+id/bs_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"/>
        <com.avito.android.lib.design.input.Input
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:maxLength="9"
            android:inputType="number"
            android:imeOptions="actionDone"
            app:input_clearButtonUnfocused="true"
            app:input_formatterType="decimal"
            app:input_postfix="â‚½"
            style="?attr/input"/>
        <com.avito.android.lib.design.button.Button
            android:id="@+id/next_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            style="?attr/buttonPrimaryLarge"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
