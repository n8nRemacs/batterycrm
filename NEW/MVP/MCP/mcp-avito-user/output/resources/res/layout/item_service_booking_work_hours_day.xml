<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sb_day_setting"
    android:background="?attr/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true">
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginVertical="12dp"
        app:layout_constraintBottom_toTopOf="@+id/fromTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"/>
    <com.avito.android.lib.design.switcher.Switcher
        android:id="@+id/switcher"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginVertical="12dp"
        app:layout_constraintBottom_toTopOf="@+id/fromTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        app:switcher_thumbColor="?attr/white"
        app:switcher_trackColor="@color/work_hours_switcher_colors"
        style="?attr/switcherDefaultMedium"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/selectTimeGroup"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="fromTime, toTime"/>
    <com.avito.android.lib.design.select.BaseSelect
        android:id="@+id/fromTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:hint="@string/service_booking_settings_from"
        android:inputType="textNoSuggestions"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/toTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        style="?attr/baseSelectDefaultM"/>
    <com.avito.android.lib.design.select.BaseSelect
        android:id="@+id/toTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:hint="@string/service_booking_settings_to"
        android:inputType="textNoSuggestions"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fromTime"
        app:layout_constraintTop_toTopOf="@+id/fromTime"
        style="?attr/baseSelectDefaultM"/>
</androidx.constraintlayout.widget.ConstraintLayout>
