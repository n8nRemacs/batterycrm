<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/group_checkbox_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:paddingVertical="12dp">
    <com.avito.android.lib.design.toggle.Checkbox
        android:textAppearance="?attr/textM20"
        android:id="@+id/group_checkbox"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:checked="false"
        android:paddingStart="16dp"
        android:paddingEnd="0dp"
        app:layout_constraintEnd_toStartOf="@+id/group_checkbox_dropdown_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="?attr/toggleCheckboxDefaultMedium"/>
    <TextView
        android:textAppearance="?attr/textL20"
        android:gravity="end"
        android:id="@+id/group_checkbox_dropdown_icon"
        android:visibility="gone"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textS20"
        android:textColor="?attr/gray54"
        android:id="@+id/sub_title"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginStart="37dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/group_checkbox"/>
</androidx.constraintlayout.widget.ConstraintLayout>
