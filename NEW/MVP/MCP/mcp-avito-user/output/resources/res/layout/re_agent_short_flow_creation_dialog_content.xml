<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/profile_upgrade"
        android:contentDescription="@null"
        android:layout_marginHorizontal="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/re_agent_short_flow_creation_title"
        android:layout_marginHorizontal="16dp"
        style="?attr/textH20"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/re_agent_short_flow_creation_description"
        android:layout_marginHorizontal="16dp"
        style="?attr/textM10"/>
    <TextView
        android:id="@+id/re_agent_short_flow_creation_description_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="28dp"
        android:text="@string/re_agent_short_flow_creation_description_info"
        android:layout_marginHorizontal="16dp"
        style="?attr/textM10"/>
</LinearLayout>
