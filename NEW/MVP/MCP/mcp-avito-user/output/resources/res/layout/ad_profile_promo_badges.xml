<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:paddingBottom="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="?attr/textXs"
        android:id="@+id/advertising_badge"
        android:layout_marginLeft="@dimen/ad_profile_promo_text_horizontal_margin"
        android:layout_marginTop="@dimen/ad_profile_promo_title_top_margin"
        android:text="@string/advertising_badge_name"
        style="@style/Widget.Avito.TextView.Ad.Badge"/>
    <TextView
        android:textAppearance="?attr/textXs"
        android:id="@+id/age_badge"
        android:layout_marginLeft="@dimen/ad_age_left_margin"
        android:layout_marginTop="@dimen/ad_profile_promo_title_top_margin"
        style="@style/Widget.Avito.TextView.Ad.Badge"/>
</LinearLayout>
