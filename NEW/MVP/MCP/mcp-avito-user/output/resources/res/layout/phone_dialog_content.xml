<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp">
    <TextView
        android:textAppearance="?attr/textH30"
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textIsSelectable="true"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/temporary_number_container"
        android:background="@drawable/temporary_number_background"
        android:paddingTop="16dp"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="16dp">
        <ImageView
            android:id="@+id/shield_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="?attr/ic_verifyOutline20"
            android:contentDescription="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textAppearance="?attr/textS10"
            android:textColor="?attr/black"
            android:id="@+id/temporary_number_title"
            android:paddingBottom="4dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/number_is_temporary"
            android:paddingStart="9dp"
            android:paddingEnd="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/shield_icon"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textAppearance="?attr/textS10"
            android:textColor="?attr/gray64"
            android:id="@+id/temporary_number_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/dont_save_number"
            android:paddingStart="9dp"
            android:paddingEnd="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/shield_icon"
            app:layout_constraintTop_toBottomOf="@+id/temporary_number_title"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
