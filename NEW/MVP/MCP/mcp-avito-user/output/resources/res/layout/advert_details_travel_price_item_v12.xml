<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:paddingHorizontal="@dimen/content_horizontal_padding"
    app:alignContent="flex_start"
    app:alignItems="flex_start"
    app:flexDirection="row"
    app:flexWrap="wrap"
    app:justifyContent="flex_start"
    app:showDivider="none">
    <TextView
        android:textAppearance="?attr/textH20"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.avito.android.lib.design.strikethrough.StrikethroughTextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/previous_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:layout_alignSelf="baseline"
        app:strikethrough_show="true"
        app:strikethrough_textStyle="?attr/textM20"
        app:strikethrough_tint="?attr/red600"/>
    <com.avito.android.lib.design.badge.Badge
        android:textAppearance="?attr/textS20"
        android:id="@+id/discount_percent_badge"
        android:paddingTop="0dp"
        android:paddingBottom="1dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:minHeight="17dp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:layout_marginStart="5dp"
        app:badge_cornerSize="6dp"
        app:layout_alignSelf="flex_end"
        style="?attr/badgeTextRedS"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        app:layout_flexGrow="2"
        app:layout_wrapBefore="true"/>
</com.google.android.flexbox.FlexboxLayout>
