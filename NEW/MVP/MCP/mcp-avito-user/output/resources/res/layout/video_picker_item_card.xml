<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/video_card_root"
    android:layout_width="match_parent"
    android:layout_height="220dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="0dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="0dp">
        <ImageView
            android:id="@+id/video_thumbnail"
            android:background="?attr/warmGray4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="@null"/>
    </androidx.cardview.widget.CardView>
    <View
        android:id="@+id/video_shading"
        android:background="@drawable/video_picker_video_shading_bg"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <TextView
        android:textColor="?attr/constantWhite"
        android:id="@+id/warning_badge"
        android:background="@drawable/video_picker_video_warning_badge_bg"
        android:paddingBottom="2dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:paddingHorizontal="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="?attr/textS20"/>
    <TextView
        android:textColor="?attr/constantWhite"
        android:id="@+id/duration"
        android:background="@drawable/video_picker_video_duration_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:paddingHorizontal="4dp"
        android:paddingVertical="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="?attr/textXs10"/>
</androidx.constraintlayout.widget.ConstraintLayout>
