<?xml version="1.0" encoding="utf-8"?>
<com.avito.android.lib.design.skeleton.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:id="@+id/shimmer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:shimmer_auto_start="true"
    app:shimmer_duration="3000">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/stub_text_1"
            android:background="@drawable/rounded_background_r6"
            android:layout_width="0dp"
            android:layout_height="14dp"
            android:backgroundTint="?attr/warmGray8"
            app:layout_constraintEnd_toStartOf="@+id/stub_image"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.4"/>
        <View
            android:id="@+id/stub_text_2"
            android:background="@drawable/rounded_background_r6"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_marginTop="13dp"
            android:backgroundTint="?attr/warmGray8"
            app:layout_constraintEnd_toStartOf="@+id/stub_image"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@+id/stub_text_1"
            app:layout_constraintTop_toBottomOf="@+id/stub_text_1"
            app:layout_constraintWidth_percent="0.5"/>
        <View
            android:background="@drawable/rounded_background_r6"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="?attr/warmGray8"
            app:layout_constraintEnd_toStartOf="@+id/stub_image"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@+id/stub_text_1"
            app:layout_constraintTop_toBottomOf="@+id/stub_text_2"
            app:layout_constraintWidth_percent="0.5"/>
        <View
            android:id="@+id/stub_image"
            android:background="@drawable/bg_preview_hotel_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:backgroundTint="?attr/warmGray8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <View
            android:id="@+id/stub_filter"
            android:background="@drawable/rounded_background_r16"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginTop="22dp"
            android:backgroundTint="?attr/warmGray8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/stub_image"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.avito.android.lib.design.skeleton.shimmer.ShimmerFrameLayout>
