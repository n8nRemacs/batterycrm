<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_dashboard_empty_stats"
    android:background="?attr/selectableItemBackground"
    android:layout_width="160dp"
    android:layout_height="match_parent"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="16dp">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_dashboard_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:textAppearance="?attr/textM20"
            android:textColor="?attr/blue500"
            android:gravity="center"
            android:id="@+id/tv_dashboard_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"/>
        <com.avito.android.fresco.SimpleDraweeView
            android:layout_gravity="center"
            android:id="@+id/sdv_dashboard_empty"
            android:paddingTop="10dp"
            android:layout_width="20dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_arrow_right_blue"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
