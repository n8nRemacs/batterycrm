<?xml version="1.0" encoding="utf-8"?>
<ru.cyberity.cbr.core.widget.CBRBackgroundConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/cbr_guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_begin="@dimen/cbr_margin_medium"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/cbr_guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_end="@dimen/cbr_margin_medium"/>
    <ru.cyberity.cbr.core.widget.CBRToolbarView
        android:id="@+id/cbr_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/cbr_margin_medium"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toTopOf="@+id/cbr_footer"
        app:layout_constraintEnd_toEndOf="@+id/cbr_guideline_end"
        app:layout_constraintStart_toStartOf="@+id/cbr_guideline_start"
        app:layout_constraintTop_toBottomOf="@+id/cbr_toolbar">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:paddingBottom="@dimen/cbr_margin_medium"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true">
            <ru.cyberity.cbr.core.widget.CBRH2TextView
                android:id="@+id/cbr_country_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <ru.cyberity.cbr.core.widget.CBRCountrySelectorView
                android:id="@+id/cbr_country_selector"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/cbr_margin_medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cbr_country_title"/>
            <ru.cyberity.cbr.core.widget.CBRH2TextView
                android:id="@+id/cbr_documents_title"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/cbr_margin_medium_small"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cbr_country_selector"/>
            <ru.cyberity.cbr.core.widget.CBRSubtitle2TextView
                android:id="@+id/cbr_documents_empty"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/cbr_margin_small"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cbr_documents_title"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/cbr_list"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/cbr_margin_medium"
                android:divider="@drawable/cbr_items_divider_medium"
                android:animateLayoutChanges="true"
                android:showDividers="middle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cbr_documents_empty"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <ru.cyberity.cbr.core.widget.CBRCaptionTextView
        android:gravity="center"
        android:id="@+id/cbr_footer"
        android:padding="@dimen/cbr_margin_medium"
        android:visibility="gone"
        android:scrollbars="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/cbr_margin_small"
        android:maxLines="@integer/cbr_footer_max_lines"
        app:layout_constraintBottom_toTopOf="@+id/cbr_powered"
        app:layout_constraintEnd_toEndOf="@+id/cbr_guideline_end"
        app:layout_constraintStart_toStartOf="@+id/cbr_guideline_start"/>
    <include
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/cbr_margin_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/cbr_guideline_end"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/cbr_guideline_start"
        layout="@layout/cbr_layout_powered"/>
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/cbr_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</ru.cyberity.cbr.core.widget.CBRBackgroundConstraintLayout>
