<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/beduin_tabs_screen_root"
    android:background="?attr/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        layout="@layout/edge_to_edge_fake_status_bar"/>
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/beduin_toolbar"
        android:layout_width="0dp"
        android:layout_height="?android:attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edge_to_edge_fake_status_bar"
        app:titleTextAppearance="?attr/textH5">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_gravity="end"
            android:id="@+id/beduin_navigation_bar_right_list"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:layout_marginEnd="12dp"
            android:nestedScrollingEnabled="false"/>
    </com.google.android.material.appbar.MaterialToolbar>
    <FrameLayout
        android:id="@+id/tabs_container"
        android:paddingTop="4dp"
        android:paddingBottom="12dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/pager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/beduin_toolbar"/>
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tabs_container"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/beduin_content_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="tabs_container,pager"/>
    <FrameLayout
        android:id="@+id/beduin_overlay_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingHorizontal="?attr/horizontalOffset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/beduin_toolbar"/>
</androidx.constraintlayout.widget.ConstraintLayout>
