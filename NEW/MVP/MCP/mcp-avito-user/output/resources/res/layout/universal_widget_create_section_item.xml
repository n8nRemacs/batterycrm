<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/extended_profile_universal_widget_create_section_item_root"
    android:background="@drawable/bg_universal_widget_section"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="?attr/textH50"
        android:ellipsize="end"
        android:id="@+id/extended_profile_universal_widget_create_section_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:maxLines="1"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <FrameLayout
        android:id="@+id/extended_profile_universal_widget_create_section_preview_frame_container"
        android:background="@drawable/bg_universal_widget_section_preview"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="w,185:157"
        app:layout_constraintTop_toBottomOf="@+id/extended_profile_universal_widget_create_section_title">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/extended_profile_universal_widget_create_section_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:actualImageScaleType="centerInside"
            app:placeholderImage="?attr/gray8"
            app:progressBarImage="?attr/gray8"/>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
