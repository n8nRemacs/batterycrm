<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/payment_history_details_advert_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/advert_title_and_price_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textAppearance="?attr/textHeadingSmall"
                        android:ellipsize="end"
                        android:id="@+id/advert_title_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        app:fontFamily="?attr/fontHeavy"/>
                    <TextView
                        android:textAppearance="?attr/textHeadingSmall"
                        android:ellipsize="none"
                        android:id="@+id/advert_dot_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Â· "
                        android:singleLine="true"
                        app:fontFamily="?attr/fontHeavy"/>
                    <TextView
                        android:textAppearance="?attr/textHeadingSmall"
                        android:ellipsize="none"
                        android:id="@+id/advert_amount_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        app:fontFamily="?attr/fontHeavy"/>
                </LinearLayout>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>
                <TextView
                    android:textAppearance="?attr/textBodySmall"
                    android:textColor="?attr/gray48"
                    android:id="@+id/advert_id_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/advert_image_view"
            android:layout_width="@dimen/payment_advert_thumbnail_width"
            android:layout_height="@dimen/payment_advert_thumbnail_height"
            app:failureImage="@drawable/placeholders_img_explore_card_no_image_normal"
            app:failureImageScaleType="fitCenter"
            app:overlayImage="@drawable/image_foreground_cornered"
            app:placeholderImage="@drawable/placeholders_img_explore_card_no_image_normal"
            app:placeholderImageScaleType="fitCenter"
            app:roundedCornerRadius="3dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:textAppearance="?attr/textBody"
                android:textColor="?attr/gray48"
                android:layout_gravity="start|top"
                android:id="@+id/advert_services_title_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="5dp"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:textAppearance="?attr/textBody"
                android:textColor="@color/design_text_color_black_selector"
                android:layout_gravity="start|center_vertical"
                android:id="@+id/advert_services_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="16dp"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
