<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/no_cameras_available_placeholder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true">
    <TextView
        android:textStyle="bold"
        android:gravity="center"
        android:id="@+id/camera_not_found"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:maxWidth="@dimen/photo_picker_placeholder_text_max_width"
        android:text="@string/camera_is_not_found"
        android:textFontWeight="800"
        style="?attr/textH25"/>
    <TextView
        android:gravity="center"
        android:id="@+id/couldnt_find_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:maxWidth="@dimen/photo_picker_placeholder_text_max_width"
        android:text="@string/could_not_find_camera"
        style="?attr/textM10"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/go_to_gallery_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/go_to_gallery"
        style="?attr/buttonPrimaryLarge"/>
</LinearLayout>
