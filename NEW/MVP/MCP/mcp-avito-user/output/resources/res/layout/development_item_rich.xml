<?xml version="1.0" encoding="utf-8"?>
<com.avito.android.lib.util.layout.ForegroundRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/advert_content"
    android:tag="rich_snippet"
    android:paddingTop="@dimen/rich_snippet_padding_top"
    android:paddingBottom="14dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="@drawable/rich_item_fg">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/gallery"
        android:paddingLeft="@dimen/rich_snippet_padding_left"
        android:paddingRight="@dimen/rich_snippet_padding_right"
        android:clipToPadding="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:overScrollMode="never"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/actions_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginRight="18dp"
        android:layout_below="@+id/gallery"
        android:layout_alignParentRight="true">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/btn_call"
                android:background="@drawable/bg_btn_circle_gray_rich"
                android:visibility="gone"
                android:layout_width="36dp"
                android:layout_height="36dp"
                app:srcCompat="@drawable/call"/>
            <com.avito.android.lib.deprecated_design.circular_progress.CircularProgressBar
                android:layout_gravity="center"
                android:id="@+id/phone_loader"
                android:background="?attr/white"
                android:visibility="visible"
                android:clickable="true"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:cpb_color="?attr/black"
                style="@style/Widget.Avito.CircularProgressBar.Dark"/>
        </FrameLayout>
        <ImageButton
            android:id="@+id/btn_write"
            android:background="@drawable/bg_btn_circle_gray_rich"
            android:visibility="gone"
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:srcCompat="@drawable/message"/>
        <com.google.android.material.internal.CheckableImageButton
            android:layout_gravity="center"
            android:id="@+id/btn_favorite"
            android:background="@drawable/bg_btn_circle_gray_rich"
            android:visibility="gone"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/advert_item_rich_favorite_red"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/advert_info_container"
        android:paddingLeft="@dimen/rich_snippet_padding_left"
        android:paddingRight="@dimen/rich_snippet_padding_right"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gallery">
        <androidx.appcompat.widget.AppCompatTextView
            android:textAppearance="?attr/textH3"
            android:gravity="center_vertical"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginRight="48dp"
            android:drawablePadding="7dp"/>
        <TextView
            android:id="@+id/price_without_discount"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="42dp"
            style="@style/Widget.Avito.TextView.Serp.Item.Caption.Rich.Subtitle.Secondary"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:gravity="center_vertical"
            android:id="@+id/discount"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.Avito.TextView.Serp.Item.Caption.Discount.Rich"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:textAppearance="?attr/textM2"
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="48dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/additional_name"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            style="@style/Widget.Avito.TextView.Serp.Item.Caption.Rich.Subtitle"/>
        <ru.avito.component.snippet_badge_bar.SnippetBadgeBar
            android:id="@+id/badge_bar"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_marginEnd="48dp"
            app:snippetBadgeBar_maxLines="2"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:textAppearance="?attr/textM2"
            android:id="@+id/specification"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="48dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/verification"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="4dp"
            style="@style/Widget.Avito.TextView.Serp.Item.Caption.Rich.Subtitle"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/metro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="42dp"/>
        <include
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="42dp"
            layout="@layout/advert_item_geo_reference_layout"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:textAppearance="?attr/textM2"
            android:id="@+id/seller"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="48dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/address"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="42dp"
            style="@style/Widget.Avito.TextView.Serp.Item.Caption.Rich.Subtitle.Secondary"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/delivery_terms"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            style="@style/Widget.Avito.TextView.Serp.Item.Caption.Secondary"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/date"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="42dp"
            style="@style/Widget.Avito.TextView.Serp.Item.Caption.Rich.Subtitle.Secondary"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:textColor="@color/params_link"
            android:id="@+id/additional_action"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:focusable="true"
            android:visibility="gone"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="42dp"
            style="@style/Widget.Avito.TextView.Serp.Item.Caption.Rich.Subtitle"/>
        <RelativeLayout
            android:id="@+id/developer_profile"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/developer_texts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/developer_image_layout"
                android:layout_alignParentStart="true">
                <androidx.appcompat.widget.AppCompatTextView
                    android:textAppearance="?attr/textM20"
                    android:textSize="15sp"
                    android:textColor="?attr/black"
                    android:id="@+id/developer_title"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="2dp"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:textAppearance="?attr/textM20"
                    android:textSize="15sp"
                    android:textColor="?attr/gray54"
                    android:id="@+id/developer_subtitle"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <FrameLayout
                android:id="@+id/developer_image_layout"
                android:background="@drawable/development_logo_background"
                android:visibility="gone"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true">
                <com.avito.android.fresco.SimpleDraweeView
                    android:layout_gravity="center"
                    android:id="@+id/developer_image"
                    android:layout_width="52dp"
                    android:layout_height="40dp"
                    app:actualImageScaleType="fitCenter"/>
            </FrameLayout>
        </RelativeLayout>
    </LinearLayout>
</com.avito.android.lib.util.layout.ForegroundRelativeLayout>
