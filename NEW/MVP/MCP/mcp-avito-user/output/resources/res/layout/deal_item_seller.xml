<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/seller_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="18dp"
    android:layout_marginBottom="6dp"
    android:foreground="@drawable/deal_item_fg">
    <FrameLayout
        android:id="@+id/gallery_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">
        <androidx.recyclerview.widget.RecyclerView
            android:orientation="horizontal"
            android:id="@+id/gallery"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="@dimen/seller_item_gallery_high"
            android:layout_marginBottom="6dp"
            android:overScrollMode="never"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
        <com.avito.android.lib.design.docking_badge.DockingBadge
            android:layout_gravity="start|bottom"
            android:id="@+id/average_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/seller_item_average_price"
            android:layout_marginStart="16dp"
            app:dockingBadge_end="?attr/dockingBadgeEdgeFlagMedium"
            app:dockingBadge_start="?attr/dockingBadgeEdgeFlagMedium"
            style="?attr/dockingBadgeGreenMedium"/>
    </FrameLayout>
    <TextView
        android:textAppearance="?attr/textH30"
        android:id="@+id/seller_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/seller_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/seller_item_geo_references"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginHorizontal="16dp"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/seller_item_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"/>
</LinearLayout>
