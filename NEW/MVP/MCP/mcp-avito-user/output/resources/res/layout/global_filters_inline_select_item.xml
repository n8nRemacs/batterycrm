<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/filters_inline_select_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/filter_item_horizontal_padding">
        <TextView
            android:textAppearance="?attr/textH50"
            android:textColor="@color/text_primary_disabled"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.avito.android.lib.design.badge.Badge
            android:layout_gravity="center"
            android:id="@+id/badge_new"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_badge"
            android:layout_marginStart="@dimen/filter_item_badge_new_start_margin"
            android:paddingHorizontal="@dimen/filter_item_badge_new_horizontal_padding"
            style="?attr/badgeTextBlackS"/>
    </LinearLayout>
    <com.avito.android.search.filter.adapter.inline_select.InlineSelectView
        android:id="@+id/select_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"/>
</LinearLayout>
