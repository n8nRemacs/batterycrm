<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="?attr/textH25"
        android:id="@+id/parking_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/content_horizontal_padding"/>
    <com.avito.android.lib.design.chips.Chips
        android:id="@+id/parking_chips_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="6dp"
        android:layout_marginHorizontal="16dp"
        app:chips_displayType="multipleLines"
        app:chips_keepLastSelected="true"
        style="?attr/chipsSmall"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/parking_geo_ref_container"
        android:focusable="true"
        android:focusableInTouchMode="false"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="16dp"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/parking_address"
        android:background="@drawable/bg_rds_gray_button"
        android:paddingTop="4dp"
        android:paddingBottom="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/rds_content_horizontal_padding_left"
        android:paddingHorizontal="4dp"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:textColor="?attr/blue"
        android:id="@+id/show_on_map_parking_text"
        android:background="@drawable/bg_rds_gray_button"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/advert_details_show_on_map_item"
        android:layout_marginHorizontal="@dimen/rds_content_horizontal_padding_left"
        android:paddingHorizontal="4dp"/>
</LinearLayout>
