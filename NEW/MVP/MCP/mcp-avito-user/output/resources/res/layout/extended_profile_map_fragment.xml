<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/extended_profile_map_screen_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.avito.android.avito_map.AvitoMapView
        android:id="@+id/extended_profile_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_gravity="end|top"
        android:id="@+id/extended_profile_map_close_button"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginTop="@dimen/extended_profile_map_horizontal_margin"
        android:src="?attr/ic_close20"
        android:tint="?attr/black"
        android:layout_marginEnd="@dimen/extended_profile_map_horizontal_margin"
        app:backgroundTint="?attr/white"
        app:fabCustomSize="44dp"/>
    <FrameLayout
        android:id="@+id/extended_profile_map_toast_anchor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"/>
</FrameLayout>
