<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.avito.android.lib.design.switcher.Switcher
        android:id="@+id/day_switcher"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="?attr/switcherDefaultMedium"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/day_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/day_switcher"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.avito.android.lib.design.input.Input
        android:gravity="center"
        android:id="@+id/day_start_time"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        app:input_componentType="select"
        app:input_formatterType="not_editable"
        app:input_prefix="с"
        app:input_prefixPaddingRight="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/day_end_time"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@+id/day_title"
        app:layout_constraintTop_toTopOf="parent"
        style="?attr/inputDefaultS"/>
    <com.avito.android.lib.design.input.Input
        android:gravity="center"
        android:id="@+id/day_end_time"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        app:input_componentType="select"
        app:input_formatterType="not_editable"
        app:input_prefix="до"
        app:input_prefixPaddingRight="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="?attr/inputDefaultS"/>
</androidx.constraintlayout.widget.ConstraintLayout>
