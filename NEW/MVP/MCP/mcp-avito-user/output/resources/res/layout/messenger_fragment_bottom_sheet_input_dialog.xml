<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="vertical"
    android:id="@+id/messenger_bottom_sheet_input_content"
    android:paddingBottom="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="24dp">
    <TextView
        android:textAppearance="?attr/textM2"
        android:ellipsize="end"
        android:id="@+id/messenger_bottom_sheet_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:maxLines="3"/>
    <com.avito.android.lib.design.input.Input
        android:id="@+id/messenger_bottom_sheet_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        style="?attr/inputDefaultL"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/messenger_bottom_sheet_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        style="?attr/buttonPrimaryLarge"/>
</LinearLayout>
