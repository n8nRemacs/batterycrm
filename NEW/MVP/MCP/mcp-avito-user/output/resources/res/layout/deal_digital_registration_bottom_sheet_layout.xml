<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="24dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="?attr/textH30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/recall_dialog_title"
        android:layout_marginHorizontal="16dp"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/recall_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/client_room_digital_registration_dialog_description"
        android:layout_marginHorizontal="16dp"/>
    <com.avito.android.lib.design.input.Input
        android:id="@+id/phone_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="@string/client_room_digital_registration_input_phone_hint"
        android:inputType="number"
        android:layout_marginHorizontal="16dp"
        app:input_clearButton="true"
        app:input_clearButtonUnfocused="true"
        app:input_formatterType="mobile_phone"
        app:input_iconRightColor="?attr/black"
        style="?attr/inputDefaultMedium"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/submit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/recall_dialog_button_title"
        android:layout_marginHorizontal="16dp"
        style="?attr/buttonPrimaryLarge"/>
    <TextView
        android:textAppearance="?attr/textS10"
        android:textColor="?attr/gray48"
        android:textColorHighlight="?attr/gray48"
        android:textColorHint="?attr/gray48"
        android:textColorLink="?attr/gray48"
        android:id="@+id/text_disclaimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="16dp"/>
</LinearLayout>
