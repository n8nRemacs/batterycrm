<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginHorizontal="16dp">
    <TextView
        android:textAppearance="?attr/textH60"
        android:id="@+id/date_time_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/date_select"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginBottom="0dp"/>
    <com.avito.android.lib.design.select.BaseSelect
        android:id="@+id/date_select"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/stages_transition_dialog_date_hint"
        android:singleLine="true"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/time_select"
        app:layout_constraintStart_toStartOf="parent"
        style="?attr/baseSelectDefaultM"/>
    <com.avito.android.lib.design.select.BaseSelect
        android:id="@+id/time_select"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/stages_transition_dialog_time_hint"
        android:singleLine="true"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/date_select"
        style="?attr/baseSelectDefaultM"/>
</androidx.constraintlayout.widget.ConstraintLayout>
