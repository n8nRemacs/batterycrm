<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/suggest_item_content"
    android:background="@drawable/bg_btn_flat_gray"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="10dp">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/suggest_item_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="11dp"
        app:actualImageScaleType="centerCrop"
        app:backgroundImage="?attr/gray8"
        app:placeholderImage="?attr/gray8"
        app:placeholderImageScaleType="center"
        app:roundAsCircle="true"/>
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="13dp">
        <TextView
            android:textAppearance="?attr/textH50"
            android:ellipsize="end"
            android:id="@+id/suggest_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"/>
        <TextView
            android:textAppearance="?attr/textS20"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:id="@+id/suggest_item_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:maxLines="1"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/suggest_item_arrow"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="21dp"
        android:layout_marginBottom="21dp"
        android:layout_marginStart="11dp"
        app:actualImageScaleType="centerCrop"
        app:placeholderImageScaleType="center"
        app:roundAsCircle="true"/>
</LinearLayout>
