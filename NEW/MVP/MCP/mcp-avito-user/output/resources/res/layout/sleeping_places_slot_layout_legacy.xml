<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/sleeping_places_content_legacy"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/publish_container_horizontal_padding"
    android:paddingVertical="@dimen/publish_container_vertical_padding">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textAppearance="?attr/textHeadingSmall"
            android:id="@+id/title_legacy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <com.avito.android.lib.design.badge.Badge
            android:id="@+id/badge_legacy"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sleeping_places_is_new_badge"
            android:layout_marginStart="6dp"
            style="?attr/badgeNumberMedium"/>
    </LinearLayout>
    <TextView
        android:textAppearance="?attr/textBody"
        android:id="@+id/subtitle_legacy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/bed_types_legacy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:divider="@drawable/divider_12_0"
        android:showDividers="middle"/>
    <TextView
        android:textAppearance="?attr/textBody"
        android:textColor="?attr/blue600"
        android:id="@+id/add_bed_type_legacy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"/>
</LinearLayout>
