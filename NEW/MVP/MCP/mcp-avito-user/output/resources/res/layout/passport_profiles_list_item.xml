<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/passport_profile_list_item_root"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp"
    android:paddingVertical="11dp">
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_gravity="top"
        android:id="@+id/passport_profile_list_item_avatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:roundAsCircle="true"/>
    <ImageView
        android:id="@+id/passport_profile_list_item_pending"
        android:background="@drawable/passport_profiles_status_background"
        android:visibility="gone"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="?attr/ic_time16"
        android:translationY="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/passport_profile_list_item_avatar"
        app:layout_constraintEnd_toEndOf="@+id/passport_profile_list_item_avatar"
        app:tint="?attr/black"/>
    <ImageView
        android:id="@+id/passport_profile_list_item_error"
        android:background="@drawable/passport_profiles_status_background"
        android:visibility="gone"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="?attr/ic_attentionRound16"
        android:translationY="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/passport_profile_list_item_avatar"
        app:layout_constraintEnd_toEndOf="@+id/passport_profile_list_item_avatar"
        app:tint="?attr/red"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/passport_profile_list_item_texts_container"
        android:paddingBottom="1dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/passport_profile_list_item_current_check"
        app:layout_constraintStart_toEndOf="@+id/passport_profile_list_item_avatar"
        app:layout_constraintTop_toTopOf="@+id/passport_profile_list_item_avatar">
        <TextView
            android:textAppearance="?attr/textH50"
            android:ellipsize="end"
            android:id="@+id/passport_profile_list_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"/>
        <TextView
            android:textAppearance="?attr/textS20"
            android:ellipsize="end"
            android:id="@+id/passport_profile_list_item_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:lines="1"/>
        <TextView
            android:textAppearance="?attr/textS20"
            android:textColor="?attr/gray54"
            android:ellipsize="end"
            android:id="@+id/passport_profile_list_item_status"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:lines="1"/>
    </LinearLayout>
    <com.avito.android.lib.design.badge.Badge
        android:id="@+id/passport_profile_employee_badge"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/passport_employee_profile_type_badge_text"
        android:translationY="4dp"
        android:paddingHorizontal="6dp"
        app:badge_showAnimation_duration="0"
        app:layout_constraintBottom_toBottomOf="@+id/passport_profile_list_item_avatar"
        app:layout_constraintEnd_toEndOf="@+id/passport_profile_list_item_avatar"
        app:layout_constraintStart_toStartOf="@+id/passport_profile_list_item_avatar"
        style="?attr/badgeTextBlackXS"/>
    <com.avito.android.lib.design.toggle.Checkmark
        android:id="@+id/passport_profile_list_item_current_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/passport_profile_list_item_avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/passport_profile_list_item_avatar"/>
</androidx.constraintlayout.widget.ConstraintLayout>
