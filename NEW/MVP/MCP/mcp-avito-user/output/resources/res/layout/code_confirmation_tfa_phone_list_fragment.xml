<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tfa_phone_list_root_view"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:defaultFocusHighlightEnabled="false">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.avito.android.lib.design.nav_bar.NavBar
            android:id="@+id/tfa_phone_list_navbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:navBar_contentColor="?attr/black"/>
        <TextView
            android:textAppearance="?attr/textH20"
            android:id="@+id/tfa_phone_list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/antihack_phone_list_title"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="4dp"/>
        <TextView
            android:textAppearance="?attr/textM10"
            android:textColor="@color/design_text_color_black_selector"
            android:id="@+id/tfa_phone_list_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/tfa_phone_list_description_login_tfa"
            android:layout_marginHorizontal="16dp"/>
        <com.avito.android.lib.design.input.Input
            android:id="@+id/tfa_phone_list_search_input"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="@string/antihack_phone_list_search_hint"
            android:inputType="number"
            android:layout_marginHorizontal="16dp"
            style="?attr/inputSearch"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tfa_phone_list_recycler"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>
    <com.avito.android.lib.design.spinner.overlay.SpinnerOverlay
        android:id="@+id/tfa_phone_list_progress"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"/>
</FrameLayout>
