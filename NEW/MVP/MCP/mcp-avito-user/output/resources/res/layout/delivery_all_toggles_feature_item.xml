<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp">
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_gravity="start|center_vertical"
        android:id="@+id/all_toggles_features_item_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:actualImageScaleType="centerCrop"
        app:backgroundImage="?attr/constantWarmGray1"
        app:placeholderImage="?attr/constantWarmGray1"
        app:placeholderImageScaleType="center"
        app:roundedCornerRadius="8dp"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:layout_gravity="start"
        android:id="@+id/all_toggles_features_item_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:layout_marginStart="50dp"/>
</FrameLayout>
