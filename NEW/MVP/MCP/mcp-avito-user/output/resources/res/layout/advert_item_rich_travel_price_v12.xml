<?xml version="1.0" encoding="utf-8"?>
<com.avito.android.lib.util.layout.ForegroundRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="vertical"
    android:id="@+id/advert_content"
    android:tag="rich_snippet"
    android:paddingBottom="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="@drawable/rich_item_fg">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/gallery"
        android:clipToPadding="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:overScrollMode="never"
        android:paddingHorizontal="@dimen/rich_snippet_padding_left"
        android:paddingVertical="6dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/actions_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:layout_below="@+id/gallery"
        android:layout_alignParentRight="true">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/btn_call"
                android:background="@drawable/bg_btn_circle_gray_rich"
                android:visibility="gone"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/call"/>
            <com.avito.android.lib.deprecated_design.circular_progress.CircularProgressBar
                android:layout_gravity="center"
                android:id="@+id/phone_loader"
                android:background="?attr/white"
                android:visibility="visible"
                android:clickable="true"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:cpb_color="?attr/black"
                style="@style/Widget.Avito.CircularProgressBar.Dark"/>
        </FrameLayout>
        <ImageButton
            android:id="@+id/btn_write"
            android:background="@drawable/bg_btn_circle_gray_rich"
            android:visibility="gone"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/message"/>
        <com.google.android.material.internal.CheckableImageButton
            android:id="@+id/btn_favorite"
            android:background="@drawable/bg_btn_circle_gray_rich"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/advert_item_rich_favorite_str_redesign"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/advert_info_container"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/actions_container"
        android:layout_below="@+id/gallery"
        android:paddingStart="@dimen/rich_snippet_padding_right">
        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            app:alignContent="flex_start"
            app:alignItems="flex_start"
            app:flexDirection="row"
            app:flexWrap="wrap"
            app:justifyContent="flex_start"
            app:showDivider="none">
            <TextView
                android:textAppearance="?attr/textH25"
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="7dp"/>
            <ImageView
                android:id="@+id/discount_icon"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:contentDescription="@null"
                android:layout_marginStart="4dp"
                app:layout_alignSelf="flex_end"/>
            <com.avito.android.lib.design.strikethrough.StrikethroughTextView
                android:textAppearance="?attr/textM20"
                android:id="@+id/discount"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                app:layout_alignSelf="baseline"
                app:strikethrough_show="true"
                app:strikethrough_textStyle="?attr/textM20"
                app:strikethrough_tint="?attr/red600"/>
            <com.avito.android.lib.design.badge.Badge
                android:textAppearance="?attr/textS20"
                android:id="@+id/discount_percentage_badge"
                android:paddingTop="0dp"
                android:paddingBottom="1dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:minHeight="17dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:layout_marginStart="5dp"
                app:badge_cornerSize="6dp"
                app:layout_alignSelf="flex_end"
                style="?attr/badgeTextRedS"/>
        </com.google.android.flexbox.FlexboxLayout>
        <TextView
            android:textAppearance="?attr/textM20"
            android:id="@+id/price_subtitle"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <include
            android:id="@+id/travel_installments_container"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            layout="@layout/travel_installments_container"/>
        <TextView
            android:textAppearance="?attr/textM20"
            android:id="@+id/date_range"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <include
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-1dp"
            layout="@layout/advert_item_buyer_bonuses_layout_str_redesign"/>
        <include
            android:id="@+id/hotel_rating_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/advert_item_hotel_rating_layout"/>
        <TextView
            android:textAppearance="?attr/textM20"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <include
            android:id="@+id/short_term_rent_rating_and_reviews"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            layout="@layout/advert_item_short_term_rent_rating_reviews_layout"/>
        <ru.avito.component.snippet_badge_bar.SnippetBadgeBar
            android:id="@+id/badge_bar"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"/>
        <include
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/advert_item_geo_reference_layout_str_redesign"/>
    </LinearLayout>
</com.avito.android.lib.util.layout.ForegroundRelativeLayout>
