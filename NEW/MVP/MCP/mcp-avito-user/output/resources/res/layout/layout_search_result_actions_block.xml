<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/actions_block"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:maxHeight="44dp"
    android:minHeight="44dp"
    android:paddingHorizontal="16dp">
    <androidx.appcompat.widget.AppCompatTextView
        android:textAppearance="?attr/textS10"
        android:gravity="center_vertical"
        android:id="@+id/sorting_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="2dp"
        android:drawableTint="?attr/black"
        app:drawableStartCompat="@drawable/sort_16"/>
    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:textAppearance="?attr/textS10"
        android:gravity="center_vertical"
        android:id="@+id/client_mode_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/developments_agency_search_client_mode_action_title"
        android:paddingHorizontal="8dp"
        android:paddingVertical="2dp"/>
    <com.avito.android.lib.design.switcher.Switcher
        android:layout_gravity="center"
        android:id="@+id/client_mode_switcher"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?attr/switcherDefaultSmall"/>
</LinearLayout>
