<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/snippet_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="null"
        app:actualImageScaleType="centerCrop"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="6dp"
        app:layout_constraintEnd_toEndOf="@+id/snippet_image"
        app:layout_constraintStart_toStartOf="@+id/snippet_image"
        app:layout_constraintTop_toBottomOf="@+id/snippet_image"
        style="?attr/textM20"/>
    <TextView
        android:textStyle="bold"
        android:ellipsize="end"
        android:id="@+id/price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:maxLines="1"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="@+id/title"
        app:layout_constraintStart_toStartOf="@+id/title"
        app:layout_constraintTop_toBottomOf="@+id/title"
        style="?attr/textH50"/>
    <com.avito.android.lib.design.strikethrough.StrikethroughTextView
        android:textAppearance="?attr/textS10"
        android:ellipsize="end"
        android:id="@+id/old_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="@+id/price"
        app:layout_constraintStart_toStartOf="@+id/price"
        app:layout_constraintTop_toBottomOf="@+id/price"
        app:strikethrough_show="true"
        app:strikethrough_tint="?attr/red600"
        style="?attr/textM20"/>
    <TextView
        android:ellipsize="end"
        android:id="@+id/additional_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="@+id/price"
        app:layout_constraintStart_toStartOf="@+id/price"
        app:layout_constraintTop_toBottomOf="@+id/old_price"
        style="?attr/textS10"/>
</androidx.constraintlayout.widget.ConstraintLayout>
