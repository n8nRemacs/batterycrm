<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/radio_group_option"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/hotel_booking_form_horizontal_margin"
    android:paddingVertical="5dp">
    <ImageView
        android:id="@+id/icon"
        android:background="@drawable/bg_image_placeholder"
        android:padding="12dp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="13dp"
        android:backgroundTint="?attr/warmGray4"/>
    <LinearLayout
        android:orientation="vertical"
        android:paddingBottom="2dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"/>
    </LinearLayout>
    <com.avito.android.lib.design.toggle.Checkmark
        android:layout_gravity="center"
        android:id="@+id/checkmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        style="?attr/toggleCheckmarkDefaultMediumProminent"/>
</LinearLayout>
