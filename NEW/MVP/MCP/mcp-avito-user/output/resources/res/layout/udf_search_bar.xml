<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/udf_search_bar"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar_container"
        android:background="?attr/white"
        android:paddingTop="12dp"
        android:paddingBottom="@dimen/redesign_23_search_view_padding_bottom_visible_inlines"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="62dp">
        <com.avito.android.lib.design.input.Input
            android:textColorHint="?attr/gray54"
            android:id="@+id/input_field_view"
            android:focusable="false"
            android:visibility="gone"
            android:clickable="false"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="52dp"
            android:imeOptions="flagNoExtractUi|actionSearch"
            android:layout_marginStart="@dimen/redesign_search_toolbar_common_horizontal_margin"
            android:layout_marginEnd="0dp"
            app:input_backgroundColor="@color/bg_redesign_input_normal"
            app:input_componentType="select"
            app:input_cornerRadius="@dimen/input_corner_radius"
            app:input_iconLeftContainerHeight="@dimen/search_toolbar_input_left_icon_height"
            app:input_iconRightContainerWidth="42dp"
            app:input_textVerticalOffset="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/cart_icon_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="?attr/input"/>
        <FrameLayout
            android:id="@+id/filter_container"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="11dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/input_field_view"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/filter_icon"
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="8dp"
                android:paddingVertical="10dp"
                app:srcCompat="@drawable/ic_new_redesign_filter"
                app:tint="?attr/black"/>
            <TextView
                android:layout_gravity="end|top"
                android:id="@+id/filters_badge_counter"
                android:background="@drawable/new_redesign_badge"
                android:visibility="invisible"
                android:clickable="false"
                android:layout_width="@dimen/search_toolbar_filters_badge_size"
                android:layout_height="@dimen/search_toolbar_filters_badge_size"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="5dp"
                style="@style/Widget.Avito.TextView.Caption.Counter.Badged"/>
        </FrameLayout>
        <include
            android:id="@+id/cart_icon_container"
            android:visibility="gone"
            android:clipToPadding="false"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            layout="@layout/redesign_cart_icon_view"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</merge>
