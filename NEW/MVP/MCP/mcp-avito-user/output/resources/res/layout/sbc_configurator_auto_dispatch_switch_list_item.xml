<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:gravity="top"
    android:orientation="horizontal"
    android:id="@+id/sbc_configurator_auto_dispatch_switch_list_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginEnd="12dp">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp">
            <TextView
                android:textAppearance="?attr/textH50"
                android:textColor="?attr/black"
                android:id="@+id/sbc_configurator_auto_dispatch_switch_list_item_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/sbc_auto_dispatch_title"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/sbc_configurator_auto_dispatch_switch_question_mark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                app:layout_constraintBottom_toBottomOf="@+id/sbc_configurator_auto_dispatch_switch_list_item_title"
                app:layout_constraintStart_toEndOf="@+id/sbc_configurator_auto_dispatch_switch_list_item_title"
                app:layout_constraintTop_toTopOf="@+id/sbc_configurator_auto_dispatch_switch_list_item_title"
                app:srcCompat="@drawable/sbc_configurator_question_mark"/>
        </LinearLayout>
        <TextView
            android:textAppearance="?attr/textS20"
            android:textColor="?attr/gray54"
            android:id="@+id/sbc_configurator_auto_dispatch_switch_list_item_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/sbc_configurator_auto_dispatch_switcher_overlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.avito.android.lib.design.switcher.Switcher
            android:id="@+id/sbc_configurator_auto_dispatch_switcher"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?attr/switcherDefaultMedium"/>
    </FrameLayout>
</LinearLayout>
