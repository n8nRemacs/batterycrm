<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="bottom"
    android:id="@+id/str_booking_footer"
    android:paddingTop="40dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.avito.android.lib.design.banner.Banner
        android:layout_gravity="center"
        android:id="@+id/str_booking_payment_block"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:banner_content="@layout/str_booking_payment_content"
        app:banner_contentPaddingBottom="0dp"
        app:banner_contentPaddingLeft="0dp"
        app:banner_contentPaddingRight="0dp"
        app:banner_contentPaddingTop="0dp"
        app:banner_shadowEnabled="true"
        style="?attr/bannerWhite"/>
</FrameLayout>
