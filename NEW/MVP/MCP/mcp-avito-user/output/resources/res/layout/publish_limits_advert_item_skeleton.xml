<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/shimmer_image"
        android:background="@drawable/design_shimmer_drawable_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H,4:3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.3"/>
    <View
        android:id="@+id/shimmer_text1"
        android:background="@drawable/design_shimmer_textview_bg"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_marginTop="6dp"
        android:layout_marginStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/shimmer_image"
        app:layout_constraintTop_toTopOf="@+id/shimmer_image"/>
    <View
        android:id="@+id/shimmer_text2"
        android:background="@drawable/design_shimmer_textview_bg"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/shimmer_text1"
        app:layout_constraintTop_toBottomOf="@+id/shimmer_text1"/>
    <View
        android:id="@+id/shimmer_text3"
        android:background="@drawable/design_shimmer_textview_bg"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/shimmer_text2"
        app:layout_constraintTop_toBottomOf="@+id/shimmer_text2"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.35"/>
</androidx.constraintlayout.widget.ConstraintLayout>
