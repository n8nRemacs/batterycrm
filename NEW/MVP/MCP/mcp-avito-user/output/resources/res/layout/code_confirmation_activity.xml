<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/code_confirmation_screen_root"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:descendantFocusability="beforeDescendants"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:defaultFocusHighlightEnabled="false">
    <com.avito.android.lib.design.nav_bar.NavBar
        android:id="@+id/code_confirmation_navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navBar_contentColor="?attr/black"/>
    <FrameLayout
        android:id="@+id/code_confirmation_content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize">
        <ScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp">
                <TextView
                    android:textAppearance="?attr/textH20"
                    android:id="@+id/code_confirmation_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:textAppearance="?attr/textM10"
                    android:id="@+id/code_confirmation_subtitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/code_confirmation_title"/>
                <com.avito.android.lib.design.component_container.ComponentContainer
                    android:id="@+id/code_confirmation_cc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/code_confirmation_subtitle">
                    <com.avito.android.lib.design.input.Input
                        android:id="@+id/code_confirmation_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/code_input_hint"
                        android:inputType="number"
                        android:imeOptions="flagNoExtractUi|actionDone"
                        app:input_formatterType="numeric"
                        style="?attr/input"/>
                </com.avito.android.lib.design.component_container.ComponentContainer>
                <com.avito.android.lib.design.button.Button
                    android:id="@+id/code_confirmation_request_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="12dp"
                    android:text="@string/code_request_button_text"
                    app:layout_constraintBottom_toTopOf="@+id/code_confirmation_send_button"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/code_confirmation_cc"
                    app:layout_constraintVertical_bias="1"
                    style="?attr/buttonDefaultLarge"/>
                <com.avito.android.lib.design.button.Button
                    android:id="@+id/code_confirmation_send_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="@string/code_send_button_text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    style="?attr/buttonPrimaryLarge"/>
                <TextView
                    android:textAppearance="?attr/textXs10"
                    android:textColor="?attr/gray54"
                    android:id="@+id/code_confirmation_button_legal"
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
        <com.avito.android.lib.design.spinner.overlay.SpinnerOverlay
            android:id="@+id/code_confirmation_progress"
            android:paddingTop="?attr/actionBarSize"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
</FrameLayout>
