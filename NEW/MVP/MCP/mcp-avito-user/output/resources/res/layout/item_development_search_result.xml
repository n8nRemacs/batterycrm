<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_development_search_result"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="24dp">
    <androidx.recyclerview.widget.RecyclerView
        android:orientation="horizontal"
        android:id="@+id/carousel"
        android:layout_width="0dp"
        android:layout_height="176dp"
        android:layout_marginTop="6dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:textAppearance="?attr/textH25"
        android:id="@+id/development_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="@dimen/snippet_item_info_block_horizontal_margin"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toStartOf="@+id/options"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/carousel"/>
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/options"
        android:background="@drawable/bg_btn_circle_gray_rich"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="-8dp"
        android:tint="?attr/black"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/development_name"
        app:srcCompat="?attr/ic_more24"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:textAppearance="?attr/textL20"
        android:id="@+id/developer_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/snippet_item_info_block_horizontal_margin"
        android:layout_marginEnd="@dimen/snippet_item_info_block_horizontal_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/development_name"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/price_range"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="@dimen/snippet_item_info_block_horizontal_margin"
        android:layout_marginEnd="@dimen/snippet_item_info_block_horizontal_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/developer_name"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/agent_commission"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:maxLines="1"
        android:layout_marginStart="@dimen/snippet_item_info_block_horizontal_margin"
        android:layout_marginEnd="@dimen/snippet_item_info_block_horizontal_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/price_range"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/completion_quarter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:maxLines="1"
        android:layout_marginStart="@dimen/snippet_item_info_block_horizontal_margin"
        android:layout_marginEnd="@dimen/snippet_item_info_block_horizontal_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/agent_commission"/>
    <include
        android:id="@+id/metro_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/completion_quarter"
        layout="@layout/item_snippet_metro_info"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:maxLines="1"
        android:layout_marginStart="@dimen/snippet_item_info_block_horizontal_margin"
        android:layout_marginEnd="@dimen/snippet_item_info_block_horizontal_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/metro_info"/>
</androidx.constraintlayout.widget.ConstraintLayout>
