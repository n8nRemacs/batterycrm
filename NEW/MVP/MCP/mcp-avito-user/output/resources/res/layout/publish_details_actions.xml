<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="bottom|center_horizontal"
    android:orientation="vertical"
    android:id="@+id/buttons_layout"
    android:background="@drawable/bg_transparent_white_gradient"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <include layout="@layout/html_editor_panel"/>
    <include layout="@layout/publish_button"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/navigation_buttons_container"
        android:paddingLeft="@dimen/publish_container_horizontal_padding"
        android:paddingTop="16dp"
        android:paddingRight="@dimen/publish_container_horizontal_padding"
        android:paddingBottom="16dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
