<?xml version="1.0" encoding="utf-8"?>
<com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tariff_cpx_configure_levels_shimmer_layout"
    android:padding="16dp"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:shimmer_animationDuration="3000"
    app:shimmer_autostart="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/title_stub1"
            android:background="@drawable/shimmer_cpx_stub_text"
            android:layout_width="198dp"
            android:layout_height="20dp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <View
            android:id="@+id/title_stub2"
            android:background="@drawable/shimmer_cpx_stub_text"
            android:layout_width="156dp"
            android:layout_height="20dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_stub1"/>
        <View
            android:id="@+id/description_stub1"
            android:background="@drawable/shimmer_cpx_stub_description"
            android:layout_width="290dp"
            android:layout_height="10dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_stub2"/>
        <View
            android:id="@+id/description_stub2"
            android:background="@drawable/shimmer_cpx_stub_description"
            android:layout_width="340dp"
            android:layout_height="10dp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/description_stub1"/>
        <View
            android:id="@+id/description_stub3"
            android:background="@drawable/shimmer_cpx_stub_description"
            android:layout_width="116dp"
            android:layout_height="10dp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/description_stub2"/>
        <View
            android:id="@+id/block_stub1"
            android:background="@drawable/shimmer_cpx_stub_block"
            android:layout_width="288dp"
            android:layout_height="406dp"
            android:layout_marginTop="28dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/description_stub3"/>
        <View
            android:id="@+id/block_stub2"
            android:background="@drawable/shimmer_cpx_stub_block"
            android:layout_width="288dp"
            android:layout_height="406dp"
            android:layout_marginTop="28dp"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@+id/block_stub1"
            app:layout_constraintTop_toBottomOf="@+id/description_stub3"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout>
