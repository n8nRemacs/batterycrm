<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/item_profile_pro_employee_limit_card_root"
    android:background="@drawable/bg_profile_pro_employee_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp"
    android:paddingVertical="12dp">
    <TextView
        android:textAppearance="?attr/textS10"
        android:textColor="?attr/black"
        android:ellipsize="end"
        android:id="@+id/employee_limit_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"/>
    <TextView
        android:textAppearance="?attr/textH3"
        android:textColor="?attr/black"
        android:ellipsize="end"
        android:id="@+id/employee_limit_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:maxLines="1"/>
</LinearLayout>
