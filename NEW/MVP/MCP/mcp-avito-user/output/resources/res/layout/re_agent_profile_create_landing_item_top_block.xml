<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.avito.android.lib.design.animation.AnimationView
        android:id="@+id/re_agent_profile_create_landing_top_animation"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:scaleType="fitCenter"/>
    <TextView
        android:textAppearance="?attr/textH10"
        android:gravity="center"
        android:id="@+id/re_agent_profile_create_landing_top_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginHorizontal="16dp"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:gravity="center"
        android:id="@+id/re_agent_profile_create_landing_top_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        android:layout_marginHorizontal="16dp"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/re_agent_profile_create_landing_top_button"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginHorizontal="16dp"
        style="?attr/buttonPrimaryLarge"/>
</LinearLayout>
