<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/barcode_scanner_root"
    android:background="?attr/constantBlack"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/back_button"
        android:padding="12dp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/back_arrow_description"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back_24_white"/>
    <ImageView
        android:id="@+id/flash_button"
        android:padding="12dp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/flashlight_description"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?attr/constantWhite"/>
    <androidx.camera.view.PreviewView
        android:id="@+id/camera_preview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/confirm_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back_button"/>
    <ImageView
        android:id="@+id/image_preview"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="@+id/camera_preview"
        app:layout_constraintEnd_toEndOf="@+id/camera_preview"
        app:layout_constraintStart_toStartOf="@+id/camera_preview"
        app:layout_constraintTop_toBottomOf="@+id/back_button"/>
    <View
        android:background="?attr/constantBlack"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0.6"
        app:layout_constraintBottom_toBottomOf="@+id/camera_preview"
        app:layout_constraintEnd_toEndOf="@+id/camera_preview"
        app:layout_constraintStart_toStartOf="@+id/camera_preview"
        app:layout_constraintTop_toTopOf="@+id/dimmed_view_barrier"/>
    <TextView
        android:textAppearance="?attr/textS2"
        android:textColor="?attr/constantWhite"
        android:gravity="center"
        android:id="@+id/scanner_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/camera_preview"
        app:layout_constraintTop_toTopOf="@+id/check_code_title"/>
    <TextView
        android:textAppearance="?attr/textS2"
        android:textColor="?attr/constantWhite"
        android:gravity="center"
        android:id="@+id/check_code_title"
        android:paddingTop="11dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="@string/check_code_title_text"
        app:layout_constraintBottom_toTopOf="@+id/check_code_value"/>
    <TextView
        android:textAppearance="?attr/textH4"
        android:textColor="?attr/constantWhite"
        android:gravity="center"
        android:id="@+id/check_code_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/camera_preview"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/dimmed_view_barrier"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:barrierDirection="top"
        app:constraint_referenced_ids="check_code_title"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/confirm_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="@string/confirm_button_text"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintBottom_toTopOf="@+id/rescan_button"
        style="?attr/buttonPrimaryLarge"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/rescan_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="@string/rescan_button_text"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        style="?attr/buttonDefaultInverseLarge"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/check_code_value_group"
        android:visibility="invisible"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:constraint_referenced_ids="check_code_title, check_code_value, confirm_button, rescan_button, image_preview"/>
    <include
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back_button"
        layout="@layout/scanner_no_camera_permission_placeholder"/>
    <include
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back_button"
        layout="@layout/scanner_failure_state_placeholder"/>
</androidx.constraintlayout.widget.ConstraintLayout>
