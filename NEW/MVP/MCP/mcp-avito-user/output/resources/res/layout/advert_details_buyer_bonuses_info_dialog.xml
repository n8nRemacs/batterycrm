<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.avito.android.lib.design.banner.Banner
            android:id="@+id/buyer_bonuses_info_promoblock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="10dp"
            app:banner_backgroundColor="?attr/blue50"
            app:banner_content="@layout/advert_details_buyer_bonuses_info_promoblock_content"
            app:banner_contentPaddingBottom="32dp"
            app:banner_contentPaddingLeft="10dp"
            app:banner_contentPaddingRight="10dp"
            app:banner_contentPaddingTop="20dp"
            style="?attr/bannerBlue"/>
        <TextView
            android:id="@+id/buyer_bonuses_info_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
