<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/address_container"
    android:paddingLeft="@dimen/rds_content_horizontal_padding_left"
    android:paddingRight="@dimen/content_horizontal_padding"
    android:focusable="true"
    android:focusableInTouchMode="false"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="?attr/textBody"
        android:textColor="@color/text_button_default"
        android:ellipsize="end"
        android:layout_gravity="center_vertical"
        android:id="@+id/advert_address"
        android:background="@drawable/bg_rds_gray_button"
        android:paddingLeft="4dp"
        android:paddingTop="1dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textBody"
        android:id="@+id/more_addresses"
        android:paddingLeft="4dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/address_container"/>
</androidx.constraintlayout.widget.ConstraintLayout>
