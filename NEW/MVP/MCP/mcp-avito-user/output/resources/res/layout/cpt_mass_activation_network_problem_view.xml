<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:id="@+id/cpt_mass_activation_network_problem_view"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/cpt_mass_activation_network_problem_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/cpt_mass_activation_network_problem_container"
            android:paddingBottom="126dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/cpt_mass_activation_network_problem_error_image"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginTop="44dp"
                android:src="@drawable/placeholders_ic_unknown_error_cat"/>
            <TextView
                android:textAppearance="?attr/textH20"
                android:id="@+id/cpt_mass_activation_network_problem_error_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/cpt_network_problem_error_title"
                android:layout_marginHorizontal="24dp"/>
            <TextView
                android:textAppearance="?attr/textM20"
                android:gravity="center"
                android:id="@+id/cpt_mass_activation_network_problem_error_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="24dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <FrameLayout
        android:layout_gravity="bottom"
        android:id="@+id/cpt_mass_activation_network_problem_footer"
        android:background="@drawable/cpt_activation_bg_white_gradient"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp">
        <com.avito.android.lib.design.button.Button
            android:id="@+id/cpt_mass_activation_network_problem_retry_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/error_layout_refresh"
            style="?attr/buttonPrimaryLarge"/>
    </FrameLayout>
</FrameLayout>
