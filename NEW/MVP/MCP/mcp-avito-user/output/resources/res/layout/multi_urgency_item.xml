<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="vertical"
    android:paddingTop="16dp"
    android:paddingBottom="20dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="129dp"
    android:paddingHorizontal="20dp">
    <TextView
        android:textAppearance="?attr/textH60"
        android:textColor="@color/selector_multi_urgency_card_text_color"
        android:id="@+id/multi_urgency_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textAppearance="?attr/textS20"
        android:textColor="@color/selector_multi_urgency_card_text_color"
        android:id="@+id/multi_urgency_item_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"/>
</LinearLayout>
