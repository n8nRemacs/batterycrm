<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/article_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        app:navigationIcon="@drawable/ic_back_24_black"/>
    <FrameLayout
        android:id="@+id/web_view_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.yatatsu.powerwebview.PowerWebView
            android:id="@+id/web_view"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:dom_storage_enabled="true"
            app:java_script_enabled="true"
            app:support_zoom="false"/>
        <ProgressBar
            android:layout_gravity="center"
            android:id="@+id/loading"
            android:visibility="visible"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:indeterminate="true"
            android:indeterminateTint="@color/legacy_blue_600"
            style="@style/Widget.AppCompat.ProgressBar"/>
    </FrameLayout>
</LinearLayout>
