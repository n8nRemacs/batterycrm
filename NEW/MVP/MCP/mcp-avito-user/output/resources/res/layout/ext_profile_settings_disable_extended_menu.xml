<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="?attr/textH25"
        android:id="@+id/ext_profile_disable_menu_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/extended_profile_disable_confirm_title"
        android:layout_marginHorizontal="16dp"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:id="@+id/ext_profile_disable_menu_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/extended_profile_disable_confirm_message"
        android:layout_marginHorizontal="16dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/bg_disable_extended_confirm_actions"
        android:paddingTop="10dp"
        android:paddingBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:elevation="16dp"
        android:paddingHorizontal="10dp">
        <com.avito.android.lib.design.button.Button
            android:id="@+id/ext_profile_disable_menu_primary_action_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/extended_profile_disable_confirm_primary_button"
            style="?attr/buttonPrimaryLarge"/>
        <com.avito.android.lib.design.button.Button
            android:id="@+id/ext_profile_disable_menu_secondary_action_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/extended_profile_disable_confirm_secondary_button"
            style="?attr/buttonSecondaryLarge"/>
    </LinearLayout>
</LinearLayout>
