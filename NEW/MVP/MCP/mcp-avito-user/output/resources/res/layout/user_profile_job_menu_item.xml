<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/user_profile_job_menu_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/UserProfileCardContainer">
    <include
        android:id="@+id/card_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/user_profile_job_menu_title_item"/>
    <include
        android:id="@+id/button_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/user_profile_job_menu_button_block"/>
    <View
        android:id="@+id/divider"
        android:background="?attr/gray8"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <include
        android:id="@+id/card_action_button"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        layout="@layout/button_flat_card"/>
</LinearLayout>
