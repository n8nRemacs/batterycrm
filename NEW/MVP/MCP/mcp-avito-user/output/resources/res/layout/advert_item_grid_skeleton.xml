<?xml version="1.0" encoding="utf-8"?>
<com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:shimmer="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:id="@+id/advert_grid_root"
    android:paddingLeft="4dp"
    android:paddingTop="4dp"
    android:paddingRight="4dp"
    android:paddingBottom="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    shimmer:shimmer_animationDuration="3000"
    shimmer:shimmer_autostart="true"
    shimmer:shimmer_color="@color/legacy_gray_shimmer"
    shimmer:shimmer_gradientCenterColorWidth="0.1"
    shimmer:shimmer_maskWidth="1">
    <RelativeLayout
        android:id="@+id/advert_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/image"
            android:background="@drawable/serp_bg_pic_stub"
            android:layout_width="match_parent"
            android:layout_height="@dimen/serp_card_image_height"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="44dp"
            android:layout_below="@+id/image">
            <View
                android:background="@drawable/serp_bg_text_stub"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:layout_marginTop="13dp"/>
            <View
                android:background="@drawable/serp_bg_text_stub"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:layout_marginTop="10dp"/>
            <View
                android:background="@drawable/serp_bg_text_stub"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="58dp"/>
            <androidx.legacy.widget.Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>
    </RelativeLayout>
</com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout>
