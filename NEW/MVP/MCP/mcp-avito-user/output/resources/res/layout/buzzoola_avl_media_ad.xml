<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:id="@+id/buzzoola_content"
    android:background="?attr/constantBlack"
    android:addStatesFromChildren="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/ad_avl_screen_margin"
    android:layout_marginBottom="@dimen/ad_avl_screen_margin">
    <FrameLayout
        android:id="@+id/media_view_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout
            android:id="@+id/media_view_placeholder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:shimmer_autostart="true"
            app:shimmer_color="?attr/constantBlack"
            style="?attr/shimmerDefault">
            <View
                android:background="@color/ad_avl_placeholder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout>
        <com.avito.android.fresco.SimpleDraweeView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <FrameLayout
            android:id="@+id/media_view_overlay"
            android:background="@drawable/ad_avl_media_gradient"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/close_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="@dimen/ad_avl_inset"
            android:layout_marginTop="@dimen/ad_avl_inset"
            android:src="?attr/ic_close24"
            android:scaleType="center"
            app:tint="?attr/constantWhite"/>
        <TextView
            android:layout_gravity="right"
            android:id="@+id/info_menu"
            android:layout_marginTop="@dimen/ad_avl_badge_top_margin"
            android:layout_marginRight="@dimen/ad_avl_inset"
            style="@style/Widget.Avito.TextView.Ad.Badge"/>
        <FrameLayout
            android:layout_gravity="bottom"
            android:id="@+id/text_gradient"
            android:background="@drawable/ad_avl_text_gradient"
            android:layout_width="match_parent"
            android:layout_height="208dp"/>
        <LinearLayout
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ad_avl_small_inset"
            android:layout_marginBottom="8dp"
            android:layout_marginHorizontal="@dimen/ad_avl_inset">
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                style="@style/Widget.Avito.TextView.Ad.Avl.Title"/>
            <TextView
                android:id="@+id/description"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ad_avl_small_inset"
                style="@style/Widget.Avito.TextView.Ad.Avl.Description"/>
            <FrameLayout
                android:id="@+id/call_to_action_container"
                android:background="@drawable/ad_avl_call_to_action_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/call_to_action"
                    style="@style/Widget.Avito.TextView.Ad.Avl.CallToAction"/>
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>
</FrameLayout>
