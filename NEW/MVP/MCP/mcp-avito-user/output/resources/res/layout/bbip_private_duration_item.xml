<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/bbip_private_duration_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="?attr/textH40"
        android:id="@+id/bbip_private_duration_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"/>
    <com.avito.android.lib.design.chips.Chips
        android:id="@+id/bbip_private_duration_chips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingHorizontal="16dp"
        app:chips_displayType="singleLineScrollable"
        app:chips_keepLastSelected="true"
        app:chips_selectStrategy="single"
        style="?attr/chipsLarge"/>
</LinearLayout>
