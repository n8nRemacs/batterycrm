<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/review_sort_filter_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/main_reviews_sort_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="6dp"
        app:drawableStartCompat="@drawable/ic_reviews_sort"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/additional_reviews_sort_title"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="6dp"
        app:drawableStartCompat="@drawable/ic_reviews_sort"/>
</FrameLayout>
