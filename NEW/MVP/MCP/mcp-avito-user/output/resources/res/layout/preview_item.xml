<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/photo_preview"
        app:actualImageScaleType="fitCenter"
        app:layout_aspectRatio="75%"
        app:layout_widthPercent="100%"
        app:placeholderImage="?attr/gray8"/>
    <FrameLayout
        android:id="@+id/progress_overlay"
        android:background="?attr/gray8"
        android:visibility="invisible"
        app:layout_aspectRatio="75%"
        app:layout_widthPercent="100%">
        <com.avito.android.lib.deprecated_design.ProgressView
            android:layout_gravity="center"
            android:id="@+id/progress"
            android:layout_width="56dp"
            android:layout_height="56dp"/>
    </FrameLayout>
</androidx.percentlayout.widget.PercentRelativeLayout>
