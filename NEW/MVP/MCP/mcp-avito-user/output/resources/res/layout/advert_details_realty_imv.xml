<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/realty_imv_background"
    android:paddingBottom="28dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/content_horizontal_padding_smaller">
    <TextView
        android:textAppearance="?attr/textHeadingLarge"
        android:textColor="?attr/black"
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textBody"
        android:textColor="?attr/black"
        android:id="@+id/hint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"/>
    <TextView
        android:textAppearance="?attr/textHeadingSmall"
        android:gravity="center_vertical"
        android:id="@+id/border_value_left"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hint"/>
    <TextView
        android:textAppearance="?attr/textHeadingSmall"
        android:gravity="center_vertical"
        android:id="@+id/border_value_right"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hint"/>
    <View
        android:id="@+id/track"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_margin="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/border_value_left"
        app:layout_constraintLeft_toRightOf="@+id/border_value_left"
        app:layout_constraintRight_toLeftOf="@+id/border_value_right"
        app:layout_constraintTop_toTopOf="@+id/border_value_left"/>
    <View
        android:id="@+id/track_shadow_left"
        android:background="@drawable/realty_imv_track_shadow_left"
        android:layout_width="16dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/border_value_left"
        app:layout_constraintLeft_toLeftOf="@+id/track"
        app:layout_constraintTop_toTopOf="@+id/border_value_left"/>
    <View
        android:id="@+id/track_shadow_right"
        android:background="@drawable/realty_imv_track_shadow_right"
        android:layout_width="16dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/border_value_right"
        app:layout_constraintRight_toRightOf="@+id/track"
        app:layout_constraintTop_toTopOf="@+id/border_value_right"/>
    <ImageView
        android:id="@+id/track_point"
        android:background="@drawable/realty_imv_track_point_background"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:scaleType="center"
        app:layout_constraintLeft_toLeftOf="@+id/track"
        app:layout_constraintRight_toRightOf="@+id/track"
        app:layout_constraintTop_toBottomOf="@+id/border_value_left"
        app:layout_constraintTop_toTopOf="@+id/border_value_left"/>
    <TextView
        android:textAppearance="?attr/textHeadingSmall"
        android:textColor="?attr/black"
        android:id="@+id/body_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/border_value_left"/>
    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/body_description_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="16dp"
        app:constraint_referenced_ids="body_description,body_description_expand"
        app:flow_horizontalBias="0"
        app:flow_horizontalStyle="packed"
        app:flow_wrapMode="chain"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/body_title"/>
    <TextView
        android:textAppearance="?attr/textBody"
        android:id="@+id/body_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textAppearance="?attr/textBody"
        android:id="@+id/body_description_expand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/body_description_expand_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/body_description_expand"
        app:layout_constraintLeft_toRightOf="@+id/body_description_expand"
        app:srcCompat="?attr/ic_arrowExpandLess16"
        app:tint="?attr/blue"/>
    <TextView
        android:id="@+id/body_expanded"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/body_title"/>
</androidx.constraintlayout.widget.ConstraintLayout>
