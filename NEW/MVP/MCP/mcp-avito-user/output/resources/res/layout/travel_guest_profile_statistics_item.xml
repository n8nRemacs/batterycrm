<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/stripes_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:baselineAligned="false"
        android:divider="@drawable/travel_guest_profile_stripes_divider"
        android:showDividers="middle">
        <include
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_weight="12"
            layout="@layout/travel_guest_profile_statistics_stripe"/>
        <include
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_weight="8"
            layout="@layout/travel_guest_profile_statistics_stripe"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/statistics_groups_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/travel_guest_profile_statistics_group_info"/>
        <include layout="@layout/travel_guest_profile_statistics_group_info"/>
    </LinearLayout>
</LinearLayout>
