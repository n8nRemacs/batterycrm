<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.avito.android.lib.design.bottom_sheet.BoundedLinearLayout
        android:orientation="vertical"
        android:id="@+id/bottom_sheet_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?attr/bottomSheet_style">
        <FrameLayout
            android:id="@+id/thumb_layout"
            android:layout_width="match_parent"
            android:layout_height="20dp">
            <View
                android:layout_gravity="top|center_horizontal"
                android:id="@+id/header_thumb"
                android:background="@drawable/design_bottom_sheet_thumb"
                android:visibility="gone"
                android:layout_width="?attr/bottomSheet_thumbWidth"
                android:layout_height="?attr/bottomSheet_thumbHeight"
                android:layout_marginTop="?attr/bottomSheet_thumbMarginTop"
                android:layout_marginBottom="?attr/bottomSheet_thumbMarginBottom"/>
        </FrameLayout>
        <FrameLayout
            android:gravity="center_vertical"
            android:id="@+id/bottom_sheet_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="6dp">
            <ImageView
                android:layout_gravity="start"
                android:id="@+id/bottom_sheet_close_button"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="?attr/ic_close24"
                android:scaleType="fitXY"
                android:layout_marginStart="?attr/bottomSheet_closeMarginLeft"/>
            <TextView
                android:textAppearance="?attr/bottomSheet_titleTextAppearance"
                android:textColor="?attr/bottomSheet_titleTextColor"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:id="@+id/bottom_sheet_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:translationY="?attr/bottomSheet_visualCompensation"
                android:layout_marginStart="?attr/bottomSheet_titleMarginLeft"
                android:layout_marginEnd="?attr/bottomSheet_titleMarginRight"/>
            <TextView
                android:textAppearance="?attr/bottomSheet_actionButtonTextAppearance"
                android:textColor="?attr/bottomSheet_actionButtonTextColor"
                android:layout_gravity="end"
                android:id="@+id/bottom_sheet_action_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:translationY="?attr/bottomSheet_visualCompensation"
                android:layout_marginEnd="?attr/bottomSheet_actionButtonMarginRight"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/custom_bottom_sheet_header"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <FrameLayout
            android:id="@+id/bottom_sheet_body_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:id="@+id/bottom_sheet_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <FrameLayout
                android:id="@+id/overlay_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </FrameLayout>
    </com.avito.android.lib.design.bottom_sheet.BoundedLinearLayout>
</merge>
