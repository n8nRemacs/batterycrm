<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="32dp">
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/avatar"
                android:visibility="gone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="10dp"
                android:foreground="@drawable/bg_btn_circle"
                app:actualImageScaleType="centerCrop"
                app:backgroundImage="?attr/gray8"
                app:placeholderImage="?attr/gray8"
                app:placeholderImageScaleType="center"
                app:roundAsCircle="true"/>
            <TextView
                android:textSize="16sp"
                android:ellipsize="end"
                android:gravity="center"
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:singleLine="true"
                android:fontFamily="?attr/fontHeavy"
                style="?attr/textTitleSmall"/>
        </LinearLayout>
    </FrameLayout>
</androidx.appcompat.widget.Toolbar>
