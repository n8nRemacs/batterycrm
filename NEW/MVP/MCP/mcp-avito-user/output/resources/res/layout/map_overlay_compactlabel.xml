<?xml version="1.0" encoding="utf-8"?>
<com.avito.android.lib.design.shadow_layout.ShadowFrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/overlay_container_compact"
    android:paddingBottom="12dp"
    android:clickable="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="16sp"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/overlay_compact_label"
        android:background="?attr/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:paddingHorizontal="?attr/horizontalOffset"
        android:paddingVertical="8dp"
        app:layout_shadowEnabled="true"/>
    <View
        android:id="@+id/overlay_compact_border"
        android:background="?attr/gray8"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</com.avito.android.lib.design.shadow_layout.ShadowFrameLayout>
