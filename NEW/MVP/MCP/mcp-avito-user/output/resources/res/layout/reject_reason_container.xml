<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/background_card"
    android:paddingLeft="@dimen/card_padding"
    android:paddingTop="@dimen/card_child_vertical_margin"
    android:paddingRight="@dimen/card_padding"
    android:paddingBottom="@dimen/card_child_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/card_margin"
    android:layout_marginRight="@dimen/card_margin">
    <TextView
        android:textSize="@dimen/advert_description_text_size"
        android:textColor="?attr/red"
        android:id="@+id/reject_reason_title"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:textSize="@dimen/advert_description_text_size"
        android:textColor="?attr/red"
        android:id="@+id/reject_reason"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
