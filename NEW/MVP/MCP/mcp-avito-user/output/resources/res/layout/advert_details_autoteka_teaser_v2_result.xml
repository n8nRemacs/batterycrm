<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="vertical"
    android:id="@+id/autoteka_teaser_v2_result"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="?attr/textH30"
        android:textColor="?attr/black"
        android:ellipsize="end"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:textColor="?attr/gray54"
        android:id="@+id/subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="subtitle subtitle subtitle"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/insight_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <include
        android:id="@+id/more_link"
        layout="@layout/advert_details_autoteka_teaser_more_v2"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/discountContainer"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">
            <TextView
                android:textAppearance="?attr/textM10"
                android:id="@+id/discountTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <com.avito.android.lib.design.docking_badge.DockingBadge
                android:id="@+id/discountAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:dockingBadge_end="?attr/dockingBadgeEdgePipkaSmall"
                app:dockingBadge_start="?attr/dockingBadgeEdgeFlagSmall"
                style="?attr/dockingBadgeGreenSmall"/>
        </LinearLayout>
        <com.avito.android.lib.design.button.Button
            android:gravity="center"
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/advert_details_autoteka_teaser_button"
            style="?attr/buttonPrimarySmallTwoRows"/>
    </LinearLayout>
    <TextView
        android:textAppearance="?attr/textM1"
        android:gravity="center_horizontal"
        android:id="@+id/standalone_link"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"/>
</LinearLayout>
