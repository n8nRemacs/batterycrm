<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:id="@+id/advert_details_top_bar_anchors_container"
    android:background="@drawable/advert_details_bg_top_bar_bottom_sheet_styled"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <HorizontalScrollView
        android:id="@+id/advert_details_top_bar_anchors_scroll_view"
        android:scrollbars="none"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/advert_details_top_bar_anchor_items"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </HorizontalScrollView>
</FrameLayout>
