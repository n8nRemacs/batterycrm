<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cpt_activation_advert_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/cpt_activation_advert_image"
        android:layout_width="60dp"
        android:layout_height="46dp"
        app:backgroundImage="?attr/gray8"
        app:failureImageScaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.2"
        app:roundedCornerRadius="6dp"
        style="@style/Widget.Avito.SimpleDraweeView.Advert.Item.Image.List"/>
    <View
        android:id="@+id/cpt_activation_advert_icon"
        android:background="@drawable/product_specific_ic_rds_delivery"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/cpt_activation_advert_image"
        app:layout_constraintEnd_toEndOf="@+id/cpt_activation_advert_image"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:id="@+id/cpt_activation_advert_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/cpt_activation_advert_image"
        app:layout_constraintTop_toTopOf="@+id/cpt_activation_advert_image"/>
    <TextView
        android:textAppearance="?attr/textH50"
        android:id="@+id/cpt_activation_advert_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/cpt_activation_advert_image"
        app:layout_constraintTop_toBottomOf="@+id/cpt_activation_advert_title"/>
</androidx.constraintlayout.widget.ConstraintLayout>
