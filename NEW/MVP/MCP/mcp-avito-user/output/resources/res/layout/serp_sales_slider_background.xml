<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/serp_sales_slider_background_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/serp_sales_slider_background_left_space"
        android:layout_width="156dp"
        android:layout_height="match_parent"/>
    <TextView
        android:theme="@style/Theme.DesignSystem.Re23"
        android:textAppearance="?attr/textH30"
        android:textColor="?attr/constantWhite"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:layout_gravity="center_vertical"
        android:id="@+id/serp_sales_slider_background_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:layout_marginEnd="@dimen/slider_widget_default_text_margin_end"/>
</LinearLayout>
