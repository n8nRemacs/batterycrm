<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="@dimen/content_horizontal_padding"
    android:paddingTop="8dp"
    android:paddingRight="@dimen/content_horizontal_padding"
    android:paddingBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/info_label_indicator"
        android:layout_width="2dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-4dp"
        android:layout_marginBottom="-4dp"
        android:layout_alignTop="@+id/info_label_text"
        android:layout_alignBottom="@+id/info_label_text"/>
    <TextView
        android:textColor="?attr/gray48"
        android:id="@+id/info_label_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        style="?attr/textBodySmall"/>
</RelativeLayout>
