<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.avito.android.advert_core.utils.WrapContentHeightViewPager
            android:id="@+id/offers_bottom_sheet_view_pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>
        <LinearLayout
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:id="@+id/offers_bottom_sheet_controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp">
            <com.avito.android.lib.design.page_indicator_re23.PageIndicatorRe23
                android:id="@+id/offers_bottom_sheet_indicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.avito.android.lib.design.button.Button
                android:id="@+id/offers_bottom_sheet_call_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="16dp"
                style="?attr/buttonAccentLarge"/>
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
