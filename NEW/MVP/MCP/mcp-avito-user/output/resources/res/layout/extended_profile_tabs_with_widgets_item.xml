<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/extended_profile_tabs_with_widgets"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/extended_profile_tabs_with_widgets_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/extended_profile_widget_title_bottom_margin"
        android:layout_marginStart="@dimen/extended_profile_widget_horizontal_margin"
        style="?attr/textH30"/>
    <com.avito.android.lib.design.chips.Chips
        android:id="@+id/extended_profile_tabs_with_widgets_item_chips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/extended_profile_widget_horizontal_margin"
        android:paddingEnd="@dimen/extended_profile_widget_horizontal_margin"
        app:chips_displayType="singleLineScrollable"
        app:chips_keepLastSelected="true"
        app:chips_selectStrategy="single"
        style="?attr/chipsMedium"/>
</LinearLayout>
