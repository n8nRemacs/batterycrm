<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/sale_search_fragment_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp">
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="16dp">
            <ImageView
                android:id="@+id/arrow_back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                app:srcCompat="?attr/ic_arrowBack24"
                app:tint="?attr/black"/>
            <com.avito.android.lib.design.input.Input
                android:id="@+id/query_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/campaigns_sale_search_input_hint"
                android:layout_weight="1"
                style="?attr/inputSearch"/>
            <TextView
                android:textColor="?attr/blue600"
                android:gravity="center"
                android:id="@+id/cancel_search"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/campaigns_sale_search_cancel"
                android:layout_marginStart="16dp"
                style="?attr/textM10"/>
        </LinearLayout>
        <com.avito.android.lib.design.chips.Chips
            android:id="@+id/chips_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginHorizontal="16dp"
            app:chips_childHorizontalSpacing="6dp"
            app:chips_displayType="singleLineScrollable"
            app:chips_keepLastSelected="true"
            style="?attr/chipsMediumRound"/>
    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAppearance="?attr/textM20"
            android:textColor="?attr/gray54"
            android:id="@+id/search_list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/search_items_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/overlay_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:paddingHorizontal="?attr/horizontalOffset"/>
</LinearLayout>
