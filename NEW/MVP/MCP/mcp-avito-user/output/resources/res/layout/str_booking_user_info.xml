<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/str_booking_user_info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAppearance="?attr/textH50"
            android:textColor="@color/common_white"
            android:gravity="center"
            android:id="@+id/str_booking_user_image_placeholder"
            android:background="@drawable/str_booking_user_image_placeholder_background"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.avito.android.fresco.SimpleDraweeView
            android:id="@+id/str_booking_user_image"
            android:visibility="invisible"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:roundedCornerRadius="10dp"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/str_user_active_icon"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-2dp"
            android:src="@drawable/str_booking_user_status"
            android:layout_marginEnd="-2dp"
            app:layout_constraintBottom_toBottomOf="@+id/str_booking_user_image_placeholder"
            app:layout_constraintEnd_toEndOf="@+id/str_booking_user_image_placeholder"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/str_user_rating_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="?attr/ic_rating16"
            android:tint="?attr/orange"
            android:layout_marginStart="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/str_booking_user_image_placeholder"
            app:layout_constraintStart_toEndOf="@+id/str_booking_user_image_placeholder"
            app:layout_constraintTop_toBottomOf="@+id/str_booking_user_name"/>
        <TextView
            android:textAppearance="?attr/textM20"
            android:id="@+id/str_booking_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            app:layout_constraintBottom_toTopOf="@+id/str_booking_user_feedback"
            app:layout_constraintStart_toEndOf="@+id/str_booking_user_image_placeholder"
            app:layout_constraintTop_toTopOf="@+id/str_booking_user_image_placeholder"/>
        <TextView
            android:textAppearance="?attr/textM20"
            android:id="@+id/str_booking_user_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/str_booking_user_image_placeholder"
            app:layout_constraintStart_toEndOf="@+id/str_user_rating_icon"
            app:layout_constraintTop_toBottomOf="@+id/str_booking_user_name"
            app:layout_goneMarginStart="12dp"/>
        <ImageView
            android:id="@+id/call_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@null"
            android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/chat_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginEnd="18dp"
            app:srcCompat="?attr/ic_call24"
            app:tint="?attr/black"/>
        <ImageView
            android:id="@+id/chat_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@null"
            android:layout_marginEnd="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="?attr/ic_chat24"
            app:tint="?attr/black"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/guest_profile_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        style="?attr/buttonSecondaryMedium"/>
</androidx.appcompat.widget.LinearLayoutCompat>
