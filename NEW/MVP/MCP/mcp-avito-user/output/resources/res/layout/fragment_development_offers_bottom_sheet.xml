<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/carousel_bottom_sheet_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="24dp">
    <TextView
        android:textAppearance="?attr/textH2"
        android:id="@+id/carousel_bottom_sheet_item_header"
        android:paddingTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/carousel_bottom_sheet_item_parameters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textAppearance="?attr/textM1"
        android:id="@+id/carousel_bottom_sheet_item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="12dp"/>
</LinearLayout>
