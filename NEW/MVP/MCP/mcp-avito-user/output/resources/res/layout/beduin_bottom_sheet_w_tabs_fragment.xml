<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/motion_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/beduin_bottom_sheet_w_tabs_fragment_scene">
    <com.avito.android.gallery.ui.GalleryView
        android:id="@+id/gallery"
        android:background="?attr/constantWhite"
        android:layout_width="match_parent"
        android:layout_height="@dimen/gallery_height"
        app:indicator_marginBottom="24dp"
        app:indicator_selectedDotColor="?attr/constantWhite"
        app:indicator_unselectedDotColor="@color/legacy_constant_white_alpha_40"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/gallery_overlay"
        android:background="@color/expected_constant_black_alpha_6"
        android:layout_width="match_parent"
        android:layout_height="@dimen/gallery_height"
        app:layout_constraintBottom_toBottomOf="@+id/gallery"
        app:layout_constraintTop_toTopOf="@+id/gallery"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="horizontal"
        android:id="@+id/top_insets_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="horizontal"
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Space
        android:id="@+id/guidelineBottom"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/gallery"/>
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="@+id/top_insets_guideline"/>
    <View
        android:id="@+id/top_bar"
        android:background="@drawable/bg_rounded_top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline"/>
    <TextView
        android:textAppearance="?attr/textTitleSmall"
        android:textColor="?attr/black"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@+id/rating_preview_recycler_view"
        app:layout_goneMarginTop="10dp"/>
    <View
        android:id="@+id/header_thumb"
        android:background="@drawable/design_bottom_sheet_thumb"
        android:layout_width="?attr/bottomSheet_thumbWidth"
        android:layout_height="?attr/bottomSheet_thumbHeight"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/top_bar"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/tab_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierAllowsGoneWidgets="false"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="title,tabs_toolbar"/>
    <ImageView
        android:id="@+id/tab_indicator_underline_fake"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/design_tab_indicator_path_drawable"
        app:layout_constraintBottom_toBottomOf="@+id/tab_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rating_preview_recycler_view"
        android:visibility="gone"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"/>
    <com.avito.android.lib.design.tab_layout.AvitoTabLayout
        android:id="@+id/tab_layout"
        android:background="?attr/transparentWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tab_barrier"
        style="@style/Design.Widget.TabLayout"/>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tab_layout"/>
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tabs_toolbar"
        android:background="@drawable/bg_rounded_top"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>
</androidx.constraintlayout.motion.widget.MotionLayout>
