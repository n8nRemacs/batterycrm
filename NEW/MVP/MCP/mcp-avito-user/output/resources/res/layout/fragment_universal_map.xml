<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/universal_map_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:contentDescription="universal_map_root">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/map_overlay"
        android:clipChildren="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:background="@null"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/ic_close_24_black">
            <TextView
                android:layout_gravity="center"
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?attr/textHeadingSmall"/>
        </androidx.appcompat.widget.Toolbar>
        <com.avito.android.avito_map.AvitoMapView
            android:id="@+id/map"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"/>
        <FrameLayout
            android:id="@+id/top_overlay_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">
            <Space
                android:id="@+id/vs_overlay_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </FrameLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/universal_map_beduin_form_top_list"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top_overlay_layout"/>
        <com.avito.android.lib.design.button.Button
            android:id="@+id/universal_map_filter_button"
            android:visibility="gone"
            android:layout_width="44dp"
            android:layout_height="36dp"
            android:layout_marginTop="8dp"
            android:src="?attr/ic_filter20"
            android:layout_marginEnd="16dp"
            app:button_iconColor="?attr/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top_overlay_layout"
            style="?attr/buttonOverlayPrimarySmall"/>
        <com.avito.android.lib.design.point.Point
            android:id="@+id/universal_map_filter_indicator"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/universal_map_filter_button"
            app:layout_constraintTop_toTopOf="@+id/universal_map_filter_button"
            app:point_color="?attr/red"
            app:point_size="6dp"
            app:point_strokeColor="?attr/warmGray4"
            app:point_strokeWidth="2dp"
            app:point_withStroke="true"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/find_me_button"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="@dimen/find_me_button_size"
            android:layout_height="@dimen/find_me_button_size"
            android:src="@drawable/my_location_icon"
            android:layout_marginEnd="14dp"
            android:backgroundTint="?attr/white"
            android:layout_marginVertical="8dp"
            app:backgroundTint="?attr/white"
            app:fabCustomSize="@dimen/find_me_button_size"
            app:layout_behavior="com.avito.android.item_map.view.MoveAboveBottomSheetBehavior"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:useCompatPadding="true"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ViewStub
        android:id="@+id/stub_universal_map_info_bottom_sheet"
        android:visibility="gone"
        android:layout="@layout/universal_map_info_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"/>
    <include layout="@layout/universal_map_pin_filters_bottom_sheet"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
