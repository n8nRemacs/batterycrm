<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_btn_flat_rds_blue_redesign"
    android:focusable="true"
    android:clickable="true"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stateListAnimator="@null">
    <TextView
        android:textAppearance="?attr/textBody"
        android:textColor="@color/txt_raised_button"
        android:ellipsize="end"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/button_text"
        android:paddingBottom="1dp"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:maxLines="1"/>
    <com.avito.android.lib.design.point.Point
        android:layout_gravity="end"
        android:id="@+id/online_point"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationX="1dp"
        android:translationY="-1dp"
        app:point_color="?attr/green600"
        app:point_strokeColor="?attr/white"
        app:point_strokeWidth="2dp"
        app:point_withStroke="true"
        style="?attr/pointDefaultSmall"/>
</FrameLayout>
