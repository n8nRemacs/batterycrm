<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.avito.android.lib.design.skeleton.Skeleton
        android:id="@+id/rating_details_score_skeleton"
        android:layout_width="84dp"
        android:layout_height="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:skeleton_radius="16dp"/>
    <ImageView
        android:id="@+id/rating_details_first_star_skeleton"
        android:background="@drawable/ic_rating_star_skeleton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@+id/rating_details_score_skeleton"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/rating_details_second_star_skeleton"
        android:background="@drawable/ic_rating_star_skeleton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/rating_details_first_star_skeleton"
        app:layout_constraintStart_toEndOf="@+id/rating_details_first_star_skeleton"/>
    <ImageView
        android:id="@+id/rating_details_third_star_skeleton"
        android:background="@drawable/ic_rating_star_skeleton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/rating_details_first_star_skeleton"
        app:layout_constraintStart_toEndOf="@+id/rating_details_second_star_skeleton"/>
    <ImageView
        android:id="@+id/rating_details_fourth_star_skeleton"
        android:background="@drawable/ic_rating_star_skeleton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/rating_details_first_star_skeleton"
        app:layout_constraintStart_toEndOf="@+id/rating_details_third_star_skeleton"/>
    <ImageView
        android:id="@+id/rating_details_fifth_star_skeleton"
        android:background="@drawable/ic_rating_star_skeleton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/rating_details_first_star_skeleton"
        app:layout_constraintStart_toEndOf="@+id/rating_details_fourth_star_skeleton"/>
    <com.avito.android.lib.design.skeleton.Skeleton
        android:id="@+id/rating_details_subtitle_skeleton"
        android:layout_width="122dp"
        android:layout_height="9dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/rating_details_score_skeleton"
        app:layout_constraintStart_toEndOf="@+id/rating_details_score_skeleton"
        app:skeleton_radius="6dp"/>
    <include
        android:id="@+id/rating_details_first_statistic_skeleton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/rating_details_score_skeleton"
        layout="@layout/rating_details_statistic_row_skeleton"/>
    <include
        android:id="@+id/rating_details_second_statistic_skeleton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/rating_details_first_statistic_skeleton"
        layout="@layout/rating_details_statistic_row_skeleton"/>
    <include
        android:id="@+id/rating_details_third_statistic_skeleton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/rating_details_second_statistic_skeleton"
        layout="@layout/rating_details_statistic_row_skeleton"/>
    <include
        android:id="@+id/rating_details_fourth_statistic_skeleton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/rating_details_third_statistic_skeleton"
        layout="@layout/rating_details_statistic_row_skeleton"/>
    <include
        android:id="@+id/rating_details_fifth_statistic_skeleton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/rating_details_fourth_statistic_skeleton"
        layout="@layout/rating_details_statistic_row_skeleton"/>
</androidx.constraintlayout.widget.ConstraintLayout>
