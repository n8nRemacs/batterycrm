<?xml version="1.0" encoding="utf-8"?>
<com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:shimmer="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginHorizontal="@dimen/extended_profile_settings_horizontal_margin"
    shimmer:shimmer_animationDuration="2500"
    shimmer:shimmer_autostart="true"
    shimmer:shimmer_color="@color/legacy_gray_shimmer"
    shimmer:shimmer_gradientCenterColorWidth="0.1"
    shimmer:shimmer_maskWidth="1">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:id="@+id/items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/title_1"
            android:background="@drawable/basic_profile_settings_bg_text"
            android:layout_width="0dp"
            android:layout_height="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="7dp"
            shimmer:layout_constraintStart_toStartOf="parent"
            shimmer:layout_constraintTop_toTopOf="parent"
            shimmer:layout_constraintWidth_percent="0.4"/>
        <View
            android:id="@+id/subtitle_1"
            android:background="@drawable/basic_profile_settings_bg_text"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            shimmer:layout_constraintStart_toStartOf="parent"
            shimmer:layout_constraintTop_toBottomOf="@+id/title_1"
            shimmer:layout_constraintWidth_percent="0.65"/>
        <View
            android:id="@+id/title_2"
            android:background="@drawable/basic_profile_settings_bg_text"
            android:layout_width="0dp"
            android:layout_height="12dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="7dp"
            shimmer:layout_constraintStart_toStartOf="parent"
            shimmer:layout_constraintTop_toBottomOf="@+id/subtitle_1"
            shimmer:layout_constraintWidth_percent="0.55"/>
        <View
            android:id="@+id/subtitle_2"
            android:background="@drawable/basic_profile_settings_bg_text"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            shimmer:layout_constraintStart_toStartOf="parent"
            shimmer:layout_constraintTop_toBottomOf="@+id/title_2"
            shimmer:layout_constraintWidth_percent="0.8"/>
        <View
            android:id="@+id/title_3"
            android:background="@drawable/basic_profile_settings_bg_text"
            android:layout_width="0dp"
            android:layout_height="12dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="7dp"
            shimmer:layout_constraintStart_toStartOf="parent"
            shimmer:layout_constraintTop_toBottomOf="@+id/subtitle_2"
            shimmer:layout_constraintWidth_percent="0.45"/>
        <View
            android:id="@+id/subtitle_3"
            android:background="@drawable/basic_profile_settings_bg_text"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            shimmer:layout_constraintStart_toStartOf="parent"
            shimmer:layout_constraintTop_toBottomOf="@+id/title_3"
            shimmer:layout_constraintWidth_percent="0.72"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout>
