<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:paddingBottom="17dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/banner_background"
        android:background="@drawable/subscription_banner_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:elevation="-1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textH50"
        android:id="@+id/banner_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:lines="1"
        android:layout_marginStart="20dp"
        app:layout_constraintEnd_toStartOf="@+id/banner_image"
        app:layout_constraintStart_toStartOf="@+id/banner_background"
        app:layout_constraintTop_toTopOf="@+id/banner_background"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/banner_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="24dp"
        android:lines="2"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/banner_image"
        app:layout_constraintStart_toStartOf="@+id/banner_background"
        app:layout_constraintTop_toBottomOf="@+id/banner_title"/>
    <com.avito.android.fresco.SimpleDraweeView
        android:id="@+id/banner_image"
        android:layout_width="107dp"
        android:layout_height="95dp"
        android:layout_marginBottom="17dp"
        android:src="@drawable/rating_bar_48"
        android:layout_marginEnd="11dp"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/banner_background"
        app:layout_constraintEnd_toEndOf="@+id/banner_background"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
