<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.avito.android.lib.design.bottom_sheet.BoundedLinearLayout
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@drawable/bg_contact_bar"
        android:paddingTop="5dp"
        android:clipChildren="false"
        android:addStatesFromChildren="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:maxWidth="560dp">
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:id="@+id/contact_bar_status_container"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:focusable="true"
            android:clickable="true"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_gravity="center_vertical"
                android:clipChildren="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/contact_bar_avatar"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:actualImageScaleType="centerCrop"
                    app:backgroundImage="?attr/gray12"
                    app:placeholderImage="?attr/gray12"
                    app:placeholderImageScaleType="center"
                    app:roundAsCircle="true"/>
                <View
                    android:layout_gravity="end|bottom"
                    android:id="@+id/contact_bar_online_indicator"
                    android:background="@drawable/ic_circle_green"
                    android:visibility="gone"
                    android:layout_width="6dp"
                    android:layout_height="6dp"/>
            </FrameLayout>
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">
                <TextView
                    android:textAppearance="?attr/textBodySmall"
                    android:ellipsize="end"
                    android:id="@+id/contact_bar_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:singleLine="true"/>
                <TextView
                    android:textAppearance="?attr/textBodySmall"
                    android:ellipsize="end"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/contact_bar_text2"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:textAppearance="?attr/textBodySmall"
            android:ellipsize="end"
            android:layout_gravity="center_horizontal"
            android:id="@+id/contact_bar_message"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/contact_bar_buttons_container"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/contact_bar_buttons_container2"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"/>
    </com.avito.android.lib.design.bottom_sheet.BoundedLinearLayout>
</LinearLayout>
