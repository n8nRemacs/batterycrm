<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/service_booking_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/rds_advert_details_small_offset"
    android:layout_marginHorizontal="@dimen/content_horizontal_padding">
    <com.avito.android.lib.design.button.Button
        android:id="@+id/service_booking_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?attr/buttonSafedealLarge"/>
    <TextView
        android:textAppearance="?attr/textM1"
        android:textColor="?attr/gray48"
        android:gravity="center_horizontal"
        android:id="@+id/service_booking_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"/>
</LinearLayout>
