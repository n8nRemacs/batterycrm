<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingTop="11dp"
    android:paddingBottom="13dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="?attr/textM10"
        android:id="@+id/page_error_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/campaigns_sale_search_page_retry_text"
        android:layout_marginEnd="10dp"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/page_error_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/campaigns_sale_search_page_retry_button_text"
        style="?attr/buttonSecondaryMedium"/>
</LinearLayout>
