<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textAppearance="?attr/textH30"
        android:id="@+id/ext_profile_re_agent_short_flow_creation_banner_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:id="@+id/ext_profile_re_agent_short_flow_creation_banner_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="6dp">
        <com.avito.android.lib.design.button.Button
            android:id="@+id/ext_profile_re_agent_short_flow_creation_banner_button_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?attr/buttonPrimaryMedium"/>
        <com.avito.android.lib.design.button.Button
            android:id="@+id/ext_profile_re_agent_short_flow_creation_banner_button_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            style="?attr/buttonOverlaySecondaryMedium"/>
    </LinearLayout>
</LinearLayout>
