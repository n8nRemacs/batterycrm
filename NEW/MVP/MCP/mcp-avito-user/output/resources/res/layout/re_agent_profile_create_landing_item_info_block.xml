<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="?attr/textH25"
        android:id="@+id/re_agent_profile_create_landing_info_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="16dp"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:id="@+id/re_agent_profile_create_landing_info_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"/>
    <ImageView
        android:id="@+id/re_agent_profile_create_landing_info_image"
        android:background="@drawable/bg_info_block_image"
        android:layout_width="match_parent"
        android:layout_height="228dp"
        android:layout_marginTop="24dp"
        android:scaleType="fitCenter"
        android:layout_marginHorizontal="10dp"/>
</LinearLayout>
