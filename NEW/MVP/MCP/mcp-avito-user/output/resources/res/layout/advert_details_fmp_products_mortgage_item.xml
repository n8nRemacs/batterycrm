<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:id="@+id/fmp_mortgage_card_container"
    android:background="@drawable/advert_details_fmp_widget_bg"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/icons_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.avito.android.fresco.SimpleDraweeView
            android:id="@+id/fmp_mortgage_card_icon_3"
            android:background="@drawable/advert_details_fmp_widget_icon_1_bg"
            android:padding="2dp"
            android:visibility="gone"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:scaleType="centerCrop"
            android:layout_marginStart="44dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.avito.android.fresco.SimpleDraweeView
            android:id="@+id/fmp_mortgage_card_icon_2"
            android:background="@drawable/advert_details_fmp_widget_icon_1_bg"
            android:padding="2dp"
            android:visibility="gone"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:scaleType="centerCrop"
            android:layout_marginStart="22dp"/>
        <com.avito.android.fresco.SimpleDraweeView
            android:id="@+id/fmp_mortgage_card_icon_1"
            android:background="@drawable/advert_details_fmp_widget_icon_1_bg"
            android:padding="2dp"
            android:visibility="gone"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:scaleType="centerCrop"/>
        <com.avito.android.fresco.SimpleDraweeView
            android:layout_gravity="end|top"
            android:id="@+id/fmp_mortgage_card_stub_icon"
            android:visibility="gone"
            android:layout_width="76dp"
            android:layout_height="32dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:contentDescription="@null"/>
    </FrameLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icons_container">
        <TextView
            android:textAppearance="?attr/textM20"
            android:textColor="?attr/black"
            android:id="@+id/fmp_mortgage_card_label_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"/>
        <FrameLayout
            android:id="@+id/payment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fmp_mortgage_card_label_text">
            <com.avito.android.lib.design.skeleton.shimmer.ShimmerFrameLayout
                android:id="@+id/fmp_mortgage_card_icon_payment_text_shimmer"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                app:shimmer_auto_start="true"
                app:shimmer_color="?attr/white"
                app:shimmer_duration="1000">
                <View
                    android:background="@drawable/advert_details_mortgage_snippet_shimmer_background"
                    android:layout_width="137dp"
                    android:layout_height="20dp"/>
            </com.avito.android.lib.design.skeleton.shimmer.ShimmerFrameLayout>
            <TextView
                android:textAppearance="?attr/textM20"
                android:textColor="?attr/black"
                android:gravity="center"
                android:id="@+id/fmp_mortgage_card_icon_payment_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:drawableRightCompat="?attr/ic_arrowRight16"
                app:drawableTint="?attr/black"/>
        </FrameLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
