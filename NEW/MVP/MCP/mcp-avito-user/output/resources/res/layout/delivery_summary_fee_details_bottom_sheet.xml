<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="vertical"
    android:id="@+id/fee_details_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_bottom_sheet_drag_gray"
        android:layout_width="40dp"
        android:layout_height="4dp"/>
    <TextView
        android:textAppearance="?attr/textM1"
        android:layout_gravity="center_vertical"
        android:id="@+id/fee_details_bottom_sheet_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="26dp"
        android:layout_marginHorizontal="16dp"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/fee_details_bottom_sheet_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="10dp"
        style="?attr/buttonPrimaryLarge"/>
</LinearLayout>
