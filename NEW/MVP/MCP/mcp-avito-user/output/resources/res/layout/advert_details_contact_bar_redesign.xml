<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/advert_details_contact_bar_root"
    android:paddingLeft="@dimen/content_horizontal_padding"
    android:paddingRight="@dimen/content_horizontal_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/seller_info_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textAppearance="?attr/textH3"
            android:ellipsize="end"
            android:id="@+id/seller_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_weight="1"/>
        <TextView
            android:textAppearance="?attr/textH3"
            android:textColor="?attr/green800"
            android:ellipsize="end"
            android:id="@+id/online_status"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contact_bar_online_status"
            android:singleLine="true"
            android:layout_weight="0"
            android:layout_marginStart="2dp"/>
    </LinearLayout>
    <TextView
        android:textAppearance="?attr/textM2"
        android:textColor="?attr/warmGray64"
        android:id="@+id/contact_bar_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/rating_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAppearance="?attr/textM2"
            android:id="@+id/rating_number"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"/>
        <com.avito.android.lib.design.rating.RatingBar
            android:layout_gravity="center_vertical"
            android:id="@+id/rating"
            android:visibility="gone"
            android:layout_marginTop="1dp"
            style="@style/Design.Widget.Avito.Rating.Small"/>
        <TextView
            android:textAppearance="?attr/textM2"
            android:textColor="?attr/gray54"
            android:ellipsize="end"
            android:id="@+id/rating_text"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginStart="4dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/seller_type_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/seller_type_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="4dp"/>
        <TextView
            android:textAppearance="?attr/textM2"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:id="@+id/seller_type_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:id="@+id/advantages_container"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"/>
    <TextView
        android:id="@+id/contacts_title"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        style="?attr/textH5"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/contact_bar_buttons_container"
        android:background="?attr/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/contact_bar_buttons_container2"
        android:background="?attr/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:baselineAligned="false"/>
    <TextView
        android:theme="@style/Theme.DesignSystem.Re23"
        android:textAppearance="?attr/textS10"
        android:textColor="?attr/gray54"
        android:gravity="center"
        android:id="@+id/contact_bar_rkn_disclaimer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"/>
    <TextView
        android:textAppearance="?attr/textM2"
        android:gravity="center"
        android:id="@+id/contact_bar_status_bottom"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"/>
</LinearLayout>
