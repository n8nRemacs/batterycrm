<?xml version="1.0" encoding="utf-8"?>
<com.avito.android.lib.design.shadow_layout.ShadowLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/Design.Widget.Avito.ShadowLayout">
    <FrameLayout
        android:id="@+id/button_container"
        android:background="@drawable/bg_btn_flat_rds_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:stateListAnimator="@null">
        <TextView
            android:textColor="@color/txt_raised_button"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="36dp"
            android:maxLines="1"
            android:drawablePadding="10dp"
            style="@style/TextAppearance.Avito.AdvertDetails.Body.Blue"/>
    </FrameLayout>
</com.avito.android.lib.design.shadow_layout.ShadowLayout>
