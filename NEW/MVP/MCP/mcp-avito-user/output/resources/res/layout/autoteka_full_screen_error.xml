<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:id="@+id/autoteka_full_screen_error_item_root"
    android:paddingTop="64dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="24dp">
    <ImageView
        android:id="@+id/autoteka_full_screen_image"
        android:layout_width="260dp"
        android:layout_height="208dp"
        android:layout_marginTop="16dp"/>
    <TextView
        android:textAppearance="?attr/textH20"
        android:gravity="center_horizontal"
        android:id="@+id/autoteka_full_screen_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/autoteka_error_has_occurred"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:gravity="center_horizontal"
        android:id="@+id/autoteka_full_screen_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/autoteka_try_again"/>
    <com.avito.android.lib.design.button.Button
        android:layout_gravity="center_horizontal"
        android:id="@+id/autoteka_full_screen_update"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/autoteka_preview_try_again"
        style="?attr/buttonSecondaryMedium"/>
</LinearLayout>
