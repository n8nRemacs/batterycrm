<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ext_profile_period_picker_root"
    android:paddingBottom="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/ext_profile_period_picker_close_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/ic_close24"
        app:tint="?attr/black"/>
    <TextView
        android:textAppearance="?attr/textH50"
        android:gravity="center"
        android:id="@+id/ext_profile_period_picker_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:maxWidth="160dp"
        android:text="@string/interval_picker_title_work"
        android:layout_marginHorizontal="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:textColor="?attr/blue600"
        android:id="@+id/ext_profile_period_picker_reset_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/interval_picker_cancel"
        android:layout_marginEnd="@dimen/extended_profile_settings_horizontal_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.avito.android.lib.design.input.Input
        android:id="@+id/ext_profile_period_picker_start"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:hint="@string/interval_picker_since_prefix"
        android:layout_marginStart="@dimen/extended_profile_settings_horizontal_margin"
        android:layout_marginEnd="6dp"
        app:layout_constraintEnd_toStartOf="@+id/ext_profile_period_picker_end"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ext_profile_period_picker_title"
        style="?attr/baseSelect"/>
    <com.avito.android.lib.design.input.Input
        android:id="@+id/ext_profile_period_picker_end"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:hint="@string/interval_picker_until_prefix"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="@dimen/extended_profile_settings_horizontal_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ext_profile_period_picker_start"
        app:layout_constraintTop_toBottomOf="@+id/ext_profile_period_picker_title"
        style="?attr/baseSelect"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:textColor="?attr/red"
        android:id="@+id/ext_profile_period_picker_error"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginHorizontal="@dimen/extended_profile_settings_horizontal_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ext_profile_period_picker_start"/>
    <com.avito.android.lib.design.toggle.Checkbox
        android:id="@+id/ext_profile_period_picker_checkbox"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginStart="@dimen/extended_profile_settings_horizontal_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ext_profile_period_picker_error"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/ext_profile_period_picker_checkbox_label"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/interval_picker_around_clock"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="@dimen/extended_profile_settings_horizontal_margin"
        app:layout_constraintBottom_toBottomOf="@+id/ext_profile_period_picker_checkbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ext_profile_period_picker_checkbox"
        app:layout_constraintTop_toTopOf="@+id/ext_profile_period_picker_checkbox"/>
    <com.avito.android.lib.design.button.Button
        android:layout_gravity="bottom"
        android:id="@+id/ext_profile_period_picker_save_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:text="@string/edit_address_save"
        android:layout_marginHorizontal="@dimen/extended_profile_settings_horizontal_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ext_profile_period_picker_checkbox_label"
        style="?attr/buttonPrimaryLarge"/>
</androidx.constraintlayout.widget.ConstraintLayout>
