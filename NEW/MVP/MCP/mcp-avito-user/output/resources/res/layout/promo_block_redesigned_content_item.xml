<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/publish_promo_block_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?attr/textH30"/>
    <TextView
        android:id="@+id/publish_promo_block_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        style="?attr/textM10"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/publish_promo_block_action_btn"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        style="?attr/buttonOverlayPrimaryMedium"/>
</LinearLayout>
