<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="vertical"
    android:id="@+id/start_multiprofile_publish_wrapper"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <TextView
        android:textAppearance="?attr/textH25"
        android:textColor="?attr/text_primary"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="16dp"/>
    <include
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        layout="@layout/publish_start_profile_selector_redesigned"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:textColor="?attr/text_primary"
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="16dp"/>
    <LinearLayout
        android:layout_gravity="bottom|center_horizontal"
        android:orientation="vertical"
        android:background="@drawable/bg_passport_bottom_sheet_buttons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="24dp">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/buttons_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="10dp"/>
    </LinearLayout>
</LinearLayout>
