<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal"
    android:id="@+id/banner_root_view"
    android:background="@drawable/str_seller_orders_calendar_banner_bg"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@+id/banner_image_view"
        android:layout_alignParentStart="true">
        <TextView
            android:textAppearance="?attr/textH30"
            android:textStyle="bold"
            android:id="@+id/banner_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textAppearance="?attr/textM10"
            android:id="@+id/banner_subtitle_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/banner_image_view"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        android:layout_marginEnd="4dp"
        android:layout_alignParentEnd="true"/>
    <ImageView
        android:id="@+id/banner_close_icon_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="6dp"
        android:src="?attr/ic_close24"
        android:scaleType="centerInside"
        android:layout_alignParentTop="true"
        android:contentDescription="@null"
        android:layout_marginEnd="6dp"
        android:layout_alignParentEnd="true"
        android:elevation="1dp"/>
</RelativeLayout>
