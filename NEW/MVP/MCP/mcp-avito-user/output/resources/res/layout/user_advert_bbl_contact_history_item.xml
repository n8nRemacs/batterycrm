<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="vertical"
    android:id="@+id/bbl_contact_history_container"
    android:background="@drawable/user_advert_bg_bbl_contact_history"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    android:layout_marginHorizontal="16dp"
    android:paddingHorizontal="20dp"
    android:paddingVertical="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAppearance="?attr/textH50"
            android:id="@+id/bbl_contact_history_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="16dp"/>
        <TextView
            android:textAppearance="?attr/textH50"
            android:id="@+id/bbl_contact_history_about_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:textAppearance="?attr/textM1"
        android:id="@+id/bbl_contact_history_history"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/bbl_contact_history_contacts_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        style="?attr/buttonOverlayPrimaryMedium"/>
</LinearLayout>
