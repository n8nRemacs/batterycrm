<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="vertical"
    android:id="@+id/service_list_item_root"
    android:background="?attr/selectableItemBackground"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp"
    android:paddingVertical="11dp">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image"
        android:clickable="false"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginRight="12dp"
        android:scaleType="centerInside"
        app:backgroundImage="@drawable/rounded_background_r12"
        app:roundedCornerRadius="12dp"/>
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/icon"
        android:clickable="false"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="11dp"
        android:layout_toRightOf="@+id/image"
        app:actualImageScaleType="fitXY"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/icon"
        android:layout_centerVertical="true">
        <TextView
            android:textAppearance="?attr/textM20"
            android:textColor="?attr/text_primary"
            android:ellipsize="end"
            android:id="@+id/title"
            android:clickable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"/>
        <TextView
            android:textAppearance="?attr/textM20"
            android:textColor="?attr/text_secondary"
            android:ellipsize="end"
            android:id="@+id/subtitle"
            android:clickable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"/>
    </LinearLayout>
</RelativeLayout>
