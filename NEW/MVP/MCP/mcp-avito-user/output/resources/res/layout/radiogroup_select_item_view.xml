<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/radio_group_select_item_container"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textColor="?attr/orange900"
        android:id="@+id/warning_text"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/publish_container_horizontal_padding"
        style="?attr/textM20"/>
    <com.avito.android.lib.design.radio.RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/publish_container_horizontal_padding"
        android:paddingEnd="@dimen/publish_container_horizontal_padding"/>
</LinearLayout>
