<?xml version="1.0" encoding="utf-8"?>
<com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="?attr/shimmerDefault">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="16dp">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp">
            <com.avito.android.lib.design.skeleton.Skeleton
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginEnd="12dp"
                app:skeleton_radius="12dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <com.avito.android.lib.design.skeleton.Skeleton
                    android:layout_width="164dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    app:skeleton_radius="6dp"/>
                <com.avito.android.lib.design.skeleton.Skeleton
                    android:layout_width="132dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    app:skeleton_radius="6dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp">
            <com.avito.android.lib.design.skeleton.Skeleton
                android:layout_width="132dp"
                android:layout_height="16dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="17dp"
                app:skeleton_radius="6dp"/>
            <com.avito.android.lib.design.skeleton.Skeleton
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="4dp"
                app:skeleton_radius="16dp"/>
            <com.avito.android.lib.design.skeleton.Skeleton
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="6dp"
                app:skeleton_radius="16dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp">
            <com.avito.android.lib.design.skeleton.Skeleton
                android:layout_width="132dp"
                android:layout_height="16dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="17dp"
                app:skeleton_radius="6dp"/>
            <com.avito.android.lib.design.skeleton.Skeleton
                android:layout_width="164dp"
                android:layout_height="10dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="10dp"
                app:skeleton_radius="6dp"/>
            <com.avito.android.lib.design.skeleton.Skeleton
                android:layout_width="132dp"
                android:layout_height="10dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="4dp"
                app:skeleton_radius="6dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:paddingTop="14dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/booking_form_footer_height"
        android:paddingStart="16dp"
        android:paddingEnd="10dp"
        android:elevation="12dp"
        android:paddingHorizontal="16dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <com.avito.android.lib.design.skeleton.Skeleton
                android:layout_width="132dp"
                android:layout_height="16dp"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="8dp"
                app:skeleton_radius="6dp"/>
            <com.avito.android.lib.design.skeleton.Skeleton
                android:layout_width="89dp"
                android:layout_height="9dp"
                android:layout_marginBottom="4dp"
                app:skeleton_radius="6dp"/>
        </LinearLayout>
        <com.avito.android.lib.design.skeleton.Skeleton
            android:layout_width="172dp"
            android:layout_height="52dp"
            app:skeleton_radius="12dp"/>
    </LinearLayout>
</com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout>
