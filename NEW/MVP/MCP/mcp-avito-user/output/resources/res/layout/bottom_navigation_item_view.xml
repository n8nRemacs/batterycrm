<?xml version="1.0" encoding="utf-8"?>
<com.avito.android.bottom_navigation.ui.BottomNavigationTabView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/expected_tabbar_background"
    android:clipChildren="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_gravity="top"
        android:background="?attr/gray8"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <com.avito.android.fresco.SimpleDraweeView
        android:layout_gravity="bottom|center_horizontal"
        android:id="@+id/bn_icon"
        android:duplicateParentState="true"
        android:layout_width="@dimen/bottom_nav_icon_size"
        android:layout_height="@dimen/bottom_nav_icon_size"
        android:layout_marginBottom="@dimen/bottom_nav_icon_bottom_offset"
        app:roundAsCircle="true"/>
    <ImageView
        android:layout_gravity="bottom|center_horizontal"
        android:id="@+id/bn_current_stroke"
        android:visibility="gone"
        android:duplicateParentState="true"
        android:layout_width="@dimen/bottom_nav_icon_size"
        android:layout_height="@dimen/bottom_nav_icon_size"
        android:layout_marginBottom="@dimen/bottom_nav_icon_bottom_offset"
        app:srcCompat="@drawable/bg_bn_tab_profile_current"/>
    <TextView
        android:textSize="@dimen/bottom_nav_title_text_size"
        android:textColor="?attr/constantWhite"
        android:gravity="center"
        android:layout_gravity="bottom|center_horizontal"
        android:id="@+id/bn_badge"
        android:background="@drawable/bg_badge_red"
        android:paddingLeft="@dimen/bottom_nav_badge_horizontal_padding"
        android:paddingRight="@dimen/bottom_nav_badge_horizontal_padding"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/bottom_nav_badge_size"
        android:layout_marginBottom="@dimen/bottom_nav_badge_bottom_offset"
        android:minWidth="@dimen/bottom_nav_badge_size"/>
    <TextView
        android:textSize="@dimen/bottom_nav_title_text_size"
        android:layout_gravity="bottom|center_horizontal"
        android:id="@+id/bn_title"
        android:duplicateParentState="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/bottom_nav_title_bottom_offset"/>
    <TextView
        android:textSize="@dimen/bottom_nav_pro_text_size"
        android:textColor="?attr/white"
        android:gravity="center"
        android:id="@+id/bn_pro"
        android:background="@drawable/bg_bn_pro"
        android:visibility="gone"
        android:duplicateParentState="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tab_badge_pro"
        android:paddingStart="3dp"
        android:paddingEnd="3dp"/>
</com.avito.android.bottom_navigation.ui.BottomNavigationTabView>
