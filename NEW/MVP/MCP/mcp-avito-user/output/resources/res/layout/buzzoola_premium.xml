<?xml version="1.0" encoding="utf-8"?>
<com.avito.android.lib.util.layout.ForegroundRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/premium_ad_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.avito.android.lib.util.layout.RatioForegroundFrameLayout
        android:id="@+id/gallery_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/gallery"
            android:clipToPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:overScrollMode="never"/>
        <ViewStub
            android:id="@+id/legal_overlay_container"
            android:visibility="gone"
            android:layout="@layout/buzzoola_premium_legal_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.avito.android.lib.util.layout.RatioForegroundFrameLayout>
    <ImageView
        android:id="@+id/action_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginRight="24dp"
        android:layout_below="@+id/gallery_container"
        android:layout_alignParentRight="true"
        app:tint="?attr/blue"/>
    <com.avito.android.fresco.SimpleDraweeView
        android:id="@+id/logo"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:layout_below="@+id/gallery_container"
        app:actualImageScaleType="centerCrop"
        app:roundedCornerRadius="3dp"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/premium_ad_text_right_margin"
        android:layout_toLeftOf="@+id/action_icon"
        android:layout_toRightOf="@+id/logo"
        android:layout_below="@+id/gallery_container"
        android:layout_alignWithParentIfMissing="true"
        style="@style/Widget.Avito.TextView.Serp.Item.Caption.Rich.Title"/>
    <TextView
        android:textColor="?attr/gray44"
        android:id="@+id/description"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/premium_ad_text_right_margin"
        android:maxLines="2"
        android:singleLine="false"
        android:layout_toLeftOf="@+id/action_icon"
        android:layout_toRightOf="@+id/logo"
        android:layout_below="@+id/title"
        android:layout_alignWithParentIfMissing="true"
        style="@style/Widget.Avito.TextView.Serp.Item.Caption.Rich.Subtitle"/>
    <TextView
        android:id="@+id/call_to_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/logo"
        android:layout_below="@+id/description"
        style="@style/Widget.Avito.TextView.Ad.CallToAction"/>
</com.avito.android.lib.util.layout.ForegroundRelativeLayout>
