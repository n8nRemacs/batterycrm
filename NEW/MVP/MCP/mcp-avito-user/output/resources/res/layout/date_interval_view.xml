<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.avito.android.lib.design.list_item.ListItemSwitcher
        android:id="@+id/till_present_switcher"
        android:paddingLeft="@dimen/publish_container_horizontal_padding"
        android:paddingRight="@dimen/publish_container_horizontal_padding"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="12dp"
        app:layout_autoReset="always"
        style="?attr/listItemSwitcher"/>
    <com.avito.android.lib.design.component_container.ComponentContainer
        android:orientation="horizontal"
        android:id="@+id/period_container"
        android:paddingLeft="@dimen/publish_container_horizontal_padding"
        android:paddingTop="12dp"
        android:paddingRight="@dimen/publish_container_horizontal_padding"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.avito.android.lib.design.input.Input
            android:id="@+id/start_date_select"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/since"
            android:singleLine="true"
            android:inputType="textNoSuggestions"
            app:layout_autoReset="notNormalOnly"
            app:layout_weight="1"
            style="?attr/baseSelect"/>
        <com.avito.android.lib.design.input.Input
            android:id="@+id/end_date_select"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/till"
            android:singleLine="true"
            android:inputType="textNoSuggestions"
            app:layout_autoReset="notNormalOnly"
            app:layout_weight="1"
            style="?attr/baseSelect"/>
    </com.avito.android.lib.design.component_container.ComponentContainer>
</LinearLayout>
