<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/development_grid_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.avito.android.lib.util.layout.ForegroundRelativeLayout
        android:id="@+id/advert_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.Avito.Serp.Item.Card">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/serp_card_image_height"
            style="@style/Widget.Avito.SimpleDraweeView.Serp.Item.Image"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/text_content"
            android:paddingLeft="@dimen/serp_card_horizontal_padding"
            android:paddingTop="2dp"
            android:paddingRight="@dimen/serp_card_horizontal_padding"
            android:paddingBottom="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="44dp"
            android:layout_below="@+id/image">
            <TextView
                android:textAppearance="?attr/textM1"
                android:ellipsize="end"
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:maxLines="2"/>
            <TextView
                android:textAppearance="?attr/textH5"
                android:ellipsize="end"
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:singleLine="true"/>
            <TextView
                android:textAppearance="?attr/textS1"
                android:textColor="?attr/gray48"
                android:ellipsize="end"
                android:id="@+id/period"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:maxLines="1"/>
            <TextView
                android:textAppearance="?attr/textS1"
                android:textColor="?attr/gray48"
                android:ellipsize="end"
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:maxLines="2"/>
        </LinearLayout>
    </com.avito.android.lib.util.layout.ForegroundRelativeLayout>
</FrameLayout>
