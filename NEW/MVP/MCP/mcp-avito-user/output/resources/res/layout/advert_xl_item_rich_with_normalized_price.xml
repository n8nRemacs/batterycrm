<?xml version="1.0" encoding="utf-8"?>
<com.avito.android.lib.util.layout.ForegroundRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/advert_content"
    android:tag="rich_snippet"
    android:paddingTop="@dimen/rich_snippet_padding_top"
    android:paddingBottom="14dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="@drawable/rich_item_fg">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/gallery"
        android:paddingLeft="@dimen/rich_snippet_padding_left"
        android:paddingRight="@dimen/rich_snippet_padding_right"
        android:clipToPadding="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:overScrollMode="never"/>
    <FrameLayout
        android:id="@+id/btn_call"
        android:background="@drawable/design_background_button_accent_dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rich_snippet_padding_left"
        android:layout_marginRight="@dimen/rich_snippet_padding_right"
        android:layout_marginBottom="6dp"
        android:layout_below="@+id/gallery">
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="16sp"
            android:textColor="?attr/constantWhite"
            android:layout_gravity="center"
            android:id="@+id/call_button_text"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="7dp"
            app:drawableLeftCompat="@drawable/call_white"
            style="@style/Deprecated.Theme.Internal.Button.Flat.Rich"/>
        <com.avito.android.lib.deprecated_design.circular_progress.CircularProgressBar
            android:layout_gravity="center"
            android:id="@+id/phone_loader"
            android:visibility="gone"
            android:clickable="true"
            android:layout_width="12dp"
            android:layout_height="12dp"
            app:cpb_color="?attr/white"
            app:cpb_stroke_width="1.5dp"
            style="@style/Widget.Avito.CircularProgressBar.Light"/>
    </FrameLayout>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/btn_booking"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="@dimen/rich_snippet_padding_left"
        android:layout_marginRight="@dimen/rich_snippet_padding_right"
        android:layout_marginBottom="6dp"
        android:layout_below="@+id/btn_call"
        style="?attr/buttonPrimaryLarge"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/price_container"
        android:paddingLeft="@dimen/rich_snippet_padding_left"
        android:paddingRight="@dimen/rich_snippet_padding_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_booking">
        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/price_container_flex"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:flexDirection="row"
            app:flexWrap="wrap"
            app:layout_constraintEnd_toStartOf="@+id/btn_favorite"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <androidx.appcompat.widget.AppCompatTextView
                android:textAppearance="?attr/textHeadingLarge"
                android:gravity="center_vertical"
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="7dp"
                android:layout_marginEnd="6dp"/>
            <TextView
                android:textAppearance="?attr/textBodySmall"
                android:textColor="?attr/gray48"
                android:id="@+id/quorum_filter_info"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="6dp"
                app:layout_alignSelf="baseline"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:textAppearance="?attr/textBodySmall"
                android:textColor="?attr/gray48"
                android:id="@+id/discount"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_alignSelf="baseline"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:textAppearance="?attr/textBodySmall"
                android:textColor="?attr/gray48"
                android:id="@+id/normalized_price"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                app:layout_alignSelf="baseline"/>
        </com.google.android.flexbox.FlexboxLayout>
        <TextView
            android:textAppearance="?attr/textBodySmall"
            android:textColor="?attr/gray48"
            android:id="@+id/price_without_discount"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/btn_favorite"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/price_container_flex"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="48dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintEnd_toStartOf="@+id/btn_favorite"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/price_without_discount"
            style="@style/Widget.Avito.TextView.Serp.Item.Caption.Rich.Title"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/realtor_bonus"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="48dp"
            app:layout_constraintEnd_toStartOf="@+id/btn_favorite"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title"
            style="@style/Widget.Avito.TextView.Serp.Item.Caption.Rich.Subtitle"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/additional_name"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:drawablePadding="@dimen/delivery_icon_advert_item_padding"
            app:layout_constraintEnd_toStartOf="@+id/btn_favorite"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/realtor_bonus"
            style="@style/Widget.Avito.TextView.Serp.Item.Caption.Rich.Subtitle"/>
        <ru.avito.component.snippet_badge_bar.SnippetBadgeBar
            android:id="@+id/badge_bar"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            app:layout_constraintEnd_toStartOf="@+id/btn_favorite"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/additional_name"
            app:snippetBadgeBar_maxLines="2"/>
        <com.google.android.material.internal.CheckableImageButton
            android:id="@+id/btn_favorite"
            android:background="@drawable/bg_btn_circle_gray_rich"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/advert_item_rich_favorite_red"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:orientation="vertical"
        android:paddingLeft="@dimen/rich_snippet_padding_left"
        android:paddingRight="@dimen/rich_snippet_padding_right"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/price_container">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/specification"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:maxLines="2"
            style="@style/Widget.Avito.TextView.Serp.Item.Caption.Rich.Subtitle"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/seller_layout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/seller"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="48dp"
                style="@style/Widget.Avito.TextView.Serp.Item.Caption.Rich.Subtitle"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/seller_since"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="48dp"
                style="@style/Widget.Avito.TextView.Serp.Item.Caption.Rich.Subtitle.Secondary"/>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/verification"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="4dp"
            style="@style/Widget.Avito.TextView.Serp.Item.Caption.Rich.Subtitle"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="2dp"
            android:maxLines="2"
            style="@style/Widget.Avito.TextView.Serp.Item.Caption.Rich.Subtitle"/>
        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            layout="@layout/advert_item_geo_reference_layout"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/address"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            style="@style/Widget.Avito.TextView.Serp.Item.Caption.Rich.Subtitle.Secondary"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/delivery_terms"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            style="@style/Widget.Avito.TextView.Serp.Item.Caption.Secondary"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/date"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.Avito.TextView.Serp.Item.Caption.Rich.Subtitle.Secondary"/>
    </LinearLayout>
</com.avito.android.lib.util.layout.ForegroundRelativeLayout>
