<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@drawable/errors_counter_bg"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="16dp">
    <TextView
        android:textAppearance="?attr/textM20"
        android:layout_gravity="center_vertical"
        android:id="@+id/counter_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginEnd="12dp"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/error_navigation_button"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="?attr/ic_arrowForward16"
        android:rotation="90"
        style="?attr/buttonSecondarySmall"/>
</LinearLayout>
