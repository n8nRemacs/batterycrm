<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_select"
    android:background="@drawable/bg_subsidy_card_select"
    android:clipChildren="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp">
    <com.avito.android.lib.design.badge.Badge
        android:id="@+id/badge"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-3dp"
        android:layout_marginStart="24dp"
        app:badge_backgroundColor="@color/red700"
        app:badge_showAnimation_duration="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="?attr/badgeTextRedXS"/>
    <TextView
        android:textAppearance="?attr/textH4"
        android:textColor="?attr/black"
        android:id="@+id/card_select_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.avito.android.lib.design.strikethrough.StrikethroughTextView
        android:textAppearance="?attr/textS10"
        android:textColor="?attr/black"
        android:id="@+id/card_cross_text"
        android:paddingBottom="2dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/card_select_title"
        app:layout_constraintStart_toEndOf="@+id/card_select_title"
        app:layout_constraintTop_toTopOf="@+id/card_select_title"
        app:strikethrough_tint="?attr/red600"/>
    <TextView
        android:textAppearance="?attr/textS1"
        android:textColor="?attr/black"
        android:id="@+id/card_select_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/card_select_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_select_title"/>
    <com.avito.android.fresco.SimpleDraweeView
        android:id="@+id/card_select_image"
        android:layout_width="102dp"
        android:layout_height="82dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="44dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.avito.android.lib.design.toggle.Checkmark
        android:id="@+id/card_select_checkmark"
        android:duplicateParentState="true"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.avito.android.lib.design.point.Point
        android:id="@+id/card_select_point"
        android:visibility="gone"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:point_color="?attr/white"
        app:point_disableAnimationPreview="true"
        app:point_size="24dp"
        style="?attr/pointSuccessLarge"/>
</androidx.constraintlayout.widget.ConstraintLayout>
