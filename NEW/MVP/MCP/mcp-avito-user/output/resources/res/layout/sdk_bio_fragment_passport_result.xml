<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/sdkBioBackgroundPrimaryColor"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ru.mts.biometry.sdk.view.SdkBioToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:sdkBioToolbarHintIcon="@drawable/sdk_bio_ic_close"/>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sdk_bio_toolbar_height">
            <TextView
                android:textAppearance="?attr/sdkBioTextAppearanceHeader"
                android:id="@+id/passport_fields_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sdk_bio_title_result_passport_data"
                android:paddingHorizontal="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textAppearance="?attr/sdkBioTextAppearanceRegularText"
                android:textColor="?attr/sdkBioTextSecondaryColor"
                android:id="@+id/confirmationMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/sdk_bio_message_confirm_not_accepted"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/passport_fields_title"/>
            <ru.mts.biometry.sdk.view.SdkBioEditText
                android:id="@+id/surname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:inputType="text"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:hint="@string/sdk_bio_title_passport_surname"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/confirmationMessage"
                app:topLabel="@string/sdk_bio_title_passport_surname"/>
            <ru.mts.biometry.sdk.view.SdkBioEditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:inputType="text"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:hint="@string/sdk_bio_title_passport_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/surname"
                app:topLabel="@string/sdk_bio_title_passport_name"/>
            <ru.mts.biometry.sdk.view.SdkBioEditText
                android:id="@+id/patronymic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:inputType="text"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:hint="@string/sdk_bio_title_passport_patronymic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/name"
                app:topLabel="@string/sdk_bio_title_passport_patronymic"/>
            <ru.mts.biometry.sdk.view.SdkBioEditText
                android:id="@+id/birthDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:inputType="text"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:hint="@string/sdk_bio_title_passport_date_birth"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/patronymic"
                app:topLabel="@string/sdk_bio_title_passport_date_birth"/>
            <ru.mts.biometry.sdk.view.SdkBioEditText
                android:id="@+id/gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:inputType="text"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:hint="@string/sdk_bio_title_passport_gender"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/birthDate"
                app:topLabel="@string/sdk_bio_title_passport_gender"/>
            <ru.mts.biometry.sdk.view.SdkBioEditText
                android:id="@+id/series"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:inputType="text"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:hint="@string/sdk_bio_title_passport_series"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gender"
                app:topLabel="@string/sdk_bio_title_passport_series"/>
            <ru.mts.biometry.sdk.view.SdkBioEditText
                android:id="@+id/number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:inputType="text"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:hint="@string/sdk_bio_title_passport_number"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline2"
                app:layout_constraintTop_toBottomOf="@+id/gender"
                app:topLabel="@string/sdk_bio_title_passport_number"/>
            <ru.mts.biometry.sdk.view.SdkBioEditText
                android:id="@+id/birthPlace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:lines="4"
                android:inputType="textMultiLine"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:hint="@string/sdk_bio_title_passport_birth_place"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/number"
                app:multiline="true"
                app:topLabel="@string/sdk_bio_title_passport_birth_place"/>
            <ru.mts.biometry.sdk.view.SdkBioEditText
                android:id="@+id/deliveryDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:inputType="text"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:hint="@string/sdk_bio_title_passport_delivery_date"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/birthPlace"
                app:topLabel="@string/sdk_bio_title_passport_delivery_date"/>
            <ru.mts.biometry.sdk.view.SdkBioEditText
                android:id="@+id/deliveryPlace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:lines="4"
                android:inputType="textMultiLine"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:hint="@string/sdk_bio_title_passport_delivery_department"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/deliveryDate"
                app:multiline="true"
                app:topLabel="@string/sdk_bio_title_passport_delivery_department"/>
            <ru.mts.biometry.sdk.view.SdkBioEditText
                android:id="@+id/departmentCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:inputType="text"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:hint="@string/sdk_bio_title_passport_department_code"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/deliveryPlace"
                app:topLabel="@string/sdk_bio_title_passport_department_code"/>
            <ru.mts.biometry.sdk.view.SdkBioEditText
                android:id="@+id/inn"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:inputType="number"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:hint="ИНН"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/departmentCode"
                app:topLabel="ИНН"/>
            <TextView
                android:textSize="17sp"
                android:id="@+id/innInfo"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/sdk_bio_tin_hint"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/inn"/>
            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/bottom_barrier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="innInfo, inn, departmentCode"/>
            <ru.mts.biometry.sdk.view.SdkBioButton
                android:id="@+id/btnRetry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bottom_barrier"
                app:sdkBioButtonTitle="@string/sdk_bio_title_retry_scan_full"
                app:sdkBioButtonType="secondary"/>
            <ru.mts.biometry.sdk.view.SdkBioButton
                android:id="@+id/btnAccept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnRetry"
                app:sdkBioButtonTitle="@string/sdk_bio_title_passport_accept"
                app:sdkBioButtonType="primary"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:textAppearance="?attr/sdkBioTextAppearanceCaptionText"
                android:textColor="?attr/sdkBioTextSecondaryColor"
                android:gravity="center"
                android:id="@+id/tv_info"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/sdk_bio_passport_bottom_rules"
                android:layout_marginHorizontal="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnRetry"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_info"/>
            <androidx.constraintlayout.widget.Guideline
                android:orientation="vertical"
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_percent="0.5"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
