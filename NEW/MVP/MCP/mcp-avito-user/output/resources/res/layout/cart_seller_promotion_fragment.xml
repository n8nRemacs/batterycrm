<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pull_to_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_width="0dp"
            android:layout_height="?android:attr/actionBarSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="?attr/ic_arrowBack24"
            app:navigationIconTint="?attr/black"
            app:titleCentered="true"
            app:titleTextAppearance="?attr/textH5">
            <include
                android:layout_gravity="end"
                android:id="@+id/cart_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                layout="@layout/redesign_cart_icon_view"/>
        </com.google.android.material.appbar.MaterialToolbar>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/top_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/main_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top_list"/>
        <com.avito.android.lib.design.shadow_layout.ShadowFrameLayout
            android:id="@+id/bottom_list_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/Delivery.UpperShadow.Large">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/bottom_list"
                android:background="@drawable/delivery_bottom_list_rounded_background_re23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_shadowEnabled="true"/>
        </com.avito.android.lib.design.shadow_layout.ShadowFrameLayout>
        <androidx.constraintlayout.widget.Group
            android:id="@+id/content_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="main_list,bottom_list_container"/>
        <FrameLayout
            android:id="@+id/overlay_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingHorizontal="?attr/horizontalOffset"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
