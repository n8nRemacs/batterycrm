<?xml version="1.0" encoding="utf-8"?>
<com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:shimmer="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="14dp"
    shimmer:shimmer_animationDuration="2500"
    shimmer:shimmer_autostart="true">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/estate_pic_iv"
                android:background="@drawable/str_seller_orders_important_to_note_str_orders_stub_12dp_bg"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"/>
            <View
                android:layout_gravity="end|bottom"
                android:id="@+id/buyer_pic_iv"
                android:background="@drawable/str_seller_orders_important_to_note_buyer_avatar_stub_bg"
                android:padding="2dp"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:translationX="@dimen/str_seller_orders_important_to_note_buyer_avatar_image_translation"
                android:translationY="@dimen/str_seller_orders_important_to_note_buyer_avatar_image_translation"
                android:importantForAccessibility="no"/>
        </FrameLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp">
            <View
                android:id="@+id/order_title_tv"
                android:background="@drawable/str_seller_orders_important_to_note_str_orders_stub_3dp_bg"
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:layout_marginTop="6dp"/>
            <View
                android:id="@+id/order_subtitle_tv"
                android:background="@drawable/str_seller_orders_important_to_note_str_orders_stub_3dp_bg"
                android:layout_width="170dp"
                android:layout_height="10dp"
                android:layout_marginTop="10dp"/>
            <View
                android:id="@+id/estate_info_tv"
                android:background="@drawable/str_seller_orders_important_to_note_str_orders_stub_3dp_bg"
                android:layout_width="220dp"
                android:layout_height="10dp"
                android:layout_marginTop="10dp"/>
            <View
                android:id="@+id/address_tv"
                android:background="@drawable/str_seller_orders_important_to_note_str_orders_stub_3dp_bg"
                android:layout_width="128dp"
                android:layout_height="10dp"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </LinearLayout>
</com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout>
