<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/program_container"
    android:background="@drawable/program_bg"
    android:layout_width="158dp"
    android:layout_height="wrap_content">
    <com.avito.android.lib.design.toggle.Checkmark
        android:enabled="true"
        android:id="@+id/program_checkmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:toggle_backgroundColor="@drawable/bg_checkmark"
        style="?attr/toggleCheckmarkDefaultMedium"/>
    <TextView
        android:textAppearance="?attr/textH60"
        android:ellipsize="end"
        android:id="@+id/program_title"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginTop="20dp"
        android:maxLines="1"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintEnd_toStartOf="@+id/program_checkmark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textS10"
        android:textColor="?attr/gray54"
        android:ellipsize="end"
        android:id="@+id/program_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/program_title"/>
    <TextView
        android:textAppearance="?attr/textH60"
        android:id="@+id/program_rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/program_subtitle"
        app:layout_constraintVertical_bias="0"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/program_alert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/program_rate"
        style="?attr/buttonOverlaySecondarySmall"/>
</androidx.constraintlayout.widget.ConstraintLayout>
