<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="vertical"
    android:id="@+id/hotel_available_rooms_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="?attr/ic_arrowBack24"
        app:navigationIconTint="?attr/black"
        app:title="@string/hotel_available_rooms_screen_title"
        app:titleCentered="true"
        app:titleTextAppearance="?attr/textH50"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/filters"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:paddingHorizontal="@dimen/hotel_available_rooms_horizontal_margin"
        android:paddingVertical="8dp"/>
    <include
        android:id="@+id/shimmer"
        android:visibility="gone"
        layout="@layout/hotel_available_rooms_shimmer"/>
    <include
        android:id="@+id/error"
        android:visibility="gone"
        layout="@layout/hotel_available_rooms_error"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rooms"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"/>
</LinearLayout>
