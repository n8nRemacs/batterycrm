<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="254dp">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/top_picture_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="2dp"
        android:layout_weight="1">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/image_view_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:overlayImage="@color/expected_advert_overlay"
            style="@style/Widget.Avito.SimpleDraweeView.Serp.Item.Image"/>
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/image_view_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="2dp"
            app:overlayImage="@color/expected_advert_overlay"
            style="@style/Widget.Avito.SimpleDraweeView.Serp.Item.Image"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/constructor_advert_video_page_root"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <com.google.android.exoplayer2.ui.StyledPlayerView
            android:id="@+id/player_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:resize_mode="zoom"
            app:shutter_background_color="@color/legacy_white"
            app:surface_type="texture_view"
            app:use_controller="false"/>
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/thumbnail_view"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:overlayImage="@color/expected_advert_overlay"
            style="@style/Widget.Avito.SimpleDraweeView.Serp.Item.Image"/>
    </FrameLayout>
</LinearLayout>
