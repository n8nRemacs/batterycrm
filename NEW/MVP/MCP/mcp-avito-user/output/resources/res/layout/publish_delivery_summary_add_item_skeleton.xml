<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/PublishParentTheme"
    android:orientation="vertical"
    android:id="@+id/delivery_summary_skeleton"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/summary_snippet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="@dimen/delivery_summary_add_card_horizontal_margin"
        app:cardCornerRadius="16dp">
        <com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:shimmer_animationDuration="3000"
            app:shimmer_autostart="true"
            style="?attr/shimmerDefault">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/snippet_container"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.avito.android.lib.design.skeleton.Skeleton
                    android:id="@+id/summary_image"
                    android:layout_width="81dp"
                    android:layout_height="81dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:skeleton_radius="16dp"/>
                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/text_start_barrier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:barrierDirection="end"
                    app:barrierMargin="16dp"
                    app:constraint_referenced_ids="summary_image"/>
                <com.avito.android.lib.design.skeleton.TextSkeleton
                    android:id="@+id/summary_advert_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    app:layout_constraintBottom_toTopOf="@+id/summary_advert_name"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/text_start_barrier"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="spread"
                    style="?attr/textM20"/>
                <com.avito.android.lib.design.skeleton.TextSkeleton
                    android:ellipsize="end"
                    android:id="@+id/summary_advert_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:lines="1"
                    app:layout_constraintBottom_toTopOf="@+id/summary_advert_description"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/text_start_barrier"
                    app:layout_constraintTop_toBottomOf="@+id/summary_advert_price"
                    style="?attr/textM20"/>
                <com.avito.android.lib.design.skeleton.TextSkeleton
                    android:ellipsize="end"
                    android:id="@+id/summary_advert_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:lines="1"
                    app:layout_constraintBottom_toTopOf="@+id/summary_advert_seller"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/text_start_barrier"
                    app:layout_constraintTop_toBottomOf="@+id/summary_advert_name"
                    style="?attr/textM20"/>
                <com.avito.android.lib.design.skeleton.TextSkeleton
                    android:textColor="?attr/components_control_text_secondary"
                    android:ellipsize="end"
                    android:id="@+id/summary_advert_seller"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/text_start_barrier"
                    app:layout_constraintTop_toBottomOf="@+id/summary_advert_description"
                    style="?attr/textS20"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout>
    </androidx.cardview.widget.CardView>
    <com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shimmer_animationDuration="3000"
        app:shimmer_autostart="true"
        style="?attr/shimmerDefault">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.avito.android.lib.design.skeleton.TextSkeleton
                android:id="@+id/text_view_stub_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginHorizontal="@dimen/delivery_summary_add_view_horizontal_padding"
                style="?attr/textH10"/>
            <com.avito.android.lib.design.skeleton.TextSkeleton
                android:id="@+id/text_view_stub_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/delivery_summary_add_view_horizontal_padding"
                style="?attr/textH20"/>
            <com.avito.android.lib.design.skeleton.TextSkeleton
                android:id="@+id/text_view_stub_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/delivery_summary_add_view_horizontal_padding"
                style="?attr/textH20"/>
            <com.avito.android.lib.design.skeleton.TextSkeleton
                android:id="@+id/text_view_stub_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/delivery_summary_add_view_horizontal_padding"
                style="?attr/textH20"/>
        </LinearLayout>
    </com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout>
</LinearLayout>
