<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:id="@+id/promotion_snippet_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="@drawable/seller_promotions_snippet_ripple">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/snippet_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:actualImageScaleType="centerCrop"
        app:failureImage="?attr/img_logoPhotoPlaceholder"
        app:failureImageScaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:overlayImage="@color/seller_promotion_snippet_overlay_color"
        app:placeholderImage="?attr/img_logoPhotoPlaceholder"
        app:placeholderImageScaleType="fitCenter"
        app:roundedCornerRadius="@dimen/seller_promotions_snippet_corner_radius"
        app:viewAspectRatio="1"/>
    <TextView
        android:textAppearance="?attr/textH4"
        android:id="@+id/snippet_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/snippet_favorite_button"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/snippet_image"
        app:layout_constraintWidth_max="wrap"/>
    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/snippet_discount"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="snippet_old_price,snippet_discount_percents"
        app:flow_horizontalAlign="start"
        app:flow_horizontalBias="0"
        app:flow_horizontalGap="4dp"
        app:flow_horizontalStyle="packed"
        app:flow_verticalAlign="top"
        app:flow_verticalBias="0"
        app:flow_verticalGap="2dp"
        app:flow_verticalStyle="packed"
        app:flow_wrapMode="chain"
        app:layout_constraintEnd_toStartOf="@+id/snippet_favorite_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/snippet_price"/>
    <com.avito.android.lib.design.strikethrough.StrikethroughTextView
        android:textAppearance="?attr/textM20"
        android:textColor="?attr/gray54"
        android:id="@+id/snippet_old_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        app:strikethrough_show="true"
        app:strikethrough_tint="?attr/red600"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:textColor="?attr/red600"
        android:id="@+id/snippet_discount_percents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageButton
        android:id="@+id/snippet_favorite_button"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="?attr/ic_favorites24"
        android:contentDescription="@string/seller_promotions_favorite_icon_description"
        android:layout_marginStart="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/snippet_price"
        app:layout_constraintTop_toTopOf="@+id/snippet_price"/>
    <TextView
        android:textAppearance="?attr/textM2"
        android:ellipsize="end"
        android:id="@+id/snippet_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:maxLines="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/snippet_discount"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/snippet_beduin_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/snippet_title"/>
    <com.avito.android.cart_snippet_actions.CartActionsViewImpl
        android:id="@+id/snippet_cart_actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cartActionsView_buttonStyle="?attr/buttonPaySecondaryMedium"
        app:cartActionsView_style="button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/snippet_beduin_list"
        app:layout_goneMarginTop="10dp"/>
    <TextView
        android:textAppearance="?attr/textS2"
        android:textColor="?attr/gray48"
        android:id="@+id/snippet_cart_message"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/snippet_cart_item_unavailable"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/snippet_beduin_list"/>
</androidx.constraintlayout.widget.ConstraintLayout>
