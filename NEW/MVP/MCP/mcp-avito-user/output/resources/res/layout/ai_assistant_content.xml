<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/bg_elevation1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/content_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/input_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/navbar">
        <com.avito.android.lib.design.spinner.Spinner
            android:layout_gravity="center"
            android:id="@+id/progress_spinner"
            android:layout_width="28dp"
            android:layout_height="28dp"
            style="?attr/spinnerDarkLarge"/>
        <include layout="@layout/design_error_layout"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:id="@+id/recycler"
            android:scrollbars="vertical"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/input_container"
        android:background="@drawable/ai_assistant_input_shape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:minHeight="106dp"
        android:layout_marginHorizontal="@dimen/ai_assistant_horizontal_offset"
        app:layout_constraintBottom_toTopOf="@+id/disclaimer_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <com.avito.android.lib.design.input.InputField
            android:textAppearance="?attr/textBody"
            android:textColorHint="?attr/gray54"
            android:id="@+id/input_field"
            android:background="@drawable/ai_assistant_field_shape"
            android:paddingTop="14dp"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="48dp"
            android:hint="@string/ai_assistant_input_hint"
            android:maxLines="5"
            android:maxLength="1000"
            android:imeOptions="actionUnspecified"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="5dp"/>
        <FrameLayout
            android:layout_gravity="end|bottom"
            android:id="@+id/send_container"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginBottom="6dp"
            android:layout_marginEnd="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/send_button"
                android:background="@drawable/ai_assistant_send_icon_shape"
                android:visibility="visible"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginHorizontal="6dp"
                android:layout_marginVertical="6dp"/>
            <TextView
                android:textAppearance="?attr/textM2"
                android:textColor="?attr/white"
                android:layout_gravity="center"
                android:id="@+id/send_text"
                android:paddingBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="0.5dp"/>
        </FrameLayout>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/disclaimer_container"
        android:paddingBottom="20dp"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:textAppearance="?attr/textS20"
            android:textColor="?attr/gray48"
            android:gravity="center"
            android:id="@+id/disclaimer_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </FrameLayout>
    <com.avito.android.lib.design.nav_bar.NavBar
        android:id="@+id/navbar"
        android:layout_width="0dp"
        android:layout_height="@dimen/ai_assistant_navbar_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navBar_backgroundColor="?attr/bg_elevation1"/>
</androidx.constraintlayout.widget.ConstraintLayout>
