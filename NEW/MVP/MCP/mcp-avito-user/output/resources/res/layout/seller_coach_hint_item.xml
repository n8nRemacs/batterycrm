<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="154dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cc_advert_hint_card"
        android:layout_width="match_parent"
        android:layout_height="154dp"
        android:foreground="?attr/selectableItemBackground">
        <TextView
            android:textAppearance="?attr/textS2"
            android:textColor="?attr/gray54"
            android:gravity="center"
            android:id="@+id/advert_hint_card_header"
            android:paddingTop="20dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:singleLine="true"
            android:drawablePadding="6dp"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingHorizontal="20dp"
            app:drawableTint="?attr/gray48"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textAppearance="?attr/textH4"
            android:ellipsize="end"
            android:id="@+id/advert_hint_card_title"
            android:paddingTop="13dp"
            android:paddingBottom="2dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:paddingHorizontal="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/advert_hint_card_header"/>
        <TextView
            android:textAppearance="?attr/textS2"
            android:ellipsize="end"
            android:id="@+id/advert_hint_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:paddingHorizontal="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/advert_hint_card_title"
            app:layout_constraintWidth_default="wrap"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
