<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/user_profile_services_seller_subscription_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/UserProfileCardContainer">
    <TextView
        android:textAppearance="?attr/textH5"
        android:id="@+id/services_seller_subscription_card_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_padding"
        android:maxLines="1"
        android:layout_marginStart="@dimen/standard_padding"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textM1"
        android:id="@+id/services_seller_subscription_card_description"
        android:paddingBottom="@dimen/standard_padding"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/services_seller_subscription_card_title"
        app:layout_constraintTop_toBottomOf="@+id/services_seller_subscription_card_title"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/services_seller_subscription_card_barrier"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="services_seller_subscription_card_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <View
        android:id="@+id/services_seller_subscription_card_line"
        android:background="?attr/gray8"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/services_seller_subscription_card_barrier"/>
    <include
        android:id="@+id/services_seller_subscription_action_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/services_seller_subscription_card_line"
        layout="@layout/button_flat_card"/>
</androidx.constraintlayout.widget.ConstraintLayout>
