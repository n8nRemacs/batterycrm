<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="8dp"
    android:layout_width="42dp"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/v_left_border"
        android:background="?attr/warmGray8"
        android:layout_width="1dp"
        android:layout_height="@dimen/position_in_search_stats_column_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/v_right_border"
        android:background="?attr/warmGray8"
        android:layout_width="1dp"
        android:layout_height="@dimen/position_in_search_stats_column_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <FrameLayout
        android:id="@+id/fl_position_container"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/v_right_border"
        app:layout_constraintEnd_toStartOf="@+id/v_right_border"
        app:layout_constraintStart_toEndOf="@+id/v_left_border"
        app:layout_constraintTop_toTopOf="@+id/v_right_border"/>
    <TextView
        android:textAppearance="?attr/textS1"
        android:gravity="center"
        android:id="@+id/tv_date_item_chart_dynamic"
        android:paddingTop="8dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v_right_border"/>
    <TextView
        android:textAppearance="?attr/textS1"
        android:textColor="?attr/gray54"
        android:gravity="center"
        android:id="@+id/tv_week_item_chart_dynamic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_date_item_chart_dynamic"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_vases_chart_dynamic"
        android:paddingTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_week_item_chart_dynamic"/>
</androidx.constraintlayout.widget.ConstraintLayout>
