<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/advert_grid_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.avito.android.lib.util.layout.ForegroundRelativeLayout
        android:id="@+id/advert_content"
        android:clipChildren="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.Avito.Serp.Item.Card">
        <com.avito.android.design.widget.ClickableGalleryPager
            android:id="@+id/image_pager"
            android:layout_width="match_parent"
            android:layout_height="@dimen/serp_card_image_height"
            style="@style/Widget.Avito.SimpleDraweeView.Serp.Item.Image"/>
        <TextView
            android:textSize="@dimen/small_text_size"
            android:textColor="?attr/constantWhite"
            android:gravity="center_vertical"
            android:id="@+id/page_indicator"
            android:background="@drawable/advert_xl_page_indicator_bg"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginBottom="10dp"
            app:fontFamily="?attr/fontHeavy"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/text_content"
            android:paddingLeft="@dimen/serp_card_horizontal_padding"
            android:paddingTop="2dp"
            android:paddingRight="@dimen/serp_card_horizontal_padding"
            android:paddingBottom="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="44dp"
            android:layout_below="@+id/image_pager">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="28dp"
                style="@style/Widget.Avito.TextView.Serp.Item.Caption.Title"/>
            <com.avito.android.lib.util.layout.InverseLinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="28dp">
                <androidx.appcompat.widget.AppCompatTextView
                    android:gravity="center_vertical"
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/delivery_icon_advert_item_padding"
                    style="@style/Widget.Avito.TextView.Serp.Item.Caption.Price"/>
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/delivery"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/delivery_icon_advert_item_padding"
                    app:srcCompat="@drawable/ic_delivery_16"/>
                <ImageView
                    android:theme="@style/Theme.DesignSystem.Re23"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/discount_icon"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/discount_icon_large_padding"
                    app:srcCompat="?attr/ic_discount16"
                    app:tint="?attr/blue500"/>
            </com.avito.android.lib.util.layout.InverseLinearLayout>
            <TextView
                android:ellipsize="end"
                android:id="@+id/quorum_filter_info"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                style="@style/Widget.Avito.TextView.Serp.Item.Caption.Secondary"/>
            <TextView
                android:id="@+id/price_without_discount"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="28dp"
                style="@style/Widget.Avito.TextView.Serp.Item.Caption.Secondary"/>
            <com.avito.android.lib.util.layout.InverseLinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                    android:gravity="center_vertical"
                    android:id="@+id/discount"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:drawablePadding="4dp"
                    style="@style/Widget.Avito.TextView.Serp.Item.Caption.Discount"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:textColor="?attr/red600"
                    android:id="@+id/discount_percentage"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="4dp"
                    style="@style/Widget.Avito.TextView.Serp.Item.Caption.Discount"/>
            </com.avito.android.lib.util.layout.InverseLinearLayout>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/additional_name"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                style="@style/Widget.Avito.TextView.Serp.Item.Caption.Rich.Subtitle"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/price_list_count_hint"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                style="@style/Widget.Avito.TextView.Serp.Item.Caption.Tags"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:ellipsize="end"
                android:id="@+id/shop_name"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="-2dp"
                android:lines="1"
                style="@style/Widget.Avito.TextView.Serp.Item.Caption.Rich.Subtitle"/>
            <include
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="-2dp"
                layout="@layout/advert_item_rating"/>
            <TextView
                android:id="@+id/verification"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                style="@style/Widget.Avito.Rds.Advert.Verification"/>
            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                layout="@layout/advert_item_geo_reference_layout"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/address"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:maxLines="2"
                style="@style/Widget.Avito.TextView.Serp.Item.Caption.Secondary"/>
            <TextView
                android:id="@+id/address_additional_info"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                style="@style/Widget.Avito.TextView.Serp.Item.Caption.Secondary"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/marketplace_instock"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                style="@style/Widget.Avito.TextView.Serp.Item.Caption.Secondary"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/marketplace_trust_factor"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                style="@style/Widget.Avito.TextView.Serp.Item.Caption.Secondary"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/delivery_terms"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                style="@style/Widget.Avito.TextView.Serp.Item.Caption.Secondary"/>
            <androidx.legacy.widget.Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/date"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                style="@style/Widget.Avito.TextView.Serp.Item.Caption.Secondary"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/additional_action"
                android:background="@drawable/bg_btn_flat_rounded"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:focusable="true"
                android:visibility="gone"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                style="@style/Widget.Avito.TextView.Serp.Item.Caption.Secondary.Blue"/>
            <TextView
                android:textColor="?attr/violet600"
                android:id="@+id/buy_with_delivery_link"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
        <com.google.android.material.internal.CheckableImageButton
            android:id="@+id/btn_favorite"
            android:background="@drawable/bg_btn_circle_warmgray"
            android:visibility="gone"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:src="@drawable/advert_item_list_favorite_red"
            android:layout_below="@+id/image_pager"
            android:layout_alignParentRight="true"/>
        <ImageButton
            android:id="@+id/similar_button"
            android:background="@drawable/bg_btn_circle"
            android:visibility="gone"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginRight="2dp"
            android:scaleType="center"
            android:layout_below="@+id/btn_favorite"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/ic_similar"/>
        <ImageButton
            android:id="@+id/more_actions_button"
            android:background="@drawable/bg_btn_circle_gray_rich"
            android:visibility="gone"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="2dp"
            android:scaleType="center"
            android:layout_below="@+id/similar_button"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/more_16"/>
        <TextView
            android:id="@+id/card_info_badge"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/card_badge_margin_left"
            android:layout_marginTop="@dimen/card_badge_margin_top"
            style="@style/Design.Widget.SnippetBadge.Viewed"/>
        <ImageView
            android:id="@+id/has_realty_layout"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/card_badge_margin_top"
            android:layout_alignBottom="@+id/image_pager"
            android:contentDescription="@null"
            android:layout_marginStart="@dimen/card_badge_margin_left"
            android:layout_marginEnd="-4dp"
            app:srcCompat="@drawable/realty_layout_17"/>
        <ImageView
            android:id="@+id/has_video"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/card_badge_margin_top"
            android:layout_alignBottom="@+id/image_pager"
            android:contentDescription="@null"
            android:layout_marginStart="@dimen/card_badge_margin_left"
            android:layout_marginEnd="-4dp"
            android:layout_toEndOf="@+id/has_realty_layout"
            app:srcCompat="@drawable/ic_video_17"/>
        <LinearLayout
            android:orientation="vertical"
            android:paddingTop="@dimen/card_badge_margin_top"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/card_badge_margin_top"
            android:layout_alignBottom="@+id/image_pager"
            android:layout_marginStart="@dimen/card_badge_margin_left"
            android:layout_marginEnd="@dimen/card_badge_margin_right"
            android:layout_toEndOf="@+id/has_video">
            <TextView
                android:theme="@style/Theme.DesignSystem.Re23"
                android:textAppearance="?attr/textXs10"
                android:textColor="?attr/constantWhite"
                android:gravity="center"
                android:id="@+id/badge_sticker"
                android:background="@drawable/bg_advert_item_sale_candy"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="@dimen/card_badge_sticker_min_width"
                android:contentDescription="@null"
                android:rotation="-10"
                android:elevation="2dp"
                android:paddingHorizontal="@dimen/card_badge_sticker_text_padding_horizontal"
                android:paddingVertical="@dimen/card_badge_sticker_text_padding_vertical"/>
            <TextView
                android:textColor="?attr/constantBlack"
                android:id="@+id/badge"
                android:visibility="gone"
                style="@style/Design.Widget.SnippetBadge.Common"/>
            <ru.avito.component.snippet_badge_bar.SnippetBadgeBar
                android:id="@+id/badge_bar"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:snippetBadgeBar_maxBadges="1"/>
        </LinearLayout>
    </com.avito.android.lib.util.layout.ForegroundRelativeLayout>
    <TextView
        android:textColor="?attr/gray48"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/hidden_stub"
        android:background="@drawable/serp_card_background"
        android:focusable="true"
        android:visibility="gone"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/recommended_advert_hidden"
        style="?attr/textBodyDense"/>
</FrameLayout>
