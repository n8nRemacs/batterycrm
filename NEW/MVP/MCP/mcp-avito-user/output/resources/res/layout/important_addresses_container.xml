<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:id="@+id/important_addresses_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="28dp">
    <com.avito.android.lib.design.skeleton.shimmer.ShimmerFrameLayout
        android:id="@+id/important_addresses_root_skeleton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shimmer_auto_start="true"
        app:shimmer_duration="1000">
        <View
            android:id="@+id/title_skeleton"
            android:background="@drawable/important_addresses_root_skeleton_background"
            android:layout_width="205dp"
            android:layout_height="22dp"/>
        <View
            android:id="@+id/subtitle_skeleton"
            android:background="@drawable/important_addresses_root_skeleton_background"
            android:layout_width="343dp"
            android:layout_height="44dp"
            android:layout_marginTop="28dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/addresses_skeleton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"/>
        <View
            android:id="@+id/button_skeleton"
            android:background="@drawable/important_addresses_root_skeleton_background"
            android:layout_width="145dp"
            android:layout_height="36dp"/>
    </com.avito.android.lib.design.skeleton.shimmer.ShimmerFrameLayout>
    <TextView
        android:textAppearance="?attr/textH40"
        android:id="@+id/title"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toStartOf="@+id/hint"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/hint"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:focusable="true"
        android:visibility="gone"
        android:clickable="true"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="?attr/ic_help16"
        android:scaleType="center"
        android:importantForAccessibility="no"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/title"
        app:layout_constraintEnd_toStartOf="@+id/badge"
        app:layout_constraintStart_toEndOf="@+id/title"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?attr/warmGray28"/>
    <com.avito.android.lib.design.badge.Badge
        android:id="@+id/badge"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/hint"
        app:layout_constraintTop_toTopOf="parent"
        style="?attr/badgeTextRedS"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:id="@+id/subtitle"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/addresses"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subtitle"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/button"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp"
        app:button_compoundDrawablePadding="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addresses"
        style="?attr/buttonSecondarySmall"/>
</androidx.constraintlayout.widget.ConstraintLayout>
