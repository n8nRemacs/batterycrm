<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/proxy_click_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/content"
        android:layout_alignBottom="@+id/content"
        android:translationZ="5dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/str_booking_calculation_icon"
            android:visibility="gone"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:contentDescription="@null"
            android:layout_marginStart="-2dp"
            android:layout_marginEnd="2dp"/>
        <com.avito.android.lib.design.description_list.parameter_line.item.DescriptionParameterItem
            android:id="@+id/str_booking_calculation_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>
