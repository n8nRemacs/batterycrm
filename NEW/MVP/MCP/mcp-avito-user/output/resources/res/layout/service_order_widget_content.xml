<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/service_order_widget_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textAppearance="?attr/textH20"
        android:id="@+id/service_order_widget_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:textColorLink="?attr/black"
        android:id="@+id/service_order_widget_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/service_order_widget_primary_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        style="?attr/buttonPrimaryMedium"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/service_order_widget_secondary_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        style="?attr/buttonOverlaySecondaryMedium"/>
</LinearLayout>
