<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="@dimen/publish_container_horizontal_padding"
    android:paddingRight="@dimen/publish_container_horizontal_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="?attr/textBodySmall"
        android:textSize="16sp"
        android:textColor="?attr/black"
        android:id="@+id/market_price"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"/>
    <FrameLayout
        android:id="@+id/deal_type_block"
        android:background="@drawable/bg_round_corners"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">
        <com.avito.android.lib.design.list_item.ListItem
            android:textColor="?attr/gray48"
            android:id="@+id/deal_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:listItem_alignment="firstLineCenter"
            app:listItem_subtitleAppearance="?attr/textBody"
            app:listItem_subtitleColor="?attr/gray48"/>
    </FrameLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/empty_deal_type"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"/>
    <TextView
        android:textAppearance="?attr/textBodySmall"
        android:textSize="16sp"
        android:textColor="?attr/black"
        android:id="@+id/message"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
