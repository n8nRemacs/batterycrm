<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/status_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/passport_select_business_vrf_root"
        android:background="?attr/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutDescription="@xml/passport_select_business_vrf_scene">
        <View
            android:id="@+id/passport_select_business_vrf_shadow"
            android:background="?attr/white"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/passport_select_business_vrf_search"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.avito.android.lib.design.nav_bar.NavBar
            android:id="@+id/passport_select_business_vrf_nav_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textAppearance="?attr/textH25"
            android:id="@+id/passport_select_business_vrf_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:elevation="24dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/passport_select_business_vrf_nav_bar"/>
        <TextView
            android:textAppearance="?attr/textM20"
            android:id="@+id/passport_select_business_vrf_subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:elevation="24dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/passport_select_business_vrf_title"/>
        <com.avito.android.lib.design.input.Input
            android:id="@+id/passport_select_business_vrf_search"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"
            android:hint="@string/passport_business_vrf_hint"
            android:elevation="24dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/passport_select_business_vrf_subtitle"
            style="?attr/inputSearch"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/passport_select_business_vrf_items"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@+id/passport_select_business_vrf_accept_button"
            app:layout_constraintTop_toBottomOf="@+id/passport_select_business_vrf_search"/>
        <com.avito.android.lib.design.button.Button
            android:id="@+id/passport_select_business_vrf_accept_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintBottom_toTopOf="@+id/passport_select_business_vrf_cancel_button"
            style="?attr/buttonPrimaryMedium"/>
        <com.avito.android.lib.design.button.Button
            android:id="@+id/passport_select_business_vrf_cancel_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            style="?attr/buttonSecondaryMedium"/>
    </androidx.constraintlayout.motion.widget.MotionLayout>
    <include layout="@layout/tns_error_and_progress"/>
</FrameLayout>
