<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/extended_profile_contact_bar_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/extended_profile_widget_horizontal_margin">
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/extended_profile_contact_bar_reply_speed"
        android:paddingBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/extended_profile_contact_bar_call_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toStartOf="@+id/extended_profile_contact_bar_write_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/extended_profile_contact_bar_reply_speed"
        app:layout_goneMarginEnd="0dp"
        style="?attr/buttonSuccessLarge"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/extended_profile_contact_bar_write_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/extended_profile_contact_bar_call_button"
        app:layout_constraintTop_toBottomOf="@+id/extended_profile_contact_bar_reply_speed"
        app:layout_goneMarginStart="0dp"
        style="?attr/buttonAccentLarge"/>
</androidx.constraintlayout.widget.ConstraintLayout>
