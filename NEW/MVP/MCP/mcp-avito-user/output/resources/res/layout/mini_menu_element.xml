<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/mini_menu_item"
    android:layout_width="wrap_content"
    android:layout_height="20dp">
    <FrameLayout
        android:id="@+id/mini_menu_badge_container"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.avito.android.fresco.SimpleDraweeView
            android:id="@+id/mini_menu_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:adjustViewBounds="true"
            app:actualImageScaleType="none"/>
        <TextView
            android:textAppearance="?attr/textS2"
            android:textSize="12sp"
            android:textColor="?attr/white"
            android:gravity="center"
            android:id="@+id/mini_menu_badge_text"
            android:background="@drawable/rounded_background_r6"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:includeFontPadding="true"
            android:paddingHorizontal="6dp"/>
    </FrameLayout>
    <TextView
        android:textAppearance="?attr/textS2"
        android:textColor="@drawable/mini_menu_title_text_color"
        android:gravity="center"
        android:id="@+id/mini_menu_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/mini_menu_badge_container"
        app:layout_constraintStart_toEndOf="@+id/mini_menu_badge_container"
        app:layout_constraintTop_toTopOf="@+id/mini_menu_badge_container"/>
    <View
        android:id="@+id/mini_menu_skeleton"
        android:background="@drawable/rounded_background_r16"
        android:visibility="gone"
        android:layout_width="98dp"
        android:layout_height="16dp"
        android:backgroundTint="@color/legacy_warm_gray_4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
