<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:id="@+id/autoteka_waiting_for_payment_response_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="24dp">
    <ImageView
        android:layout_width="260dp"
        android:layout_height="208dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="@null"
        app:srcCompat="@drawable/img_wait"/>
    <TextView
        android:textAppearance="?attr/textH20"
        android:gravity="center_horizontal"
        android:id="@+id/autoteka_waiting_for_payment_response_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/autoteka_error_has_occurred"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:gravity="center_horizontal"
        android:id="@+id/autoteka_waiting_for_payment_response_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/autoteka_try_again"/>
    <com.avito.android.lib.design.button.Button
        android:layout_gravity="center_horizontal"
        android:id="@+id/autoteka_waiting_for_payment_response_go_to_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/autoteka_close_button"
        style="?attr/buttonPrimaryLarge"/>
</LinearLayout>
