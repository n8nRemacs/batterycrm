<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/day_item_root"
    android:background="@drawable/calendar_day_item_background"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="@dimen/str_calendar_cell_size_redesign"
    android:layout_height="@dimen/str_calendar_cell_size_redesign">
    <TextView
        android:textAppearance="?attr/textS20"
        android:textColor="?attr/black"
        android:id="@+id/main_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginHorizontal="6dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/content_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="6dp">
        <TextView
            android:textAppearance="?attr/textXs10"
            android:textColor="?attr/gray54"
            android:id="@+id/secondary_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/footer_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp">
            <TextView
                android:textAppearance="?attr/textS20"
                android:textSize="@dimen/str_calendar_features_font_size"
                android:textColor="?attr/gray54"
                android:id="@+id/features_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:textAppearance="?attr/textS20"
                android:textSize="@dimen/str_calendar_features_font_size"
                android:textColor="?attr/gray54"
                android:id="@+id/min_nights_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/tag_group"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <FrameLayout
            android:layout_gravity="end"
            android:id="@+id/tag_start_group"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_width="@dimen/str_calendar_tag_start_width_redesign"
            android:layout_height="@dimen/str_calendar_tag_height_redesign">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:id="@+id/tag_start_text_group"
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:elevation="1dp">
                <TextView
                    android:textAppearance="?attr/textS20"
                    android:textColor="?attr/black"
                    android:ellipsize="end"
                    android:id="@+id/tag_start_title_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_marginStart="8dp"/>
                <TextView
                    android:textAppearance="?attr/textXs10"
                    android:textColor="?attr/black"
                    android:ellipsize="end"
                    android:id="@+id/tag_start_subtitle_tv"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>
            <View
                android:id="@+id/tag_start_view"
                android:background="@drawable/calendar_tag_start_redesign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textAppearance="?attr/textXs"
                android:textColor="?attr/white"
                android:gravity="center"
                android:layout_gravity="start|top"
                android:id="@+id/indicator_tv"
                android:background="@drawable/calendar_tag_notification_bg"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:visibility="visible"
                android:layout_width="@dimen/str_calendar_notification_collapsed_size"
                android:layout_height="@dimen/str_calendar_notification_collapsed_size"
                android:translationX="-2dp"
                android:translationY="-2dp"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"/>
        </FrameLayout>
        <View
            android:id="@+id/tag_middle_view"
            android:background="@drawable/calendar_tag_middle"
            android:visibility="gone"
            android:layout_width="@dimen/str_calendar_tag_middle_width_redesign"
            android:layout_height="@dimen/str_calendar_tag_height_redesign"/>
        <View
            android:id="@+id/tag_end_view"
            android:background="@drawable/calendar_tag_end_redesign"
            android:layout_width="@dimen/str_calendar_tag_end_width_redesign"
            android:layout_height="@dimen/str_calendar_tag_height_redesign"/>
    </FrameLayout>
</LinearLayout>
