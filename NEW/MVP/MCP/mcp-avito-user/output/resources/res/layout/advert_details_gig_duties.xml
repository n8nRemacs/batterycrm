<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="vertical"
    android:id="@+id/advert_details_gig_duties_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="?attr/textH25"
        android:id="@+id/advert_details_duties_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/advert_details_gig_duties_title"
        android:layout_marginHorizontal="@dimen/standard_padding"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/advert_details_duties_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="@dimen/standard_padding"/>
</LinearLayout>
