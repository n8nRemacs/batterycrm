<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/configure_locations_page"
    android:background="@drawable/constructor_configure_bg_bottom_sheet_rounded_new"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bottom_sheet_thumb"
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_marginTop="8dp"/>
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:backgroundTint="?attr/transparentWhite"
        app:navigationIcon="@drawable/ic_close_24_black"/>
    <TextView
        android:textAppearance="?attr/textH2"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="16dp"/>
    <com.avito.android.lib.design.input.Input
        android:id="@+id/search_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="6dp"
        android:hint="@string/search"
        android:layout_marginHorizontal="16dp"
        style="?attr/inputDefaultL"/>
    <FrameLayout
        android:id="@+id/progress_placeholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textAppearance="?attr/textM20"
            android:textColor="?attr/gray54"
            android:layout_gravity="center_horizontal"
            android:id="@+id/empty_text_view"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/tariff_not_found_title"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
        <com.avito.android.lib.design.spinner.Spinner
            android:layout_gravity="center"
            android:id="@+id/progress_bar"
            android:visibility="gone"
            android:layout_width="20dp"
            android:layout_height="20dp"
            style="?attr/spinnerDarkLarge"/>
        <FrameLayout
            android:layout_gravity="bottom"
            android:id="@+id/constructor_configure_locations_bottom_block"
            android:visibility="gone"
            android:clipChildren="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.avito.android.lib.design.banner.Banner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:banner_bottomEdgeRounded="false"
                app:banner_content="@layout/constructor_configure_bottom_content"
                app:banner_contentPaddingBottom="16dp"
                app:banner_contentPaddingLeft="10dp"
                app:banner_contentPaddingRight="10dp"
                app:banner_contentPaddingTop="10dp"
                style="?attr/bannerWhite"/>
        </FrameLayout>
    </FrameLayout>
</LinearLayout>
