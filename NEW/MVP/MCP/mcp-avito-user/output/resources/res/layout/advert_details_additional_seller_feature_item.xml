<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/additional_seller_feature_item"
    android:layout_width="212dp"
    android:layout_height="159dp">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:failureImage="@drawable/placeholders_img_explore_card_no_image_normal"
        app:failureImageScaleType="fitCenter"
        app:overlayImage="@drawable/fg_image_cornered"
        app:placeholderImage="@drawable/placeholders_img_explore_card_no_image_normal"
        app:placeholderImageScaleType="fitCenter"
        app:roundedCornerRadius="6dp"/>
    <TextView
        android:textAppearance="?attr/textH4"
        android:textColor="?attr/constantWhite"
        android:ellipsize="end"
        android:layout_gravity="bottom"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:maxLines="2"/>
</FrameLayout>
