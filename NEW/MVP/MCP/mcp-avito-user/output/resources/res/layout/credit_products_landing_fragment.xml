<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/constantWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_scrollFlags="enterAlways|scroll"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.avito.android.credits.credit_partner_screen.webview.NestedPowerWebView
            android:id="@+id/web_view"
            android:background="?attr/constantWhite"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:dom_storage_enabled="true"
            app:java_script_enabled="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:support_zoom="false"/>
        <ProgressBar
            android:layout_gravity="center"
            android:id="@+id/progress"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:indeterminate="true"
            android:indeterminateTint="@color/legacy_constant_black"/>
    </FrameLayout>
</LinearLayout>
