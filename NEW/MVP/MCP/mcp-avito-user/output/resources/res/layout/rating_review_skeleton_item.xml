<?xml version="1.0" encoding="utf-8"?>
<com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginHorizontal="16dp"
    app:shimmer_animationDuration="3000"
    app:shimmer_autostart="true"
    app:shimmer_color="?attr/warmGray8"
    style="?attr/shimmerDefault">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.avito.android.lib.design.skeleton.Skeleton
            android:id="@+id/rating_review_avatar_skeleton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:skeleton_radius="64dp"/>
        <com.avito.android.lib.design.skeleton.Skeleton
            android:id="@+id/rating_review_name_skeleton"
            android:layout_width="200dp"
            android:layout_height="10dp"
            android:layout_marginTop="7dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/rating_review_avatar_skeleton"
            app:layout_constraintTop_toTopOf="@+id/rating_review_avatar_skeleton"
            app:skeleton_radius="3dp"/>
        <com.avito.android.lib.design.skeleton.Skeleton
            android:id="@+id/rating_review_rated_skeleton"
            android:layout_width="96dp"
            android:layout_height="9dp"
            android:layout_marginTop="9dp"
            app:layout_constraintStart_toStartOf="@+id/rating_review_name_skeleton"
            app:layout_constraintTop_toBottomOf="@+id/rating_review_name_skeleton"
            app:skeleton_radius="3dp"/>
        <com.avito.android.lib.design.skeleton.Skeleton
            android:id="@+id/rating_review_score_skeleton"
            android:layout_width="104dp"
            android:layout_height="10dp"
            android:layout_marginTop="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rating_review_avatar_skeleton"
            app:skeleton_radius="3dp"/>
        <com.avito.android.lib.design.skeleton.Skeleton
            android:id="@+id/rating_review_stage_title_skeleton"
            android:layout_width="171dp"
            android:layout_height="10dp"
            android:layout_marginStart="2dp"
            app:layout_constraintBottom_toBottomOf="@+id/rating_review_score_skeleton"
            app:layout_constraintStart_toEndOf="@+id/rating_review_score_skeleton"
            app:skeleton_radius="3dp"/>
        <com.avito.android.lib.design.skeleton.Skeleton
            android:id="@+id/rating_review_item_title_skeleton"
            android:layout_width="343dp"
            android:layout_height="10dp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rating_review_stage_title_skeleton"
            app:skeleton_radius="3dp"/>
        <com.avito.android.lib.design.skeleton.Skeleton
            android:id="@+id/rating_review_first_image_skeleton"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rating_review_item_title_skeleton"
            app:skeleton_radius="6dp"/>
        <com.avito.android.lib.design.skeleton.Skeleton
            android:id="@+id/rating_review_second_image_skeleton"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_marginStart="2dp"
            app:layout_constraintBottom_toBottomOf="@+id/rating_review_first_image_skeleton"
            app:layout_constraintStart_toEndOf="@+id/rating_review_first_image_skeleton"
            app:skeleton_radius="6dp"/>
        <com.avito.android.lib.design.skeleton.Skeleton
            android:id="@+id/rating_review_third_image_skeleton"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_marginStart="2dp"
            app:layout_constraintBottom_toBottomOf="@+id/rating_review_second_image_skeleton"
            app:layout_constraintStart_toEndOf="@+id/rating_review_second_image_skeleton"
            app:skeleton_radius="6dp"/>
        <com.avito.android.lib.design.skeleton.Skeleton
            android:id="@+id/rating_review_first_text_skeleton"
            android:layout_width="104dp"
            android:layout_height="10dp"
            android:layout_marginTop="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rating_review_first_image_skeleton"
            app:skeleton_radius="3dp"/>
        <com.avito.android.lib.design.skeleton.Skeleton
            android:id="@+id/rating_review_second_text_skeleton"
            android:layout_width="343dp"
            android:layout_height="10dp"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rating_review_first_text_skeleton"
            app:skeleton_radius="3dp"/>
        <com.avito.android.lib.design.skeleton.Skeleton
            android:id="@+id/rating_review_third_text_skeleton"
            android:layout_width="343dp"
            android:layout_height="10dp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rating_review_second_text_skeleton"
            app:skeleton_radius="3dp"/>
        <com.avito.android.lib.design.skeleton.Skeleton
            android:id="@+id/rating_review_fourth_text_skeleton"
            android:layout_width="145dp"
            android:layout_height="10dp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rating_review_third_text_skeleton"
            app:skeleton_radius="3dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout>
