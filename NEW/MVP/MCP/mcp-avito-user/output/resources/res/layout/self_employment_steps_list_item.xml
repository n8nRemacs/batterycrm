<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/button_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/self_employment_step_item_padding_vertical">
    <com.avito.android.lib.design.button.Button
        android:id="@+id/step_icon"
        android:focusable="false"
        android:clickable="false"
        android:layout_width="@dimen/self_employment_step_item_icon_size"
        android:layout_height="@dimen/self_employment_step_item_icon_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="?attr/buttonSecondaryMedium"/>
    <TextView
        android:textColor="?attr/gray54"
        android:id="@+id/step_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/step_icon"
        app:layout_constraintEnd_toEndOf="@+id/step_icon"
        app:layout_constraintStart_toStartOf="@+id/step_icon"
        app:layout_constraintTop_toTopOf="@+id/step_icon"
        style="?attr/textH50"/>
    <TextView
        android:gravity="start"
        android:id="@+id/step_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/self_employment_step_item_title_margin_start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/step_icon"
        app:layout_constraintTop_toTopOf="parent"
        style="?attr/textM20"/>
    <TextView
        android:textColor="?attr/gray54"
        android:gravity="start"
        android:id="@+id/step_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/self_employment_step_item_description_margin_top"
        android:layout_marginStart="@dimen/self_employment_step_item_description_margin_start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/step_icon"
        app:layout_constraintTop_toBottomOf="@+id/step_title"
        style="?attr/textS20"/>
</androidx.constraintlayout.widget.ConstraintLayout>
