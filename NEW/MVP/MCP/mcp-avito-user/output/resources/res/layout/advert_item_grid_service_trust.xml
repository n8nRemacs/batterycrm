<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:id="@+id/advert_grid_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/advert_content"
        android:clipChildren="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sales_card_image_height"
            app:backgroundImage="?attr/transparentWhite"
            app:layout_constraintTop_toTopOf="parent"
            app:roundedCornerRadius="16dp"
            style="@style/Widget.Avito.SimpleDraweeView.Serp.Item.Image.Sales"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/text_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="4dp"
            app:layout_constraintTop_toBottomOf="@+id/image">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="38dp"
                style="@style/Widget.Avito.TextView.Serp.Item.Caption.Title.ServiceTrustGrid"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                style="@style/Widget.Avito.TextView.Serp.Item.Caption.Price.ServiceTrustGrid"/>
            <include layout="@layout/advert_item_rating"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/services_seller_type_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="wrap_content"
                    android:src="?attr/ic_verified16"
                    android:scaleType="fitCenter"
                    android:contentDescription="@null"
                    app:tint="?attr/blue"/>
                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/services_seller_type"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    style="@style/Widget.Avito.TextView.Serp.Item.Seller.ServiceTrustGrid"/>
            </LinearLayout>
        </LinearLayout>
        <com.google.android.material.internal.CheckableImageButton
            android:id="@+id/btn_favorite"
            android:background="@drawable/bg_btn_circle_warmgray"
            android:visibility="gone"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/advert_item_list_favorite_red"
            android:layout_below="@+id/image"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_content"/>
        <TextView
            android:id="@+id/card_info_badge"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/Design.Widget.SnippetBadge.Viewed"/>
        <ru.avito.component.snippet_badge_bar.SnippetBadgeBar
            android:orientation="vertical"
            android:id="@+id/badge_bar"
            android:paddingBottom="8dp"
            android:visibility="gone"
            android:clipToPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            app:layout_constraintBottom_toBottomOf="@+id/image"
            app:layout_constraintStart_toStartOf="@+id/image"
            app:layout_constraintTop_toBottomOf="@+id/image"
            app:snippetBadgeBar_maxBadges="1"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:textColor="?attr/gray48"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/hidden_stub"
        android:background="@drawable/serp_card_background"
        android:focusable="true"
        android:visibility="gone"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/recommended_advert_hidden"
        style="?attr/textBodyDense"/>
</FrameLayout>
