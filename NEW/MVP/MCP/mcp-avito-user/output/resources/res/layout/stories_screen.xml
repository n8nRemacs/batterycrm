<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/stories_screen_root"
    android:background="?attr/constantBlack"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.yatatsu.powerwebview.PowerWebView
            android:id="@+id/web_view"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:dom_storage_enabled="true"
            app:java_script_enabled="true"
            app:support_zoom="false"/>
        <ProgressBar
            android:layout_gravity="center"
            android:id="@+id/loading"
            android:visibility="gone"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:indeterminate="true"
            android:indeterminateTint="?attr/constantWhite"
            style="@style/Widget.AppCompat.ProgressBar"/>
    </FrameLayout>
    <ImageView
        android:layout_gravity="end|top"
        android:id="@+id/close"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_close_static_white_24dp"
        android:contentDescription="@string/close"
        android:layout_marginEnd="20dp"
        android:indeterminateTint="?attr/constantWhite"/>
</FrameLayout>
