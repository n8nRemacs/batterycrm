<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="vertical"
    android:id="@+id/consultation_after_icebreakers_super"
    android:background="@drawable/bg_consultation_form_super"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/content_horizontal_padding_smaller">
    <TextView
        android:textAppearance="?attr/textH25"
        android:id="@+id/info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/info_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:textColor="?attr/gray54"
        android:id="@+id/about_consultation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">
        <FrameLayout
            android:background="@drawable/bg_realty_consultation_card"
            android:layout_width="0dp"
            android:layout_height="128dp"
            android:layout_weight="0.5"
            android:layout_marginEnd="7dp">
            <TextView
                android:textAppearance="?attr/textM20"
                android:id="@+id/first_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"/>
            <com.avito.android.fresco.SimpleDraweeView
                android:layout_gravity="start|bottom"
                android:id="@+id/first_image"
                android:layout_width="124dp"
                android:layout_height="52dp"
                android:layout_margin="12dp"/>
        </FrameLayout>
        <FrameLayout
            android:background="@drawable/bg_realty_consultation_card"
            android:layout_width="0dp"
            android:layout_height="128dp"
            android:layout_weight="0.5">
            <TextView
                android:textAppearance="?attr/textM20"
                android:id="@+id/second_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"/>
            <com.avito.android.fresco.SimpleDraweeView
                android:layout_gravity="start|bottom"
                android:id="@+id/second_image"
                android:layout_width="124dp"
                android:layout_height="52dp"
                android:layout_margin="12dp"/>
        </FrameLayout>
    </LinearLayout>
    <TextView
        android:textAppearance="?attr/textH50"
        android:textColor="?attr/black"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>
    <com.avito.android.lib.design.input.Input
        android:id="@+id/input_phone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        android:hint="+7 000 00-00-00"
        android:inputType="phone"
        android:layout_marginHorizontal="16dp"
        app:input_formatterType="mobile_phone"
        app:input_prefix="+7 "
        app:layout_autoReset="notNormalOnly"
        style="?attr/inputWhiteBackgroundM"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/consultation_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        style="?attr/buttonPrimaryLarge"/>
    <TextView
        android:textAppearance="?attr/textS10"
        android:id="@+id/consultation_disclaimer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="32dp"
        android:layout_marginHorizontal="16dp"/>
</LinearLayout>
