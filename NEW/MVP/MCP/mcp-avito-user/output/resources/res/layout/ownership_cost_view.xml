<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/Theme.DesignSystem.LookAndFeel"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true">
    <View
        android:id="@+id/ownership_cost_top_divider"
        android:background="?attr/gray8"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"
        android:layout_marginHorizontal="@dimen/content_horizontal_padding"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/content_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"/>
    <View
        android:id="@+id/ownership_cost_bottom_divider"
        android:background="?attr/gray8"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="24dp"
        android:layout_marginHorizontal="@dimen/content_horizontal_padding"/>
</LinearLayout>
