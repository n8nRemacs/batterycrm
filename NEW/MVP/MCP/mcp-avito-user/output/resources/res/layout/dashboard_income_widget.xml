<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_income_widget"
    android:background="@drawable/bg_profile_pro_dashboard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="4dp"
    android:paddingEnd="20dp">
    <ImageView
        android:id="@+id/iv_income"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_income"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/tv_income_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/profile_pro_dashboard_income"
        android:paddingStart="4dp"
        app:layout_constraintStart_toEndOf="@+id/iv_income"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textS20"
        android:textColor="?attr/gray54"
        android:id="@+id/tv_income_time"
        android:paddingBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_income"
        app:layout_constraintTop_toBottomOf="@+id/tv_income_title"/>
    <TextView
        android:textAppearance="?attr/textH30"
        android:id="@+id/tv_income_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/tv_income_price_rub"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textH50"
        android:id="@+id/tv_income_price_rub"
        android:paddingTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_pro_dashboard_income_rub"
        android:paddingStart="3dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_income_price"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:textAppearance="?attr/textS20"
        android:id="@+id/tv_income_percent"
        android:paddingBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_income_price"/>
</androidx.constraintlayout.widget.ConstraintLayout>
