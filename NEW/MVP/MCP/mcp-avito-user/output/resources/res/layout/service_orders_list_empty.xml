<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/service_orders_empty_swipe_to_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="16dp">
                <FrameLayout
                    android:id="@+id/srv_orders_empty_panel_btn_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <com.avito.android.lib.design.list_item.ListItem
                        android:id="@+id/srv_orders_empty_settings_btn"
                        android:background="@drawable/calendar_settings_list_item_bg"
                        android:focusable="true"
                        android:clickable="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/common_ic_calendar_20"
                        android:drawableRight="@drawable/common_ic_arrow_right_20"
                        app:listItem_backgroundColor="@null"
                        app:listItem_backgroundRipple="@null"
                        app:listItem_iconLeftColor="?attr/black"
                        app:listItem_iconRightColor="?attr/black"/>
                    <include
                        android:id="@+id/service_orders_management_panels"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        layout="@layout/service_orders_list_item_panels_management"/>
                </FrameLayout>
                <TextView
                    android:textAppearance="?attr/textH20"
                    android:id="@+id/srv_orders_empty_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toTopOf="@+id/srv_orders_empty_subtitle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/srv_orders_empty_panel_btn_container"
                    app:layout_constraintVertical_chainStyle="packed"/>
                <TextView
                    android:textAppearance="?attr/textM10"
                    android:id="@+id/srv_orders_empty_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/srv_orders_empty_btn"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/srv_orders_empty_title"/>
                <com.avito.android.lib.design.button.Button
                    android:id="@+id/srv_orders_empty_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/srv_orders_empty_subtitle"
                    style="?attr/buttonSecondaryLarge"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</FrameLayout>
