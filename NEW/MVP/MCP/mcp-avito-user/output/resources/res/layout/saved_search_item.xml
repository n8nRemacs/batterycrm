<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="6dp"
    android:paddingTop="3dp"
    android:paddingRight="6dp"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/item_content_view"
        android:clickable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="@drawable/item_card_foreground"
        app:cardCornerRadius="3dp"
        style="@style/AvitoCardView">
        <FrameLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingTop="12dp"
                android:paddingRight="16dp"
                android:paddingBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16sp"
                    android:textColor="?attr/black"
                    android:ellipsize="end"
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="100"
                    android:drawablePadding="8dp"
                    app:drawableLeftCompat="@drawable/circle_blue"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="?attr/gray48"
                    android:id="@+id/view_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="40dp"
                    android:lineSpacingExtra="3dp"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="?attr/gray48"
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
            <com.avito.android.lib.design.button.Button
                android:layout_gravity="end|center_vertical"
                android:id="@+id/saved_search_btn_more"
                android:background="@drawable/bg_btn_circle_gray_rich"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_more_horizontal_24"
                android:layout_marginHorizontal="8dp"
                app:button_iconColor="?attr/gray28"/>
        </FrameLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>
