<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/select_registration_type_screen_root"
    android:background="?attr/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.avito.android.lib.design.nav_bar.NavBar
        android:id="@+id/nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textAppearance="?attr/textH25"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/registration_type_selection_title"
        android:layout_marginStart="16dp"/>
    <com.avito.android.lib.design.list_item.ListItem
        android:id="@+id/personal_matters"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:drawableLeft="@drawable/ic_person_44"
        android:drawableRight="?attr/ic_arrowRight20"
        android:paddingHorizontal="16dp"
        app:listItem_backgroundRipple="?attr/warmGray4"
        app:listItem_contentSpacing="13dp"
        app:listItem_iconRightColor="?attr/black"
        app:listItem_title="@string/registration_type_person_matters_item_title"
        style="?attr/listItemDefaultLarge"/>
    <com.avito.android.lib.design.list_item.ListItem
        android:id="@+id/business_matters"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_work_44"
        android:drawableRight="?attr/ic_arrowRight20"
        android:paddingHorizontal="16dp"
        app:listItem_backgroundRipple="?attr/warmGray4"
        app:listItem_contentSpacing="13dp"
        app:listItem_iconRightColor="?attr/black"
        app:listItem_title="@string/registration_type_business_matters_item_title"
        style="?attr/listItemDefaultLarge"/>
</LinearLayout>
