<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/avito_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/bottom_sheet_touch_outside"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:soundEffectsEnabled="false"
        android:importantForAccessibility="no"/>
    <FrameLayout
        android:id="@+id/bottom_sheet_background"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinator"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.avito.android.lib.design.bottom_sheet.BoundedLinearLayout
            android:layout_gravity="top|center_horizontal"
            android:orientation="vertical"
            android:id="@+id/bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="com.avito.android.lib.design.bottom_sheet.BottomSheetBehavior"
            style="?attr/bottomSheet_style">
            <FrameLayout
                android:id="@+id/thumb_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/design_bottom_sheet_thumb_layout_height">
                <View
                    android:layout_gravity="top|center_horizontal"
                    android:id="@+id/header_thumb"
                    android:background="@drawable/design_bottom_sheet_thumb"
                    android:visibility="gone"
                    android:layout_width="?attr/bottomSheet_thumbWidth"
                    android:layout_height="?attr/bottomSheet_thumbHeight"
                    android:layout_marginTop="?attr/bottomSheet_thumbMarginTop"
                    android:layout_marginBottom="?attr/bottomSheet_thumbMarginBottom"/>
            </FrameLayout>
            <FrameLayout
                android:gravity="center_vertical"
                android:id="@+id/bottom_sheet_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="?attr/bottomSheet_header_paddingVertical">
                <ImageView
                    android:layout_gravity="start"
                    android:id="@+id/bottom_sheet_close_button"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/design_icon_close_ripple"
                    android:scaleType="fitXY"
                    android:layout_marginStart="?attr/bottomSheet_closeMarginLeft"/>
                <TextView
                    android:textAppearance="?attr/bottomSheet_titleTextAppearance"
                    android:textColor="?attr/bottomSheet_titleTextColor"
                    android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/bottom_sheet_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:translationY="?attr/bottomSheet_visualCompensation"
                    android:layout_marginStart="?attr/bottomSheet_titleMarginLeft"
                    android:layout_marginEnd="?attr/bottomSheet_titleMarginRight"/>
                <TextView
                    android:textAppearance="?attr/bottomSheet_actionButtonTextAppearance"
                    android:textColor="?attr/bottomSheet_actionButtonTextColor"
                    android:layout_gravity="end"
                    android:id="@+id/bottom_sheet_action_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:translationY="?attr/bottomSheet_visualCompensation"
                    android:layout_marginEnd="?attr/bottomSheet_actionButtonMarginRight"/>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/custom_bottom_sheet_header"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <FrameLayout
                android:id="@+id/bottom_sheet_body_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:id="@+id/bottom_sheet_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <FrameLayout
                    android:id="@+id/overlay_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </FrameLayout>
        </com.avito.android.lib.design.bottom_sheet.BoundedLinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <com.avito.android.lib.design.bottom_sheet.BoundedFrameLayout
        android:layout_gravity="bottom|center_horizontal"
        android:id="@+id/footer_container"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxWidth="@dimen/design_bottom_sheet_modal_max_width"/>
    <FrameLayout
        android:layout_gravity="bottom|center_horizontal"
        android:id="@+id/navigation_bar_overlay"
        android:background="?attr/bottomSheet_backgroundColor"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:maxWidth="@dimen/design_bottom_sheet_modal_max_width"/>
</FrameLayout>
