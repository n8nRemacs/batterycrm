<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/extended_profile_actions_menu_container"
    android:paddingBottom="24dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="?attr/textH20"
        android:id="@+id/extended_profile_actions_menu_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/extended_profile_actions_menu_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/extended_profile_actions_menu_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>
    <com.avito.android.extended_profile_ui_components.RoundedShadowFrameLayout
        android:orientation="vertical"
        android:id="@+id/extended_profile_actions_menu_bottom_container"
        android:background="@drawable/bg_actions_menu_bottom_button"
        android:paddingBottom="16dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:elevation="16dp"
        app:roundedShadowLayout_bottomShadow="@style/ExtendedProfileUiComponentsBottomShadow"
        app:roundedShadowLayout_cornerRadius="24dp"
        app:roundedShadowLayout_shadowEnabled="true"
        app:roundedShadowLayout_upperShadow="@style/ExtendedProfileUiComponentsUpperShadow">
        <LinearLayout
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="7dp">
            <com.avito.android.lib.design.button.Button
                android:id="@+id/extended_profile_actions_menu_bottom_primary_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginHorizontal="3dp"
                style="?attr/buttonPrimaryLarge"/>
            <com.avito.android.lib.design.button.Button
                android:id="@+id/extended_profile_actions_menu_bottom_secondary_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginHorizontal="3dp"
                style="?attr/buttonSecondaryLarge"/>
        </LinearLayout>
    </com.avito.android.extended_profile_ui_components.RoundedShadowFrameLayout>
</LinearLayout>
