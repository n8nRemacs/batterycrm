<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/phone_management_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.avito.android.lib.design.nav_bar.NavBar
        android:id="@+id/phone_management_navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navBar_contentColor="?attr/black"/>
    <FrameLayout
        android:id="@+id/phone_management_content_container"
        android:paddingTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textAppearance="?attr/textH20"
                    android:id="@+id/phone_management_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginHorizontal="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:textAppearance="?attr/textM20"
                    android:id="@+id/phone_management_description"
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginHorizontal="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/phone_management_title"/>
                <com.avito.android.lib.design.component_container.ComponentContainer
                    android:id="@+id/phone_management_input_cc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginHorizontal="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/phone_management_description">
                    <com.avito.android.lib.design.input.Input
                        android:id="@+id/phone_management_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="flagNoExtractUi|actionDone"
                        android:autofillHints="phone"
                        app:input_clearButton="true"
                        app:input_formatterType="mobile_phone"
                        app:input_prefix="+7 "
                        style="?attr/input"/>
                </com.avito.android.lib.design.component_container.ComponentContainer>
                <com.avito.android.lib.design.button.Button
                    android:id="@+id/phone_management_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginHorizontal="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/phone_management_user_agreement"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/phone_management_input_cc"
                    app:layout_constraintVertical_bias="1"
                    style="?attr/buttonPrimaryLarge"/>
                <TextView
                    android:textAppearance="?attr/textXs10"
                    android:textColor="?attr/gray54"
                    android:id="@+id/phone_management_user_agreement"
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginHorizontal="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
        <include
            android:id="@+id/phone_management_progress_view"
            android:paddingTop="?attr/actionBarSize"
            layout="@layout/semitransparent_progress"/>
    </FrameLayout>
</FrameLayout>
