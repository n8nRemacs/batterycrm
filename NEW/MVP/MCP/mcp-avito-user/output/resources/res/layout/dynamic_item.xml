<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_dynamic_item"
    android:background="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp"
    android:paddingVertical="8dp">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_dynamic_item"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="16dp"
        app:actualImageScaleType="centerCrop"
        app:layout_constraintEnd_toStartOf="@+id/tv_title_dynamic_item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:placeholderImage="?attr/gray8"
        app:roundedCornerRadius="12dp"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:ellipsize="end"
        android:id="@+id/tv_title_dynamic_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:lines="1"
        app:layout_constraintEnd_toStartOf="@+id/tv_value_dynamic_item"
        app:layout_constraintStart_toEndOf="@+id/sdv_dynamic_item"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textS20"
        android:ellipsize="end"
        android:id="@+id/tv_address_dynamic_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:lines="1"
        app:layout_constraintEnd_toStartOf="@+id/tv_value_dynamic_item"
        app:layout_constraintStart_toStartOf="@+id/tv_title_dynamic_item"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_dynamic_item"/>
    <TextView
        android:textAppearance="?attr/textS20"
        android:ellipsize="end"
        android:id="@+id/tv_price_dynamic_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:lines="1"
        app:layout_constraintEnd_toStartOf="@+id/tv_value_dynamic_item"
        app:layout_constraintStart_toStartOf="@+id/tv_title_dynamic_item"
        app:layout_constraintTop_toBottomOf="@+id/tv_address_dynamic_item"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:textColor="?attr/black"
        android:id="@+id/tv_value_dynamic_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingEnd="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
