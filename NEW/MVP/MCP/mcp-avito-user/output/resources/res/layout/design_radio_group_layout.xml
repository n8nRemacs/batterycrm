<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/title"
        android:duplicateParentState="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/design_radio_group_title_margin_bottom"
        style="?attr/textHeadingSmall"/>
    <TextView
        android:id="@+id/subtitle"
        android:duplicateParentState="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/design_radio_group_subtitle_margin_bottom"
        style="?attr/textBodySmall"/>
    <TextView
        android:textColor="?attr/red"
        android:id="@+id/hint"
        android:duplicateParentState="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/design_radio_group_hint_margin_bottom"
        style="?attr/textBodySmall"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/design_radio_group_text_block_bottom_space"/>
</merge>
