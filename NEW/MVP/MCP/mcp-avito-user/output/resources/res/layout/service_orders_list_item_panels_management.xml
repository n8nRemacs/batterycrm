<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="horizontal"
    android:id="@+id/calendar_management_panels"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="6dp"
    android:layout_marginHorizontal="16dp">
    <com.avito.android.service_orders.plates.ServiceBookingPlateView
        android:id="@+id/panel_left_plate"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/transparentBlack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/panel_spacer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <Space
        android:id="@+id/panel_spacer"
        android:layout_width="8dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toStartOf="@+id/panel_right_container"
        app:layout_constraintStart_toEndOf="@+id/panel_left_plate"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/panel_right_container"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/panel_left_plate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/panel_spacer"
        app:layout_constraintTop_toTopOf="@+id/panel_left_plate">
        <com.avito.android.service_orders.plates.ServiceBookingPlateView
            android:id="@+id/panel_right_top_plate"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:backgroundTint="@color/transparentBlack"/>
        <com.avito.android.service_orders.plates.ServiceBookingPlateView
            android:id="@+id/panel_right_bottom_plate"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/transparentBlack"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
