<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/extended_profile_map_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginHorizontal="@dimen/extended_profile_map_tabs_widget_margin_horizontal">
    <TextView
        android:textAppearance="?attr/textH30"
        android:id="@+id/extended_profile_map_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="@dimen/extended_profile_widget_horizontal_margin"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/extended_profile_map_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/extended_profile_map_height"
        app:cardCornerRadius="@dimen/extended_profile_map_tabs_widget_corner_radius"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="false"
        style="@style/AvitoCardView">
        <com.yandex.mapkit.mapview.MapView
            android:id="@+id/extended_profile_yandex_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:movable="true"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_gravity="top|right"
            android:id="@+id/open_fullscreen_button"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            app:backgroundTint="?attr/white"
            app:fabCustomSize="44dp"
            app:srcCompat="?attr/ic_fullscreen24"/>
    </androidx.cardview.widget.CardView>
</LinearLayout>
