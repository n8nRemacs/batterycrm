<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/widget_collapsed_layout"
    android:padding="@dimen/widget_preview_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="?attr/textH50"
        android:id="@+id/widget_collapsed_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_marginEnd="16dp"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:ellipsize="end"
        android:gravity="end"
        android:id="@+id/widget_collapsed_placeholder_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_weight="1"/>
</LinearLayout>
