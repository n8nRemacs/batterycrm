<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="15dp">
    <com.avito.android.lib.design.button.Button
        android:id="@+id/sx_address_video_verification_file_icon_container"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="?attr/buttonSecondaryMedium">
        <TextView
            android:textAppearance="?attr/textM20"
            android:layout_gravity="center"
            android:id="@+id/sx_address_video_verification_file_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </com.avito.android.lib.design.button.Button>
    <TextView
        android:textAppearance="?attr/textM20"
        android:ellipsize="marquee"
        android:id="@+id/sx_address_video_verification_file_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lines="1"
        android:layout_marginHorizontal="12dp"
        app:layout_constraintBottom_toTopOf="@+id/sx_address_video_verification_file_subtitle"
        app:layout_constraintEnd_toStartOf="@+id/sx_address_video_verification_file_delete_icon"
        app:layout_constraintStart_toEndOf="@+id/sx_address_video_verification_file_icon_container"
        app:layout_constraintTop_toTopOf="@+id/sx_address_video_verification_file_icon_container"/>
    <TextView
        android:textAppearance="?attr/textS20"
        android:textColor="?attr/gray54"
        android:ellipsize="marquee"
        android:id="@+id/sx_address_video_verification_file_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lines="1"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toTopOf="@+id/sx_address_video_verification_file_progress_bar"
        app:layout_constraintEnd_toStartOf="@+id/sx_address_video_verification_file_delete_icon"
        app:layout_constraintStart_toEndOf="@+id/sx_address_video_verification_file_icon_container"
        app:layout_constraintTop_toBottomOf="@+id/sx_address_video_verification_file_title"/>
    <TextView
        android:textAppearance="?attr/textS20"
        android:textColor="?attr/gray54"
        android:id="@+id/sx_address_video_verification_file_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toTopOf="@+id/sx_address_video_verification_file_progress_bar"
        app:layout_constraintEnd_toStartOf="@+id/sx_address_video_verification_file_delete_icon"
        app:layout_constraintTop_toBottomOf="@+id/sx_address_video_verification_file_title"/>
    <com.avito.android.lib.design.progress_bar_re23.ProgressBarRe23
        android:id="@+id/sx_address_video_verification_file_progress_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/sx_address_video_verification_file_icon_container"
        app:layout_constraintEnd_toStartOf="@+id/sx_address_video_verification_file_delete_icon"
        app:layout_constraintStart_toEndOf="@+id/sx_address_video_verification_file_icon_container"
        app:progressBar_value="0.5"
        style="?attr/progressBarDefaultSmall"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/sx_address_video_verification_file_delete_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
