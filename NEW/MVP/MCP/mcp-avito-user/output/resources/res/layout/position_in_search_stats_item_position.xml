<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/search_position_position_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="?attr/textH30"
        android:id="@+id/position_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/position_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/position_title"/>
    <android.widget.Space
        android:id="@+id/position_info_space"
        android:layout_width="0dp"
        android:layout_height="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/position_description"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/position_info_content"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/position_info_space">
        <TextView
            android:textAppearance="?attr/textH05"
            android:id="@+id/position_place_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textAppearance="?attr/textL20"
            android:id="@+id/position_delta_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"/>
    </LinearLayout>
    <com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout
        android:id="@+id/position_info_loading"
        android:paddingTop="12dp"
        android:paddingBottom="9dp"
        android:visibility="gone"
        android:layout_width="88dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/position_info_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/position_info_content"
        style="?attr/shimmerDefault">
        <com.avito.android.lib.design.skeleton.Skeleton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:skeleton_radius="6dp"/>
    </com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
