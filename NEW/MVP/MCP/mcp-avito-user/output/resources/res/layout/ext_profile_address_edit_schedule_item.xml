<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/extended_profiles_address_schedule_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp">
    <TextView
        android:textAppearance="?attr/textH50"
        android:id="@+id/edit_address_schedule_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/edit_address_schedule_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.avito.android.lib.design.input.Input
        android:id="@+id/edit_address_schedule_work_days"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="@string/edit_address_schedule_work_days_hint"
        android:layout_marginEnd="12dp"
        app:input_clearButton="true"
        app:layout_constraintEnd_toStartOf="@+id/edit_address_remove_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_address_schedule_title"
        style="?attr/baseSelect"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:textColor="?attr/red"
        android:id="@+id/edit_address_schedule_work_days_error"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="@string/edit_address_schedule_work_days_error"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toStartOf="@+id/edit_address_remove_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_address_schedule_work_days"/>
    <com.avito.android.lib.design.input.Input
        android:id="@+id/edit_address_schedule_work_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="@string/edit_address_schedule_work_time_hint"
        android:layout_marginEnd="12dp"
        app:input_clearButton="true"
        app:layout_constraintEnd_toStartOf="@+id/edit_address_remove_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_address_schedule_work_days_error"
        style="?attr/baseSelect"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:textColor="?attr/red"
        android:id="@+id/edit_address_schedule_work_time_error"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="@string/edit_address_schedule_work_time_error"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toStartOf="@+id/edit_address_remove_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_address_schedule_work_time"/>
    <com.avito.android.lib.design.input.Input
        android:id="@+id/edit_address_schedule_break_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="@string/edit_address_schedule_break_time_hint"
        android:layout_marginEnd="12dp"
        app:input_clearButton="true"
        app:layout_constraintEnd_toStartOf="@+id/edit_address_remove_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_address_schedule_work_time_error"
        style="?attr/baseSelect"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/edit_address_remove_button"
        android:layout_width="44dp"
        android:layout_height="wrap_content"
        android:src="?attr/ic_delete20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edit_address_schedule_work_days"
        style="?attr/buttonDefaultLarge"/>
</androidx.constraintlayout.widget.ConstraintLayout>
