<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="24dp">
    <androidx.recyclerview.widget.RecyclerView
        android:orientation="horizontal"
        android:id="@+id/carousel"
        android:layout_width="0dp"
        android:layout_height="176dp"
        android:layout_marginTop="6dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:textAppearance="?attr/textL20"
        android:id="@+id/lot_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/add_to_selection"
        app:layout_constraintTop_toBottomOf="@+id/carousel"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:textAppearance="?attr/textH25"
        android:ellipsize="end"
        android:id="@+id/main_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:maxLines="1"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toStartOf="@+id/add_to_selection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lot_title"/>
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/add_to_selection"
        android:background="@drawable/bg_btn_circle_gray_rich"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="-8dp"
        android:tint="?attr/black"
        android:layout_marginEnd="-4dp"
        app:layout_constraintEnd_toStartOf="@+id/options"
        app:layout_constraintTop_toTopOf="@+id/lot_title"
        app:srcCompat="?attr/ic_folderPlus24"/>
    <com.avito.android.lib.design.spinner.Spinner
        android:id="@+id/add_to_selection_loader"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="-8dp"
        android:maxWidth="40dp"
        android:maxHeight="40dp"
        android:minWidth="40dp"
        android:minHeight="40dp"
        android:layout_marginEnd="-4dp"
        app:layout_constraintEnd_toStartOf="@+id/options"
        app:layout_constraintTop_toTopOf="@+id/lot_title"
        style="?attr/spinnerDarkMedium"/>
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/options"
        android:background="@drawable/bg_btn_circle_gray_rich"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="-8dp"
        android:tint="?attr/black"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/lot_title"
        app:srcCompat="?attr/ic_more24"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/price_per_meter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_price"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/agent_commission"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/price_per_meter"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/square_floor_completionQuarter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/agent_commission"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/development_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/square_floor_completionQuarter"/>
    <include
        android:id="@+id/metro_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/development_info"
        layout="@layout/item_snippet_metro_info"/>
</androidx.constraintlayout.widget.ConstraintLayout>
