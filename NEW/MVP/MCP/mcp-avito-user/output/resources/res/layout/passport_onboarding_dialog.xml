<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp">
        <TextView
            android:textAppearance="?attr/textH25"
            android:id="@+id/passport_onboarding_title_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"/>
        <ImageView
            android:id="@+id/passport_onboarding_close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="?attr/ic_close24"/>
    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/passport_onboarding_dialog_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="?attr/textM10"
                android:id="@+id/passport_onboarding_description_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:gravity="bottom"
                android:id="@+id/passport_onboarding_item_1_icon"
                android:layout_width="16dp"
                android:layout_height="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/passport_onboarding_description_tv"
                style="?attr/textH50"/>
            <TextView
                android:textAppearance="?attr/textH50"
                android:id="@+id/passport_onboarding_item_1_title"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@+id/passport_onboarding_item_1_icon"
                app:layout_constraintTop_toTopOf="@+id/passport_onboarding_item_1_icon"/>
            <TextView
                android:textAppearance="?attr/textM20"
                android:id="@+id/passport_onboarding_item_1_subtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/passport_onboarding_item_1_icon"
                app:layout_constraintTop_toBottomOf="@+id/passport_onboarding_item_1_title"/>
            <TextView
                android:gravity="bottom"
                android:id="@+id/passport_onboarding_item_2_icon"
                android:layout_width="16dp"
                android:layout_height="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/passport_onboarding_item_1_subtitle"
                style="?attr/textH50"/>
            <TextView
                android:textAppearance="?attr/textH50"
                android:id="@+id/passport_onboarding_item_2_title"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@+id/passport_onboarding_item_2_icon"
                app:layout_constraintTop_toTopOf="@+id/passport_onboarding_item_2_icon"/>
            <TextView
                android:textAppearance="?attr/textM20"
                android:id="@+id/passport_onboarding_item_2_subtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/passport_onboarding_item_2_icon"
                app:layout_constraintTop_toBottomOf="@+id/passport_onboarding_item_2_title"/>
            <TextView
                android:gravity="bottom"
                android:id="@+id/passport_onboarding_item_3_icon"
                android:layout_width="16dp"
                android:layout_height="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/passport_onboarding_item_2_subtitle"
                style="?attr/textH50"/>
            <TextView
                android:textAppearance="?attr/textH50"
                android:id="@+id/passport_onboarding_item_3_title"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@+id/passport_onboarding_item_3_icon"
                app:layout_constraintTop_toTopOf="@+id/passport_onboarding_item_3_icon"/>
            <TextView
                android:textAppearance="?attr/textM20"
                android:id="@+id/passport_onboarding_item_3_subtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/passport_onboarding_item_3_icon"
                app:layout_constraintTop_toBottomOf="@+id/passport_onboarding_item_3_title"/>
            <com.avito.android.lib.design.banner.Banner
                android:id="@+id/passport_onboarding_promoblock"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:layout_marginBottom="48dp"
                android:layout_marginHorizontal="10dp"
                app:banner_contentPaddingBottom="28dp"
                app:banner_contentPaddingLeft="24dp"
                app:banner_contentPaddingRight="24dp"
                app:banner_contentPaddingTop="20dp"
                app:banner_title="@string/passport_merge_pro_convert_warning"
                app:banner_titleStyle="?attr/textM10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/passport_onboarding_item_3_subtitle"
                style="?attr/bannerWarmgray"/>
            <com.avito.android.lib.design.button.Button
                android:id="@+id/passport_onboarding_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/passport_merge_onboarding_button_continue"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/passport_onboarding_promoblock"
                style="?attr/buttonPrimaryMedium"/>
            <com.avito.android.lib.design.button.Button
                android:id="@+id/passport_onboarding_secondary_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/passport_merge_onboarding_button_more"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/passport_onboarding_button"
                style="?attr/buttonSecondaryMedium"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
