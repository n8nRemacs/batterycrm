<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rating_form_search_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="16dp"
    app:layoutDescription="@xml/fragment_rating_form_select_item_redesign_scene">
    <TextView
        android:textAppearance="?attr/textH20"
        android:id="@+id/rating_form_search_items_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/rating_form_search_items_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:id="@+id/rating_form_search_items_subtitle"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        app:layout_constraintBottom_toTopOf="@+id/rating_form_search_items_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rating_form_search_items_title"/>
    <com.avito.android.lib.design.input.Input
        android:textAppearance="?attr/textM20"
        android:id="@+id/rating_form_search_items_input"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="@string/rating_form_search_items_input_hint"
        android:drawableLeft="?attr/ic_search20"
        app:input_iconLeftColor="?attr/black"
        app:layout_constraintBottom_toTopOf="@+id/rating_form_search_items_recycler"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rating_form_search_items_subtitle"
        style="?attr/inputSearch"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rating_form_search_items_recycler"
        android:paddingBottom="24dp"
        android:clipToPadding="false"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rating_form_search_items_input"
        app:layout_goneMarginTop="8dp"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/rating_form_search_items_continue_button"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/rating_form_search_items_button_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="?attr/buttonPrimaryLarge"/>
</androidx.constraintlayout.motion.widget.MotionLayout>
