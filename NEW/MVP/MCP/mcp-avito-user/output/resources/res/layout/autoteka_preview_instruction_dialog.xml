<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp">
        <TextView
            android:id="@+id/first_option_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/autoteka_preview_instruction_first_option_title"
            app:layout_constraintTop_toTopOf="parent"
            style="?attr/textH30"/>
        <TextView
            android:id="@+id/first_option_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/autoteka_preview_instruction_first_option_subtitle"
            app:layout_constraintTop_toBottomOf="@+id/first_option_title"
            style="?attr/textM10"/>
        <TextView
            android:id="@+id/vin_title_doc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/autoteka_vin_title_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/first_option_subtitle"
            style="?attr/textH40"/>
        <TextView
            android:textColor="?attr/gray54"
            android:id="@+id/vin_example_doc"
            android:background="@drawable/background_preview_search_key_example"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/autoteka_vin_example_text"
            android:drawablePadding="4dp"
            android:layout_marginStart="4dp"
            app:drawableStartCompat="@drawable/ic_rounded_marker_blue"
            app:layout_constraintBottom_toBottomOf="@+id/vin_title_doc"
            app:layout_constraintStart_toEndOf="@+id/vin_title_doc"
            app:layout_constraintTop_toTopOf="@+id/vin_title_doc"
            style="?attr/textS20"/>
        <TextView
            android:id="@+id/vin_subtitle_doc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/autoteka_preview_instruction_vin_doc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vin_title_doc"
            style="?attr/textM20"/>
        <TextView
            android:id="@+id/reg_number_title_doc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/autoteka_reg_number_title_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vin_subtitle_doc"
            style="?attr/textH40"/>
        <TextView
            android:textColor="?attr/gray54"
            android:id="@+id/reg_number_example_doc"
            android:background="@drawable/background_preview_search_key_example"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/autoteka_reg_number_example_text"
            android:drawablePadding="4dp"
            android:layout_marginStart="4dp"
            app:drawableStartCompat="@drawable/ic_rounded_marker_green"
            app:layout_constraintBottom_toBottomOf="@+id/reg_number_title_doc"
            app:layout_constraintStart_toEndOf="@+id/reg_number_title_doc"
            app:layout_constraintTop_toTopOf="@+id/reg_number_title_doc"
            style="?attr/textS20"/>
        <TextView
            android:id="@+id/reg_number_subtitle_doc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/autoteka_preview_instruction_reg_number_doc"
            app:layout_constraintTop_toBottomOf="@+id/reg_number_title_doc"
            style="?attr/textM20"/>
        <TextView
            android:id="@+id/frame_title_doc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/autoteka_frame_title_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reg_number_subtitle_doc"
            style="?attr/textH40"/>
        <TextView
            android:textColor="?attr/gray54"
            android:id="@+id/frame_example_doc"
            android:background="@drawable/background_preview_search_key_example"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/autoteka_frame_example_text"
            android:drawablePadding="4dp"
            android:layout_marginStart="4dp"
            app:drawableStartCompat="@drawable/ic_rounded_marker_red"
            app:layout_constraintBottom_toBottomOf="@+id/frame_title_doc"
            app:layout_constraintStart_toEndOf="@+id/frame_title_doc"
            app:layout_constraintTop_toTopOf="@+id/frame_title_doc"
            style="?attr/textS20"/>
        <TextView
            android:id="@+id/frame_subtitle_doc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/autoteka_preview_instruction_frame_doc"
            app:layout_constraintTop_toBottomOf="@+id/frame_title_doc"
            style="?attr/textM20"/>
        <ImageView
            android:id="@+id/sts_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:src="@drawable/img_instruction_sts"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toBottomOf="@+id/frame_subtitle_doc"/>
        <TextView
            android:id="@+id/second_option_title_overlook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="@string/autoteka_preview_instruction_second_option"
            app:layout_constraintTop_toBottomOf="@+id/sts_image"
            style="?attr/textH30"/>
        <TextView
            android:id="@+id/vin_title_overlook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/autoteka_vin_title_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/second_option_title_overlook"
            style="?attr/textH40"/>
        <TextView
            android:textColor="?attr/gray54"
            android:id="@+id/vin_example_overlook"
            android:background="@drawable/background_preview_search_key_example"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/autoteka_vin_example_text"
            android:drawablePadding="4dp"
            android:layout_marginStart="4dp"
            app:drawableStartCompat="@drawable/ic_rounded_marker_blue"
            app:layout_constraintBottom_toBottomOf="@+id/vin_title_overlook"
            app:layout_constraintStart_toEndOf="@+id/vin_title_overlook"
            app:layout_constraintTop_toTopOf="@+id/vin_title_overlook"
            style="?attr/textS20"/>
        <TextView
            android:id="@+id/vin_subtitle_overlook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/autoteka_preview_instruction_vin_overlook"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vin_title_overlook"
            style="?attr/textM20"/>
        <TextView
            android:id="@+id/reg_number_title_overlook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/autoteka_reg_number_title_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vin_subtitle_overlook"
            style="?attr/textH40"/>
        <TextView
            android:textColor="?attr/gray54"
            android:id="@+id/reg_number_example_overlook"
            android:background="@drawable/background_preview_search_key_example"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/autoteka_reg_number_example_text"
            android:drawablePadding="4dp"
            android:layout_marginStart="4dp"
            app:drawableStartCompat="@drawable/ic_rounded_marker_green"
            app:layout_constraintBottom_toBottomOf="@+id/reg_number_title_overlook"
            app:layout_constraintStart_toEndOf="@+id/reg_number_title_overlook"
            app:layout_constraintTop_toTopOf="@+id/reg_number_title_overlook"
            style="?attr/textS20"/>
        <TextView
            android:id="@+id/reg_number_subtitle_overlook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/autoteka_preview_instruction_reg_number_overlook"
            app:layout_constraintTop_toBottomOf="@+id/reg_number_title_overlook"
            style="?attr/textM20"/>
        <ImageView
            android:id="@+id/car_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:src="@drawable/img_instruction_car"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toBottomOf="@+id/reg_number_subtitle_overlook"/>
        <TextView
            android:id="@+id/frame_title_overlook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/autoteka_frame_title_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/car_image"
            style="?attr/textH40"/>
        <TextView
            android:textColor="?attr/gray54"
            android:id="@+id/frame_example_overlook"
            android:background="@drawable/background_preview_search_key_example"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/autoteka_frame_example_text"
            android:drawablePadding="4dp"
            android:layout_marginStart="4dp"
            app:drawableStartCompat="@drawable/ic_rounded_marker_red"
            app:layout_constraintBottom_toBottomOf="@+id/frame_title_overlook"
            app:layout_constraintStart_toEndOf="@+id/frame_title_overlook"
            app:layout_constraintTop_toTopOf="@+id/frame_title_overlook"
            style="?attr/textS20"/>
        <TextView
            android:id="@+id/frame_subtitle_overlook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/autoteka_preview_instruction_frame_overlook"
            app:layout_constraintTop_toBottomOf="@+id/frame_title_overlook"
            style="?attr/textM20"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/img_instruction_frame"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toBottomOf="@+id/frame_subtitle_overlook"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
