<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_by_image"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/camera_item_view"
        layout="@layout/camera_preview_item_scanner_re23"/>
    <ImageButton
        android:id="@+id/close_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/publish_container_horizontal_padding"
        android:layout_marginTop="8dp"
        android:src="?attr/ic_arrowBack24"
        android:layout_marginStart="@dimen/publish_container_horizontal_padding"
        style="@style/Widget.Avito.Button.Flat.Gray"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="8dp">
        <TextView
            android:textAppearance="?attr/textHeadingSmall"
            android:textColor="?attr/white"
            android:id="@+id/scanner_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textAppearance="?attr/textBodySmall"
            android:textColor="?attr/white"
            android:id="@+id/scanner_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</FrameLayout>
