<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/popup"
    android:background="@drawable/serp_card_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        android:src="?attr/img_bannerLocation"
        android:scaleType="centerInside"/>
    <TextView
        android:textSize="16sp"
        android:textColor="?attr/black"
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="14dp"
        android:layout_toLeftOf="@+id/close_button"
        android:layout_toRightOf="@+id/image"
        android:layout_alignParentTop="true"/>
    <ImageButton
        android:id="@+id/close_button"
        android:background="@drawable/bg_location_notification_close_button"
        android:padding="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/ic_clear_16"/>
    <TextView
        android:id="@+id/change_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/serp_change"
        android:layout_toRightOf="@+id/image"
        android:layout_below="@+id/text"
        style="@style/Widget.Avito.Button.Flat.1_4"/>
</RelativeLayout>
