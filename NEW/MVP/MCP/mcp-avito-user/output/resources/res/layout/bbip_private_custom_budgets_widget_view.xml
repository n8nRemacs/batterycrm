<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:res="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/bbip_private_custom_budgets_container"
    android:paddingTop="12dp"
    android:paddingBottom="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/bg_bbip_private_custom_budgets_forecast"
        android:paddingTop="20dp"
        android:paddingBottom="28dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp">
        <TextView
            android:textAppearance="?attr/textM10"
            android:id="@+id/bbip_private_custom_budgets_forecast_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textAppearance="?attr/textH25"
            android:id="@+id/bbip_private_custom_budgets_contacts_forecast"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"/>
        <TextView
            android:textAppearance="?attr/textM10"
            android:id="@+id/bbip_private_custom_budgets_views_forecast"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"/>
        <com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout
            android:id="@+id/bbip_private_custom_budgets_forecast_shimmer"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            style="?attr/shimmerDefault">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.avito.android.lib.design.skeleton.Skeleton
                    android:id="@+id/bbip_private_custom_budgets_contacts_forecast_skeleton"
                    android:layout_width="200dp"
                    android:layout_height="16dp"
                    res:skeleton_radius="6dp"/>
                <com.avito.android.lib.design.skeleton.Skeleton
                    android:id="@+id/bbip_private_custom_budgets_views_forecast_skeleton"
                    android:layout_width="140dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="14dp"
                    res:skeleton_radius="6dp"/>
            </LinearLayout>
        </com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout>
    </LinearLayout>
    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/bbip_private_custom_budgets_compose_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/bbip_private_custom_budgets_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        style="?attr/buttonPrimaryLarge"/>
</LinearLayout>
