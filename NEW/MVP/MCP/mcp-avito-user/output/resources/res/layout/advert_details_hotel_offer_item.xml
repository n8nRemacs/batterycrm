<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="vertical"
    android:id="@+id/hotel_offer_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <include
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/content_horizontal_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        layout="@layout/advert_details_hotel_offer_shimmer_layout"/>
    <include
        android:id="@+id/redesign_shimmer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/content_horizontal_padding"
        app:layout_constraintBottom_toTopOf="@+id/offers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        layout="@layout/advert_details_hotel_offer_redesign_shimmer_layout"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/error_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/advert_details_hotel_offer_error_loading_title"
        android:layout_marginHorizontal="@dimen/content_horizontal_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textH25"
        android:ellipsize="end"
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_marginStart="@dimen/content_horizontal_padding"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toStartOf="@+id/more_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/redesign_shimmer"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:ellipsize="end"
        android:id="@+id/selected_dates"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:maxLines="1"
        android:layout_marginStart="@dimen/content_horizontal_padding"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toStartOf="@+id/more_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/more_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/content_horizontal_padding"
        app:layout_constraintBottom_toBottomOf="@+id/selected_dates"
        app:layout_constraintEnd_toEndOf="parent"
        style="?attr/buttonSecondaryExtraSmall"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/refresh"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="@string/advert_details_hotel_offer_refresh_loading_title"
        android:layout_marginHorizontal="@dimen/content_horizontal_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/error_message"
        style="?attr/buttonPrimaryLarge"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/offers"
        android:clipToPadding="false"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:overScrollMode="never"
        android:paddingHorizontal="@dimen/content_horizontal_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selected_dates"/>
    <TextView
        android:id="@+id/price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintWidth_default="wrap"
        app:layout_goneMarginEnd="0dp"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/discount_container"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constrainedHeight="true"
        app:layout_constrainedWidth="true"
        app:layout_constraintHeight_default="wrap">
        <com.avito.android.lib.design.strikethrough.StrikethroughTextView
            android:textAppearance="?attr/textM20"
            android:ellipsize="middle"
            android:id="@+id/original_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginEnd="3dp"
            app:strikethrough_show="true"
            app:strikethrough_tint="?attr/red600"/>
        <TextView
            android:textAppearance="?attr/textM20"
            android:textColor="?attr/red600"
            android:id="@+id/percent"
            android:background="@drawable/bg_hotel_discount_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/price_flow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/content_horizontal_padding"
        app:constraint_referenced_ids="price,discount_container"
        app:flow_horizontalBias="0"
        app:flow_horizontalGap="6dp"
        app:flow_horizontalStyle="packed"
        app:flow_wrapMode="chain"
        app:layout_constraintBottom_toTopOf="@+id/installments"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/preview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/content_horizontal_padding"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toStartOf="@+id/preview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/price_flow"/>
    <LinearLayout
        android:id="@+id/installments"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/content_horizontal_padding"
        android:layout_marginEnd="16dp"
        android:paddingVertical="4dp"
        app:layout_constraintEnd_toStartOf="@+id/preview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/details">
        <TextView
            android:gravity="center"
            android:id="@+id/installments_left_part"
            android:background="@drawable/bg_offer_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="?attr/black"
            android:paddingHorizontal="4dp"/>
        <TextView
            android:id="@+id/installments_right_part"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:id="@+id/description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/content_horizontal_padding"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/offer_barrier"
        app:layout_constraintEnd_toStartOf="@+id/preview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/installments"
        app:layout_constraintVertical_bias="0"
        app:layout_goneMarginEnd="0dp"/>
    <ImageView
        android:id="@+id/preview"
        android:background="@drawable/bg_preview_hotel_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginEnd="@dimen/content_horizontal_padding"
        app:layout_constraintBottom_toTopOf="@+id/offer_barrier"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/offer_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="price_flow, description, preview, installments"/>
    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/filters"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/content_horizontal_padding"
        app:alignContent="flex_start"
        app:alignItems="flex_start"
        app:dividerDrawable="@drawable/divider_6_6"
        app:flexDirection="row"
        app:flexWrap="wrap"
        app:flow_maxElementsWrap="2"
        app:justifyContent="flex_start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/offer_barrier"
        app:showDivider="middle">
        <com.avito.android.lib.design.input.Input
            android:id="@+id/date_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_flexGrow="10"
            style="?attr/baseSelect"/>
        <com.avito.android.lib.design.input.Input
            android:id="@+id/guest_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_flexGrow="1"
            style="?attr/baseSelect"/>
    </com.google.android.flexbox.FlexboxLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/actions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:divider="@drawable/divider_6dp"
        android:showDividers="middle"
        android:layout_marginHorizontal="@dimen/content_horizontal_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/filters"
        app:layout_goneMarginTop="18dp"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/hotel_offer_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="price_flow, description, preview, installments"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/error_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="error_message, refresh"/>
</androidx.constraintlayout.widget.ConstraintLayout>
