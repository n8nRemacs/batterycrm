<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/header_root_item"
    android:background="?attr/white"
    android:layout_width="@dimen/comparison_column_width"
    android:layout_height="@dimen/comparison_expanded_header_item_height"
    app:layoutDescription="@xml/comparison_header_item_scene">
    <com.avito.android.fresco.SimpleDraweeView
        android:id="@+id/comparison_image"
        android:background="@drawable/comparison_header_image_bg"
        android:layout_width="@dimen/comparison_column_width"
        android:layout_height="114dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:roundedCornerRadius="8dp"/>
    <ImageView
        android:id="@+id/overlay_image"
        android:layout_width="@dimen/comparison_column_width"
        android:layout_height="114dp"
        android:src="@drawable/comparison_inactive_foreground"
        android:scaleType="centerCrop"
        android:contentDescription="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:roundedCornerRadius="8dp"/>
    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/lock_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:checked="false"
        android:button="@drawable/comparison_checkbox_selector"
        app:layout_constraintStart_toStartOf="@+id/comparison_image"
        app:layout_constraintTop_toTopOf="@+id/comparison_image"/>
    <TextView
        android:textAppearance="?attr/textH4"
        android:ellipsize="end"
        android:id="@+id/comparison_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comparison_image"/>
    <TextView
        android:textAppearance="?attr/textS1"
        android:ellipsize="end"
        android:id="@+id/comparison_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comparison_price"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/comparison_action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="?attr/buttonAccentExtraSmall"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/comparison_menu_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_comparison_more_horizontal_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="?attr/buttonSecondaryExtraSmall"/>
    <View
        android:id="@+id/left_divider"
        android:background="?attr/gray16"
        android:visibility="gone"
        android:layout_width="1dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/right_divider"
        android:background="?attr/gray16"
        android:visibility="gone"
        android:layout_width="1dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.motion.widget.MotionLayout>
