<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:id="@+id/re_agent_set_profile_name_root"
    android:background="?attr/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/re_agent_set_profile_name_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/re_agent_set_profile_name_create_profile"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.avito.android.lib.design.nav_bar.NavBar
                android:id="@+id/re_agent_set_profile_nav_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textAppearance="?attr/textH25"
                android:id="@+id/re_agent_set_profile_name_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/re_agent_passport_add_profile_title"
                android:layout_marginHorizontal="@dimen/extended_profile_creation_horizontal_margin"/>
            <TextView
                android:textAppearance="?attr/textM20"
                android:id="@+id/re_agent_set_profile_name_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/re_agent_passport_add_profile_set_profile_name_subtitle"
                android:layout_marginHorizontal="@dimen/extended_profile_creation_horizontal_margin"/>
            <TextView
                android:textAppearance="?attr/textH50"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/re_agent_passport_add_profile_set_profile_name_first_name_text"
                android:layout_marginHorizontal="@dimen/extended_profile_creation_horizontal_margin"/>
            <com.avito.android.lib.design.input.Input
                android:id="@+id/re_agent_set_profile_name_first_name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="@string/re_agent_passport_add_profile_set_profile_name_input_hint"
                android:imeOptions="actionNext"
                android:layout_marginHorizontal="@dimen/extended_profile_creation_horizontal_margin"/>
            <TextView
                android:textAppearance="?attr/textS10"
                android:textColor="?attr/red"
                android:id="@+id/re_agent_set_profile_name_first_name_empty_error"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginHorizontal="@dimen/extended_profile_creation_horizontal_margin"/>
            <TextView
                android:textAppearance="?attr/textH50"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/re_agent_passport_add_profile_set_profile_name_second_name_text"
                android:layout_marginHorizontal="@dimen/extended_profile_creation_horizontal_margin"/>
            <com.avito.android.lib.design.input.Input
                android:id="@+id/re_agent_set_profile_name_second_name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="@string/re_agent_passport_add_profile_set_profile_name_input_hint"
                android:imeOptions="actionDone"
                android:layout_marginHorizontal="@dimen/extended_profile_creation_horizontal_margin"/>
            <TextView
                android:textAppearance="?attr/textS10"
                android:textColor="?attr/red"
                android:id="@+id/re_agent_set_profile_name_second_name_empty_error"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginHorizontal="@dimen/extended_profile_creation_horizontal_margin"/>
        </LinearLayout>
    </ScrollView>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/re_agent_set_profile_name_create_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="34dp"
        android:text="@string/re_agent_passport_add_profile_set_profile_name_button_text"
        android:layout_marginHorizontal="@dimen/extended_profile_creation_horizontal_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        style="?attr/buttonPrimaryLarge"/>
</androidx.constraintlayout.widget.ConstraintLayout>
