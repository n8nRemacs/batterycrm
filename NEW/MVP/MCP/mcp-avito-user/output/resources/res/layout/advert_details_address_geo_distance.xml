<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:id="@+id/geo_distance_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/content_horizontal_padding">
    <com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout
        android:id="@+id/geo_distance_info_shimmer"
        android:visibility="gone"
        android:layout_width="145dp"
        android:layout_height="12dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="?attr/shimmerDefault">
        <com.avito.android.lib.design.skeleton.Skeleton
            android:id="@+id/geo_distance_info_skeleton"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:skeleton_radius="6dp"/>
    </com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout>
    <TextView
        android:textAppearance="?attr/textM10"
        android:ellipsize="end"
        android:id="@+id/geo_distance_info"
        android:paddingTop="2dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:layout_weight="1"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/geo_distance_hint"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/geo_distance_hint"
        android:background="@null"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="?attr/ic_help20"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toRightOf="@+id/geo_distance_info"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        app:tint="?attr/gray54"/>
</androidx.constraintlayout.widget.ConstraintLayout>
