<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="vertical"
    android:id="@+id/teaser_container"
    android:background="?attr/constantBlack"
    android:paddingTop="76dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="16dp">
    <TextView
        android:textAppearance="?attr/textH30"
        android:textColor="?attr/constantWhite"
        android:ellipsize="end"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:textColor="?attr/gray54"
        android:id="@+id/subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="subtitle subtitle subtitle"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/insight_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"/>
    <FrameLayout
        android:id="@+id/more_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">
        <ImageView
            android:id="@+id/icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="3dp"
            android:src="?attr/ic_more16"
            app:tint="?attr/constantWhite"/>
        <TextView
            android:textAppearance="?attr/textM10"
            android:textColor="?attr/constantWhite"
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/photo_gallery_teaser_v2_more_link_10"
            android:layout_marginStart="24dp"/>
    </FrameLayout>
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/autoteka_bg_discount_gradient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/discountContainer"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">
            <TextView
                android:textAppearance="?attr/textM10"
                android:textColor="?attr/constantWhite"
                android:id="@+id/discountTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <com.avito.android.lib.design.docking_badge.DockingBadge
                android:id="@+id/discountAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:dockingBadge_end="?attr/dockingBadgeEdgePipkaSmall"
                app:dockingBadge_start="?attr/dockingBadgeEdgeFlagSmall"
                style="?attr/dockingBadgeGreenSmall"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/buttonContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:textAppearance="?attr/textM1"
        android:textColor="?attr/constantWhite"
        android:gravity="center_horizontal"
        android:id="@+id/standalone_link"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"/>
</LinearLayout>
