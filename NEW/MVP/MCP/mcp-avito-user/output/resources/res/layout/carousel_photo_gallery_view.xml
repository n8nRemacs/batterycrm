<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.avito.android.photo_gallery_carousel.gallery_view.CarouselPhotoGalleryRecyclerView
        android:id="@+id/gallery"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:paddingHorizontal="@dimen/carousel_photo_gallery_horizontal_padding"/>
    <LinearLayout
        android:layout_gravity="bottom|left"
        android:orientation="horizontal"
        android:id="@+id/action_items_container"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="28dp">
        <ImageView
            android:id="@+id/realty_layout"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            app:srcCompat="@drawable/ic_realty_layout"/>
        <FrameLayout
            android:id="@+id/ai_design_icon"
            android:background="@drawable/ic_realty_background"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:contentDescription="@null"
                app:srcCompat="?attr/ic_ai16"
                app:tint="?attr/constantWhite"/>
        </FrameLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_gravity="start|top"
        android:id="@+id/fl_page_indicator"
        android:background="@drawable/bg_text_page_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="28dp">
        <TextView
            android:textAppearance="?attr/textS20"
            android:textColor="?attr/constantWhite"
            android:id="@+id/page_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
</merge>
