<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:id="@+id/sales_advert_promo_banner_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="-15dp"
    android:minHeight="135dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.avito.android.fresco.SimpleDraweeView
            android:id="@+id/sales_advert_promo_banner_background_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="12dp"
            app:actualImageScaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/sales_advert_promo_banner_text_container"
            android:paddingBottom="60dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@+id/sales_advert_promo_banner_right_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:textAppearance="?attr/textH40"
                android:id="@+id/sales_advert_promo_banner_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"/>
            <TextView
                android:textAppearance="?attr/textM20"
                android:id="@+id/sales_advert_promo_banner_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/sales_advert_promo_banner_price_container"
            android:paddingBottom="60dp"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sales_advert_promo_banner_text_container">
            <TextView
                android:textAppearance="?attr/textH10"
                android:id="@+id/sales_advert_promo_banner_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"
                android:layout_marginEnd="8dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.avito.android.lib.design.strikethrough.StrikethroughTextView
                    android:textAppearance="?attr/textM20"
                    android:textSize="@dimen/advert_old_price_standard_size"
                    android:id="@+id/sales_advert_promo_banner_old_price"
                    android:visibility="visible"
                    android:duplicateParentState="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    app:strikethrough_show="true"
                    app:strikethrough_tint="?attr/red600"/>
                <TextView
                    android:textAppearance="?attr/textM20"
                    android:textSize="@dimen/advert_old_price_standard_size"
                    android:textColor="?attr/red600"
                    android:id="@+id/sales_advert_promo_banner_old_price_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textIsSelectable="true"
                    android:layout_marginEnd="8dp"/>
            </LinearLayout>
        </LinearLayout>
        <com.avito.android.fresco.SimpleDraweeView
            android:id="@+id/sales_advert_promo_banner_right_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:actualImageScaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.avito.android.serp_core.timer.CountDownTimerWidget
        android:id="@+id/sales_advert_promo_banner_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/ItemsCarouselCountDownTimer"/>
</androidx.constraintlayout.widget.ConstraintLayout>
