<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/brandspace_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.avito.android.brandspace.view.BrandspaceToolbar
        android:id="@+id/brandspace_toolbar"
        android:layout_width="0dp"
        android:layout_height="?android:attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:id="@+id/logo_block"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/brandspace_avito_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/brandspace_avito_logo"/>
            <View
                android:id="@+id/brand_logo_divider"
                android:background="?attr/gray16"
                android:visibility="gone"
                android:layout_width="1dp"
                android:layout_height="28dp"
                android:layout_marginHorizontal="16dp"/>
            <FrameLayout
                android:id="@+id/logo_container"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:paddingVertical="2dp">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_gravity="center"
                    android:id="@+id/brand_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"/>
            </FrameLayout>
        </LinearLayout>
    </com.avito.android.brandspace.view.BrandspaceToolbar>
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/brandspace_beduin_v2_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/brandspace_toolbar"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/brandspace_top_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/brandspace_toolbar"
        app:layout_constraintWidth_max="@dimen/brandspace_content_width"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/brandspace_main_list"
        android:clipToPadding="false"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/brandspace_top_list"
        app:layout_constraintWidth_max="@dimen/brandspace_content_width"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/brandspace_bottom_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_max="@dimen/brandspace_content_width"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/brandspace_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="brandspace_top_list,brandspace_main_list,brandspace_bottom_list"/>
    <FrameLayout
        android:id="@+id/brandspace_overlay_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/brandspace_toolbar"/>
</androidx.constraintlayout.widget.ConstraintLayout>
