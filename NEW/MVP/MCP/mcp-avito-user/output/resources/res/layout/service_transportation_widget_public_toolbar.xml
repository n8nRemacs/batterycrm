<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:theme="@style/Theme.DesignSystem.Re23"
        android:id="@+id/serviceTransportationWidgetCollapsingToolbar"
        android:visibility="gone"
        android:fitsSystemWindows="true"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:collapsedTitleGravity="center_horizontal"
        app:collapsedTitleTextAppearance="?attr/textH5"
        app:expandedTitleGravity="top|left"
        app:expandedTitleMarginStart="28dp"
        app:expandedTitleTextAppearance="?attr/textH2"
        app:layout_scrollFlags="snap|exitUntilCollapsed|scroll"
        app:scrimAnimationDuration="100"
        app:scrimVisibleHeightTrigger="100dp"
        app:titleCollapseMode="fade"
        app:titleEnabled="false">
        <com.avito.android.lib.design.banner.Banner
            android:layout_gravity="center_horizontal"
            android:id="@+id/serviceTransportationWidget"
            android:paddingTop="52dp"
            android:fitsSystemWindows="true"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:paddingEnd="0dp"
            app:banner_bottomEdgeRounded="false"
            app:banner_content="@layout/service_transportation_widget_content"
            app:banner_contentPaddingBottom="0dp"
            app:banner_shadowEnabled="false"
            app:banner_titleStyle="?attr/textH30"
            app:banner_topEdgeRounded="false"
            style="?attr/bannerWarmgray"/>
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:background="@color/common_transparent_black"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:contentInsetEnd="0dp"
            app:contentInsetEndWithActions="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:layout_collapseMode="pin"
            app:navigationIcon="@null">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/service_transportation_widget_navigation_icon"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="?attr/ic_arrowBack24"
                    android:scaleType="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:textAppearance="?attr/textH50"
                    android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:id="@+id/service_transportation_widget_toolbar_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textAlignment="center"
                    android:paddingHorizontal="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/service_transportation_widget_subtitle"
                    app:layout_constraintEnd_toStartOf="@+id/service_transportation_widget_search_icon"
                    app:layout_constraintStart_toEndOf="@+id/service_transportation_widget_navigation_icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed"/>
                <TextView
                    android:textAppearance="?attr/textS20"
                    android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:id="@+id/service_transportation_widget_subtitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textAlignment="center"
                    android:paddingHorizontal="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/service_transportation_widget_search_icon"
                    app:layout_constraintStart_toEndOf="@+id/service_transportation_widget_navigation_icon"
                    app:layout_constraintTop_toBottomOf="@+id/service_transportation_widget_toolbar_title"/>
                <ImageView
                    android:id="@+id/service_transportation_widget_search_icon"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="?attr/ic_search24"
                    android:scaleType="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.CollapsingToolbarLayout>
    <FrameLayout
        android:id="@+id/service_transportation_widget_thumb_layout_overlay"
        android:background="?attr/transparentBlack"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/service_transportation_widget_thumb_layout"
            android:background="@drawable/transportation_widget_toolbar_view_thumb_background"
            android:visibility="gone"
            android:clipToPadding="true"
            android:layout_width="match_parent"
            android:layout_height="20dp">
            <View
                android:layout_gravity="bottom|center_horizontal"
                android:id="@+id/service_transportation_widget_header_thumb"
                android:background="@drawable/transportation_widget_toolbar_view_thumb"
                android:layout_width="32dp"
                android:layout_height="4dp"
                android:layout_marginBottom="10dp"
                android:alpha="0"/>
        </FrameLayout>
    </FrameLayout>
</merge>
