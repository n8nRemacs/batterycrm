<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/extended_profile_geo_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_gravity="start|top"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="36dp">
        <TextView
            android:textAppearance="?attr/textM10"
            android:id="@+id/extended_profile_geo_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textAppearance="?attr/textM10"
            android:textColor="?attr/gray54"
            android:id="@+id/extended_profile_geo_schedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"/>
    </LinearLayout>
    <com.avito.android.lib.design.button.Button
        android:layout_gravity="end|top"
        android:id="@+id/extended_profile_geo_more_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="?attr/ic_more24"
        app:button_backgroundColor="?attr/white"
        app:button_iconColor="?attr/black"
        style="?attr/buttonBrandWhiteMedium"/>
</FrameLayout>
