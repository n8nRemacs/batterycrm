<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="14dp"
    android:layout_marginBottom="2dp"
    android:layout_marginHorizontal="@dimen/extended_profile_widget_horizontal_margin">
    <TextView
        android:textAppearance="?attr/textH40"
        android:id="@+id/extended_profile_correction_search_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:textColor="?attr/blue"
        android:id="@+id/extended_profile_correction_search_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>
</LinearLayout>
