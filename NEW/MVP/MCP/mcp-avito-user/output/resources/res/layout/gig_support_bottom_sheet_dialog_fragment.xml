<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:id="@+id/support_bottom_sheet_root"
    android:paddingTop="10dp"
    android:paddingBottom="24dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="10dp">
    <com.avito.android.lib.design.button.Button
        android:id="@+id/support_chat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:button_subtitleTextAppearance="?attr/textS20"
        app:button_subtitleTextColor="@color/re23_button_overlay_secondary_large_two_rows_subtitle_text_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="?attr/buttonSecondaryLarge"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/support_call"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:button_subtitleTextAppearance="?attr/textS20"
        app:button_subtitleTextColor="@color/re23_button_overlay_secondary_large_two_rows_subtitle_text_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/support_chat"
        style="?attr/buttonSecondaryLarge"/>
</androidx.constraintlayout.widget.ConstraintLayout>
