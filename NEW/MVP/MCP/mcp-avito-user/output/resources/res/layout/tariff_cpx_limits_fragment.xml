<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="vertical"
    android:id="@+id/tariff_cpx_limits_fragment"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textAppearance="?attr/textH20"
        android:id="@+id/tariff_cpx_limit_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="16dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp">
        <com.avito.android.lib.design.component_container.ComponentContainer
            android:id="@+id/tariff_cpx_limit_input_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="3dp"
            app:componentContainer_titleAppearance="?attr/textH40">
            <com.avito.android.lib.design.input.Input
                android:textAppearance="?attr/textM2"
                android:id="@+id/tariff_cpx_limit_input"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="6"
                android:imeOptions="actionDone"
                app:input_formatterType="roubles"
                style="?attr/input"/>
        </com.avito.android.lib.design.component_container.ComponentContainer>
        <com.avito.android.lib.design.component_container.ComponentContainer
            android:id="@+id/tariff_cpx_limit_remains_container"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="3dp"
            app:componentContainer_titleAppearance="?attr/textH40">
            <com.avito.android.lib.design.input.Input
                android:textAppearance="?attr/textM2"
                android:textColor="@color/cpx_limit_input_text_color"
                android:id="@+id/tariff_cpx_limit_remains"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="11"
                android:imeOptions="actionDone"
                app:input_postfixColor="?attr/gray54"
                style="?attr/input"/>
        </com.avito.android.lib.design.component_container.ComponentContainer>
    </LinearLayout>
    <TextView
        android:textAppearance="?attr/textS10"
        android:id="@+id/tariff_cpx_limit_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginHorizontal="16dp"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/tariff_cpx_limit_primary_button"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="20dp"
        style="?attr/buttonPrimaryLarge"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/tariff_cpx_limit_secondary_button"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="20dp"
        style="?attr/buttonSecondaryLarge"/>
</LinearLayout>
