<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="vertical"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/filter_item_horizontal_padding">
    <TextView
        android:textAppearance="?attr/textH5"
        android:id="@+id/label"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <FrameLayout
        android:orientation="horizontal"
        android:id="@+id/badge_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/label">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/checkbox_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="16dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="84dp"
            android:layout_marginEnd="46dp"
            android:layout_marginVertical="19dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textAppearance="?attr/textH5"
                    android:gravity="start"
                    android:id="@+id/checkbox_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"/>
                <com.avito.android.lib.design.badge.Badge
                    android:layout_gravity="center_vertical"
                    android:id="@+id/notification_badge"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    style="?attr/badgeTextMedium"/>
            </LinearLayout>
            <TextView
                android:textAppearance="?attr/textS20"
                android:gravity="start"
                android:id="@+id/checkbox_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <FrameLayout
            android:layout_gravity="end"
            android:paddingTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="20dp">
            <ImageView
                android:background="@drawable/bg_checkmark_white"
                android:layout_width="21dp"
                android:layout_height="21dp"/>
            <com.avito.android.lib.design.toggle.Checkmark
                android:id="@+id/checkbox_checkmark"
                android:layout_width="21dp"
                android:layout_height="21dp"
                style="?attr/toggleCheckmarkDefaultMedium"/>
        </FrameLayout>
    </FrameLayout>
</LinearLayout>
