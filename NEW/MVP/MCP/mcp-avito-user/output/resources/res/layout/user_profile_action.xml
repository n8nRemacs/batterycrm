<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/action_button"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp">
    <View
        android:background="?attr/gray8"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Avito.Button"
        android:textColor="?attr/blue"
        android:gravity="center"
        android:id="@+id/action_text"
        android:background="@drawable/btn_transparent_states"
        android:paddingLeft="@dimen/profile_inside_horizontal_padding"
        android:paddingTop="@dimen/standard_padding"
        android:paddingRight="@dimen/profile_inside_horizontal_padding"
        android:paddingBottom="@dimen/standard_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:fontFamily="?attr/fontHeavy"/>
</LinearLayout>
