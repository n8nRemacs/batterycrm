<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="vertical"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/success_screen_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_close_24"
        android:importantForAccessibility="no"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.avito.android.lib.deprecated_design.badge_bar.ImageLoadableView
        android:id="@+id/success_screen_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="22dp"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toTopOf="@+id/success_screen_title"
        app:layout_constraintTop_toBottomOf="@+id/success_screen_close"/>
    <TextView
        android:textColor="?attr/bottomSheet_titleTextColor"
        android:gravity="start"
        android:id="@+id/success_screen_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintBottom_toTopOf="@+id/success_screen_description"
        style="?attr/textH20"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:textColor="?attr/bottomSheet_titleTextColor"
        android:id="@+id/success_screen_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintBottom_toTopOf="@+id/success_screen_button"/>
    <com.avito.android.lib.design.button.Button
        android:theme="@style/Theme.DesignSystem.Re23"
        android:layout_gravity="bottom|center_horizontal"
        android:id="@+id/success_screen_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        style="?attr/buttonPrimaryLarge"/>
</androidx.constraintlayout.widget.ConstraintLayout>
