<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:id="@+id/user_profile_management_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/UserProfileCardContainer">
    <TextView
        android:textAppearance="?attr/textH5"
        android:id="@+id/card_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/profile_inside_horizontal_padding"
        android:paddingVertical="@dimen/standard_padding"/>
    <include
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/info_block"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/action_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">
        <View
            android:background="?attr/gray8"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <include
            android:id="@+id/action_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            layout="@layout/button_flat_card"/>
    </LinearLayout>
</LinearLayout>
