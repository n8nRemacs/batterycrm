<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:theme="@style/Theme.DesignSystem.Re23"
        android:orientation="vertical"
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.avito.android.lib.design.component_container.ComponentContainer
            android:id="@+id/surname_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="16dp"
            app:componentContainer_title="@string/virtual_deal_room_reference_category_surname"
            app:componentContainer_titleAppearance="?attr/textH50">
            <com.avito.android.lib.design.input.Input
                android:id="@+id/input_surname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?attr/inputDefaultM"/>
        </com.avito.android.lib.design.component_container.ComponentContainer>
        <com.avito.android.lib.design.component_container.ComponentContainer
            android:id="@+id/name_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="16dp"
            app:componentContainer_title="@string/virtual_deal_room_reference_category_name"
            app:componentContainer_titleAppearance="?attr/textH50">
            <com.avito.android.lib.design.input.Input
                android:id="@+id/input_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?attr/inputDefaultM"/>
        </com.avito.android.lib.design.component_container.ComponentContainer>
        <com.avito.android.lib.design.component_container.ComponentContainer
            android:id="@+id/phone_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="16dp"
            app:componentContainer_title="@string/virtual_deal_room_reference_category_phone"
            app:componentContainer_titleAppearance="?attr/textH50">
            <com.avito.android.lib.design.input.Input
                android:id="@+id/input_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:inputType="phone"
                android:imeOptions="actionDone"
                app:input_formatterType="mobile_phone"
                style="?attr/inputDefaultM"/>
        </com.avito.android.lib.design.component_container.ComponentContainer>
        <com.avito.android.lib.design.component_container.ComponentContainer
            android:id="@+id/email_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            app:componentContainer_title="@string/virtual_deal_room_reference_category_email"
            app:componentContainer_titleAppearance="?attr/textH50">
            <com.avito.android.lib.design.input.Input
                android:id="@+id/input_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?attr/inputDefaultM"/>
        </com.avito.android.lib.design.component_container.ComponentContainer>
    </LinearLayout>
</ScrollView>
