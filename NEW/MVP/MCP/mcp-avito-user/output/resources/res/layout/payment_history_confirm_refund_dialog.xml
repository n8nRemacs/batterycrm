<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/payment_history_confirm_refund_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/confirm_refund_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/confirm_refund_title"
        android:layout_marginHorizontal="16dp"
        style="?attr/textH20"/>
    <TextView
        android:id="@+id/confirm_refund_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="16dp"
        style="?attr/textM10"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/confirm_refund_primary_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="6dp"
        android:text="@string/confirm_refund_positive_button_text"
        android:layout_marginHorizontal="10dp"
        style="?attr/buttonPrimaryLarge"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/confirm_refund_secondary_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/confirm_refund_negative_button_text"
        android:layout_marginHorizontal="10dp"
        style="?attr/buttonSecondaryLarge"/>
</LinearLayout>
