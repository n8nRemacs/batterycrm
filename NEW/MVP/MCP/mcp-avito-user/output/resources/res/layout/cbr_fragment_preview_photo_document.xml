<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ru.cyberity.cbr.core.widget.CBRBackgroundView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cbr_preview_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.Group
                android:id="@+id/cbr_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="cbr_photo,cbr_title,cbr_subtitle,cbr_primary_button,cbr_secondary_button,cbr_powered,cbr_rotate_cw,cbr_rotate_ccw,cbr_content_icon"/>
            <androidx.constraintlayout.widget.Guideline
                android:orientation="vertical"
                android:id="@+id/cbr_guideline_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_begin="@dimen/cbr_margin_medium"/>
            <androidx.constraintlayout.widget.Guideline
                android:orientation="vertical"
                android:id="@+id/cbr_guideline_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_end="@dimen/cbr_margin_medium"/>
            <ru.cyberity.cbr.core.widget.CBRRotationZoomableImageView
                android:id="@+id/cbr_photo"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/cbr_margin_medium"
                android:transitionName="cbr_photo"
                app:cbr_zoomEnabled="true"
                app:layout_constraintBottom_toTopOf="@+id/cbr_rotation_buttons"
                app:layout_constraintEnd_toEndOf="@+id/cbr_guideline_end"
                app:layout_constraintStart_toStartOf="@+id/cbr_guideline_start"
                app:layout_constraintTop_toBottomOf="@+id/cbr_toolbar"/>
            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/cbr_rotation_buttons"
                android:layout_width="1dp"
                android:layout_height="1dp"
                app:barrierDirection="top"
                app:constraint_referenced_ids="cbr_rotate_ccw,cbr_rotate_cw"/>
            <ru.cyberity.cbr.core.widget.CBRImageButton
                android:id="@+id/cbr_rotate_cw"
                android:visibility="invisible"
                android:layout_width="@dimen/cbr_min_button_size"
                android:layout_height="@dimen/cbr_min_button_size"
                android:scaleType="center"
                app:layout_constraintBottom_toTopOf="@+id/cbr_title"
                app:layout_constraintStart_toStartOf="@+id/cbr_guideline_start"
                app:srcCompat="@drawable/cbr_ic_rotate_cw"/>
            <ru.cyberity.cbr.core.widget.CBRImageButton
                android:id="@+id/cbr_rotate_ccw"
                android:visibility="invisible"
                android:layout_width="@dimen/cbr_min_button_size"
                android:layout_height="@dimen/cbr_min_button_size"
                android:scaleType="center"
                app:layout_constraintBottom_toTopOf="@+id/cbr_title"
                app:layout_constraintEnd_toEndOf="@+id/cbr_guideline_end"
                app:srcCompat="@drawable/cbr_ic_rotate_ccw"/>
            <ru.cyberity.cbr.core.widget.CBRH2TextView
                android:gravity="center"
                android:id="@+id/cbr_iddoc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/cbr_margin_medium"
                app:layout_constraintEnd_toEndOf="@+id/cbr_guideline_end"
                app:layout_constraintStart_toStartOf="@+id/cbr_guideline_start"
                app:layout_constraintTop_toBottomOf="@+id/cbr_photo"/>
            <ru.cyberity.cbr.core.widget.CBRH2TextView
                android:gravity="center"
                android:id="@+id/cbr_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/cbr_margin_small"
                app:layout_constraintBottom_toTopOf="@+id/cbr_subtitle"
                app:layout_constraintEnd_toEndOf="@+id/cbr_guideline_end"
                app:layout_constraintStart_toStartOf="@+id/cbr_guideline_start"/>
            <ru.cyberity.cbr.core.widget.CBRSubtitle2TextView
                android:gravity="center"
                android:id="@+id/cbr_subtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/cbr_margin_medium_small"
                app:layout_constraintBottom_toTopOf="@+id/cbr_primary_button"
                app:layout_constraintEnd_toEndOf="@+id/cbr_guideline_end"
                app:layout_constraintStart_toEndOf="@+id/cbr_content_icon"/>
            <ru.cyberity.cbr.core.widget.CBRImageView
                android:id="@+id/cbr_content_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/cbr_margin_medium"
                android:contentDescription="@null"
                android:layout_marginEnd="@dimen/cbr_margin_small"
                app:layout_constraintEnd_toStartOf="@+id/cbr_subtitle"
                app:layout_constraintStart_toStartOf="@+id/cbr_guideline_start"
                app:layout_constraintTop_toTopOf="@+id/cbr_subtitle"
                app:tint="?attr/cbr_colorOnPending"/>
            <ru.cyberity.cbr.core.widget.CBRPrimaryButton
                android:id="@+id/cbr_primary_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/cbr_secondary_button"
                app:layout_constraintEnd_toEndOf="@+id/cbr_guideline_end"
                app:layout_constraintStart_toStartOf="@+id/cbr_guideline_start"/>
            <ru.cyberity.cbr.core.widget.CBRSecondaryButton
                android:id="@+id/cbr_secondary_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/cbr_margin_medium"
                app:layout_constraintBottom_toTopOf="@+id/cbr_powered"
                app:layout_constraintEnd_toEndOf="@+id/cbr_guideline_end"
                app:layout_constraintStart_toStartOf="@+id/cbr_guideline_start"/>
            <ru.cyberity.cbr.core.widget.CBRToolbarView
                android:id="@+id/cbr_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"/>
            <include
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/cbr_margin_medium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/cbr_guideline_end"
                app:layout_constraintStart_toStartOf="@+id/cbr_guideline_start"
                layout="@layout/cbr_layout_powered"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ru.cyberity.cbr.core.widget.CBRBackgroundView>
    <include
        android:id="@+id/cbr_warning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/bottom_sheet_behavior"
        layout="@layout/cbr_iddoc_warning_bottom_sheet"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
