<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="vertical"
    android:id="@+id/feedback_adverts_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.avito.android.lib.design.nav_bar.NavBar
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.avito.android.lib.design.input.Input
                android:id="@+id/search_field"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/messenger_feedback_advert_search_hint"
                android:maxLength="255"
                android:layout_marginHorizontal="16dp"
                style="?attr/inputSearch"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler"
                android:paddingBottom="32dp"
                android:visibility="visible"
                android:clipToPadding="false"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="13dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:id="@+id/message_container"
            android:padding="16dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp">
            <TextView
                android:gravity="center"
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?attr/textH20"/>
            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/message_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                style="?attr/textM20"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
