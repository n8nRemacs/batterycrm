<?xml version="1.0" encoding="utf-8"?>
<com.avito.android.lib.design.floating_container.FloatingContainer xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:layout_gravity="bottom|center_horizontal"
    android:orientation="vertical"
    android:id="@+id/buttons_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    style="?attr/floatingContainerIncomplete">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/editor_panel"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">
        <com.avito.android.lib.design.chips.Chips
            android:id="@+id/style_chips"
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            app:chips_childHorizontalSpacing="8dp"
            app:chips_childMinWidth="36dp"
            app:chips_selectStrategy="multiple"
            app:chips_selectedAppearance="@style/Publish.Button.HtmlEditor.Active"
            app:chips_unselectedAppearance="@style/Publish.Button.HtmlEditor.Default"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="?attr/chipsLarge"/>
        <com.avito.android.lib.design.button.Button
            android:id="@+id/undo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="?attr/ic_undo24"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/redo"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/Publish.Button.HtmlEditor.Default"/>
        <com.avito.android.lib.design.button.Button
            android:id="@+id/redo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="?attr/ic_redo24"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/keyboard"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/Publish.Button.HtmlEditor.Default"/>
        <com.avito.android.lib.design.button.Button
            android:id="@+id/keyboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="?attr/ic_keyboard24"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/Publish.Button.HtmlEditor.Default"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.avito.android.lib.design.button.Button
        android:layout_gravity="bottom|center_horizontal"
        android:id="@+id/main_button"
        android:layout_width="match_parent"
        style="?attr/buttonPrimaryLarge"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/navigation_buttons_container"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</com.avito.android.lib.design.floating_container.FloatingContainer>
