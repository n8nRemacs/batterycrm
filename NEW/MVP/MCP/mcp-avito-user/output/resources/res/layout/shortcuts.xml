<?xml version="1.0" encoding="utf-8"?>
<com.avito.android.shortcut_navigation_bar.NotLimitingChildrenHeightLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shortcuts_scroll_layout"
    android:visibility="invisible"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/shortcuts_container"
        android:paddingTop="@dimen/shortcuts_top_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.avito.android.lib.design.component_container.ComponentContainer
            android:id="@+id/top_entry_point"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="48dp"
            app:componentContainer_titleAppearance="?attr/textHeadingLarge">
            <com.avito.android.lib.design.input.Input
                android:id="@+id/top_entry_point_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="52dp"
                android:inputType="textNoSuggestions"
                app:input_backgroundColor="@color/bg_redesign_input_normal"
                app:input_cornerRadius="@dimen/redesign_search_toolbar_input_corner_radius"
                style="?attr/baseSelect"/>
        </com.avito.android.lib.design.component_container.ComponentContainer>
        <FrameLayout
            android:id="@+id/top_widget_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.avito.android.lib.design.tab_layout.AvitoTabLayout
            android:id="@+id/tabs_container"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Design.Widget.TabLayout.Job"/>
        <com.avito.android.lib.design.chips.ui.Chips
            android:theme="@style/Theme.DesignSystem.Re23"
            android:id="@+id/chips_tabs_container"
            android:visibility="gone"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:animateLayoutChanges="false"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/upper_block"
            android:background="?attr/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/shortcuts_header"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/shortcut_bar_header_margin_top"
                android:layout_marginHorizontal="@dimen/serp_horizontal_padding"
                android:paddingHorizontal="@dimen/shortcut_bar_header_horizontal_padding"
                style="?attr/textHeadingLarge"/>
            <TextView
                android:ellipsize="end"
                android:id="@+id/shortcuts_geo_header"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_marginHorizontal="@dimen/serp_horizontal_padding"
                android:paddingHorizontal="@dimen/shortcut_bar_header_horizontal_padding"
                style="?attr/textBodyDense"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/upper_horizontal_block"
                android:visibility="gone"
                android:clipChildren="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/shortcut_bar_upper_block_margin_top"
                android:paddingStart="@dimen/shortcut_bar_blocks_padding_start"
                android:paddingEnd="@dimen/shortcut_bar_blocks_padding_end">
                <View
                    android:id="@+id/geo_click_zone"
                    android:background="@drawable/redesigned_geo_button_background"
                    android:focusable="true"
                    android:visibility="gone"
                    android:clickable="true"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="@+id/geo_address"
                    app:layout_constraintEnd_toEndOf="@+id/arrow_icon"
                    app:layout_constraintStart_toStartOf="@+id/geo_address"
                    app:layout_constraintTop_toTopOf="@+id/geo_address"/>
                <TextView
                    android:textAppearance="?attr/textS1"
                    android:ellipsize="end"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/geo_address"
                    android:paddingTop="@dimen/shortcut_bar_geo_address_padding_top"
                    android:focusable="false"
                    android:clickable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:drawablePadding="@dimen/shortcut_bar_blocks_titles_drawable_padding"
                    app:drawableStartCompat="?attr/ic_hollowPin16"
                    app:drawableTint="?attr/black"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/arrow_icon"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0"/>
                <ImageView
                    android:id="@+id/arrow_icon"
                    android:paddingTop="@dimen/shortcut_bar_arrow_padding_top"
                    android:focusable="false"
                    android:clickable="false"
                    android:layout_width="@dimen/shortcut_bar_arrow_icon_width"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/shortcut_bar_arrow_margin_top"
                    android:contentDescription="@null"
                    android:paddingStart="@dimen/shortcut_bar_arrow_padding_start"
                    android:layout_marginStart="@dimen/shortcut_bar_arrow_margin_start"
                    android:layout_marginEnd="@dimen/shortcut_bar_arrow_margin_end"
                    app:layout_constraintBottom_toBottomOf="@+id/geo_address"
                    app:layout_constraintEnd_toStartOf="@+id/filters_icon"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toEndOf="@+id/geo_address"
                    app:layout_constraintTop_toTopOf="@+id/geo_address"
                    app:srcCompat="?attr/ic_arrowDown16"
                    app:tint="?attr/black"/>
                <View
                    android:id="@+id/filters_click_zone"
                    android:background="@drawable/redesigned_filters_button_background"
                    android:focusable="true"
                    android:visibility="gone"
                    android:clickable="true"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="@+id/filters_icon"
                    app:layout_constraintEnd_toEndOf="@+id/filters_text"
                    app:layout_constraintStart_toStartOf="@+id/filters_icon"
                    app:layout_constraintTop_toTopOf="@+id/filters_icon"/>
                <ImageView
                    android:id="@+id/filters_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/shortcut_bar_filters_icon_margin_end"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/filters_text"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="?attr/ic_filter_serp16"
                    app:tint="?attr/black"/>
                <TextView
                    android:layout_gravity="end|top"
                    android:id="@+id/filters_badge_counter"
                    android:background="@drawable/badge_bar"
                    android:visibility="invisible"
                    android:clickable="false"
                    android:layout_width="@dimen/shortcut_bar_filters_badge_size"
                    android:layout_height="@dimen/shortcut_bar_filters_badge_size"
                    android:layout_marginTop="@dimen/shortcut_bar_filters_badge_margin_top"
                    android:layout_marginEnd="@dimen/shortcut_bar_filters_badge_margin_end"
                    app:layout_constraintEnd_toEndOf="@+id/filters_icon"
                    app:layout_constraintTop_toTopOf="@+id/filters_icon"
                    style="@style/Widget.Avito.TextView.Caption.Counter.Badged"/>
                <TextView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/filters_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/filters"
                    app:layout_constraintBaseline_toBaselineOf="@+id/geo_address"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    style="?attr/textS1"/>
                <androidx.constraintlayout.widget.Group
                    android:id="@+id/filters_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:constraint_referenced_ids="filters_icon,filters_text,filters_click_zone"/>
                <androidx.constraintlayout.widget.Group
                    android:id="@+id/geo_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:constraint_referenced_ids="geo_address,arrow_icon,geo_click_zone"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
        <include
            android:visibility="gone"
            layout="@layout/serp_header_skeleton"/>
        <FrameLayout
            android:id="@+id/shortcut_block"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/shortcuts_recycler_view"
                android:paddingLeft="@dimen/home_shortcuts_horizontal_padding"
                android:paddingRight="@dimen/home_shortcuts_horizontal_padding"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:animateLayoutChanges="false"/>
        </FrameLayout>
        <include
            android:id="@+id/bottom_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/actions_horizontal_block_item"/>
        <com.avito.android.lib.design.tab_group.TabGroup
            android:theme="@style/Theme.DesignSystem.Re23"
            android:id="@+id/new_bottom_tabs_container"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?attr/tabGroupL"/>
        <com.avito.android.lib.design.tab_layout.AvitoTabLayout
            android:id="@+id/bottom_tabs_container"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Design.Widget.TabLayout.AvitoBusiness360"/>
        <include
            android:id="@+id/bottom_pinned_item"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/serp_pinned_item_block"/>
    </LinearLayout>
</com.avito.android.shortcut_navigation_bar.NotLimitingChildrenHeightLayout>
