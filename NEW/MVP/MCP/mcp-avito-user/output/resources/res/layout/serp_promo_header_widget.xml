<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:id="@+id/promo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="-16dp">
    <com.avito.android.fresco.SimpleDraweeView
        android:id="@+id/promo_full_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:actualImageScaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.avito.android.fresco.SimpleDraweeView
        android:id="@+id/promo_left_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:actualImageScaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <com.avito.android.fresco.SimpleDraweeView
        android:id="@+id/promo_right_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:actualImageScaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <com.avito.android.fresco.SimpleDraweeView
        android:id="@+id/promo_center_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:actualImageScaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:textAppearance="?attr/textH10"
        android:gravity="center"
        android:id="@+id/promo_title"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:maxLines="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:gravity="center"
        android:id="@+id/promo_subtitle"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:maxLines="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/promo_title"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/promo_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/promo_left_image"
        app:layout_constraintTop_toBottomOf="@+id/promo_subtitle"
        style="?attr/buttonPrimaryMedium"/>
    <View
        android:background="@drawable/promo_header_bottom_corners"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <com.avito.android.lib.design.docking_badge.DockingBadgeContainer
        android:id="@+id/promo_docking_badge_bar"
        android:paddingLeft="@dimen/content_horizontal_padding"
        android:paddingRight="@dimen/content_horizontal_padding"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dockingBadgeContainer_spacing="@dimen/advert_details_docking_badge_bar_vertical_spacing"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="?attr/dockingBadgeContainerMedium"/>
</androidx.constraintlayout.widget.ConstraintLayout>
