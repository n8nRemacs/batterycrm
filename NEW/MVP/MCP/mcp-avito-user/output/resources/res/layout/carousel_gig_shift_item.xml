<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:id="@+id/carousel_gig_root"
    android:background="@drawable/carousel_gig_shift_bg"
    android:padding="16dp"
    android:layout_width="336dp"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:layout_marginEnd="8dp">
    <TextView
        android:textAppearance="?attr/textH30"
        android:ellipsize="end"
        android:id="@+id/gig_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.avito.android.lib.design.description_list.parameter_line.item.DescriptionParameterItem
        android:id="@+id/gig_shift_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:descriptionParameterItem_dotsOffset="2dp"
        app:descriptionParameterItem_leftTextAppearance="?attr/textS10"
        app:descriptionParameterItem_rightTextAppearance="?attr/textS10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gig_title"/>
    <com.avito.android.lib.design.description_list.parameter_line.item.DescriptionParameterItem
        android:id="@+id/gig_shift_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        app:descriptionParameterItem_dotsOffset="2dp"
        app:descriptionParameterItem_leftTextAppearance="?attr/textS10"
        app:descriptionParameterItem_rightTextAppearance="?attr/textS10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gig_shift_1"/>
    <TextView
        android:textAppearance="?attr/textS10"
        android:ellipsize="end"
        android:id="@+id/gig_more_shifts"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:maxLines="1"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gig_shift_2"/>
    <com.avito.android.fresco.SimpleDraweeView
        android:id="@+id/gig_seller_logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gig_more_shifts"
        app:roundAsCircle="true"/>
    <TextView
        android:textAppearance="?attr/textS10"
        android:ellipsize="end"
        android:id="@+id/gig_seller_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:maxLines="1"
        android:layout_marginEnd="6dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/gig_seller_logo"
        app:layout_constraintTop_toTopOf="@+id/gig_seller_logo"/>
    <TextView
        android:textAppearance="?attr/textS10"
        android:textColor="?attr/gray54"
        android:ellipsize="end"
        android:id="@+id/gig_seller_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_marginEnd="6dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/gig_seller_logo"
        app:layout_constraintTop_toBottomOf="@+id/gig_seller_name"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/gig_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gig_seller_location"
        style="?attr/buttonPrimarySmall"/>
</androidx.constraintlayout.widget.ConstraintLayout>
