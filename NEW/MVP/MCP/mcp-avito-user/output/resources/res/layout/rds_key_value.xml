<?xml version="1.0" encoding="utf-8"?>
<com.avito.android.advert_core.KeyValue xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="?attr/textBody"
        android:textColor="?attr/gray48"
        android:ellipsize="end"
        android:id="@+id/key_view"
        android:paddingRight="16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:maxLines="2"
        android:layout_weight="1"/>
    <TextView
        android:textAppearance="?attr/textBody"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:id="@+id/value_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:maxLines="6"
        android:layout_weight="1"/>
</com.avito.android.advert_core.KeyValue>
