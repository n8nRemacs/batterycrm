<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:id="@+id/credit_calculator_link"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/content_horizontal_padding">
    <TextView
        android:gravity="center_vertical"
        android:id="@+id/left_part"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"/>
    <TextView
        android:gravity="center_vertical"
        android:id="@+id/right_part"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/left_part"
        android:layout_alignBottom="@+id/left_part"
        android:layout_marginEnd="12dp"
        android:layout_toStartOf="@+id/icon"
        android:layout_toEndOf="@+id/left_part"/>
    <TextView
        android:textAppearance="?attr/textBody"
        android:gravity="center_vertical"
        android:id="@+id/bottom_part"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/left_part"
        android:layout_marginEnd="12dp"
        android:layout_toStartOf="@+id/icon"
        android:layout_alignParentStart="true"/>
    <com.avito.android.fresco.SimpleDraweeView
        android:layout_gravity="end|center_vertical"
        android:id="@+id/icon"
        android:visibility="gone"
        android:layout_width="80dp"
        android:layout_height="44dp"
        android:scaleType="fitEnd"
        android:adjustViewBounds="true"
        android:layout_alignParentEnd="true"
        app:actualImageScaleType="fitEnd"/>
</RelativeLayout>
