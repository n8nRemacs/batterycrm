<?xml version="1.0" encoding="utf-8"?>
<com.avito.android.lib.design.bottom_sheet.BoundedFrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true"
    android:clickable="true"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <com.avito.android.lib.design.button.Button
        android:id="@+id/messenger_updates_proposal_button"
        android:focusable="false"
        android:clickable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="?attr/ic_arrowDown20"
        app:button_compoundDrawablePadding="4dp"
        style="?attr/buttonOverlayPrimarySmallRound"/>
    <com.avito.android.lib.design.badge.Badge
        android:layout_gravity="end|top"
        android:id="@+id/messenger_updates_proposal_badge"
        android:focusable="false"
        android:clickable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        style="?attr/badgeTextRedS"/>
</com.avito.android.lib.design.bottom_sheet.BoundedFrameLayout>
