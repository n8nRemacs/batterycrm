<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/group_auto_slot"
    android:background="@drawable/bg_group_block_redesign"
    android:paddingTop="20dp"
    android:paddingBottom="32dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/publish_container_horizontal_padding_redesign"
    android:layout_marginVertical="16dp"
    android:paddingHorizontal="24dp">
    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/group_auto_title_with_badge"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="group_auto_title, group_auto_badge"
        app:flow_horizontalBias="0"
        app:flow_horizontalGap="8dp"
        app:flow_horizontalStyle="packed"
        app:flow_verticalGap="4dp"
        app:flow_wrapMode="aligned"
        app:layout_constraintBottom_toTopOf="@+id/group_auto_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textH50"
        android:id="@+id/group_auto_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"/>
    <include
        android:id="@+id/group_auto_badge"
        layout="@layout/auto_group_block_item_badge"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/group_auto_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toTopOf="@+id/group_auto_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/group_auto_title_with_badge"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/group_auto_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/group_auto_description"
        style="?attr/buttonPrimaryMedium"/>
</androidx.constraintlayout.widget.ConstraintLayout>
