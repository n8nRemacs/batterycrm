<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile_pro_avito_finance_item_stub_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="32dp"
    android:paddingHorizontal="10dp"
    style="?attr/shimmerDefault">
    <TextView
        android:textAppearance="?attr/textH30"
        android:gravity="start"
        android:id="@+id/avito_finance_stub_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:layout_marginStart="6dp"
        app:layout_constraintEnd_toStartOf="@+id/avito_finance_stub_header_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.avito.android.lib.design.header_button.HeaderButton
        android:id="@+id/avito_finance_stub_header_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        app:headerButton_textIconStyleAttr="?attr/textIconHeaderbuttonArrow"
        app:layout_constraintBottom_toBottomOf="@+id/avito_finance_stub_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/avito_finance_stub_title"
        style="?attr/headerButtonH30"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/avito_finance_stub_item"
        android:background="@drawable/bg_profile_pro_banner_item"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="12dp"
        android:paddingHorizontal="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avito_finance_stub_title">
        <TextView
            android:textAppearance="?attr/textM20"
            android:gravity="start"
            android:id="@+id/avito_finance_stub_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:drawablePadding="6dp"
            app:drawableStartCompat="@drawable/common_ic_arrow_forward_20"
            app:layout_constraintEnd_toStartOf="@+id/avito_finance_header_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
