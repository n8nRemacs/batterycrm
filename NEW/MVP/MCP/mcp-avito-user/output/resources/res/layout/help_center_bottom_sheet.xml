<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/content"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp"/>
        <com.avito.android.lib.design.list_item.ListItem
            android:id="@+id/tariff_card"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="?attr/ic_arrowRight24"
            android:paddingHorizontal="16dp"
            app:listItem_iconRightColor="?attr/black"
            app:listItem_title="@string/developments_agency_search_help_center_tariff_card_item"
            style="?attr/listItemDefaultMedium"/>
        <com.avito.android.lib.design.list_item.ListItem
            android:id="@+id/about_service"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="?attr/ic_arrowRight24"
            android:paddingHorizontal="16dp"
            app:listItem_iconRightColor="?attr/black"
            app:listItem_title="@string/developments_agency_search_help_center_about_service"
            style="?attr/listItemDefaultMedium"/>
        <include
            android:id="@+id/regional_manager_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="16dp"
            layout="@layout/layout_regional_manager"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/developments_agency_search_help_center_new_developments_selection"
            android:layout_marginHorizontal="16dp"
            style="?attr/textH40"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/developments_agency_search_help_center_new_developments_selection_desc"
            android:layout_marginHorizontal="16dp"
            style="?attr/textM10"/>
        <HorizontalScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="6dp">
                <com.avito.android.lib.design.button.Button
                    android:id="@+id/start_chat_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?attr/buttonBeigeLarge"/>
                <com.avito.android.lib.design.button.Button
                    android:id="@+id/call_phone_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    style="?attr/buttonBeigeLarge"/>
                <com.avito.android.lib.design.button.Button
                    android:id="@+id/send_email_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    style="?attr/buttonBeigeLarge"/>
            </LinearLayout>
        </HorizontalScrollView>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/developments_agency_search_help_center_other_questions"
            android:paddingHorizontal="16dp"
            style="?attr/textH40"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/developments_agency_search_help_center_other_questions_desc"
            android:layout_marginHorizontal="16dp"
            style="?attr/textM10"/>
        <com.avito.android.lib.design.button.Button
            android:id="@+id/write_to_support_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="16dp"
            style="?attr/buttonBeigeLarge"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp"/>
    </LinearLayout>
    <include
        android:id="@+id/skeleton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="52dp"
        android:layout_marginHorizontal="16dp"
        layout="@layout/agency_search_additional_info_skeleton"/>
</FrameLayout>
