<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parsing_permission_root"
    android:background="?attr/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/parsing_permission_sv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="?attr/textHeadingLarge"
                android:id="@+id/parsing_permission_title_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/parsing_permission_title"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textAppearance="?attr/textBody"
                android:id="@+id/parsing_permission_subtitle_0_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/parsing_permission_subtitle_0"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="6dp"
                app:layout_constraintEnd_toStartOf="@+id/parsing_permission_subtitle_0_iv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/parsing_permission_title_tv"/>
            <ImageView
                android:id="@+id/parsing_permission_subtitle_0_iv"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="?attr/ic_help24"
                android:layout_marginEnd="22dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/parsing_permission_subtitle_0_tv"
                app:tint="?attr/gray28"/>
            <TextView
                android:textAppearance="?attr/textBody"
                android:id="@+id/parsing_permission_subtitle_1_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="6dp"
                app:layout_constraintEnd_toStartOf="@+id/parsing_permission_subtitle_1_iv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/parsing_permission_subtitle_0_tv"/>
            <ImageView
                android:id="@+id/parsing_permission_subtitle_1_iv"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="?attr/ic_help24"
                android:layout_marginEnd="22dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/parsing_permission_subtitle_1_tv"
                app:tint="?attr/gray28"/>
            <TextView
                android:textAppearance="?attr/textBody"
                android:id="@+id/parsing_permission_subtitle_2_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/parsing_permission_subtitle_2"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="6dp"
                app:layout_constraintEnd_toStartOf="@+id/parsing_permission_subtitle_2_iv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/parsing_permission_subtitle_1_tv"/>
            <ImageView
                android:id="@+id/parsing_permission_subtitle_2_iv"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="?attr/ic_help24"
                android:layout_marginEnd="22dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/parsing_permission_subtitle_2_tv"
                app:tint="?attr/gray28"/>
            <com.avito.android.lib.design.component_container.ComponentContainer
                android:id="@+id/parsing_permission_fio_cc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:componentContainer_subtitle="@string/parsing_permission_fio_subtitle"
                app:componentContainer_subtitleColor="?attr/gray48"
                app:componentContainer_title="@string/parsing_permission_fio_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/parsing_permission_subtitle_2_tv">
                <com.avito.android.lib.design.input.Input
                    android:id="@+id/parsing_permission_fio_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/parsing_permission_fio_hint"
                    app:input_clearButton="true"
                    style="?attr/input"/>
            </com.avito.android.lib.design.component_container.ComponentContainer>
            <com.avito.android.lib.design.component_container.ComponentContainer
                android:id="@+id/parsing_permission_phone_cc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:componentContainer_subtitle="@string/parsing_permission_phone_subtitle"
                app:componentContainer_subtitleColor="?attr/gray48"
                app:componentContainer_title="@string/parsing_permission_phone_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/parsing_permission_fio_cc">
                <com.avito.android.lib.design.input.Input
                    android:id="@+id/parsing_permission_phone_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/parsing_permission_phone_hint"
                    android:inputType="phone"
                    android:autofillHints="phone"
                    app:input_clearButton="true"
                    app:input_formatterType="mobile_phone"
                    app:input_prefix="+7 "
                    app:layout_autoReset="notNormalOnly"
                    style="?attr/input"/>
            </com.avito.android.lib.design.component_container.ComponentContainer>
            <TextView
                android:textAppearance="?attr/textH5"
                android:id="@+id/parsing_permission_choice_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/parsing_permission_choice"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/parsing_permission_phone_cc"/>
            <com.avito.android.lib.design.list_item.ListItemRadio
                android:id="@+id/parsing_permission_denied_rli"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:src="?attr/ic_help24"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/parsing_permission_choice_tv"
                app:listItem_iconColor="?attr/gray28"
                app:listItem_radioStyle="?attr/radioButton"
                app:listItem_title="@string/parsing_permission_denied"/>
            <com.avito.android.lib.design.list_item.ListItemRadio
                android:id="@+id/parsing_permission_allowed_rli"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/parsing_permission_denied_rli"
                app:listItem_radioStyle="?attr/radioButton"
                app:listItem_title="@string/parsing_permission_allowed"/>
            <com.avito.android.lib.design.list_item.ListItemRadio
                android:id="@+id/parsing_permission_maybe_rli"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="?attr/ic_help24"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintBottom_toTopOf="@+id/parsing_permission_continue_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/parsing_permission_allowed_rli"
                app:listItem_iconColor="?attr/gray28"
                app:listItem_radioStyle="?attr/radioButton"
                app:listItem_title="@string/parsing_permission_maybe"/>
            <com.avito.android.lib.design.button.Button
                android:id="@+id/parsing_permission_continue_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="20dp"
                android:text="@string/parsing_permission_continue_button"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/parsing_permission_maybe_rli"
                style="?attr/buttonPrimaryLarge"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <include
        android:id="@+id/parsing_permission_pv"
        android:paddingTop="?attr/actionBarSize"
        layout="@layout/semitransparent_progress"/>
</androidx.constraintlayout.widget.ConstraintLayout>
