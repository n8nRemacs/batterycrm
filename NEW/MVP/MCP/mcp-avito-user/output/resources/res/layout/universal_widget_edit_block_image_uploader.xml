<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/extended_profile_universal_widget_image"
        android:padding="4dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:overlayImage="@color/expected_black_alpha_4"
        app:placeholderImage="?attr/warmGray4"
        app:progressBarImage="?attr/warmGray4"
        app:roundedCornerRadius="16dp"
        app:viewAspectRatio="1.33"/>
    <ImageView
        android:id="@+id/extended_profile_universal_widget_image_platform_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/extended_profile_universal_widget_image_preview_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/extended_profile_universal_widget_image"
        app:layout_constraintVertical_chainStyle="packed"
        app:srcCompat="@drawable/ic_universal_widget_preview_both_platform"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/extended_profile_universal_widget_image_preview_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:paddingHorizontal="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/extended_profile_universal_widget_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/extended_profile_universal_widget_image_platform_preview"
        app:layout_constraintVertical_chainStyle="packed"/>
    <ImageView
        android:id="@+id/extended_profile_universal_widget_image_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_universal_widget_block_text_on_image"/>
    <ImageView
        android:id="@+id/extended_profile_universal_widget_image_remove"
        android:background="@drawable/bg_universal_widget_image_remove"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="12dp"
        android:scaleType="center"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_universal_widget_remove_block"/>
    <ImageView
        android:id="@+id/extended_profile_universal_widget_image_platform"
        android:background="@drawable/bg_universal_widget_image_platform"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_marginBottom="16dp"
        android:scaleType="center"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/extended_profile_universal_widget_image"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_universal_widget_platform_desktop"/>
    <TextView
        android:textAppearance="?attr/textS10"
        android:textColor="?attr/red600"
        android:id="@+id/extended_profile_universal_widget_image_error"
        android:paddingBottom="6dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/extended_profile_universal_widget_image"/>
</merge>
