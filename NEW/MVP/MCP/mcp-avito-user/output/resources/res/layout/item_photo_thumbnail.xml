<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/item_photo_thumbnail"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_gravity="center_vertical"
        android:id="@+id/photo_view"
        android:clickable="true"
        android:layout_width="@dimen/photo_picker_thumbnail_width"
        android:layout_height="@dimen/photo_picker_thumbnail_height"
        app:actualImageScaleType="centerCrop"
        app:placeholderImage="?attr/white"
        app:roundedCornerRadius="@dimen/photo_picker_thumbnail_corner_radius"/>
    <FrameLayout
        android:id="@+id/progress_overlay"
        android:background="@drawable/bg_item_photo"
        android:visibility="invisible"
        android:layout_width="@dimen/photo_picker_thumbnail_width"
        android:layout_height="@dimen/photo_picker_thumbnail_height">
        <com.avito.android.lib.deprecated_design.ProgressView
            android:layout_gravity="center"
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:circlesColor="?attr/gray12"
            app:rotate="false"/>
    </FrameLayout>
    <View
        android:id="@+id/selection_overlay"
        android:background="@drawable/fg_item_photo"
        android:clickable="true"
        android:layout_width="@dimen/photo_picker_thumbnail_width"
        android:layout_height="@dimen/photo_picker_thumbnail_height"/>
</FrameLayout>
