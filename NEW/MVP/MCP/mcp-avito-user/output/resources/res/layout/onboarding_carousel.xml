<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:id="@+id/carousel_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/onboarding_carousel_margin_bottom">
    <androidx.recyclerview.widget.RecyclerView
        android:orientation="horizontal"
        android:id="@+id/content"
        android:focusableInTouchMode="true"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"/>
    <ImageView
        android:layout_gravity="end|top"
        android:id="@+id/close_button"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/onboarding_carousel_close_button_margin_top"
        android:contentDescription="@string/content_description_close"
        android:layout_marginEnd="@dimen/onboarding_carousel_close_button_margin_end"
        app:srcCompat="@drawable/ic_close_24"/>
    <com.avito.android.lib.design.page_indicator_re23.PageIndicatorRe23
        android:gravity="center"
        android:layout_gravity="bottom"
        android:id="@+id/content_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/onboarding_carousel_indicator_margin_bottom"
        android:layout_marginStart="@dimen/onboarding_carousel_indicator_margin_start"
        app:selectedDotColor="?attr/black"/>
    <com.avito.android.lib.design.button.Button
        android:layout_gravity="end|bottom"
        android:id="@+id/button"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginStart="@dimen/onboarding_carousel_button_margin_left"
        android:layout_marginEnd="@dimen/onboarding_carousel_button_margin_right"
        style="?attr/buttonPrimaryMedium"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
