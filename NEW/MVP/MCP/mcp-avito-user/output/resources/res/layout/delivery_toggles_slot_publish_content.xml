<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="vertical"
    android:id="@+id/delivery_toggles_slot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.avito.android.lib.design.list_item.ListItemSwitcher
        android:id="@+id/delivery_toggles_pvz"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:listItem_backgroundRipple="?attr/transparentWhite"
        app:listItem_linkAppearance="?attr/publish_listItem_switcher_linkAppearance"
        style="?attr/switcherDefaultMedium"/>
    <com.avito.android.lib.design.list_item.ListItemSwitcher
        android:id="@+id/delivery_toggles_courier"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:listItem_backgroundRipple="?attr/transparentWhite"
        app:listItem_linkAppearance="?attr/publish_listItem_switcher_linkAppearance"
        style="?attr/switcherDefaultMedium"/>
    <com.avito.android.lib.design.list_item.ListItemSwitcher
        android:id="@+id/delivery_toggles_postamat"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:listItem_backgroundRipple="?attr/transparentWhite"
        app:listItem_linkAppearance="?attr/publish_listItem_switcher_linkAppearance"
        style="?attr/switcherDefaultMedium"/>
</LinearLayout>
