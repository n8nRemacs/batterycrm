<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/icon_back_error"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="12dp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="?attr/ic_arrowBack24"
        app:tint="?attr/black"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:gravity="center"
            android:id="@+id/title_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/virtual_deal_room_common_error"
            android:paddingHorizontal="24dp"
            app:layout_constraintBottom_toTopOf="@+id/description_error"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/icon_back_error"
            style="?attr/textH25"/>
        <TextView
            android:gravity="center"
            android:id="@+id/description_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/virtual_deal_room_common_error_description"
            android:paddingHorizontal="24dp"
            app:layout_constraintBottom_toTopOf="@+id/update_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_error"
            style="?attr/textM10"/>
        <com.avito.android.lib.design.button.Button
            android:id="@+id/update_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="@string/virtual_deal_room_update"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/description_error"
            style="?attr/buttonPrimaryMedium"/>
    </LinearLayout>
</LinearLayout>
