<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="vertical"
    android:id="@+id/fmp_banner_main_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="28dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/fmp_banner_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fmp_banner_background"
            android:background="?attr/violet50"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textAppearance="?attr/textH25"
                android:textColor="?attr/black"
                android:ellipsize="end"
                android:id="@+id/fmp_banner_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:maxLines="2"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="12dp"
                app:layout_constraintEnd_toStartOf="@+id/fmp_banner_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textAppearance="?attr/textM10"
                android:textColor="?attr/black"
                android:ellipsize="end"
                android:id="@+id/fmp_banner_subtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:maxLines="3"
                app:layout_constraintEnd_toEndOf="@+id/fmp_banner_title"
                app:layout_constraintStart_toStartOf="@+id/fmp_banner_title"
                app:layout_constraintTop_toBottomOf="@+id/fmp_banner_title"/>
            <com.avito.android.lib.design.button.Button
                android:id="@+id/fmp_banner_button"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="@+id/fmp_banner_subtitle"
                app:layout_constraintTop_toBottomOf="@+id/fmp_banner_subtitle"
                style="?attr/buttonPrimaryMedium"/>
            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/fmp_bottom_barrier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="fmp_banner_button"/>
            <View
                android:id="@+id/fmp_banner_extra_view"
                android:background="?attr/transparentWhite"
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:layout_marginBottom="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fmp_bottom_barrier"/>
            <com.avito.android.fresco.SimpleDraweeView
                android:id="@+id/fmp_banner_image"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/fmp_banner_title"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:textAppearance="?attr/textS10"
        android:textColor="?attr/gray54"
        android:ellipsize="end"
        android:id="@+id/fmp_banner_legal"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:maxLines="3"
        android:layout_marginHorizontal="10dp"/>
</LinearLayout>
