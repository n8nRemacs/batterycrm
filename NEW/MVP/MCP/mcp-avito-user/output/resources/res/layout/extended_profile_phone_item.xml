<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="12dp">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/extended_profile_phone_text_container"
        android:background="@drawable/bg_phone_text_dialog"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginEnd="12dp">
        <TextView
            android:textAppearance="?attr/textM20"
            android:id="@+id/extended_profile_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textAppearance="?attr/textM20"
            android:textColor="?attr/gray54"
            android:id="@+id/extended_profile_phone_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <com.avito.android.lib.design.button.Button
        android:layout_gravity="center_vertical"
        android:id="@+id/extended_profile_phone_call_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="?attr/ic_call24"
        style="?attr/buttonDefaultLarge"/>
</LinearLayout>
