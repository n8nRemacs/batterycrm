<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginHorizontal="16dp">
    <FrameLayout
        android:id="@+id/author_avatar_container"
        android:background="@drawable/comment_avatar_round_mask"
        android:layout_width="44dp"
        android:layout_height="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.avito.android.lib.design.avatar.Avatar
            android:layout_gravity="center"
            android:id="@+id/author_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:avatar_cornerRadius="1000dp"/>
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/author_avatar_avito"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/comfortable_deal_avatar"
            android:contentDescription="@null"/>
    </FrameLayout>
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/author_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toTopOf="@+id/comment_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/author_avatar_container"
        app:layout_constraintTop_toTopOf="@+id/author_avatar_container"
        app:layout_constraintVertical_chainStyle="packed"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:textColor="?attr/gray54"
        android:id="@+id/comment_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:maxLines="1"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/author_avatar_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/author_avatar_container"
        app:layout_constraintTop_toBottomOf="@+id/author_name"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/comment_params"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/author_avatar_container"/>
    <com.avito.android.util.ExpandablePanelLayout
        android:orientation="vertical"
        android:id="@+id/comment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:animationDuration="250"
        app:contentId="@+id/comment"
        app:handleId="@+id/expanding_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comment_params">
        <TextView
            android:textAppearance="?attr/textM20"
            android:ellipsize="end"
            android:id="@+id/comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textAppearance="?attr/textM20"
            android:textColor="?attr/blue600"
            android:id="@+id/expanding_button"
            android:background="@drawable/btn_transparent_rounded_states"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/comment_expanding_button_text"/>
    </com.avito.android.util.ExpandablePanelLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
