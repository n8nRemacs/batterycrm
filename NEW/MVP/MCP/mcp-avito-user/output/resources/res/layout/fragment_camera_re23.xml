<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:id="@+id/photo_gallery_root_view"
    android:background="?attr/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        app:layout_constraintBottom_toTopOf="@+id/photo_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside">
        <ImageButton
            android:layout_gravity="center_vertical"
            android:id="@+id/cancel_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="?attr/ic_arrowBack24"
            android:layout_marginStart="6dp"
            style="@style/Widget.Avito.Button.Flat.Gray"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/photo_view"
        android:background="?attr/gray4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/info_top"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout">
        <com.avito.android.photo_picker.camera.CameraAnimationCanvas
            android:id="@+id/cameraAnimationCanvas"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextureView
                android:id="@+id/texture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.avito.android.photo_picker.camera.CameraAnimationCanvas>
        <include
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/no_permission"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/no_camera_permission_placeholder_re23"/>
        <View
            android:id="@+id/default_overlay"
            android:background="@drawable/photo_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.avito.android.photo_picker.camera.AvatarOverlay
            android:id="@+id/avatar_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:avatarOverlay_backgroundColor="?attr/whiteAlpha64"
            app:avatarOverlay_paddingHorizontal="26dp"
            app:avatarOverlay_paddingVertical="16dp"/>
    </FrameLayout>
    <TextView
        android:textSize="16sp"
        android:textColor="?attr/gray48"
        android:gravity="center"
        android:id="@+id/info_top"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="66dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/camera_controls_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photo_view"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/camera_controls_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/info_bottom"
        app:layout_constraintTop_toBottomOf="@+id/info_top">
        <FrameLayout
            android:id="@+id/gallery_button_container"
            android:background="@drawable/photo_camera_gallery_shadow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_gravity="center"
                android:id="@+id/gallery_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:foreground="@drawable/bg_selectable_gray_oval"
                app:placeholderImageScaleType="centerCrop"
                app:roundAsCircle="true"/>
        </FrameLayout>
        <ImageButton
            android:id="@+id/take_shot_button"
            android:background="?attr/transparentBlack"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/btn_take_shot"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <LinearLayout
            android:gravity="center"
            android:id="@+id/flash_toggle_container"
            android:layout_width="104dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/Widget.Avito.Button.Flat.Gray">
            <ImageView
                android:id="@+id/flash_toggle"
                android:background="@drawable/bg_selectable_gray_oval"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="?attr/ic_lightOff24"
                android:scaleType="center"/>
            <ImageButton
                android:id="@+id/camera_toggle"
                android:background="@drawable/bg_selectable_gray_oval"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="center"
                android:layout_marginStart="8dp"
                app:srcCompat="@drawable/ic_rotate_camera"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:textSize="16sp"
        android:textColor="?attr/gray48"
        android:gravity="center"
        android:id="@+id/info_bottom"
        android:layout_width="0dp"
        android:layout_height="66dp"
        android:layout_marginBottom="10dp"
        android:text="@string/camera_screen_hint_default"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/camera_controls_layout"/>
</androidx.constraintlayout.widget.ConstraintLayout>
