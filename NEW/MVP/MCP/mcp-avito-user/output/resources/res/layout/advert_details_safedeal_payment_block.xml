<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:id="@+id/payment_block_content_container"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="28dp"
    android:layout_marginBottom="2dp"
    android:paddingHorizontal="@dimen/content_horizontal_padding">
    <TextView
        android:theme="@style/Theme.DesignSystem.Re23"
        android:textAppearance="?attr/textH25"
        android:id="@+id/payment_block_type_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.avito.android.advert.item.safedeal.real_one_click_payment_block.delivery_address.PaymentDeliveryAddress
        android:id="@+id/payment_block_type_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/payment_block_type_title"/>
    <com.avito.android.advert.item.safedeal.real_one_click_payment_block.payment_button.PaymentTypeButton
        android:id="@+id/payment_block_type_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/payment_block_type_address"/>
    <com.avito.android.advert.item.safedeal.real_one_click_payment_block.payment_slider.PaymentSlider
        android:id="@+id/payment_block_slider"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginTop="12dp"
        android:minWidth="225dp"
        android:layout_marginStart="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/payment_block_type_button"
        app:layout_constraintTop_toBottomOf="@+id/payment_block_type_address"/>
    <TextView
        android:id="@+id/payment_block_type_bottom_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/payment_block_type_button"/>
</androidx.constraintlayout.widget.ConstraintLayout>
