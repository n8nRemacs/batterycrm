<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/subscriptions_settings_root"
    android:paddingBottom="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/notifications_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp">
        <FrameLayout
            android:layout_width="24dp"
            android:layout_height="20dp">
            <ImageView
                android:layout_gravity="start"
                android:id="@+id/notifications_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_text_notification_off"
                app:tint="?attr/black"/>
            <ProgressBar
                android:layout_gravity="start"
                android:id="@+id/notifications_progress"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                style="@style/Design.Widget.Spinner.Dark.Small"/>
        </FrameLayout>
        <TextView
            android:id="@+id/notifications_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/subscription_settings_disable_notification"
            style="?attr/textM20"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/unsubscription_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp">
        <FrameLayout
            android:layout_width="24dp"
            android:layout_height="20dp">
            <ImageView
                android:layout_gravity="start"
                android:id="@+id/unsubscription_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_text_unsubscribe"
                app:tint="?attr/black"/>
            <ProgressBar
                android:layout_gravity="start"
                android:id="@+id/unsubscription_progress"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                style="@style/Design.Widget.Spinner.Dark.Small"/>
        </FrameLayout>
        <TextView
            android:id="@+id/unsubscription_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/subscription_settings_unsubscribe"
            style="?attr/textM20"/>
    </LinearLayout>
</LinearLayout>
