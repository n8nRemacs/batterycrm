<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bar_root"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <com.avito.android.lib.design.shadow_layout.ShadowLayout
        android:id="@+id/shadow"
        android:padding="@dimen/user_stats_bar_item_shadow_side"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:shadowColor="@color/expected_floating_card_shadow"
        app:design_blur_radius="@dimen/user_stats_bar_item_selected_corner_radius"
        style="@style/Design.Widget.Avito.ShadowLayout">
        <FrameLayout
            android:background="@drawable/bg_bar_item_selected"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.avito.android.lib.design.shadow_layout.ShadowLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/bar_container"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="@dimen/user_stats_chart_item_width"
            android:layout_height="0dp"
            android:layout_weight="1">
            <FrameLayout
                android:id="@+id/bar"
                android:background="@drawable/bg_bar"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:backgroundTint="@color/legacy_green_100"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_default="percent"
                app:layout_constraintHeight_min="@dimen/user_stats_bar_empty_default_height"
                app:layout_constraintHeight_percent="0.25"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <FrameLayout
            android:paddingTop="4dp"
            android:paddingBottom="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="?attr/gray48"
                android:gravity="center_horizontal"
                android:id="@+id/label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                style="?attr/textMicro"/>
            <TextView
                android:textColor="?attr/black"
                android:gravity="center_horizontal"
                android:id="@+id/label_selected"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                style="?attr/textMicro"/>
        </FrameLayout>
    </LinearLayout>
</FrameLayout>
