<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:translationZ="1px">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/map_banner_body"
                style="?attr/textM2"/>
            <com.avito.android.lib.design.button.Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="8dp"
                android:text="@string/map_banner_button_text"
                style="?attr/buttonPrimaryMedium"/>
        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/image_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <ImageView
            android:layout_gravity="end|bottom"
            android:id="@+id/image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginRight="@dimen/map_banner_image_margin_right"
            android:scaleType="fitXY"
            android:maxWidth="120dp"
            android:maxHeight="120dp"
            android:minWidth="120dp"
            android:minHeight="120dp"
            android:layout_marginVertical="0dp"/>
    </FrameLayout>
</LinearLayout>
