<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:id="@+id/cv_motivation_banner_content_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp">
    <TextView
        android:textAppearance="?attr/textH25"
        android:ellipsize="end"
        android:id="@+id/cv_motivation_banner_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="4dp"
        android:maxLines="2"
        app:layout_constraintBottom_toTopOf="@+id/cv_motivation_banner_subtitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/cv_motivation_banner_image"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:ellipsize="end"
        android:id="@+id/cv_motivation_banner_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/cv_motivation_banner_image"
        app:layout_constraintTop_toBottomOf="@+id/cv_motivation_banner_title"/>
    <com.avito.android.fresco.SimpleDraweeView
        android:id="@+id/cv_motivation_banner_image"
        android:layout_width="120dp"
        android:layout_height="122dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:roundedCornerRadius="28dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
