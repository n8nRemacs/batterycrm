<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="12dp">
    <ImageView
        android:layout_gravity="start|center_vertical"
        android:id="@+id/re_agent_short_flow_creation_back_button"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:foreground="?attr/selectableItemBackground"
        android:scaleType="center"
        android:layout_marginStart="14dp"
        app:srcCompat="?attr/ic_arrowBack24"
        app:tint="?attr/black"/>
    <ImageView
        android:layout_gravity="end|center_vertical"
        android:id="@+id/re_agent_short_flow_creation_close_button"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:foreground="?attr/selectableItemBackground"
        android:scaleType="center"
        android:layout_marginEnd="16dp"
        app:srcCompat="?attr/ic_close24"
        app:tint="?attr/black"/>
</FrameLayout>
