<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_profile_pro_dashboard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="36dp">
    <ImageView
        android:id="@+id/iv_dashboard_empty"
        android:paddingTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:src="@drawable/ic_dashboard_empty"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textS20"
        android:textColor="?attr/gray54"
        android:textColorLink="?attr/blue"
        android:gravity="center"
        android:id="@+id/tv_dashboard_empty"
        android:paddingTop="8dp"
        android:paddingBottom="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/profile_pro_dashboard_empty_description"
        app:layout_constraintTop_toBottomOf="@+id/iv_dashboard_empty"/>
</androidx.constraintlayout.widget.ConstraintLayout>
