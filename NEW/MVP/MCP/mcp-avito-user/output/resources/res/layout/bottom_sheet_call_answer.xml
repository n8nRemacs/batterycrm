<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:id="@+id/simple_bottom_sheet_content"
        android:padding="@dimen/design_bottom_sheet_header_start_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAppearance="?attr/textH10"
            android:textColor="@color/design_text_color_black_selector"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_pro_dashboard_call_answer_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageButton
            android:id="@+id/ib_close"
            android:background="?attr/transparentBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:src="@drawable/ic_close_24"
            app:layout_constraintBottom_toBottomOf="@+id/tv_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_title"/>
        <ImageView
            android:id="@+id/iv_image"
            android:paddingTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="205dp"
            android:src="@drawable/ic_call_answer"
            android:contentDescription="@null"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"/>
        <TextView
            android:textAppearance="?attr/textM10"
            android:textColor="@color/design_text_color_black_selector"
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/profile_pro_dashboard_calls_description"
            app:layout_constraintTop_toBottomOf="@+id/iv_image"/>
        <com.avito.android.lib.design.button.Button
            android:id="@+id/btn_call_answer_close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:text="@string/profile_pro_dashboard_close"
            app:layout_constraintTop_toBottomOf="@+id/tv_description"
            style="?attr/buttonPrimaryMedium"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
