<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="?attr/textH25"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/price_title_re23"
        android:layout_marginHorizontal="16dp"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:gravity="center"
        android:id="@+id/price_input_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/price_subtitle_re23"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="6dp"/>
    <com.avito.android.lib.design.input.Input
        android:id="@+id/price_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="16dp"
        app:input_clearButton="true"
        app:input_clearButtonIgnoresRightIcon="true"
        app:input_clearButtonUnfocused="true"
        app:input_focusByClearButton="true"
        app:input_postfixColor="?attr/components_control_text_disabled"
        style="?attr/inputDefaultM"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/close_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/close_item_button_text"
        style="?attr/buttonPrimaryLarge"/>
</LinearLayout>
