<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:id="@+id/button_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="11dp">
    <com.avito.android.lib.design.button.Button
        android:id="@+id/button"
        android:clickable="false"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:drawableLeft="?attr/ic_plus16"
        android:layout_marginEnd="13dp"
        app:layout_constraintEnd_toStartOf="@+id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="?attr/buttonSecondaryMedium"/>
    <ImageView
        android:id="@+id/button_icon"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="@+id/button"
        app:layout_constraintEnd_toEndOf="@+id/button"
        app:layout_constraintStart_toStartOf="@+id/button"
        app:layout_constraintTop_toTopOf="@+id/button"/>
    <TextView
        android:ellipsize="end"
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Способ получения выплат"
        android:maxLines="2"
        app:layout_constraintEnd_toStartOf="@+id/end_view_container"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toTopOf="parent"
        style="?attr/textM20"/>
    <TextView
        android:textColor="?attr/gray54"
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="На карту ···4988"
        app:layout_constraintStart_toStartOf="@+id/title"
        app:layout_constraintTop_toBottomOf="@+id/title"
        style="?attr/textS20"/>
    <FrameLayout
        android:id="@+id/end_view_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/trailing_text"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+2 000 ₽"
            style="?attr/textM20"/>
        <ImageView
            android:id="@+id/click_marker"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_8_16"
            android:importantForAccessibility="no"/>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
