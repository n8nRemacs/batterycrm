<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="?attr/textM10"
        android:id="@+id/expandable_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/expandable_arrow"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="?attr/ic_arrowRight20"
        android:rotation="90"
        app:layout_constraintBottom_toBottomOf="@+id/expandable_title"
        app:layout_constraintStart_toEndOf="@+id/expandable_title"
        app:layout_constraintTop_toTopOf="@+id/expandable_title"
        app:tint="?attr/black"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:textColor="?attr/gray54"
        android:id="@+id/expandable_description"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/expandable_title"/>
</androidx.constraintlayout.widget.ConstraintLayout>
