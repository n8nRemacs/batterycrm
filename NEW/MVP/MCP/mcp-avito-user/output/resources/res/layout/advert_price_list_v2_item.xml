<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:id="@+id/advert_price_list_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="8dp">
    <com.avito.android.ui.widget.WrapWidthTextView
        android:textAppearance="?attr/textM20"
        android:ellipsize="end"
        android:id="@+id/advert_price_list_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        app:layout_constraintEnd_toStartOf="@+id/advert_price_list_barrier"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.avito.android.ui.widget.WrapWidthTextView
        android:textAppearance="?attr/textS2"
        android:textColor="?attr/gray54"
        android:ellipsize="end"
        android:id="@+id/advert_price_list_subtitle"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:maxLines="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/advert_price_list_title"
        app:layout_constraintWidth_percent="0.72"/>
    <com.avito.android.ui.widget.WrapWidthTextView
        android:textAppearance="?attr/textH50"
        android:id="@+id/advert_price_list_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.avito.android.ui.widget.WrapWidthTextView
        android:textAppearance="?attr/textS20"
        android:textColor="?attr/gray54"
        android:ellipsize="end"
        android:gravity="end"
        android:id="@+id/advert_price_list_subprice"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:maxLines="1"
        android:paddingStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/advert_price_list_price"
        app:layout_constraintWidth_percent="0.28"/>
    <com.avito.android.ui.widget.WrapWidthTextView
        android:textAppearance="?attr/textS20"
        android:textColor="?attr/green800"
        android:ellipsize="end"
        android:gravity="end"
        android:id="@+id/advert_price_list_imv"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:maxLines="1"
        android:paddingStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/advert_price_list_subprice"
        app:layout_constraintWidth_percent="0.5"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/advert_price_list_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.72"/>
    <androidx.constraintlayout.widget.Barrier
        android:orientation="vertical"
        android:id="@+id/advert_price_list_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="start"
        app:constraint_referenced_ids="advert_price_list_price, advert_price_list_guideline"/>
</androidx.constraintlayout.widget.ConstraintLayout>
