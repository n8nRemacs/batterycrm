<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/srv_order_snippet_contact_block_root"
    android:paddingTop="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/srv_order_snippet_user_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textH50"
        android:textStyle="bold"
        android:ellipsize="end"
        android:id="@+id/srv_order_snippet_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        app:layout_constraintStart_toEndOf="@+id/srv_order_snippet_user_description"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:ellipsize="end"
        android:id="@+id/srv_order_snippet_contact_phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:singleLine="true"
        app:layout_constraintEnd_toStartOf="@+id/srv_order_snippet_contact_show_phone_text"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/srv_order_snippet_user_name"
        app:layout_constraintWidth_default="wrap"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/srv_order_snippet_contact_phone_copy"
        android:visibility="gone"
        android:layout_width="14dp"
        android:layout_height="20dp"
        android:singleLine="true"
        android:layout_marginStart="6dp"
        app:drawableStartCompat="@drawable/expected_ic_copy_m"
        app:drawableTint="?attr/black"
        app:layout_constraintBottom_toBottomOf="@+id/srv_order_snippet_contact_phone"
        app:layout_constraintStart_toEndOf="@+id/srv_order_snippet_contact_phone"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:textColor="?attr/gray54"
        android:id="@+id/srv_order_snippet_contact_show_phone_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/srv_order_snippet_contact_phone"
        app:layout_constraintTop_toTopOf="@+id/srv_order_snippet_contact_phone"/>
</androidx.constraintlayout.widget.ConstraintLayout>
