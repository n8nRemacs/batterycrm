<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/checkout_promocode_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/checkout_promocode_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/checkout_promocode_title_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/checkout_promocode_title"
        app:layout_constraintStart_toEndOf="@+id/checkout_promocode_title"
        app:layout_constraintTop_toTopOf="@+id/checkout_promocode_title"/>
    <com.avito.android.lib.design.input.Input
        android:id="@+id/checkout_promocode_input"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:maxLength="50"
        android:layout_marginEnd="8dp"
        app:input_clearButton="false"
        app:layout_constraintEnd_toStartOf="@+id/checkout_promocode_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkout_promocode_title"
        style="?attr/inputDefaultS"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/checkout_promocode_button"
        android:visibility="gone"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkout_promocode_title"
        style="?attr/buttonPrimarySmall"/>
    <TextView
        android:textAppearance="?attr/textS10"
        android:id="@+id/checkout_promocode_label"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkout_promocode_input"/>
</androidx.constraintlayout.widget.ConstraintLayout>
