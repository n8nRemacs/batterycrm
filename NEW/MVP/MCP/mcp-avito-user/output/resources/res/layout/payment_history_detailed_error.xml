<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/error_view"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="236dp">
    <FrameLayout
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="?attr/textH3"
                android:textColor="?attr/black"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/payment_error_title"/>
            <TextView
                android:textAppearance="?attr/textM1"
                android:textColor="?attr/black"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/error_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </FrameLayout>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/error_refresh_button"
        android:layout_width="match_parent"
        android:layout_margin="16dp"
        android:text="@string/payment_refresh"
        style="?attr/buttonPrimaryLarge"/>
</LinearLayout>
