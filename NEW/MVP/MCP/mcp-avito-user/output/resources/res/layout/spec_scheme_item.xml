<?xml version="1.0" encoding="utf-8"?>
<com.avito.android.advert_core.specifications.SchemeView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scheme_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:actualImageScaleType="centerInside"
        app:fadeDuration="0"/>
    <include
        android:id="@+id/left_line"
        android:layout_width="5dp"
        android:layout_height="match_parent"
        layout="@layout/spec_scheme_vertical_line"/>
    <TextView
        android:textAppearance="?attr/textBodySmall"
        android:textColor="?attr/black"
        android:id="@+id/left_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="-90"/>
    <include
        android:id="@+id/top_line"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        layout="@layout/spec_scheme_horizontal_line"/>
    <TextView
        android:textAppearance="?attr/textBodySmall"
        android:textColor="?attr/black"
        android:id="@+id/top_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <include
        android:id="@+id/right_line"
        android:layout_width="5dp"
        android:layout_height="match_parent"
        layout="@layout/spec_scheme_vertical_line"/>
    <TextView
        android:textAppearance="?attr/textBodySmall"
        android:textColor="?attr/black"
        android:id="@+id/right_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="-90"/>
    <include
        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        layout="@layout/spec_scheme_horizontal_line"/>
    <TextView
        android:textAppearance="?attr/textBodySmall"
        android:textColor="?attr/black"
        android:id="@+id/bottom_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</com.avito.android.advert_core.specifications.SchemeView>
