<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textAppearance="?attr/textH50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sx_new_address_name"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/sx_new_address_subtitle"/>
    <com.avito.android.lib.design.input.Input
        android:id="@+id/title_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="@string/sx_new_address_name_hint"
        app:input_formatterType="not_editable"
        style="?attr/inputDefaultMedium"/>
</LinearLayout>
