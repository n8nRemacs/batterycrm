<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="vertical"
    android:id="@+id/advert_details_contact_bar_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="28dp">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/seller_info_container"
        android:paddingLeft="@dimen/content_horizontal_padding"
        android:paddingRight="@dimen/content_horizontal_padding"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textAppearance="?attr/textH25"
            android:textColor="?attr/text_primary"
            android:ellipsize="end"
            android:id="@+id/seller_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_weight="1"/>
        <TextView
            android:textAppearance="?attr/textH25"
            android:textColor="?attr/green800"
            android:ellipsize="end"
            android:id="@+id/online_status"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contact_bar_online_status"
            android:singleLine="true"
            android:layout_weight="0"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/rating_container"
        android:paddingLeft="@dimen/content_horizontal_padding"
        android:paddingRight="@dimen/content_horizontal_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">
        <TextView
            android:textAppearance="?attr/textM10"
            android:textColor="?attr/text_primary"
            android:id="@+id/rating_number"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"/>
        <com.avito.android.lib.design.rating.RatingBar
            android:layout_gravity="center_vertical"
            android:id="@+id/rating"
            android:visibility="gone"
            android:layout_marginTop="1dp"
            style="@style/Design.Widget.Avito.Rating.Small"/>
        <TextView
            android:textAppearance="?attr/textM10"
            android:textColor="?attr/text_primary"
            android:ellipsize="end"
            android:id="@+id/rating_text"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"/>
    </LinearLayout>
    <TextView
        android:textAppearance="?attr/textM10"
        android:textColor="?attr/text_primary"
        android:id="@+id/contact_bar_status"
        android:paddingLeft="@dimen/content_horizontal_padding"
        android:paddingRight="@dimen/content_horizontal_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/contact_bar_buttons_container"
        android:background="?attr/bg_elevation2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:baselineAligned="false"
        android:layout_marginHorizontal="@dimen/content_button_horizontal_padding"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/contact_bar_buttons_container2"
        android:background="?attr/bg_elevation2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:baselineAligned="false"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>
    <TextView
        android:textAppearance="?attr/textS10"
        android:textColor="?attr/text_secondary"
        android:gravity="center"
        android:id="@+id/contact_bar_rkn_disclaimer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:textColor="?attr/text_primary"
        android:gravity="center"
        android:id="@+id/contact_bar_status_bottom"
        android:paddingLeft="@dimen/content_horizontal_padding"
        android:paddingRight="@dimen/content_horizontal_padding"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"/>
</LinearLayout>
