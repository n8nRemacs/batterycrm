<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="vertical"
    android:id="@+id/container_with_input_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/motivation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="?attr/publish_horizontalPadding"/>
    <com.avito.android.lib.design.component_container.ComponentContainer
        android:id="@+id/single_address_location_container"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="?attr/publish_horizontalPadding"
        app:componentContainer_contentPaddingTop="12dp"
        app:componentContainer_contentSpacing="0dp">
        <com.avito.android.lib.design.button.Button
            android:theme="@style/Theme.DesignSystem.Re23"
            android:id="@+id/action_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/seller_publish_multiaddress_add_button_action"
            android:layout_marginHorizontal="@dimen/publish_container_horizontal_padding"
            app:button_compoundDrawablePadding="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="?attr/buttonSecondaryLarge"/>
        <include
            android:id="@+id/edit_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            layout="@layout/edit_address_item_layout"/>
    </com.avito.android.lib.design.component_container.ComponentContainer>
    <TextView
        android:textAppearance="?attr/textS10"
        android:textColor="?attr/red600"
        android:id="@+id/error"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="?attr/publish_horizontalPadding"/>
</LinearLayout>
