<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.avito.android.lib.design.nav_bar.NavBar
        android:id="@+id/email_confirm_screen_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <FrameLayout
        android:id="@+id/email_confirm_screen_progress_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.avito.android.lib.design.spinner.Spinner
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?attr/spinnerDarkLarge"/>
    </FrameLayout>
    <ScrollView
        android:id="@+id/email_confirm_screen_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp">
            <ImageView
                android:id="@+id/email_confirm_placeholder_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:scaleType="centerCrop"/>
            <TextView
                android:textAppearance="?attr/textH20"
                android:gravity="center"
                android:id="@+id/email_confirm_placeholder_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"/>
            <TextView
                android:textAppearance="?attr/textM10"
                android:gravity="center"
                android:id="@+id/email_confirm_placeholder_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
