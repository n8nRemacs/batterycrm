<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/phone_confirmation_screen_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.avito.android.lib.design.nav_bar.NavBar
            android:id="@+id/phone_confirmation_nav_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textAppearance="?attr/textM20"
            android:id="@+id/phone_confirmation_message"
            android:paddingTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"/>
        <com.avito.android.lib.design.component_container.ComponentContainer
            android:id="@+id/phone_confirmation_cc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="24dp"
            android:layout_marginHorizontal="16dp">
            <com.avito.android.lib.design.input.Input
                android:id="@+id/phone_confirmation_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/phone_confirmation_code_hint"
                android:inputType="number"
                android:imeOptions="flagNoExtractUi|actionDone"
                app:input_clearButton="true"
                app:input_formatterType="numeric"/>
        </com.avito.android.lib.design.component_container.ComponentContainer>
        <android.widget.Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <com.avito.android.lib.design.button.Button
            android:id="@+id/phone_confirmation_get_new_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="16dp"
            style="?attr/buttonSecondaryMedium"/>
    </LinearLayout>
    <com.avito.android.lib.design.spinner.overlay.SpinnerOverlay
        android:id="@+id/phone_confirmation_progress_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</FrameLayout>
