<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/period_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.avito.android.lib.design.input.Input
        android:id="@+id/start_date_select"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/since"
        android:singleLine="true"
        android:layout_weight="1"
        app:input_formatterType="not_editable"
        style="?attr/publishSelect"/>
    <com.avito.android.lib.design.input.Input
        android:id="@+id/end_date_select"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/till"
        android:singleLine="true"
        android:layout_weight="1"
        android:layout_marginStart="12dp"
        app:input_formatterType="not_editable"
        style="?attr/publishSelect"/>
</LinearLayout>
