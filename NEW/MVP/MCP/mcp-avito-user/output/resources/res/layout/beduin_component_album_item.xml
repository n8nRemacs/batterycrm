<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/cell"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image"
        android:layout_width="166dp"
        android:layout_height="124dp"
        app:failureImage="@drawable/placeholders_img_explore_card_no_image_normal"
        app:failureImageScaleType="fitCenter"
        app:overlayImage="@drawable/image_foreground_cornered"
        app:placeholderImage="@drawable/placeholders_img_explore_card_no_image_normal"
        app:placeholderImageScaleType="fitCenter"
        app:roundedCornerRadius="5dp"/>
    <TextView
        android:textAppearance="?attr/textM2"
        android:id="@+id/text"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>
</LinearLayout>
