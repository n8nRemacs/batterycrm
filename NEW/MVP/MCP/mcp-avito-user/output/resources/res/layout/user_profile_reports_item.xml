<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:id="@+id/user_profile_autoteka_purchase_data_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/UserProfileCardContainer">
    <TextView
        android:textAppearance="?attr/textH5"
        android:textColor="?attr/black"
        android:id="@+id/autoteka_purchase_data_card_title"
        android:paddingLeft="@dimen/profile_inside_horizontal_padding"
        android:paddingTop="@dimen/standard_padding"
        android:paddingRight="@dimen/profile_inside_horizontal_padding"
        android:paddingBottom="@dimen/standard_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <include
        android:id="@+id/autoteka_purchase_data_card_info_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/info_block"/>
    <View
        android:background="?attr/gray8"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"/>
    <include
        android:id="@+id/autoteka_purchase_data_card_action_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        layout="@layout/button_flat_card"/>
</LinearLayout>
