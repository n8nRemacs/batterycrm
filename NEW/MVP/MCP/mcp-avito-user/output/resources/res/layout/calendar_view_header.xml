<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/clear_button_text_size"
            android:textColor="@color/txt_flat_button_primary"
            android:layout_gravity="end"
            android:id="@+id/clear_button"
            android:background="@drawable/bg_flat_button_primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/calendar_clear"
            android:layout_marginEnd="@dimen/clear_button_right_margin"
            style="@style/Deprecated.Theme.Internal.Button.Flat.Primary"/>
    </androidx.appcompat.widget.Toolbar>
</LinearLayout>
