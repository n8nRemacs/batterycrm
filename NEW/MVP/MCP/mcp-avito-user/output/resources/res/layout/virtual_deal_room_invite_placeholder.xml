<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <com.avito.android.lib.design.skeleton.Skeleton
        android:id="@+id/skeleton_avatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:skeleton_radius="153dp"/>
    <com.avito.android.lib.design.skeleton.Skeleton
        android:id="@+id/skeleton_title"
        android:layout_width="177dp"
        android:layout_height="10dp"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toTopOf="@+id/skeleton_subtitle"
        app:layout_constraintStart_toEndOf="@+id/skeleton_avatar"
        app:layout_constraintTop_toTopOf="parent"
        app:skeleton_radius="3dp"/>
    <com.avito.android.lib.design.skeleton.Skeleton
        android:id="@+id/skeleton_subtitle"
        android:layout_width="137dp"
        android:layout_height="10dp"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/skeleton_avatar"
        app:layout_constraintTop_toBottomOf="@+id/skeleton_title"
        app:skeleton_radius="3dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
