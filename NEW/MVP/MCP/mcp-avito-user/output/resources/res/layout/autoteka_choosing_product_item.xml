<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/autoteka_choosing_product_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="?attr/textM10"
        android:id="@+id/autoteka_choosing_product_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginHorizontal="16dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/autoteka_products_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/autoteka_choosing_product_standalone_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="16dp"
        app:cardBackgroundColor="?attr/white"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">
            <TextView
                android:gravity="center_horizontal"
                android:id="@+id/autoteka_choosing_product_standalone_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?attr/textM10"/>
            <TextView
                android:textColor="?attr/blue600"
                android:gravity="center_horizontal"
                android:id="@+id/autoteka_choosing_product_standalone_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?attr/textM10"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
