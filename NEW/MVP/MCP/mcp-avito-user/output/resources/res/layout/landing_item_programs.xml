<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="?attr/textH3"
        android:id="@+id/programs_title"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/programs_recycler_view"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"/>
    <TextView
        android:textAppearance="?attr/textS10"
        android:textColor="?attr/blue600"
        android:textColorHighlight="?attr/blue600"
        android:textColorHint="?attr/blue600"
        android:textColorLink="?attr/blue600"
        android:id="@+id/programs_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingHorizontal="16dp"/>
</LinearLayout>
