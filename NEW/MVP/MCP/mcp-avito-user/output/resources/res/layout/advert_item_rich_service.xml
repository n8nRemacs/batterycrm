<?xml version="1.0" encoding="utf-8"?>
<com.avito.android.lib.util.layout.ForegroundRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/advert_content"
    android:tag="service_snippet"
    android:paddingTop="10dp"
    android:paddingBottom="14dp"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="@drawable/rich_item_fg">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/gallery"
        android:paddingLeft="@dimen/rich_snippet_padding_left"
        android:paddingRight="@dimen/rich_snippet_padding_right"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"/>
    <FrameLayout
        android:id="@+id/top_badge_container"
        android:paddingLeft="@dimen/rich_snippet_padding_left"
        android:paddingRight="@dimen/rich_snippet_padding_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/gallery"
        android:layout_alignBottom="@+id/gallery">
        <TextView
            android:layout_gravity="top"
            android:id="@+id/card_info_badge"
            android:visibility="gone"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="6dp"
            style="@style/Design.Widget.SnippetBadge.Viewed"/>
    </FrameLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/fields_container"
        android:paddingLeft="@dimen/rich_snippet_padding_left"
        android:paddingRight="@dimen/rich_snippet_padding_right"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/top_badge_container">
        <TextView
            android:gravity="center_vertical"
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="32dp"
            style="@style/Widget.Avito.TextView.Serp.Item.Caption.Rich.Price"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="3dp"
            style="@style/Widget.Avito.TextView.Serp.Item.Caption.Rich.Title"/>
        <ru.avito.component.snippet_badge_bar.SnippetBadgeBar
            android:id="@+id/advert_item_rich_service_snippet_badge_bar"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="6dp"/>
        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:maxLines="2"
            android:singleLine="false"
            style="@style/Widget.Avito.TextView.Serp.Item.Caption.Rich.Subtitle"/>
        <ru.avito.component.serp.PriceListCardView
            android:id="@+id/price_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <include layout="@layout/advert_item_geo_reference_layout"/>
        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.Avito.TextView.Serp.Item.Caption.Rich.Subtitle.Secondary"/>
    </LinearLayout>
    <com.google.android.material.internal.CheckableImageButton
        android:id="@+id/btn_favorite"
        android:background="@drawable/bg_btn_circle_black"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginTop="-1dp"
        android:layout_marginRight="18dp"
        android:src="@drawable/advert_item_rich_favorite_black"
        android:layout_alignRight="@+id/top_badge_container"
        android:layout_alignParentTop="true"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/seller_info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rich_snippet_padding_left"
        android:layout_marginTop="6dp"
        android:layout_marginRight="@dimen/rich_snippet_padding_right"
        android:layout_below="@+id/fields_container">
        <LinearLayout
            android:orientation="vertical"
            android:paddingTop="1dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/seller_name"
                android:paddingRight="@dimen/rich_snippet_padding_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.Avito.TextView.Serp.Item.Caption.Rich.Subtitle.Bold"/>
            <LinearLayout
                android:gravity="bottom"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/seller_rating_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="2dp"
                    style="?attr/textBodySmall"/>
                <com.avito.android.lib.design.rating.RatingBar
                    android:id="@+id/seller_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="1.5dp"
                    app:ratingBar_dividerWidth="2dp"
                    style="@style/Design.Widget.Avito.Rating.Small"/>
                <TextView
                    android:textColor="?attr/gray48"
                    android:id="@+id/seller_rating_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    style="?attr/textBodySmall"/>
            </LinearLayout>
            <com.avito.android.lib.deprecated_design.badge_bar.CompactFlexibleLayout
                android:id="@+id/seller_badge_bar"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:compactFlexibleLayout_maxLines="3"/>
        </LinearLayout>
        <com.avito.android.fresco.SimpleDraweeView
            android:id="@+id/seller_logo"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="3dp"
            app:actualImageScaleType="fitCenter"
            app:fadeDuration="0"
            app:roundedCornerRadius="@dimen/rds_badge_corner_radius"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/actions_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rich_snippet_padding_left"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/rich_snippet_padding_right"
        android:baselineAligned="false"
        android:divider="@drawable/divider_11"
        android:layout_below="@+id/seller_info_container"
        android:showDividers="middle">
        <com.avito.android.lib.design.button.Button
            android:id="@+id/btn_write"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="7dp"
            android:layout_weight="1"
            android:paddingVertical="5dp"
            style="?attr/buttonPrimaryMedium"/>
        <com.avito.android.lib.design.button.Button
            android:id="@+id/btn_call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="7dp"
            android:layout_weight="1"
            android:paddingVertical="5dp"
            style="?attr/buttonAccentMedium"/>
        <com.avito.android.lib.design.button.Button
            android:id="@+id/btn_booking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="7dp"
            android:layout_weight="1"
            android:paddingVertical="5dp"
            style="?attr/buttonSafedealMedium"/>
        <com.avito.android.lib.design.button.Button
            android:id="@+id/btn_order_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="7dp"
            android:layout_weight="1"
            android:paddingVertical="5dp"
            style="?attr/buttonSafedealMedium"/>
    </LinearLayout>
</com.avito.android.lib.util.layout.ForegroundRelativeLayout>
