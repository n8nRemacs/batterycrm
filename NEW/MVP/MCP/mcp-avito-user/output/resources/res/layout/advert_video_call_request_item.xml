<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/video_call_request_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAppearance="?attr/textH3"
            android:layout_gravity="center_vertical"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/advert_details_advert_video_call_request_title"/>
        <com.avito.android.lib.design.badge.Badge
            android:layout_gravity="center_vertical"
            android:id="@+id/advert_video_call_request_badge"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/advert_details_advert_video_call_request_badge"
            android:layout_marginStart="8dp"
            style="?attr/badgeTextLarge"/>
    </LinearLayout>
    <TextView
        android:textAppearance="?attr/textBody"
        android:layout_gravity="center_vertical"
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/advert_details_advert_video_call_request_desc"/>
    <com.avito.android.lib.design.button.Button
        android:layout_gravity="center"
        android:id="@+id/advert_video_call_request_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        style="?attr/buttonSecondaryLarge"/>
</LinearLayout>
