<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/other_category"
    android:background="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/content_horizontal_padding"
    android:paddingEnd="@dimen/content_horizontal_padding">
    <com.avito.android.fresco.SimpleDraweeView
        android:id="@+id/other_category_image"
        android:layout_width="46dp"
        android:layout_height="46dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textH50"
        android:id="@+id/other_category_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toTopOf="@+id/other_category_subtitle"
        app:layout_constraintEnd_toStartOf="@+id/other_category_right_icon"
        app:layout_constraintStart_toEndOf="@+id/other_category_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"/>
    <TextView
        android:textAppearance="?attr/textS20"
        android:textColor="?attr/gray54"
        android:id="@+id/other_category_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/other_category_title"
        app:layout_constraintStart_toStartOf="@+id/other_category_title"
        app:layout_constraintTop_toBottomOf="@+id/other_category_title"/>
    <ImageView
        android:id="@+id/other_category_right_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/other_category_title"/>
</androidx.constraintlayout.widget.ConstraintLayout>
