<?xml version="1.0" encoding="utf-8"?>
<com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="?attr/shimmerDefault">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp">
        <com.avito.android.lib.design.skeleton.Skeleton
            android:layout_width="match_parent"
            android:layout_height="248dp"
            app:skeleton_radius="16dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/ll_chart_period"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="0dp">
            <com.avito.android.lib.design.skeleton.Skeleton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                app:skeleton_radius="12dp"/>
            <com.avito.android.lib.design.skeleton.Skeleton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                app:skeleton_radius="12dp"/>
            <com.avito.android.lib.design.skeleton.Skeleton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                app:skeleton_radius="12dp"/>
            <com.avito.android.lib.design.skeleton.Skeleton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:skeleton_radius="12dp"/>
        </LinearLayout>
    </LinearLayout>
</com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout>
