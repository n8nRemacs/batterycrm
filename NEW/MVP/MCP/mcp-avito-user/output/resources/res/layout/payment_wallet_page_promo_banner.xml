<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.avito.android.fresco.SimpleDraweeView
        android:id="@+id/payment_wallet_page_banner_icon_left"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/payment_wallet_page_banner_subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/payment_wallet_page_banner_title"/>
    <TextView
        android:textAppearance="?attr/textH70"
        android:ellipsize="end"
        android:id="@+id/payment_wallet_page_banner_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toTopOf="@+id/payment_wallet_page_banner_subtitle"
        app:layout_constraintEnd_toStartOf="@+id/payment_wallet_page_banner_icon_right"
        app:layout_constraintStart_toEndOf="@+id/payment_wallet_page_banner_icon_left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_goneMarginEnd="0dp"
        app:layout_goneMarginStart="0dp"/>
    <TextView
        android:textAppearance="?attr/textS2"
        android:ellipsize="end"
        android:id="@+id/payment_wallet_page_banner_subtitle"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/payment_wallet_page_banner_icon_right"
        app:layout_constraintStart_toEndOf="@+id/payment_wallet_page_banner_icon_left"
        app:layout_constraintTop_toBottomOf="@+id/payment_wallet_page_banner_title"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_goneMarginEnd="0dp"
        app:layout_goneMarginStart="0dp"/>
    <com.avito.android.fresco.SimpleDraweeView
        android:id="@+id/payment_wallet_page_banner_icon_right"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/payment_wallet_page_banner_subtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/payment_wallet_page_banner_title"/>
</merge>
