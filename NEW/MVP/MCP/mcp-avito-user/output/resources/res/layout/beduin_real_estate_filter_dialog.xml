<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.LookAndFeel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/filter_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/filter_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.avito.android.lib.design.component_container.ComponentContainer
                android:id="@+id/development"
                android:paddingLeft="?attr/listItemHorizontalPadding"
                android:paddingRight="?attr/listItemHorizontalPadding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:componentContainer_contentPaddingTop="6dp"
                app:componentContainer_title="@string/real_estate_filter_development">
                <com.avito.android.lib.design.input.Input
                    android:id="@+id/development_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/real_estate_filter_development_hint"
                    android:singleLine="true"
                    app:layout_autoReset="always"
                    style="?attr/baseSelect"/>
            </com.avito.android.lib.design.component_container.ComponentContainer>
            <com.avito.android.lib.design.component_container.ComponentContainer
                android:id="@+id/completion"
                android:paddingLeft="?attr/listItemHorizontalPadding"
                android:paddingRight="?attr/listItemHorizontalPadding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:componentContainer_contentPaddingTop="6dp"
                app:componentContainer_title="@string/real_estate_filter_completion">
                <com.avito.android.lib.design.input.Input
                    android:id="@+id/completion_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/real_estate_filter_completion_hint"
                    android:singleLine="true"
                    app:layout_autoReset="always"
                    style="?attr/baseSelect"/>
            </com.avito.android.lib.design.component_container.ComponentContainer>
            <com.avito.android.lib.design.chips.Chips
                android:id="@+id/room_types"
                android:paddingLeft="?attr/listItemHorizontalPadding"
                android:paddingRight="?attr/listItemHorizontalPadding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/real_estate_filter_vertical_margin"
                app:chips_displayType="singleLineScrollable"
                app:chips_selectStrategy="single"
                app:chips_title="@string/real_estate_filter_room_type"
                app:componentContainer_contentPaddingTop="6dp"
                style="?attr/chipsLarge"/>
            <com.avito.android.lib.design.component_container.ComponentContainer
                android:id="@+id/finish_type"
                android:paddingLeft="?attr/listItemHorizontalPadding"
                android:paddingRight="?attr/listItemHorizontalPadding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/real_estate_filter_vertical_margin"
                app:componentContainer_contentPaddingTop="6dp"
                app:componentContainer_title="@string/real_estate_filter_finish_type">
                <com.avito.android.lib.design.input.Input
                    android:id="@+id/finish_type_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/real_estate_filter_finish_type_hint"
                    android:singleLine="true"
                    app:layout_autoReset="always"
                    style="?attr/baseSelect"/>
            </com.avito.android.lib.design.component_container.ComponentContainer>
            <com.avito.android.lib.design.component_container.ComponentContainer
                android:orientation="horizontal"
                android:id="@+id/price"
                android:paddingLeft="?attr/listItemHorizontalPadding"
                android:paddingRight="?attr/listItemHorizontalPadding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/real_estate_filter_vertical_margin"
                app:componentContainer_contentPaddingTop="6dp"
                app:componentContainer_title="@string/real_estate_filter_price">
                <com.avito.android.lib.design.input.Input
                    android:id="@+id/priceFrom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/from_input_hint"
                    android:singleLine="true"
                    android:layout_weight="1"
                    app:input_formatterType="decimal"
                    app:input_postfix="₽"
                    app:input_prefix="@string/from_input_hint"
                    app:layout_autoReset="notNormalOnly"
                    app:layout_weight="1"
                    style="?attr/input"/>
                <com.avito.android.lib.design.input.Input
                    android:id="@+id/priceTo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/to_input_hint"
                    android:singleLine="true"
                    android:layout_weight="1"
                    app:input_formatterType="decimal"
                    app:input_postfix="₽"
                    app:input_prefix="@string/to_input_hint"
                    app:layout_autoReset="notNormalOnly"
                    app:layout_weight="1"
                    style="?attr/input"/>
            </com.avito.android.lib.design.component_container.ComponentContainer>
            <com.avito.android.lib.design.component_container.ComponentContainer
                android:orientation="horizontal"
                android:id="@+id/area"
                android:paddingLeft="?attr/listItemHorizontalPadding"
                android:paddingRight="?attr/listItemHorizontalPadding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/real_estate_filter_vertical_margin"
                app:componentContainer_contentPaddingTop="6dp"
                app:componentContainer_title="@string/real_estate_filter_area">
                <com.avito.android.lib.design.input.Input
                    android:id="@+id/areaFrom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/from_input_hint"
                    android:singleLine="true"
                    android:layout_weight="1"
                    app:input_formatterType="decimal"
                    app:input_postfix="м²"
                    app:input_prefix="@string/from_input_hint"
                    app:layout_autoReset="notNormalOnly"
                    app:layout_weight="1"
                    style="?attr/input"/>
                <com.avito.android.lib.design.input.Input
                    android:id="@+id/areaTo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/to_input_hint"
                    android:singleLine="true"
                    android:layout_weight="1"
                    app:input_formatterType="decimal"
                    app:input_postfix="м²"
                    app:input_prefix="@string/to_input_hint"
                    app:layout_autoReset="notNormalOnly"
                    app:layout_weight="1"
                    style="?attr/input"/>
            </com.avito.android.lib.design.component_container.ComponentContainer>
            <com.avito.android.lib.design.button.Button
                android:id="@+id/confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="?attr/listItemHorizontalPadding"
                android:layout_marginTop="32dp"
                android:layout_marginRight="?attr/listItemHorizontalPadding"
                android:layout_marginBottom="16dp"
                android:text="@string/apply_button_text"
                style="?attr/buttonPrimaryLarge"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <FrameLayout
        android:layout_gravity="bottom"
        android:id="@+id/floating_confirm_container"
        android:paddingBottom="@dimen/contact_bar_bottom_padding"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp">
        <FrameLayout
            android:orientation="horizontal"
            android:id="@+id/contact_bar_buttons_container"
            android:background="@drawable/bg_contact_bar"
            android:padding="@dimen/contact_bar_glow_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.avito.android.lib.design.button.Button
                android:id="@+id/floatin_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/apply_button_text"
                style="?attr/buttonPrimaryLarge"/>
        </FrameLayout>
    </FrameLayout>
</FrameLayout>
