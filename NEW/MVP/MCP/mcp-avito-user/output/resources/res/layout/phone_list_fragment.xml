<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/phone_list_root"
    android:background="?attr/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.avito.android.lib.design.nav_bar.NavBar
        android:id="@+id/phone_list_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
            android:id="@+id/phone_list_scroll"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textAppearance="?attr/textH25"
                    android:id="@+id/phone_list_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginHorizontal="16dp"/>
                <TextView
                    android:textAppearance="?attr/textM20"
                    android:id="@+id/phone_list_subtitle"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginHorizontal="16dp"/>
                <com.avito.android.lib.design.input.Input
                    android:id="@+id/phone_list_search"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:inputType="numberDecimal"
                    android:layout_marginHorizontal="16dp"
                    app:input_formatterType="simple"
                    app:layout_goneMarginTop="4dp"
                    style="?attr/inputSearch"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:orientation="vertical"
                    android:id="@+id/phone_list_recycler"
                    android:clipToPadding="false"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="16dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_goneMarginTop="16dp"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <com.avito.android.lib.design.shadow_layout.ShadowFrameLayout
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.avito.android.lib.design.button.Button
                android:id="@+id/phone_list_button"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                android:layout_marginHorizontal="16dp"
                app:layout_shadowEnabled="true"
                style="?attr/buttonPrimaryMedium"/>
        </com.avito.android.lib.design.shadow_layout.ShadowFrameLayout>
        <com.avito.android.lib.design.spinner.overlay.SpinnerOverlay
            android:id="@+id/phone_list_progress"
            android:background="?attr/white"
            android:paddingTop="?attr/actionBarSize"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
</LinearLayout>
