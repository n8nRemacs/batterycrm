<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="@dimen/widget_content_top_padding"
    android:paddingBottom="@dimen/widget_content_bottom_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/widget_content_horizontal_padding">
    <TextView
        android:textAppearance="?attr/textH25"
        android:id="@+id/location_widget_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.avito.android.lib.design.input.Input
        android:id="@+id/location_widget_search_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:singleLine="true"
        android:imeOptions="actionDone"
        app:input_clearButtonUnfocused="true"
        style="?attr/inputDefaultM"/>
    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/location_widget_popular_locations_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:dividerDrawable="@drawable/popular_location_divider"
        app:flexWrap="wrap"
        app:justifyContent="flex_start"
        app:showDivider="middle"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/fast_recent_searches_container"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"/>
    <ScrollView
        android:id="@+id/location_widget_suggested_locations_scroll_view"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/location_widget_suggested_locations_container"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </ScrollView>
    <include
        android:visibility="gone"
        layout="@layout/widget_filters_suggested_locations_skeletons"/>
</LinearLayout>
