<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="24dp"
    android:paddingVertical="16dp">
    <TextView
        android:textAppearance="?attr/textH3"
        android:gravity="start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/job_enrichment_feedback_title"/>
    <TextView
        android:textAppearance="?attr/textM2"
        android:gravity="start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/job_enrichment_feedback_description"/>
    <com.avito.android.lib.design.component_container.ComponentContainer
        android:id="@+id/enrichment_input_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.avito.android.lib.design.input.Input
            android:id="@+id/enrichment_input"
            android:layout_width="match_parent"
            android:layout_height="156dp"
            android:hint="@string/job_enrichment_feedback_input_hint"
            android:layout_marginVertical="8dp"
            style="?attr/textArea"/>
    </com.avito.android.lib.design.component_container.ComponentContainer>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/enrichment_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/job_enrichment_feedback_button"
        style="?attr/buttonPrimaryLarge"/>
</LinearLayout>
