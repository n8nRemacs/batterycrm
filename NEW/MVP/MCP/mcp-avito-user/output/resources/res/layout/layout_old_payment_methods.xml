<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/payment_method_list_item"
    android:focusable="true"
    android:clickable="true"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="66dp"
    android:paddingVertical="5dp">
    <FrameLayout
        android:id="@+id/payment_method_icon_container"
        android:background="@drawable/bg_payment_method_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/payment_method_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
    </FrameLayout>
    <TextView
        android:textAppearance="?attr/textS20"
        android:gravity="start"
        android:id="@+id/payment_method_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toTopOf="@+id/payment_method_subtitle"
        app:layout_constraintEnd_toStartOf="@+id/payment_method_checkmark"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/payment_method_icon_container"
        app:layout_constraintTop_toTopOf="@+id/payment_method_icon_container"/>
    <TextView
        android:textAppearance="?attr/textS20"
        android:gravity="start"
        android:id="@+id/payment_method_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/payment_method_icon_container"
        app:layout_constraintEnd_toStartOf="@+id/payment_method_checkmark"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/payment_method_icon_container"
        app:layout_constraintTop_toBottomOf="@+id/payment_method_title"/>
    <com.avito.android.lib.design.badge.Badge
        android:id="@+id/payment_method_new_badge"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/payment_method_new_badge_title"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/payment_method_title"
        app:layout_constraintStart_toEndOf="@+id/payment_method_title"
        app:layout_constraintTop_toTopOf="@+id/payment_method_title"
        style="?attr/badgeTextRedXS"/>
    <com.avito.android.lib.design.toggle.Checkmark
        android:id="@+id/payment_method_checkmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
