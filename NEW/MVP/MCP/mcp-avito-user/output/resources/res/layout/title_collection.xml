<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="vertical"
    android:id="@+id/title_collection_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.avito.android.lib.design.banner.Banner
        android:id="@+id/moderationStatusBanner"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="24dp"
        android:layout_marginHorizontal="10dp"
        app:banner_contentPaddingBottom="24dp"
        app:banner_contentPaddingLeft="24dp"
        app:banner_contentPaddingRight="24dp"
        app:banner_contentPaddingTop="20dp"
        app:banner_cornerRadius="20dp"
        app:banner_titleStyle="?attr/textM10"
        style="?attr/bannerDefault"/>
    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginHorizontal="24dp"
        style="?attr/textM10"/>
    <TextView
        android:id="@+id/collectionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        style="?attr/textH20"/>
    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="24dp"
        style="?attr/textM10"/>
</LinearLayout>
