<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.CollapsingToolbarLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/referral_contacts_header_margin_bottom"
    app:layout_scrollFlags="exitUntilCollapsed|scroll">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_collapseMode="parallax">
        <TextView
            android:id="@+id/referral_contacts_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/referral_contacts_title"
            style="?attr/textH25"/>
        <TextView
            android:id="@+id/referral_contacts_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/referral_contacts_header_subtitle_margin_top"
            android:text="@string/referral_contacts_subtitle"
            style="?attr/textL10"/>
    </LinearLayout>
</com.google.android.material.appbar.CollapsingToolbarLayout>
