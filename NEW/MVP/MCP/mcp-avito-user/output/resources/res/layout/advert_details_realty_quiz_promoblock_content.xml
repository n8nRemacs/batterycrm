<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textAppearance="?attr/textM2"
        android:textColor="?attr/white"
        android:id="@+id/realty_quiz_promoblock_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.avito.android.lib.design.button.Button
            android:textColor="?attr/black"
            android:id="@+id/realty_quiz_positive_promoblock_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_thumb_up"
            android:layout_marginEnd="12dp"
            app:button_backgroundColor="?attr/warmGray4"
            app:button_cornerRadius="12dp"
            app:button_iconColor="?attr/black"
            style="?attr/buttonPrimaryLarge"/>
        <com.avito.android.lib.design.button.Button
            android:textColor="?attr/black"
            android:id="@+id/realty_quiz_negative_promoblock_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_thumb_down"
            app:button_backgroundColor="?attr/warmGray4"
            app:button_cornerRadius="12dp"
            app:button_iconColor="?attr/black"
            style="?attr/buttonPrimaryLarge"/>
    </LinearLayout>
</LinearLayout>
