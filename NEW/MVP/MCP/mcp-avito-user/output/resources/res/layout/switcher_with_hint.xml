<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:gravity="center_vertical"
    android:id="@+id/switcher_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/filter_item_horizontal_padding">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginEnd="12dp">
        <TextView
            android:id="@+id/switcher_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?attr/textH3"/>
        <TextView
            android:id="@+id/switcher_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            style="?attr/textM2"/>
        <TextView
            android:textColor="?attr/blue"
            android:id="@+id/switcher_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            style="?attr/textM2"/>
    </LinearLayout>
    <com.avito.android.lib.design.switcher.Switcher
        android:id="@+id/switcher_toggle"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?attr/switcherDefaultMedium"/>
</LinearLayout>
