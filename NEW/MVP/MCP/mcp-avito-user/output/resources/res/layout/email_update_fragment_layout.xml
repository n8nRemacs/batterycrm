<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/email_update_screen_content_holder"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.avito.android.lib.design.nav_bar.NavBar
        android:id="@+id/email_update_screen_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navBar_titleStyle="?attr/textH50"/>
    <com.avito.android.lib.design.component_container.ComponentContainer
        android:id="@+id/email_update_screen_input_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:componentContainer_subtitleAppearance="?attr/textM20"
        app:componentContainer_title="Введите адрес электронной почты"
        app:componentContainer_titleAppearance="?attr/textH50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_update_screen_toolbar">
        <com.avito.android.lib.design.input.Input
            android:id="@+id/email_update_screen_input"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Например, myname@site.ru"
            android:singleLine="true"
            app:input_clearButton="true"
            app:input_clearButtonUnfocused="true"
            app:input_focusByClearButton="true"/>
    </com.avito.android.lib.design.component_container.ComponentContainer>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/email_update_screen_verification_text_container"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_update_screen_toolbar">
        <TextView
            android:textAppearance="?attr/textH30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Проверьте почту"/>
        <TextView
            android:textAppearance="?attr/textL20"
            android:id="@+id/email_update_screen_verification_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <com.avito.android.lib.design.button.Button
        android:layout_gravity="bottom"
        android:id="@+id/email_update_screen_save_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Сохранить"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        style="?attr/buttonPrimaryLarge"/>
    <FrameLayout
        android:id="@+id/email_update_screen_progress_overlay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_update_screen_toolbar"/>
</androidx.constraintlayout.widget.ConstraintLayout>
