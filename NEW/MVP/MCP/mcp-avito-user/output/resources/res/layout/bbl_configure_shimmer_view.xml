<?xml version="1.0" encoding="utf-8"?>
<com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:res="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bbl_configure_shimmer"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="?attr/shimmerDefault">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.avito.android.lib.design.skeleton.Skeleton
            android:layout_width="246dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"
            res:skeleton_radius="6dp"/>
        <com.avito.android.lib.design.skeleton.Skeleton
            android:layout_width="196dp"
            android:layout_height="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            res:skeleton_radius="6dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp">
            <com.avito.android.lib.design.skeleton.Skeleton
                android:layout_width="0dp"
                android:layout_height="142dp"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                res:skeleton_radius="28dp"/>
            <com.avito.android.lib.design.skeleton.Skeleton
                android:layout_width="0dp"
                android:layout_height="142dp"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="10dp"
                res:skeleton_radius="28dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">
            <com.avito.android.lib.design.skeleton.Skeleton
                android:layout_width="0dp"
                android:layout_height="142dp"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                res:skeleton_radius="28dp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="142dp"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="10dp"
                res:skeleton_radius="28dp"/>
        </LinearLayout>
    </LinearLayout>
</com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout>
