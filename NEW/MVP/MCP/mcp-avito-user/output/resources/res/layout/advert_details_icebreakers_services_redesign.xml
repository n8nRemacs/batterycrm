<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/advert_details_icebreakers_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="18dp"
    android:layout_marginBottom="6dp"
    android:layout_marginHorizontal="@dimen/content_horizontal_padding">
    <TextView
        android:theme="@style/Theme.DesignSystem.Re23"
        android:textAppearance="?attr/textH25"
        android:id="@+id/icebreakers_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/bg_icebreakers"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.avito.android.lib.design.input.Input
            android:textAppearance="?attr/textM2"
            android:id="@+id/icebreakers_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:maxLength="1000"
            android:drawableRight="?attr/ic_send20"
            android:paddingStart="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="14dp"
            app:input_backgroundColor="?attr/transparentWhite"
            app:input_iconRightColor="?attr/warmGray84"/>
        <com.avito.android.lib.design.chips.Chips
            android:id="@+id/icebreaker_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="16dp"
            app:chips_childHorizontalSpacing="6dp"
            app:chips_childVerticalSpacing="6dp"
            app:chips_displayType="multipleLines"
            app:chips_keepLastSelected="true"
            app:chips_selectStrategy="single"
            app:chips_selectedAppearance="@style/Icebreaker.Button.SelectedStyle.Restyle"
            app:chips_unselectedAppearance="@style/Icebreaker.Button.NormalStyle.Restyle"/>
    </LinearLayout>
</LinearLayout>
