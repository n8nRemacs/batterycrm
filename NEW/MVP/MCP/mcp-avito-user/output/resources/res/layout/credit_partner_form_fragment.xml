<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/credit_partner_screen_root"
    android:background="?attr/constantWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_scrollFlags="enterAlways|scroll"/>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:liftOnScroll="true">
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:background="?attr/constantWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="16dp"
                app:layout_scrollFlags="enterAlways|scroll">
                <ImageView
                    android:layout_width="73dp"
                    android:layout_height="20dp"
                    android:src="@drawable/expected_img_avito_partner_logo_black"/>
                <View
                    android:id="@+id/divider"
                    android:background="@color/expected_legacy_constant_gray_12"
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="16dp"/>
                <ImageView
                    android:id="@+id/credit_partner_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    app:srcCompat="@drawable/tinkoff_credit_partner_logo"/>
            </LinearLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <com.avito.android.credits.credit_partner_screen.webview.NestedPowerWebView
            android:id="@+id/web_view"
            android:background="?attr/constantWhite"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:dom_storage_enabled="true"
            app:java_script_enabled="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:support_zoom="false"/>
        <ProgressBar
            android:layout_gravity="center"
            android:id="@+id/progress"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:indeterminate="true"
            android:indeterminateTint="@color/legacy_constant_black"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</LinearLayout>
