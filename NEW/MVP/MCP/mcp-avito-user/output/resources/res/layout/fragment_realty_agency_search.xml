<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?android:attr/actionBarSize"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.appcompat.widget.AppCompatTextView
            android:textAppearance="?attr/textH50"
            android:ellipsize="end"
            android:layout_gravity="center"
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"/>
    </androidx.appcompat.widget.Toolbar>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinator_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:outlineProvider="none"
            app:layout_behavior="com.avito.android.developments_agency_search.screen.realty_agency_search.view.AgencySearchAppBarLayoutBehavior">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="snap|enterAlways|scroll">
                <include layout="@layout/shortcuts"/>
            </FrameLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <FrameLayout
            android:id="@+id/map_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <androidx.recyclerview.widget.RecyclerView
            android:orientation="vertical"
            android:id="@+id/searchResultsRecyclerView"
            android:background="?attr/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:behavior_fitToContents="false"
            app:behavior_halfExpandedRatio="0.5"
            app:behavior_hideable="false"
            app:behavior_peekHeight="52dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_behavior="com.avito.android.developments_agency_search.screen.realty_agency_search.view.AgencySearchResultBottomSheetBehavior"/>
        <androidx.compose.ui.platform.ComposeView
            android:layout_gravity="bottom|center_horizontal"
            android:id="@+id/navigation_menu_button"
            android:paddingTop="24dp"
            android:paddingBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="24dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:orientation="vertical"
            android:id="@+id/developmentTooltipRecyclerView"
            android:background="?attr/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:behavior_expandedOffset="8dp"
            app:behavior_fitToContents="false"
            app:behavior_halfExpandedRatio="0.0001"
            app:behavior_hideable="true"
            app:behavior_peekHeight="338dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
