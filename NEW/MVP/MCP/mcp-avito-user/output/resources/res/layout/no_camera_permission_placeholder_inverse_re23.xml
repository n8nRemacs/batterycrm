<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/no_camera_permission_placeholder"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textAppearance="?attr/textH25"
        android:textStyle="bold"
        android:textColor="?attr/text_inverse_constant_primary"
        android:gravity="center"
        android:id="@+id/no_camera_access"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:maxWidth="@dimen/photo_picker_placeholder_text_max_width"
        android:text="@string/no_camera_access"
        android:textFontWeight="800"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:textColor="?attr/text_inverse_constant_primary"
        android:gravity="center"
        android:id="@+id/allow_camera_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:maxWidth="@dimen/photo_picker_placeholder_text_max_width"
        android:text="@string/allow_camera"/>
    <com.avito.android.lib.design.button.Button
        android:textColor="?attr/components_button_text_constant_primary"
        android:id="@+id/allow_access_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/allow_access"
        app:button_backgroundColor="?attr/components_button_bg_inverse_constant_primary"
        style="?attr/buttonPrimaryLarge"/>
</LinearLayout>
