<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:theme="@style/Theme.DesignSystem.Re23"
        android:id="@+id/category_vertical_collapsing_toolbar"
        android:visibility="gone"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentScrim="?attr/white"
        app:layout_scrollFlags="snap|exitUntilCollapsed|scroll"
        app:scrimAnimationDuration="100"
        app:scrimVisibleHeightTrigger="100dp">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/category_vertical_content_view"
            android:fitsSystemWindows="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="74dp"
            android:layout_marginHorizontal="@dimen/content_category_button_horizontal_padding">
            <TextView
                android:textAppearance="?attr/textH10"
                android:gravity="center_horizontal"
                android:id="@+id/category_vertical_collapsing_title"
                android:paddingBottom="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <include
                android:id="@+id/category_vertical_action_view"
                android:visibility="gone"
                layout="@layout/category_vertical_filter_action_layout"/>
        </LinearLayout>
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/category_vertical_toolbar"
            android:background="?attr/white"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:contentInsetEnd="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:layout_collapseMode="pin"
            app:navigationIcon="@null">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">
                <ImageView
                    android:id="@+id/category_vertical_navigation_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="@null"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="?attr/ic_arrowBack24"
                    app:tint="?attr/black"/>
                <ImageView
                    android:id="@+id/category_vertical_search_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="@null"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="?attr/ic_search24"
                    app:tint="?attr/black"/>
                <TextView
                    android:textAppearance="?attr/textS20"
                    android:gravity="center"
                    android:id="@+id/category_vertical_toolbar_start_title_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:paddingStart="16dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="4dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/category_vertical_toolbar_title_text"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toEndOf="@+id/category_vertical_navigation_icon"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:textAppearance="?attr/textS20"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:id="@+id/category_vertical_toolbar_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:maxLines="1"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/category_vertical_toolbar_end_title_icon"
                    app:layout_constraintStart_toEndOf="@+id/category_vertical_toolbar_start_title_icon"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:textAppearance="?attr/textS20"
                    android:gravity="center"
                    android:id="@+id/category_vertical_toolbar_end_title_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:paddingEnd="16dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/category_vertical_search_icon"
                    app:layout_constraintStart_toEndOf="@+id/category_vertical_toolbar_title_text"
                    app:layout_constraintTop_toTopOf="parent"/>
                <View
                    android:id="@+id/category_vertical_toolbar_title_container"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/category_vertical_toolbar_end_title_icon"
                    app:layout_constraintStart_toStartOf="@+id/category_vertical_toolbar_start_title_icon"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.CollapsingToolbarLayout>
    <FrameLayout
        android:id="@+id/category_vertical_thumb_layout"
        android:background="@drawable/vertical_category_filter_toolbar_view_thumb_background"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <View
            android:layout_gravity="bottom|center_horizontal"
            android:id="@+id/category_vertical_header_thumb"
            android:background="@drawable/vertical_category_filter_toolbar_view_thumb"
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_marginBottom="6dp"
            android:alpha="0"/>
    </FrameLayout>
</merge>
