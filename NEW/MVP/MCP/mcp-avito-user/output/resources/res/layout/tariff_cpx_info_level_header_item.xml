<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tariff_cpx_info_level_header_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="?attr/textH30"
        android:id="@+id/tariff_cpx_info_level_header_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginHorizontal="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/tariff_cpx_info_level_header_bottom_barrier"
        app:layout_constraintEnd_toStartOf="@+id/tariff_cpx_info_level_header_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tariff_cpx_info_level_header_top_barrier"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/tariff_cpx_info_level_header_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/tariff_cpx_info_level_header_bottom_barrier"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tariff_cpx_info_level_header_top_barrier"/>
    <TextView
        android:id="@+id/tariff_cpx_info_level_header_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tariff_cpx_info_level_header_bottom_barrier"/>
    <com.avito.android.lib.design.banner.Banner
        android:id="@+id/tariff_cpx_info_level_header_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:banner_content="@layout/tariff_cpx_info_level_header_item_banner_content"
        app:banner_contentPaddingBottom="8dp"
        app:banner_contentPaddingLeft="20dp"
        app:banner_contentPaddingRight="12dp"
        app:banner_contentPaddingTop="8dp"
        app:banner_shadowEnabled="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tariff_cpx_info_level_header_description"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/tariff_cpx_info_level_header_top_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/tariff_cpx_info_level_header_bottom_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="tariff_cpx_info_level_header_title, tariff_cpx_info_level_header_button"/>
</androidx.constraintlayout.widget.ConstraintLayout>
