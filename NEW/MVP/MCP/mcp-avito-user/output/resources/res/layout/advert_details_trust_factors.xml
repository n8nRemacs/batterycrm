<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="vertical"
    android:id="@+id/trust_factors_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp">
    <TextView
        android:textAppearance="?attr/textH30"
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="@null"
        android:layout_marginStart="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title"
        app:layout_constraintStart_toEndOf="@+id/tv_title"
        app:layout_constraintTop_toTopOf="@+id/tv_title"
        app:srcCompat="@drawable/arrow_right"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/tv_icon_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:paddingStart="0dp"
        android:paddingEnd="2dp"
        app:flow_verticalAlign="top"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_trust_factor_1"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/tv_trust_factor_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:maxLines="3"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/tv_icon_1"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:layout_gravity="center"
        android:id="@+id/tv_icon_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:flow_verticalAlign="top"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_trust_factor_2"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/tv_trust_factor_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:maxLines="3"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/tv_icon_2"
        app:layout_constraintTop_toBottomOf="@+id/tv_trust_factor_1"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/tv_icon_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:flow_verticalAlign="top"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_trust_factor_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_icon_2"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/tv_trust_factor_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:maxLines="3"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/tv_icon_3"
        app:layout_constraintTop_toBottomOf="@+id/tv_trust_factor_2"/>
    <TextView
        android:textAppearance="?attr/textXs10"
        android:textColor="?attr/gray54"
        android:id="@+id/tv_footerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_trust_factor_3"/>
</androidx.constraintlayout.widget.ConstraintLayout>
