<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/cpx_promo_price_input_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="?attr/textH20"
        android:id="@+id/cpx_promo_price_input_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        android:layout_marginHorizontal="16dp"/>
    <TextView
        android:textAppearance="?attr/textH40"
        android:id="@+id/cpx_promo_price_input_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginHorizontal="16dp"/>
    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/cpx_promo_price_input_banner_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"/>
    <com.avito.android.lib.design.input.Input
        android:textAppearance="?attr/textM20"
        android:id="@+id/cpx_promo_price_input_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        app:input_formatterType="roubles"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:id="@+id/cpx_promo_price_input_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginHorizontal="16dp"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/cpx_promo_price_input_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="20dp"
        style="?attr/buttonPrimaryLarge"/>
</LinearLayout>
