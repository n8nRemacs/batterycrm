<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="@dimen/profile_avatar_top_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/avatar"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="12dp"
        android:foreground="@drawable/bg_btn_circle"
        app:actualImageScaleType="centerCrop"
        app:backgroundImage="?attr/gray8"
        app:roundAsCircle="true"/>
    <TextView
        android:textSize="20sp"
        android:textColor="?attr/black"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/profile_inside_horizontal_padding"
        android:layout_marginTop="16dp"
        android:layout_marginRight="@dimen/profile_inside_horizontal_padding"
        android:lineSpacingExtra="2sp"/>
    <TextView
        android:textSize="@dimen/regular_text_size"
        android:textColor="?attr/gray48"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/profile_inside_horizontal_padding"
        android:layout_marginTop="4dp"
        android:layout_marginRight="@dimen/profile_inside_horizontal_padding"
        android:lineSpacingExtra="1sp"/>
</LinearLayout>
