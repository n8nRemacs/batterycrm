<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ru.mts.biometry.sdk.view.SdkBioEditText
        android:id="@+id/et_inn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="12"
        android:inputType="number"
        app:hint="Введите 12 значный номер"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:sdkBioEditTextShowClearIcon="true"/>
    <TextView
        android:id="@+id/tv_inn_info_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/sdk_bio_inn_how_to_add_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_inn"
        style="?attr/sdkBioTextAppearanceRegularText"/>
    <ru.mts.biometry.sdk.view.SdkBioList
        android:id="@+id/sbl_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_inn_info_label"
        app:sdkBioListValues="@array/sdk_bio_inn_how_to_list"/>
    <ru.mts.biometry.sdk.view.SdkBioButton
        android:id="@+id/btn_accept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sbl_hint"
        app:sdkBioButtonTitle="@string/sdk_bio_add"
        app:sdkBioButtonType="primary"/>
    <ru.mts.biometry.sdk.view.SdkBioButton
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_accept"
        app:sdkBioButtonTitle="@string/sdk_bio_cancel"
        app:sdkBioButtonType="secondary"/>
</androidx.constraintlayout.widget.ConstraintLayout>
