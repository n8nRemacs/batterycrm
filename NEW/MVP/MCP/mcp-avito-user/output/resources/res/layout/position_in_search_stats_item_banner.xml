<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/search_position_banner_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/banner_content_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="?attr/warmGray4"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/banner_content_container"
            android:paddingTop="20dp"
            android:paddingBottom="26dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="24dp">
            <TextView
                android:textAppearance="?attr/textH40"
                android:id="@+id/banner_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toStartOf="@+id/banner_close_icon"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <ImageView
                android:id="@+id/banner_close_icon"
                android:paddingTop="4dp"
                android:paddingBottom="2dp"
                android:focusable="true"
                android:visibility="visible"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:importantForAccessibility="no"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="?attr/ic_close16"
                app:tint="?attr/black"/>
            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/banner_top_barrier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierAllowsGoneWidgets="true"
                app:barrierDirection="bottom"
                app:barrierMargin="6dp"
                app:constraint_referenced_ids="banner_title"/>
            <TextView
                android:textAppearance="?attr/textM20"
                android:id="@+id/banner_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/banner_top_barrier"/>
            <com.avito.android.lib.design.button.Button
                android:id="@+id/banner_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/banner_description"
                style="?attr/buttonPrimaryMedium"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout
        android:id="@+id/banner_loading_group"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="?attr/shimmerDefault">
        <com.avito.android.lib.design.skeleton.Skeleton
            android:id="@+id/banner_loading_skeleton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout>
</FrameLayout>
