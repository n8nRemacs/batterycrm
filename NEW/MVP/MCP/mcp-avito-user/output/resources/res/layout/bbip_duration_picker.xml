<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/bbip_duration_picker_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.avito.android.lib.design.picker.Picker
        android:id="@+id/bbip_duration_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/bbip_picker_margin_top"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/bbip_duration_picker_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bbip_duration_dialog_action"
        android:layout_marginHorizontal="@dimen/bbip_picker_button_margin_horizontal"
        android:layout_marginVertical="@dimen/bbip_picker_margin_margin_vertical"
        style="?attr/buttonPrimaryLarge"/>
</LinearLayout>
