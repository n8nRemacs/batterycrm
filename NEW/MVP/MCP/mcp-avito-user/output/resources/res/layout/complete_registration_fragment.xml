<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/complete_registration_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.avito.android.lib.design.nav_bar.NavBar
        android:id="@+id/complete_registration_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ScrollView
        android:id="@+id/complete_registration_scroll_view"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="?attr/textH25"
                android:id="@+id/complete_registration_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/registration_complete_title"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <com.avito.android.lib.design.component_container.ComponentContainer
                android:id="@+id/complete_registration_name_input_cc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/complete_registration_title">
                <com.avito.android.lib.design.input.Input
                    android:id="@+id/complete_registration_name_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/registration_name_hint"
                    android:inputType="textCapWords"
                    android:imeOptions="flagNoExtractUi|actionNext"
                    android:autofillHints="name"
                    app:input_clearButton="true"
                    style="?attr/inputDefaultM"/>
            </com.avito.android.lib.design.component_container.ComponentContainer>
            <com.avito.android.password_tip.PasswordTipInput
                android:id="@+id/complete_registration_password_tip_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="@string/password"
                android:layout_marginHorizontal="16dp"
                app:inputStyle="?attr/inputDefaultM"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/complete_registration_name_input_cc"
                app:tipTextStyle="?attr/textS10"/>
            <com.avito.android.lib.design.button.Button
                android:id="@+id/complete_registration_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:text="@string/register_action"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintBottom_toTopOf="@+id/complete_registration_user_agreement"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/complete_registration_password_tip_input"
                app:layout_constraintVertical_bias="1"
                style="?attr/buttonPrimaryMedium"/>
            <TextView
                android:textAppearance="?attr/textXs10"
                android:textColor="?attr/gray54"
                android:id="@+id/complete_registration_user_agreement"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</LinearLayout>
