<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:gravity="center"
        android:id="@+id/minus_text_button"
        android:background="@null"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="36dp"
        android:layout_height="0dp"
        android:includeFontPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/minus_value_divider"
        android:background="?attr/constantBlack"
        android:layout_width="1dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/minus_text_button"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textM1"
        android:gravity="center"
        android:id="@+id/value_field"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:maxLines="1"
        android:includeFontPadding="true"
        android:textIsSelectable="false"
        android:paddingHorizontal="13dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/plus_text_button"
        app:layout_constraintStart_toEndOf="@+id/minus_text_button"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.avito.android.lib.design.spinner.Spinner
        android:layout_gravity="center"
        android:id="@+id/spinner"
        android:visibility="gone"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/plus_text_button"
        app:layout_constraintStart_toEndOf="@+id/minus_text_button"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Widget.AppCompat.ProgressBar"/>
    <View
        android:id="@+id/plus_value_divider"
        android:background="?attr/constantBlack"
        android:layout_width="1dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/plus_text_button"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:id="@+id/plus_text_button"
        android:background="@null"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="36dp"
        android:layout_height="0dp"
        android:includeFontPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</merge>
