<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="3dp">
    <TextView
        android:textAppearance="?attr/textH20"
        android:gravity="center"
        android:id="@+id/item_advice_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:lineSpacingExtra="0dp"
        app:layout_constraintEnd_toEndOf="@+id/item_advice_progress_view"
        app:layout_constraintStart_toStartOf="@+id/item_advice_progress_view"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.avito.android.lib.design.progress_bar_re23.ProgressBarRe23
        android:id="@+id/item_advice_progress_view"
        android:layout_width="34dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_advice_progress"
        app:progressBar_height="5dp"/>
    <TextView
        android:textAppearance="?attr/textS10"
        android:gravity="center_vertical"
        android:id="@+id/item_advice_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_advice_progress_view"
        app:layout_constraintEnd_toStartOf="@+id/item_advice_badge"
        app:layout_constraintStart_toEndOf="@+id/item_advice_progress_view"
        app:layout_constraintTop_toTopOf="@+id/item_advice_progress"/>
    <com.avito.android.lib.design.badge.Badge
        android:id="@+id/item_advice_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/item_advice_progress_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_advice_progress"
        style="?attr/badgeTextRedS"/>
</androidx.constraintlayout.widget.ConstraintLayout>
