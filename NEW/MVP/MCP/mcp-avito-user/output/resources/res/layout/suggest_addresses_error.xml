<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="88dp"
    android:layout_marginHorizontal="16dp">
    <TextView
        android:textAppearance="?attr/textBody"
        android:textColor="@color/design_text_color_black_selector"
        android:gravity="center"
        android:id="@+id/error_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.avito.android.lib.design.button.Button
        android:layout_gravity="center"
        android:id="@+id/reload_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="@string/search_addresses_update"
        style="?attr/buttonPrimaryMedium"/>
</LinearLayout>
