<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/footer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:theme="@style/Theme.DesignSystem.Re23"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:id="@+id/scrollContent"
                android:paddingTop="72dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.avito.android.fresco.SimpleDraweeView
                    android:id="@+id/gallery_teaser_illustration"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:actualImageScaleType="center"
                    app:backgroundImage="?attr/transparentWhite"
                    style="@style/Widget.Avito.Rds.SimpleDraweeView"/>
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/gallery_teaser_icon"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"/>
                <TextView
                    android:textAppearance="?attr/textH20"
                    android:textColor="?attr/constantWhite"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginStart="@dimen/gallery_teaser_margin_horizontal"
                    android:layout_marginEnd="@dimen/gallery_teaser_margin_horizontal"/>
                <TextView
                    android:textAppearance="?attr/textM10"
                    android:textColor="?attr/constantWhite"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="@dimen/gallery_teaser_margin_horizontal"
                    android:layout_marginEnd="@dimen/gallery_teaser_margin_horizontal"/>
            </LinearLayout>
        </FrameLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:theme="@style/Theme.DesignSystem.Re23"
        android:orientation="vertical"
        android:id="@+id/footer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="?attr/textM10"
                android:textColor="?attr/constantWhite"
                android:gravity="center_horizontal"
                android:id="@+id/infoTitle"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textAppearance="?attr/textM10"
                android:textColor="?attr/green800"
                android:gravity="center_horizontal"
                android:id="@+id/infoAdditional"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:id="@+id/infoBadgeContainer"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.avito.android.lib.design.docking_badge.DockingBadge
                    android:id="@+id/infoBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    app:dockingBadge_end="?attr/dockingBadgeEdgePipkaSmall"
                    app:dockingBadge_start="?attr/dockingBadgeEdgeFlagSmall"
                    style="?attr/dockingBadgeGreenSmall"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:textAppearance="?attr/textM10"
            android:textColor="?attr/gray54"
            android:gravity="center_horizontal"
            android:id="@+id/infoDescription"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/buttonContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
