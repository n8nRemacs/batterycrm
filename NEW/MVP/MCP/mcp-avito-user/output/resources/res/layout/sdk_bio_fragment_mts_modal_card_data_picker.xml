<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" style="@style/MTS.ModalCard.Container.Transparent">
    <LinearLayout
        android:id="@+id/mtsRootLayout"
        style="@style/MTS.ModalCard.Container.Root">
        <TextView
            android:id="@+id/mtsModalCardTitle"
            style="@style/MTS.ModalCard.Title"/>
        <FrameLayout style="@style/MTS.ModalCard.Container.Picker">
            <View style="@style/MTS.ModalCard.Selector"/>
            <LinearLayout style="@style/MTS.ModalCard.Container.Scroller">
                <ru.mts.biometry.sdk.view.modalcard.wheel.view.WheelView
                    android:id="@+id/mtsModalCardPicker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </FrameLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ru.mts.biometry.sdk.view.SdkBioButton
                android:id="@+id/mtsModalCardCancelButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:sdkBioButtonType="secondary"/>
            <ru.mts.biometry.sdk.view.SdkBioButton
                android:id="@+id/mtsModalCardPrimaryButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:sdkBioButtonType="primary"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
