<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="horizontal"
    android:id="@+id/chat_list_element"
    android:background="@drawable/bg_white_selectable_blue_rectangle"
    android:paddingTop="4dp"
    android:paddingBottom="10dp"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="10dp"
    android:paddingEnd="16dp">
    <FrameLayout
        android:id="@+id/messenger_channel_item_image_container"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="@dimen/messenger_channels_list_item_title_start_indent">
        <FrameLayout
            android:id="@+id/item_image_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_gravity="end|bottom"
                android:id="@+id/item_image"
                android:layout_width="64dp"
                android:layout_height="64dp"
                app:roundedCornerRadius="16dp"/>
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/avatar"
                android:background="@drawable/circle_white"
                android:padding="2dp"
                android:layout_width="36dp"
                android:layout_height="36dp"
                app:placeholderImage="?attr/warmGray4"
                app:progressBarImage="?attr/warmGray4"
                app:roundAsCircle="true"/>
        </FrameLayout>
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_gravity="end|bottom"
            android:id="@+id/u2u_interlocutor_image"
            android:visibility="gone"
            android:layout_width="64dp"
            android:layout_height="64dp"
            app:actualImageScaleType="centerInside"
            app:roundAsCircle="true"/>
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_gravity="end|bottom"
            android:id="@+id/system_image"
            android:visibility="gone"
            android:layout_width="64dp"
            android:layout_height="64dp"
            app:actualImageScaleType="centerInside"/>
    </FrameLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp">
        <TextView
            android:textColor="?attr/black"
            android:id="@+id/chat_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            app:layout_constraintEnd_toStartOf="@+id/online_status_indicator"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_default="wrap"
            app:layout_goneMarginEnd="12dp"
            style="?attr/textH50"/>
        <ImageView
            android:id="@+id/online_status_indicator"
            android:visibility="visible"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:src="@drawable/chat_list_element_interlocutor_online"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/chat_title"
            app:layout_constraintEnd_toStartOf="@+id/date"
            app:layout_constraintStart_toEndOf="@+id/chat_title"
            app:layout_constraintTop_toTopOf="@+id/chat_title"/>
        <TextView
            android:textColor="?attr/gray54"
            android:gravity="center_vertical"
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="3dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/chat_title"
            app:layout_constraintEnd_toEndOf="parent"
            style="?attr/textS20"/>
        <LinearLayout
            android:id="@+id/item_block"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_below="@+id/chat_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chat_title">
            <TextView
                android:textColor="?attr/black"
                android:ellipsize="end"
                android:id="@+id/item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_weight="1"
                style="?attr/textM20"/>
            <TextView
                android:textColor="?attr/black"
                android:ellipsize="none"
                android:gravity="end"
                android:id="@+id/price"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                style="?attr/textM20"/>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/last_message_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:layout_constraintEnd_toStartOf="@+id/messenger_channel_icon_state_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_block">
            <TextView
                android:textColor="?attr/gray54"
                android:ellipsize="end"
                android:gravity="start"
                android:id="@+id/last_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                style="?attr/textM20"/>
            <TextView
                android:textColor="?attr/gray54"
                android:ellipsize="end"
                android:gravity="start"
                android:id="@+id/is_typing"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/is_typing"
                android:maxLines="1"
                style="?attr/textM20"/>
        </FrameLayout>
        <LinearLayout
            android:id="@+id/messenger_channel_icon_state_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-1dp"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/last_message_container"
            app:layout_constraintEnd_toEndOf="parent">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_gravity="bottom"
                android:id="@+id/chat_list_item_pin_image"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                app:srcCompat="@drawable/ic_messenger_chat_pin"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/chat_list_item_unread_badge"
                android:visibility="gone"
                android:layout_width="12dp"
                android:layout_height="18dp"
                android:src="@drawable/circle_red"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
        <com.avito.android.lib.design.docking_badge.DockingBadgeContainer
            android:orientation="horizontal"
            android:id="@+id/messenger_tags_badge_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="6dp"
            app:dockingBadgeContainer_numberOfLines="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/last_message_container"
            style="?attr/dockingBadgeContainerSmall"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
