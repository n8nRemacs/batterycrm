<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.LookAndFeel"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:background="@drawable/bg_btn_flat"
    android:paddingTop="@dimen/phone_12_tablet_24"
    android:paddingBottom="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.recyclerview.widget.RecyclerView
        android:orientation="horizontal"
        android:id="@+id/profiles_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/phone_20_tablet_24"
        android:layout_marginHorizontal="16dp"
        style="?attr/textH2"/>
    <TextView
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:id="@+id/registered_date"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:maxLines="1"
        android:layout_marginHorizontal="16dp"
        style="?attr/textBody"/>
    <TextView
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:id="@+id/subtitle"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:maxLines="1"
        android:layout_marginHorizontal="16dp"
        style="?attr/textM2"/>
    <TextView
        android:gravity="center_vertical"
        android:id="@+id/description"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginHorizontal="16dp"
        style="?attr/textBody"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/rating_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="2dp"
        android:layout_marginHorizontal="16dp">
        <TextView
            android:textColor="?attr/black"
            android:id="@+id/rating_number"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            style="?attr/textHeadingSmall"/>
        <com.avito.android.lib.design.rating.RatingBar
            android:id="@+id/rating_score"
            android:visibility="gone"
            style="@style/Design.Widget.Avito.Rating.Normal"/>
    </LinearLayout>
    <TextView
        android:textColor="?attr/blue"
        android:ellipsize="end"
        android:id="@+id/rating_text"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:maxLines="1"
        android:layout_marginHorizontal="16dp"
        style="?attr/textBody"/>
</LinearLayout>
