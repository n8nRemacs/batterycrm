<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:id="@+id/fmp_products_single_tile_container"
    android:background="@drawable/advert_details_fmp_widget_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/texts_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/fmp_single_card_image"
        app:layout_constraintEnd_toStartOf="@+id/fmp_single_card_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fmp_single_card_image">
        <TextView
            android:textAppearance="?attr/textH50"
            android:textColor="?attr/black"
            android:ellipsize="end"
            android:id="@+id/fmp_single_card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginEnd="2dp"/>
        <TextView
            android:textAppearance="?attr/textM20"
            android:textColor="?attr/gray64"
            android:ellipsize="end"
            android:id="@+id/fmp_single_card_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:maxLines="1"
            android:layout_marginEnd="2dp"/>
    </LinearLayout>
    <com.avito.android.fresco.SimpleDraweeView
        android:id="@+id/fmp_single_card_image"
        android:layout_width="54dp"
        android:layout_height="54dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
