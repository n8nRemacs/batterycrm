<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="vertical"
    android:id="@+id/iac_for_pro_info_root"
    android:background="?attr/white"
    android:paddingBottom="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_gravity="end"
        android:id="@+id/iac_for_pro_info_close"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        app:srcCompat="@drawable/ic_close_24"/>
    <ImageView
        android:layout_gravity="center"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginTop="-22dp"
        app:srcCompat="@drawable/ic_iac_image"/>
    <TextView
        android:textAppearance="?attr/textH20"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/iac_for_pro_info_dialog_title"
        android:paddingHorizontal="24dp"/>
    <com.avito.android.lib.design.list_item.ListItem
        android:id="@+id/iac_for_pro_advantage_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        app:listItem_title="@string/iac_for_pro_info_dialog_text_1"
        app:listItem_titleAppearance="?attr/textM20"/>
    <com.avito.android.lib.design.list_item.ListItem
        android:id="@+id/iac_for_pro_advantage_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        app:listItem_title="@string/iac_for_pro_info_dialog_text_2"
        app:listItem_titleAppearance="?attr/textM20"/>
    <com.avito.android.lib.design.list_item.ListItem
        android:id="@+id/iac_for_pro_advantage_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        app:listItem_title="@string/iac_for_pro_info_dialog_text_3"
        app:listItem_titleAppearance="?attr/textM20"/>
    <com.avito.android.lib.design.list_item.ListItem
        android:id="@+id/iac_for_pro_advantage_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        app:listItem_title="@string/iac_for_pro_info_dialog_text_4"
        app:listItem_titleAppearance="?attr/textM20"/>
</LinearLayout>
