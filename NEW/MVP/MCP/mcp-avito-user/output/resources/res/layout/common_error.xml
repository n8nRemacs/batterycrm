        android:textAppearance="?attr/textH20"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/error_title_data"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/error_message_comfortable_deal"/>
