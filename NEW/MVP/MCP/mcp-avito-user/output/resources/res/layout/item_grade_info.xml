<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_grade_info_root"
    android:clipChildren="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_grade_info_progress_container"
        android:clipChildren="false"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:textAppearance="?attr/textH05"
            android:id="@+id/item_grade_info_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textAppearance="?attr/textM20"
            android:gravity="start|center_vertical"
            android:id="@+id/item_grade_info_progress_hint"
            android:layout_width="80dp"
            android:layout_height="0dp"
            android:layout_marginStart="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/item_grade_info_progress"
            app:layout_constraintStart_toEndOf="@+id/item_grade_info_progress"
            app:layout_constraintTop_toTopOf="@+id/item_grade_info_progress"/>
        <com.avito.android.loyalty.ui.items.quality_progress.QualityProgress
            android:id="@+id/item_grade_info_progress_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp"
            app:cornerRadius="23dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_grade_info_progress"
            app:sectionOffset="4dp"
            app:thumbRadius="13dp"
            app:trackHeight="12dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:textAppearance="?attr/textH25"
        android:id="@+id/item_grade_info_description_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_grade_info_progress_container"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:id="@+id/item_grade_info_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_grade_info_description_title"/>
    <TextView
        android:textAppearance="?attr/textH30"
        android:id="@+id/item_grade_info_advices_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_grade_info_description"/>
    <com.avito.android.lib.design.header_button.HeaderButton
        android:textAppearance="?attr/textH60"
        android:id="@+id/item_grade_info_advices_counter"
        android:background="@drawable/rounded_rectangle_30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginStart="8dp"
        app:headerButton_isIconPositionEnd="true"
        app:headerButton_textIconStyleAttr="?attr/textIconHeaderbuttonArrow"
        app:layout_constraintBottom_toBottomOf="@+id/item_grade_info_advices_title"
        app:layout_constraintStart_toEndOf="@+id/item_grade_info_advices_title"
        app:layout_constraintTop_toTopOf="@+id/item_grade_info_advices_title"
        style="?attr/headerButtonH30"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/item_grade_info_advices_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_grade_info_advices_title"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/item_grade_info_advices_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_grade_info_advices_subtitle"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/item_grade_info_action"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_grade_info_advices_container"
        style="?attr/buttonPrimaryMedium"/>
</androidx.constraintlayout.widget.ConstraintLayout>
