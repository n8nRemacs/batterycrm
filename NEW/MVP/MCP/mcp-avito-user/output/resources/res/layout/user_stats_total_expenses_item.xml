<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/ll_total"
    android:paddingTop="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textAppearance="?attr/textM20"
            android:textColor="?attr/gray48"
            android:id="@+id/tv_metric_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="4dp"/>
        <ImageView
            android:id="@+id/v_metric_hint"
            android:background="?attr/selectableItemBackground"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="1dp"
            android:contentDescription="@null"
            app:srcCompat="?attr/ic_help16"
            app:tint="?attr/gray28"/>
    </LinearLayout>
    <TextView
        android:textAppearance="?attr/textH10"
        android:gravity="center"
        android:id="@+id/tv_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:drawablePadding="4dp"
        app:drawableEndCompat="?attr/ic_buyerBonuses16"/>
</LinearLayout>
