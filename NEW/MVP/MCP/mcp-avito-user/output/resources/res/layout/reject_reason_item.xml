<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/expandable_panel"
    android:background="@drawable/bg_reject_reason"
    android:paddingTop="10dp"
    android:paddingBottom="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:layout_marginHorizontal="@dimen/content_horizontal_padding">
    <TextView
        android:gravity="center_vertical"
        android:id="@+id/reasons_title"
        android:paddingBottom="8dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?attr/textHeadingLarge"/>
    <TextView
        android:gravity="center_vertical"
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?attr/textHeadingSmall"/>
    <TextView
        android:textColor="@color/text_button_default"
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:lineSpacingExtra="3sp"
        style="?attr/textBody"/>
    <TextView
        android:id="@+id/support_link"
        android:paddingTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/reject_action"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        style="?attr/buttonOutlineMedium"/>
</LinearLayout>
