<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="vertical"
    android:id="@+id/consultation_after_icebreakers_super"
    android:background="@drawable/bg_consultation_form_super"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/content_horizontal_padding_smaller">
    <TextView
        android:textAppearance="?attr/textH25"
        android:id="@+id/info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/info_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:textColor="?attr/gray48"
        android:id="@+id/about_consultation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:drawablePadding="4dp"
        android:layout_marginHorizontal="16dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">
        <FrameLayout
            android:background="@drawable/bg_realty_consultation_card"
            android:layout_width="0dp"
            android:layout_height="175dp"
            android:layout_weight="0.5"
            android:layout_marginEnd="7dp">
            <TextView
                android:textAppearance="?attr/textH05"
                android:textSize="54sp"
                android:textColor="?attr/black"
                android:id="@+id/count_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-2dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="9dp"
                android:letterSpacing="-0.07"/>
            <TextView
                android:textAppearance="?attr/textM20"
                android:id="@+id/count_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"/>
            <ImageView
                android:layout_gravity="end|bottom"
                android:id="@+id/count_image"
                android:layout_width="144dp"
                android:layout_height="98dp"
                android:layout_marginRight="-1dp"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/info_card_reviews"
            android:background="@drawable/bg_realty_consultation_card"
            android:layout_width="0dp"
            android:layout_height="175dp"
            android:layout_weight="0.5">
            <com.avito.android.fresco.SimpleDraweeView
                android:id="@+id/info_card_review_avatar_1"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                app:roundAsCircle="true"
                app:roundingBorderColor="?attr/white"
                app:roundingBorderWidth="2dp"/>
            <com.avito.android.fresco.SimpleDraweeView
                android:id="@+id/info_card_review_avatar_2"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="38dp"
                app:roundAsCircle="true"
                app:roundingBorderColor="?attr/white"
                app:roundingBorderWidth="2dp"/>
            <com.avito.android.fresco.SimpleDraweeView
                android:id="@+id/info_card_review_avatar_3"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="66dp"
                app:roundAsCircle="true"
                app:roundingBorderColor="?attr/white"
                app:roundingBorderWidth="2dp"/>
            <TextView
                android:textAppearance="?attr/textM20"
                android:id="@+id/reviews_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"/>
            <TextView
                android:textAppearance="?attr/textM20"
                android:layout_gravity="bottom"
                android:id="@+id/reviews_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:drawablePadding="3dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                app:drawableEndCompat="?attr/ic_arrowForward16"/>
        </FrameLayout>
    </LinearLayout>
    <TextView
        android:textAppearance="?attr/textH50"
        android:textColor="?attr/black"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="12dp">
        <com.avito.android.lib.design.input.Input
            android:id="@+id/input_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="+7 000 00-00-00"
            android:layout_weight="1.3"
            android:inputType="phone"
            android:layout_marginStart="16dp"
            app:input_formatterType="mobile_phone"
            app:input_prefix="+7 "
            app:layout_autoReset="notNormalOnly"
            style="?attr/inputWhiteBackgroundM"/>
        <com.avito.android.lib.design.select.BaseSelect
            android:id="@+id/select_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="phone"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            app:input_backgroundColor="@color/white"
            style="?attr/baseSelectDefaultM"/>
    </LinearLayout>
    <com.avito.android.lib.design.input.Input
        android:id="@+id/input_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:inputType="text"
        android:layout_marginHorizontal="16dp"
        app:layout_autoReset="notNormalOnly"
        style="?attr/inputWhiteBackgroundM"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/consultation_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        style="?attr/buttonPrimaryLarge"/>
    <TextView
        android:textAppearance="?attr/textS10"
        android:id="@+id/consultation_disclaimer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>
</LinearLayout>
