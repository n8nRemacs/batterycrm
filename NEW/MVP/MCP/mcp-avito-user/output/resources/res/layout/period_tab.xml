<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="?attr/textH4"
        android:textSize="16sp"
        android:typeface="normal"
        android:textColor="@color/tab_bubble_text_selector"
        android:ellipsize="end"
        android:id="@+id/tab_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:singleLine="true"/>
    <com.avito.android.lib.design.point.Point
        android:id="@+id/red_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        app:point_disableAnimationPreview="true"
        style="?attr/pointNewMedium"/>
</LinearLayout>
