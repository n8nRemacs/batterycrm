<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/bottom_view_root_group"
    android:background="@drawable/add_new_address_bottom_background"
    android:paddingBottom="@dimen/user_address_map_edit_bottom_view_bottom_padding"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="2dp">
    <com.avito.android.user_address.CompositeLocationTextView
        android:gravity="center_vertical"
        android:id="@+id/address_input_view"
        android:background="@drawable/composite_location_view_input_background_state_normal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/user_address_map_edit_bottom_view_address_input_margin_top"
        android:minHeight="@dimen/user_address_map_edit_bottom_view_min_height"
        android:layout_marginHorizontal="@dimen/user_address_map_edit_bottom_view_address_input_margin_horizontal"
        android:paddingHorizontal="@dimen/user_address_map_edit_bottom_view_address_input_padding_horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textS1"
        android:textColor="?attr/red600"
        android:id="@+id/error_text_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/user_address_map_edit_bottom_view_address_error_text_top_margin"
        android:layout_marginHorizontal="@dimen/user_address_map_edit_bottom_view_address_error_text_horizontal_margin"
        app:layout_constraintTop_toBottomOf="@+id/address_input_view"/>
    <com.avito.android.lib.design.input.Input
        android:id="@+id/apartment_input_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/user_address_map_edit_bottom_view_apartment_input_top_margin"
        android:hint="@string/apartment"
        android:maxLength="8"
        android:layout_marginStart="@dimen/user_address_map_edit_bottom_view_apartment_input_start_margin"
        app:input_clearButton="false"
        app:input_postfix="@string/apartment_postfix"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/entrance_input_view"
        app:layout_constraintTop_toBottomOf="@+id/error_text_view"
        style="?attr/inputDefaultM"/>
    <com.avito.android.lib.design.input.Input
        android:id="@+id/entrance_input_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/entrance"
        android:maxLength="20"
        android:layout_marginStart="@dimen/user_address_map_edit_bottom_view_entrance_input_start_margin"
        app:input_clearButton="false"
        app:input_postfix="@string/entrance_postfix"
        app:layout_constraintLeft_toRightOf="@+id/apartment_input_view"
        app:layout_constraintRight_toLeftOf="@+id/floor_input_view"
        app:layout_constraintTop_toTopOf="@+id/apartment_input_view"
        style="?attr/inputDefaultM"/>
    <com.avito.android.lib.design.input.Input
        android:id="@+id/floor_input_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/floor"
        android:maxLength="8"
        android:layout_marginStart="@dimen/user_address_map_edit_bottom_view_floor_input_start_margin"
        android:layout_marginEnd="@dimen/user_address_map_edit_bottom_view_floor_input_end_margin"
        app:input_clearButton="false"
        app:input_postfix="@string/floor_postfix"
        app:layout_constraintLeft_toRightOf="@+id/entrance_input_view"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/apartment_input_view"
        style="?attr/inputDefaultM"/>
    <com.avito.android.lib.design.input.Input
        android:id="@+id/comment_input_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/user_address_map_edit_bottom_view_comment_input_top_margin"
        android:hint="@string/comment"
        android:maxLength="200"
        android:layout_marginHorizontal="@dimen/user_address_map_edit_bottom_view_comment_input_horizontal_margin"
        app:input_clearButton="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/apartment_input_view"
        style="?attr/inputDefaultM"/>
    <com.avito.android.lib.design.chips.Chips
        android:id="@+id/address_type_chips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/user_address_map_edit_bottom_view_chips_top_margin"
        android:layout_marginHorizontal="@dimen/user_address_map_edit_bottom_view_chips_horizontal_margin"
        app:chips_displayType="singleLineScrollable"
        app:chips_keepLastSelected="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comment_input_view"
        style="?attr/chipsSmall"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/user_address_map_edit_bottom_view_button_save_top_margin"
        android:layout_marginBottom="@dimen/user_address_map_edit_bottom_view_button_save_bottom_margin"
        android:text="@string/add_new_address_save_button_text"
        android:layout_marginHorizontal="@dimen/user_address_map_edit_bottom_view_button_save_horizontal_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/address_type_chips"
        style="?attr/buttonPrimaryLarge"/>
    <TextView
        android:textAppearance="?attr/textS2"
        android:textColor="?attr/gray48"
        android:gravity="center"
        android:id="@+id/confidence_data_link_text_view"
        android:paddingBottom="@dimen/user_address_map_edit_bottom_view_confidence_data_padding_bottom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/user_address_map_edit_bottom_view_confidence_data_top_margin"
        android:text="@string/confidence_data_policy"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button"/>
</androidx.constraintlayout.widget.ConstraintLayout>
