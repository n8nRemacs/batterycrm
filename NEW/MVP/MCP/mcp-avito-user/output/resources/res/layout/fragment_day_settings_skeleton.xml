<?xml version="1.0" encoding="utf-8"?>
<com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/views_padding_horizontal"
    style="?attr/shimmerDefault">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/buttons_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/vertical_padding">
                <com.avito.android.lib.design.skeleton.TextSkeleton
                    android:textColor="?attr/black"
                    android:layout_gravity="center"
                    android:id="@+id/workday_tv"
                    android:layout_width="@dimen/text_skeleton_width"
                    android:layout_height="@dimen/text_skeleton_height"
                    style="?attr/textH5"/>
                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <com.avito.android.lib.design.skeleton.Skeleton
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/switcher_skeleton_width"
                    android:layout_height="@dimen/switcher_skeleton_height"
                    app:skeleton_radius="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_spacing"
                app:paragraphSpacing="@dimen/margin_spacing">
                <com.avito.android.lib.design.skeleton.TextSkeleton
                    android:textAppearance="?attr/textH5"
                    android:id="@+id/schedule_tv"
                    android:layout_width="@dimen/text_skeleton_width"
                    android:layout_height="@dimen/text_skeleton_height"
                    android:layout_marginBottom="@dimen/margin_spacing"/>
            </LinearLayout>
            <com.avito.android.lib.design.component_container.ComponentContainer
                android:orientation="vertical"
                android:id="@+id/time_inputs_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:componentContainer_messageColor="@color/selector_component_state"
                app:componentContainer_resetCondition="all">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.avito.android.lib.design.select.BaseSelect
                        android:id="@+id/time_input_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:input_cornerRadius="@dimen/input_radius"
                        style="?attr/baseSelect"/>
                    <Space
                        android:layout_width="@dimen/margin_space_between"
                        android:layout_height="0dp"/>
                    <com.avito.android.lib.design.select.BaseSelect
                        android:id="@+id/time_input_end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:input_cornerRadius="@dimen/input_radius"
                        style="?attr/baseSelect"/>
                </LinearLayout>
            </com.avito.android.lib.design.component_container.ComponentContainer>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/buttons_container"
            android:paddingBottom="@dimen/margin_spacing"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <com.avito.android.lib.design.skeleton.Skeleton
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_skeleton_height"
                android:layout_marginBottom="@dimen/margin_space_between"
                app:skeleton_radius="16dp"/>
            <com.avito.android.lib.design.skeleton.Skeleton
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_skeleton_height"
                app:skeleton_radius="16dp"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout>
