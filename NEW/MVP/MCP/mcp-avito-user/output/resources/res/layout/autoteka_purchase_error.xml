<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/autoteka_error_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp">
    <TextView
        android:textAppearance="?attr/textM10"
        android:id="@+id/autoteka_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/autoteka_try_again"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/autoteka_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/autoteka_update_button"
        style="?attr/buttonPrimaryLarge"/>
</LinearLayout>
