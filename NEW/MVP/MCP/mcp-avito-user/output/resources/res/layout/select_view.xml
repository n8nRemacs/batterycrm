<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/icon"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/list_item_drawable_padding"
        android:layout_centerVertical="true"/>
    <TextView
        android:textSize="12sp"
        android:textColor="?attr/gray48"
        android:id="@+id/floating_label"
        android:saveEnabled="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:freezesText="true"
        android:layout_toRightOf="@+id/icon"/>
    <ImageView
        android:layout_gravity="right"
        android:id="@+id/close_icon"
        android:focusable="false"
        android:saveEnabled="false"
        android:layout_width="@dimen/filter_spinner_icon_size"
        android:layout_height="@dimen/filter_spinner_icon_size"
        android:src="@drawable/ic_clear_states"
        android:scaleType="center"
        android:freezesText="true"
        android:layout_below="@+id/floating_label"
        android:layout_alignParentRight="true"/>
    <TextView
        android:textSize="16sp"
        android:textColor="@color/input_text_states"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:id="@+id/value_label"
        android:background="@drawable/bg_spinner_states"
        android:saveEnabled="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="@dimen/filter_spinner_icon_size"
        android:freezesText="true"
        android:layout_toRightOf="@+id/icon"
        android:layout_below="@+id/floating_label"/>
    <TextView
        android:textSize="12sp"
        android:textColor="?attr/red"
        android:id="@+id/error_label"
        android:visibility="gone"
        android:saveEnabled="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:freezesText="true"
        android:layout_toRightOf="@+id/icon"
        android:layout_below="@+id/value_label"/>
</merge>
