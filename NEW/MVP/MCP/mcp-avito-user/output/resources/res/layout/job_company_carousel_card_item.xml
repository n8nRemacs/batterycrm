<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/job_carousel_item_horizontal_height">
    <TextView
        android:textAppearance="?attr/textH4"
        android:ellipsize="end"
        android:id="@+id/title_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/job_carousel_item_horizontal_top_margin"
        android:maxLines="1"
        android:layout_marginStart="@dimen/job_carousel_item_horizontal_margin"
        app:layout_constraintEnd_toStartOf="@+id/btn_favorite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textL20"
        android:id="@+id/price_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/job_carousel_item_price_top_margin"
        android:layout_marginStart="@dimen/job_carousel_item_horizontal_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_view"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/multi_line_location_root"
        android:clipChildren="false"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/job_carousel_item_geo_top_margin"
        android:layout_marginStart="@dimen/job_carousel_item_horizontal_margin"
        android:layout_marginEnd="@dimen/job_carousel_item_horizontal_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/price_view">
        <ImageView
            android:id="@+id/metro_icon"
            android:paddingBottom="4dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="14dp"
            app:layout_constraintBottom_toBottomOf="@+id/location"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/location"/>
        <TextView
            android:textAppearance="?attr/textS10"
            android:ellipsize="end"
            android:id="@+id/location"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toStartOf="@+id/distance_icon"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@+id/metro_icon"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/distance_icon"
            android:visibility="gone"
            android:layout_width="10dp"
            android:layout_height="16dp"
            android:layout_marginStart="2dp"
            app:layout_constraintBottom_toBottomOf="@+id/location"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@+id/location"
            app:layout_constraintTop_toTopOf="@+id/location"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/actions_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/job_carousel_item_actions_top_margin"
        android:layout_marginBottom="@dimen/job_carousel_item_actions_bottom_margin"
        android:layout_marginStart="@dimen/job_carousel_item_horizontal_margin"
        android:layout_marginEnd="@dimen/job_carousel_item_horizontal_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/multi_line_location_root"
        app:layout_constraintVertical_bias="1"/>
    <com.google.android.material.internal.CheckableImageButton
        android:id="@+id/btn_favorite"
        android:background="@drawable/bg_btn_circle_gray_rich"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/advert_item_rich_favorite_red"
        android:contentDescription="@null"
        android:layout_marginStart="@dimen/job_carousel_item_favorite_start_margin"
        android:layout_marginEnd="@dimen/job_carousel_item_horizontal_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/title_view"
        app:layout_constraintTop_toTopOf="@+id/title_view"/>
</androidx.constraintlayout.widget.ConstraintLayout>
