<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="vertical"
    android:id="@+id/address_container"
    android:focusable="true"
    android:focusableInTouchMode="false"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/content_horizontal_padding">
    <TextView
        android:textAppearance="?attr/textM10"
        android:textColor="?attr/text_primary"
        android:ellipsize="end"
        android:layout_gravity="center_vertical"
        android:id="@+id/advert_address"
        android:background="@drawable/bg_rds_gray_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:id="@+id/more_addresses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
