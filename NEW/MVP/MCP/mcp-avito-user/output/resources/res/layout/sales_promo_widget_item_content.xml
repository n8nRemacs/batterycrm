<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/promo_banner_item_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.avito.android.fresco.SimpleDraweeView
        android:id="@+id/sales_promo_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="-24dp"
        android:layout_marginTop="-20dp"
        android:layout_marginRight="-24dp"
        android:layout_marginBottom="-32dp"
        app:actualImageScaleType="fitEnd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:roundBottomLeft="false"
        app:roundBottomRight="true"
        app:roundTopLeft="false"
        app:roundTopRight="true"
        app:roundedCornerRadius="@dimen/serp_action_promo_banner_corner_radius"/>
    <TextView
        android:textAppearance="?attr/textH25"
        android:ellipsize="end"
        android:id="@+id/sales_promo_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/sales_promo_text"
        app:layout_constraintEnd_toStartOf="@+id/sales_promo_suggest_close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/sales_promo_suggest_close"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="24dp"
        android:src="?attr/ic_close24"
        app:layout_constraintBottom_toBottomOf="@+id/sales_promo_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sales_promo_title"
        app:tint="?attr/black"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:id="@+id/sales_promo_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sales_promo_title"/>
    <View
        android:id="@+id/line"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sales_promo_text"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/sales_promo_action_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:button_cornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line"
        style="?attr/buttonPrimaryMedium"/>
</androidx.constraintlayout.widget.ConstraintLayout>
