<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="14dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp">
    <TextView
        android:textAppearance="?attr/textS20"
        android:textColor="?attr/gray48"
        android:id="@+id/tv_chart_max"
        android:paddingBottom="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textS20"
        android:textColor="?attr/gray48"
        android:id="@+id/tv_chart_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-2dp"
        android:text="@string/user_stats_chart_zero"
        android:paddingStart="0dp"
        android:paddingEnd="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/ll_chart"
        app:layout_constraintStart_toStartOf="parent"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll_chart"
        android:layout_width="0dp"
        android:layout_height="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_chart_min"
        app:layout_constraintTop_toBottomOf="@+id/tv_chart_max"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll_legend"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/ll_chart"
        app:layout_constraintTop_toBottomOf="@+id/ll_chart"/>
</androidx.constraintlayout.widget.ConstraintLayout>
