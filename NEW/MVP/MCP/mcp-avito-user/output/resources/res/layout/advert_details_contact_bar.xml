<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/advert_details_contact_bar_root"
    android:paddingLeft="@dimen/content_horizontal_padding"
    android:paddingRight="@dimen/content_horizontal_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="?attr/textBody"
        android:textColor="@color/text_button_default"
        android:ellipsize="end"
        android:id="@+id/contact_bar_hide_phone_text"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:maxLines="2"/>
    <com.avito.android.lib.design.bottom_sheet.BoundedLinearLayout
        android:orientation="horizontal"
        android:id="@+id/contact_bar_buttons_container"
        android:background="?attr/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"/>
    <com.avito.android.lib.design.bottom_sheet.BoundedLinearLayout
        android:orientation="horizontal"
        android:id="@+id/contact_bar_buttons_container2"
        android:background="?attr/white"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:baselineAligned="false"/>
    <TextView
        android:theme="@style/Theme.DesignSystem.Re23"
        android:textAppearance="?attr/textS10"
        android:textColor="?attr/gray54"
        android:gravity="center"
        android:id="@+id/contact_bar_rkn_disclaimer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"/>
    <FrameLayout
        android:layout_gravity="center_horizontal"
        android:id="@+id/contact_bar_status_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAppearance="?attr/textBody"
            android:textColor="?attr/gray48"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:id="@+id/contact_bar_text"
            android:paddingLeft="4dp"
            android:paddingTop="4dp"
            android:paddingRight="4dp"
            android:paddingBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"/>
    </FrameLayout>
</LinearLayout>
