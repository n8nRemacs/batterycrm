<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_dashboard_stats"
    android:background="@drawable/bg_profile_pro_dashboard"
    android:paddingTop="12dp"
    android:paddingBottom="16dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:paddingHorizontal="16dp">
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/tv_dashboard_stats_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.avito.android.fresco.SimpleDraweeView
        android:id="@+id/sdv_dashboard_stats_icon"
        android:paddingTop="3dp"
        android:layout_width="16dp"
        android:layout_height="18dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_dashboard_stats_title"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:textAppearance="?attr/textH30"
        android:id="@+id/tv_dashboard_stats_count"
        android:paddingTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_dashboard_stats_title"/>
    <TextView
        android:textAppearance="?attr/textS20"
        android:id="@+id/tv_dashboard_stats_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="4dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_dashboard_stats_count"
        app:layout_constraintStart_toEndOf="@+id/tv_dashboard_stats_count"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll_dashboard_stats_days"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="-2dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_dashboard_stats_percent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
