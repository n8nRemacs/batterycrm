<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile_pro_sb_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="32dp"
    android:paddingHorizontal="10dp">
    <TextView
        android:textAppearance="?attr/textH30"
        android:ellipsize="end"
        android:id="@+id/sb_block_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_marginHorizontal="6dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toStartOf="@+id/sb_block_badge"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.avito.android.lib.design.badge.Badge
        android:id="@+id/sb_block_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/sb_block_title"
        app:layout_constraintEnd_toStartOf="@+id/sb_block_button_space"
        app:layout_constraintStart_toEndOf="@+id/sb_block_title"
        app:layout_constraintTop_toTopOf="@+id/sb_block_title"
        style="?attr/badgeTextRedS"/>
    <com.avito.android.lib.design.header_button.HeaderButton
        android:id="@+id/sb_block_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        app:headerButton_textIconStyleAttr="?attr/textIconHeaderbuttonArrow"
        app:layout_constraintBottom_toBottomOf="@+id/sb_block_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sb_block_title"
        style="?attr/headerButtonH20"/>
    <Space
        android:id="@+id/sb_block_button_space"
        android:layout_width="22dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/sb_block_button"
        app:layout_constraintEnd_toStartOf="@+id/sb_block_button"
        app:layout_constraintTop_toTopOf="@+id/sb_block_button"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/sb_block_button_group"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:constraint_referenced_ids="sb_block_button, sb_block_button_space"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/sb_block_title_barrier"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="sb_block_title, sb_block_badge, sb_block_button_space, sb_block_button"/>
    <FrameLayout
        android:id="@+id/sb_block_action"
        android:background="@drawable/bg_profile_pro_group_row_single"
        android:paddingTop="15dp"
        android:paddingBottom="17dp"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:minHeight="52dp"
        android:paddingHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sb_block_title_barrier">
        <TextView
            android:textAppearance="?attr/textM20"
            android:ellipsize="end"
            android:layout_gravity="center_vertical"
            android:id="@+id/sb_block_action_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"/>
    </FrameLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:orientation="horizontal"
        android:id="@+id/sb_block_action_items"
        android:clipToPadding="false"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:nestedScrollingEnabled="false"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sb_block_action"/>
    <com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout
        android:id="@+id/sb_block_loading_skeleton"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sb_block_title_barrier"
        style="?attr/shimmerDefault">
        <com.avito.android.lib.design.skeleton.Skeleton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:skeleton_radius="20dp"/>
    </com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
