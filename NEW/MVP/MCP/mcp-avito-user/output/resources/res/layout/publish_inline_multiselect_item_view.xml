<?xml version="1.0" encoding="utf-8"?>
<com.avito.android.lib.design.component_container.ComponentContainer xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:paddingTop="?attr/publish_componentContainer_paddingTop"
    android:paddingBottom="?attr/publish_componentContainer_paddingBottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="?attr/publish_horizontalPadding"
    android:paddingEnd="?attr/publish_horizontalPadding">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="?attr/publish_select_titleTextAppearance"
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.avito.android.lib.design.badge.Badge
                android:layout_gravity="center_vertical"
                android:id="@+id/badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                style="?attr/badgeTextMedium"/>
        </LinearLayout>
        <TextView
            android:textAppearance="?attr/publish_select_subtitleTextAppearance"
            android:id="@+id/subtitle"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="?attr/publish_inline_multiselect_subtitleMarginTop"/>
        <Space
            android:id="@+id/options_top_inset"
            android:layout_width="0dp"
            android:layout_height="?attr/publish_inline_multiselect_options_top_inset"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/options_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</com.avito.android.lib.design.component_container.ComponentContainer>
