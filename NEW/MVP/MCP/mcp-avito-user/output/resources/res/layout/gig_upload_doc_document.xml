<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="6dp">
    <com.avito.android.lib.design.photo_uploader_image.PhotoUploaderLayout
        android:id="@+id/document_container"
        android:layout_width="174dp"
        android:layout_height="126dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.avito.android.lib.design.photo_uploader_image.PhotoUploaderImage
            android:id="@+id/document_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:actualImageScaleType="fitCenter"/>
        <FrameLayout
            android:background="@drawable/document_badge"
            android:paddingTop="3dp"
            android:paddingBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:elevation="2dp"
            android:paddingHorizontal="6dp">
            <TextView
                android:textAppearance="?attr/textXs10"
                android:id="@+id/document_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </FrameLayout>
    </com.avito.android.lib.design.photo_uploader_image.PhotoUploaderLayout>
    <ImageView
        android:id="@+id/camera_overlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="?attr/ic_camera36"
        android:layout_marginEnd="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/gig_camera_tint"/>
    <FrameLayout
        android:background="@drawable/add_button_required_bg"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <ImageView
            android:id="@+id/document_add_required_button"
            android:background="@drawable/add_button_required_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="?attr/ic_addThin16"
            android:scaleType="center"
            android:elevation="2dp"
            app:tint="?attr/white"/>
        <ImageView
            android:id="@+id/document_add_not_required_button"
            android:background="@drawable/add_button_not_required_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="?attr/ic_addThin16"
            android:scaleType="center"
            android:elevation="2dp"
            app:tint="?attr/black"/>
        <ImageView
            android:id="@+id/document_delete_button"
            android:background="@drawable/delete_button_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="?attr/ic_delete20"
            android:scaleType="center"
            android:elevation="2dp"
            app:tint="?attr/black"/>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
