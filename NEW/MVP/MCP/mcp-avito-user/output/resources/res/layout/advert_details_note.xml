<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/note_block"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/content"
        android:paddingLeft="@dimen/content_horizontal_padding"
        android:paddingTop="@dimen/rds_advert_details_small_offset"
        android:paddingRight="@dimen/content_horizontal_padding"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:background="?attr/gray8"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/rds_advert_details_big_offset"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="?attr/textHeadingSmall"
                android:layout_gravity="start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/advert_details_note_title"/>
            <TextView
                android:layout_gravity="end"
                android:id="@+id/button"
                android:background="@drawable/bg_flat_button_primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/advert_details_rds_edit_note"
                style="@style/TextAppearance.Avito.AdvertDetails.Body.Blue"/>
        </FrameLayout>
        <TextView
            android:textAppearance="?attr/textBodySmall"
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"/>
        <View
            android:id="@+id/bottom_divider"
            android:background="?attr/gray8"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/rds_advert_details_big_offset"/>
    </LinearLayout>
</FrameLayout>
