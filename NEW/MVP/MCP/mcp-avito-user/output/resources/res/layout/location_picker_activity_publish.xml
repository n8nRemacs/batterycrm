<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:id="@+id/location_picker_screen_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.avito.android.avito_map.AvitoMapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_gravity="end|center_vertical"
        android:id="@+id/find_me_button"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="@dimen/find_me_button_size"
        android:layout_height="@dimen/find_me_button_size"
        android:contentDescription="@string/lp_find_my_location"
        android:layout_marginEnd="@dimen/find_me_margin_end"
        android:backgroundTint="?attr/bg_page"
        app:backgroundTint="?attr/bg_page"
        app:fabCustomSize="@dimen/find_me_button_size"
        app:srcCompat="@drawable/my_location_icon"/>
    <com.avito.android.lib.design.floating_container.FloatingContainer
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:id="@+id/bottom_actions_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="ru.avito.component.behaviors.MoveAboveSnackBarBehavior"
        style="?attr/floatingContainerIncomplete">
        <com.avito.android.location_picker.view.publish.PublishSearchLocationInput
            android:id="@+id/bottom_location_edit_query"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:hint="@string/lp_enter_address"
            app:input_clearButton="true"
            app:input_clearButtonUnfocused="true"
            app:input_formatterType="not_editable"
            style="?attr/inputSearchDefaultL"/>
        <com.avito.android.lib.design.button.Button
            android:layout_gravity="center"
            android:id="@+id/main_button"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lp_choose_footer"
            style="?attr/buttonPrimaryLarge"/>
    </com.avito.android.lib.design.floating_container.FloatingContainer>
    <FrameLayout
        android:id="@+id/progress_overlay_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <com.avito.android.location_picker.view.radius.RadiusCircleViewImpl
        android:id="@+id/search_radius_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="60dp"
        android:alpha="0"
        app:fillColor="@color/lp_radius_fill_color"
        app:strokeColor="@color/lp_radius_fill_color"
        app:strokeWidth="0dp"/>
    <com.avito.android.user_address.pin.BlackPinView
        android:layout_gravity="center"
        android:id="@+id/pin_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/map_pin_vertical_offset"/>
    <com.avito.android.lib.design.spinner.Spinner
        android:layout_gravity="center"
        android:id="@+id/circular_progress"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        style="?attr/spinnerDarkLarge"/>
    <include
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="ru.avito.component.behaviors.MoveAboveSnackBarBehavior"
        layout="@layout/location_picker_search_radius_view"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/navbar_layout"
        android:background="?attr/bg_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.avito.android.lib.design.nav_bar.NavBar
            android:id="@+id/navbar"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.avito.android.location_picker.view.publish.PublishSearchLocationInput
            android:ellipsize="none"
            android:id="@+id/location_edit_query"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="@string/lp_enter_address"
            android:inputType="textNoSuggestions"
            android:imeOptions="flagNoExtractUi|actionSearch"
            android:layout_marginHorizontal="16dp"
            style="?attr/inputSearchDefaultL"/>
        <FrameLayout
            android:id="@+id/drop_down_suggestions_container"
            android:focusableInTouchMode="true"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/suggestions_list"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
        </FrameLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
