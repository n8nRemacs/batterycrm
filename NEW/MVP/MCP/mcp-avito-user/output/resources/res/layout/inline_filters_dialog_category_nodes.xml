<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/inline_filters_category_nodes_dialog_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/category_dialog_header_horizontal_margin"
                layout="@layout/inline_filter_dialog_header"/>
            <com.avito.android.lib.design.input.Input
                android:layout_gravity="center_vertical"
                android:id="@+id/search_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/category_dialog_input_bottom_margin"
                android:hint="@string/search"
                android:layout_marginHorizontal="@dimen/category_dialog_content_horizontal_margin"
                app:input_iconLeftColor="?attr/warmGray4"
                style="?attr/inputDefaultM"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/filter_options_recycler_view"
                android:paddingBottom="@dimen/category_dialog_list_bottom_margin"
                android:clipToPadding="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:id="@+id/empty_search_hint"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/category_search_empty_hint_lift"
            android:text="@string/category_search_request_empty_hint"
            android:layout_marginHorizontal="@dimen/category_dialog_content_horizontal_margin"
            style="?attr/textM1"/>
        <FrameLayout
            android:layout_gravity="bottom|center_horizontal"
            android:id="@+id/apply_button_container"
            android:background="@drawable/bg_transparent_white_gradient"
            android:visibility="gone"
            android:clickable="true"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/category_dialog_button_container_vertical_padding">
            <com.avito.android.lib.design.button.Button
                android:layout_gravity="bottom"
                android:id="@+id/apply_button"
                android:layout_width="match_parent"
                android:maxHeight="@dimen/category_dialog_button_height"
                android:minHeight="@dimen/category_dialog_button_height"
                android:text="@string/category_inline_filter_show"
                android:layout_marginHorizontal="16dp"
                style="?attr/buttonPrimaryLarge"/>
        </FrameLayout>
        <FrameLayout
            android:layout_gravity="center_vertical"
            android:id="@+id/progress"
            android:background="?attr/whiteAlpha88"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:visibility="gone"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/category_dialog_progress_top_margin">
            <com.avito.android.lib.deprecated_design.ColoredProgressBar
                android:layout_gravity="center"
                android:id="@+id/progress_view"
                android:layout_width="@dimen/category_dialog_progress_bar_size"
                android:layout_height="@dimen/category_dialog_progress_bar_size"
                android:indeterminateTint="?attr/black"/>
        </FrameLayout>
        <include layout="@layout/design_error_layout"/>
    </FrameLayout>
</FrameLayout>
