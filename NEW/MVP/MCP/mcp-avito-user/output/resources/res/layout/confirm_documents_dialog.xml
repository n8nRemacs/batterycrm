<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:id="@+id/confirm_documents_dialog_container"
    android:padding="@dimen/confirm_doc_dialog_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.avito.android.lib.design.spinner.Spinner
        android:id="@+id/loading"
        android:visibility="gone"
        android:layout_width="@dimen/confirm_doc_dialog_loading_size"
        android:layout_height="@dimen/confirm_doc_dialog_loading_size"
        android:layout_marginTop="@dimen/confirm_doc_dialog_loading_margin_top"
        android:layout_marginBottom="@dimen/confirm_doc_dialog_loading_margin_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="?attr/spinnerDarkLarge"/>
    <TextView
        android:id="@+id/title"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="?attr/textH20"/>
    <TextView
        android:id="@+id/description"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/confirm_doc_dialog_description_margin_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        style="?attr/textM10"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/buttons"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/confirm_doc_dialog_buttons_margin_top"
        app:layout_constraintTop_toBottomOf="@+id/description"/>
    <com.avito.android.lib.design.content_placeholder.ContentPlaceholder
        android:id="@+id/error"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:contentPlaceholder_buttonStyle="?attr/buttonPrimaryMedium"
        app:contentPlaceholder_imageContainerSize="@dimen/confirm_doc_dialog_error_icon_size"
        app:contentPlaceholder_paddingBottom="@dimen/confirm_doc_dialog_error_padding_bottom"
        app:contentPlaceholder_textToButtonSpacing="@dimen/confirm_doc_dialog_error_space_text_to_button"/>
</androidx.constraintlayout.widget.ConstraintLayout>
