<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/social_networks_vk_group_row_container"
    android:background="@drawable/bg_btn_flat"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/content_horizontal_padding"
    android:paddingEnd="@dimen/content_horizontal_padding">
    <include
        android:id="@+id/social_networks_vk_group_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toStartOf="@+id/social_networks_vk_group_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginEnd="0dp"
        layout="@layout/text_subheading"/>
    <include
        android:id="@+id/social_networks_vk_group_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toEndOf="@+id/social_networks_vk_group_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/social_networks_vk_group_title"
        layout="@layout/text_subheading"/>
    <ImageView
        android:id="@+id/social_networks_vk_group_icon"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/social_networks_vk_group_title"
        app:srcCompat="?attr/ic_attentionRound24"
        app:tint="?attr/red700"/>
</androidx.constraintlayout.widget.ConstraintLayout>
