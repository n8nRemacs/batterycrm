<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/rating_form_advert_item_image"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginVertical="4dp"
        app:backgroundImage="?attr/gray4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        app:roundedCornerRadius="6dp"/>
    <com.avito.android.rating_form.select_item.adapter.advert.ComposeUncutTextView
        android:textAppearance="?attr/textM20"
        android:ellipsize="end"
        android:id="@+id/rating_form_advert_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:maxLines="2"
        android:layout_marginStart="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rating_form_advert_item_image"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textH50"
        android:id="@+id/rating_form_advert_item_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/rating_form_advert_item_title"
        app:layout_constraintTop_toBottomOf="@+id/rating_form_advert_item_title"
        app:layout_constraintVertical_bias="0"/>
</androidx.constraintlayout.widget.ConstraintLayout>
