<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sales_banner_out_of_bound_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.avito.android.lib.design.banner.Banner
        android:id="@+id/sales_banner_out_of_bound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/advert_details_sales_banner_out_of_bounds_margin_top"
        android:layout_marginHorizontal="@dimen/content_horizontal_padding"
        app:banner_content="@layout/advert_details_marketplace_sales_banner_out_of_bounds_content"
        app:banner_contentPaddingBottom="0dp"
        app:banner_contentPaddingLeft="0dp"
        app:banner_contentPaddingRight="0dp"
        app:banner_contentPaddingTop="0dp"
        app:banner_cornerRadius="20dp"
        style="?attr/bannerViolet"/>
    <com.avito.android.fresco.SimpleDraweeView
        android:layout_gravity="end|top"
        android:id="@+id/sales_banner_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/advert_details_sales_banner_out_of_bounds_margin_top"
        android:layout_marginEnd="@dimen/content_horizontal_padding"/>
</FrameLayout>
