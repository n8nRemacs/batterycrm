<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tooltip_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/image"
        android:padding="?attr/tooltip_image_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/content_container"
        android:paddingTop="?attr/tooltip_content_container_paddingTop"
        android:paddingBottom="?attr/tooltip_content_container_paddingBottom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/close_button"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth="wrap_content_constrained"
        app:layout_goneMarginEnd="?attr/tooltip_content_container_marginEnd"
        app:layout_goneMarginStart="?attr/tooltip_content_container_marginStart">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?attr/tooltip_titleStyle"/>
        <TextView
            android:id="@+id/body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="?attr/tooltip_body_marginTop"
            style="?attr/tooltip_bodyStyle"/>
        <com.avito.android.lib.design.button.Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="?attr/tooltip_button_marginTop"
            android:layout_marginBottom="?attr/tooltip_button_marginBottom"
            style="?attr/tooltip_buttonStyle"/>
    </LinearLayout>
    <com.avito.android.lib.design.close_button.CloseButton
        android:id="@+id/close_button"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/tooltip_close_button_marginTop"
        android:layout_marginStart="?attr/tooltip_close_button_marginStart"
        android:layout_marginEnd="?attr/tooltip_close_button_marginEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="?attr/tooltip_closeButtonStyle"/>
</androidx.constraintlayout.widget.ConstraintLayout>
