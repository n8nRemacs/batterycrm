<?xml version="1.0" encoding="utf-8"?>
<com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cpt_info_shimmer_container"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="?attr/shimmerDefault">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.avito.android.lib.design.skeleton.Skeleton
            android:id="@+id/cpt_info_stub1"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="120dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:skeleton_radius="6dp"/>
        <com.avito.android.lib.design.skeleton.Skeleton
            android:id="@+id/cpt_info_stub2"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="80dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cpt_info_stub1"
            app:skeleton_radius="6dp"/>
        <com.avito.android.lib.design.skeleton.Skeleton
            android:id="@+id/cpt_info_stub3"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_marginTop="28dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="6dp"
            app:layout_constraintEnd_toEndOf="@+id/cpt_info_guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cpt_info_stub2"
            app:skeleton_radius="24dp"/>
        <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:id="@+id/cpt_info_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.5"/>
        <com.avito.android.lib.design.skeleton.Skeleton
            android:id="@+id/cpt_info_stub4"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_marginTop="28dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/cpt_info_guideline"
            app:layout_constraintTop_toBottomOf="@+id/cpt_info_stub2"
            app:skeleton_radius="24dp"/>
        <com.avito.android.lib.design.skeleton.Skeleton
            android:id="@+id/cpt_info_stub5"
            android:layout_width="0dp"
            android:layout_height="164dp"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cpt_info_stub3"
            app:skeleton_radius="24dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout>
