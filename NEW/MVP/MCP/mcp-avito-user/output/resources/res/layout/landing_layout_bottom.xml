<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="bottom"
    android:id="@+id/landing_bottom_container"
    android:background="@drawable/landing_bottom_bg"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    android:paddingHorizontal="16dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/landing_bottom_content"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="16dp">
        <TextView
            android:textAppearance="?attr/textM20"
            android:ellipsize="end"
            android:id="@+id/rate"
            android:paddingBottom="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/landing_rates"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textAppearance="?attr/textH40"
            android:ellipsize="end"
            android:id="@+id/rate_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rate"/>
        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="end"
            app:constraint_referenced_ids="rate_text,rate"/>
        <TextView
            android:textAppearance="?attr/textM20"
            android:ellipsize="end"
            android:id="@+id/payment"
            android:paddingBottom="2dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/landing_payments"
            android:paddingHorizontal="8dp"
            app:layout_constraintEnd_toStartOf="@+id/banks_images"
            app:layout_constraintStart_toStartOf="@+id/payment_text"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textAppearance="?attr/textH40"
            android:ellipsize="end"
            android:id="@+id/payment_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="100dp"
            android:paddingHorizontal="8dp"
            app:layout_constraintEnd_toStartOf="@+id/banks_images"
            app:layout_constraintStart_toEndOf="@+id/barrier"
            app:layout_constraintTop_toBottomOf="@+id/payment"/>
        <TextView
            android:textAppearance="?attr/textM20"
            android:ellipsize="end"
            android:gravity="end"
            android:id="@+id/bank"
            android:paddingBottom="2dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/landing_banks"
            app:layout_constraintEnd_toEndOf="parent"/>
        <com.avito.android.mortgage.widgets.StackedImageView
            android:id="@+id/banks_images"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bank"
            app:stackedImageView_additionalCountBg="?attr/black"
            app:stackedImageView_additionalCountTextAppearance="?attr/textXs10"
            app:stackedImageView_additionalCountTextColor="?attr/white"
            app:stackedImageView_imageSize="23dp"
            app:stackedImageView_imageStrokeColor="?attr/white"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_gravity="center"
        android:id="@+id/landing_bottom_placeholders"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/rate_placeholder"
            android:background="@drawable/placeholder_bg"
            android:layout_width="94dp"
            android:layout_height="10dp"
            android:layout_marginTop="6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <View
            android:id="@+id/rate_text_placeholder"
            android:background="@drawable/placeholder_bg"
            android:layout_width="84dp"
            android:layout_height="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rate_placeholder"/>
        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="end"
            app:constraint_referenced_ids="rate_text_placeholder,rate_placeholder"/>
        <View
            android:id="@+id/payment_placeholder"
            android:background="@drawable/placeholder_bg"
            android:layout_width="94dp"
            android:layout_height="10dp"
            android:layout_marginTop="6dp"
            android:layout_marginStart="60dp"
            app:layout_constraintStart_toEndOf="@+id/barrier_placeholder"
            app:layout_constraintTop_toTopOf="parent"/>
        <View
            android:id="@+id/payment_text_placeholder"
            android:background="@drawable/placeholder_bg"
            android:layout_width="84dp"
            android:layout_height="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="60dp"
            app:layout_constraintStart_toEndOf="@+id/barrier_placeholder"
            app:layout_constraintTop_toBottomOf="@+id/payment_placeholder"/>
        <View
            android:id="@+id/bank_placeholder"
            android:background="@drawable/placeholder_bg"
            android:layout_width="44dp"
            android:layout_height="10dp"
            android:layout_marginTop="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <View
            android:id="@+id/bank_icon_1_placeholder"
            android:background="@drawable/placeholder_circle_bg"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toStartOf="@+id/bank_icon_2_placeholder"
            app:layout_constraintTop_toBottomOf="@+id/bank_placeholder"/>
        <View
            android:id="@+id/bank_icon_2_placeholder"
            android:background="@drawable/placeholder_circle_bg"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toStartOf="@+id/bank_icon_3_placeholder"
            app:layout_constraintTop_toBottomOf="@+id/bank_placeholder"/>
        <View
            android:id="@+id/bank_icon_3_placeholder"
            android:background="@drawable/placeholder_circle_bg"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bank_placeholder"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/landing_bottom_nothing"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textAppearance="?attr/textH40"
            android:textColor="?attr/gray54"
            android:ellipsize="end"
            android:paddingBottom="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/landing_nothing_found_title"
            android:maxLines="1"/>
        <TextView
            android:textAppearance="?attr/textM20"
            android:textColor="?attr/gray54"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/landing_nothing_found_short_description"
            android:maxLines="1"/>
    </LinearLayout>
</FrameLayout>
