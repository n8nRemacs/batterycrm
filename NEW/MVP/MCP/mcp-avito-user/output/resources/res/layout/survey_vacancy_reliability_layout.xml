<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="vertical"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="16dp"
    android:paddingVertical="12dp">
    <com.avito.android.lib.design.spinner.Spinner
        android:layout_gravity="center"
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?attr/spinnerDarkLarge"/>
    <TextView
        android:textAppearance="?attr/textH3"
        android:id="@+id/first_q"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="@string/survey_first_q"/>
    <com.avito.android.lib.design.chips.Chips
        android:id="@+id/first_chips"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:chips_displayType="multipleLines"
        app:chips_keepLastSelected="true"
        style="?attr/chipsMedium"/>
    <TextView
        android:textAppearance="?attr/textH3"
        android:id="@+id/second_q"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="@string/survey_second_q"/>
    <com.avito.android.lib.design.chips.Chips
        android:id="@+id/second_chips"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:chips_displayType="multipleLines"
        app:chips_keepLastSelected="true"
        style="?attr/chipsMedium"/>
    <TextView
        android:textAppearance="?attr/textH3"
        android:id="@+id/third_q"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="@string/survey_third_q"/>
    <com.avito.android.lib.design.input.Input
        android:id="@+id/third_input"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:layout_marginBottom="34dp"
        android:hint="@string/survey_hint"
        android:maxLines="5"
        android:minLines="3"
        android:maxLength="300"
        style="?attr/textArea"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/send_button"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/survey_send"
        style="?attr/buttonPrimaryLarge"/>
</LinearLayout>
