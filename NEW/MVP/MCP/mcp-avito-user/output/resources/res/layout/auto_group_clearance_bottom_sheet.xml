<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/clearance_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/images_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/clearance_image_car"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:src="@drawable/product_specific_clearance_car"
            android:adjustViewBounds="true"/>
        <ImageView
            android:id="@+id/clearance_image_wheel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/product_specific_clearance_wheel"
            android:adjustViewBounds="true"/>
        <ImageView
            android:id="@+id/godzilla_image_view"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:src="@drawable/product_specific_clearance_godzilla"
            android:adjustViewBounds="true"/>
    </FrameLayout>
    <com.avito.android.lib.design.chips.ui.Chips
        android:id="@+id/chips_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginHorizontal="16dp"
        app:chips_displayType="multipleLines"
        app:chips_keepLastSelected="true"
        app:chips_selectStrategy="single"
        style="?attr/chipsMedium"/>
    <TextView
        android:textAppearance="?attr/textH40"
        android:id="@+id/description_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"/>
</LinearLayout>
