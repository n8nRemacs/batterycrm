<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:background="@drawable/deal_room_app_bar_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:stateListAnimator="@null">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="snap|exitUntilCollapsed|scroll">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/expandedToolbarContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="?attr/actionBarSize"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                app:layout_collapseMode="parallax">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/big_avatar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:roundAsCircle="true"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="23dp"
                    android:textColor="?attr/black"
                    android:gravity="center"
                    android:id="@+id/big_avatar_placeholder"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:layout_constraintBottom_toBottomOf="@+id/big_avatar"
                    app:layout_constraintLeft_toLeftOf="@+id/big_avatar"
                    app:layout_constraintRight_toRightOf="@+id/big_avatar"
                    app:layout_constraintTop_toTopOf="@+id/big_avatar"/>
                <TextView
                    android:textAppearance="?attr/textH50"
                    android:textColor="?attr/black"
                    android:ellipsize="end"
                    android:id="@+id/client_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:layout_marginHorizontal="12dp"
                    app:layout_constraintLeft_toRightOf="@+id/big_avatar"
                    app:layout_constraintRight_toLeftOf="@+id/call_button"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:textAppearance="?attr/textM20"
                    android:textColor="?attr/black"
                    android:id="@+id/phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    app:layout_constraintLeft_toRightOf="@+id/big_avatar"
                    app:layout_constraintRight_toLeftOf="@+id/call_button"
                    app:layout_constraintTop_toBottomOf="@+id/client_name"/>
                <TextView
                    android:textAppearance="?attr/textM20"
                    android:textColor="?attr/black"
                    android:id="@+id/email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    app:layout_constraintLeft_toRightOf="@+id/big_avatar"
                    app:layout_constraintRight_toLeftOf="@+id/call_button"
                    app:layout_constraintTop_toBottomOf="@+id/phone"/>
                <com.avito.android.lib.design.button.Button
                    android:id="@+id/call_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    style="?attr/buttonSecondarySmall"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:background="@drawable/deal_room_app_bar_background"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin">
                <FrameLayout
                    android:id="@+id/avatar_container"
                    android:layout_width="36dp"
                    android:layout_height="36dp">
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/avatar"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        app:roundAsCircle="true"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="23dp"
                        android:textColor="?attr/black"
                        android:gravity="center"
                        android:id="@+id/avatar_placeholder"
                        android:layout_width="36dp"
                        android:layout_height="36dp"/>
                </FrameLayout>
                <androidx.appcompat.widget.AppCompatTextView
                    android:textAppearance="?attr/textH50"
                    android:ellipsize="end"
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:paddingHorizontal="8dp"/>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:orientation="vertical"
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
    <FrameLayout
        android:layout_gravity="center"
        android:id="@+id/skeleton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <include
        android:id="@+id/error_screen"
        layout="@layout/developments_agency_search_deal_room_error"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
