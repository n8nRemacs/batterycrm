<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/empty_search_root"
    android:paddingLeft="47dp"
    android:paddingTop="32dp"
    android:paddingRight="47dp"
    android:paddingBottom="32dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="?attr/textH4"
        android:textColor="?attr/gray48"
        android:gravity="center"
        android:id="@+id/empty_search_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minLines="1"/>
    <TextView
        android:textAppearance="?attr/textM1"
        android:textColor="?attr/gray48"
        android:gravity="center"
        android:id="@+id/empty_search_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:minLines="1"/>
</LinearLayout>
