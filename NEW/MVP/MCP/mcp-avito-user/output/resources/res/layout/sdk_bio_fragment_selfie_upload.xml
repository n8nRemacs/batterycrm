<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/statusbar"
        android:background="@color/sdk_bio_greyscale_800"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/selfie"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>
    <ru.mts.biometry.sdk.view.SdkBioSelfieFrame
        android:id="@+id/selfieFrame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"/>
    <ru.mts.biometry.sdk.view.SdkBioToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:sdkBioTintColor="@color/whiteSmoke"
        app:sdkBioToolbarBackground="@android:color/transparent"/>
    <ProgressBar
        android:id="@+id/progressBar"
        android:background="?attr/sdkBioIcProgressBackground"
        android:padding="15dp"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:indeterminate="true"
        android:indeterminateDrawable="?attr/sdkBioIcProgressIndeterminateDrawable"
        app:layout_constraintBottom_toBottomOf="@+id/selfieFrame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.43"/>
    <ImageView
        android:id="@+id/successIcon"
        android:visibility="invisible"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:src="?attr/sdkBioIcSuccess"
        app:layout_constraintBottom_toBottomOf="@+id/selfieFrame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.43"/>
</androidx.constraintlayout.widget.ConstraintLayout>
