<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/item_profile_pro_employee_mode_button_root"
    android:background="@drawable/bg_profile_pro_employee_item"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginHorizontal="10dp"
    android:paddingHorizontal="16dp"
    android:paddingVertical="16dp">
    <TextView
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/employee_mode_button_text_icon"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:textColor="?attr/black"
        android:ellipsize="end"
        android:id="@+id/employee_mode_button_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toTopOf="@+id/employee_mode_button_subtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/employee_mode_button_text_icon"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:textColor="?attr/gray64"
        android:ellipsize="end"
        android:id="@+id/employee_mode_button_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:maxLines="1"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/employee_mode_button_text_icon"
        app:layout_constraintTop_toBottomOf="@+id/employee_mode_button_title"/>
</androidx.constraintlayout.widget.ConstraintLayout>
