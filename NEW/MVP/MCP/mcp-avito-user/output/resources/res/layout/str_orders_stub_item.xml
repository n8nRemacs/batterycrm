<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="4dp">
    <com.avito.android.lib.design.skeleton.shimmer.ShimmerFrameLayout
        android:id="@+id/stub_image"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shimmer_animationDuration="2500"
        app:shimmer_autostart="true">
        <View
            android:background="@drawable/str_orders_stub_12dp_bg"
            android:layout_width="62dp"
            android:layout_height="62dp"/>
    </com.avito.android.lib.design.skeleton.shimmer.ShimmerFrameLayout>
    <com.avito.android.lib.design.skeleton.shimmer.ShimmerFrameLayout
        android:id="@+id/stub_title"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/stub_subtitle"
        app:layout_constraintStart_toEndOf="@+id/stub_image"
        app:shimmer_animationDuration="2500"
        app:shimmer_autostart="true">
        <View
            android:background="@drawable/str_orders_stub_3dp_bg"
            android:layout_width="200dp"
            android:layout_height="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="12dp"
            android:paddingHorizontal="12dp"/>
    </com.avito.android.lib.design.skeleton.shimmer.ShimmerFrameLayout>
    <com.avito.android.lib.design.skeleton.shimmer.ShimmerFrameLayout
        android:id="@+id/stub_subtitle"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/stub_image"
        app:layout_constraintTop_toTopOf="parent"
        app:shimmer_animationDuration="2500"
        app:shimmer_autostart="true">
        <View
            android:background="@drawable/str_orders_stub_3dp_bg"
            android:layout_width="88dp"
            android:layout_height="10dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="12dp"
            android:paddingHorizontal="12dp"/>
    </com.avito.android.lib.design.skeleton.shimmer.ShimmerFrameLayout>
    <com.avito.android.lib.design.skeleton.shimmer.ShimmerFrameLayout
        android:id="@+id/stub_description"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/stub_image"
        app:layout_constraintTop_toBottomOf="@+id/stub_subtitle"
        app:shimmer_animationDuration="2500"
        app:shimmer_autostart="true">
        <View
            android:background="@drawable/str_orders_stub_3dp_bg"
            android:layout_width="80dp"
            android:layout_height="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="12dp"
            android:paddingHorizontal="12dp"/>
    </com.avito.android.lib.design.skeleton.shimmer.ShimmerFrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
