<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/booking_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/hotel_available_rooms_horizontal_margin">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginEnd="8dp">
        <TextView
            android:textAppearance="?attr/textH30"
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/discount_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:alignItems="center"
            app:flexDirection="row"
            app:flexWrap="wrap">
            <com.avito.android.lib.design.strikethrough.StrikethroughTextView
                android:textAppearance="?attr/textM20"
                android:ellipsize="middle"
                android:id="@+id/original_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_marginEnd="2dp"
                app:strikethrough_show="true"
                app:strikethrough_tint="?attr/red600"/>
            <TextView
                android:textAppearance="?attr/textM20"
                android:textColor="?attr/red600"
                android:id="@+id/percent"
                android:background="@drawable/bg_hotel_discount_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </com.google.android.flexbox.FlexboxLayout>
        <TextView
            android:textAppearance="?attr/textM20"
            android:id="@+id/details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/installments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:paddingVertical="4dp">
            <TextView
                android:gravity="center"
                android:id="@+id/installments_left_part"
                android:background="@drawable/bg_offer_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="?attr/black"
                android:paddingHorizontal="4dp"/>
            <TextView
                android:id="@+id/installments_right_part"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/condition_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:divider="@drawable/divider_0_2"
            android:showDividers="middle"/>
    </LinearLayout>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        style="?attr/buttonPayMedium"/>
</LinearLayout>
