<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="vertical"
    android:id="@+id/iac_anonymous_info_root"
    android:background="?attr/white"
    android:paddingBottom="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAppearance="?attr/textH20"
            android:layout_gravity="start"
            android:id="@+id/iac_anonymous_info_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="@string/iac_anonymous_info_title"
            android:layout_toLeftOf="@+id/iac_anonymous_info_close"
            android:paddingHorizontal="24dp"/>
        <ImageView
            android:layout_gravity="end"
            android:id="@+id/iac_anonymous_info_close"
            android:padding="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/ic_close_24"/>
    </RelativeLayout>
    <com.avito.android.lib.design.list_item.ListItem
        android:id="@+id/iac_anonymous_info_advantage_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        app:listItem_title="@string/iac_anonymous_info_text_1"
        app:listItem_titleAppearance="?attr/textM20"/>
    <com.avito.android.lib.design.list_item.ListItem
        android:id="@+id/iac_anonymous_info_advantage_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        app:listItem_title="@string/iac_anonymous_info_text_2"
        app:listItem_titleAppearance="?attr/textM20"/>
    <com.avito.android.lib.design.list_item.ListItem
        android:id="@+id/iac_anonymous_info_advantage_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        app:listItem_title="@string/iac_anonymous_info_text_3"
        app:listItem_titleAppearance="?attr/textM20"/>
    <com.avito.android.lib.design.list_item.ListItem
        android:id="@+id/iac_anonymous_info_advantage_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        app:listItem_title="@string/iac_anonymous_info_text_4"
        app:listItem_titleAppearance="?attr/textM20"/>
</LinearLayout>
