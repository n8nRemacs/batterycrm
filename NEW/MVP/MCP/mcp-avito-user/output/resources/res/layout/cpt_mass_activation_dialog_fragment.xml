<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:id="@+id/cpt_mass_activation_dialog_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cpt_mass_activation_recycler_view"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
    <include layout="@layout/cpt_mass_activation_skeleton_item"/>
    <include layout="@layout/cpt_mass_activation_network_problem_view"/>
    <LinearLayout
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:id="@+id/cpt_mass_activation_footer"
        android:background="@drawable/cpt_activation_bg_white_gradient"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingHorizontal="10dp">
        <com.avito.android.lib.design.button.Button
            android:id="@+id/cpt_mass_activation_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?attr/buttonPrimaryLarge"/>
        <TextView
            android:textAppearance="?attr/textS20"
            android:textColorHighlight="?attr/transparentWhite"
            android:gravity="center_horizontal"
            android:id="@+id/cpt_mass_activation_text_agreement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"/>
    </LinearLayout>
</FrameLayout>
