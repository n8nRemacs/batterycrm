<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp">
    <com.avito.android.lib.design.description_list.parameter_line.item.DescriptionParameterItem
        android:id="@+id/value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:descriptionParameterItem_leftTextAppearance="?attr/textM2"
        app:descriptionParameterItem_rightTextAppearance="?attr/textM2"/>
    <TextView
        android:textAppearance="?attr/textM2"
        android:textColor="?attr/gray54"
        android:id="@+id/subtitle"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
