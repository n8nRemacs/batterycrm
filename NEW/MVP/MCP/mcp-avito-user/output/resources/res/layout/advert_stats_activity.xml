<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/advert_stats_screen_root"
    android:background="?attr/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize">
        <TextView
            android:layout_gravity="center"
            android:id="@+id/toolbar_title"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/views_title"
            style="?attr/textHeadingSmall"/>
    </androidx.appcompat.widget.Toolbar>
    <FrameLayout
        android:paddingTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ViewStub
            android:id="@+id/statistic_stub"
            android:layout="@layout/part_statistic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:id="@+id/button_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.avito.android.lib.design.button.Button
                android:id="@+id/button"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="@dimen/button_top_margin"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="5dp"
                style="?attr/buttonPrimaryLarge"/>
            <com.avito.android.lib.design.button.Button
                android:id="@+id/extra_button"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                style="?attr/buttonSecondaryLarge"/>
        </LinearLayout>
    </FrameLayout>
</FrameLayout>
