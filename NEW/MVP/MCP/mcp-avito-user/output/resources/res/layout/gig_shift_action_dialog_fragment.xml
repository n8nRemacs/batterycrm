<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="vertical"
    android:id="@+id/root"
    android:paddingBottom="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textColor="?attr/bottomSheet_titleTextColor"
        android:gravity="start"
        android:id="@+id/gig_shift_action_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="@dimen/standard_padding"
        style="?attr/textH20"/>
    <TextView
        android:textColor="?attr/bottomSheet_titleTextColor"
        android:gravity="start"
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="@dimen/standard_padding"
        style="?attr/textM1"/>
    <com.avito.android.gig_snippet.GigSingleSnippetWidget
        android:id="@+id/snippet_widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/not_found_layout"
        android:background="@drawable/background_brandspace_widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="6dp"
        android:backgroundTint="?attr/warmGray75"
        android:layout_marginHorizontal="@dimen/standard_padding">
        <TextView
            android:textColor="?attr/bottomSheet_titleTextColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/shift_not_found_title"
            android:layout_marginStart="@dimen/margin_horizontal_big"
            style="?attr/textH3"/>
        <TextView
            android:textColor="?attr/bottomSheet_titleTextColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="22dp"
            android:text="@string/shift_not_found_description"
            android:layout_marginStart="@dimen/margin_horizontal_big"
            android:layout_marginEnd="@dimen/margin_horizontal_big"
            style="?attr/textM1"/>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/error_layout"
        android:background="@drawable/background_brandspace_widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="6dp"
        android:backgroundTint="?attr/red50"
        android:layout_marginHorizontal="@dimen/standard_padding">
        <TextView
            android:textColor="?attr/bottomSheet_titleTextColor"
            android:id="@+id/error_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/scan_qr_error_title"
            android:drawablePadding="12dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:drawableEndCompat="?attr/ic_exclamationMark24"
            app:drawableTint="?attr/red700"
            app:layout_constraintBottom_toTopOf="@+id/error_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginBottom="20dp"
            style="?attr/textH3"/>
        <TextView
            android:textColor="?attr/bottomSheet_titleTextColor"
            android:id="@+id/error_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="32dp"
            android:text="@string/scan_qr_error_description"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/error_title"
            app:layout_goneMarginBottom="22dp"
            style="?attr/textM1"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <FrameLayout
        android:id="@+id/reasons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="?attr/bottomSheet_titleTextColor"
            android:gravity="start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/reasons_title"
            android:layout_marginHorizontal="20dp"
            style="?attr/textH50"/>
        <com.avito.android.lib.design.radio.RadioGroup
            android:theme="@style/Theme.DesignSystem.Re23"
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="46dp"/>
    </FrameLayout>
    <com.avito.android.lib.design.button.Button
        android:theme="@style/Theme.DesignSystem.Re23"
        android:layout_gravity="bottom|center_horizontal"
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="@dimen/standard_padding"
        style="?attr/buttonPrimaryLarge"/>
    <com.avito.android.lib.design.button.Button
        android:theme="@style/Theme.DesignSystem.Re23"
        android:layout_gravity="bottom|center_horizontal"
        android:id="@+id/secondary_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginHorizontal="@dimen/standard_padding"
        style="?attr/buttonSecondaryLarge"/>
</LinearLayout>
