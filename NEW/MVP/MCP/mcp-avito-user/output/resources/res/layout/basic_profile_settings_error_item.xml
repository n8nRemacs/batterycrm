<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center_vertical"
    android:orientation="vertical"
    android:id="@+id/info_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/extended_profile_settings_horizontal_margin">
    <TextView
        android:textAppearance="?attr/textM10"
        android:ellipsize="end"
        android:layout_gravity="start"
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/basic_profile_verification_loading_error"/>
    <com.avito.android.lib.design.button.Button
        android:layout_gravity="start"
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/basic_profile_retry_button"
        style="?attr/buttonDefaultMedium"/>
</LinearLayout>
