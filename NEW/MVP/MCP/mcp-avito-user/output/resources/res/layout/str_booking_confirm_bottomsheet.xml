<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="?attr/textM20"
        android:gravity="center"
        android:id="@+id/str_booking_subtitle"
        android:paddingTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toTopOf="@+id/str_approve_button"
        app:layout_constraintStart_toStartOf="parent"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/str_approve_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="4dp"
        app:button_cornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/str_cancel_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_goneMarginStart="3dp"
        style="?attr/buttonSecondaryMedium"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/str_cancel_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="16dp"
        app:button_cornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/str_approve_button"
        style="?attr/buttonSecondaryMedium"/>
</androidx.constraintlayout.widget.ConstraintLayout>
