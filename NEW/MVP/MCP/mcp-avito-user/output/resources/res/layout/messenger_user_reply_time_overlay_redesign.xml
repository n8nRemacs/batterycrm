<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_gravity="center"
            android:id="@+id/reply_time_redesign_img"
            android:layout_width="160dp"
            android:layout_height="160dp"
            fresco:actualImageResource="@drawable/ic_empty_chat"
            fresco:actualImageScaleType="centerCrop"/>
        <Space
            android:id="@+id/top_space_for_reply_time_text"
            android:layout_width="0dp"
            android:layout_height="16dp"/>
        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/reply_time_redesign_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:maxWidth="288dp"
            style="?attr/textM2"/>
        <Space
            android:id="@+id/top_space_for_reply_time_button"
            android:layout_width="0dp"
            android:layout_height="20dp"/>
        <com.avito.android.lib.design.button.Button
            android:id="@+id/reply_time_redesign_action"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/messenger_call_action"
            android:layout_marginHorizontal="24dp"
            style="?attr/buttonAccentMedium"/>
    </LinearLayout>
</ScrollView>
