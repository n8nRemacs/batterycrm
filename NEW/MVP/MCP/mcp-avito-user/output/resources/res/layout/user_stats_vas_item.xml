<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_vas_item_total"
    android:background="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp"
    android:paddingVertical="4dp">
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/tv_vas_item_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="2dp"
        app:drawableEndCompat="@drawable/common_ic_arrow_down_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <Space
        android:id="@+id/space_indicator"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/v_indicator_dotted"
        android:background="@drawable/dotted"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toStartOf="@+id/ll_vas_item_total"
        app:layout_constraintStart_toEndOf="@+id/tv_vas_item_total"
        app:layout_constraintTop_toBottomOf="@+id/space_indicator"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll_vas_item_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
