<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.LookAndFeel"
    android:orientation="vertical"
    android:id="@+id/user_address_map_root"
    android:background="?attr/white"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        app:navigationIcon="@drawable/ic_back_24">
        <TextView
            android:layout_gravity="center"
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_address_title"
            style="?attr/textHeadingSmall"/>
        <ImageButton
            android:layout_gravity="end"
            android:id="@+id/delete_image_button"
            android:background="@null"
            android:layout_width="@dimen/user_address_map_delete_image_width"
            android:layout_height="@dimen/user_address_map_delete_image_height"
            android:src="?attr/ic_delete20"
            app:tint="?attr/black"/>
    </androidx.appcompat.widget.Toolbar>
    <com.avito.android.lib.design.spinner.overlay.SpinnerOverlay
        android:id="@+id/spinner_overlay"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.avito.android.avito_map.AvitoMapView
            android:id="@+id/map"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.avito.android.user_address.pin.BlackPinView
            android:id="@+id/pin_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/user_address_map_pin_bottom_margin"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toBottomOf="@+id/map"
            app:layout_constraintLeft_toLeftOf="@+id/map"
            app:layout_constraintRight_toRightOf="@+id/map"
            app:layout_constraintTop_toTopOf="@+id/map"/>
        <FrameLayout
            android:id="@+id/content_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_gravity="end|center_vertical"
            android:id="@+id/find_me_button"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="@dimen/find_me_button_size"
            android:layout_height="@dimen/find_me_button_size"
            android:layout_marginBottom="@dimen/find_me_margin_end"
            android:src="@drawable/my_location_icon"
            android:layout_marginEnd="@dimen/find_me_margin_end"
            android:backgroundTint="?attr/white"
            app:backgroundTint="?attr/white"
            app:fabCustomSize="@dimen/find_me_button_size"
            app:layout_constraintBottom_toBottomOf="@+id/pin_view"
            app:layout_constraintRight_toRightOf="@+id/map"
            app:layout_constraintTop_toTopOf="@+id/pin_view"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <include
        android:id="@+id/error_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/design_error_layout"/>
</LinearLayout>
