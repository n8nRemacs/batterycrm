<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/expert_block_container"
    android:background="@drawable/bg_beige_rounded"
    android:paddingTop="24dp"
    android:paddingBottom="28dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    app:layout_constraintTop_toBottomOf="@+id/title">
    <FrameLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="88dp"
        android:layout_height="88dp">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/avatar"
            android:layout_width="88dp"
            android:layout_height="88dp"
            app:backgroundImage="@color/beige"
            app:roundAsCircle="true"
            app:roundingBorderColor="?attr/white"
            app:roundingBorderWidth="1dp"/>
        <TextView
            android:textAppearance="?attr/textH20"
            android:textColor="?attr/constantWhite"
            android:layout_gravity="center"
            android:id="@+id/avatar_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="1"/>
    </FrameLayout>
    <TextView
        android:textAppearance="?attr/textH30"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:maxLines="3"
        android:layout_marginHorizontal="34dp"/>
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textAlignment="center">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/left_image"
            android:layout_width="24dp"
            android:layout_height="44dp"/>
        <TextView
            android:textAppearance="?attr/textM20"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/cd_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="146dp"
            android:maxLines="2"
            android:textAlignment="center"
            android:layout_marginHorizontal="8dp"/>
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/right_image"
            android:layout_width="24dp"
            android:layout_height="44dp"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/achievements_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="@dimen/phone_20_tablet_24"/>
</LinearLayout>
