<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ext_profile_settings_carousel_advert_item_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/extended_settings_advert_item_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:actualImageScaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="H,1:0.75949"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:placeholderImage="@drawable/ic_avito_stub"
        app:roundedCornerRadius="4dp"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/extended_settings_advert_item_error_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="extended_settings_advert_item_error_icon,extended_settings_advert_item_error_icon_background"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/extended_settings_advert_item_error_icon_background"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/extended_settings_advert_item_error_icon"
        app:layout_constraintEnd_toEndOf="@+id/extended_settings_advert_item_error_icon"
        app:layout_constraintStart_toStartOf="@+id/extended_settings_advert_item_error_icon"
        app:layout_constraintTop_toTopOf="@+id/extended_settings_advert_item_error_icon">
        <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:id="@+id/extended_settings_advert_item_gl_error_icon_bg_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.25"/>
        <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:id="@+id/extended_settings_advert_item_gl_error_icon_bg_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.25"/>
        <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:id="@+id/extended_settings_advert_item_gl_error_icon_bg_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.75"/>
        <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:id="@+id/extended_settings_advert_item_gl_error_icon_bg_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.75"/>
        <FrameLayout
            android:background="?attr/constantWhite"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/extended_settings_advert_item_gl_error_icon_bg_bottom"
            app:layout_constraintEnd_toEndOf="@+id/extended_settings_advert_item_gl_error_icon_bg_end"
            app:layout_constraintStart_toStartOf="@+id/extended_settings_advert_item_gl_error_icon_bg_start"
            app:layout_constraintTop_toTopOf="@+id/extended_settings_advert_item_gl_error_icon_bg_top"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        android:id="@+id/extended_settings_advert_item_error_icon"
        android:visibility="gone"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/extended_settings_advert_item_image"
        app:layout_constraintEnd_toEndOf="@+id/extended_settings_advert_item_image"
        app:layout_constraintStart_toStartOf="@+id/extended_settings_advert_item_image"
        app:layout_constraintTop_toTopOf="@+id/extended_settings_advert_item_image"
        app:srcCompat="?attr/ic_attentionRound24"
        app:tint="?attr/red"/>
    <TextView
        android:textAppearance="?attr/textH50"
        android:textSize="14sp"
        android:gravity="center"
        android:id="@+id/extended_settings_advert_item_title"
        android:background="@drawable/carousel_edit_advert_item_title_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="4dp"
        android:paddingHorizontal="8dp"
        android:paddingVertical="1dp"
        app:layout_constraintStart_toStartOf="@+id/extended_settings_advert_item_image"
        app:layout_constraintTop_toTopOf="@+id/extended_settings_advert_item_image"/>
</androidx.constraintlayout.widget.ConstraintLayout>
