<?xml version="1.0" encoding="utf-8"?>
<com.yandex.mobile.ads.nativeads.ExtendedNativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:background="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.yandex.mobile.ads.nativeads.CustomizableMediaView
            android:layout_gravity="center_horizontal"
            android:id="@+id/media"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <include layout="@layout/monetization_ads_internal_native_rewarded_controls"/>
        <com.yandex.mobile.ads.fullscreen.template.view.CallToActionView
            android:textSize="@dimen/monetization_ads_internal_rewarded_call_to_action_text_size"
            android:layout_gravity="bottom|right"
            android:id="@+id/call_to_action"
            android:paddingLeft="@dimen/monetization_ads_internal_call_to_action_padding_horizontal"
            android:paddingRight="@dimen/monetization_ads_internal_call_to_action_padding_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/monetization_ads_internal_call_to_action_margin_horizontal"
            android:layout_marginRight="@dimen/monetization_ads_internal_call_to_action_margin_horizontal"
            android:layout_marginBottom="@dimen/monetization_ads_internal_call_to_action_margin_vertical"
            style="@style/MonetizationAdsInternal.RewardedCallToAction"/>
    </FrameLayout>
</com.yandex.mobile.ads.nativeads.ExtendedNativeAdView>
