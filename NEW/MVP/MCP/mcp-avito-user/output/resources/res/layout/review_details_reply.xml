<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/reply_container"
    android:paddingTop="16dp"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.avito.android.lib.design.banner.Banner
        android:id="@+id/reply_declined_container"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:banner_content="@layout/review_reply_declined_promoblock_content"
        app:banner_contentPaddingBottom="24dp"
        style="?attr/bannerRed"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/reply_user_container"
        android:paddingBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="@dimen/rating_details_item_side_offset"
        android:layout_marginEnd="@dimen/rating_details_item_side_offset">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/reply_user_avatar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:actualImageScaleType="centerCrop"
            app:backgroundImage="?attr/gray8"
            app:overlayImage="@color/expected_black_alpha_4"
            app:placeholderImage="?attr/gray8"
            app:placeholderImageScaleType="center"
            app:roundAsCircle="true"/>
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/reply_shop_avatar"
            android:layout_width="30dp"
            android:layout_height="20dp"
            app:actualImageScaleType="centerCrop"
            app:backgroundImage="?attr/gray8"
            app:placeholderImage="@drawable/ic_shop_30_20_gray"
            app:placeholderImageScaleType="center"
            app:roundedCornerRadius="2dp"/>
        <TextView
            android:textAppearance="?attr/textH5"
            android:ellipsize="end"
            android:id="@+id/reply_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:maxLines="1"/>
    </LinearLayout>
    <TextView
        android:textAppearance="?attr/textH5"
        android:id="@+id/reply_moderation_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/rating_details_item_side_offset"
        android:layout_marginEnd="@dimen/rating_details_item_side_offset"/>
    <TextView
        android:textAppearance="?attr/textM1"
        android:id="@+id/reply_text"
        android:paddingTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/rating_details_item_side_offset"
        android:layout_marginEnd="@dimen/rating_details_item_side_offset"/>
    <TextView
        android:textAppearance="?attr/textM2"
        android:textColor="?attr/gray48"
        android:id="@+id/reply_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:layout_marginStart="@dimen/rating_details_item_side_offset"
        android:layout_marginEnd="@dimen/rating_details_item_side_offset"/>
</LinearLayout>
