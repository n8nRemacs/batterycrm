<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/cpa_statistics_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="?attr/textH3"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.avito.android.lib.design.description_list.parameter_line.item.DescriptionParameterItem
        android:id="@+id/actions_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:descriptionParameterItem_leftTextAppearance="?attr/textM2"
        app:descriptionParameterItem_leftTextColor="?attr/gray54"
        app:descriptionParameterItem_rightTextAppearance="?attr/textM2"/>
    <com.avito.android.lib.design.description_list.parameter_line.item.DescriptionParameterItem
        android:id="@+id/spent_amount_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:descriptionParameterItem_leftTextAppearance="?attr/textM2"
        app:descriptionParameterItem_leftTextColor="?attr/gray54"
        app:descriptionParameterItem_rightTextAppearance="?attr/textM2"/>
</LinearLayout>
