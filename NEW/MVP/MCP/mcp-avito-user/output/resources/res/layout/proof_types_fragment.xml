<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/proof_types_root"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ru.avito.component.toolbar.AppBarLayoutWithTextAction
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stateListAnimator="@drawable/appbar_allways_unelevated"
        app:home_icon="?attr/ic_close16"
        app:layout="@layout/collapsing_title_appbar_layout"
        app:subtitleTopPadding="@dimen/publish_toolbar_subtitle_top_padding"
        app:tint="?attr/black"
        app:titleSidePadding="@dimen/publish_container_horizontal_padding"
        app:titlesBottomPadding="@dimen/publish_toolbar_bottom_padding"
        app:titlesTopPadding="@dimen/publish_toolbar_title_top_padding"/>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/content_holder"
        android:background="?attr/white"
        android:paddingBottom="68dp"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <FrameLayout
            android:id="@+id/progress_view_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.avito.android.lib.design.radio.RadioGroup
                android:id="@+id/types_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/publish_container_horizontal_padding"/>
        </FrameLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:layout_gravity="bottom|center_horizontal"
        android:orientation="vertical"
        android:background="@drawable/bg_transparent_white_gradient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.avito.android.lib.design.button.Button
            android:enabled="false"
            android:layout_gravity="bottom|center_horizontal"
            android:id="@+id/select_button"
            android:layout_width="match_parent"
            android:layout_marginBottom="18dp"
            android:text="@string/evidence_proof_type_next_button"
            android:layout_marginHorizontal="@dimen/publish_container_horizontal_padding"
            style="?attr/buttonPrimaryLarge"/>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
