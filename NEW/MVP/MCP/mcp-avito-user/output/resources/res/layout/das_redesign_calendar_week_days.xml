<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/week_days_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/das_redesign_week_days_container_horizontal_padding"
    android:paddingVertical="@dimen/das_redesign_week_days_container_vertical_padding">
    <TextView
        android:textAppearance="?attr/textM10"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/das_redesign_calendar_monday"
        android:layout_weight="1"
        android:layout_marginHorizontal="@dimen/das_week_day_horizontal_margin"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/das_redesign_calendar_thursday"
        android:layout_weight="1"
        android:layout_marginHorizontal="@dimen/das_week_day_horizontal_margin"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/das_redesign_calendar_wednesday"
        android:layout_weight="1"
        android:layout_marginHorizontal="@dimen/das_week_day_horizontal_margin"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/das_redesign_calendar_tuesday"
        android:layout_weight="1"
        android:layout_marginHorizontal="@dimen/das_week_day_horizontal_margin"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/das_redesign_calendar_friday"
        android:layout_weight="1"
        android:layout_marginHorizontal="@dimen/das_week_day_horizontal_margin"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/das_redesign_calendar_saturday"
        android:layout_weight="1"
        android:layout_marginHorizontal="@dimen/das_week_day_horizontal_margin"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/das_redesign_calendar_sunday"
        android:layout_weight="1"
        android:layout_marginHorizontal="@dimen/das_week_day_horizontal_margin"/>
</LinearLayout>
