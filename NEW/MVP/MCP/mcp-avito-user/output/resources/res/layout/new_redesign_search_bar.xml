<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/new_redesign_search_bar"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/toolbar_lifecycle"
        layout="@layout/lifecycle"/>
    <View
        android:id="@+id/shadow"
        android:background="?attr/white"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/toolbar_container"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/search_bar_container"
            android:background="?attr/white"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="62dp">
            <Space
                android:id="@+id/left_space"
                android:layout_width="4dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <ImageView
                android:id="@+id/toolbar_up_button_view"
                android:background="@drawable/bg_btn_flat_toolbar_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/redesign_search_toolbar_common_horizontal_margin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="?attr/ic_arrowBack24"
                app:tint="?attr/black"/>
            <com.avito.android.lib.design.button.Button
                android:theme="@style/Theme.DesignSystem.Re23"
                android:id="@+id/categories_left_button"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="?attr/ic_menu20"
                android:layout_marginStart="@dimen/redesign_search_toolbar_common_horizontal_margin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="?attr/buttonSecondaryMedium"/>
            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/left_barrier"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:barrierDirection="end"
                app:constraint_referenced_ids="toolbar_up_button_view, categories_left_button"/>
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/search_bar_logo"
                android:visibility="gone"
                android:layout_width="200dp"
                android:layout_height="44dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <com.avito.android.lib.design.input.Input
                android:textColorHint="?attr/gray54"
                android:id="@+id/input_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="52dp"
                android:imeOptions="flagNoExtractUi|actionSearch"
                android:layout_marginStart="@dimen/redesign_search_toolbar_common_horizontal_margin"
                android:layout_marginEnd="6dp"
                app:input_backgroundColor="@color/bg_redesign_input_normal"
                app:input_cornerRadius="@dimen/input_corner_radius"
                app:input_iconLeftContainerHeight="@dimen/search_toolbar_input_left_icon_height"
                app:input_iconRightContainerWidth="42dp"
                app:input_textVerticalOffset="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/right_barrier"
                app:layout_constraintStart_toEndOf="@+id/left_barrier"
                app:layout_constraintTop_toBottomOf="@+id/search_bar_logo"
                style="?attr/input"/>
            <com.avito.android.lib.design.input.Input
                android:id="@+id/input_view_re23"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:imeOptions="flagNoExtractUi|actionSearch"
                android:layout_marginStart="@dimen/redesign_search_toolbar_common_horizontal_margin"
                android:layout_marginEnd="6dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/right_barrier"
                app:layout_constraintStart_toEndOf="@+id/left_barrier"
                app:layout_constraintTop_toBottomOf="@+id/search_bar_logo"
                style="?attr/inputDefaultM"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/icons_container_view"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/input_view"
                app:layout_constraintTop_toTopOf="parent">
                <ImageView
                    android:id="@+id/search_icon_view"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/fav_container_view"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="?attr/ic_search20"
                    app:tint="?attr/black"/>
                <FrameLayout
                    android:id="@+id/fav_container_view"
                    android:visibility="gone"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="1dp"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="6dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/icons_container_right_barrier"
                    app:layout_constraintTop_toTopOf="parent">
                    <ProgressBar
                        android:layout_gravity="center"
                        android:id="@+id/fav_progress_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:indeterminateTint="?attr/black"
                        style="?android:attr/progressBarStyleSmall"/>
                    <ImageView
                        android:id="@+id/favButton_view"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:importantForAccessibility="no"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/expected_ic_unsaved_search_16"
                        app:tint="?attr/black"/>
                </FrameLayout>
                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/icons_container_right_barrier"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:barrierDirection="start"
                    app:constraint_referenced_ids="filter_button_view, icons_container_right_space"/>
                <FrameLayout
                    android:id="@+id/filter_button_view"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="11dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/icons_container_view"
                    app:layout_constraintTop_toTopOf="parent">
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/clarify_placeholder_view"
                        android:clickable="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="10dp"
                        app:srcCompat="@drawable/ic_new_redesign_filter"
                        app:tint="?attr/black"/>
                    <TextView
                        android:layout_gravity="end|top"
                        android:id="@+id/filters_badge_counter_view"
                        android:background="@drawable/new_redesign_badge"
                        android:visibility="invisible"
                        android:clickable="false"
                        android:layout_width="@dimen/search_toolbar_filters_badge_size"
                        android:layout_height="@dimen/search_toolbar_filters_badge_size"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="5dp"
                        style="@style/Widget.Avito.TextView.Caption.Counter.Badged"/>
                </FrameLayout>
                <Space
                    android:id="@+id/icons_container_right_space"
                    android:layout_width="9dp"
                    android:layout_height="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/right_barrier"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:barrierDirection="start"
                app:constraint_referenced_ids="right_space, share_icon_view, dismiss_container"/>
            <Space
                android:id="@+id/right_space"
                android:layout_width="4dp"
                android:layout_height="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <ImageView
                android:id="@+id/share_icon_view"
                android:visibility="gone"
                android:clipToPadding="false"
                android:layout_width="56dp"
                android:layout_height="24dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/right_icons_container"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="?attr/ic_share24"/>
            <FrameLayout
                android:id="@+id/right_icons_container"
                android:clipChildren="false"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:paddingEnd="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <include
                    android:id="@+id/cart_icon_container"
                    android:visibility="gone"
                    android:clipToPadding="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    layout="@layout/redesign_cart_icon_view"/>
                <include
                    android:id="@+id/ticket_icon_container"
                    android:visibility="gone"
                    android:clipToPadding="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    layout="@layout/ticket_icon_view"/>
                <include
                    android:id="@+id/loyalty_bonuses_icon_container"
                    android:visibility="gone"
                    android:clipToPadding="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    layout="@layout/loyalty_program_util_entry_view"/>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/dismiss_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:textColor="?attr/black"
                    android:id="@+id/dismiss_text_view"
                    android:paddingBottom="@dimen/search_toolbar_dismiss_text_padding_bottom"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dismiss"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp"
                    style="?attr/textM1"/>
            </FrameLayout>
            <TextView
                android:textAppearance="?attr/textH40"
                android:id="@+id/toolbar_center_title"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <include
                android:id="@+id/search_with_action_title_view"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                layout="@layout/search_with_action_title_view"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:id="@+id/search_divider_view"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/search_toolbar_divider_height"/>
        <com.avito.android.lib.design.chips.Chips
            android:id="@+id/bubbles_recycler_view"
            android:background="?attr/white"
            android:paddingBottom="8dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            app:chips_childHorizontalSpacing="8dp"
            app:chips_childVerticalSpacing="8dp"
            app:chips_displayType="singleLineScrollable"
            app:chips_keepLastSelected="false"
            app:chips_notActiveAppearance="?attr/buttonSecondarySmall"
            app:chips_selectStrategy="single"
            app:chips_selectedAppearance="?attr/buttonSecondarySmall"
            app:chips_unselectedAppearance="?attr/buttonSecondarySmall"
            style="?attr/chipsSmall"/>
        <com.avito.android.lib.design.chips.Chips
            android:id="@+id/history_chips"
            android:background="?attr/white"
            android:paddingBottom="8dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            app:chips_childHorizontalSpacing="8dp"
            app:chips_childVerticalSpacing="8dp"
            app:chips_displayType="multipleLines"
            app:chips_keepLastSelected="false"
            app:chips_maxLines="3"
            app:chips_notActiveAppearance="?attr/buttonSecondarySmall"
            app:chips_selectStrategy="single"
            app:chips_selectedAppearance="?attr/buttonSecondarySmall"
            app:chips_unselectedAppearance="?attr/buttonSecondarySmall"
            style="?attr/chipsSmall"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/suggests_recycler_view"
            android:background="?attr/white"
            android:paddingBottom="@dimen/search_toolbar_suggest_vertical_padding"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <View
            android:id="@+id/toolbar_bottom_offset"
            android:background="?attr/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/redesign_23_search_view_padding_bottom_visible_inlines"/>
    </LinearLayout>
</merge>
