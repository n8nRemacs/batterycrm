<?xml version="1.0" encoding="utf-8"?>
<com.avito.android.lib.util.layout.ForegroundConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rating_add_answer_text"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/rating_add_answer_text_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">
        <com.avito.android.lib.design.progress_bar.ProgressBar
            android:layout_gravity="center"
            android:id="@+id/toolbar_progress_bar"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            app:progressBar_barHeight="6dp"
            app:progressBar_emptyColor="?attr/warmGray16"
            app:progressBar_fillColor="?attr/black"
            app:progressBar_isFairProgress="true"
            app:progressBar_progress="0.5"
            app:progressBar_separatorWidth="0dp"/>
    </androidx.appcompat.widget.Toolbar>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingHorizontal="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rating_add_answer_text_toolbar">
        <LinearLayout
            android:orientation="vertical"
            android:paddingBottom="98dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="?attr/textH20"
                android:id="@+id/rating_add_answer_text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/review_add_answer_text_title"/>
            <com.avito.android.lib.design.component_container.ComponentContainer
                android:id="@+id/rating_add_answer_text_container"
                android:paddingBottom="8dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:componentContainer_messageColor="@color/txt_component_container_rating_message">
                <com.avito.android.lib.design.input.Input
                    android:id="@+id/rating_add_answer_text_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/review_add_answer_text_input_hint"
                    android:minLines="5"
                    android:maxLength="5000"
                    android:inputType="textMultiLine"
                    android:imeOptions="flagNoExtractUi|actionDone"
                    app:input_componentContainerFocusedRectEnabled="true"
                    style="?attr/textArea"/>
            </com.avito.android.lib.design.component_container.ComponentContainer>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/rating_add_answer_text_continue_container"
        android:paddingBottom="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/FlexibleButtonsContainer">
        <com.avito.android.lib.design.button.Button
            android:id="@+id/rating_add_answer_text_continue_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/continue_button_title"
            style="?attr/buttonPrimaryLarge"/>
    </LinearLayout>
</com.avito.android.lib.util.layout.ForegroundConstraintLayout>
