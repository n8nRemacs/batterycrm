<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/user_profile_rounded_rectangle_warm_gray_16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="15dp"
    android:layout_marginHorizontal="6dp"
    android:layout_marginVertical="6dp"
    android:paddingVertical="16dp"
    app:tint="?attr/warmGray2">
    <TextView
        android:textAppearance="?attr/textH50"
        android:textColor="?attr/black"
        android:ellipsize="end"
        android:id="@+id/card_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_marginEnd="2dp"
        app:layout_constraintEnd_toStartOf="@+id/card_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textS20"
        android:textColor="?attr/gray64"
        android:ellipsize="end"
        android:id="@+id/card_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:maxLines="1"
        android:layout_marginEnd="2dp"
        app:layout_constraintEnd_toStartOf="@+id/card_image"
        app:layout_constraintStart_toStartOf="@+id/card_title"
        app:layout_constraintTop_toBottomOf="@+id/card_title"/>
    <com.avito.android.fresco.SimpleDraweeView
        android:id="@+id/card_image"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/user_profile_installments_repayment"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/card_button"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/standard_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="?attr/buttonPrimarySmall"/>
</androidx.constraintlayout.widget.ConstraintLayout>
