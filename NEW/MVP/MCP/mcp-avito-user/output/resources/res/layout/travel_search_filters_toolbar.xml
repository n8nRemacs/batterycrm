<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:paddingTop="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp">
        <ImageButton
            android:layout_gravity="start|center_vertical"
            android:id="@+id/toolbar_nav_button"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="6dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="?attr/ic_arrowBack24"
            android:contentDescription="@null"
            app:tint="?attr/black"/>
        <TextView
            android:textAppearance="?attr/textH50"
            android:ellipsize="end"
            android:layout_gravity="center"
            android:id="@+id/toolbar_title"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"/>
        <include
            android:id="@+id/toolbar_title_skeleton"
            android:visibility="gone"
            layout="@layout/travel_search_toolbar_title_skeleton"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingHorizontal="16dp">
        <TextView
            android:textAppearance="?attr/textH20"
            android:id="@+id/toolbar_subtitle"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <include
            android:id="@+id/toolbar_subtitle_skeleton"
            android:visibility="gone"
            layout="@layout/travel_search_toolbar_subtitle_skeleton"/>
    </FrameLayout>
</LinearLayout>
