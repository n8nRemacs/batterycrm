<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/banner_root"
    android:background="@drawable/background_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/banner_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/banner_image"
            android:visibility="gone"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="-4dp"
            android:layout_marginBottom="12dp"
            app:placeholderImage="?attr/gray4"
            app:progressBarImage="?attr/gray4"/>
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="28dp">
            <TextView
                android:id="@+id/banner_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                style="?attr/textBody"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/actions_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="-8dp"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_gravity="end|top"
        android:id="@+id/close_button"
        android:background="@drawable/bg_selectable_blue_oval"
        android:padding="4dp"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:srcCompat="?attr/ic_close16"
        app:tint="?attr/gray28"/>
</FrameLayout>
