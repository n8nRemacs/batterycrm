<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="92dp"
    android:layout_marginTop="@dimen/publish_container_vertical_padding"
    android:layout_marginHorizontal="@dimen/publish_container_horizontal_padding">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/verification_banner_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="16dp"/>
    <ImageView
        android:id="@+id/verification_banner_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="22dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="18dp"
        android:layout_alignParentEnd="true"/>
    <TextView
        android:textAppearance="?attr/textH4"
        android:ellipsize="end"
        android:id="@+id/verification_banner_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:maxLines="2"
        android:layout_toStartOf="@+id/verification_banner_icon"
        android:layout_toEndOf="@+id/verification_banner_image"/>
    <TextView
        android:textAppearance="?attr/textM2"
        android:ellipsize="end"
        android:id="@+id/verification_banner_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:maxLines="1"
        android:layout_below="@+id/verification_banner_title"
        android:layout_toStartOf="@+id/verification_banner_icon"
        android:layout_toEndOf="@+id/verification_banner_image"/>
</RelativeLayout>
