<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/service_order_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/rds_advert_details_small_offset"
    android:layout_marginHorizontal="@dimen/content_horizontal_padding">
    <com.avito.android.lib.design.button.Button
        android:id="@+id/service_order_button_primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?attr/buttonSafedealMedium"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/service_order_button_secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        style="?attr/buttonSafedealSecondaryMedium"/>
    <TextView
        android:textAppearance="?attr/textM2"
        android:textColor="?attr/black"
        android:id="@+id/service_order_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"/>
    <TextView
        android:textAppearance="?attr/textM2"
        android:textColor="?attr/black"
        android:id="@+id/service_order_description_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
