<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:background="@drawable/ic_gallery_background_top"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:elevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:layout_gravity="bottom"
        android:background="@drawable/ic_gallery_background_bottom"
        android:layout_width="match_parent"
        android:layout_height="406dp"
        android:elevation="2dp"/>
    <View
        android:background="@drawable/gallery_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="1dp"/>
    <com.avito.android.lib.design.zoom.ZoomableDraweeView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/gallery_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleX="3"
        android:scaleY="3"
        android:elevation="-1dp"/>
    <com.avito.android.lib.deprecated_design.ColoredProgressBar
        android:layout_gravity="center"
        android:id="@+id/image_progress"
        android:padding="@dimen/main_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="2dp"/>
</FrameLayout>
