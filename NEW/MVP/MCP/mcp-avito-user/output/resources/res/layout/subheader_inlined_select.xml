<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/title_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/component_horizontal_padding"
    android:layout_marginRight="@dimen/component_horizontal_padding"
    android:minHeight="56dp">
    <TextView
        android:textSize="14sp"
        android:textColor="?attr/gray28"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:id="@+id/title"
        android:paddingTop="@dimen/standard_padding"
        android:paddingBottom="@dimen/standard_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="32dp"
        style="?attr/textHeadingSmall"/>
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/title_tip_icon"
        android:paddingTop="2dp"
        android:visibility="gone"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="center"
        app:srcCompat="?attr/ic_help16"
        app:tint="?attr/gray28"/>
</FrameLayout>
