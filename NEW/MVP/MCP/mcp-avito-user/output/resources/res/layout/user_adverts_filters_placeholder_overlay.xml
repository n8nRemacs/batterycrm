<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/user_adverts_filters_placeholder_container"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.avito.android.lib.design.content_placeholder.ContentPlaceholder
        android:id="@+id/user_adverts_filters_placeholder"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.avito.android.lib.design.spinner.Spinner
        android:layout_gravity="center"
        android:id="@+id/user_adverts_filters_progress_view"
        android:visibility="gone"
        android:layout_width="28dp"
        android:layout_height="28dp"
        style="?attr/spinnerDarkLarge"/>
</FrameLayout>
