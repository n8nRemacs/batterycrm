<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/extended_profile_disclaimer_phones_container"
        android:paddingTop="12dp"
        android:paddingBottom="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp">
        <TextView
            android:textColor="?attr/black"
            android:id="@+id/extended_profile_disclaimer_phones_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?attr/textH30"/>
        <TextView
            android:textColor="?attr/black"
            android:id="@+id/extended_profile_disclaimer_phones_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            style="?attr/textM20"/>
        <com.avito.android.lib.design.button.Button
            android:id="@+id/extended_profile_disclaimer_phones_primary_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            style="?attr/buttonAccentLarge"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
