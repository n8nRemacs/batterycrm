<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/autoteka_ready_to_preview_search_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">
    <TextView
        android:id="@+id/validation_error_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="?attr/warmGray4"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="32dp"
            android:layout_marginHorizontal="24dp">
            <TextView
                android:id="@+id/instruction_title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/autoteka_instruction_title_text"
                app:layout_constraintTop_toTopOf="parent"
                style="?attr/textH30"/>
            <TextView
                android:id="@+id/vin_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/autoteka_vin_title_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/instruction_title_text"
                style="?attr/textH40"/>
            <TextView
                android:textColor="?attr/gray54"
                android:id="@+id/vin_example"
                android:background="@drawable/background_preview_search_key_example"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/autoteka_vin_example_text"
                android:layout_marginStart="4dp"
                app:layout_constraintBottom_toBottomOf="@+id/vin_title"
                app:layout_constraintStart_toEndOf="@+id/vin_title"
                app:layout_constraintTop_toTopOf="@+id/vin_title"
                style="?attr/textS20"/>
            <TextView
                android:id="@+id/vin_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/autoteka_vin_subtitle_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/vin_title"
                style="?attr/textM20"/>
            <TextView
                android:id="@+id/reg_number_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/autoteka_reg_number_title_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/vin_subtitle"
                style="?attr/textH40"/>
            <TextView
                android:textColor="?attr/gray54"
                android:id="@+id/reg_number_example"
                android:background="@drawable/background_preview_search_key_example"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/autoteka_reg_number_example_text"
                android:layout_marginStart="4dp"
                app:layout_constraintBottom_toBottomOf="@+id/reg_number_title"
                app:layout_constraintStart_toEndOf="@+id/reg_number_title"
                app:layout_constraintTop_toTopOf="@+id/reg_number_title"
                style="?attr/textS20"/>
            <TextView
                android:id="@+id/reg_number_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/autoteka_reg_number_subtitle_text"
                app:layout_constraintTop_toBottomOf="@+id/reg_number_title"
                style="?attr/textM20"/>
            <TextView
                android:id="@+id/frame_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/autoteka_frame_title_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/reg_number_subtitle"
                style="?attr/textH40"/>
            <TextView
                android:textColor="?attr/gray54"
                android:id="@+id/frame_example"
                android:background="@drawable/background_preview_search_key_example"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/autoteka_frame_example_text"
                android:layout_marginStart="4dp"
                app:layout_constraintBottom_toBottomOf="@+id/frame_title"
                app:layout_constraintStart_toEndOf="@+id/frame_title"
                app:layout_constraintTop_toTopOf="@+id/frame_title"
                style="?attr/textS20"/>
            <TextView
                android:id="@+id/frame_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/autoteka_frame_subtitle_text"
                app:layout_constraintTop_toBottomOf="@+id/frame_title"
                style="?attr/textM20"/>
            <com.avito.android.lib.design.button.Button
                android:id="@+id/open_instruction_dialog_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/autoteka_open_instruction_dialog_button_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/frame_subtitle"
                style="?attr/buttonOverlayPrimarySmall"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
