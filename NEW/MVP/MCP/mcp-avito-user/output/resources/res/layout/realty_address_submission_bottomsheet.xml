<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="24dp">
    <TextView
        android:id="@+id/location_picker_realty_submission_description"
        android:paddingBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        style="?attr/textM1"/>
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/location_picker_realty_submission_advert_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="100dp"
        android:minHeight="75dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/location_picker_realty_submission_description"/>
    <TextView
        android:textStyle="bold"
        android:ellipsize="end"
        android:gravity="left"
        android:id="@+id/location_picker_realty_submission_advert_title"
        android:paddingLeft="12dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        app:layout_constrainedWidth="true"
        app:layout_constraintLeft_toRightOf="@+id/location_picker_realty_submission_advert_image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/location_picker_realty_submission_description"
        style="?attr/textS1"/>
    <TextView
        android:ellipsize="end"
        android:gravity="left"
        android:id="@+id/location_picker_realty_submission_advert_price"
        android:paddingLeft="12dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        app:layout_constrainedWidth="true"
        app:layout_constraintLeft_toRightOf="@+id/location_picker_realty_submission_advert_image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/location_picker_realty_submission_advert_title"
        style="?attr/textS1"/>
    <TextView
        android:textColor="?attr/gray54"
        android:ellipsize="end"
        android:gravity="left"
        android:id="@+id/location_picker_realty_submission_advert_status"
        android:paddingLeft="12dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        app:layout_constrainedWidth="true"
        app:layout_constraintLeft_toRightOf="@+id/location_picker_realty_submission_advert_image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/location_picker_realty_submission_advert_price"
        style="?attr/textS1"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/location_picker_realty_submission_activate_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/location_picker_realty_submission_advert_image"
        style="?attr/buttonPrimaryLarge"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/location_picker_realty_submission_continue_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/location_picker_realty_submission_activate_button"
        style="?attr/buttonSecondaryLarge"/>
</androidx.constraintlayout.widget.ConstraintLayout>
