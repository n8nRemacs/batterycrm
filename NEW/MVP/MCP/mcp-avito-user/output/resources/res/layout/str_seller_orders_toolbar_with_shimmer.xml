<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?attr/actionBarSize"
    app:navigationIcon="@drawable/ic_back_24_black">
    <FrameLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textAppearance="?attr/textH5"
            android:id="@+id/toolbar_header"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.avito.android.lib.design.skeleton.shimmer.ShimmerFrameLayout
            android:id="@+id/toolbar_stub"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:shimmer_animationDuration="2500"
            app:shimmer_autostart="true">
            <View
                android:background="@drawable/str_orders_stub_6dp_bg"
                android:layout_width="134dp"
                android:layout_height="21dp"
                android:layout_marginEnd="3dp"/>
        </com.avito.android.lib.design.skeleton.shimmer.ShimmerFrameLayout>
    </FrameLayout>
</androidx.appcompat.widget.Toolbar>
