<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ru.avito.component.toolbar.AppBarLayoutWithIconAction
        android:id="@+id/verification_web_view_app_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingEnd="12dp"
        android:stateListAnimator="@drawable/appbar_allways_unelevated"
        app:home_icon="?attr/ic_close24"
        app:home_icon_tint="?attr/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleSidePadding="16dp"
        app:titlesBottomPadding="0dp"/>
    <WebView
        android:id="@+id/verification_web_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/verification_web_view_app_bar"/>
</androidx.constraintlayout.widget.ConstraintLayout>
