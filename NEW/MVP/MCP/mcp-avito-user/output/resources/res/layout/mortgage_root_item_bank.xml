<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bank_item"
    android:paddingTop="24dp"
    android:paddingBottom="24dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bank_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textAppearance="?attr/textH40"
            android:ellipsize="marquee"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="280dp"
            android:maxLines="1"
            android:layout_marginStart="12dp"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toTopOf="@+id/subtitle"
            app:layout_constraintStart_toEndOf="@+id/icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"/>
        <ImageView
            android:id="@+id/chevron"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="?attr/ic_arrowRight16"
            android:layout_marginStart="2dp"
            app:layout_constraintBottom_toBottomOf="@+id/title"
            app:layout_constraintStart_toEndOf="@+id/title"
            app:layout_constraintTop_toTopOf="@+id/title"
            app:tint="?attr/black"/>
        <TextView
            android:textAppearance="?attr/textM20"
            android:id="@+id/subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/title"
            app:layout_constraintTop_toBottomOf="@+id/title"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/first_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:maxWidth="160dp"
        android:minWidth="124dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bank_card">
        <TextView
            android:textAppearance="?attr/textM20"
            android:textColor="?attr/gray54"
            android:id="@+id/first_field_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textAppearance="?attr/textM20"
            android:id="@+id/first_field_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/second_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="160dp"
        android:minWidth="124dp"
        android:layout_marginStart="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/first_field"
        app:layout_constraintStart_toEndOf="@+id/first_field"
        app:layout_constraintTop_toTopOf="@+id/first_field">
        <TextView
            android:textAppearance="?attr/textM20"
            android:textColor="?attr/gray54"
            android:id="@+id/second_field_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textAppearance="?attr/textM20"
            android:id="@+id/second_field_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/first_line_fields_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="first_field, second_field"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/third_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:maxWidth="160dp"
        android:minWidth="124dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_line_fields_barrier">
        <TextView
            android:textAppearance="?attr/textM20"
            android:textColor="?attr/gray54"
            android:id="@+id/third_field_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textAppearance="?attr/textM20"
            android:id="@+id/third_field_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/fourth_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="84dp"
        android:minWidth="42dp"
        app:layout_constraintBottom_toBottomOf="@+id/third_field"
        app:layout_constraintStart_toStartOf="@+id/second_field"
        app:layout_constraintTop_toTopOf="@+id/third_field">
        <TextView
            android:textAppearance="?attr/textM20"
            android:textColor="?attr/gray54"
            android:id="@+id/fourth_field_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textAppearance="?attr/textM20"
            android:id="@+id/fourth_field_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/fifth_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="80dp"
        android:minWidth="40dp"
        android:layout_marginStart="60dp"
        app:layout_constraintBottom_toBottomOf="@+id/fourth_field"
        app:layout_constraintStart_toEndOf="@+id/fourth_field"
        app:layout_constraintTop_toTopOf="@+id/fourth_field">
        <TextView
            android:textAppearance="?attr/textM20"
            android:textColor="?attr/gray54"
            android:id="@+id/fifth_field_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textAppearance="?attr/textM20"
            android:id="@+id/fifth_field_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/second_line_fields_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="first_line_fields_barrier, third_field, fourth_field, fifth_field"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:textColor="?attr/gray54"
        android:id="@+id/comment_field_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/second_line_fields_barrier"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/comment_field_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/comment_field_title"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/comment_field_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="second_line_fields_barrier, comment_field_title, comment_field_value"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/select_bank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comment_field_barrier"
        style="?attr/buttonSecondaryMedium"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/select_bank_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="comment_field_barrier, select_bank"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/chat_manager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_bank_barrier"
        style="?attr/buttonPrimaryMedium"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/chat_manager_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="select_bank_barrier, chat_manager"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/open_application"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chat_manager_barrier"
        style="?attr/buttonSecondaryMedium"/>
</androidx.constraintlayout.widget.ConstraintLayout>
