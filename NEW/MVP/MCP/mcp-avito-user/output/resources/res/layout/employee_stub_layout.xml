<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/employee_stub_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIconTint="?attr/black"
        app:titleCentered="true"
        app:titleTextAppearance="?attr/textH50"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/employee_stub_layout_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="24dp">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/employee_stub_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="28dp"
                app:layout_constraintBottom_toTopOf="@+id/employee_stub_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.37"
                app:layout_constraintVertical_chainStyle="packed"
                app:srcCompat="@drawable/ic_employee_stub"/>
            <TextView
                android:textAppearance="?attr/textH25"
                android:gravity="center"
                android:id="@+id/employee_stub_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/employee_stub_desc"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/employee_stub_image"/>
            <TextView
                android:textAppearance="?attr/textM10"
                android:gravity="center"
                android:id="@+id/employee_stub_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                app:layout_constraintBottom_toTopOf="@+id/employee_stub_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/employee_stub_title"/>
            <com.avito.android.lib.design.button.Button
                android:layout_gravity="center"
                android:id="@+id/employee_stub_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/employee_stub_desc"
                style="?attr/buttonAccentMedium"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</LinearLayout>
