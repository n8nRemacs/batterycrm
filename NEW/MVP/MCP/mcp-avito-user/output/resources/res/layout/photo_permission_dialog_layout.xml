<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.avito.android.lib.design.banner.Banner
        android:id="@+id/permission_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginHorizontal="10dp"
        app:banner_closeVisible="false"
        app:banner_content="@layout/photo_permission_banner_content"
        app:banner_contentPaddingBottom="30dp"
        app:banner_contentPaddingLeft="24dp"
        app:banner_contentPaddingRight="24dp"
        app:banner_contentPaddingTop="20dp"
        style="?attr/bannerRed"/>
</FrameLayout>
