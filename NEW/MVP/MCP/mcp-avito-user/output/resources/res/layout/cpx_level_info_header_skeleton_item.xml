<?xml version="1.0" encoding="utf-8"?>
<com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:shimmer_animationDuration="3000"
    app:shimmer_autostart="true">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/title_stub"
            android:background="@drawable/shimmer_cpx_stub_text"
            android:layout_width="256dp"
            android:layout_height="36dp"/>
        <View
            android:id="@+id/description_stub"
            android:background="@drawable/shimmer_cpx_stub_text"
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="32dp"/>
    </LinearLayout>
</com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout>
