<?xml version="1.0" encoding="utf-8"?>
<com.avito.android.lib.design.skeleton.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/str_booking_loading_block"
    android:paddingTop="?attr/actionBarSize"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:background="?attr/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">
        <View
            android:id="@+id/str_booking_loading_image_placeholder"
            android:background="@drawable/bg_stub_radius_6"
            android:layout_width="match_parent"
            android:layout_height="@dimen/str_booking_gallery_height"
            app:layout_constraintBottom_toTopOf="@+id/str_booking_loading_title_placeholder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintVertical_chainStyle="packed"/>
        <View
            android:id="@+id/str_booking_loading_title_placeholder"
            android:background="@drawable/bg_stub_radius_2"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_marginTop="28dp"
            app:layout_constraintBottom_toTopOf="@+id/str_booking_loading_subtitle_placeholder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/str_booking_loading_image_placeholder"
            app:layout_constraintWidth_percent="0.8"/>
        <View
            android:id="@+id/str_booking_loading_subtitle_placeholder"
            android:background="@drawable/bg_stub_radius_2"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_marginTop="12dp"
            app:layout_constraintBottom_toTopOf="@+id/str_booking_loading_first_line_placeholder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/str_booking_loading_title_placeholder"
            app:layout_constraintWidth_percent="0.55"/>
        <View
            android:id="@+id/str_booking_loading_first_line_placeholder"
            android:background="@drawable/bg_stub_radius_2"
            android:layout_width="0dp"
            android:layout_height="12dp"
            android:layout_marginTop="26dp"
            app:layout_constraintBottom_toTopOf="@+id/str_booking_loading_second_line_placeholder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/str_booking_loading_subtitle_placeholder"
            app:layout_constraintWidth_percent="0.9"/>
        <View
            android:id="@+id/str_booking_loading_second_line_placeholder"
            android:background="@drawable/bg_stub_radius_2"
            android:layout_width="0dp"
            android:layout_height="12dp"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/str_booking_loading_first_line_placeholder"
            app:layout_constraintWidth_percent="0.2"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.avito.android.lib.design.skeleton.shimmer.ShimmerFrameLayout>
