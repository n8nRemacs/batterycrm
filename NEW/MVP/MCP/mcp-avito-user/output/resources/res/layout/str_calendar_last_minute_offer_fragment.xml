<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:id="@+id/last_minute_offer_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/progress_placeholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/str_calendar_last_minute_offer_content"/>
        <com.avito.android.lib.design.button.Button
            android:layout_gravity="bottom"
            android:id="@+id/save_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="16dp"
            style="?attr/buttonPrimaryLarge"/>
    </FrameLayout>
    <ImageView
        android:layout_gravity="start|top"
        android:id="@+id/close_btn"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        android:src="@drawable/ic_back_24"/>
</FrameLayout>
