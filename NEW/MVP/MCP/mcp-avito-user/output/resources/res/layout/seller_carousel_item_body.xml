<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/standard_padding"
    android:paddingEnd="@dimen/standard_padding">
    <FrameLayout
        android:id="@+id/advert_image_container_1"
        android:layout_width="170dp"
        android:layout_height="128dp">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:placeholderImage="@drawable/ic_stub_white_34"
            app:roundBottomStart="true"
            app:roundTopStart="true"
            style="@style/SimpleDraweeView.NewRecommendedSeller.AdvertImage"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/advert_image_container_2"
        android:layout_width="84dp"
        android:layout_height="63dp"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="2dp"
        android:layout_toEndOf="@+id/advert_image_container_1">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:placeholderImage="@drawable/ic_stub_white_18"
            app:roundTopEnd="true"
            style="@style/SimpleDraweeView.NewRecommendedSeller.AdvertImage"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/advert_image_container_3"
        android:layout_width="84dp"
        android:layout_height="63dp"
        android:layout_marginLeft="2dp"
        android:layout_below="@+id/advert_image_container_2"
        android:layout_toEndOf="@+id/advert_image_container_1">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:placeholderImage="@drawable/ic_stub_white_18"
            app:roundBottomEnd="true"
            style="@style/SimpleDraweeView.NewRecommendedSeller.AdvertImage"/>
        <include
            android:id="@+id/overlay_container"
            android:visibility="gone"
            layout="@layout/seller_carousel_item_advert_overlay"/>
    </FrameLayout>
</RelativeLayout>
