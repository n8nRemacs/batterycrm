<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:id="@+id/location_picker_screen_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.avito.android.avito_map.AvitoMapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_gravity="end|center_vertical"
        android:id="@+id/find_me_button"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="@dimen/find_me_button_size"
        android:layout_height="@dimen/find_me_button_size"
        android:src="@drawable/my_location_icon"
        android:layout_marginEnd="@dimen/find_me_margin_end"
        android:backgroundTint="?attr/white"
        app:backgroundTint="?attr/white"
        app:fabCustomSize="@dimen/find_me_button_size"/>
    <LinearLayout
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="ru.avito.component.behaviors.MoveAboveSnackBarBehavior">
        <com.avito.android.lib.design.button.Button
            android:layout_gravity="center"
            android:id="@+id/main_button"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/publish_params_continue_button_margin_horizontal_redesign"
            android:text="@string/lp_choose_footer"
            android:layout_marginHorizontal="@dimen/publish_params_continue_button_margin_horizontal_redesign"
            style="?attr/buttonPrimaryLarge"/>
    </LinearLayout>
    <View
        android:id="@+id/map_concealer"
        android:background="@color/expected_overlay"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
    <FrameLayout
        android:id="@+id/progress_overlay_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <com.avito.android.location_picker.view.radius.RadiusCircleViewImpl
        android:id="@+id/search_radius_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="60dp"
        android:alpha="0"
        app:fillColor="@color/lp_radius_fill_color"
        app:strokeColor="@color/lp_radius_fill_color"
        app:strokeWidth="0dp"/>
    <com.avito.android.user_address.pin.BlackPinView
        android:layout_gravity="center"
        android:id="@+id/pin_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"/>
    <com.avito.android.lib.design.spinner.Spinner
        android:layout_gravity="center"
        android:id="@+id/circular_progress"
        android:visibility="gone"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        style="?attr/spinnerDarkLarge"/>
    <include
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="ru.avito.component.behaviors.MoveAboveSnackBarBehavior"
        layout="@layout/location_picker_search_radius_view"/>
    <LinearLayout
        android:orientation="vertical"
        android:background="?attr/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.avito.android.lib.design.nav_bar.NavBar
            android:id="@+id/navbar"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            layout="@layout/location_picker_search_redesign_view"/>
        <FrameLayout
            android:id="@+id/drop_down_suggestions_container"
            android:background="?attr/white"
            android:focusableInTouchMode="true"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
