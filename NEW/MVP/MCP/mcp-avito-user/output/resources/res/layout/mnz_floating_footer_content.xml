<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="vertical"
    android:id="@+id/mnz_floating_footer_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/mnz_floating_footer_contacts_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">
        <com.avito.android.lib.design.circular_counter.CircularCounter
            android:layout_gravity="center_vertical"
            android:id="@+id/mnz_floating_footer_progress"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:circularCounter_contentAppearance="?attr/textH50"
            app:circularCounter_progressIndicatorColor="?attr/green600"
            app:circularCounter_progressRailColor="@color/circular_progress_counter_background"
            app:circularCounter_progressWidth="4dp"/>
        <TextView
            android:textAppearance="?attr/textM10"
            android:layout_gravity="center_vertical"
            android:id="@+id/mnz_floating_footer_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.avito.android.lib.design.button.Button
            android:id="@+id/mnz_floating_footer_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="?attr/buttonPrimaryLarge"/>
        <View
            android:id="@+id/mnz_floating_footer_button_spacer"
            android:visibility="gone"
            android:layout_width="6dp"
            android:layout_height="match_parent"/>
        <com.avito.android.lib.design.button.Button
            android:id="@+id/mnz_floating_footer_button2"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="?attr/buttonPrimaryLarge"/>
    </LinearLayout>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/mnz_floating_footer_additional_button"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_weight="1"
        style="?attr/buttonPrimaryLarge"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:id="@+id/mnz_floating_footer_extra"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"/>
</LinearLayout>
