<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/advert_rich_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.avito.android.lib.util.layout.ForegroundConstraintLayout
        android:id="@+id/advert_content"
        android:tag="constructor_item"
        android:paddingTop="@dimen/rich_snippet_padding_top"
        android:paddingBottom="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="@drawable/rich_item_fg">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/gallery"
            android:paddingLeft="@dimen/rich_snippet_padding_left"
            android:paddingRight="@dimen/rich_snippet_padding_right"
            android:clipToPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:overScrollMode="never"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <View
            android:id="@+id/unavailable_item_gallery_alpha"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:foreground="?attr/white"
            android:alpha="0.5"
            app:layout_constraintBottom_toBottomOf="@+id/gallery"
            app:layout_constraintEnd_toEndOf="@+id/gallery"
            app:layout_constraintStart_toStartOf="@+id/gallery"
            app:layout_constraintTop_toTopOf="@+id/gallery"/>
        <TextView
            android:theme="@style/Theme.DesignSystem.Re23"
            android:textAppearance="?attr/textXs10"
            android:textColor="?attr/constantWhite"
            android:gravity="center"
            android:id="@+id/badge_sticker"
            android:background="@drawable/bg_advert_item_sale_candy"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/card_badge_sticker_bottom_margin_small"
            android:minWidth="@dimen/card_badge_sticker_min_width"
            android:contentDescription="@null"
            android:rotation="-10"
            android:layout_marginStart="24dp"
            android:elevation="2dp"
            android:paddingHorizontal="@dimen/card_badge_sticker_text_padding_horizontal"
            android:paddingVertical="@dimen/card_badge_sticker_text_padding_vertical"
            app:layout_constraintBottom_toTopOf="@+id/badge_bar_v2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_goneMarginBottom="@dimen/card_badge_sticker_bottom_margin_with_rotation"/>
        <com.avito.android.lib.deprecated_design.badge_bar.CompactFlexibleLayout
            android:id="@+id/badge_bar"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/card_badge_margin_top"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:compactFlexibleLayout_maxLines="1"
            app:compactFlexibleLayout_maxViews="10"
            app:layout_constraintBottom_toBottomOf="@+id/gallery"
            app:layout_constraintStart_toStartOf="parent"/>
        <ru.avito.component.snippet_badge_bar.SnippetBadgeBar
            android:id="@+id/badge_bar_v2"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/card_badge_margin_top"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintBottom_toBottomOf="@+id/gallery"
            app:layout_constraintStart_toStartOf="parent"
            app:snippetBadgeBar_maxBadges="10"
            app:snippetBadgeBar_maxLines="1"/>
        <com.avito.android.serp.NoTouchEventRecyclerView
            android:id="@+id/free_form_recycler_view"
            android:paddingLeft="@dimen/rich_snippet_padding_left"
            android:paddingRight="@dimen/rich_snippet_padding_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            app:layout_constraintTop_toBottomOf="@+id/gallery"/>
    </com.avito.android.lib.util.layout.ForegroundConstraintLayout>
    <FrameLayout
        android:id="@+id/viewed_items_alpha"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="@drawable/constructor_borderless_advert_seen_foreground"
        android:alpha="0.2"/>
</FrameLayout>
