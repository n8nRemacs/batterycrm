<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingTop="@dimen/widget_content_top_padding"
    android:paddingBottom="@dimen/widget_content_bottom_padding"
    android:clipChildren="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/widget_content_horizontal_padding">
    <TextView
        android:textAppearance="?attr/textH25"
        android:id="@+id/guests_widget_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/guests_widget_adults_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:textAppearance="?attr/textM20"
                android:id="@+id/guests_widget_adults_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"/>
            <TextView
                android:textAppearance="?attr/textS20"
                android:textColor="?attr/gray54"
                android:id="@+id/guests_widget_adults_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"/>
        </LinearLayout>
        <com.avito.android.lib.design.stepper.Stepper
            android:layout_gravity="center"
            android:id="@+id/guests_widget_adults_count_stepper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="104dp"
            android:layout_marginStart="12dp"
            style="?attr/stepperSmall"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/guests_widget_children_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:textAppearance="?attr/textM20"
                android:id="@+id/guests_widget_children_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"/>
            <TextView
                android:textAppearance="?attr/textS20"
                android:textColor="?attr/gray54"
                android:id="@+id/guests_widget_children_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"/>
        </LinearLayout>
        <com.avito.android.lib.design.button.Button
            android:layout_gravity="center"
            android:id="@+id/guests_widget_children_picker_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="104dp"
            android:layout_marginStart="12dp"
            style="?attr/buttonSecondarySmall"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/guests_widget_selected_children_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/guests_widget_animals_container"
        android:clipChildren="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">
        <TextView
            android:textAppearance="?attr/textM20"
            android:id="@+id/guests_widget_animals_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"/>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="24dp">
            <com.avito.android.lib.design.animation.AnimationView
                android:layout_gravity="center"
                android:id="@+id/paws_animation_view"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:translationY="-24dp"/>
            <com.avito.android.lib.design.switcher.Switcher
                android:layout_gravity="center"
                android:id="@+id/guests_widget_animals_switcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?attr/switcherDefaultMedium"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
