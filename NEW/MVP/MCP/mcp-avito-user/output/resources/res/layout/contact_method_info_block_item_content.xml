<?xml version="1.0" encoding="utf-8"?>
<com.avito.android.lib.design.shadow_layout.ShadowLinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="vertical"
    android:paddingBottom="7dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/contact_method_messenger_calls_banner_title"
        style="?attr/textH30"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/contact_method_messenger_calls_banner_text"
        style="?attr/textM10"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/contact_method_info_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/contact_method_messenger_calls_banner_btn"
        app:layout_shadowEnabled="true"
        style="?attr/buttonOverlayPrimaryMedium"/>
</com.avito.android.lib.design.shadow_layout.ShadowLinearLayout>
