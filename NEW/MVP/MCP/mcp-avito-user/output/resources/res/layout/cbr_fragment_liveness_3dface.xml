<?xml version="1.0" encoding="utf-8"?>
<ru.cyberity.cbr.core.widget.CBRBackgroundView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cbr_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/cbr_placeholder"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="?attr/actionBarSize"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.camera.view.PreviewView
            android:id="@+id/cbr_camera_preview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="9:16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <FrameLayout
            android:id="@+id/cbr_camera"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:orientation="vertical"
                android:id="@+id/cbr_overlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ru.cyberity.cbr.core.widget.CBRImageView
                    android:id="@+id/cbr_complete_icon"
                    android:background="?android:attr/windowBackground"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>
                <ru.cyberity.cbr.core.widget.CBRLivenessFaceView
                    android:id="@+id/cbr_face_view"
                    android:visibility="invisible"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <ru.cyberity.cbr.core.widget.CBRBackgroundView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cbr_face_view"/>
                <TextView
                    android:textColor="?attr/colorPrimary"
                    android:id="@+id/cbr_debug"
                    android:background="?android:attr/windowBackground"
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>
        <ru.cyberity.cbr.core.widget.CBRH2TextView
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/cbr_hint"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingStart="@dimen/cbr_margin_large"
            android:paddingEnd="@dimen/cbr_margin_large"
            app:layout_constraintBottom_toTopOf="@+id/cbr_powered"
            app:layout_constraintTop_toBottomOf="@+id/cbr_placeholder"/>
        <ru.cyberity.cbr.core.widget.CBRBackgroundView
            android:id="@+id/cbr_container"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:paddingLeft="@dimen/cbr_margin_medium_small"
                android:paddingRight="@dimen/cbr_margin_medium_small"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ru.cyberity.cbr.core.widget.CBRImageView
                    android:id="@+id/cbr_icon"
                    android:background="@drawable/cbr_bg_circle"
                    android:layout_width="@dimen/cbr_icon_size_large"
                    android:layout_height="@dimen/cbr_icon_size_large"
                    android:layout_marginBottom="@dimen/cbr_margin_medium"
                    android:scaleType="center"
                    app:layout_constraintBottom_toTopOf="@+id/cbr_title"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:srcCompat="@drawable/cbr_ic_warning"/>
                <ru.cyberity.cbr.core.widget.CBRH2TextView
                    android:gravity="center"
                    android:id="@+id/cbr_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/cbr_margin_large"
                    android:layout_marginBottom="@dimen/cbr_margin_small"
                    app:layout_constraintBottom_toTopOf="@+id/cbr_subtitle"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>
                <ru.cyberity.cbr.core.widget.CBRSubtitle2TextView
                    android:gravity="center"
                    android:id="@+id/cbr_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/cbr_margin_large"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.5"/>
                <ru.cyberity.cbr.core.widget.CBRPrimaryButton
                    android:id="@+id/cbr_primary_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/cbr_margin_huge"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ru.cyberity.cbr.core.widget.CBRBackgroundView>
        <ru.cyberity.cbr.core.widget.CBRToolbarView
            android:id="@+id/cbr_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"/>
        <include
            android:id="@+id/cbr_powered"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/cbr_margin_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            layout="@layout/cbr_layout_powered"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ru.cyberity.cbr.core.widget.CBRBackgroundView>
