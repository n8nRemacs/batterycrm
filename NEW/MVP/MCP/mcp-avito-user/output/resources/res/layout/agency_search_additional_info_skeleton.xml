<?xml version="1.0" encoding="utf-8"?>
<com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shimmer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="?attr/shimmerDefault">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="44dp">
            <com.avito.android.lib.design.skeleton.TextSkeleton
                android:layout_width="0dp"
                android:layout_height="14dp"
                android:layout_weight="1"
                style="?attr/textM20"/>
            <androidx.legacy.widget.Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <com.avito.android.lib.design.skeleton.Skeleton
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:skeleton_radius="8dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="44dp">
            <com.avito.android.lib.design.skeleton.TextSkeleton
                android:layout_width="0dp"
                android:layout_height="14dp"
                android:layout_weight="1"
                style="?attr/textM20"/>
            <androidx.legacy.widget.Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>
            <com.avito.android.lib.design.skeleton.Skeleton
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:skeleton_radius="8dp"/>
        </LinearLayout>
        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="24dp"/>
        <com.avito.android.lib.design.skeleton.TextSkeleton
            android:layout_width="170.5dp"
            android:layout_height="14dp"
            style="?attr/textM20"/>
        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="12dp"/>
        <com.avito.android.lib.design.skeleton.TextSkeleton
            android:layout_width="match_parent"
            android:layout_height="10dp"
            style="?attr/textH40"/>
        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="12dp"/>
        <com.avito.android.lib.design.skeleton.TextSkeleton
            android:layout_width="match_parent"
            android:layout_height="10dp"
            style="?attr/textH40"/>
        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="18dp"/>
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.avito.android.lib.design.skeleton.Skeleton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginVertical="6dp"
                app:skeleton_radius="48dp"/>
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="12dp"
                android:layout_marginVertical="10dp">
                <com.avito.android.lib.design.skeleton.TextSkeleton
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    style="?attr/textH40"/>
                <com.avito.android.lib.design.skeleton.TextSkeleton
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    style="?attr/textH40"/>
            </LinearLayout>
            <com.avito.android.lib.design.skeleton.Skeleton
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginVertical="8dp"
                app:skeleton_radius="12dp"/>
        </LinearLayout>
        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="24dp"/>
        <com.avito.android.lib.design.skeleton.TextSkeleton
            android:layout_width="170.5dp"
            android:layout_height="14dp"
            style="?attr/textM20"/>
        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="12dp"/>
        <com.avito.android.lib.design.skeleton.TextSkeleton
            android:layout_width="match_parent"
            android:layout_height="10dp"
            style="?attr/textH40"/>
        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="12dp"/>
        <com.avito.android.lib.design.skeleton.TextSkeleton
            android:layout_width="match_parent"
            android:layout_height="10dp"
            style="?attr/textH40"/>
        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="18dp"/>
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="6dp">
            <com.avito.android.lib.design.skeleton.Skeleton
                android:layout_width="85dp"
                android:layout_height="44dp"
                app:skeleton_radius="12dp"/>
            <com.avito.android.lib.design.skeleton.Skeleton
                android:layout_width="165dp"
                android:layout_height="44dp"
                android:layout_marginLeft="10dp"
                app:skeleton_radius="12dp"/>
            <com.avito.android.lib.design.skeleton.Skeleton
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginLeft="10dp"
                app:skeleton_radius="12dp"/>
        </LinearLayout>
        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="28dp"/>
        <com.avito.android.lib.design.skeleton.TextSkeleton
            android:layout_width="170.5dp"
            android:layout_height="14dp"
            style="?attr/textM20"/>
        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="12dp"/>
        <com.avito.android.lib.design.skeleton.TextSkeleton
            android:layout_width="match_parent"
            android:layout_height="10dp"
            style="?attr/textH40"/>
        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="12dp"/>
        <com.avito.android.lib.design.skeleton.TextSkeleton
            android:layout_width="match_parent"
            android:layout_height="10dp"
            style="?attr/textH40"/>
        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="24dp"/>
        <com.avito.android.lib.design.skeleton.Skeleton
            android:layout_width="214dp"
            android:layout_height="44dp"
            app:skeleton_radius="12dp"/>
    </LinearLayout>
</com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout>
