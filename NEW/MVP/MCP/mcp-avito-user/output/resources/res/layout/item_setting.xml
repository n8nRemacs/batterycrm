<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_setting_root"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/default_horizontal_padding">
    <TextView
        android:textAppearance="?attr/textH50"
        android:id="@+id/item_setting_header_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.avito.android.lib.design.select.Select
        android:id="@+id/item_setting_tariff_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/item_setting_header_tv"
        app:layout_goneMarginTop="0dp"
        style="?attr/selectDefaultM"/>
    <com.avito.android.lib.design.input.Input
        android:id="@+id/item_setting_price_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="@string/setting_price_hint"
        android:singleLine="true"
        android:maxLength="9"
        app:input_clearButtonUnfocused="true"
        app:input_focusByClearButton="true"
        app:input_formatterType="roubles"
        app:layout_constraintTop_toBottomOf="@+id/item_setting_tariff_select"
        style="?attr/inputDefaultM"/>
    <TextView
        android:textAppearance="?attr/textS10"
        android:textColor="?attr/red600"
        android:id="@+id/item_setting_price_input_error"
        android:paddingTop="6dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/item_setting_price_input"
        app:layout_constraintStart_toStartOf="@+id/item_setting_price_input"
        app:layout_constraintTop_toBottomOf="@+id/item_setting_price_input"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:textColor="?attr/gray54"
        android:id="@+id/item_setting_delivery_days_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/setting_day_range_title_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_setting_price_input_error"/>
    <ImageView
        android:id="@+id/item_setting_days_help_ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        android:paddingHorizontal="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_setting_delivery_days_title"
        app:layout_constraintStart_toEndOf="@+id/item_setting_delivery_days_title"
        app:layout_constraintTop_toTopOf="@+id/item_setting_delivery_days_title"
        app:srcCompat="?attr/ic_help16"
        app:tint="?attr/gray36"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/item_setting_guide_center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_percent="0.5"/>
    <com.avito.android.lib.design.input.Input
        android:id="@+id/item_setting_day_range_min"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="@string/setting_min_days_hint"
        android:singleLine="true"
        android:maxLength="3"
        android:layout_marginEnd="4dp"
        app:input_clearButtonUnfocused="true"
        app:input_focusByClearButton="true"
        app:input_formatterType="decimal"
        app:input_prefix="@string/setting_min_days_hint"
        app:layout_constraintEnd_toStartOf="@+id/item_setting_guide_center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_setting_delivery_days_title"
        style="?attr/inputDefaultM"/>
    <TextView
        android:textAppearance="?attr/textS10"
        android:textColor="?attr/red600"
        android:id="@+id/item_setting_min_days_error_tv"
        android:paddingTop="6dp"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/item_setting_day_range_min"
        app:layout_constraintStart_toStartOf="@+id/item_setting_day_range_min"
        app:layout_constraintTop_toBottomOf="@+id/item_setting_day_range_min"/>
    <com.avito.android.lib.design.input.Input
        android:id="@+id/item_setting_day_range_max"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="@string/setting_max_days_hint"
        android:singleLine="true"
        android:maxLength="3"
        android:layout_marginStart="4dp"
        app:input_clearButtonUnfocused="true"
        app:input_focusByClearButton="true"
        app:input_formatterType="decimal"
        app:input_prefix="@string/setting_max_days_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/item_setting_guide_center"
        app:layout_constraintTop_toBottomOf="@+id/item_setting_delivery_days_title"
        style="?attr/inputDefaultM"/>
    <TextView
        android:textAppearance="?attr/textS10"
        android:textColor="?attr/red600"
        android:id="@+id/item_setting_max_days_error_tv"
        android:paddingTop="6dp"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/item_setting_day_range_max"
        app:layout_constraintStart_toStartOf="@+id/item_setting_day_range_max"
        app:layout_constraintTop_toBottomOf="@+id/item_setting_day_range_max"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/item_setting_day_range_group"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:constraint_referenced_ids="item_setting_delivery_days_title,item_setting_days_help_ic,item_setting_day_range_min,item_setting_day_range_max"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/delivery_days_bottom_barrier"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="item_setting_min_days_error_tv,item_setting_max_days_error_tv"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/item_setting_save_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/setting_button_save_text"
        app:layout_constraintTop_toBottomOf="@+id/delivery_days_bottom_barrier"
        style="?attr/buttonSecondaryMedium"/>
</androidx.constraintlayout.widget.ConstraintLayout>
