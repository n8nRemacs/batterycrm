<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/back_iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="12dp"
        android:scaleType="centerInside"
        android:importantForAccessibility="no"
        android:layout_marginStart="12dp"
        android:elevation="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/ic_arrowBack20"
        app:tint="?attr/black"/>
    <TextView
        android:textAppearance="?attr/textH50"
        android:gravity="center"
        android:id="@+id/header_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/str_orders_calendar_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/refresh_ic"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="12dp"
        android:scaleType="centerInside"
        android:importantForAccessibility="no"
        android:layout_marginEnd="12dp"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/ic_retry20"
        app:tint="?attr/black"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_header"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:constraint_referenced_ids="refresh_ic,header_tv,back_iv"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dates_rv"
        android:layout_width="0dp"
        android:layout_height="@dimen/str_calendar_dates_height"
        android:layout_marginTop="16dp"
        android:overScrollMode="never"
        app:layout_constraintBottom_toTopOf="@+id/header_barrier"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_tv"
        app:layout_constraintVertical_bias="0"
        app:layout_goneMarginTop="0dp"/>
    <FrameLayout
        android:id="@+id/current_month_group"
        android:background="@drawable/str_orders_calendar_current_month_group_bg"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="@dimen/str_calendar_flat_info_width_redesign"
        android:layout_height="34dp"
        app:layout_constraintBottom_toTopOf="@+id/header_barrier"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:textAppearance="?attr/textH50"
            android:textSize="15sp"
            android:layout_gravity="center_vertical"
            android:id="@+id/current_month_tv"
            android:visibility="visible"
            android:layout_width="@dimen/str_calendar_flat_info_width_redesign"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/str_calendar_current_month_margin"
            android:paddingEnd="4dp"/>
        <TextView
            android:textAppearance="?attr/textH50"
            android:textSize="15sp"
            android:layout_gravity="center_vertical"
            android:id="@+id/short_current_month_tv"
            android:visibility="gone"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/str_calendar_current_month_margin"
            android:paddingEnd="0dp"/>
        <View
            android:layout_gravity="center"
            android:id="@+id/current_month_stub"
            android:background="@drawable/str_orders_calendar_stub_3dp_bg"
            android:visibility="gone"
            android:layout_width="100dp"
            android:layout_height="10dp"/>
    </FrameLayout>
    <View
        android:id="@+id/header_divider_view"
        android:background="?attr/gray8"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:elevation="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dates_rv"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/header_barrier"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="back_iv,header_tv, dates_rv,current_month_group,header_divider_view"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/main_calendar_rv"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="@+id/flat_info_rv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/flat_info_rv"
        app:layout_constraintVertical_bias="0"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/flat_info_rv"
        android:background="?attr/white"
        android:layout_width="@dimen/str_calendar_flat_info_width_redesign"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_barrier"
        app:layout_constraintVertical_bias="0"/>
    <LinearLayout
        android:gravity="end"
        android:orientation="horizontal"
        android:id="@+id/shortcuts_group"
        android:paddingBottom="@dimen/str_calendar_shortcuts_margin_bottom"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:translationZ="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <com.avito.android.lib.design.button.Button
            android:layout_gravity="end|bottom"
            android:id="@+id/today_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_orders_calendar_today_button"
            android:layout_marginEnd="8dp"
            style="?attr/buttonOverlayPrimarySmallRound"/>
        <com.avito.android.lib.design.button.Button
            android:layout_gravity="end|bottom"
            android:id="@+id/rotation_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_orders_calendar_rotate_button"
            android:layout_marginEnd="16dp"
            style="?attr/buttonOverlayPrimarySmallRound"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/banner_container"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:translationZ="20dp"
        android:layout_marginHorizontal="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_max="364dp">
        <include
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/str_seller_orders_calendar_banner"/>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
