<?xml version="1.0" encoding="utf-8"?>
<com.avito.android.lib.design.shadow_layout.ShadowFrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:id="@+id/imv_container"
    android:paddingTop="16dp"
    android:clipToPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:background="@drawable/bg_white_top_round_16dp"
        android:paddingTop="16dp"
        android:paddingBottom="22dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        app:layout_shadowEnabled="true">
        <TextView
            android:textAppearance="?attr/textM20"
            android:id="@+id/imv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/bubbles"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:flow_horizontalBias="0"
            app:flow_horizontalGap="6dp"
            app:flow_horizontalStyle="packed"
            app:flow_wrapMode="chain2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imv_title"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.avito.android.lib.design.shadow_layout.ShadowFrameLayout>
