<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp"
    android:paddingVertical="12dp">
    <com.avito.android.lib.design.avatar.Avatar
        android:id="@+id/agent_avatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:avatar_cornerRadius="1000dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:ellipsize="end"
        android:id="@+id/agent_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:paddingEnd="6dp"
        android:layout_marginStart="13dp"
        app:layout_constraintBottom_toTopOf="@+id/agent_phone_number"
        app:layout_constraintEnd_toStartOf="@+id/agent_select"
        app:layout_constraintStart_toEndOf="@+id/agent_avatar"
        app:layout_constraintTop_toTopOf="@+id/agent_avatar"
        app:layout_constraintVertical_chainStyle="packed"/>
    <TextView
        android:textAppearance="?attr/textS20"
        android:textColor="?attr/gray54"
        android:ellipsize="end"
        android:id="@+id/agent_phone_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:maxLines="1"
        android:paddingEnd="6dp"
        android:layout_marginStart="13dp"
        app:layout_constraintBottom_toBottomOf="@+id/agent_avatar"
        app:layout_constraintEnd_toStartOf="@+id/agent_select"
        app:layout_constraintStart_toEndOf="@+id/agent_avatar"
        app:layout_constraintTop_toBottomOf="@+id/agent_name"/>
    <com.avito.android.lib.design.toggle.RadioButton
        android:id="@+id/agent_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
