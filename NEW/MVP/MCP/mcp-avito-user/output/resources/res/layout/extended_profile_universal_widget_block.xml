<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/extended_profile_universal_widget_block_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/extended_profile_universal_widget_block_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:overlayImage="@color/expected_black_alpha_4"
        app:placeholderImage="?attr/gray8"
        app:progressBarImage="?attr/gray8"
        app:viewAspectRatio="1"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/extended_profile_universal_widget_block_text_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/extended_profile_universal_widget_block_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/extended_profile_universal_widget_block_image">
        <TextView
            android:ellipsize="end"
            android:id="@+id/extended_profile_universal_widget_block_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:ellipsize="end"
            android:id="@+id/extended_profile_universal_widget_block_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:ellipsize="end"
            android:gravity="bottom"
            android:id="@+id/extended_profile_universal_widget_block_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/extended_profile_universal_widget_block_error_overlay"
        android:background="?attr/whiteAlpha80"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/extended_profile_universal_widget_block_error_icon"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_fail_red_24"/>
    <ImageView
        android:id="@+id/extended_profile_universal_widget_remove_block"
        android:background="@drawable/bg_universal_widget_remove_block"
        android:visibility="gone"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginTop="4dp"
        android:scaleType="center"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_universal_widget_remove_block"/>
    <FrameLayout
        android:id="@+id/extended_profile_universal_widget_block_skeleton"
        android:background="@drawable/bg_universal_widget_skeleton_"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/extended_profile_universal_widget_block_skeleton_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_universal_widget_block_skeleton_img_with_text_out_1_1"/>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
