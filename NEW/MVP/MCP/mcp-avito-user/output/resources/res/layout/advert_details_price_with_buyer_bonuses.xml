<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/item_price"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/content_horizontal_padding"
    android:layout_marginTop="2dp"
    android:layout_marginRight="@dimen/content_horizontal_padding"
    android:layout_marginBottom="10dp">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/price_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAppearance="?attr/textH3"
            android:id="@+id/buyer_bonuses_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textIsSelectable="true"/>
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/hint_icon"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="?attr/ic_help24"
            android:layout_marginEnd="4dp"
            app:tint="@color/expected_gray_24"/>
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/lastMinuteOffer_icon"
            android:visibility="gone"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="2dp"
            android:contentDescription="@null"
            android:layout_marginStart="4dp"
            app:srcCompat="?attr/ic_lastMinuteOfferFireRound16"
            app:tint="?attr/black"/>
    </LinearLayout>
    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:alignItems="flex_end"
        app:flexWrap="wrap">
        <TextView
            android:textAppearance="?attr/textM2"
            android:id="@+id/buyer_bonuses_normalized_price"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textIsSelectable="true"
            android:layout_marginEnd="6dp"/>
        <TextView
            android:textAppearance="?attr/textM2"
            android:id="@+id/divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/advert_details_items_price_divider"
            android:layout_marginEnd="5dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/buyer_bonuses_container"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-1dp">
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/buyer_bonuses_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@null"
                android:layout_marginEnd="2dp"/>
            <TextView
                android:textAppearance="?attr/textM2"
                android:id="@+id/buyer_bonuses_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/buyer_bonuses_arrow"
                android:visibility="gone"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="1dp"
                android:src="?attr/ic_arrowRight16"
                android:contentDescription="@null"
                android:layout_marginStart="1dp"
                app:tint="?attr/black"/>
        </LinearLayout>
    </com.google.android.flexbox.FlexboxLayout>
</LinearLayout>
