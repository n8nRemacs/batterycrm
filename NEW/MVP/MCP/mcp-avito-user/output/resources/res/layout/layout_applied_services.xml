<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/applied_services_view"
    android:background="@drawable/bg_applied_services"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:paddingStart="16dp"
    android:paddingEnd="12dp"
    android:layout_marginHorizontal="@dimen/content_horizontal_padding"
    android:paddingVertical="8dp">
    <TextView
        android:textAppearance="?attr/textBodyDense"
        android:textColor="?attr/black"
        android:id="@+id/applied_services_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.avito.android.user_adverts_views_util.IconsView
        android:id="@+id/icons_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="4dp"
        app:icon_overflowMargin="@dimen/vas_icon_margin"
        app:icon_size="@dimen/vas_icon_size"/>
    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/applied_services_expand_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="?attr/ic_arrowExpandLess20"
        app:tint="?attr/gray48"/>
</LinearLayout>
