<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/passport_add_profile_select_vertical_root"
    android:background="?attr/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/toolbar_container"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        layout="@layout/appbar_look_and_feel"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/select_verticals_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintBottom_toTopOf="@+id/select_verticals_continue_button"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_container"
        app:layout_goneMarginBottom="30dp"/>
    <View
        android:background="?attr/white"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_verticals_continue_button"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/select_verticals_continue_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/passport_add_profile_select_vertical_continue"
        android:layout_marginHorizontal="@dimen/extended_profile_creation_horizontal_margin"
        app:layout_constraintBottom_toTopOf="@+id/legals_text_view"
        style="?attr/buttonPrimaryLarge"/>
    <TextView
        android:textAppearance="?attr/textS10"
        android:textColor="?attr/gray54"
        android:id="@+id/legals_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginHorizontal="@dimen/extended_profile_creation_horizontal_margin"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <FrameLayout
        android:id="@+id/select_verticals_error_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/legals_text_view"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_container">
        <include layout="@layout/error_and_progress_view_redesign"/>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
