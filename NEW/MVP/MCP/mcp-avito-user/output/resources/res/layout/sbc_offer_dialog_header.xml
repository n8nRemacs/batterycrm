<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="horizontal"
    android:id="@+id/sbc_offer_dialog_header_root"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="?attr/textH50"
        android:textColor="?attr/black"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:layout_gravity="center_vertical"
        android:id="@+id/sbc_offer_dialog_header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="38dp"/>
    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/sbc_offer_dialog_header_close_button"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_close_24_black"
        android:layout_marginStart="14dp"/>
</FrameLayout>
