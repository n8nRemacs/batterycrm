<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:id="@+id/auto_select_booking_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/content_horizontal_padding"
    app:cardElevation="0dp">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/auto_select_booking_block"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/select_booking_block_horizontal_padding"
        android:paddingVertical="@dimen/select_booking_block_vertical_padding">
        <TextView
            android:textAppearance="?attr/textH4"
            android:id="@+id/auto_select_booking_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/select_booking_block_title_bottom_margin"/>
        <TextView
            android:textAppearance="?attr/textBody"
            android:id="@+id/auto_select_booking_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/select_booking_block_vertical_padding"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
