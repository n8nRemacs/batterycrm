<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/brand_model_linear_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="16dp">
    <com.avito.android.lib.design.input.Input
        android:id="@+id/search_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        android:layout_marginHorizontal="16dp"
        style="?attr/inputSearch"/>
    <TextView
        android:textAppearance="?attr/textH50"
        android:textColor="?attr/gray54"
        android:gravity="center"
        android:id="@+id/nothing_found_textview"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textAlignment="center"
        android:layout_marginHorizontal="16dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/brands_models_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/search_input"/>
    <com.avito.android.lib.design.spinner.overlay.SpinnerOverlay
        android:id="@+id/spinner_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>
