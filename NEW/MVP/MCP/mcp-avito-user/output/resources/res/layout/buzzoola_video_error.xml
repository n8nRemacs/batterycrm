<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/ad_video_legal_overlay_color"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAppearance="?attr/textS20"
            android:textColor="?attr/constantWhite"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="@string/ad_video_error"/>
        <com.avito.android.lib.design.button.Button
            android:layout_gravity="center_horizontal"
            android:id="@+id/video_retry"
            android:layout_margin="8dp"
            android:src="?attr/ic_retry16"
            app:button_backgroundColor="?attr/constantWhite"
            app:button_iconColor="?attr/constantBlack"
            style="?attr/buttonDefaultInverseSmallRound"/>
    </LinearLayout>
</FrameLayout>
