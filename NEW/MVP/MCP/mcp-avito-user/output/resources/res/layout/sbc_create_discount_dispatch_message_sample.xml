<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="?attr/textH30"
        android:id="@+id/create_discount_dispatch_card_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:id="@+id/create_discount_dispatch_card_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:lineSpacingExtra="2sp"
        android:lineHeight="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_discount_dispatch_card_title"/>
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/create_discount_dispatch_item_image"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        app:backgroundImage="?attr/gray4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_discount_dispatch_card_description"
        app:placeholderImage="@drawable/sbc_img_item_placeholder_56_42"
        app:roundedCornerRadius="@dimen/messenger_channels_list_item_icon_corner_radius"/>
    <TextView
        android:textAppearance="?attr/textS10"
        android:ellipsize="end"
        android:id="@+id/create_discount_dispatch_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/create_discount_dispatch_item_image"
        app:layout_constraintTop_toTopOf="@+id/create_discount_dispatch_item_image"/>
    <TextView
        android:textAppearance="?attr/textS20"
        android:id="@+id/create_discount_dispatch_item_price_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:fontFamily="?attr/fontHeavy"
        app:layout_constraintStart_toEndOf="@+id/create_discount_dispatch_item_image"
        app:layout_constraintTop_toBottomOf="@+id/create_discount_dispatch_item_title"/>
    <TextView
        android:textAppearance="?attr/textS20"
        android:id="@+id/create_discount_dispatch_item_price_old"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/create_discount_dispatch_item_price_new"
        app:layout_constraintStart_toEndOf="@+id/create_discount_dispatch_item_price_new"/>
    <TextView
        android:textAppearance="?attr/textXs10"
        android:textColor="?attr/gray54"
        android:id="@+id/create_discount_dispatch_item_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/create_discount_dispatch_item_image"
        app:layout_constraintTop_toBottomOf="@+id/create_discount_dispatch_item_price_new"/>
</androidx.constraintlayout.widget.ConstraintLayout>
