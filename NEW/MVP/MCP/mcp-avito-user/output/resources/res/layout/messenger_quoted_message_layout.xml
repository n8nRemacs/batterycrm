<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/message_quote"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/message_quote_black_bar"
        android:background="?attr/black"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_min="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/message_quote_image"
        android:visibility="gone"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="6dp"
        app:actualImageScaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/message_quote_black_bar"
        app:layout_constraintStart_toEndOf="@+id/message_quote_black_bar"
        app:layout_constraintTop_toTopOf="@+id/message_quote_black_bar"
        app:placeholderImageScaleType="centerInside"
        app:roundedCornerRadius="4dp"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/message_quote_video_play"
        android:visibility="gone"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/message_quote_image"
        app:layout_constraintEnd_toEndOf="@+id/message_quote_image"
        app:layout_constraintStart_toStartOf="@+id/message_quote_image"
        app:layout_constraintTop_toTopOf="@+id/message_quote_image"
        app:srcCompat="@drawable/ic_video_play_16"/>
    <TextView
        android:textSize="13sp"
        android:ellipsize="end"
        android:id="@+id/message_quote_author_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:fontFamily="?attr/fontHeavy"
        android:layout_marginStart="6dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@+id/message_quote_left_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/message_quote_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginStart="4dp"/>
    <TextView
        android:textAppearance="?attr/textM2"
        android:textSize="13sp"
        android:ellipsize="end"
        android:id="@+id/message_quote_left_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_marginStart="6dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/message_quote_right_text"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/message_quote_image"
        app:layout_constraintTop_toBottomOf="@+id/message_quote_author_name"
        app:layout_constraintWidth_min="25dp"
        app:layout_goneMarginStart="4dp"/>
    <TextView
        android:textAppearance="?attr/textM2"
        android:textSize="13sp"
        android:ellipsize="end"
        android:id="@+id/message_quote_right_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@+id/message_quote_left_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/message_quote_left_text"
        app:layout_goneMarginStart="4dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
