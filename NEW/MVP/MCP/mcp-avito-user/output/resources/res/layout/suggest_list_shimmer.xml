<?xml version="1.0" encoding="utf-8"?>
<com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:shimmer="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    shimmer:shimmer_animationDuration="3000"
    shimmer:shimmer_autostart="true">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="16dp">
        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            layout="@layout/shimmer_item"/>
        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/user_address_suggest_list_shimmer_vertical_margin"
            layout="@layout/shimmer_item"/>
        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/user_address_suggest_list_shimmer_vertical_margin"
            layout="@layout/shimmer_item"/>
        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/user_address_suggest_list_shimmer_vertical_margin"
            layout="@layout/shimmer_item"/>
        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/user_address_suggest_list_shimmer_vertical_margin"
            layout="@layout/shimmer_item"/>
        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/user_address_suggest_list_shimmer_vertical_margin"
            layout="@layout/shimmer_item"/>
    </LinearLayout>
</com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout>
