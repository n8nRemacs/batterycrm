<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:paddingHorizontal="16dp"
    android:paddingVertical="10dp">
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minLines="2"
        app:layout_constraintEnd_toStartOf="@+id/tooltip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.avito.android.lib.design.strikethrough.StrikethroughTextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/price_with_discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text"
        app:strikethrough_show="true"
        app:strikethrough_tint="?attr/red600"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:textColor="?attr/red600"
        android:id="@+id/discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@+id/price_with_discount"
        app:layout_constraintTop_toBottomOf="@+id/text"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/total_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/price_with_discount"/>
    <FrameLayout
        android:id="@+id/tooltip"
        android:layout_width="16dp"
        android:layout_height="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:contentDescription="@null"
            app:srcCompat="@drawable/ic_refund_toggle_button_tooltip"/>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
