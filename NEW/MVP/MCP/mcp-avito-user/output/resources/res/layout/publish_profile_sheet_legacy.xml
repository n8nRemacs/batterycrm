<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/start_multiprofile_publish_wrapper"
    android:paddingTop="8dp"
    android:paddingBottom="@dimen/publish_container_horizontal_padding"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <TextView
        android:textAppearance="?attr/textH3"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/publish_container_horizontal_padding"/>
    <include
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="@dimen/publish_container_horizontal_padding"
        layout="@layout/publish_start_profile_selector_legacy"/>
    <TextView
        android:textColor="?attr/gray64"
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="@dimen/publish_container_horizontal_padding"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/buttons_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginHorizontal="@dimen/publish_container_horizontal_padding"/>
</LinearLayout>
