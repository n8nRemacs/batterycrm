<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp">
    <com.avito.android.fresco.SimpleDraweeView
        android:id="@+id/sdv_advice_detail"
        android:layout_width="138dp"
        android:layout_height="138dp"
        android:layout_marginTop="4dp"
        app:actualImageScaleType="centerCrop"
        app:failureImage="?attr/img_logoPhotoPlaceholder"
        app:failureImageScaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:placeholderImage="?attr/img_logoPhotoPlaceholder"
        app:placeholderImageScaleType="fitCenter"
        app:roundedCornerRadius="16dp"/>
    <TextView
        android:textAppearance="?attr/textH40"
        android:id="@+id/tv_advice_detail_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sdv_advice_detail"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:ellipsize="end"
        android:id="@+id/tv_advice_detail_description"
        android:paddingBottom="8dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_advice_detail_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_advice_detail_title"/>
    <TextView
        android:textAppearance="?attr/textS20"
        android:id="@+id/tv_advice_detail_views"
        android:paddingBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3.1%"
        android:drawablePadding="2dp"
        app:drawableLeftCompat="?attr/ic_visible16"
        app:layout_constraintStart_toStartOf="@+id/tv_advice_detail_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_advice_detail_description"/>
    <TextView
        android:textAppearance="?attr/textS2"
        android:id="@+id/tv_advice_detail_contacts"
        android:paddingBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3.1%"
        android:drawablePadding="2dp"
        android:paddingStart="16dp"
        app:drawableLeftCompat="?attr/ic_user16"
        app:layout_constraintStart_toEndOf="@+id/tv_advice_detail_views"
        app:layout_constraintTop_toBottomOf="@+id/tv_advice_detail_description"/>
    <TextView
        android:textAppearance="?attr/textS2"
        android:id="@+id/tv_advice_detail_funnel"
        android:paddingBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3.1%"
        android:drawablePadding="2dp"
        android:paddingStart="16dp"
        app:drawableLeftCompat="?attr/ic_funnel16"
        app:layout_constraintStart_toEndOf="@+id/tv_advice_detail_contacts"
        app:layout_constraintTop_toBottomOf="@+id/tv_advice_detail_description"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/btn_advice_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/tv_advice_detail_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_advice_detail_views"
        style="?attr/buttonSecondaryMedium"/>
</androidx.constraintlayout.widget.ConstraintLayout>
