<?xml version="1.0" encoding="utf-8"?>
<com.avito.android.lib.design.photo_uploader_image.PhotoUploaderLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_photo_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.avito.android.lib.design.photo_uploader_image.PhotoUploaderImage
            android:id="@+id/loading_photo_image_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.avito.android.photo_list_view.ImageLabelsView
            android:id="@+id/labels"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.avito.android.lib.design.button.Button
            android:id="@+id/edit_available_icon"
            android:layout_marginBottom="12dp"
            android:src="?attr/ic_outline_edit_16"
            android:layout_marginEnd="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/loading_photo_image_view"
            app:layout_constraintEnd_toEndOf="@+id/loading_photo_image_view"
            app:tint="?attr/black"
            style="?attr/buttonOverlaySecondarySmall"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.avito.android.lib.design.photo_uploader_image.PhotoUploaderLayout>
