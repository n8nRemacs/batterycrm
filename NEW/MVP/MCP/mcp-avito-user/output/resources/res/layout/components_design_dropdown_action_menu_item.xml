<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/action_menu_item_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:maxWidth="240dp">
    <FrameLayout
        android:layout_gravity="center"
        android:id="@+id/iconWrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center"
            android:id="@+id/action_menu_item_icon"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.avito.android.lib.design.spinner.Spinner
            android:layout_gravity="center"
            android:id="@+id/action_menu_item_spinner"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <TextView
        android:gravity="center_vertical"
        android:id="@+id/action_menu_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:textAlignment="center"/>
</LinearLayout>
