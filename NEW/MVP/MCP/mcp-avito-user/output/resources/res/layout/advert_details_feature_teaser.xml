<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="@dimen/content_horizontal_padding"
    android:paddingRight="@dimen/content_horizontal_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="?attr/textHeadingLarge"
        android:id="@+id/title"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/advert_details_feature_teaser_icon_padding"/>
    <TextView
        android:textAppearance="?attr/textBody"
        android:textColor="@color/design_text_color_black_selector"
        android:id="@+id/subtitle"
        android:paddingTop="@dimen/advert_details_feature_teaser_subtitle_padding_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/options_container"
        android:paddingTop="@dimen/advert_details_feature_teaser_options_container_top_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/advert_details_feature_teaser_options_top_gap"/>
    <TextView
        android:id="@+id/link"
        android:paddingTop="@dimen/advert_details_feature_teaser_link_top_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.Avito.AdvertDetails.Body.Blue"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/button"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        style="?attr/buttonSecondaryLarge"/>
</LinearLayout>
