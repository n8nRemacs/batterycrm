<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/selectableItemBackground"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp"
    android:paddingVertical="16dp">
    <FrameLayout
        android:id="@+id/avatar_container"
        android:background="@drawable/empty_avatar_bg"
        android:layout_width="62dp"
        android:layout_height="62dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/empty_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="?attr/ic_logo24"
            app:tint="?attr/white"/>
    </FrameLayout>
    <FrameLayout
        android:gravity="start"
        android:id="@+id/title_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="16dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toRightOf="@+id/avatar_container"
        app:layout_constraintRight_toLeftOf="@+id/note_button"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:textAppearance="?attr/textH5"
            android:ellipsize="end"
            android:gravity="start"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"/>
    </FrameLayout>
    <com.avito.android.lib.design.badge.Badge
        android:id="@+id/status_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:layout_constraintRight_toRightOf="@+id/title_container"
        app:layout_constraintTop_toTopOf="@+id/title_container"
        style="?attr/badgeEmptyBlackM"/>
    <com.google.android.material.internal.CheckableImageButton
        android:id="@+id/favorites_button"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/advert_item_rich_job_favorite"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.google.android.material.internal.CheckableImageButton
        android:id="@+id/comparison_button"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_width="28dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/compare_button"
        app:layout_constraintRight_toRightOf="@+id/favorites_button"
        app:layout_constraintTop_toBottomOf="@+id/favorites_button"/>
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/note_button"
        android:background="@drawable/bg_btn_circle_gray_rich"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:tint="?attr/black"
        app:layout_constraintRight_toLeftOf="@+id/favorites_button"
        app:layout_constraintTop_toTopOf="@+id/favorites_button"
        app:srcCompat="?attr/ic_more24"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:ellipsize="end"
        android:id="@+id/subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:maxLines="2"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="@+id/title_container"
        app:layout_constraintRight_toLeftOf="@+id/favorites_button"
        app:layout_constraintTop_toBottomOf="@+id/title_container"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="subtitle,avatar_container"/>
    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/badges_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="4dp"
        app:alignContent="flex_start"
        app:alignItems="flex_start"
        app:flexDirection="row"
        app:flexWrap="wrap"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barrier"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:textColor="?attr/gray54"
        android:ellipsize="end"
        android:id="@+id/manager_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:maxLines="1"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/badges_layout"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:ellipsize="end"
        android:id="@+id/description_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:maxLines="3"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/manager_name"/>
    <TextView
        android:textAppearance="?attr/textS20"
        android:textColor="?attr/gray54"
        android:ellipsize="end"
        android:id="@+id/description_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:maxLines="2"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description_1"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/chat_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/paid_cvs_chat"
        android:layout_marginEnd="6dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/call_button"
        app:layout_constraintTop_toBottomOf="@+id/description_2"
        app:layout_goneMarginEnd="0dp"
        style="?attr/buttonDefaultSmall"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/call_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/paid_cvs_call"
        app:layout_constraintLeft_toRightOf="@+id/chat_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description_2"
        style="?attr/buttonDefaultSmall"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/buy_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/paid_cvs_buy"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description_2"
        style="?attr/buttonDefaultSmall"/>
    <com.avito.android.lib.design.spinner.Spinner
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        style="?attr/spinnerDarkLarge"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/error_layout"
        android:paddingLeft="@dimen/screen_component_horizontal_padding"
        android:paddingRight="@dimen/screen_component_horizontal_padding"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:textAppearance="?attr/textM10"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/paid_cvs_error"
            android:maxLines="2"
            android:layout_marginEnd="16dp"/>
        <com.avito.android.lib.design.button.Button
            android:id="@+id/refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?attr/buttonPrimarySmall"/>
    </LinearLayout>
    <View
        android:id="@+id/blur_view"
        android:background="?attr/whiteAlpha64"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
