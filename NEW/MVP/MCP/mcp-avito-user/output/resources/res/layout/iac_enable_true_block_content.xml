<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/phone_list_redesign_iac_enable_banner_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/numbers_and_calls_iac_calls"
        android:layout_marginStart="6dp"
        app:layout_constraintBottom_toTopOf="@+id/phone_list_redesign_iac_enable_banner_info"
        app:layout_constraintStart_toEndOf="@+id/phone_list_redesign_iac_enable_banner_img"
        app:layout_constraintTop_toTopOf="@+id/phone_list_redesign_iac_enable_banner_img"
        app:layout_constraintVertical_chainStyle="packed"
        style="?attr/textH50"/>
    <TextView
        android:id="@+id/phone_list_redesign_iac_enable_banner_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/numbers_and_calls_enable"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/phone_list_redesign_iac_enable_banner_title"
        app:layout_constraintTop_toBottomOf="@+id/phone_list_redesign_iac_enable_banner_title"
        style="?attr/textS20"/>
    <ImageView
        android:id="@+id/phone_list_redesign_iac_enable_banner_img"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_iac_enable_dialog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/phone_list_redesign_iac_enable_banner_arrow"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:rotation="90"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_expand_16"/>
</androidx.constraintlayout.widget.ConstraintLayout>
