<?xml version="1.0" encoding="utf-8"?>
<com.avito.android.lib.design.skeleton.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:shimmer="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:id="@+id/category_edit_skeleton_root"
    android:background="?attr/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/publish_container_horizontal_padding"
    android:paddingVertical="12dp"
    shimmer:shimmer_duration="1500">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_gravity="center_vertical"
                android:background="@drawable/design_shimmer_textview_bg"
                android:layout_width="230dp"
                android:layout_height="12dp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <View
                android:background="@drawable/design_shimmer_drawable_bg"
                android:layout_width="22dp"
                android:layout_height="22dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp">
            <View
                android:layout_gravity="center_vertical"
                android:background="@drawable/design_shimmer_textview_bg"
                android:layout_width="150dp"
                android:layout_height="12dp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <View
                android:background="@drawable/design_shimmer_drawable_bg"
                android:layout_width="22dp"
                android:layout_height="22dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp">
            <View
                android:layout_gravity="center_vertical"
                android:background="@drawable/design_shimmer_textview_bg"
                android:layout_width="260dp"
                android:layout_height="12dp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <View
                android:background="@drawable/design_shimmer_drawable_bg"
                android:layout_width="22dp"
                android:layout_height="22dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp">
            <View
                android:layout_gravity="center_vertical"
                android:background="@drawable/design_shimmer_textview_bg"
                android:layout_width="100dp"
                android:layout_height="12dp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <View
                android:background="@drawable/design_shimmer_drawable_bg"
                android:layout_width="22dp"
                android:layout_height="22dp"/>
        </LinearLayout>
    </LinearLayout>
</com.avito.android.lib.design.skeleton.shimmer.ShimmerFrameLayout>
