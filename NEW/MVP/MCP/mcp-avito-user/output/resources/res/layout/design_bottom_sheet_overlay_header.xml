<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/bottom_sheet_overlay_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/overlay_thumb_layout"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="16dp">
        <ImageView
            android:layout_gravity="top|center_horizontal"
            android:id="@+id/overlay_header_thumb"
            android:visibility="visible"
            android:layout_width="?attr/bottomSheet_thumbWidth"
            android:layout_height="?attr/bottomSheet_thumbHeight"
            android:layout_marginTop="?attr/bottomSheet_thumbMarginTop"
            android:layout_marginBottom="?attr/bottomSheet_thumbMarginBottom"
            android:src="@drawable/design_bottom_sheet_thumb_overlay"
            app:tint="?attr/bottomSheet_overlayThumbColor"/>
    </FrameLayout>
    <ImageView
        android:layout_gravity="end|center_vertical"
        android:id="@+id/bottom_sheet_close_button"
        android:background="@drawable/design_icon_close_ripple_right_cross"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginTop="?attr/bottomSheet_overlayRightCrossMarginTop"
        android:layout_marginEnd="?attr/bottomSheet_overlayRightCrossMarginRight"/>
</LinearLayout>
