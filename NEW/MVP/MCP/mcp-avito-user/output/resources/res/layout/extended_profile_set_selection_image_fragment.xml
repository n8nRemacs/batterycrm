<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/extended_profile_set_selection_image_root"
    android:background="?attr/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.avito.android.lib.design.nav_bar.NavBar
        android:id="@+id/extended_profile_set_selection_image_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textH20"
        android:id="@+id/extended_profile_set_selection_image_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/extended_profile_set_selection_image_title"
        android:layout_marginHorizontal="@dimen/extended_profile_set_selection_image_horizontal_margin"
        app:layout_constraintTop_toBottomOf="@+id/extended_profile_set_selection_image_nav_bar"/>
    <ImageView
        android:id="@+id/extended_profile_set_selection_background_image_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.5"
        app:layout_constraintBottom_toBottomOf="@+id/extended_profile_set_selection_background_image_2"
        app:layout_constraintStart_toEndOf="@+id/extended_profile_set_selection_background_image_2"
        app:layout_constraintTop_toTopOf="@+id/extended_profile_set_selection_background_image_2"
        app:srcCompat="@drawable/bg_set_image_3"/>
    <ImageView
        android:id="@+id/extended_profile_set_selection_background_image_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="66dp"
        android:layout_marginStart="177.5dp"
        app:layout_constraintStart_toStartOf="@+id/extended_profile_set_selection_image_start_barrier"
        app:layout_constraintTop_toBottomOf="@+id/extended_profile_set_selection_image_title"
        app:srcCompat="@drawable/bg_set_image_2"/>
    <ImageView
        android:id="@+id/extended_profile_set_selection_image_photo_uploader_boarder"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/extended_profile_set_selection_image_title"
        app:srcCompat="@drawable/bg_append_boarder"/>
    <com.avito.android.lib.design.photo_uploader_appending.PhotoUploaderAppending
        android:id="@+id/extended_profile_set_selection_image_photo_uploader_appending"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/extended_profile_set_selection_image_photo_uploader_boarder"
        app:layout_constraintEnd_toEndOf="@+id/extended_profile_set_selection_image_photo_uploader_boarder"
        app:layout_constraintStart_toStartOf="@+id/extended_profile_set_selection_image_photo_uploader_boarder"
        app:layout_constraintTop_toTopOf="@+id/extended_profile_set_selection_image_photo_uploader_boarder"
        app:photoUploaderAppending_backgroundColor="?attr/transparentWhite"
        app:photoUploaderAppending_cornerRadius="24dp"
        app:photoUploaderAppending_rippleColor="@null"
        app:photoUploaderAppending_text="@string/extended_profile_set_selection_image_add_image_title"
        app:photoUploaderAppending_textAppearance="?attr/textM20"/>
    <FrameLayout
        android:id="@+id/extended_profile_set_selection_image_container"
        android:background="?attr/white"
        android:visibility="visible"
        android:layout_width="182dp"
        android:layout_height="182dp"
        android:layout_marginTop="47dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/extended_profile_set_selection_image_title">
        <com.avito.android.lib.design.photo_uploader_image.PhotoUploaderImage
            android:layout_gravity="center"
            android:id="@+id/extended_profile_set_selection_image_image"
            android:layout_width="178dp"
            android:layout_height="178dp"
            app:layout_constraintDimensionRatio="1:1"
            app:photoUploaderImage_cornerRadius="24dp"
            app:photoUploaderImage_overlayColor="@color/expected_black_alpha_4"
            app:photoUploaderImage_rippleColor="@null"/>
    </FrameLayout>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/extended_profile_set_selection_image_start_barrier"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:barrierDirection="start"
        app:constraint_referenced_ids="extended_profile_set_selection_image_photo_uploader_boarder, extended_profile_set_selection_image_container"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/extended_profile_set_selection_image_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="256dp"
        android:text="@string/extended_profile_set_selection_image_description"
        android:layout_marginHorizontal="@dimen/extended_profile_set_selection_image_horizontal_margin"
        app:layout_constraintTop_toBottomOf="@+id/extended_profile_set_selection_image_title"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/extended_profile_set_selection_image_skip_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/extended_profile_set_selection_image_skip_button"
        android:layout_marginHorizontal="@dimen/extended_profile_set_selection_image_horizontal_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        style="?attr/buttonSecondaryLarge"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/extended_profile_set_selection_image_remove_button"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/extended_profile_set_selection_image_remove_button"
        android:layout_marginStart="@dimen/extended_profile_set_selection_image_horizontal_margin"
        android:layout_marginEnd="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/extended_profile_set_selection_image_continue_button"
        app:layout_constraintStart_toStartOf="parent"
        style="?attr/buttonSecondaryLarge"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/extended_profile_set_selection_image_continue_button"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/extended_profile_set_selection_image_continue_button"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="@dimen/extended_profile_set_selection_image_horizontal_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/extended_profile_set_selection_image_remove_button"
        style="?attr/buttonPrimaryLarge"/>
</androidx.constraintlayout.widget.ConstraintLayout>
