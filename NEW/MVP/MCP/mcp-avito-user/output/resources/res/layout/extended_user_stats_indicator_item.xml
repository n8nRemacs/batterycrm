<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/cl_indicator_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="18dp">
    <Space
        android:id="@+id/space_indicator"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/v_indicator_dotted"
        android:background="@drawable/dotted"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toStartOf="@+id/ll_indicator_counts"
        app:layout_constraintStart_toStartOf="@+id/tv_indicator_title"
        app:layout_constraintTop_toBottomOf="@+id/space_indicator"/>
    <TextView
        android:textAppearance="?attr/textM2"
        android:id="@+id/tv_indicator_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/ll_indicator_counts"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/space_indicator"/>
    <LinearLayout
        android:id="@+id/ll_indicator_counts"
        android:background="?attr/selectableItemBackground"
        android:padding="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/space_indicator">
        <TextView
            android:textAppearance="?attr/textS1"
            android:id="@+id/tv_indicator_percent"
            android:paddingRight="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textAppearance="?attr/textH4"
            android:id="@+id/tv_indicator_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:textAppearance="?attr/textBody"
        android:id="@+id/tv_indicator_dialog"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_indicator_title"/>
</androidx.constraintlayout.widget.ConstraintLayout>
