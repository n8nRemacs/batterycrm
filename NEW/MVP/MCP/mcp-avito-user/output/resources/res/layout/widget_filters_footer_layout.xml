<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:background="@drawable/footer_rounded_corners_bg"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="?attr/textM20"
        android:textColor="?attr/gray54"
        android:ellipsize="end"
        android:layout_gravity="center"
        android:id="@+id/footer_hint_tv"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:maxLines="1"/>
    <com.avito.android.lib.design.chips.ui.Chips
        android:id="@+id/flex_search_chips"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="2dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="12dp"
        android:paddingVertical="10dp">
        <com.avito.android.lib.design.button.Button
            android:id="@+id/footer_reset_btn"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="?attr/buttonSecondaryLarge"/>
        <Space
            android:id="@+id/footer_buttons_space"
            android:layout_width="7dp"
            android:layout_height="wrap_content"/>
        <com.avito.android.lib.design.button.Button
            android:id="@+id/footer_action_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="?attr/buttonPrimaryLarge"/>
    </LinearLayout>
</LinearLayout>
