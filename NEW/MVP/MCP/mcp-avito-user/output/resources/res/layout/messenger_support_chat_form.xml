<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/messenger_support_chat_form_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        app:layout_constraintTop_toTopOf="parent"
        layout="@layout/toolbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/messenger_support_chat_form_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/messenger_support_chat_form_title"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                style="?attr/textHeadingLarge"/>
            <TextView
                android:textColor="@color/design_text_color_black_selector"
                android:id="@+id/messenger_support_chat_form_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/messenger_support_chat_form_subtitle"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                style="?attr/textBody"/>
            <com.avito.android.lib.design.input.Input
                android:gravity="start|top"
                android:id="@+id/messenger_support_chat_form_input"
                android:background="?attr/gray4"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:hint="@string/messenger_support_chat_form_input_hint"
                android:minLines="5"
                android:maxLength="1000"
                android:inputType="textMultiLine"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:autofillHints=""
                app:input_clearButton="false"/>
            <com.avito.android.lib.design.button.Button
                android:enabled="false"
                android:id="@+id/messenger_support_chat_form_send_button"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:text="@string/messenger_support_chat_form_send_button"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                style="?attr/buttonPrimaryMedium"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
