<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/seller_item_root"
    android:background="@drawable/bg_btn_flat"
    android:paddingTop="16dp"
    android:paddingRight="12dp"
    android:paddingBottom="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/user_avatar"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_marginLeft="14dp"
            app:actualImageScaleType="centerCrop"
            app:backgroundImage="?attr/gray8"
            app:placeholderImage="@drawable/ic_user_28_gray"
            app:placeholderImageScaleType="center"
            app:roundAsCircle="true"/>
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/shop_avatar"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_marginLeft="14dp"
            app:actualImageScaleType="fitCenter"
            app:backgroundImage="?attr/gray8"
            app:placeholderImage="@drawable/ic_shop_28_gray"
            app:placeholderImageScaleType="center"
            app:roundWithOverlayColor="?attr/gray4"
            app:roundedCornerRadius="4dp"/>
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="73dp">
            <TextView
                android:ellipsize="end"
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                style="?attr/textH50"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="13sp"
                    android:textColor="?attr/gray48"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:id="@+id/subtitle"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:maxLines="1"
                    style="?attr/textS10"/>
                <ImageView
                    android:layout_gravity="bottom"
                    android:id="@+id/new_items_indicator"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingBottom="4dp"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/new_items_indicator_red"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/btn_more"
        android:background="@drawable/bg_btn_circle_gray_rich"
        android:duplicateParentState="false"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_more_horizontal_24"
        android:layout_marginStart="20dp"/>
</LinearLayout>
