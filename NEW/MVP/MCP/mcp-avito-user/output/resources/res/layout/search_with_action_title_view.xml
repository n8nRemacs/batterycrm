<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/search_with_action_text_container"
        android:background="@drawable/search_with_action_title_text_container_ripple_bg"
        android:paddingTop="2dp"
        android:paddingBottom="6dp"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="80dp"
        android:paddingHorizontal="6dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="?attr/textH60"
                android:ellipsize="end"
                android:id="@+id/search_with_action_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"/>
            <TextView
                android:textAppearance="?attr/textH60"
                android:id="@+id/search_with_action_title_icon"
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:minWidth="10dp"
                android:layout_marginStart="4dp"/>
        </LinearLayout>
        <TextView
            android:textAppearance="?attr/textS20"
            android:ellipsize="end"
            android:layout_gravity="center"
            android:id="@+id/search_with_action_subtitle_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="end|center_vertical"
        android:orientation="horizontal"
        android:id="@+id/search_with_action_icons_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp">
        <FrameLayout
            android:layout_gravity="center"
            android:id="@+id/search_with_action_filters_icon"
            android:background="@drawable/search_with_action_title_icon_ripple_bg"
            android:padding="6dp"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:srcCompat="?attr/ic_filter24"
                app:tint="?attr/black"/>
        </FrameLayout>
        <FrameLayout
            android:layout_gravity="center"
            android:id="@+id/search_with_action_search_icon"
            android:background="@drawable/search_with_action_title_icon_ripple_bg"
            android:padding="6dp"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:srcCompat="?attr/ic_search24"
                app:tint="?attr/black"/>
        </FrameLayout>
    </LinearLayout>
</FrameLayout>
