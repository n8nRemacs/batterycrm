<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/onboarding_quiz_up_buttons_margin_start">
        <com.avito.android.fresco.SimpleDraweeView
            android:id="@+id/title_image"
            android:visibility="gone"
            android:duplicateParentState="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/onboarding_quiz_up_buttons_margin_vertical"
            app:actualImageScaleType="centerCrop"/>
        <ImageView
            android:layout_gravity="start|top"
            android:id="@+id/close_button"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/content_description_close"
            android:layout_marginVertical="@dimen/onboarding_quiz_up_buttons_margin_vertical"
            app:srcCompat="@drawable/ic_close_24"/>
        <ImageView
            android:layout_gravity="start|top"
            android:id="@+id/back_button"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:focusable="true"
            android:visibility="gone"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/content_description_back"
            android:layout_marginVertical="@dimen/onboarding_quiz_up_buttons_margin_vertical"
            app:srcCompat="@drawable/ic_back_24"/>
        <TextView
            android:textAppearance="?attr/textH5"
            android:ellipsize="end"
            android:layout_gravity="top|center_horizontal"
            android:id="@+id/page_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/onboarding_quiz_up_buttons_margin_vertical"
            android:layout_marginBottom="@dimen/onboarding_quiz_page_number_margin_bottom"
            android:maxLines="1"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <TextView
        android:textAppearance="?attr/textH3"
        android:ellipsize="end"
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/onboarding_quiz_margin_horizontal"
        android:layout_marginVertical="@dimen/onboarding_quiz_question_margin_vertical"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/onboarding_quiz_answers_margin_top"
        android:layout_marginBottom="@dimen/onboarding_quiz_answers_margin_bottom"
        android:layout_weight="1"
        android:layout_marginHorizontal="@dimen/onboarding_quiz_margin_horizontal">
        <com.avito.android.lib.design.chips.Chips
            android:id="@+id/answers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:chips_displayType="multipleLines"
            app:chips_selectStrategy="multiple"
            style="?attr/chipsLarge"/>
    </ScrollView>
    <com.avito.android.lib.design.button.Button
        android:layout_gravity="start|bottom"
        android:id="@+id/action_button"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginBottom="@dimen/onboarding_quiz_action_button_margin_bottom"
        android:layout_marginHorizontal="@dimen/onboarding_quiz_margin_horizontal"
        style="?attr/buttonPrimaryLarge"/>
</LinearLayout>
