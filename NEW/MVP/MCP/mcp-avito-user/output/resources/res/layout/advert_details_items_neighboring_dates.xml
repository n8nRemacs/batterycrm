<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:id="@+id/neighboring_dates"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/content"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp">
            <TextView
                android:textAppearance="?attr/textH50"
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:textAppearance="?attr/textM20"
                android:id="@+id/change_dates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/multiplyChips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="6dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/fewChips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="6dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/shimmer"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">
        <com.avito.android.lib.design.skeleton.shimmer.ShimmerFrameLayout
            android:background="@drawable/advert_details_items_bg_neighboring_dates_shimmer_title"
            android:layout_width="164dp"
            android:layout_height="10dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="4dp"
            app:shimmer_animationDuration="2500"
            app:shimmer_autostart="true"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">
            <com.avito.android.lib.design.skeleton.shimmer.ShimmerFrameLayout
                android:background="@drawable/advert_details_items_bg_neighboring_dates_shimmer_chip"
                android:layout_width="111dp"
                android:layout_height="62dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="6dp"
                app:shimmer_animationDuration="2500"
                app:shimmer_autostart="true"/>
            <com.avito.android.lib.design.skeleton.shimmer.ShimmerFrameLayout
                android:background="@drawable/advert_details_items_bg_neighboring_dates_shimmer_chip"
                android:layout_width="111dp"
                android:layout_height="62dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="6dp"
                app:shimmer_animationDuration="2500"
                app:shimmer_autostart="true"/>
            <com.avito.android.lib.design.skeleton.shimmer.ShimmerFrameLayout
                android:background="@drawable/advert_details_items_bg_neighboring_dates_shimmer_chip"
                android:layout_width="111dp"
                android:layout_height="62dp"
                android:layout_marginTop="6dp"
                app:shimmer_animationDuration="2500"
                app:shimmer_autostart="true"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
