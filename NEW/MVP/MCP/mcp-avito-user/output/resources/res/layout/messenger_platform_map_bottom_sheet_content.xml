<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:clipChildren="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/messenger_map_bottom_sheet_description_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/messenger_map_bottom_sheet_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-49dp">
            <TextView
                android:id="@+id/messenger_map_bottom_sheet_title"
                android:paddingTop="8dp"
                android:paddingBottom="10dp"
                android:focusable="true"
                android:visibility="gone"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?attr/textHeadingLarge"/>
            <com.avito.android.lib.design.button.Button
                android:id="@+id/messenger_map_bottom_sheet_action_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="16dp"
                android:text="@string/messenger_platform_map_create_route_button"
                style="?attr/buttonDefaultMedium"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:layout_gravity="top"
        android:orientation="vertical"
        android:id="@+id/messenger_map_bottom_sheet_collapsed_title_container"
        android:background="@drawable/bg_avito_bottom_sheet"
        android:focusable="true"
        android:visibility="invisible"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:ellipsize="end"
            android:id="@+id/messenger_map_bottom_sheet_collapsed_title"
            android:paddingLeft="16dp"
            android:paddingTop="32dp"
            android:paddingRight="16dp"
            android:paddingBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            style="?attr/textHeadingLarge"/>
        <View
            android:id="@+id/messenger_map_bottom_sheet_title_divider"
            android:background="?attr/gray12"
            android:layout_width="match_parent"
            android:layout_height="0.25dp"/>
    </LinearLayout>
</FrameLayout>
