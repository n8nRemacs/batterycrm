<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/double_row_big_visual_rubricator_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <HorizontalScrollView
        android:id="@+id/horizontal_scroll_view"
        android:scrollbars="none"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/horizontal_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/vertical_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="13dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/row_first"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/row_second"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/big_visual_rubricator_recycler"
        android:visibility="gone"
        android:clipChildren="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/bx_content_widget_visual_rubricator_edge_offset"/>
    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/flexbox_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-6dp"
        android:paddingHorizontal="@dimen/bx_content_widget_visual_rubricator_edge_offset"
        app:flexDirection="row"
        app:flexWrap="wrap"/>
</LinearLayout>
