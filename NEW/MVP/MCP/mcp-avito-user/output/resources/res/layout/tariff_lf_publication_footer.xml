<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:id="@+id/tariff_lf_publication_footer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <include
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        layout="@layout/tariff_lf_publication_price_skeleton_item"/>
    <com.avito.android.lib.design.description_list.parameter_line.item.DescriptionParameterItem
        android:id="@+id/tariff_lf_publication_footer_dotted_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        app:descriptionParameterItem_dotsOffset="2dp"
        app:descriptionParameterItem_leftTextAppearance="?attr/textH50"
        app:descriptionParameterItem_leftTextWeight="10"
        app:descriptionParameterItem_rightTextAppearance="?attr/textH50"
        app:descriptionParameterItem_rightTextWeight="0"
        app:layout_constraintEnd_toStartOf="@+id/tariff_lf_publication_footer_old_price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.avito.android.lib.design.strikethrough.StrikethroughTextView
        android:id="@+id/tariff_lf_publication_footer_old_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tariff_lf_publication_footer_dotted_text"
        app:layout_constraintEnd_toStartOf="@+id/tariff_lf_publication_footer_price"
        app:strikethrough_textStyle="?attr/textM20"
        app:strikethrough_tint="?attr/red600"/>
    <TextView
        android:textAppearance="?attr/textH50"
        android:id="@+id/tariff_lf_publication_footer_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tariff_lf_publication_footer_old_price"
        app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.constraintlayout.widget.Barrier
        android:orientation="vertical"
        android:id="@+id/tariff_lf_publication_footer_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="tariff_lf_publication_footer_dotted_text,tariff_lf_publication_footer_old_price,tariff_lf_publication_footer_price,tariff_lf_publication_price_skeleton_item "/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/tariff_lf_publication_footer_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tariff_lf_publication_footer_barrier"
        style="?attr/buttonPrimaryLarge"/>
</androidx.constraintlayout.widget.ConstraintLayout>
