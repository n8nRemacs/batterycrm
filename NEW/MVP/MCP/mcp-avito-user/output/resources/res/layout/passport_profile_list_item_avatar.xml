<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/passport_profile_list_item_avatar_root"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="48dp"
    android:layout_height="48dp">
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_gravity="center"
        android:id="@+id/passport_profile_list_item_avatar_avatar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:roundAsCircle="true"/>
    <ImageView
        android:layout_gravity="end|bottom"
        android:id="@+id/passport_profile_list_item_pending"
        android:background="@drawable/passport_profiles_status_background"
        android:visibility="gone"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="?attr/ic_time16"
        app:tint="?attr/black"/>
    <ImageView
        android:layout_gravity="end|bottom"
        android:id="@+id/passport_profile_list_item_error"
        android:background="@drawable/passport_profiles_status_background"
        android:visibility="gone"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="?attr/ic_attentionRound16"
        app:tint="?attr/red"/>
</FrameLayout>
