<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/search_suggest_root"
    android:background="?attr/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/edge_to_edge_fake_status_bar"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/input_container"
        android:paddingTop="10dp"
        android:paddingBottom="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.avito.android.lib.design.input.Input
            android:id="@+id/search_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:imeOptions="flagNoExtractUi|actionSearch"
            style="?attr/inputDefaultL"/>
        <TextView
            android:textColor="?attr/black"
            android:layout_gravity="center_vertical"
            android:id="@+id/dismiss_text_view"
            android:paddingBottom="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_suggest_dismiss"
            android:layout_marginHorizontal="@dimen/search_suggest_content_horizontal_offset"
            style="?attr/textM1"/>
    </LinearLayout>
    <com.avito.android.lib.design.chips.Chips
        android:id="@+id/bubbles_recycler_view"
        android:background="?attr/white"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/search_suggest_content_horizontal_offset"
        app:chips_childHorizontalSpacing="8dp"
        app:chips_childVerticalSpacing="8dp"
        app:chips_displayType="singleLineScrollable"
        app:chips_keepLastSelected="false"
        app:chips_notActiveAppearance="?attr/buttonSecondarySmall"
        app:chips_selectStrategy="single"
        app:chips_selectedAppearance="?attr/buttonSecondarySmall"
        app:chips_unselectedAppearance="?attr/buttonSecondarySmall"
        style="?attr/chipsSmall"/>
    <com.avito.android.lib.design.chips.Chips
        android:id="@+id/history_chips"
        android:background="?attr/white"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        app:chips_childHorizontalSpacing="8dp"
        app:chips_childVerticalSpacing="8dp"
        app:chips_displayType="multipleLines"
        app:chips_keepLastSelected="false"
        app:chips_maxLines="3"
        app:chips_notActiveAppearance="?attr/buttonSecondarySmall"
        app:chips_selectStrategy="single"
        app:chips_selectedAppearance="?attr/buttonSecondarySmall"
        app:chips_unselectedAppearance="?attr/buttonSecondarySmall"
        style="?attr/chipsSmall"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/suggests_recycler_view"
        android:background="?attr/white"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingVertical="@dimen/search_suggest_recycler_vertical_offset"/>
</LinearLayout>
