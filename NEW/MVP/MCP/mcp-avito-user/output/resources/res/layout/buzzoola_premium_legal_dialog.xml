<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/bg_buzzoola_premium_legal_dialog"
    android:paddingTop="20dp"
    android:paddingBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="20dp">
    <TextView
        android:textAppearance="?attr/textBody"
        android:textSize="16sp"
        android:textColor="?attr/black"
        android:id="@+id/legal_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:lineHeight="22dp"/>
    <TextView
        android:textAppearance="?attr/textBodySmall"
        android:textSize="11sp"
        android:textColor="?attr/gray44"
        android:id="@+id/juristic_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:lineHeight="14dp"/>
    <Button
        android:textSize="13sp"
        android:textColor="?attr/blue600"
        android:layout_gravity="end"
        android:id="@+id/btn_ok"
        android:background="@color/common_transparent_black"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:text="@string/ok"
        app:fontFamily="?attr/fontRegular"/>
</LinearLayout>
