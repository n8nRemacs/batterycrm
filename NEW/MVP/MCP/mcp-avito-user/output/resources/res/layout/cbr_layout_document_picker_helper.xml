<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/cbr_bg_iddoc_warning"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="@dimen/cbr_margin_medium">
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/cbr_divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cbr_bg_rounded_divider"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/cbr_brief_details"
        android:padding="@dimen/cbr_margin_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cbr_divider">
        <ru.cyberity.cbr.core.widget.CBRH2TextView
            android:gravity="center"
            android:id="@+id/cbr_helper_title"
            android:paddingLeft="@dimen/cbr_margin_medium"
            android:paddingRight="@dimen/cbr_margin_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <FrameLayout
            android:id="@+id/cbr_helper_details_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ru.cyberity.cbr.core.widget.CBRBodyTextView
                android:gravity="center"
                android:id="@+id/cbr_helper_brief"
                android:paddingLeft="@dimen/cbr_margin_medium"
                android:paddingRight="@dimen/cbr_margin_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/cbr_margin_small"/>
            <ru.cyberity.cbr.core.widget.CBRBodyTextView
                android:gravity="center"
                android:id="@+id/cbr_helper_details"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/cbr_margin_small"/>
        </FrameLayout>
    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/cbr_margin_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbr_divider">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/cbr_intro_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/cbr_margin_medium"
            android:paddingEnd="@dimen/cbr_margin_medium"/>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
