<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/item_price"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/content_horizontal_padding"
        android:layout_marginTop="5dp"
        android:layout_marginRight="@dimen/content_horizontal_padding"
        app:alignItems="flex_end"
        app:flexWrap="wrap">
        <TextView
            android:textAppearance="?attr/textH1"
            android:id="@+id/current_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textIsSelectable="true"
            android:layout_marginEnd="8dp"/>
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/hint_icon"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="?attr/ic_help24"
            android:layout_marginEnd="4dp"
            app:tint="@color/expected_gray_24"/>
    </com.google.android.flexbox.FlexboxLayout>
    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/normalized_price_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/content_horizontal_padding"
        android:layout_marginTop="-4dp"
        android:layout_marginRight="@dimen/content_horizontal_padding"
        app:alignItems="flex_end"
        app:flexWrap="wrap">
        <com.avito.android.lib.design.strikethrough.StrikethroughTextView
            android:textAppearance="?attr/textM1"
            android:textSize="@dimen/advert_old_price_standard_size"
            android:id="@+id/old_price"
            android:visibility="visible"
            android:duplicateParentState="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            app:strikethrough_show="true"
            app:strikethrough_tint="?attr/red600"/>
        <TextView
            android:textAppearance="?attr/textM1"
            android:textSize="@dimen/advert_old_price_standard_size"
            android:textColor="?attr/red600"
            android:id="@+id/old_price_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"/>
        <TextView
            android:textAppearance="?attr/textM2"
            android:textColor="?attr/black"
            android:id="@+id/divider"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/advert_details_items_price_divider"
            android:layout_marginEnd="6dp"/>
        <TextView
            android:textAppearance="?attr/textM1"
            android:textSize="@dimen/advert_old_price_standard_size"
            android:textColor="?attr/black"
            android:id="@+id/price_normalized_with_discount"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </com.google.android.flexbox.FlexboxLayout>
</LinearLayout>
