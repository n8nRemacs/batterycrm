<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="256dp"
    android:layout_marginTop="16dp"
    android:layout_marginHorizontal="16dp">
    <com.avito.android.fresco.SimpleDraweeView
        android:id="@+id/selector_card_image"
        android:layout_width="match_parent"
        android:layout_height="124dp"
        app:actualImageScaleType="fitCenter"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/selector_card_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:maxLines="2"
        android:textAlignment="center"/>
    <TextView
        android:textAppearance="?attr/textS20"
        android:textColor="?attr/text_secondary"
        android:gravity="center"
        android:id="@+id/selector_card_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:textAlignment="center"/>
</LinearLayout>
