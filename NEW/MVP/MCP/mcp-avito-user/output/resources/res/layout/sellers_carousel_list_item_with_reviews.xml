<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="vertical"
    android:id="@+id/sellers_carousel_list_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="6dp">
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_gravity="center_horizontal"
        android:id="@+id/icon"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="12dp"
        android:scaleType="fitEnd"
        app:overlayImage="@color/logo_mask"
        app:placeholderImage="@drawable/avatar_placeholder"
        app:roundedCornerRadius="100dp"/>
    <TextView
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:id="@+id/title"
        android:duplicateParentState="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:maxWidth="132dp"
        android:minWidth="90dp"
        android:maxLines="2"
        style="?attr/textH70"/>
    <LinearLayout
        android:theme="@style/Theme.DesignSystem.Re23"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:id="@+id/sellers_carousel_reviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/seller_review_star"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:foreground="@drawable/ic_rating_star_small"
            android:foregroundGravity="center"
            android:layout_marginVertical="3dp"/>
        <TextView
            android:textColor="?attr/black"
            android:ellipsize="end"
            android:id="@+id/seller_review_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textAlignment="center"
            android:layout_marginStart="4sp"
            style="?attr/textS20"/>
        <TextView
            android:textColor="?attr/gray54"
            android:ellipsize="end"
            android:id="@+id/seller_review_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textAlignment="center"
            android:layout_marginStart="2sp"
            style="?attr/textS20"/>
    </LinearLayout>
</LinearLayout>
