<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/re_agent_profile_create_landing_action_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="46dp"
        android:scaleType="fitCenter"/>
    <TextView
        android:textAppearance="?attr/textH20"
        android:id="@+id/re_agent_profile_create_landing_action_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/re_agent_profile_create_landing_action_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="16dp"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/re_agent_profile_create_landing_action_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="16dp"
        style="?attr/buttonPrimaryLarge"/>
</LinearLayout>
