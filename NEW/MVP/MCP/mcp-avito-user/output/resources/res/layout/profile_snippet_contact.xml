<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="@dimen/profile_snippet_horizontal_padding"
    android:paddingRight="@dimen/profile_snippet_horizontal_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:ellipsize="end"
        android:id="@+id/contact_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        style="?attr/textBody"/>
    <TextView
        android:textColor="?attr/gray48"
        android:ellipsize="end"
        android:id="@+id/contact_subtitle"
        android:paddingTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/profile_snippet_contact_name"
        android:maxLines="1"
        style="?attr/textBodySmall"/>
</LinearLayout>
