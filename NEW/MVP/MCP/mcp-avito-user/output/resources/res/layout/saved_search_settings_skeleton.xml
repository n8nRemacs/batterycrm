<?xml version="1.0" encoding="utf-8"?>
<com.avito.android.lib.design.skeleton.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shimmer_root"
    android:layout_width="match_parent"
    android:layout_height="163dp"
    app:shimmer_auto_start="true"
    app:shimmer_color="?attr/white"
    app:shimmer_duration="1000">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/saved_search_settings_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/title"
            android:background="@drawable/saved_search_shimmer_background"
            android:layout_width="185dp"
            android:layout_height="20dp"
            app:layout_constrainedWidth="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <View
            android:id="@+id/push_switcher"
            android:background="@drawable/saved_search_shimmer_background"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="19dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title"/>
        <View
            android:id="@+id/email_switcher"
            android:background="@drawable/saved_search_shimmer_background"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/push_switcher"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.avito.android.lib.design.skeleton.shimmer.ShimmerFrameLayout>
