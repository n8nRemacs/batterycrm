<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textColor="?attr/black"
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/campaigns_sale_edit_mode_header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="?attr/textH4"/>
    <ImageButton
        android:id="@+id/header_help_icon"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="?attr/ic_help20"
        android:layout_marginStart="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/header"
        app:layout_constraintLeft_toRightOf="@+id/header"
        app:layout_constraintTop_toTopOf="@+id/header"
        app:tint="?attr/gray28"/>
    <ImageButton
        android:id="@+id/header_action_icon"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="?attr/ic_delete20"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?attr/black"/>
    <com.avito.android.lib.design.input.Input
        android:id="@+id/discount_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="@string/campaigns_sale_input_hint"
        android:inputType="number"
        android:imeOptions="actionDone"
        app:input_clearButton="true"
        app:input_formatterType="percent"
        app:input_iconRightColor="?attr/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header"
        style="?attr/inputWhiteBackgroundM"/>
    <TextView
        android:textColor="?attr/red600"
        android:id="@+id/input_validation_text"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/discount_input"
        style="?attr/textS1"/>
    <com.avito.android.lib.design.chips.Chips
        android:id="@+id/chips_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:chips_childHorizontalSpacing="6dp"
        app:chips_displayType="singleLineScrollable"
        app:chips_keepLastSelected="true"
        app:chips_unselectedAppearance="@style/Discount.Chips.NormalStyle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_validation_text"
        style="?attr/chipsSmallRound"/>
    <TextView
        android:id="@+id/input_bonus_text"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawablePadding="@dimen/drawable_padding"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chips_container"
        style="?attr/textS20"/>
    <TextView
        android:textColor="?attr/black"
        android:id="@+id/items_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="@string/campaigns_sale_items_header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_bonus_text"
        style="?attr/textH4"/>
    <ImageButton
        android:id="@+id/items_help_icon"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="?attr/ic_help20"
        android:layout_marginStart="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/items_header"
        app:layout_constraintLeft_toRightOf="@+id/items_header"
        app:layout_constraintTop_toTopOf="@+id/items_header"
        app:tint="?attr/gray28"/>
    <FrameLayout
        android:id="@+id/skeleton_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingVertical="@dimen/skeleton_items_info_padding_vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/items_header">
        <View
            android:background="@drawable/bg_items_info_skeleton"
            android:layout_width="@dimen/skeleton_items_info_width"
            android:layout_height="@dimen/skeleton_items_info_height"/>
    </FrameLayout>
    <TextView
        android:textColor="?attr/black"
        android:id="@+id/items_info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/skeleton_root"
        style="?attr/textM1"/>
    <TextView
        android:textColor="?attr/orange700"
        android:id="@+id/warning_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/items_info_text"
        style="?attr/textS1"/>
    <com.avito.android.campaigns_sale.view.images_row.ImagesRowView
        android:id="@+id/images_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/warning_text"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/buttons_container"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/images_row"
        app:layout_goneMarginTop="16dp">
        <com.avito.android.lib.design.button.Button
            android:id="@+id/choose_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/campaigns_sale_choose_button"
            android:layout_marginEnd="8dp"
            style="?attr/buttonOverlayPrimaryMedium"/>
        <com.avito.android.lib.design.button.Button
            android:id="@+id/choose_all_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/campaigns_sale_choose_all_button"
            android:layout_marginEnd="8dp"
            style="?attr/buttonOverlayPrimaryMedium"/>
        <com.avito.android.lib.design.button.Button
            android:id="@+id/edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/campaigns_sale_edit_items_button"
            style="?attr/buttonOverlayPrimaryMedium"/>
    </LinearLayout>
    <TextView
        android:textColor="?attr/red600"
        android:id="@+id/items_error_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttons_container"
        style="?attr/textS1"/>
</androidx.constraintlayout.widget.ConstraintLayout>
