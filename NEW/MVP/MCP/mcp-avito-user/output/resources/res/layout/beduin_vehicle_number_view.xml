<?xml version="1.0" encoding="utf-8"?>
<com.avito.android.lib.design.component_container.ComponentContainer xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.Avito"
    android:id="@+id/container"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/vehicle_reg_number"
        android:background="@drawable/bg_beduin_vehicle_number_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/number_container"
            android:paddingTop="10dp"
            android:paddingBottom="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <com.avito.android.ui.view.RestrictedSelectionEditText
                android:textSize="16sp"
                android:textColorHint="?attr/gray44"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/number"
                android:background="@null"
                android:nextFocusRight="@+id/region"
                android:nextFocusDown="@+id/region"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/vehicle_number_hint"
                android:lines="1"
                android:inputType="textVisiblePassword"
                app:input_backgroundColor="@null"
                style="?attr/textBody"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/region_container"
            android:paddingTop="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/divider"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed">
            <com.avito.android.lib.design.input.InputField
                android:textSize="16sp"
                android:textColorHint="?attr/gray44"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/region"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/vehicle_reg_number_region_hint"
                android:lines="1"
                android:maxLength="3"
                android:digits="0123456789"
                android:inputType="number"
                android:imeOptions="actionDone"
                app:input_backgroundColor="@null"
                style="?attr/textBody"/>
        </FrameLayout>
        <TextView
            android:textSize="8sp"
            android:textColor="?attr/black"
            android:id="@+id/country_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/vehicle_reg_number_country_code"
            android:layout_marginEnd="2.7dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/country_flag"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="@+id/region_container"
            app:layout_constraintTop_toBottomOf="@+id/region_container"/>
        <ImageView
            android:id="@+id/country_flag"
            android:background="@drawable/border_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/country_code"
            app:layout_constraintEnd_toEndOf="@+id/region_container"
            app:layout_constraintStart_toEndOf="@+id/country_code"
            app:layout_constraintTop_toTopOf="@+id/country_code"
            app:srcCompat="@drawable/ic_flag_rus"/>
        <View
            android:id="@+id/divider"
            android:background="?attr/white"
            android:layout_width="1dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.avito.android.lib.design.component_container.ComponentContainer>
