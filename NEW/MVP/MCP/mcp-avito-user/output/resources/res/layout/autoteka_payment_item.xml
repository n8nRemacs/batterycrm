<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/autoteka_payment_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="24dp">
    <com.avito.android.fresco.SimpleDraweeView
        android:id="@+id/autoteka_payment_image"
        android:duplicateParentState="true"
        android:layout_width="120dp"
        android:layout_height="88dp"
        app:actualImageScaleType="centerCrop"
        app:backgroundImage="?attr/gray8"
        app:roundedCornerRadius="12dp"
        style="@style/Widget.Avito.Rds.SimpleDraweeView"/>
    <TextView
        android:textAppearance="?attr/textH20"
        android:id="@+id/autoteka_payment_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:id="@+id/autoteka_payment_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>
    <TextView
        android:textAppearance="?attr/textH30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/autoteka_cost"/>
    <com.avito.android.lib.design.description_list.parameter_line.item.DescriptionParameterItem
        android:id="@+id/autoteka_payment_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:descriptionParameterItem_leftTextAppearance="?attr/textM10"
        app:descriptionParameterItem_rightTextAppearance="?attr/textM10"/>
    <include layout="@layout/autoteka_payment_promocode_view"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/discounts_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/autoteka_payment_discounts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/autoteka_payment_dynamic_discounts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/total_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp">
        <com.avito.android.lib.design.description_list.parameter_line.item.DescriptionParameterItem
            android:id="@+id/total"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/autoteka_payment_total"
            android:layout_weight="1"
            app:descriptionParameterItem_leftTextAppearance="?attr/textH30"/>
        <com.avito.android.lib.design.strikethrough.StrikethroughTextView
            android:textAppearance="?attr/textXl10"
            android:id="@+id/strike_through_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:strikethrough_show="true"
            app:strikethrough_tint="?attr/red600"/>
        <TextView
            android:textAppearance="?attr/textH30"
            android:id="@+id/discount_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"/>
    </LinearLayout>
    <include layout="@layout/autoteka_payment_total_skeleton_view"/>
</LinearLayout>
