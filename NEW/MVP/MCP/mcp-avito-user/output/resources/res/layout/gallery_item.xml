<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.avito.android.photo_gallery.ui.FixedRatioImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/image"
        android:visibility="visible"
        app:actualImageScaleType="fitCenter"
        app:ratio="0.75"
        style="@style/PhotoGalleryImage"/>
    <com.avito.android.lib.deprecated_design.ColoredProgressBar
        android:layout_gravity="center"
        android:id="@+id/image_progress"
        android:padding="@dimen/main_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <include
        android:id="@+id/zoom_onboarding"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/advert_pinch_to_zoom_onboarding_layout"/>
</FrameLayout>
