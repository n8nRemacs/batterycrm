<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/PublishParentTheme"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.avito.android.lib.design.list_item.ListItemSwitcher
        android:id="@+id/till_present_switcher"
        android:paddingLeft="@dimen/publish_container_horizontal_padding"
        android:paddingRight="@dimen/publish_container_horizontal_padding"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="12dp"
        app:layout_autoReset="always"
        style="?attr/listItemSwitcher"/>
    <com.akita.view.component.fieldset.Fieldset
        android:id="@+id/publish_field_set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?attr/publishFieldSet"/>
</LinearLayout>
