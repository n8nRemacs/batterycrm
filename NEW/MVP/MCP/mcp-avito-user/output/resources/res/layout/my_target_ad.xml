<?xml version="1.0" encoding="utf-8"?>
<com.my.target.nativeads.views.NativeAdContainer xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_target_view"
    android:addStatesFromChildren="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.avito.android.lib.util.layout.ForegroundRelativeLayout
        android:id="@+id/nativeads_ad_view"
        android:addStatesFromChildren="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.avito.android.lib.util.layout.RatioForegroundFrameLayout
            android:id="@+id/media_view_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.my.target.nativeads.views.MediaAdView
                android:id="@+id/nativeads_media_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_gravity="bottom"
                android:id="@+id/domain_badge"
                android:layout_margin="@dimen/ad_badges_margin"
                style="@style/Widget.Avito.TextView.Ad.Badge"/>
            <com.my.target.nativeads.views.IconAdView
                android:layout_gravity="end|bottom"
                android:id="@+id/icon"
                android:layout_width="@dimen/ad_icon_size"
                android:layout_height="@dimen/ad_icon_size"
                android:layout_marginRight="@dimen/ad_image_content_inset"
                android:layout_marginBottom="@dimen/ad_image_content_inset"/>
        </com.avito.android.lib.util.layout.RatioForegroundFrameLayout>
        <TextView
            android:id="@+id/advertising_badge"
            android:layout_marginLeft="@dimen/ad_image_content_inset"
            android:layout_marginTop="@dimen/ad_image_content_inset"
            android:layout_alignParentLeft="true"
            style="@style/Widget.Avito.TextView.Ad.Badge"/>
        <TextView
            android:id="@+id/age_badge"
            android:layout_marginLeft="@dimen/ad_age_left_margin"
            android:layout_marginTop="@dimen/ad_image_content_inset"
            android:layout_toEndOf="@+id/advertising_badge"
            style="@style/Widget.Avito.TextView.Ad.Badge"/>
        <TextView
            android:id="@+id/nativeads_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/media_view_container"
            style="@style/Widget.Avito.TextView.Ad.Title"/>
        <com.avito.android.advertising.ui.MinLengthMaxLinesTextView
            android:id="@+id/nativeads_description"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nativeads_title"
            style="@style/Widget.Avito.TextView.Ad.Description"/>
        <TextView
            android:id="@+id/nativeads_call_to_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nativeads_description"
            style="@style/Widget.Avito.TextView.Ad.CallToAction"/>
    </com.avito.android.lib.util.layout.ForegroundRelativeLayout>
</com.my.target.nativeads.views.NativeAdContainer>
