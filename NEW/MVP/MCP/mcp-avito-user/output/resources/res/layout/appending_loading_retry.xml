<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="64dp">
    <com.avito.android.lib.design.spinner.Spinner
        android:layout_gravity="center"
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?attr/spinnerDarkLarge"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/load_container"
        android:paddingLeft="@dimen/screen_component_horizontal_padding"
        android:paddingRight="@dimen/screen_component_horizontal_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="64dp">
        <TextView
            android:ellipsize="end"
            android:id="@+id/message"
            android:paddingTop="12dp"
            android:paddingRight="16dp"
            android:paddingBottom="12dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:layout_weight="1"
            style="?attr/textBodySmall"/>
        <com.avito.android.lib.design.button.Button
            android:id="@+id/refresh_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?attr/buttonSecondaryMedium"/>
    </LinearLayout>
</FrameLayout>
