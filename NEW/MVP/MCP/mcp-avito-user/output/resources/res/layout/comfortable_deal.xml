<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/comfortable_deal_layout"
    android:background="@drawable/bg_warm_gray_rounded_corners_16dp"
    android:layout_width="274dp"
    android:layout_height="80dp">
    <com.avito.android.fresco.SimpleDraweeView
        android:id="@+id/image"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:scaleType="centerCrop"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:roundedCornerRadius="12dp"/>
    <com.avito.android.lib.design.avatar.Avatar
        android:layout_gravity="start|bottom"
        android:id="@+id/avatar"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginBottom="3dp"
        android:layout_marginStart="3dp"
        app:avatar_cornerRadius="1000dp"
        app:cardBackgroundColor="#252525"
        app:layout_constraintBottom_toBottomOf="@+id/image"
        app:layout_constraintStart_toStartOf="@+id/image"/>
    <TextView
        android:textColor="?attr/constantWhite"
        android:gravity="center"
        android:layout_gravity="start|bottom"
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/avatar"
        app:layout_constraintEnd_toEndOf="@+id/avatar"
        app:layout_constraintStart_toStartOf="@+id/avatar"
        app:layout_constraintTop_toTopOf="@+id/avatar"
        style="?attr/textS10"/>
    <TextView
        android:theme="@style/Theme.DesignSystem.Re23"
        android:ellipsize="end"
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:maxLines="1"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image"
        app:layout_constraintTop_toTopOf="parent"
        style="?attr/textH6"/>
    <TextView
        android:theme="@style/Theme.DesignSystem.Re23"
        android:ellipsize="end"
        android:id="@+id/description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:maxLines="2"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image"
        app:layout_constraintTop_toBottomOf="@+id/title"
        style="?attr/textS10"/>
</androidx.constraintlayout.widget.ConstraintLayout>
