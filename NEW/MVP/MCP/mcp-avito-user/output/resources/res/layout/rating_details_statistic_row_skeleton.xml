<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.avito.android.lib.design.skeleton.Skeleton
        android:id="@+id/rating_details_statistic_rating_skeleton"
        android:layout_width="84dp"
        android:layout_height="9dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:skeleton_radius="6dp"/>
    <com.avito.android.lib.design.skeleton.Skeleton
        android:id="@+id/rating_details_statistic_row_skeleton"
        android:layout_width="0dp"
        android:layout_height="9dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintEnd_toStartOf="@+id/rating_details_statistic_reviews_count_skeleton"
        app:layout_constraintStart_toEndOf="@+id/rating_details_statistic_rating_skeleton"
        app:layout_constraintTop_toTopOf="parent"
        app:skeleton_radius="6dp"/>
    <com.avito.android.lib.design.skeleton.Skeleton
        android:id="@+id/rating_details_statistic_reviews_count_skeleton"
        android:layout_width="16dp"
        android:layout_height="9dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:skeleton_radius="6dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
