<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/camera_preview_screen_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="?attr/white"
            android:gravity="center"
            android:id="@+id/camera_preview_description"
            android:paddingBottom="32dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/content_horizontal_padding"
            android:layout_marginRight="@dimen/content_horizontal_padding"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="?attr/textHeadingLarge"/>
        <FrameLayout
            android:id="@+id/gallery_button_container"
            android:background="@drawable/photo_camera_gallery_shadow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/camera_preview_description">
            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_gravity="center"
                android:id="@+id/gallery_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:foreground="@drawable/bg_selectable_gray_oval"
                app:placeholderImageScaleType="centerCrop"
                app:roundAsCircle="true"/>
        </FrameLayout>
        <ImageButton
            android:id="@+id/take_shot_button"
            android:background="?attr/transparentBlack"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/btn_take_shot"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/camera_preview_description"/>
        <LinearLayout
            android:gravity="center"
            android:id="@+id/flash_toggle_container"
            android:layout_width="104dp"
            android:layout_height="48dp"
            android:layout_marginRight="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/camera_preview_description"
            style="@style/Widget.Avito.Button.Flat.Gray">
            <ImageView
                android:id="@+id/flash_toggle"
                android:background="@drawable/bg_selectable_gray_oval"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_flash_off_24"
                android:scaleType="center"/>
            <ImageButton
                android:id="@+id/camera_toggle"
                android:background="@drawable/bg_selectable_gray_oval"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/ic_camera_rotate_24"
                android:scaleType="center"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</merge>
