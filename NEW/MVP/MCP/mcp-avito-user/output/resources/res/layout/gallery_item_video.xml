<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/native_video_gallery_item_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.avito.android.photo_gallery.ui.FixedRatioImageView
        android:id="@+id/fake_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:actualImageScaleType="fitCenter"
        app:ratio="0.75"/>
    <com.avito.android.fresco.SimpleDraweeView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:actualImageScaleType="fitCenter"/>
    <com.avito.android.lib.deprecated_design.ColoredProgressBar
        android:layout_gravity="center"
        android:id="@+id/image_progress"
        android:padding="@dimen/main_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/native_video_play_image"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/product_specific_ic_explore_item_play_video_normal"/>
    <FrameLayout
        android:layout_gravity="center_horizontal"
        android:id="@+id/native_video_status_container"
        android:background="?attr/warmGray4"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="72dp"
        android:layout_marginEnd="72dp">
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="?attr/warmGray4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="22dp"
            android:paddingEnd="22dp">
            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_gravity="center_horizontal"
                android:id="@+id/native_video_status_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="4dp"/>
            <TextView
                android:textAppearance="?attr/textS1"
                android:id="@+id/native_video_status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </FrameLayout>
</FrameLayout>
