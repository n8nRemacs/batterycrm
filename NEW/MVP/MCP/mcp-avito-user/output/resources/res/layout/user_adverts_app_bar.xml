<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/app_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:id="@+id/adverts_collapsing_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="8dp"
        app:layout_scrollFlags="snap|exitUntilCollapsed|scroll">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:id="@+id/v_user_adverts_hints"
                android:paddingTop="12dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:navigationIcon="@null"
                app:title="@string/user_adverts_header_title"
                app:titleCentered="true"
                app:titleTextAppearance="?attr/textH5"/>
            <View
                android:id="@+id/navbar_offset"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="12dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/menu_panels_recycler"
                android:paddingBottom="24dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:paddingHorizontal="10dp"/>
        </LinearLayout>
    </com.google.android.material.appbar.CollapsingToolbarLayout>
    <com.avito.android.lib.design.tab_group.TabGroup
        android:theme="@style/Theme.DesignSystem.Re23"
        android:id="@+id/tabs_re23"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?attr/tabGroupXl"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:theme="@style/Theme.DesignSystem.Re23"
        android:id="@+id/adverts_search_container_re23"
        android:paddingTop="16dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp">
        <com.avito.android.lib.design.input.Input
            android:id="@+id/adverts_search_re23"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/user_adverts_search_hint"
            android:imeOptions="actionSearch"
            app:input_clearButtonUnfocused="true"
            app:layout_constraintEnd_toStartOf="@+id/adverts_search_container_barrier_re23"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="?attr/inputSearchDefaultM"/>
        <TextView
            android:textAppearance="?attr/textM20"
            android:textColor="?attr/blue600"
            android:gravity="center"
            android:id="@+id/adverts_search_cancel_re23"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@string/user_adverts_search_cancel"
            android:layout_marginStart="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/adverts_search_re23"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@+id/adverts_search_container_barrier_re23"
            app:layout_constraintTop_toTopOf="@+id/adverts_search_re23"/>
        <ImageView
            android:id="@+id/adverts_search_filter_btn_re23"
            android:focusable="true"
            android:visibility="gone"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/adverts_search_re23"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@+id/adverts_search_container_barrier_re23"
            app:layout_constraintTop_toTopOf="@+id/adverts_search_re23"
            app:srcCompat="?attr/ic_filter24"
            app:tint="@color/user_adverts_filters_icon_tint_color_re23"/>
        <com.avito.android.lib.design.badge.Badge
            android:id="@+id/adverts_search_filter_applied_point_re23"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:badge_cornerSize="10dp"
            app:badge_strokeWidth="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/adverts_search_filter_btn_re23"
            style="?attr/badgeEmptyRedS"/>
        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/adverts_search_container_barrier_re23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="start"
            app:constraint_referenced_ids="adverts_search_filter_btn_re23, adverts_search_cancel_re23"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.appbar.AppBarLayout>
