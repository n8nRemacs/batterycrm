<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="horizontal"
    android:id="@+id/collection_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image"
        android:layout_width="138dp"
        android:layout_height="138dp"
        app:backgroundImage="?attr/gray4"
        app:roundedCornerRadius="6dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="12dp">
        <com.avito.android.lib.design.docking_badge.DockingBadge
            android:textAppearance="?attr/textXs10"
            android:id="@+id/moderationStatusBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:elevation="1dp"
            app:dockingBadge_end="?attr/dockingBadgeEdgeSquareSmall"
            app:dockingBadge_start="?attr/dockingBadgeEdgeSquareSmall"
            style="?attr/dockingBadgeGraySmall"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/authorAvatarImage"
                android:visibility="gone"
                android:layout_width="16dp"
                android:layout_height="16dp"
                app:roundedCornerRadius="8dp"/>
            <TextView
                android:ellipsize="end"
                android:id="@+id/authorName"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:maxLines="1"
                android:layout_marginStart="4dp"
                style="?attr/textS20"/>
        </LinearLayout>
        <TextView
            android:ellipsize="end"
            android:id="@+id/collectionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            style="?attr/textH5"/>
        <TextView
            android:ellipsize="end"
            android:id="@+id/collectionDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:layout_marginVertical="2dp"
            style="?attr/textS1"/>
        <TextView
            android:textColor="?attr/gray54"
            android:id="@+id/collectionSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?attr/textS1"/>
    </LinearLayout>
    <ImageButton
        android:id="@+id/more_button"
        android:background="?attr/transparentBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_marginStart="8dp"
        app:srcCompat="?attr/ic_more20"
        app:tint="?attr/black"/>
</LinearLayout>
