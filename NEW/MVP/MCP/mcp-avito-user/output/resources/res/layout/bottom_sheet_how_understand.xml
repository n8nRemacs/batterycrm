<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="@dimen/standard_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/standard_padding">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/vertical_content_horizontal_padding">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dialog_vertical_padding"
            android:layout_marginBottom="50dp">
            <View
                android:id="@+id/v_how_understand_description"
                android:background="@drawable/blue_rounded_background"
                android:layout_width="@dimen/dialog_icon_size"
                android:layout_height="@dimen/dialog_icon_size"
                android:layout_marginTop="@dimen/dialog_icon_margin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textAppearance="?attr/textBody"
                android:id="@+id/tv_how_understand_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/stats_how_understand_chart_base_views"
                android:layout_marginStart="@dimen/dialog_horizontal_padding"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/v_how_understand_description"
                app:layout_constraintTop_toTopOf="parent"/>
            <View
                android:id="@+id/v_how_understand_description_services"
                android:background="@drawable/green_rounded_background"
                android:layout_width="@dimen/dialog_icon_size"
                android:layout_height="@dimen/dialog_icon_size"
                android:layout_marginTop="@dimen/dialog_icon_margin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_how_understand_description_services"/>
            <TextView
                android:textAppearance="?attr/textBody"
                android:id="@+id/tv_how_understand_description_services"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/standard_padding"
                android:layout_marginStart="@dimen/dialog_horizontal_padding"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/v_how_understand_description_services"
                app:layout_constraintTop_toBottomOf="@+id/tv_how_understand_description"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <com.avito.android.lib.design.button.Button
        android:layout_gravity="bottom"
        android:id="@+id/btn_how_understand_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/close"
        style="?attr/buttonSecondaryLarge"/>
</FrameLayout>
