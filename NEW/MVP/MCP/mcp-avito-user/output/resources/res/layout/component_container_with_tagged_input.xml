<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="@dimen/publish_container_vertical_padding"
    android:paddingBottom="@dimen/publish_container_vertical_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:theme="@style/Theme.DesignSystem.Re23"
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:paddingHorizontal="?attr/publish_horizontalPadding"
        style="?attr/textM20"/>
    <com.avito.android.lib.design.component_container.ComponentContainer
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:paddingHorizontal="?attr/publish_horizontalPadding"
        app:componentContainer_resetCondition="all"
        app:componentContainer_subtitleAppearance="?attr/textBodySmall">
        <com.avito.android.lib.design.input.Input
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textNoSuggestions"
            app:input_selectionToEndOnFocus="false"
            app:layout_autoReset="never"
            style="?attr/input"/>
    </com.avito.android.lib.design.component_container.ComponentContainer>
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        layout="@layout/tags_list"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="?attr/publish_horizontalPadding">
        <com.avito.android.lib.design.button.Button
            android:id="@+id/restore_button"
            android:visibility="gone"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginEnd="@dimen/restore_button_padding"
            style="?attr/buttonSecondaryLarge"/>
        <com.avito.android.lib.design.button.Button
            android:id="@+id/action_button"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            app:button_compoundDrawablePadding="3dp"
            style="?attr/buttonSecondaryLarge"/>
    </LinearLayout>
</LinearLayout>
