<?xml version="1.0" encoding="utf-8"?>
<com.yandex.mobile.ads.nativeads.video.view.PlaybackControlsContainer xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <CheckBox
        android:layout_gravity="bottom|left"
        android:id="@+id/video_mute_control"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:button="@drawable/monetization_ads_internal_mute_checkable_default"/>
    <ProgressBar
        android:layout_gravity="bottom"
        android:id="@+id/video_progress_control"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:progressDrawable="@drawable/monetization_instream_internal_progress_display"
        style="?android:attr/progressBarStyleHorizontal"/>
</com.yandex.mobile.ads.nativeads.video.view.PlaybackControlsContainer>
