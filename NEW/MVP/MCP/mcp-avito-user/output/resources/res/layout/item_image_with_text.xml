<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/icon_with_text"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/booking_form_horizontal_margin">
    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/image"
        android:layout_width="@dimen/booking_form_icon_size"
        android:layout_height="@dimen/booking_form_icon_size"
        android:contentDescription="@null"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:layout_gravity="center_vertical"
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginVertical="4dp"/>
</LinearLayout>
