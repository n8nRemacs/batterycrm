<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/offer_container"
    android:background="@drawable/offer_bg"
    android:layout_width="match_parent"
    android:layout_height="76dp"
    android:layout_marginBottom="6dp"
    android:paddingHorizontal="16dp">
    <View
        android:id="@+id/offer_checkbox"
        android:background="@drawable/placeholder_bg"
        android:layout_width="18dp"
        android:layout_height="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/offer_image"
        android:background="@drawable/placeholder_circle_bg"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/offer_checkbox"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/offer_title"
        android:background="@drawable/placeholder_bg"
        android:layout_width="134dp"
        android:layout_height="10dp"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toTopOf="@+id/offer_subtitle"
        app:layout_constraintStart_toEndOf="@+id/offer_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"/>
    <View
        android:id="@+id/offer_subtitle"
        android:background="@drawable/placeholder_bg"
        android:layout_width="84dp"
        android:layout_height="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/offer_image"
        app:layout_constraintTop_toBottomOf="@+id/offer_title"
        app:layout_constraintVertical_chainStyle="packed"/>
</androidx.constraintlayout.widget.ConstraintLayout>
