<?xml version="1.0" encoding="utf-8"?>
<ru.cyberity.cbr.core.widget.CBRBackgroundView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:id="@+id/cbr_guideline_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_begin="@dimen/cbr_margin_medium"/>
        <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:id="@+id/cbr_guideline_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_end="@dimen/cbr_margin_medium"/>
        <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:id="@+id/cbr_guideline_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.8"/>
        <ru.cyberity.cbr.core.widget.CBRVideoSelfieFrameView
            android:id="@+id/cbr_frame"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/cbr_guideline_center"
            app:layout_constraintEnd_toEndOf="@+id/cbr_guideline_end"
            app:layout_constraintStart_toStartOf="@+id/cbr_guideline_start"
            app:layout_constraintTop_toBottomOf="@+id/cbr_description_2">
            <androidx.camera.view.PreviewView
                android:id="@+id/cbr_camera"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </ru.cyberity.cbr.core.widget.CBRVideoSelfieFrameView>
        <ru.cyberity.cbr.core.widget.CBRVideoSelfiePhraseView
            android:layout_gravity="center"
            android:id="@+id/cbr_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/cbr_margin_large"
            android:paddingHorizontal="@dimen/cbr_margin_medium"
            android:paddingVertical="@dimen/cbr_margin_small"
            app:layout_constraintBottom_toBottomOf="@+id/cbr_guideline_center"
            app:layout_constraintEnd_toEndOf="@+id/cbr_guideline_end"
            app:layout_constraintStart_toStartOf="@+id/cbr_guideline_start"
            app:layout_constraintTop_toTopOf="@+id/cbr_frame"
            app:layout_constraintVertical_bias="0.3"/>
        <ProgressBar
            android:id="@+id/cbr_video_circle_progress"
            android:background="@drawable/circle_shape"
            android:layout_width="@dimen/cbr_normal_button_size"
            android:layout_height="@dimen/cbr_normal_button_size"
            android:max="100"
            android:indeterminate="false"
            android:progressDrawable="@drawable/circular_progress_bar_countdown"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cbr_frame"
            style="?android:attr/progressBarStyleHorizontal"/>
        <ru.cyberity.cbr.core.widget.CBRH2TextView
            android:textColor="?attr/cbr_colorOnProcessing"
            android:id="@+id/cbr_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/cbr_video_circle_progress"
            app:layout_constraintEnd_toEndOf="@+id/cbr_video_circle_progress"
            app:layout_constraintStart_toStartOf="@+id/cbr_video_circle_progress"
            app:layout_constraintTop_toTopOf="@+id/cbr_video_circle_progress"/>
        <View
            android:id="@+id/cbr_stop"
            android:background="@drawable/cbr_bg_selfie_stop_rectangle"
            android:layout_width="@dimen/cbr_margin_medium"
            android:layout_height="@dimen/cbr_margin_medium"
            app:layout_constraintBottom_toBottomOf="@+id/cbr_video_circle_progress"
            app:layout_constraintEnd_toEndOf="@+id/cbr_video_circle_progress"
            app:layout_constraintStart_toStartOf="@+id/cbr_video_circle_progress"
            app:layout_constraintTop_toTopOf="@+id/cbr_video_circle_progress"/>
        <View
            android:id="@+id/cbr_done"
            android:background="@drawable/ic_done"
            android:layout_width="@dimen/cbr_margin_medium"
            android:layout_height="@dimen/cbr_margin_medium"
            app:layout_constraintBottom_toBottomOf="@+id/cbr_video_circle_progress"
            app:layout_constraintEnd_toEndOf="@+id/cbr_video_circle_progress"
            app:layout_constraintStart_toStartOf="@+id/cbr_video_circle_progress"
            app:layout_constraintTop_toTopOf="@+id/cbr_video_circle_progress"/>
        <ru.cyberity.cbr.core.widget.CBRH1TextView
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/cbr_description_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/cbr_description_2"
            app:layout_constraintEnd_toEndOf="@+id/cbr_guideline_end"
            app:layout_constraintStart_toStartOf="@+id/cbr_guideline_start"
            app:layout_constraintTop_toBottomOf="@+id/cbr_toolbar"/>
        <ru.cyberity.cbr.core.widget.CBRSubtitle2TextView
            android:gravity="center"
            android:id="@+id/cbr_description_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/cbr_margin_small_tiny"
            app:layout_constraintBottom_toTopOf="@+id/cbr_frame"
            app:layout_constraintEnd_toEndOf="@+id/cbr_guideline_end"
            app:layout_constraintStart_toStartOf="@+id/cbr_guideline_start"
            app:layout_constraintTop_toBottomOf="@+id/cbr_description_1"/>
        <ru.cyberity.cbr.core.widget.CBRToolbarView
            android:id="@+id/cbr_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"/>
        <include
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/cbr_margin_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/cbr_guideline_end"
            app:layout_constraintStart_toStartOf="@+id/cbr_guideline_start"
            layout="@layout/cbr_layout_powered"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ru.cyberity.cbr.core.widget.CBRBackgroundView>
