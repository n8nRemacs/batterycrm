<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="?attr/constantBlack"
    android:paddingHorizontal="32dp">
    <ImageView
        android:id="@+id/gallery_teaser_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/autoteka_logo_in_gallery_teaser"/>
    <TextView
        android:textAppearance="?attr/textH30"
        android:textColor="?attr/constantWhite"
        android:gravity="center"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"/>
    <TextView
        android:textAppearance="?attr/textS10"
        android:textColor="?attr/constantWhite"
        android:gravity="center"
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/autoteka_bg_gradient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/discountContainer"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="14dp"
            android:layout_marginVertical="10dp">
            <TextView
                android:textAppearance="?attr/textS10"
                android:textColor="?attr/constantWhite"
                android:ellipsize="end"
                android:id="@+id/discountTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:lines="1"
                android:layout_weight="1"/>
            <com.avito.android.lib.design.docking_badge.DockingBadge
                android:id="@+id/discountAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:dockingBadge_end="?attr/dockingBadgeEdgePipkaSmall"
                app:dockingBadge_start="?attr/dockingBadgeEdgeFlagSmall"
                style="?attr/dockingBadgeGreenSmall"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/buttonContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
