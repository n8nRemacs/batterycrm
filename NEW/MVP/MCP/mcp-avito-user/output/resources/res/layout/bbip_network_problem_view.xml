<?xml version="1.0" encoding="utf-8"?>
<com.avito.android.lib.deprecated_design.NetworkProblemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/network_problem_view"
    android:background="?attr/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/error_view"
        android:visibility="gone"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="16dp">
        <TextView
            android:textAppearance="?attr/textH1"
            android:id="@+id/error_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bbip_error_screen_title"
            android:layout_alignParentTop="true"/>
        <TextView
            android:textAppearance="?attr/textM1"
            android:id="@+id/error_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bbip_error_screen_text_margin_top"
            android:text="@string/bbip_error_screen_text"
            android:layout_below="@+id/error_title"/>
        <com.avito.android.lib.design.button.Button
            android:id="@+id/retry_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bbip_error_screen_button"
            android:layout_alignParentBottom="true"
            android:layout_marginVertical="@dimen/bbip_error_btn_margin_vertical"
            style="?attr/buttonPrimaryLarge"/>
    </RelativeLayout>
    <com.avito.android.lib.deprecated_design.ColoredProgressBar
        android:layout_gravity="center"
        android:id="@+id/progress_view"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</com.avito.android.lib.deprecated_design.NetworkProblemView>
