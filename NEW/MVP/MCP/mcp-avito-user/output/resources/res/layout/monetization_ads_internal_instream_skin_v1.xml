<?xml version="1.0" encoding="utf-8"?>
<com.yandex.mobile.ads.video.playback.view.VideoAdControlsContainer xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_gravity="start|top"
        android:id="@+id/sponsored_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/monetization_instream_internal_label_margin_start"
        android:layout_marginTop="@dimen/monetization_instream_internal_label_margin_top"
        android:layout_marginStart="@dimen/monetization_instream_internal_label_margin_start"/>
    <LinearLayout
        android:layout_gravity="start|bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/monetization_instream_internal_button_margin_start"
        android:layout_marginBottom="@dimen/monetization_instream_internal_button_margin_bottom"
        android:layout_marginStart="@dimen/monetization_instream_internal_button_margin_start">
        <com.yandex.mobile.ads.instream.view.InstreamMuteView
            android:layout_gravity="center"
            android:id="@+id/instream_mute"
            android:focusable="true"
            android:layout_width="@dimen/monetization_instream_internal_button_size"
            android:layout_height="@dimen/monetization_instream_internal_button_size"
            app:monetization_internal_sound_off="@drawable/monetization_ads_internal_ic_sound_off_default"
            app:monetization_internal_sound_on="@drawable/monetization_ads_internal_ic_sound_on_default"
            style="?android:attr/borderlessButtonStyle"/>
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/instream_call_to_action"
            android:background="@drawable/monetization_instream_internal_click_button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/monetization_instream_internal_button_size"
            android:layout_marginLeft="@dimen/monetization_instream_internal_button_margin_start"
            android:layout_marginStart="@dimen/monetization_instream_internal_button_margin_start"
            style="?android:attr/borderlessButtonStyle"/>
    </LinearLayout>
    <ProgressBar
        android:layout_gravity="bottom"
        android:id="@+id/instream_progress_display_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/monetization_instream_internal_progress_bar_height"
        android:max="@integer/monetization_instream_internal_progress_bar_max"
        android:progressDrawable="@drawable/monetization_instream_internal_progress_display"
        style="?android:attr/progressBarStyleHorizontal"/>
    <ImageView
        android:layout_gravity="end|bottom"
        android:id="@+id/instream_skip"
        android:background="@drawable/monetization_instream_internal_skip"
        android:focusable="true"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/monetization_instream_internal_button_size"
        android:layout_marginRight="@dimen/monetization_instream_internal_button_margin_end"
        android:layout_marginBottom="@dimen/monetization_instream_internal_button_margin_bottom"
        android:layout_marginEnd="@dimen/monetization_instream_internal_button_margin_end"/>
</com.yandex.mobile.ads.video.playback.view.VideoAdControlsContainer>
