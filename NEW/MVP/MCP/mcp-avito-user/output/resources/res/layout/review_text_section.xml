<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="?attr/textH50"
        android:id="@+id/review_text_section_title"
        android:paddingBottom="4dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/content_horizontal_padding"
        app:layout_constraintBottom_toTopOf="@+id/review_text_section_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:ellipsize="end"
        android:id="@+id/review_text_section_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/content_horizontal_padding"
        app:layout_constraintBottom_toTopOf="@+id/review_text_section_expand"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/review_text_section_title"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:textColor="?attr/gray54"
        android:gravity="center"
        android:id="@+id/review_text_section_expand"
        android:background="@drawable/bg_rds_gray_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/review_read_all"
        android:paddingStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/review_text_section_text"/>
    <ImageView
        android:id="@+id/review_text_section_expand_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/review_text_section_expand"
        app:layout_constraintStart_toEndOf="@+id/review_text_section_expand"
        app:layout_constraintTop_toTopOf="@+id/review_text_section_expand"
        app:srcCompat="@drawable/ic_review_read_all_arrow"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/review_text_section_expand_group"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="review_text_section_expand,review_text_section_expand_arrow"/>
</merge>
