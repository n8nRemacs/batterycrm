<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/sales_slider_button_container"
    android:layout_width="148dp"
    android:layout_height="100dp">
    <FrameLayout
        android:id="@+id/sales_slider_colored_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginEnd="8dp">
        <com.avito.android.fresco.SimpleDraweeView
            android:layout_gravity="end|center_vertical"
            android:id="@+id/sales_slider_button_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="center"
            android:layout_marginStart="16dp"/>
    </FrameLayout>
    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/sales_slider_button_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="?attr/ic_arrowRight24"
        app:tint="?attr/constantWhite"/>
</LinearLayout>
