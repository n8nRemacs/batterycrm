<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="vertical"
    android:id="@+id/inline_filters_select_dialog_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/inline_filter_dialog_horizontal_padding"
            android:layout_marginEnd="@dimen/inline_filter_dialog_horizontal_padding"
            layout="@layout/inline_filter_dialog_header"/>
        <com.avito.android.lib.design.input.Input
            android:id="@+id/search_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="@string/search"
            android:paddingStart="@dimen/inline_filter_dialog_horizontal_padding"
            android:paddingEnd="@dimen/inline_filter_dialog_horizontal_padding"
            android:layout_marginStart="@dimen/inline_filter_input_horizontal_margin"
            android:layout_marginEnd="@dimen/inline_filter_input_horizontal_margin"
            style="?attr/inputSearch"/>
        <TextView
            android:textSize="@dimen/stub_hint_text_size"
            android:textColor="?attr/gray48"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/empty_view_hint"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/hint_margin_top"
            android:maxWidth="@dimen/hint_max_width"
            android:lineSpacingExtra="@dimen/stub_extra_line_spacing"
            android:paddingStart="@dimen/inline_filter_dialog_horizontal_padding"
            android:paddingEnd="@dimen/inline_filter_dialog_horizontal_padding"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:textAppearance="?attr/textH5"
            android:id="@+id/content_title"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="12dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/filter_options_recycler_view"
            android:paddingBottom="@dimen/inline_filter_recycler_padding_bottom"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/inline_filter_recycler_padding_start"
            android:paddingEnd="@dimen/inline_filter_dialog_horizontal_padding"/>
    </LinearLayout>
    <FrameLayout
        android:layout_gravity="bottom|center_horizontal"
        android:id="@+id/apply_button_container"
        android:background="@drawable/bg_transparent_white_gradient"
        android:paddingBottom="@dimen/inline_filter_recycler_padding_bottom"
        android:visibility="gone"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/inline_filters_apply_btn_container_height">
        <com.avito.android.lib.design.button.Button
            android:layout_gravity="top|center_horizontal"
            android:id="@+id/apply_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/inline_filter_apply_btn_horizontal_margin_scrollable"
            android:layout_marginEnd="@dimen/inline_filter_apply_btn_horizontal_margin_scrollable"
            style="?attr/buttonPrimaryLarge"/>
    </FrameLayout>
    <com.avito.android.lib.design.spinner.overlay.SpinnerOverlay
        android:id="@+id/spinner_overlay"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</FrameLayout>
