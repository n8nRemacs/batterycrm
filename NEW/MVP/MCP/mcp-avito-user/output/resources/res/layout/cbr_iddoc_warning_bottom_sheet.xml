<?xml version="1.0" encoding="utf-8"?>
<ru.cyberity.cbr.core.widget.CBRBottomSheetView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingTop="@dimen/cbr_margin_medium"
        android:paddingBottom="@dimen/cbr_margin_medium"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/cbr_margin_medium">
        <ru.cyberity.cbr.core.widget.CBRBottomSheetHandleView
            android:id="@+id/cbr_divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:layout_marginStart="@dimen/cbr_margin_medium"
            android:layout_marginEnd="@dimen/cbr_margin_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/cbr_bg_rounded_divider"/>
        <ru.cyberity.cbr.core.widget.CBRSubtitle1TextView
            android:gravity="center"
            android:id="@+id/cbr_warning_title"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/cbr_margin_small"
            android:layout_marginBottom="@dimen/cbr_margin_small"
            android:textAlignment="gravity"
            android:layout_marginHorizontal="@dimen/cbr_margin_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cbr_divider"/>
        <ImageView
            android:id="@+id/cbr_warning_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/cbr_margin_medium"
            android:contentDescription="@null"
            android:layout_marginStart="@dimen/cbr_margin_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cbr_divider"
            app:srcCompat="@drawable/cbr_ic_warning_triangle"
            app:tint="?attr/cbr_colorOnPending"/>
        <ru.cyberity.cbr.core.widget.CBRSubtitle2TextView
            android:id="@+id/cbr_warning_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/cbr_margin_medium"
            android:layout_marginStart="@dimen/cbr_margin_small"
            android:layout_marginEnd="@dimen/cbr_margin_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cbr_warning_icon"
            app:layout_constraintTop_toBottomOf="@+id/cbr_divider"/>
        <ru.cyberity.cbr.core.widget.CBRPrimaryButton
            android:id="@+id/cbr_warning_primary_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/cbr_margin_large"
            android:layout_marginStart="@dimen/cbr_margin_medium_small"
            android:layout_marginEnd="@dimen/cbr_margin_medium_small"
            app:layout_constraintBottom_toTopOf="@+id/cbr_warning_secondary_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cbr_warning_message"
            app:layout_goneMarginBottom="@dimen/cbr_margin_small"/>
        <ru.cyberity.cbr.core.widget.CBRSecondaryButton
            android:id="@+id/cbr_warning_secondary_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/cbr_margin_small"
            android:layout_marginStart="@dimen/cbr_margin_medium_small"
            android:layout_marginEnd="@dimen/cbr_margin_medium_small"
            app:layout_constraintBottom_toTopOf="@+id/cbr_powered"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <ru.cyberity.cbr.core.widget.CBRProgressBarView
            android:id="@+id/cbr_warning_progress_bar"
            android:layout_width="@dimen/cbr_min_button_size"
            android:layout_height="@dimen/cbr_min_button_size"
            android:layout_marginBottom="@dimen/cbr_margin_small"
            android:indeterminate="true"
            app:layout_constraintBottom_toTopOf="@+id/cbr_powered"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cbr_warning_title"
            style="?android:attr/progressBarStyle"/>
        <include
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            layout="@layout/cbr_layout_powered"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ru.cyberity.cbr.core.widget.CBRBottomSheetView>
