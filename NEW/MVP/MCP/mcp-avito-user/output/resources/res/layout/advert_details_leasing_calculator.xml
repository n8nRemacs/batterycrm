<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/leasing_calculator_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="?attr/textH3"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/content_horizontal_padding"/>
    <com.avito.android.lib.design.component_container.ComponentContainer
        android:id="@+id/down_payment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="@dimen/content_horizontal_padding"
        app:componentContainer_titleAppearance="?attr/textH5">
        <com.avito.android.lib.design.input.Input
            android:id="@+id/down_payment_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:imeOptions="flagNoExtractUi|actionNext"
            app:input_formatterType="roubles"/>
    </com.avito.android.lib.design.component_container.ComponentContainer>
    <com.avito.android.lib.design.component_container.ComponentContainer
        android:id="@+id/period_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="@dimen/content_horizontal_padding"
        app:componentContainer_titleAppearance="?attr/textH5">
        <com.avito.android.lib.design.input.Input
            android:id="@+id/period_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:imeOptions="flagNoExtractUi|actionDone"
            app:input_formatterType="numeric"/>
    </com.avito.android.lib.design.component_container.ComponentContainer>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/terms_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginHorizontal="@dimen/content_horizontal_padding"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/application_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:minHeight="44dp"
        android:layout_marginHorizontal="@dimen/content_horizontal_padding"
        style="?attr/buttonPrimaryLarge"/>
    <TextView
        android:textAppearance="?attr/textH5"
        android:id="@+id/benefits_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="@string/advert_details_leasing_calculator_benefits_title"
        android:layout_marginHorizontal="@dimen/content_horizontal_padding"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/benefits_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="@dimen/content_horizontal_padding"/>
    <TextView
        android:textAppearance="?attr/textM1"
        android:textColor="?attr/blue600"
        android:id="@+id/details_link"
        android:background="@drawable/bg_rds_gray_button"
        android:padding="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="@dimen/rds_content_horizontal_padding_left"
        android:layout_marginEnd="@dimen/content_horizontal_padding"/>
</LinearLayout>
