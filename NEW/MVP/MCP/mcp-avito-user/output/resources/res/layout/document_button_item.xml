<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:id="@+id/button_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/confirm_doc_buttons_item_padding_vertical">
    <com.avito.android.lib.design.button.Button
        android:theme="@style/Theme.DesignSystem.Re23"
        android:id="@+id/button_icon"
        android:clickable="false"
        android:layout_width="@dimen/confirm_doc_buttons_item_button_icon_size"
        android:layout_height="@dimen/confirm_doc_buttons_item_button_icon_size"
        android:drawableLeft="?attr/ic_plus16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="?attr/buttonSecondaryMedium"/>
    <TextView
        android:id="@+id/button_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/confirm_doc_buttons_item_button_title_margin_start"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toStartOf="@+id/button_arrow_icon"
        app:layout_constraintStart_toEndOf="@+id/button_icon"
        app:layout_constraintTop_toTopOf="parent"
        style="?attr/textM20"/>
    <TextView
        android:textColor="?attr/gray54"
        android:id="@+id/button_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/confirm_doc_buttons_item_button_description_margin_top"
        android:layout_marginStart="@dimen/confirm_doc_buttons_item_button_description_margin_start"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toStartOf="@+id/button_arrow_icon"
        app:layout_constraintStart_toEndOf="@+id/button_icon"
        app:layout_constraintTop_toBottomOf="@+id/button_title"
        style="?attr/textS20"/>
    <ImageView
        android:id="@+id/button_arrow_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_8_16"
        android:contentDescription="@string/confirm_documents_arrow_content_description"
        android:layout_marginEnd="@dimen/confirm_doc_buttons_item_button_arrow_margin_end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
