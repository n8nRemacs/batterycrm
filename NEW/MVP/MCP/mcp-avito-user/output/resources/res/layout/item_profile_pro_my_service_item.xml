<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:id="@+id/profile_pro_my_service_item_root"
    android:clipChildren="false"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_columnWeight="1"
    android:layout_marginHorizontal="3dp">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textAppearance="?attr/textM10"
            android:textSize="21sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/item_icon"
            android:background="@drawable/rounded_background_r16"
            android:paddingBottom="5dp"
            android:layout_width="52dp"
            android:layout_height="52dp"/>
        <com.avito.android.lib.design.badge.Badge
            android:textAppearance="?attr/textXs10"
            android:layout_gravity="end|top"
            android:id="@+id/notification_badge"
            android:paddingTop="5dp"
            android:paddingBottom="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationX="11dp"
            android:translationY="-11dp"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            app:badge_backgroundColor="?attr/red600"
            app:badge_strokeColor="?attr/white"
            app:badge_strokeWidth="2dp"
            app:badge_textCompensation="0dp"
            style="?attr/badgeNumberMedium"/>
    </FrameLayout>
    <TextView
        android:textAppearance="?attr/textS20"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:maxWidth="114dp"
        android:maxLines="2"/>
</LinearLayout>
