<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/delivery_summary_container"
    android:visibility="gone"
    android:clipChildren="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/summary_image"
        android:visibility="gone"
        android:layout_width="@dimen/delivery_summary_image_width"
        android:layout_height="@dimen/delivery_summary_image_height"
        app:backgroundImage="?attr/gray8"
        app:failureImageScaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.2"
        app:roundedCornerRadius="6dp"
        style="@style/Widget.Avito.SimpleDraweeView.Advert.Item.Image.List"/>
    <View
        android:id="@+id/summary_icon_delivery"
        android:background="@drawable/product_specific_ic_rds_delivery"
        android:visibility="gone"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/summary_image"
        app:layout_constraintRight_toRightOf="@+id/summary_image"/>
    <TextView
        android:textAppearance="?attr/textBody"
        android:id="@+id/summary_advert_name"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_start"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginStart="0dp"/>
    <TextView
        android:textAppearance="?attr/textHeadingSmall"
        android:id="@+id/summary_advert_price"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toEndOf="@+id/text_start"
        app:layout_constraintTop_toBottomOf="@+id/summary_advert_name"/>
    <TextView
        android:id="@+id/summary_delivery_title"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/advert_barrier"/>
    <com.avito.android.lib.design.description_list.parameter_line.item.DescriptionParameterItem
        android:id="@+id/summary_delivery_fee_block"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:descriptionParameterItem_dotsOffset="2dp"
        app:descriptionParameterItem_leftTextAppearance="?attr/textM1"
        app:descriptionParameterItem_leftTextIcon="?attr/ic_help20"
        app:descriptionParameterItem_leftTextIconColor="?attr/warmGray28"
        app:descriptionParameterItem_rightTextAppearance="?attr/textM1"
        app:layout_constraintTop_toBottomOf="@+id/summary_delivery_title"/>
    <com.avito.android.lib.design.description_list.parameter_line.item.DescriptionParameterItem
        android:id="@+id/summary_delivery_fbs_fee_block"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:descriptionParameterItem_dotsOffset="2dp"
        app:descriptionParameterItem_leftTextAppearance="?attr/textM1"
        app:descriptionParameterItem_leftTextIcon="?attr/ic_help20"
        app:descriptionParameterItem_leftTextIconColor="?attr/warmGray28"
        app:descriptionParameterItem_rightTextAppearance="?attr/textM1"
        app:layout_constraintTop_toBottomOf="@+id/summary_delivery_fee_details_recycler"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/summary_delivery_fee_details_recycler"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@+id/summary_delivery_fee_block"/>
    <com.avito.android.lib.design.description_list.parameter_line.item.DescriptionParameterItem
        android:id="@+id/summary_delivery_discount_block"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:descriptionParameterItem_dotsOffset="2dp"
        app:descriptionParameterItem_leftTextAppearance="?attr/textM1"
        app:descriptionParameterItem_rightTextAppearance="?attr/textM1"
        app:layout_constraintTop_toBottomOf="@+id/summary_delivery_fbs_fee_block"/>
    <com.avito.android.lib.design.description_list.parameter_line.item.DescriptionParameterItem
        android:id="@+id/summary_delivery_total_block"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:descriptionParameterItem_dotsOffset="2dp"
        app:descriptionParameterItem_leftTextAppearance="?attr/textH5"
        app:descriptionParameterItem_rightTextAppearance="?attr/textH5"
        app:layout_constraintTop_toBottomOf="@+id/summary_delivery_discount_block"/>
    <TextView
        android:id="@+id/summary_dbs_title"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_fee_to_price_banner"/>
    <com.avito.android.lib.design.description_list.parameter_line.item.DescriptionParameterItem
        android:id="@+id/summary_dbs_fee_block"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:descriptionParameterItem_dotsOffset="2dp"
        app:descriptionParameterItem_leftTextAppearance="?attr/textM1"
        app:descriptionParameterItem_leftTextIcon="?attr/ic_help20"
        app:descriptionParameterItem_leftTextIconColor="?attr/warmGray28"
        app:descriptionParameterItem_rightTextAppearance="?attr/textM1"
        app:layout_constraintTop_toBottomOf="@+id/summary_dbs_title"/>
    <com.avito.android.lib.design.description_list.parameter_line.item.DescriptionParameterItem
        android:id="@+id/summary_dbs_total_block"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:descriptionParameterItem_dotsOffset="2dp"
        app:descriptionParameterItem_leftTextAppearance="?attr/textH5"
        app:descriptionParameterItem_rightTextAppearance="?attr/textH5"
        app:layout_constraintTop_toBottomOf="@+id/summary_dbs_fee_block"/>
    <TextView
        android:id="@+id/summary_dbs_additional_info"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/summary_dbs_total_block"/>
    <TextView
        android:id="@+id/summary_cnc_title"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/summary_dbs_additional_info"/>
    <com.avito.android.lib.design.description_list.parameter_line.item.DescriptionParameterItem
        android:id="@+id/summary_cnc_fee_block"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:descriptionParameterItem_dotsOffset="2dp"
        app:descriptionParameterItem_leftTextAppearance="?attr/textM1"
        app:descriptionParameterItem_leftTextIcon="?attr/ic_help20"
        app:descriptionParameterItem_leftTextIconColor="?attr/warmGray28"
        app:descriptionParameterItem_rightTextAppearance="?attr/textM1"
        app:layout_constraintTop_toBottomOf="@+id/summary_cnc_title"/>
    <com.avito.android.lib.design.description_list.parameter_line.item.DescriptionParameterItem
        android:id="@+id/summary_cnc_total_block"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:descriptionParameterItem_dotsOffset="2dp"
        app:descriptionParameterItem_leftTextAppearance="?attr/textH5"
        app:descriptionParameterItem_rightTextAppearance="?attr/textH5"
        app:layout_constraintTop_toBottomOf="@+id/summary_cnc_fee_block"/>
    <FrameLayout
        android:theme="@style/Theme.DesignSystem.Re23"
        android:id="@+id/add_fee_to_price_banner"
        android:background="@drawable/bg_banner_add_fee_to_price"
        android:visibility="gone"
        android:clipChildren="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@+id/summary_dbs_title"
        app:layout_constraintTop_toBottomOf="@+id/summary_delivery_total_block">
        <com.avito.android.lib.design.badge.Badge
            android:id="@+id/add_fee_to_price_badge"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:layout_marginStart="20dp"
            app:badge_backgroundColor="@color/red600"
            app:badge_showAnimation_duration="0"
            style="?attr/badgeTextRedXS"/>
        <LinearLayout
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.avito.android.fresco.SimpleDraweeView
                android:layout_gravity="center_vertical"
                android:id="@+id/add_fee_to_price_image"
                android:visibility="gone"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginEnd="12dp"/>
            <TextView
                android:textAppearance="?attr/textS20"
                android:layout_gravity="center_vertical"
                android:id="@+id/add_fee_to_price_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="12dp"/>
            <com.avito.android.lib.design.switcher.Switcher
                android:layout_gravity="center_vertical"
                android:id="@+id/add_fee_to_price_switcher"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?attr/switcherDefaultMedium"/>
        </LinearLayout>
    </FrameLayout>
    <TextView
        android:textAppearance="?attr/textS2"
        android:textColor="?attr/gray48"
        android:textColorLink="?attr/gray48"
        android:id="@+id/summary_agreement_text"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/summary_cnc_total_block"
        app:layout_goneMarginStart="0dp"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/text_start"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_begin="68dp"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/advert_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="summary_image,summary_advert_price"/>
</androidx.constraintlayout.widget.ConstraintLayout>
