<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="vertical"
    android:id="@+id/user_adverts_panel_flat_card_item_root"
    android:background="@drawable/bg_panel_flat_card_item_re23"
    android:paddingTop="10dp"
    android:paddingBottom="16dp"
    android:layout_width="150dp"
    android:layout_height="80dp"
    android:paddingHorizontal="14dp">
    <TextView
        android:textAppearance="?attr/textS20"
        android:id="@+id/user_adverts_panel_flat_card_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="2"/>
    <TextView
        android:textAppearance="?attr/textH50"
        android:id="@+id/user_adverts_panel_flat_card_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
