<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/advert_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="6dp"
    android:layout_marginVertical="12dp">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image"
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        app:backgroundImage="?attr/gray4"
        app:failureImageScaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:roundedCornerRadius="5dp"
        style="@style/Widget.Avito.SimpleDraweeView.Serp.Item.Image.List"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/fields_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_favorite"
        app:layout_constraintStart_toEndOf="@+id/image"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/statusDescription"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/status_expired"
            style="?attr/textH5"/>
        <TextView
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:drawablePadding="2dp"
            style="?attr/textH4"/>
        <com.avito.android.lib.util.layout.InverseLinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.avito.android.lib.design.strikethrough.StrikethroughTextView
                android:id="@+id/discount_new"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                app:strikethrough_show="true"
                app:strikethrough_tint="?attr/red600"
                style="?attr/textS2"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:textColor="?attr/gray48"
                android:gravity="center_vertical"
                android:id="@+id/discount"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:drawablePadding="4dp"
                style="?attr/textM2"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:textColor="?attr/red600"
                android:id="@+id/discount_percentage"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginStart="4dp"
                style="?attr/textM2"/>
        </com.avito.android.lib.util.layout.InverseLinearLayout>
        <TextView
            android:ellipsize="end"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            style="?attr/textM2"/>
        <TextView
            android:textColor="?attr/gray54"
            android:id="@+id/location"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            style="?attr/textS1"/>
        <TextView
            android:textColor="?attr/gray54"
            android:ellipsize="end"
            android:id="@+id/address"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            style="?attr/textS1"/>
        <TextView
            android:textColor="?attr/gray54"
            android:id="@+id/date"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?attr/textS1"/>
        <TextView
            android:theme="@style/Theme.DesignSystem.Re23"
            android:textAppearance="?attr/textS10"
            android:textColor="?attr/red700"
            android:ellipsize="end"
            android:id="@+id/stocks_quantity"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:maxLines="1"/>
        <com.avito.android.cart_snippet_actions.CartActionsViewImpl
            android:theme="@style/Theme.DesignSystem.Re23"
            android:id="@+id/cart_actions"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cartActionsView_buttonStyle="?attr/buttonPaySecondarySmall"
            app:cartActionsView_style="button"/>
        <TextView
            android:textColor="?attr/gray48"
            android:id="@+id/note"
            android:background="@drawable/bg_note"
            android:padding="8dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:maxLines="4"
            style="?attr/textXs"/>
        <TextView
            android:textColor="?attr/blue"
            android:id="@+id/btn_similar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/see_similar"
            style="?attr/textS1"/>
        <com.avito.android.lib.design.button.Button
            android:theme="@style/Theme.DesignSystem.Re23"
            android:id="@+id/actionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            style="?attr/buttonSecondarySmall"/>
        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/contactButtonsContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:flexWrap="wrap">
            <com.avito.android.lib.design.button.Button
                android:theme="@style/Theme.DesignSystem.Re23"
                android:id="@+id/contact_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="6dp"
                style="?attr/buttonAccentSecondarySmall"/>
            <com.avito.android.lib.design.button.Button
                android:theme="@style/Theme.DesignSystem.Re23"
                android:id="@+id/call_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="6dp"
                style="?attr/buttonAccentSecondarySmall"/>
            <com.avito.android.lib.design.button.Button
                android:theme="@style/Theme.DesignSystem.Re23"
                android:id="@+id/message_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                style="?attr/buttonAccentSecondarySmall"/>
        </com.google.android.flexbox.FlexboxLayout>
        <com.avito.android.favorites.adapter.advert.related_products.RelatedProductsView
            android:id="@+id/relatedProducts"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/buttons_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image"
        app:layout_constraintTop_toBottomOf="@+id/fields_container">
        <com.avito.android.lib.design.button.Button
            android:theme="@style/Theme.DesignSystem.LookAndFeel"
            android:id="@+id/buy_with_delivery_button"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            style="?attr/buttonSafedealSecondaryMedium"/>
        <com.avito.android.lib.design.button.Button
            android:theme="@style/Theme.DesignSystem.Re23"
            android:id="@+id/autoteka_purchase_button"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:drawableLeft="?attr/ic_autoCheck16"
            app:button_iconColor="@null"
            style="?attr/buttonSecondarySmall"/>
    </LinearLayout>
    <com.google.android.material.internal.CheckableImageButton
        android:id="@+id/btn_favorite"
        android:background="@null"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/advert_favorite"
        android:scaleType="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fields_container"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:theme="@style/Theme.DesignSystem.Re23"
        android:textAppearance="?attr/textXs10"
        android:textColor="?attr/constantWhite"
        android:gravity="center"
        android:id="@+id/badge_sticker"
        android:background="@drawable/bg_advert_item_sale_candy"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="@dimen/card_badge_sticker_bottom_margin_with_rotation"
        android:minWidth="@dimen/card_badge_sticker_min_width"
        android:contentDescription="@null"
        android:rotation="-10"
        android:elevation="2dp"
        android:paddingHorizontal="@dimen/card_badge_sticker_text_padding_horizontal"
        android:paddingVertical="@dimen/card_badge_sticker_text_padding_vertical"
        app:layout_constraintBottom_toBottomOf="@+id/image"
        app:layout_constraintStart_toStartOf="@+id/image"/>
    <ru.avito.component.snippet_badge_bar.SnippetBadgeBar
        android:id="@+id/badge_bar"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/image"
        app:layout_constraintStart_toStartOf="@+id/image"
        app:snippetBadgeBar_maxBadges="1"
        app:snippetBadgeBar_maxLines="1"/>
</androidx.constraintlayout.widget.ConstraintLayout>
