<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/usp_banner_item_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp">
    <com.avito.android.lib.design.banner.Banner
        android:id="@+id/usp_banner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:banner_content="@layout/usp_banner_item_content"
        app:banner_contentPaddingBottom="0dp"
        app:banner_contentPaddingLeft="0dp"
        app:banner_contentPaddingRight="0dp"
        app:banner_contentPaddingTop="0dp"/>
</androidx.cardview.widget.CardView>
