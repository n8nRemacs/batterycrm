<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:layout_width="157dp"
    android:layout_height="match_parent"
    android:stateListAnimator="@xml/banner_pressed_scale">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/show_more_item"
        android:background="@drawable/show_more_item_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:roundedCornerRadius="16dp">
        <TextView
            android:gravity="center"
            android:id="@+id/show_more_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.Avito.TextView.Serp.Item.Caption.Title.Sales"/>
        <com.avito.android.lib.design.header_button.HeaderButton
            android:id="@+id/carousel_header_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:headerButton_textIconStyleAttr="?attr/textIconHeaderbuttonArrow"
            app:layout_alignSelf="center"
            style="?attr/headerButtonH30"/>
    </LinearLayout>
</LinearLayout>
