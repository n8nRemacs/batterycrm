<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bbip_forecast_container"
    android:background="@drawable/bg_rounded_warmgray4_r24"
    android:paddingTop="20dp"
    android:paddingBottom="24dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:paddingHorizontal="24dp">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/bbip_forecast_grope"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:textAppearance="?attr/textS10"
            android:id="@+id/bbip_forecast_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textAppearance="?attr/textH30"
            android:id="@+id/bbip_forecast_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"/>
    </LinearLayout>
    <include
        android:id="@+id/bbip_forecast_skeleton"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="14dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/bbip_forecast_grope"
        app:layout_constraintTop_toBottomOf="@+id/bbip_forecast_grope"
        app:layout_constraintWidth_percent="0.3"
        layout="@layout/bbip_forecast_text_stub"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bbip_budget_grope"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textAppearance="?attr/textS10"
            android:id="@+id/bbip_budget_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textAppearance="?attr/textH30"
            android:id="@+id/bbip_price_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            app:layout_constraintStart_toStartOf="@+id/bbip_budget_title"
            app:layout_constraintTop_toBottomOf="@+id/bbip_budget_title"/>
        <com.avito.android.lib.design.strikethrough.StrikethroughTextView
            android:textAppearance="?attr/textM10"
            android:id="@+id/bbip_budget_value"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/bbip_price_value"
            app:layout_constraintStart_toEndOf="@+id/bbip_price_value"
            app:strikethrough_show="true"
            app:strikethrough_tint="?attr/red600"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <include
        android:id="@+id/bbip_price_skeleton"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="14dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/bbip_budget_grope"
        app:layout_constraintTop_toBottomOf="@+id/bbip_budget_grope"
        app:layout_constraintWidth_percent="0.3"
        layout="@layout/bbip_forecast_text_stub"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/bbip_skeleton_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="bbip_forecast_skeleton, bbip_price_skeleton"/>
    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/bbip_forecast_flow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="bbip_forecast_grope, bbip_budget_grope"
        app:flow_horizontalAlign="start"
        app:flow_horizontalBias="0"
        app:flow_horizontalGap="40dp"
        app:flow_horizontalStyle="spread"
        app:flow_verticalBias="0"
        app:flow_verticalGap="12dp"
        app:flow_wrapMode="chain"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
