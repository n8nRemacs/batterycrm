<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RadioButton
        android:id="@+id/radio_button"
        android:background="@null"
        android:clickable="false"
        android:duplicateParentState="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/design_radio_button_vertical_margin"
        android:layout_marginBottom="@dimen/design_radio_button_vertical_margin"
        android:button="@drawable/design_background_radio_button"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/container"
        android:duplicateParentState="true"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/design_radio_button_container_horizontal_margin"
        android:layout_marginTop="@dimen/design_radio_button_vertical_margin"
        android:layout_marginRight="@dimen/design_radio_button_container_horizontal_margin"
        android:layout_marginBottom="@dimen/design_radio_button_vertical_margin"
        android:layout_weight="1">
        <TextView
            android:id="@+id/title"
            android:visibility="gone"
            android:duplicateParentState="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?attr/textBodyDense"/>
        <TextView
            android:textColor="?attr/gray48"
            android:id="@+id/subtitle"
            android:visibility="gone"
            android:duplicateParentState="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/design_radio_button_subtitle_margin_top"
            style="?attr/textBodySmallDense"/>
        <TextView
            android:textColor="?attr/gray48"
            android:id="@+id/second_subtitle"
            android:visibility="gone"
            android:duplicateParentState="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/design_radio_button_subtitle_margin_top"
            style="?attr/textBodySmallDense"/>
    </LinearLayout>
    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/icon"
        android:visibility="gone"
        android:duplicateParentState="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/design_radio_button_vertical_margin"
        android:layout_marginBottom="@dimen/design_radio_button_vertical_margin"/>
</merge>
