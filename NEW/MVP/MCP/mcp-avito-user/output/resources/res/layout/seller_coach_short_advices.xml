<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.LookAndFeel"
    android:id="@+id/short_advices_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="?attr/textH3"
        android:id="@+id/tv_seller_hints_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="24dp"
        android:paddingEnd="8dp"
        android:paddingVertical="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textH6"
        android:textColor="?attr/white"
        android:gravity="center"
        android:id="@+id/tv_seller_hints_count"
        android:background="@drawable/seller_coach_round_background"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:drawablePadding="4dp"
        android:paddingHorizontal="8dp"
        app:drawableEndCompat="?attr/ic_arrowForward20"
        app:drawableTint="?attr/white"
        app:layout_constraintBottom_toBottomOf="@+id/tv_seller_hints_title"
        app:layout_constraintStart_toEndOf="@+id/tv_seller_hints_title"
        app:layout_constraintTop_toTopOf="@+id/tv_seller_hints_title"/>
    <View
        android:id="@+id/v_seller_hints_more"
        android:background="?attr/selectableItemBackground"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_seller_hints_title"
        app:layout_constraintTop_toTopOf="@+id/tv_seller_hints_title"/>
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/seller_hints_viewPager"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginTop="10dp"
        android:overScrollMode="never"
        android:paddingHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_seller_hints_title"/>
</androidx.constraintlayout.widget.ConstraintLayout>
