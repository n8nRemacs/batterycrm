<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:paddingHorizontal="@dimen/content_horizontal_padding"
    app:alignContent="flex_start"
    app:alignItems="flex_start"
    app:flexDirection="row"
    app:flexWrap="wrap"
    app:justifyContent="flex_start"
    app:showDivider="none">
    <TextView
        android:textAppearance="?attr/textH20"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="viewStart"
        app:layout_flexGrow="2"/>
    <com.avito.android.lib.design.strikethrough.StrikethroughTextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/previous_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="1dp"
        app:layout_alignSelf="baseline"
        app:layout_goneMarginBottom="0dp"
        app:layout_goneMarginTop="0dp"
        app:layout_wrapBefore="true"
        app:strikethrough_show="true"
        app:strikethrough_textStyle="?attr/textM20"
        app:strikethrough_tint="?attr/red600"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:textColor="?attr/red600"
        android:id="@+id/discount_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        app:layout_alignSelf="baseline"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/delimiter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/advert_details_items_price_divider"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        app:layout_alignSelf="baseline"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        app:layout_alignSelf="baseline"/>
</com.google.android.flexbox.FlexboxLayout>
