<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:id="@+id/advert_details_safedeal_voucher"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/content_horizontal_padding">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/advert_details_safedeal_voucher_left_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="centerInside"
        android:layout_marginStart="12dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:ellipsize="end"
        android:id="@+id/advert_details_safedeal_voucher_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@+id/advert_details_safedeal_voucher_subtitle"
        app:layout_constraintEnd_toStartOf="@+id/advert_details_safedeal_voucher_right_button"
        app:layout_constraintStart_toEndOf="@+id/advert_details_safedeal_voucher_left_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"/>
    <TextView
        android:ellipsize="end"
        android:id="@+id/advert_details_safedeal_voucher_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/advert_details_safedeal_voucher_right_button"
        app:layout_constraintStart_toEndOf="@+id/advert_details_safedeal_voucher_left_icon"
        app:layout_constraintTop_toBottomOf="@+id/advert_details_safedeal_voucher_title"/>
    <FrameLayout
        android:id="@+id/advert_details_safedeal_voucher_right_button"
        android:layout_width="52dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/advert_details_safedeal_voucher_right_button_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="?attr/ic_plus20"
            app:tint="?attr/black"/>
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/advert_details_safedeal_voucher_right_button_selected_icon"
            android:visibility="gone"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="?attr/ic_check20"
            app:tint="?attr/green600"/>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
