<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/completion_container"
    android:paddingTop="24dp"
    android:paddingBottom="6dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="32dp"
    android:layout_marginHorizontal="10dp"
    android:paddingHorizontal="6dp">
    <TextView
        android:textAppearance="?attr/textH25"
        android:id="@+id/completion_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:textAlignment="center"/>
    <ImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/completion_image"
        android:layout_width="291dp"
        android:layout_height="196dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/bg_completion_banner"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-43dp">
        <TextView
            android:textAppearance="?attr/textS20"
            android:id="@+id/completion_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"/>
    </LinearLayout>
</LinearLayout>
