<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/sl_toolbar_min_height"
    app:contentInsetEnd="@dimen/sl_toolbar_inset_padding"
    app:contentInsetStart="@dimen/sl_toolbar_inset_padding"
    app:contentInsetStartWithNavigation="@dimen/sl_toolbar_inset_padding">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/back"
            android:background="@drawable/bg_btn_circle_36"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/sl_toolbar_icon_margin_small"
            android:layout_marginEnd="@dimen/sl_toolbar_icon_margin_big"
            app:srcCompat="@drawable/ic_close_24_blue"/>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="12dp">
            <androidx.appcompat.widget.AppCompatEditText
                android:textSize="16sp"
                android:textColor="?attr/black"
                android:gravity="start|center_vertical"
                android:id="@+id/query"
                android:background="@drawable/input_background"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sl_toolbar_search_bar_height"
                android:drawablePadding="@dimen/sl_toolbar_search_bar_drawable_padding"
                android:inputType="text"
                android:imeOptions="flagNoExtractUi|actionDone"
                android:textCursorDrawable="@drawable/cursor_background"
                android:paddingStart="@dimen/sl_search_padding_start"
                android:paddingEnd="@dimen/sl_search_padding_end"
                app:drawableStartCompat="@drawable/icon_search"/>
            <ImageView
                android:layout_gravity="end|center_vertical"
                android:id="@+id/clear"
                android:background="@drawable/bg_circle_gray_clear_300"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/sl_search_clear_button_margin"
                app:srcCompat="@drawable/icon_clear_search"/>
        </FrameLayout>
    </LinearLayout>
</androidx.appcompat.widget.Toolbar>
