<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="?attr/gray4"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:contentPaddingBottom="24dp"
        app:contentPaddingLeft="20dp"
        app:contentPaddingRight="16dp"
        app:contentPaddingTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_card_badge"
        app:layout_goneMarginTop="0dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="?attr/textH10"
                android:textColor="?attr/black"
                android:id="@+id/item_card_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@+id/item_card_progress_line"
                app:layout_constraintStart_toStartOf="@+id/item_card_progress_line"
                app:layout_constraintTop_toTopOf="parent"/>
            <com.avito.android.lib.design.progress_bar_re23.ProgressBarRe23
                android:id="@+id/item_card_progress_line"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/item_card_score"
                app:progressBar_cornerRadius="23dp"
                app:progressBar_height="6dp"/>
            <TextView
                android:textAppearance="?attr/textH40"
                android:textColor="?attr/black"
                android:ellipsize="end"
                android:id="@+id/item_card_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:layout_marginStart="@dimen/criteria_card_title_start_margin"
                android:layout_marginEnd="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/item_card_progress_line"
                app:layout_constraintEnd_toStartOf="@+id/item_card_arrow"
                app:layout_constraintStart_toEndOf="@+id/item_card_progress_line"
                app:layout_constraintTop_toTopOf="@+id/item_card_score"/>
            <ImageView
                android:id="@+id/item_card_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="?attr/ic_arrowDown24"
                app:layout_constraintBottom_toBottomOf="@+id/item_card_progress_line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/item_card_score"
                app:tint="?attr/black"/>
            <TextView
                android:textAppearance="?attr/textM20"
                android:textColor="?attr/black"
                android:id="@+id/item_card_description"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/item_card_progress_line"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <FrameLayout
        android:id="@+id/item_card_badge"
        android:background="@drawable/rounded_rectangle_48dp"
        android:paddingTop="2dp"
        android:paddingBottom="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="-4dp"
        android:elevation="1dp"
        android:backgroundTint="?attr/red600"
        android:paddingHorizontal="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:textAppearance="?attr/textXs10"
            android:textColor="?attr/constantWhite"
            android:layout_gravity="center"
            android:id="@+id/item_card_badge_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
