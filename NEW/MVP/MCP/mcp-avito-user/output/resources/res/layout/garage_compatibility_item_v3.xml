<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:id="@+id/garage_compatibility_item_v3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/content_horizontal_padding">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content"
        android:background="@drawable/bg_garage_compatibility_item_v3"
        android:paddingTop="20dp"
        android:paddingBottom="28dp"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAppearance="?attr/textH3"
            android:textColor="?attr/black"
            android:id="@+id/car_compatibility_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/compatibility_v3_horizontal_padding"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textAppearance="?attr/textM2"
            android:textColor="?attr/black"
            android:id="@+id/car_compatibility_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginHorizontal="@dimen/compatibility_v3_horizontal_padding"
            app:layout_constraintTop_toBottomOf="@+id/car_compatibility_title"
            app:layout_goneMarginTop="0dp"/>
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/car_compatibility_image"
            android:background="@drawable/bg_garage_compatibility_placeholder"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="@dimen/compatibility_v3_horizontal_padding"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/car_compatibility_subtitle"/>
        <View
            android:id="@+id/foreground_fade"
            android:background="?attr/constantBlack"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="0.06"
            app:layout_constraintBottom_toBottomOf="@+id/car_compatibility_image"
            app:layout_constraintEnd_toEndOf="@+id/car_compatibility_image"
            app:layout_constraintStart_toStartOf="@+id/car_compatibility_image"
            app:layout_constraintTop_toTopOf="@+id/car_compatibility_image"/>
        <ImageView
            android:id="@+id/car_compatibility_image_corner"
            android:background="@drawable/bg_garage_compatibility_icon_dot"
            android:padding="2dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="-3dp"
            android:importantForAccessibility="no"
            android:layout_marginEnd="-3dp"
            app:layout_constraintBottom_toBottomOf="@+id/car_compatibility_image"
            app:layout_constraintEnd_toEndOf="@+id/car_compatibility_image"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/car_compatibility_texts_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="@dimen/compatibility_v3_horizontal_padding"
            app:layout_constraintBottom_toBottomOf="@+id/car_compatibility_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/car_compatibility_image"
            app:layout_constraintTop_toTopOf="@+id/car_compatibility_image">
            <TextView
                android:textAppearance="?attr/textM20"
                android:textColor="?attr/black"
                android:ellipsize="end"
                android:id="@+id/car_compatibility_car_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"/>
            <TextView
                android:textColor="?attr/gray54"
                android:ellipsize="end"
                android:id="@+id/car_compatibility_car_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:singleLine="true"/>
        </LinearLayout>
        <com.avito.android.lib.design.button.Button
            android:id="@+id/button_primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginHorizontal="@dimen/compatibility_v3_horizontal_padding"
            app:layout_constraintTop_toBottomOf="@+id/car_compatibility_image"
            style="?attr/buttonPrimaryMedium"/>
        <com.avito.android.lib.design.button.Button
            android:id="@+id/button_secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginHorizontal="@dimen/compatibility_v3_horizontal_padding"
            app:layout_constraintTop_toBottomOf="@+id/button_primary"
            app:layout_goneMarginTop="16dp"
            style="?attr/buttonOverlaySecondaryMedium"/>
        <TextView
            android:textAppearance="?attr/textH3"
            android:textColor="?attr/black"
            android:id="@+id/other_compatibility_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="@dimen/compatibility_v3_horizontal_padding"
            app:layout_constraintTop_toBottomOf="@+id/button_secondary"
            app:layout_goneMarginTop="0dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:orientation="horizontal"
            android:id="@+id/other_compatibility_list"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:overScrollMode="never"
            android:nestedScrollingEnabled="false"
            android:paddingHorizontal="@dimen/compatibility_v3_horizontal_padding"
            app:layout_constraintTop_toBottomOf="@+id/other_compatibility_title"/>
        <TextView
            android:textAppearance="?attr/textS20"
            android:textColor="?attr/gray54"
            android:id="@+id/other_compatibility_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="@dimen/compatibility_v3_horizontal_padding"
            app:layout_constraintTop_toBottomOf="@+id/other_compatibility_list"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.avito.android.lib.design.skeleton.shimmer.ShimmerFrameLayout
        android:id="@+id/loading"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shimmer_animationDuration="3000"
        app:shimmer_autostart="true">
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/bg_garage_compatibility_item_v3"
            android:paddingTop="20dp"
            android:paddingBottom="28dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="24dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:importantForAccessibility="no"
                app:srcCompat="@drawable/ic_garage_compatibility_v3_skeleton"/>
        </LinearLayout>
    </com.avito.android.lib.design.skeleton.shimmer.ShimmerFrameLayout>
</FrameLayout>
