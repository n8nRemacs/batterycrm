<?xml version="1.0" encoding="utf-8"?>
<com.avito.android.lib.util.layout.RatioFrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gallery_item_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foreground="@drawable/rich_item_fg">
    <com.avito.android.fresco.SimpleDraweeView
        android:layout_gravity="center_horizontal"
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:actualImageScaleType="centerCrop"
        app:roundedCornerRadius="@dimen/serp_gallery_item_radius"
        style="@style/Widget.Avito.Rds.SimpleDraweeView"/>
    <include
        android:id="@+id/zoom_onboarding"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/advert_pinch_to_zoom_onboarding_layout"/>
</com.avito.android.lib.util.layout.RatioFrameLayout>
