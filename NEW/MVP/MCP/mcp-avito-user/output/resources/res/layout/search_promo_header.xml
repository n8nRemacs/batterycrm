<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:id="@+id/search_promo_header"
    android:background="?attr/white"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/search_promo_header_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/search_promo_header_background_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:actualImageScaleType="fitXY"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/search_promo_header_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_gravity="end"
            android:id="@+id/search_promo_header_right_image"
            android:layout_width="166dp"
            android:layout_height="50dp"
            app:actualImageScaleType="fitEnd"/>
        <LinearLayout
            android:layout_gravity="start|bottom"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="17dp"
            android:layout_marginStart="16dp">
            <TextView
                android:textAppearance="?attr/textH3"
                android:textStyle="bold"
                android:textColor="?attr/constantWhite"
                android:id="@+id/search_promo_header_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.avito.android.lib.design.header_button.HeaderButton
                android:id="@+id/search_promo_header_button_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginStart="10dp"
                app:headerButton_textIconStyleAttr="?attr/textIconHeaderbuttonArrow"
                app:layout_alignSelf="center"
                style="?attr/headerButtonH20"/>
        </LinearLayout>
    </FrameLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitEnd"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/search_promo_header_right_corner"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitStart"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/search_promo_header_left_corner"/>
</androidx.constraintlayout.widget.ConstraintLayout>
