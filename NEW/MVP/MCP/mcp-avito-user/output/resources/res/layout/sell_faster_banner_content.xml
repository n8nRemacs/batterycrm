<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="vertical"
    android:id="@+id/discount_banner_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textAppearance="?attr/textS10"
        android:textColor="?attr/black"
        android:id="@+id/discount_banner_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textAppearance="?attr/textS10"
        android:textColor="?attr/gray48"
        android:id="@+id/discount_banner_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
