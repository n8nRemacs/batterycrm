<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bg_group_block_redesign"
    android:paddingTop="20dp"
    android:paddingBottom="32dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/publish_container_horizontal_padding_redesign"
    android:layout_marginVertical="16dp"
    android:paddingHorizontal="24dp">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/group_contact_blocks_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/group_contact_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        style="?attr/buttonPrimaryMedium"/>
</LinearLayout>
