<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bbip_private_budget_content_container"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.avito.android.lib.design.docking_badge.DockingBadge
        android:id="@+id/bbip_private_budget_content_discount_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-13dp"
        android:layout_marginStart="12dp"
        android:elevation="1dp"
        app:dockingBadge_end="?attr/dockingBadgeEdgePipkaMedium"
        app:dockingBadge_start="?attr/dockingBadgeEdgeFlagMedium"
        style="?attr/dockingBadgeRedMedium"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/bg_bbip_private_budget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="@drawable/fg_bbip_private_budget">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="24dp">
            <TextView
                android:id="@+id/bbip_private_budget_content_forecast_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"/>
            <TextView
                android:textAppearance="?attr/textH25"
                android:id="@+id/bbip_private_budget_content_contacts_forecast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"/>
            <TextView
                android:textAppearance="?attr/textM10"
                android:id="@+id/bbip_private_budget_content_views_forecast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"/>
            <com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout
                android:id="@+id/bbip_private_budget_content_forecast_shimmer"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                style="?attr/shimmerDefault">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.avito.android.lib.design.skeleton.Skeleton
                        android:id="@+id/bbip_private_budget_content_contacts_forecast_skeleton"
                        android:layout_width="200dp"
                        android:layout_height="16dp"
                        android:layout_marginVertical="6dp"
                        app:skeleton_radius="6dp"/>
                    <com.avito.android.lib.design.skeleton.Skeleton
                        android:id="@+id/bbip_private_budget_content_views_forecast_skeleton"
                        android:layout_width="140dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="6dp"
                        app:skeleton_radius="6dp"/>
                </LinearLayout>
            </com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/bbip_private_budget_price_container"
                android:paddingTop="16dp"
                android:paddingBottom="24dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textAppearance="?attr/textM10"
                    android:id="@+id/bbip_private_budget_content_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp"/>
                <com.avito.android.lib.design.strikethrough.StrikethroughTextView
                    android:textAppearance="?attr/textM10"
                    android:textColor="?attr/gray54"
                    android:id="@+id/bbip_private_budget_content_budget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    app:strikethrough_show="true"
                    app:strikethrough_tint="?attr/red600"/>
                <com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout
                    android:id="@+id/bbip_private_budget_content_price_shimmer"
                    android:visibility="gone"
                    android:layout_width="70dp"
                    android:layout_height="10dp"
                    style="?attr/shimmerDefault">
                    <com.avito.android.lib.design.skeleton.Skeleton
                        android:id="@+id/bbip_private_budget_content_price_skeleton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="6dp"
                        app:skeleton_radius="6dp"/>
                </com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout>
                <com.avito.android.lib.design.button.Button
                    android:id="@+id/bbip_private_budget_custom_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="24dp"
                    app:button_textPaddingLeft="0dp"
                    app:button_textPaddingRight="0dp"
                    style="?attr/buttonOverlayPrimaryExtraSmallRound"/>
            </LinearLayout>
        </LinearLayout>
        <com.avito.android.fresco.SimpleDraweeView
            android:id="@+id/bbip_private_budget_content_image"
            android:layout_width="108dp"
            android:layout_height="144dp"
            app:roundBottomLeft="false"
            app:roundBottomRight="true"
            app:roundTopLeft="false"
            app:roundTopRight="true"
            app:roundedCornerRadius="24dp"/>
    </LinearLayout>
</FrameLayout>
