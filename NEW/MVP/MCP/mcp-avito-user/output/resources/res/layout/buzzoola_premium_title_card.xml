<?xml version="1.0" encoding="utf-8"?>
<com.avito.android.lib.util.layout.RatioFrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gallery_item_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foreground="@drawable/rich_item_fg">
    <com.avito.android.fresco.SimpleDraweeView
        android:layout_gravity="center_horizontal"
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:actualImageScaleType="centerCrop"
        app:roundedCornerRadius="@dimen/serp_gallery_item_radius"
        style="@style/Widget.Avito.Rds.SimpleDraweeView"/>
    <FrameLayout
        android:layout_gravity="bottom"
        android:id="@+id/text_gradient"
        android:background="@drawable/ad_premium_v2_gradient"
        android:layout_width="match_parent"
        android:layout_height="82dp"/>
    <RelativeLayout
        android:layout_gravity="bottom"
        android:paddingLeft="@dimen/ad_badges_margin"
        android:paddingRight="@dimen/ad_badges_margin"
        android:paddingBottom="10dp"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/logo_container"
            android:background="@drawable/ad_premium_v2_logo_bg"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentBottom="true">
            <com.avito.android.fresco.SimpleDraweeView
                android:layout_gravity="center"
                android:id="@+id/logo"
                android:layout_width="44dp"
                android:layout_height="32dp"
                app:actualImageScaleType="fitCenter"/>
        </FrameLayout>
        <Space
            android:id="@+id/action_bottom_space"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>
        <ImageView
            android:id="@+id/action_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="12dp"
            android:layout_above="@+id/action_bottom_space"
            android:layout_alignParentRight="true"
            app:tint="?attr/blue"/>
        <TextView
            android:textColor="?attr/gray44"
            android:id="@+id/description"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:maxLines="1"
            android:singleLine="false"
            android:layout_toLeftOf="@+id/action_icon"
            android:layout_toRightOf="@+id/logo_container"
            android:layout_alignParentBottom="true"
            style="@style/Widget.Avito.TextView.Serp.Item.Caption.Rich.Subtitle"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_toLeftOf="@+id/action_icon"
            android:layout_toRightOf="@+id/logo_container"
            android:layout_above="@+id/description"
            android:layout_alignWithParentIfMissing="true"
            style="@style/Widget.Avito.TextView.Serp.Item.Caption.Rich.Title"/>
    </RelativeLayout>
</com.avito.android.lib.util.layout.RatioFrameLayout>
