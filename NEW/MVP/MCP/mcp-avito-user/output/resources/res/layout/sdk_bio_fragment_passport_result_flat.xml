<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/sdkBioBackgroundPrimaryColor"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ru.mts.biometry.sdk.view.SdkBioToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp">
            <TextView
                android:textAppearance="?attr/sdkBioTextAppearanceHeader"
                android:id="@+id/passport_fields_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sdk_bio_title_result_passport_data"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="?attr/sdkBioPassportResultHeaderStyle"/>
            <TextView
                android:textAppearance="?attr/sdkBioTextAppearanceRegularText"
                android:id="@+id/confirmationMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/sdk_bio_message_confirm_not_accepted"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/passport_fields_title"
                style="?attr/sdkBioPassportResultDescriptionStyle"/>
            <ru.mts.biometry.sdk.view.SdkBioTextField
                android:id="@+id/tf_lastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:paddingVertical="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/confirmationMessage"
                app:sdkBioTextFieldLabel="@string/sdk_bio_title_passport_surname"/>
            <ru.mts.biometry.sdk.view.SdkBioTextField
                android:id="@+id/tf_firstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tf_lastname"
                app:sdkBioTextFieldLabel="@string/sdk_bio_title_passport_name"/>
            <ru.mts.biometry.sdk.view.SdkBioTextField
                android:id="@+id/tf_patronymic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tf_firstname"
                app:sdkBioTextFieldLabel="@string/sdk_bio_title_passport_patronymic"/>
            <ru.mts.biometry.sdk.view.SdkBioTextField
                android:id="@+id/tf_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tf_patronymic"
                app:sdkBioTextFieldLabel="@string/sdk_bio_title_passport_gender"/>
            <ru.mts.biometry.sdk.view.SdkBioTextField
                android:id="@+id/tf_birth_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tf_gender"
                app:sdkBioTextFieldLabel="@string/sdk_bio_title_passport_date_birth"/>
            <TextView
                android:id="@+id/tv_passport_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/sdk_bio_title_passport_title"
                android:paddingVertical="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tf_birth_date"
                style="?attr/sdkBioTextAppearanceHeader"/>
            <ru.mts.biometry.sdk.view.SdkBioTextField
                android:id="@+id/tf_passport_series"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="20dp"
                android:paddingVertical="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_passport_title"
                app:sdkBioTextFieldLabel="@string/sdk_bio_title_passport_series"/>
            <ru.mts.biometry.sdk.view.SdkBioTextField
                android:id="@+id/tf_passport_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:paddingVertical="8dp"
                app:layout_constraintStart_toEndOf="@+id/tf_passport_series"
                app:layout_constraintTop_toBottomOf="@+id/tv_passport_title"
                app:sdkBioTextFieldLabel="@string/sdk_bio_title_passport_number"/>
            <ru.mts.biometry.sdk.view.SdkBioTextField
                android:id="@+id/tf_delivery_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tf_passport_series"
                app:sdkBioTextFieldLabel="@string/sdk_bio_title_passport_delivery_date"/>
            <ru.mts.biometry.sdk.view.SdkBioTextField
                android:id="@+id/tf_delivery_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tf_delivery_date"
                app:sdkBioTextFieldLabel="@string/sdk_bio_title_passport_delivery_department"/>
            <ru.mts.biometry.sdk.view.SdkBioTextField
                android:id="@+id/tf_department_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tf_delivery_place"
                app:sdkBioTextFieldLabel="@string/sdk_bio_title_passport_department_code"/>
            <TextView
                android:id="@+id/tv_birthplace_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/sdk_bio_title_passport_birth_place"
                android:paddingVertical="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tf_department_code"
                style="?attr/sdkBioTextAppearanceHeader"/>
            <ru.mts.biometry.sdk.view.SdkBioTextField
                android:id="@+id/tf_birth_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_birthplace_title"
                app:sdkBioTextFieldLabel="@string/sdk_bio_title_passport_birth_place"/>
            <TextView
                android:id="@+id/tv_inn_title"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/sdk_bio_inn"
                android:paddingVertical="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tf_birth_place"
                style="?attr/sdkBioTextAppearanceHeader"/>
            <TextView
                android:textColor="?attr/sdkBioInfoColor"
                android:id="@+id/tv_change_inn"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/tv_inn_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_inn_title"
                style="?attr/sdkBioTextAppearanceRegularText"/>
            <ru.mts.biometry.sdk.view.SdkBioTextField
                android:id="@+id/tf_inn"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_inn_title"
                app:sdkBioTextFieldLabel="@string/sdk_bio_inn_label"/>
            <TextView
                android:textColor="?attr/sdkBioErrorColor"
                android:id="@+id/tv_inn_error"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sdk_bio_inn_error_not_found"
                android:paddingVertical="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_inn_title"
                style="?attr/sdkBioTextAppearanceBoldText"/>
            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier_bottom_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="tf_birth_place, tf_inn, tv_inn_error"/>
            <ru.mts.biometry.sdk.view.SdkBioButton
                android:id="@+id/btn_accept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/barrier_bottom_content"
                app:sdkBioButtonTitle="@string/sdk_bio_title_passport_accept"
                app:sdkBioButtonType="primary"/>
            <ru.mts.biometry.sdk.view.SdkBioButton
                android:id="@+id/btn_retry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_accept"
                app:sdkBioButtonTitle="@string/sdk_bio_title_retry_scan_full"
                app:sdkBioButtonType="secondary"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:textAppearance="?attr/sdkBioTextAppearanceCaptionText"
                android:textColor="?attr/sdkBioTextSecondaryColor"
                android:gravity="center"
                android:id="@+id/tv_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/sdk_bio_passport_bottom_rules"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_retry"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_info"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
