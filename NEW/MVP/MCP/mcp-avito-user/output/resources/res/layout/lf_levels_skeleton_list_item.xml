<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.avito.android.lib.design.skeleton.Skeleton
        android:id="@+id/icon_stub"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:skeleton_radius="12dp"/>
    <com.avito.android.lib.design.skeleton.Skeleton
        android:id="@+id/title_stub1"
        android:layout_width="250dp"
        android:layout_height="9dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/icon_stub"
        app:layout_constraintTop_toTopOf="parent"
        app:skeleton_radius="3dp"/>
    <com.avito.android.lib.design.skeleton.Skeleton
        android:id="@+id/title_stub2"
        android:layout_width="200dp"
        android:layout_height="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/icon_stub"
        app:layout_constraintTop_toBottomOf="@+id/title_stub1"
        app:skeleton_radius="3dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
