<?xml version="1.0" encoding="utf-8"?>
<com.avito.android.lib.design.component_container.ComponentContainer xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:paddingLeft="@dimen/publish_container_horizontal_padding"
    android:paddingRight="@dimen/publish_container_horizontal_padding"
    android:paddingBottom="26dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:componentContainer_contentPaddingBottom="@dimen/publish_container_content_bottom_padding"
    app:componentContainer_contentPaddingTop="@dimen/publish_container_content_top_padding"
    app:componentContainer_subtitleAppearance="?attr/textM1"
    app:componentContainer_titleAppearance="?attr/textH5"
    app:componentContainer_titleSpacing="2dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/delivery_description"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?attr/textM1"/>
        <TextView
            android:id="@+id/requirements_description"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?attr/textM1"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/add_video_view_group"
                android:background="@drawable/bg_rectangle_warm_gray_4"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="168dp"
                android:layout_marginEnd="5dp"
                app:layout_constraintEnd_toStartOf="@+id/record_video_view_group"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <ImageView
                    android:id="@+id/video_upload_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginBottom="4dp"
                    android:importantForAccessibility="no"
                    app:srcCompat="@drawable/ic_video_24"/>
                <TextView
                    android:textAppearance="?attr/textS1"
                    android:gravity="center"
                    android:id="@+id/video_upload_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/upload_video_add_video_new"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/record_video_view_group"
                android:background="@drawable/bg_rectangle_warm_gray_4"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="168dp"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/add_video_view_group"
                app:layout_constraintTop_toTopOf="parent">
                <ImageView
                    android:id="@+id/record_video_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginBottom="4dp"
                    android:importantForAccessibility="no"
                    app:srcCompat="@drawable/ic_rec_24"/>
                <TextView
                    android:textAppearance="?attr/textS1"
                    android:gravity="center"
                    android:id="@+id/record_video_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/upload_video_rec_video"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/video_uploading_disabled_outline"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="168dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <View
                    android:background="@drawable/bg_video_upload_disabled"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"/>
                <View
                    android:background="@drawable/bg_video_upload_disabled"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/video_upload_item_container"
            android:layout_width="177dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:animateLayoutChanges="true">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/video_picked_has_not_thumbnail_view_group"
                android:background="@drawable/bg_rectangle_warm_gray_4"
                android:focusable="true"
                android:visibility="gone"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="306dp"
                android:layout_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/video_picked_has_not_thumbnail_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="?attr/ic_timeThinOutline24"
                    android:importantForAccessibility="no"/>
                <TextView
                    android:textAppearance="?attr/textBodyDense"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/video_picked_has_not_thumbnail_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/upload_video_is_processed"/>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:orientation="vertical"
                android:id="@+id/video_picked_has_thumbnail_view_group"
                android:background="@drawable/bg_rectangle_warm_gray_4"
                android:focusable="true"
                android:visibility="gone"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/video_thumbnail_view"
                    android:layout_width="match_parent"
                    android:layout_height="306dp"
                    android:scaleType="centerCrop"
                    app:roundedCornerRadius="16dp"/>
                <View
                    android:id="@+id/picked_video_disabled_overlay"
                    android:background="?attr/whiteAlpha80"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <com.avito.android.publish.video_upload.VideoUploadProgressBar
                    android:layout_gravity="center"
                    android:id="@+id/video_upload_progress_bar"
                    android:visibility="gone"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
                <TextView
                    android:textColor="?attr/constantWhite"
                    android:layout_gravity="start|top"
                    android:id="@+id/video_upload_size_progress"
                    android:background="@drawable/video_upload_info_bg"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="2dp"
                    style="?attr/textS20"/>
            </androidx.cardview.widget.CardView>
            <FrameLayout
                android:id="@+id/clickable_area_remove_video_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="4dp"
                android:layout_marginEnd="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <ImageView
                    android:layout_gravity="center"
                    android:padding="6dp"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="?attr/ic_delete16"
                    android:importantForAccessibility="no"
                    app:tint="?attr/black"
                    style="@style/Widget.Avito.Button.Flat.Gray"/>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/video_thumbnail_disabled_outline"
                android:background="@drawable/bg_video_upload_disabled"
                android:visibility="visible"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="6dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:textAppearance="?attr/textBodySmallDense"
            android:textColor="?attr/red600"
            android:id="@+id/error_text_view"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="6dp"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:textColor="?attr/orange800"
            android:gravity="start"
            android:id="@+id/disable_video_uploading_text"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/upload_video_disabled_text"
            app:layout_constraintStart_toStartOf="parent"
            style="?attr/textS1"/>
        <include
            android:id="@+id/onboarding_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            layout="@layout/video_upload_onboarding_redesigned"/>
    </LinearLayout>
</com.avito.android.lib.design.component_container.ComponentContainer>
