<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/result_container"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="?attr/textH2"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textAppearance="?attr/textBody"
        android:id="@+id/sub_title"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="6dp"/>
    <com.avito.android.advert.item.teaser.ReportTeaserInsightListViewImpl
        android:id="@+id/insight_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"/>
    <com.avito.android.lib.design.button.Button
        android:gravity="center"
        android:id="@+id/button"
        android:layout_marginTop="@dimen/domoteka_teaser_button_margin_top"
        android:text="@string/advert_details_autoteka_teaser_button"
        style="@style/AutotekaTeaserButton"/>
</LinearLayout>
