<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp"
    android:paddingVertical="8dp">
    <TextView
        android:textAppearance="?attr/textH30"
        android:id="@+id/dtv_expense_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_stats_expenses_total"
        android:paddingStart="0dp"
        android:paddingEnd="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/v_indicator_dotted"
        android:background="@drawable/dotted"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginBottom="5dp"
        android:layout_marginHorizontal="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/dtv_expense_text"
        app:layout_constraintEnd_toStartOf="@+id/stv_expense_and_bonuses"
        app:layout_constraintStart_toEndOf="@+id/dtv_expense_text"/>
    <com.avito.android.lib.design.strikethrough.StrikethroughTextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/stv_expense_and_bonuses"
        android:paddingBottom="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/dtv_expense_total"
        app:layout_constraintEnd_toStartOf="@+id/dtv_expense_total"
        app:strikethrough_show="true"
        app:strikethrough_tint="?attr/red600"/>
    <TextView
        android:textAppearance="?attr/textH30"
        android:id="@+id/dtv_expense_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
