<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sx_address_video_verification_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/sx_address_video_verification_toolbar"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:maxHeight="44dp"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_back_24"/>
    <FrameLayout
        android:id="@+id/sx_address_video_verification_content_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sx_address_video_verification_toolbar">
        <androidx.core.widget.NestedScrollView
            android:id="@+id/sx_address_video_verification_scroll"
            android:paddingBottom="104dp"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp">
                <TextView
                    android:textAppearance="?attr/textM20"
                    android:id="@+id/sx_address_video_verification_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"/>
                <include
                    android:id="@+id/sx_address_video_verification_file_block"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    layout="@layout/sx_address_video_verification_file_block_layout"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <com.avito.android.lib.design.button.Button
            android:layout_gravity="bottom"
            android:id="@+id/sx_address_video_verification_send_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="16dp"
            style="?attr/buttonPrimaryLarge"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/sx_address_video_verification_progress_overlay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sx_address_video_verification_toolbar"/>
</androidx.constraintlayout.widget.ConstraintLayout>
