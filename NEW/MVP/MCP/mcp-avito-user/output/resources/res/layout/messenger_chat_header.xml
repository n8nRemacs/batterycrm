<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/channel_header_layout"
    android:background="?attr/white"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_container"
        android:background="@drawable/messenger_header_item_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        android:paddingHorizontal="10dp"
        android:paddingVertical="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_container">
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_gravity="center"
            android:id="@+id/item_image"
            android:layout_width="48dp"
            android:layout_height="36dp"
            android:layout_marginEnd="6dp"
            app:actualImageScaleType="centerCrop"
            app:backgroundImage="?attr/gray4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginEnd="0dp"
            app:placeholderImageScaleType="center"
            app:progressBarImage="?attr/gray4"
            app:roundedCornerRadius="2dp"/>
        <TextView
            android:textAppearance="?attr/textS2"
            android:ellipsize="end"
            android:id="@+id/item_title"
            android:visibility="invisible"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:maxLines="1"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            app:layout_constraintBottom_toTopOf="@+id/item_price"
            app:layout_constraintEnd_toStartOf="@+id/header_button"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/item_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_goneMarginBottom="0dp"
            app:layout_goneMarginEnd="0dp"/>
        <TextView
            android:textAppearance="?attr/textS2"
            android:ellipsize="end"
            android:id="@+id/item_price"
            android:visibility="invisible"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/header_button"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/item_image"
            app:layout_constraintTop_toBottomOf="@+id/item_title"/>
        <com.avito.android.lib.design.button.Button
            android:theme="@style/Theme.DesignSystem.Re23"
            android:id="@+id/header_button"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_max="160dp"
            style="?attr/buttonPaySmall"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:id="@+id/title_container"
        android:background="@drawable/bg_chat_header_title_container"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingEnd="0dp"
        android:layout_marginStart="48dp"
        app:layout_constrainedHeight="true"
        app:layout_constraintEnd_toStartOf="@+id/iac_call_button"
        app:layout_constraintHeight_min="52dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/chat_title_row"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1">
            <TextView
                android:textColor="?attr/black"
                android:ellipsize="end"
                android:layout_gravity="start"
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_weight="1"
                app:fontFamily="?attr/fontHeavy"
                style="?attr/textHeadingSmall"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/title_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_messenger_drop_down_16"/>
            <TextView
                android:textColor="?attr/black"
                android:layout_gravity="start"
                android:id="@+id/chat_rating"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:singleLine="true"
                android:drawablePadding="2dp"
                android:layout_weight="1"
                android:drawableStart="?attr/ic_rating16"
                android:layout_marginStart="8dp"
                android:drawableTint="?attr/orange"
                app:fontFamily="?attr/fontHeavy"
                style="?attr/textHeadingSmall"/>
        </LinearLayout>
        <TextView
            android:textColor="?attr/gray48"
            android:ellipsize="end"
            android:gravity="start"
            android:id="@+id/online_status"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:singleLine="true"
            style="?attr/textBodySmallDense"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/back_button"
        android:background="?attr/white"
        android:paddingTop="4dp"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="56dp"
        android:layout_height="52dp"
        android:foreground="?attr/selectableItemBackground"
        android:src="@drawable/ic_back_24"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <include
        android:id="@+id/connection_indicator"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginStart="56dp"
        app:layout_constraintEnd_toEndOf="@+id/title_container"
        app:layout_constraintStart_toStartOf="@+id/title_container"
        app:layout_constraintTop_toTopOf="parent"
        layout="@layout/messenger_connection_indicator"/>
    <ImageView
        android:id="@+id/iac_call_button"
        android:background="?attr/white"
        android:paddingBottom="1dp"
        android:focusable="true"
        android:visibility="gone"
        android:clickable="true"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:foreground="?attr/selectableItemBackground"
        android:src="@drawable/ic_call_24"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/header_title_button"
        android:background="?attr/selectableItemBackground"
        android:paddingBottom="1dp"
        android:focusable="true"
        android:visibility="gone"
        android:clickable="true"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:scaleType="centerInside"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/ic_help24"
        app:tint="?attr/black"/>
    <ImageView
        android:id="@+id/iac_button_onboarding_static_dot"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:src="@drawable/circle_red"
        android:alpha="1"
        android:layout_marginEnd="11dp"
        app:layout_constraintEnd_toEndOf="@+id/iac_call_button"
        app:layout_constraintTop_toTopOf="@+id/iac_call_button"/>
    <ImageView
        android:id="@+id/iac_button_onboarding_dynamic_dot"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:src="@drawable/circle_red"
        android:alpha="0.5"
        android:layout_marginEnd="11dp"
        app:layout_constraintEnd_toEndOf="@+id/iac_call_button"
        app:layout_constraintTop_toTopOf="@+id/iac_call_button"/>
    <View
        android:id="@+id/inner_divider"
        android:background="?attr/gray12"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintBottom_toBottomOf="@+id/title_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
