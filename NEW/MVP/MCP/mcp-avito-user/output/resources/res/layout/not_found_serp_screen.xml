<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@android:id/empty"
        android:paddingLeft="@dimen/content_horizontal_padding"
        android:paddingRight="@dimen/content_horizontal_padding"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/stub_title_text_size"
            android:textColor="?attr/gray28"
            android:layout_gravity="center_horizontal"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="@string/serp_not_found_title"/>
        <TextView
            android:textSize="@dimen/stub_hint_text_size"
            android:textColor="?attr/gray28"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="500dp"
            android:text="@string/serp_not_found_hint_saved_search"
            android:lineSpacingExtra="@dimen/stub_extra_line_spacing"/>
    </LinearLayout>
</merge>
