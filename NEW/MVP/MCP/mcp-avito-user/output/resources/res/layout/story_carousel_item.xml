<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="vertical"
    android:id="@+id/story_circle_item"
    android:layout_width="92dp"
    android:layout_height="128dp">
    <com.avito.android.lib.util.layout.RatioFrameLayout
        android:id="@+id/story_item"
        android:clipToPadding="false"
        android:layout_width="92dp"
        android:layout_height="92dp">
        <com.avito.android.fresco.SimpleDraweeView
            android:layout_gravity="center"
            android:id="@+id/image"
            android:duplicateParentState="true"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:foreground="@drawable/circle_item"
            app:actualImageScaleType="centerCrop"
            app:roundAsCircle="true"
            style="@style/Widget.Avito.Rds.SimpleDraweeView"/>
        <View
            android:layout_gravity="center"
            android:id="@+id/viewed_indicator"
            android:background="@drawable/viewed_story"
            android:layout_width="92dp"
            android:layout_height="92dp"/>
        <com.avito.android.lib.design.docking_badge.DockingBadge
            android:layout_gravity="bottom|center_horizontal"
            android:id="@+id/docking_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?attr/dockingBadgeGreenMedium"/>
    </com.avito.android.lib.util.layout.RatioFrameLayout>
    <TextView
        android:textAppearance="?attr/textXs"
        android:textSize="11sp"
        android:textColor="@color/text_black_selector"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="6dp"
        android:maxLines="2"
        android:textAlignment="center"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:hyphenationFrequency="normal"/>
</LinearLayout>
