<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/toolbar_title_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAppearance="?attr/textH50"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/toolbar_title"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"/>
        <com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout
            android:layout_gravity="center_horizontal"
            android:id="@+id/toolbar_title_shimmer"
            android:visibility="gone"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            style="?attr/shimmerDefault">
            <com.avito.android.lib.design.skeleton.TextSkeleton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:skeleton_radius="6dp"
                style="?attr/textH50"/>
        </com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout>
        <TextView
            android:textAppearance="?attr/textS20"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/toolbar_subtitle"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"/>
        <com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout
            android:layout_gravity="center_horizontal"
            android:id="@+id/toolbar_subtitle_shimmer"
            android:visibility="gone"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            style="?attr/shimmerDefault">
            <com.avito.android.lib.design.skeleton.TextSkeleton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:skeleton_radius="6dp"
                style="?attr/textS20"/>
        </com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/toolbar_icon"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="center"
        android:importantForAccessibility="no"
        app:srcCompat="?attr/ic_close24"
        app:tint="?attr/black"/>
</merge>
