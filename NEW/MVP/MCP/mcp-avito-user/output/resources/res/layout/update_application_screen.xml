<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/content"
        android:paddingLeft="@dimen/content_horizontal_padding"
        android:paddingTop="@dimen/content_top_padding"
        android:paddingRight="@dimen/content_horizontal_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image_update_application"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:src="?attr/img_updateApp"
            android:scaleType="centerInside"/>
        <TextView
            android:textColor="?attr/black"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/update_application_screen_title"
            android:lineSpacingExtra="6sp"
            style="?attr/textHeadingLarge"/>
        <TextView
            android:textColor="?attr/gray48"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="@string/update_application_screen_description"
            android:lineSpacingExtra="5sp"
            style="?attr/textBodySmall"/>
        <include
            android:id="@+id/button_update_application"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-4dp"
            android:layout_marginRight="-4dp"
            android:layout_marginBottom="8dp"
            layout="@layout/button_primary"/>
        <TextView
            android:textColor="?attr/gray28"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="@string/update_application_screen_caption"
            style="?attr/textBodySmall"/>
    </LinearLayout>
</ScrollView>
