<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/title"
        android:duplicateParentState="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/design_radio_group_title_margin_bottom"
        android:layout_marginHorizontal="@dimen/seller_edit_calendar_recycler_view_horizontal_padding"
        style="?attr/textHeadingSmall"/>
    <TextView
        android:textColor="?attr/red"
        android:id="@+id/error"
        android:duplicateParentState="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="@dimen/seller_edit_calendar_recycler_view_horizontal_padding"
        style="?attr/textBodySmall"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/radio_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
