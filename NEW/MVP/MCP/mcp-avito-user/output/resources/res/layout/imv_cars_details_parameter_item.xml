<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/imv_cars_details_param_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp">
    <TextView
        android:textAppearance="?attr/textS1"
        android:id="@+id/neighbor_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"/>
    <TextView
        android:textAppearance="?attr/textH5"
        android:id="@+id/neighbor_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"/>
    <TextView
        android:textAppearance="?attr/textS2"
        android:textColor="?attr/gray44"
        android:id="@+id/neighbor_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:maxLines="1"/>
</LinearLayout>
