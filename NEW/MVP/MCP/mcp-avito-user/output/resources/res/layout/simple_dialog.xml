<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:paddingTop="@dimen/simple_dialog_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_gravity="center_horizontal"
                android:id="@+id/image"
                android:visibility="gone"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_marginBottom="@dimen/simple_dialog_padding"/>
            <include
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/simple_dialog_padding"
                android:layout_marginRight="@dimen/simple_dialog_padding"
                android:layout_marginBottom="8dp"
                layout="@layout/text_title"/>
            <include
                android:id="@+id/body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/simple_dialog_padding"
                android:layout_marginRight="@dimen/simple_dialog_padding"
                layout="@layout/text_body"/>
            <include
                android:id="@+id/embedded_link"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/simple_dialog_padding"
                android:layout_marginTop="20dp"
                android:layout_marginRight="@dimen/simple_dialog_padding"
                layout="@layout/text_body"/>
        </LinearLayout>
    </ScrollView>
    <include
        android:id="@+id/button_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        layout="@layout/button_panel"/>
</LinearLayout>
