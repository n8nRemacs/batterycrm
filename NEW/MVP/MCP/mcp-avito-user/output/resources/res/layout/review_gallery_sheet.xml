<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/review_gallery_sheet_container"
        android:background="?attr/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
            android:orientation="horizontal"
            android:id="@+id/review_gallery_photos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/review_gallery_sheet_rating"/>
        <TextView
            android:textAppearance="?attr/textH50"
            android:textColor="?attr/black"
            android:id="@+id/review_gallery_sheet_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.avito.android.lib.design.rating.RatingBar
            android:id="@+id/review_gallery_sheet_rating"
            android:paddingTop="2dp"
            android:layout_height="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/review_gallery_sheet_name"
            style="@style/Design.Widget.Avito.Rating.Normal"/>
        <TextView
            android:textAppearance="?attr/textM20"
            android:textColor="?attr/gray54"
            android:id="@+id/review_gallery_sheet_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            app:layout_constraintBottom_toBottomOf="@+id/review_gallery_sheet_rating"
            app:layout_constraintStart_toEndOf="@+id/review_gallery_sheet_rating"
            app:layout_constraintTop_toTopOf="@+id/review_gallery_sheet_rating"/>
        <TextView
            android:textAppearance="?attr/textM10"
            android:textColor="?attr/black"
            android:id="@+id/review_gallery_sheet_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/review_gallery_photos"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
