<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/messenger_spam_actions_bubble"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textColor="?attr/gray48"
        android:layout_gravity="center_horizontal"
        android:id="@+id/spam_actions_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/content_horizontal_padding"
        android:layout_marginTop="4dp"
        android:layout_marginRight="@dimen/content_horizontal_padding"
        android:layout_marginBottom="8dp"
        android:text="@string/messenger_spam_actions_text"
        style="?attr/textBodySmall"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.avito.android.lib.design.button.Button
            android:id="@+id/spam_actions_yes_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="81dp"
            android:text="@string/messenger_spam_actions_yes"
            style="?attr/buttonOutlineSmall"/>
        <Space
            android:layout_width="8dp"
            android:layout_height="match_parent"/>
        <com.avito.android.lib.design.button.Button
            android:id="@+id/spam_actions_no_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="81dp"
            android:text="@string/messenger_spam_actions_no"
            style="?attr/buttonOutlineSmall"/>
    </LinearLayout>
    <Space
        android:id="@+id/spam_actions_bottom_divider"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="16dp"/>
</LinearLayout>
