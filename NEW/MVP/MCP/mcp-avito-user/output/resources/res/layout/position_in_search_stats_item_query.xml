<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/search_position_query_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.widget.Space
        android:id="@+id/query_top_padding"
        android:layout_width="0dp"
        android:layout_height="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <android.widget.Space
        android:id="@+id/query_bottom_padding"
        android:layout_width="0dp"
        android:layout_height="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:ellipsize="end"
        android:id="@+id/query_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        app:layout_constrainedHeight="true"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@+id/query_bottom_padding"
        app:layout_constraintEnd_toStartOf="@+id/query_expand_more"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/query_top_padding"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/query_expand_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/query_title"
        app:layout_constraintEnd_toStartOf="@+id/query_title_guideline"
        app:layout_constraintStart_toEndOf="@+id/query_title"
        app:layout_constraintTop_toTopOf="@+id/query_title"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/query_title_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.7"/>
    <android.widget.Space
        android:id="@+id/query_delta_space"
        android:layout_width="24dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/query_title_guideline"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/query_position_block"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:baselineAligned="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/query_delta_space"
        app:layout_constraintTop_toTopOf="parent">
        <FrameLayout
            android:id="@+id/query_delta_text_click"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5">
            <TextView
                android:textAppearance="?attr/textS20"
                android:ellipsize="end"
                android:layout_gravity="center_vertical"
                android:id="@+id/query_delta_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/query_position_text_click"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5">
            <TextView
                android:textAppearance="?attr/textH50"
                android:ellipsize="end"
                android:gravity="end"
                android:layout_gravity="center_vertical"
                android:id="@+id/query_position_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"/>
        </FrameLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
