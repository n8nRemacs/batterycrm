<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile_pro_sb_item_action_root"
    android:background="@drawable/bg_profile_pro_group_row_single"
    android:padding="12dp"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="81dp">
    <com.avito.android.fresco.SimpleDraweeView
        android:id="@+id/sb_item_action_image"
        android:layout_width="76dp"
        android:layout_height="58dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:roundedCornerRadius="10dp"/>
    <TextView
        android:ellipsize="end"
        android:id="@+id/sb_item_action_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toTopOf="@+id/sb_item_action_subtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sb_item_action_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintVertical_chainStyle="packed"
        style="?attr/textH60"/>
    <TextView
        android:ellipsize="end"
        android:id="@+id/sb_item_action_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toTopOf="@+id/sb_item_action_additional_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sb_item_action_image"
        app:layout_constraintTop_toBottomOf="@+id/sb_item_action_title"
        style="?attr/textS20"/>
    <TextView
        android:textColor="?attr/red600"
        android:ellipsize="end"
        android:id="@+id/sb_item_action_additional_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sb_item_action_image"
        app:layout_constraintTop_toBottomOf="@+id/sb_item_action_subtitle"
        style="?attr/textS10"/>
</androidx.constraintlayout.widget.ConstraintLayout>
