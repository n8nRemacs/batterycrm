<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/map_pin_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <com.avito.android.lib.design.surface.Surface
        android:id="@+id/map_pin_text_surface"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/map_pin_image"
        app:layout_constraintEnd_toEndOf="@+id/map_pin_image"
        app:layout_constraintStart_toStartOf="@+id/map_pin_image">
        <TextView
            android:gravity="center"
            android:id="@+id/map_pin_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </com.avito.android.lib.design.surface.Surface>
</androidx.constraintlayout.widget.ConstraintLayout>
