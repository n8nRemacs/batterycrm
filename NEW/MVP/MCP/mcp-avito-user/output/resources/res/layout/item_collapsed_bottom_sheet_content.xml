<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/thumb_layout"
        android:layout_width="match_parent"
        android:layout_height="16dp">
        <View
            android:layout_gravity="top|center_horizontal"
            android:id="@+id/header_thumb"
            android:background="@drawable/design_bottom_sheet_thumb"
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="?attr/gray8"/>
    </FrameLayout>
    <TextView
        android:textAppearance="?attr/textM10"
        android:id="@+id/search_result_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"/>
    <com.avito.android.lib.design.spinner.Spinner
        android:id="@+id/loading_spinner"
        android:layout_width="22dp"
        android:layout_height="22dp"
        style="?attr/spinnerDarkMedium"/>
</LinearLayout>
