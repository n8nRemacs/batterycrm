<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/profile_promo_container"
    android:padding="4dp"
    android:addStatesFromChildren="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="@drawable/serp_card_foreground">
    <com.avito.android.advertising.adapter.items.avito.profile_promo_constructor.ProfilePromoConstructorLayout
        android:id="@+id/profile_promo_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <TextView
        android:id="@+id/ad_placeholder"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/ad_profile_promo_close_placeholder"
        style="@style/Widget.Avito.Rds.AdPlaceholder"/>
</FrameLayout>
