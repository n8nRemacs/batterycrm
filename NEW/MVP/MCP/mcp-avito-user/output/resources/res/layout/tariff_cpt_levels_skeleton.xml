<?xml version="1.0" encoding="utf-8"?>
<com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tariff_cpt_levels_shimmer"
    android:padding="16dp"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="?attr/shimmerDefault">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.avito.android.lib.design.skeleton.Skeleton
            android:id="@+id/title_stub1"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="214dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:skeleton_radius="6dp"/>
        <com.avito.android.lib.design.skeleton.Skeleton
            android:id="@+id/title_stub2"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="130dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_stub1"
            app:skeleton_radius="6dp"/>
        <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:id="@+id/shimmer_top_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.5"/>
        <com.avito.android.lib.design.skeleton.Skeleton
            android:id="@+id/tab_stub1"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toEndOf="@+id/shimmer_top_guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_stub2"
            app:skeleton_radius="16dp"/>
        <com.avito.android.lib.design.skeleton.Skeleton
            android:id="@+id/tab_stub2"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginTop="22dp"
            android:layout_marginStart="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/shimmer_top_guideline"
            app:layout_constraintTop_toBottomOf="@+id/title_stub2"
            app:skeleton_radius="16dp"/>
        <com.avito.android.lib.design.skeleton.Skeleton
            android:id="@+id/subtitle_stub"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="258dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tab_stub1"
            app:skeleton_radius="6dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/subtitle_stub">
            <include layout="@layout/tariff_cpt_levels_skeleton_list_item"/>
            <include layout="@layout/tariff_cpt_levels_skeleton_list_item"/>
            <include layout="@layout/tariff_cpt_levels_skeleton_list_item"/>
            <include layout="@layout/tariff_cpt_levels_skeleton_list_item"/>
            <include layout="@layout/tariff_cpt_levels_skeleton_list_item"/>
            <include layout="@layout/tariff_cpt_levels_skeleton_list_item"/>
            <include layout="@layout/tariff_cpt_levels_skeleton_list_item"/>
            <include layout="@layout/tariff_cpt_levels_skeleton_list_item"/>
            <include layout="@layout/tariff_cpt_levels_skeleton_list_item"/>
            <include layout="@layout/tariff_cpt_levels_skeleton_list_item"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout>
