<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:id="@+id/auto_select_parameters_v2_item_block"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/content_horizontal_padding"
    android:layout_marginEnd="@dimen/content_horizontal_padding"
    app:cardBackgroundColor="?attr/warmGray4"
    app:cardCornerRadius="@dimen/auto_select_parameters_v2_banner_corner_radius"
    app:cardElevation="0dp">
    <com.avito.android.fresco.SimpleDraweeView
        android:layout_gravity="end"
        android:id="@+id/image"
        android:layout_width="83dp"
        android:layout_height="71dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="-11dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/auto_select_parameters_v2_item_block_content"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAppearance="?attr/textH30"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/content_horizontal_padding"
            android:layout_marginStart="@dimen/content_horizontal_padding"/>
        <TextView
            android:textAppearance="?attr/textM10"
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/content_horizontal_padding"
            android:layout_marginTop="8dp"
            android:layout_marginRight="@dimen/content_horizontal_padding"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/advantages_list"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/content_horizontal_padding"
            android:layout_marginTop="24dp"
            android:layout_marginRight="@dimen/content_horizontal_padding"/>
        <TextView
            android:textAppearance="?attr/textM20"
            android:id="@+id/footer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/content_horizontal_padding"
            android:layout_marginTop="8dp"
            android:layout_marginRight="@dimen/content_horizontal_padding"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
