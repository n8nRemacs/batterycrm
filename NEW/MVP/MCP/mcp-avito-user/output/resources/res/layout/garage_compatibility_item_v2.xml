<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:id="@+id/garage_compatibility_item_v2"
    android:background="?attr/warmGray2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/left_image"
            android:background="@drawable/bg_garage_compatibility_placeholder"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="@dimen/content_horizontal_padding"
            android:layout_marginVertical="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/left_image_corner"
            android:background="@drawable/bg_garage_compatibility_icon_dot"
            android:padding="2dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="-3dp"
            android:importantForAccessibility="no"
            android:layout_marginEnd="-3dp"
            app:layout_constraintBottom_toBottomOf="@+id/left_image"
            app:layout_constraintEnd_toEndOf="@+id/left_image"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/texts_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/right_image_hitbox"
            app:layout_constraintStart_toEndOf="@+id/left_image"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:textAppearance="?attr/textM20"
                android:textColor="?attr/black"
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textAppearance="?attr/textS20"
                android:textColor="?attr/gray54"
                android:id="@+id/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"/>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/right_image_hitbox"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:paddingStart="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/right_image"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:importantForAccessibility="no"
                android:layout_marginHorizontal="@dimen/content_horizontal_padding"
                app:tint="?attr/black"/>
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.avito.android.lib.design.skeleton.shimmer.ShimmerFrameLayout
        android:id="@+id/loading"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/content_horizontal_padding"
        app:shimmer_animationDuration="3000"
        app:shimmer_autostart="true">
        <ImageView
            android:layout_gravity="start|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"
            app:srcCompat="@drawable/ic_garage_compatibility_skeleton_left"/>
        <ImageView
            android:layout_gravity="end|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"
            app:srcCompat="@drawable/ic_garage_compatibility_skeleton_right"/>
    </com.avito.android.lib.design.skeleton.shimmer.ShimmerFrameLayout>
</RelativeLayout>
