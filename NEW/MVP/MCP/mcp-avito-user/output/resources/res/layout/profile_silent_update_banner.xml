<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:id="@+id/user_profile_silent_update"
    android:background="@color/expected_material_card_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/bg_silent_update_banner"
        android:paddingTop="20dp"
        android:paddingBottom="28dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:paddingHorizontal="24dp">
        <TextView
            android:textAppearance="?attr/textH3"
            android:id="@+id/silent_update_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"/>
        <TextView
            android:textAppearance="?attr/textM10"
            android:id="@+id/silent_update_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">
            <com.avito.android.lib.design.button.Button
                android:id="@+id/silent_update_update_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?attr/buttonPrimaryMedium"/>
            <com.avito.android.lib.design.button.Button
                android:id="@+id/silent_update_description_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?attr/buttonGhostMedium"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_gravity="end|top"
        android:id="@+id/silent_update_close_button"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="?attr/ic_close24"
        android:scaleType="center"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        app:tint="?attr/black"/>
</FrameLayout>
