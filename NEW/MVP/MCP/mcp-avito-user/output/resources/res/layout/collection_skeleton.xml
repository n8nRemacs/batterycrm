<?xml version="1.0" encoding="utf-8"?>
<com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:shimmer_animationDuration="3000"
    app:shimmer_autostart="true">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp">
            <View
                android:background="@drawable/collection_image_stub"
                android:layout_width="138dp"
                android:layout_height="138dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp">
                <View
                    android:background="@drawable/collection_title_stub"
                    android:layout_width="100dp"
                    android:layout_height="8dp"
                    android:layout_marginTop="2dp"/>
                <View
                    android:background="@drawable/collection_title_stub"
                    android:layout_width="120dp"
                    android:layout_height="8dp"
                    android:layout_marginTop="8dp"/>
                <View
                    android:background="@drawable/collection_title_stub"
                    android:layout_width="100dp"
                    android:layout_height="8dp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp">
            <View
                android:background="@drawable/collection_image_stub"
                android:layout_width="138dp"
                android:layout_height="138dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp">
                <View
                    android:background="@drawable/collection_title_stub"
                    android:layout_width="100dp"
                    android:layout_height="8dp"
                    android:layout_marginTop="2dp"/>
                <View
                    android:background="@drawable/collection_title_stub"
                    android:layout_width="120dp"
                    android:layout_height="8dp"
                    android:layout_marginTop="8dp"/>
                <View
                    android:background="@drawable/collection_title_stub"
                    android:layout_width="100dp"
                    android:layout_height="8dp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout>
