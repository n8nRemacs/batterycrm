<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/motion_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/beduin_bottom_sheet_fragment_scene">
    <com.avito.android.gallery.ui.GalleryView
        android:id="@+id/gallery"
        android:background="?attr/constantWhite"
        android:layout_width="match_parent"
        android:layout_height="@dimen/gallery_height"
        android:scaleType="centerCrop"
        app:gallery_actualImageScaleType="centerCrop"
        app:indicator_marginBottom="24dp"
        app:indicator_selectedDotColor="?attr/constantWhite"
        app:indicator_unselectedDotColor="@color/legacy_constant_white_alpha_40"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/gallery_overlay"
        android:background="@color/expected_constant_black_alpha_6"
        android:layout_width="match_parent"
        android:layout_height="@dimen/gallery_height"
        app:layout_constraintBottom_toBottomOf="@+id/gallery"
        app:layout_constraintTop_toTopOf="@+id/gallery"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="horizontal"
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Space
        android:id="@+id/guidelineBottom"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/gallery"/>
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toBottomOf="@+id/guideline"/>
    <FrameLayout
        android:id="@+id/buttons_bar"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toBottomOf="@+id/guideline"/>
    <View
        android:id="@+id/top_bar"
        android:background="@drawable/bg_rounded_top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline"/>
    <TextView
        android:textAppearance="?attr/textTitleSmall"
        android:textColor="?attr/black"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@+id/header_thumb"/>
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tabs_toolbar"
        android:background="@drawable/bg_rounded_top"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toBottomOf="@+id/header_thumb"/>
    <View
        android:id="@+id/header_thumb"
        android:background="@drawable/design_bottom_sheet_thumb"
        android:layout_width="?attr/bottomSheet_thumbWidth"
        android:layout_height="?attr/bottomSheet_thumbHeight"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/top_bar"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/tab_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierAllowsGoneWidgets="false"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="title,navigation_chips"/>
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tab_barrier"/>
    <com.avito.android.lib.design.chips.Chips
        android:theme="@style/Theme.DesignSystem.Re23"
        android:id="@+id/navigation_chips"
        android:paddingTop="4dp"
        android:paddingBottom="8dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="16dp"
        app:chips_childHorizontalSpacing="6dp"
        app:chips_displayType="singleLineScrollable"
        app:chips_keepLastSelected="true"
        app:chips_selectStrategy="single"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tabs_toolbar"
        style="?attr/chipsSmall"/>
    <View
        android:id="@+id/tabs_toolbar_shadow"
        android:background="@drawable/bg_top_gradient"
        android:layout_width="0dp"
        android:layout_height="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/navigation_chips"/>
</androidx.constraintlayout.motion.widget.MotionLayout>
