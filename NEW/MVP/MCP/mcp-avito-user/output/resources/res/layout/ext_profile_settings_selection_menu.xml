<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/selection_menu_root"
    android:paddingBottom="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="?attr/textH10"
        android:id="@+id/selection_menu_title"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:paddingHorizontal="@dimen/extended_profile_settings_horizontal_margin"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:id="@+id/selection_menu_description"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:paddingHorizontal="@dimen/extended_profile_settings_horizontal_margin"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/selection_menu_set_public_action"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="11dp"
        android:paddingHorizontal="@dimen/extended_profile_settings_horizontal_margin">
        <FrameLayout
            android:layout_width="24dp"
            android:layout_height="20dp">
            <ImageView
                android:layout_gravity="start"
                android:id="@+id/selection_menu_set_public_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                app:srcCompat="@drawable/ic_text_public"
                app:tint="?attr/black"/>
            <ProgressBar
                android:layout_gravity="start"
                android:id="@+id/selection_menu_set_public_progress"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                style="@style/Design.Widget.Spinner.Dark.Small"/>
        </FrameLayout>
        <TextView
            android:id="@+id/selection_menu_set_public_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/extended_profile_settings_selection_public"
            style="?attr/textM20"/>
    </LinearLayout>
    <TextView
        android:id="@+id/selection_menu_edit_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/extended_profile_settings_selection_menu_edit"
        android:drawablePadding="9dp"
        android:layout_marginVertical="11dp"
        android:paddingHorizontal="@dimen/extended_profile_settings_horizontal_margin"
        app:drawableStartCompat="@drawable/ic_text_edit"
        style="?attr/textM20"/>
    <TextView
        android:id="@+id/selection_menu_copy_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/extended_profile_settings_selection_menu_copy"
        android:drawablePadding="9dp"
        android:layout_marginVertical="11dp"
        android:paddingHorizontal="@dimen/extended_profile_settings_horizontal_margin"
        app:drawableStartCompat="@drawable/ic_text_copy"
        app:drawableTint="?attr/black"
        style="?attr/textM20"/>
    <TextView
        android:id="@+id/selection_menu_show_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/extended_profile_settings_selection_menu_show"
        android:drawablePadding="9dp"
        android:layout_marginVertical="11dp"
        android:paddingHorizontal="@dimen/extended_profile_settings_horizontal_margin"
        app:drawableStartCompat="@drawable/ic_text_show"
        app:drawableTint="?attr/black"
        style="?attr/textM20"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/selection_menu_remove_action"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="@dimen/extended_profile_settings_horizontal_margin"
        android:paddingVertical="11dp">
        <FrameLayout
            android:layout_width="24dp"
            android:layout_height="20dp">
            <ImageView
                android:layout_gravity="start"
                android:id="@+id/selection_menu_remove_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_text_remove"
                app:tint="?attr/black"/>
            <ProgressBar
                android:layout_gravity="start"
                android:id="@+id/selection_menu_remove_progress"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                style="@style/Design.Widget.Spinner.Dark.Small"/>
        </FrameLayout>
        <TextView
            android:id="@+id/selection_menu_remove_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/extended_profile_settings_selection_menu_remove"
            style="?attr/textM20"/>
    </LinearLayout>
</LinearLayout>
