<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <ImageButton
            android:id="@+id/icon_back_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="?attr/ic_arrowBack24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="?attr/black"/>
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/user_avatar"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/virtual_deal_room_category_avatar_shape"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/icon_back_content"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textAppearance="?attr/textH50"
            android:ellipsize="end"
            android:id="@+id/user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingHorizontal="12dp"
            app:layout_constraintBottom_toTopOf="@+id/user_phone"
            app:layout_constraintEnd_toStartOf="@+id/icon_phone"
            app:layout_constraintStart_toEndOf="@+id/user_avatar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"/>
        <TextView
            android:textAppearance="?attr/textS10"
            android:ellipsize="end"
            android:id="@+id/user_phone"
            android:background="?attr/selectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginHorizontal="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/user_avatar"
            app:layout_constraintTop_toBottomOf="@+id/user_name"/>
        <ImageButton
            android:id="@+id/icon_phone"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_width="40dp"
            android:layout_height="48dp"
            android:src="?attr/ic_call24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/icon_edit"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="?attr/black"/>
        <ImageButton
            android:id="@+id/icon_edit"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:visibility="gone"
            android:layout_width="40dp"
            android:layout_height="48dp"
            android:src="?attr/ic_edit24"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="?attr/black"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.akita.view.component.pull_to_refresh.PullToRefresh
        android:id="@+id/category_pull_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="?attr/pullToRefreshMedium">
        <com.avito.android.virtual_deal_room.client_room.view.NestedScrollCoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.avito.android.lib.design.tab_group.TabGroup
                android:id="@+id/tabs_categories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:tabGroup_bottomLineColor="?attr/transparentWhite"
                app:tabGroup_selectedLineColor="?attr/transparentWhite"
                style="?attr/tabGroupL"/>
            <FrameLayout
                android:id="@+id/category_container"
                android:background="@drawable/virtual_deal_room_category_shape"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="8dp"
                app:behavior_hideable="false"
                app:layout_behavior="com.avito.android.virtual_deal_room.client_room.view.CategoryBottomSheetBehavior"/>
        </com.avito.android.virtual_deal_room.client_room.view.NestedScrollCoordinatorLayout>
    </com.akita.view.component.pull_to_refresh.PullToRefresh>
</LinearLayout>
