<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/settings_image_menu"
    android:paddingBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="?attr/textH30"
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingHorizontal="@dimen/extended_profile_settings_horizontal_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textM10"
        android:id="@+id/description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="@dimen/extended_profile_settings_horizontal_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"/>
    <com.avito.android.lib.design.list_item.ListItem
        android:id="@+id/view_list_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableLeft="?attr/ic_visible24"
        android:paddingHorizontal="@dimen/extended_profile_settings_horizontal_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description"
        app:listItem_alignment="firstLineCenter"
        app:listItem_iconLeftColor="?attr/black"
        app:listItem_title="@string/extended_profile_settings_image_item_view"/>
    <com.avito.android.lib.design.list_item.ListItem
        android:id="@+id/delete_list_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableLeft="?attr/ic_delete24"
        android:paddingHorizontal="@dimen/extended_profile_settings_horizontal_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_list_item"
        app:listItem_alignment="firstLineCenter"
        app:listItem_iconLeftColor="?attr/black"
        app:listItem_title="@string/extended_profile_settings_delete"/>
</androidx.constraintlayout.widget.ConstraintLayout>
