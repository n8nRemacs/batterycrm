<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="?attr/textH3"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"/>
    <TextView
        android:textAppearance="?attr/textM2"
        android:textColor="?attr/gray44"
        android:id="@+id/subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.avito.android.lib.design.rating.RatingBar
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        app:ratingBar_ratingDrawable="@drawable/rating_bar_16"
        app:ratingBar_selectedColor="?attr/orange"
        style="@style/Design.Widget.Avito.Rating.Small"/>
    <TextView
        android:textAppearance="?attr/textM1"
        android:id="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textAppearance="?attr/textM1"
        android:textColor="?attr/blue700"
        android:id="@+id/expandView"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textAppearance="?attr/textM2"
        android:textColor="?attr/gray60"
        android:id="@+id/footerDescription"
        android:paddingTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</merge>
