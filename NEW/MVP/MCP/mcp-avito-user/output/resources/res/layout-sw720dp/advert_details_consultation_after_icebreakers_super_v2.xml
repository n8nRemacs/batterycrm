<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:orientation="vertical"
    android:id="@+id/consultation_after_icebreakers_super"
    android:background="@drawable/bg_consultation_form_super"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/content_horizontal_padding"
    android:layout_marginEnd="@dimen/content_horizontal_padding">
    <TextView
        android:textAppearance="?attr/textH25"
        android:id="@+id/info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/info_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:textColor="?attr/gray48"
        android:id="@+id/about_consultation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:drawablePadding="4dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp">
        <FrameLayout
            android:id="@+id/info_card_reviews"
            android:background="@drawable/bg_realty_consultation_card"
            android:layout_width="0dp"
            android:layout_height="136dp"
            android:layout_weight="0.5"
            android:layout_marginEnd="15dp">
            <TextView
                android:textAppearance="?attr/textM20"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/reviews_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textAlignment="center"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"/>
            <FrameLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp">
                <com.avito.android.fresco.SimpleDraweeView
                    android:id="@+id/info_card_review_avatar_1"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    app:roundAsCircle="true"
                    app:roundingBorderColor="?attr/white"
                    app:roundingBorderWidth="2dp"/>
                <com.avito.android.fresco.SimpleDraweeView
                    android:id="@+id/info_card_review_avatar_2"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginStart="28dp"
                    app:roundAsCircle="true"
                    app:roundingBorderColor="?attr/white"
                    app:roundingBorderWidth="2dp"/>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="56dp">
                    <com.avito.android.fresco.SimpleDraweeView
                        android:id="@+id/info_card_review_avatar_3"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        app:placeholderImage="@drawable/realty_avatar_placeholder"
                        app:roundAsCircle="true"
                        app:roundingBorderColor="?attr/white"
                        app:roundingBorderWidth="2dp"/>
                    <TextView
                        android:textAppearance="?attr/textXs10"
                        android:textColor="?attr/gray54"
                        android:layout_gravity="center"
                        android:id="@+id/avatar_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </FrameLayout>
            </FrameLayout>
        </FrameLayout>
        <FrameLayout
            android:background="@drawable/bg_realty_consultation_card"
            android:layout_width="0dp"
            android:layout_height="136dp"
            android:layout_weight="0.5">
            <TextView
                android:textAppearance="?attr/textM20"
                android:textColor="?attr/black"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/count_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textAlignment="center"
                android:layout_marginStart="9dp"
                android:layout_marginEnd="9dp"/>
            <TextView
                android:textAppearance="?attr/textM20"
                android:layout_gravity="center_horizontal"
                android:id="@+id/count_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"/>
            <ImageView
                android:layout_gravity="bottom|center_horizontal"
                android:id="@+id/count_image"
                android:layout_width="wrap_content"
                android:layout_height="89dp"/>
        </FrameLayout>
    </LinearLayout>
    <TextView
        android:textAppearance="?attr/textH50"
        android:textColor="?attr/black"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp">
        <com.avito.android.lib.design.input.Input
            android:id="@+id/input_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="+7 000 00-00-00"
            android:layout_weight="0.5"
            android:inputType="phone"
            app:input_formatterType="mobile_phone"
            app:input_prefix="+7 "
            app:layout_autoReset="notNormalOnly"
            style="?attr/inputWhiteBackgroundM"/>
        <com.avito.android.lib.design.select.BaseSelect
            android:id="@+id/select_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:inputType="phone"
            android:layout_marginStart="16dp"
            app:input_backgroundColor="@color/white"
            style="?attr/baseSelectDefaultM"/>
        <com.avito.android.lib.design.button.Button
            android:id="@+id/consultation_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            style="?attr/buttonPrimaryMedium"/>
    </LinearLayout>
    <com.avito.android.lib.design.input.Input
        android:id="@+id/input_question"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:inputType="text"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_autoReset="notNormalOnly"
        style="?attr/inputWhiteBackgroundM"/>
    <TextView
        android:theme="@style/Theme.DesignSystem.Re23"
        android:textAppearance="?attr/textS10"
        android:id="@+id/consultation_disclaimer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="32dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"/>
</LinearLayout>
