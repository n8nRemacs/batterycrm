<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="?attr/gray4">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="?attr/white"/>
            <corners android:radius="28dp"/>
        </shape>
    </item>
    <item
        android:state_pressed="true"
        android:height="14dp"
        android:width="14dp"
        android:left="7dp"
        android:top="7dp"
        android:right="7dp"
        android:bottom="7dp">
        <selector>
            <item
                android:state_pressed="true"
                android:drawable="@drawable/ic_close_bottom_sheet_right_cross_clicked"/>
            <item android:drawable="@drawable/ic_close_bottom_sheet_right_cross"/>
        </selector>
    </item>
</ripple>
