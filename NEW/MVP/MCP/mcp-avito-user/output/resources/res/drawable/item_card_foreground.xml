<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item
                android:left="1dp"
                android:top="2dp"
                android:right="1dp"
                android:bottom="2dp">
                <shape>
                    <corners android:radius="2dp"/>
                    <solid android:color="@color/legacy_blue_alpha_8"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <shape>
            <solid android:color="@color/legacy_transparent_black"/>
        </shape>
    </item>
</selector>
