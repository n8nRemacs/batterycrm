<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/progress_indicator_corner_radius"/>
            <solid android:color="@color/legacy_gray_4"/>
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <scale android:scaleWidth="100%">
            <shape>
                <corners android:radius="@dimen/progress_indicator_corner_radius"/>
                <solid android:color="@color/legacy_blue_300"/>
            </shape>
        </scale>
    </item>
    <item android:id="@android:id/progress">
        <scale android:scaleWidth="100%">
            <shape>
                <corners android:radius="@dimen/progress_indicator_corner_radius"/>
                <solid android:color="@color/legacy_blue"/>
            </shape>
        </scale>
    </item>
</layer-list>
