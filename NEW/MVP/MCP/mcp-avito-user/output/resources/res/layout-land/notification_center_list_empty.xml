<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.DesignSystem.Re23"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textAppearance="?attr/textH20"
        android:id="@+id/empty_notifications_land_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notification_center_empty_title"
        android:layout_marginStart="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45"/>
    <TextView
        android:textAppearance="?attr/textM20"
        android:id="@+id/empty_notifications_land_subtitle"
        android:layout_width="480dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="@string/notification_center_empty_subtitle"
        app:layout_constraintStart_toStartOf="@+id/empty_notifications_land_title"
        app:layout_constraintTop_toBottomOf="@+id/empty_notifications_land_title"/>
    <ImageView
        android:id="@+id/empty_notifications_land_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/product_specific_empty_notifications"
        android:layout_marginEnd="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toEndOf="@+id/empty_notifications_land_subtitle"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
