<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:id="@+id/map_loader_overlay"
        android:background="?attr/whiteAlpha40"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_gravity="top|right"
        android:orientation="horizontal"
        android:id="@+id/search_map_view_landscape_control_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/search_map_top_panel_expanded_height">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/close_map_button"
            android:focusable="true"
            android:visibility="gone"
            android:clickable="true"
            android:layout_width="@dimen/search_map_controls_size"
            android:layout_height="@dimen/search_map_controls_size"
            android:layout_marginLeft="@dimen/search_map_controls_margin"
            android:src="@drawable/ic_close_24_black"
            android:layout_marginVertical="@dimen/search_map_controls_margin"
            app:backgroundTint="?attr/white"
            app:fabCustomSize="@dimen/search_map_controls_size"/>
        <com.avito.android.map_core.view.draw_button.DrawButton
            android:id="@+id/draw_map"
            android:focusable="true"
            android:visibility="gone"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/search_map_controls_size"
            android:layout_marginLeft="@dimen/search_map_controls_margin"
            android:layout_marginVertical="@dimen/search_map_controls_margin"
            app:cardCornerRadius="@dimen/search_map_controls_corner_radius"
            app:cardElevation="10dp"/>
        <com.avito.android.map_core.view.zoom.ZoomButton
            android:id="@+id/zoom_map"
            android:visibility="gone"
            android:layout_width="88dp"
            android:layout_height="@dimen/search_map_controls_size"
            android:layout_marginLeft="@dimen/search_map_controls_margin"
            android:layout_marginVertical="@dimen/search_map_controls_margin"
            app:cardCornerRadius="@dimen/search_map_controls_corner_radius"
            app:cardElevation="10dp"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/find_me_button"
            android:focusable="true"
            android:visibility="gone"
            android:clickable="true"
            android:layout_width="@dimen/search_map_controls_size"
            android:layout_height="@dimen/search_map_controls_size"
            android:src="@drawable/my_location_icon"
            android:layout_marginHorizontal="@dimen/search_map_controls_margin"
            android:layout_marginVertical="@dimen/search_map_controls_margin"
            app:backgroundTint="?attr/white"
            app:fabCustomSize="@dimen/search_map_controls_size"/>
    </LinearLayout>
    <ViewStub
        android:layout_gravity="bottom|right"
        android:id="@+id/map_landscape_control_buttons_redesign_stub"
        android:clipToPadding="false"
        android:layout="@layout/search_map_landscape_control_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <FrameLayout
        android:layout_gravity="top|left"
        android:id="@+id/map_onboarding_landscape_button_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/search_map_top_panel_expanded_height">
        <com.avito.android.fresco.SimpleDraweeView
            android:id="@+id/static_map_onboarding_button"
            android:visibility="gone"
            android:layout_width="@dimen/search_map_map_onboarding_icon_size"
            android:layout_height="@dimen/search_map_map_onboarding_icon_size"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            app:actualImageScaleType="fitCenter"/>
        <com.avito.android.lib.design.animation.AnimationView
            android:id="@+id/animated_map_onboarding_button"
            android:visibility="gone"
            android:layout_width="@dimen/search_map_map_onboarding_icon_size"
            android:layout_height="@dimen/search_map_map_onboarding_icon_size"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"/>
    </FrameLayout>
    <FrameLayout
        android:layout_gravity="bottom|right"
        android:id="@+id/subscribe_search_elevation_stub_container"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/search_map_subscribe_search_bottom_margin">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/subscribe_search_container"
            android:background="@drawable/search_map_subscribe_search_background"
            android:focusable="true"
            android:visibility="gone"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/search_map_controls_margin"
            android:elevation="10dp">
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/subscribe_search_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:contentDescription="@null"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="4dp"
                app:tint="?attr/black"/>
            <com.avito.android.lib.design.spinner.Spinner
                android:layout_gravity="center_vertical"
                android:id="@+id/subscribe_search_spinner"
                android:visibility="gone"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="7dp"
                style="?attr/spinnerDarkSmall"/>
            <TextView
                android:textAppearance="?attr/textS1"
                android:ellipsize="end"
                android:layout_gravity="center_vertical"
                android:id="@+id/subscribe_search_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="14dp"/>
        </LinearLayout>
    </FrameLayout>
    <ViewStub
        android:layout_gravity="top|right"
        android:id="@+id/subscribe_search_container_redesign_stub"
        android:layout="@layout/search_map_subscribe_search_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/search_map_controls_margin_redesign"/>
    <com.avito.android.lib.design.spinner.Spinner
        android:layout_gravity="center"
        android:id="@+id/search_map_loader"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/search_map_top_panel_expanded_height"
        style="?attr/spinnerDarkLarge"/>
</merge>
