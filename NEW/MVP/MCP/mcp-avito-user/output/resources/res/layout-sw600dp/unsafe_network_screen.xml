<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/content"
            android:paddingLeft="@dimen/content_horizontal_padding"
            android:paddingTop="@dimen/content_top_padding"
            android:paddingRight="@dimen/content_horizontal_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image_unsafe_network"
                android:background="?attr/transparentBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:src="?attr/img_badSsl"
                android:scaleType="centerInside"/>
            <TextView
                android:textColor="?attr/black"
                android:gravity="center"
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/unsafe_network_title"
                android:lineSpacingExtra="6sp"
                style="?attr/textHeadingLarge"/>
            <TextView
                android:textColor="?attr/gray48"
                android:gravity="center"
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="@string/unsafe_network_description"
                android:lineSpacingExtra="5sp"
                style="?attr/textBodySmall"/>
            <include
                android:id="@+id/button_check_again"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-4dp"
                android:layout_marginRight="-4dp"
                android:layout_marginBottom="8dp"
                layout="@layout/button_primary"/>
            <include
                android:id="@+id/button_authenticate"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-4dp"
                android:layout_marginRight="-4dp"
                android:layout_marginBottom="8dp"
                layout="@layout/button_primary"/>
        </LinearLayout>
    </ScrollView>
    <FrameLayout
        android:id="@+id/loading_overlay"
        android:background="?attr/whiteAlpha88"
        android:visibility="gone"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.avito.android.lib.deprecated_design.ColoredProgressBar
            android:layout_gravity="center"
            android:id="@+id/progress_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
</FrameLayout>
