<?xml version="1.0" encoding="utf-8"?>
<com.avito.android.lib.util.layout.ForegroundFrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/advert_content"
        android:paddingBottom="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:minHeight="240dp"
        style="@style/Widget.Avito.Serp.Item.Card">
        <com.avito.android.lib.util.layout.ForegroundConstraintLayout
            android:id="@+id/pager"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/xl_advert_margin"
            android:foreground="@drawable/design_system_list_left_rounding">
            <com.avito.android.design.widget.ClickableGalleryPager
                android:id="@+id/image_pager"
                android:saveEnabled="false"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/Widget.Avito.AdvertXlPager"/>
            <TextView
                android:textSize="@dimen/small_text_size"
                android:textColor="?attr/constantWhite"
                android:gravity="center_vertical"
                android:id="@+id/page_indicator"
                android:background="@drawable/advert_xl_page_indicator_bg"
                android:paddingLeft="6dp"
                android:paddingTop="4dp"
                android:paddingRight="6dp"
                android:paddingBottom="4dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginBottom="10dp"
                android:lineSpacingExtra="4sp"
                app:fontFamily="?attr/fontHeavy"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/card_info_badge"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/card_badge_margin_left"
                android:layout_marginTop="@dimen/card_badge_margin_top"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/Design.Widget.SnippetBadge.Viewed"/>
            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/badge_bar_barrier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierAllowsGoneWidgets="false"
                app:barrierDirection="start"
                app:constraint_referenced_ids="page_indicator, space"/>
            <Space
                android:id="@+id/space"
                android:layout_width="2dp"
                android:layout_height="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <ImageView
                android:id="@+id/has_video"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/card_badge_margin_top"
                android:contentDescription="@null"
                android:layout_marginStart="@dimen/card_badge_margin_left"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/ic_video_17"/>
            <TextView
                android:id="@+id/badge"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_marginBottom="@dimen/card_badge_margin_top"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/badge_bar_barrier"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@+id/has_video"
                app:layout_constraintWidth_default="wrap"
                app:layout_goneMarginStart="@dimen/card_badge_margin_left"
                style="@style/Design.Widget.SnippetBadge.Common"/>
            <ru.avito.component.snippet_badge_bar.SnippetBadgeBar
                android:id="@+id/advert_xl_item_badge_bar"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/card_badge_margin_top"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/badge_bar_barrier"
                app:layout_constraintStart_toEndOf="@+id/has_video"
                app:layout_constraintVertical_bias="0"
                app:layout_goneMarginStart="@dimen/card_badge_margin_left"
                app:snippetBadgeBar_maxLines="1"/>
        </com.avito.android.lib.util.layout.ForegroundConstraintLayout>
        <LinearLayout
            android:orientation="vertical"
            android:tag="fieldsContainer"
            android:paddingTop="@dimen/xl_advert_margin"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="8dp"
                android:maxLines="2"
                style="?attr/textBodySmall"/>
            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/xl_advert_margin"
                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"
                app:flexDirection="row"
                app:flexWrap="wrap">
                <androidx.appcompat.widget.AppCompatTextView
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/delivery_icon_advert_item_padding"
                    android:maxLines="1"
                    android:drawablePadding="@dimen/delivery_icon_advert_item_padding"
                    style="?attr/textHeadingSmall"/>
                <ImageView
                    android:id="@+id/delivery"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/delivery_icon_advert_item_padding"
                    app:layout_alignSelf="center"
                    app:srcCompat="@drawable/ic_delivery_16"/>
                <TextView
                    android:ellipsize="end"
                    android:id="@+id/quorum_filter_info"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    app:layout_alignSelf="baseline"
                    style="@style/Widget.Avito.TextView.Serp.Item.Caption.Secondary"/>
            </com.google.android.flexbox.FlexboxLayout>
            <TextView
                android:id="@+id/price_without_discount"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginRight="@dimen/xl_advert_margin"
                style="@style/Widget.Avito.TextView.Serp.Item.Caption.Secondary"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:gravity="center_vertical"
                android:id="@+id/discount"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginRight="@dimen/xl_advert_margin"
                android:layout_marginBottom="8dp"
                android:drawablePadding="4dp"
                style="@style/Widget.Avito.TextView.Serp.Item.Caption.Discount"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="@dimen/small_text_size"
                android:textColor="?attr/black"
                android:id="@+id/additional_name"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/xl_advert_margin"
                android:singleLine="true"
                android:lineSpacingExtra="3sp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="@dimen/small_text_size"
                android:textColor="?attr/black"
                android:id="@+id/seller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/xl_advert_margin"
                android:singleLine="true"
                android:lineSpacingExtra="3sp"
                style="?attr/textBodySmall"/>
            <TextView
                android:id="@+id/verification"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/xl_advert_margin"
                android:lineSpacingExtra="3sp"
                style="@style/Widget.Avito.Rds.Advert.Verification"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="@dimen/small_text_size"
                android:textColor="?attr/gray48"
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/xl_advert_margin"
                android:lineSpacingExtra="3sp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/address"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/xl_advert_margin"
                android:maxLines="1"
                style="@style/Widget.Avito.TextView.Serp.Item.Caption.Secondary"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/delivery_terms"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="4dp"
                style="@style/Widget.Avito.TextView.Serp.Item.Caption.Secondary"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:textColor="?attr/gray48"
                android:ellipsize="end"
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginRight="@dimen/xl_advert_margin"
                android:maxLines="2"
                style="?attr/textBodySmall"/>
            <androidx.legacy.widget.Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:textColor="?attr/gray48"
                android:gravity="bottom"
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/xl_advert_margin"
                android:layout_marginBottom="10dp"
                style="?attr/textBodySmall"/>
            <FrameLayout
                android:id="@+id/call_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/xl_advert_margin"
                android:layout_marginBottom="12dp"
                style="@style/Deprecated.Theme.Internal.Button.Flat.Secondary">
                <androidx.appcompat.widget.AppCompatTextView
                    android:textColor="?attr/blue"
                    android:layout_gravity="center"
                    android:id="@+id/call_button_text"
                    android:clickable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Deprecated.Theme.Internal.Button.Flat"/>
                <com.avito.android.lib.deprecated_design.circular_progress.CircularProgressBar
                    android:layout_gravity="center"
                    android:id="@+id/phone_loader"
                    android:visibility="gone"
                    android:clickable="true"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    app:cpb_color="?attr/blue"
                    app:cpb_stroke_width="1.5dp"
                    style="@style/Widget.Avito.CircularProgressBar.Light"/>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
    <com.google.android.material.internal.CheckableImageButton
        android:layout_gravity="top|right"
        android:id="@+id/btn_favorite"
        android:background="@drawable/bg_btn_circle_warmgray"
        android:visibility="gone"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/advert_item_list_favorite_red"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"/>
</com.avito.android.lib.util.layout.ForegroundFrameLayout>
