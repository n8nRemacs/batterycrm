<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/edit_text"
    android:background="?attr/white"
    android:paddingBottom="32dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="480dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAppearance="?attr/textH20"
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="32dp"/>
        <ImageView
            android:id="@+id/close_button"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            android:src="@drawable/ic_close_24"
            app:tint="?attr/gray28"/>
    </LinearLayout>
    <com.avito.android.lib.design.input.Input
        android:id="@+id/description_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:maxLines="10"
        android:minLines="10"
        android:layout_marginHorizontal="32dp"
        style="?attr/input"/>
    <TextView
        android:textAppearance="?attr/textS10"
        android:textColor="?attr/red"
        android:id="@+id/error_text"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/extended_profile_settings_edit_text_error"
        android:layout_marginHorizontal="32dp"/>
    <com.avito.android.lib.design.tab_group.TabGroup
        android:theme="@style/Theme.DesignSystem.Re23"
        android:id="@+id/about_tabs"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="16dp"
        style="?attr/tabGroupXl"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/list_container"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/story_container"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
            android:orientation="horizontal"
            android:id="@+id/recycler_stories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
        <com.avito.android.lib.design.page_indicator_re23.PageIndicatorRe23
            android:layout_gravity="center_horizontal"
            android:id="@+id/stories_indicator_snap_scroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"/>
    </LinearLayout>
    <com.avito.android.lib.design.button.Button
        android:id="@+id/save_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/extended_profile_settings_save_button"
        android:layout_marginHorizontal="32dp"
        app:layout_goneMarginTop="24dp"
        style="?attr/buttonPrimaryLarge"/>
</LinearLayout>
