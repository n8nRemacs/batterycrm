<?xml version="1.0" encoding="utf-8"?>
<com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:shimmer_animationDuration="3000"
    app:shimmer_autostart="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="@dimen/content_horizontal_padding">
        <ImageView
            android:id="@+id/item1_image"
            android:background="@drawable/advert_similar_image_bg_stub"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintEnd_toStartOf="@+id/item2_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <View
            android:id="@+id/item1_line1"
            android:background="@drawable/advert_similar_bg_text_stub"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="@+id/item1_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item1_image"/>
        <View
            android:id="@+id/item1_line2"
            android:background="@drawable/advert_similar_bg_text_stub"
            android:layout_width="60dp"
            android:layout_height="8dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@+id/item1_image"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item1_line1"/>
        <View
            android:id="@+id/item1_line3"
            android:background="@drawable/advert_similar_bg_text_stub"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="@+id/item1_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item1_line2"/>
        <View
            android:background="@drawable/advert_similar_bg_text_stub"
            android:layout_width="60dp"
            android:layout_height="8dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@+id/item1_image"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item1_line3"/>
        <ImageView
            android:id="@+id/item2_image"
            android:background="@drawable/advert_similar_image_bg_stub"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintEnd_toStartOf="@+id/item3_image"
            app:layout_constraintStart_toEndOf="@+id/item1_image"
            app:layout_constraintTop_toTopOf="parent"/>
        <View
            android:id="@+id/item2_line1"
            android:background="@drawable/advert_similar_bg_text_stub"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@+id/item2_image"
            app:layout_constraintStart_toStartOf="@+id/item2_image"
            app:layout_constraintTop_toBottomOf="@+id/item2_image"/>
        <View
            android:id="@+id/item2_line2"
            android:background="@drawable/advert_similar_bg_text_stub"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@+id/item2_image"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@+id/item2_image"
            app:layout_constraintTop_toBottomOf="@+id/item2_line1"/>
        <View
            android:id="@+id/item2_line3"
            android:background="@drawable/advert_similar_bg_text_stub"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@+id/item2_image"
            app:layout_constraintStart_toStartOf="@+id/item2_image"
            app:layout_constraintTop_toBottomOf="@+id/item2_line2"/>
        <View
            android:background="@drawable/advert_similar_bg_text_stub"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@+id/item2_image"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@+id/item2_image"
            app:layout_constraintTop_toBottomOf="@+id/item2_line3"/>
        <ImageView
            android:id="@+id/item3_image"
            android:background="@drawable/advert_similar_image_bg_stub"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item2_image"
            app:layout_constraintTop_toTopOf="parent"/>
        <View
            android:id="@+id/item3_line1"
            android:background="@drawable/advert_similar_bg_text_stub"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/item3_image"
            app:layout_constraintTop_toBottomOf="@+id/item3_image"/>
        <View
            android:id="@+id/item3_line2"
            android:background="@drawable/advert_similar_bg_text_stub"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@+id/item3_image"
            app:layout_constraintTop_toBottomOf="@+id/item3_line1"/>
        <View
            android:id="@+id/item3_line3"
            android:background="@drawable/advert_similar_bg_text_stub"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/item3_image"
            app:layout_constraintTop_toBottomOf="@+id/item3_line2"/>
        <View
            android:background="@drawable/advert_similar_bg_text_stub"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@+id/item3_image"
            app:layout_constraintTop_toBottomOf="@+id/item3_line3"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.avito.android.lib.design.skeleton.shimmer.ShimmerLayout>
