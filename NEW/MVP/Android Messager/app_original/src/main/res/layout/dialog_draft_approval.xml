<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Проверьте сообщение"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Original text label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Оригинал:"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp" />

    <!-- Original text -->
    <TextView
        android:id="@+id/text_original"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@color/draft_bg"
        android:padding="12dp"
        android:text="Original message text..."
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <!-- Normalized text label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Нормализовано (можно редактировать):"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp" />

    <!-- Normalized text (editable) -->
    <EditText
        android:id="@+id/edit_normalized"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_input_field"
        android:inputType="textCapSentences|textMultiLine"
        android:minLines="2"
        android:padding="12dp"
        android:text="Normalized message text..."
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_reject"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Отклонить"
            android:textColor="@android:color/holo_red_dark" />

        <Button
            android:id="@+id/btn_approve"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/primary_blue"
            android:text="Отправить" />

    </LinearLayout>

</LinearLayout>
