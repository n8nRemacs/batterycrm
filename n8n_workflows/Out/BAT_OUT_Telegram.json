    {
      "parameters": {
        "jsCode": "  const trigger = $('Execute Workflow Trigger').first().json;\n  const chat = $('Fetch Chat Data').first().json;\n\n  const chatId = chat.telegram_id || chat.whatsapp_id || chat.vk_id || chat.avito_id;\n\n  return {\n    appeal_id: trigger.appeal_id,\n    tenant_id: trigger.tenant_id,\n    operator_id: trigger.operator_id,\n    response_text: trigger.response_text,\n    media_type: trigger.media_type,\n    media_data: trigger.media_data,\n    action_source: trigger.action_source,\n    channel: trigger.channel || chat.channel || (chat.telegram_id ? 'telegram' : chat.whatsapp_id ? 'whatsapp' : chat.vk_id ? 'vk' : 'avito'),\n    chat_id: chatId,\n    external_chat_id: chatId,\n    telegram_id: chat.telegram_id,\n    phone: chat.phone\n  };"
      },
      "id": "7a3410c4-be1a-4708-9e87-00b81a65a374",
