        "operation": "executeQuery",
        "query": "  SELECT\n    a.ad_channel as channel,\n    c.telegram_id,\n    c.vk_id,\n    c.whatsapp_id,\n    c.avito_id,\n    c.phone\n  FROM appeals a\n  JOIN clients c ON c.id = a.client_id\n  WHERE a.id = '{{ $json.appeal_id }}'::uuid\n",
        "options": {}
      },
