    {
      "parameters": {
        "jsCode": "// Парсим задание из очереди\nconst jobStr = $json.value;\nlet job;\n\ntry {\n  job = JSON.parse(jobStr);\n} catch (e) {\n  return { error: 'Failed to parse job', raw: jobStr };\n}\n\nreturn {\n  batch_key: job.batch_key,\n  channel: job.channel,\n  external_chat_id: job.external_chat_id,\n  queue_key: job.queue_key || `queue:batch:${job.batch_key}`,\n  lock_key: job.lock_key || `lock:batch:${job.batch_key}`,\n  last_seen_key: job.last_seen_key || `last_seen:${job.batch_key}`,\n  debounce_seconds: job.debounce_seconds || 20,\n  max_wait_seconds: job.max_wait_seconds || 300,\n  start_time: job.start_time || new Date().toISOString(),\n  worker_id: 4\n};"
      },
      "id": "ae31837d-a140-4460-8650-2db629f1d579",
      "name": "Parse Job",
      "type": "n8n-nodes-base.code",
